{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "AdminDb": "Server=(localdb)\\mssqllocaldb;Database=AlgoraErpAdmin;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Backup": {
    "Path": "C:\\Backups\\AlgoraErp",
    "RetentionDays": 30,
    "CleanupTime": "02:00",
    "CleanupIntervalHours": 24
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  }
}
