@page
@model Algora.Erp.Admin.Pages.Tenants.IndexModel
@{
    ViewData["Title"] = Model.ShowDeleted ? "Deleted Tenants" : "Tenant Management";
}

<!-- Stats Cards -->
<div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 mb-6">
    <div class="bg-white rounded-xl shadow-sm p-4 text-center hover:shadow-md transition-shadow">
        <div class="text-primary-600 text-3xl mb-2"><i class="bi bi-building"></i></div>
        <h3 class="text-2xl font-bold text-gray-900">@Model.Stats.TotalTenants</h3>
        <p class="text-sm text-gray-500">Total Tenants</p>
    </div>
    <div class="bg-white rounded-xl shadow-sm p-4 text-center hover:shadow-md transition-shadow">
        <div class="text-emerald-600 text-3xl mb-2"><i class="bi bi-check-circle"></i></div>
        <h3 class="text-2xl font-bold text-gray-900">@Model.Stats.ActiveTenants</h3>
        <p class="text-sm text-gray-500">Active</p>
    </div>
    <div class="bg-white rounded-xl shadow-sm p-4 text-center hover:shadow-md transition-shadow">
        <div class="text-amber-600 text-3xl mb-2"><i class="bi bi-hourglass-split"></i></div>
        <h3 class="text-2xl font-bold text-gray-900">@Model.Stats.TrialTenants</h3>
        <p class="text-sm text-gray-500">In Trial</p>
    </div>
    <div class="bg-white rounded-xl shadow-sm p-4 text-center hover:shadow-md transition-shadow">
        <div class="text-red-600 text-3xl mb-2"><i class="bi bi-pause-circle"></i></div>
        <h3 class="text-2xl font-bold text-gray-900">@Model.Stats.SuspendedTenants</h3>
        <p class="text-sm text-gray-500">Suspended</p>
    </div>
    <div class="bg-white rounded-xl shadow-sm p-4 text-center hover:shadow-md transition-shadow">
        <div class="text-gray-600 text-3xl mb-2"><i class="bi bi-trash"></i></div>
        <h3 class="text-2xl font-bold text-gray-900">@Model.Stats.DeletedTenants</h3>
        <p class="text-sm text-gray-500">Deleted</p>
    </div>
    <div class="bg-white rounded-xl shadow-sm p-4 text-center hover:shadow-md transition-shadow">
        <div class="text-blue-600 text-3xl mb-2"><i class="bi bi-calendar-plus"></i></div>
        <h3 class="text-2xl font-bold text-gray-900">@Model.Stats.NewThisMonth</h3>
        <p class="text-sm text-gray-500">New This Month</p>
    </div>
</div>

<!-- Tenants Table -->
<div class="bg-white rounded-xl shadow-sm">
    <div class="px-6 py-4 border-b border-gray-200">
        <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
            <div class="flex flex-col sm:flex-row gap-4">
                <!-- Search -->
                <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        <i class="bi bi-search text-gray-400"></i>
                    </div>
                    <input type="text" id="searchInput" value="@Model.SearchTerm" name="search"
                           class="pl-10 pr-4 py-2 bg-gray-50 border border-gray-300 rounded-lg text-sm focus:ring-primary-500 focus:border-primary-500 w-full sm:w-64"
                           placeholder="Search tenants..."
                           hx-get="/Tenants?handler=Table"
                           hx-trigger="keyup changed delay:300ms"
                           hx-target="#tenantsTableBody"
                           hx-include="#statusFilter, #showDeletedInput" />
                </div>
                <!-- Status Filter -->
                <select id="statusFilter" name="status"
                        class="bg-gray-50 border border-gray-300 rounded-lg text-sm px-4 py-2 focus:ring-primary-500 focus:border-primary-500"
                        hx-get="/Tenants?handler=Table"
                        hx-trigger="change"
                        hx-target="#tenantsTableBody"
                        hx-include="#searchInput, #showDeletedInput">
                    <option value="">All Status</option>
                    <option value="Active">Active</option>
                    <option value="Pending">Pending</option>
                    <option value="Suspended">Suspended</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
            </div>
            <div class="flex items-center gap-3">
                <input type="hidden" id="showDeletedInput" name="showDeleted" value="@Model.ShowDeleted.ToString().ToLower()" />
                @if (Model.ShowDeleted)
                {
                    <a href="/Tenants" class="px-4 py-2 text-sm font-medium text-gray-700 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                        <i class="bi bi-arrow-left mr-1"></i>Back to Active
                    </a>
                }
                else
                {
                    <a href="/Tenants?showDeleted=true" class="px-4 py-2 text-sm font-medium text-gray-700 border border-gray-300 rounded-lg hover:bg-gray-50 transition-colors">
                        <i class="bi bi-trash mr-1"></i>View Deleted
                    </a>
                }
                <button data-modal-target="createTenantModal" data-modal-toggle="createTenantModal"
                        class="px-4 py-2 text-sm font-medium text-white bg-primary-600 rounded-lg hover:bg-primary-700 transition-colors">
                    <i class="bi bi-plus-lg mr-1"></i>Add Tenant
                </button>
            </div>
        </div>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Tenant</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Subdomain</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Database</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Contact</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Plan</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Created</th>
                    <th class="px-6 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody id="tenantsTableBody" class="divide-y divide-gray-200">
                @foreach (var tenant in Model.Tenants)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">
                            <div class="flex items-center">
                                <div class="w-10 h-10 bg-primary-100 rounded-full flex items-center justify-center mr-3">
                                    <i class="bi bi-building text-primary-600"></i>
                                </div>
                                <div>
                                    <div class="font-semibold text-gray-900">@tenant.Name</div>
                                    <div class="text-sm text-gray-500">@tenant.CompanyName</div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <code class="text-sm bg-gray-100 px-2 py-1 rounded">@(tenant.Subdomain).algora.app</code>
                        </td>
                        <td class="px-6 py-4">
                            @if (!string.IsNullOrEmpty(tenant.DatabaseName))
                            {
                                <code class="text-sm text-primary-600 bg-primary-50 px-2 py-1 rounded">@tenant.DatabaseName</code>
                            }
                            else
                            {
                                <span class="text-gray-400">-</span>
                            }
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-sm text-gray-900">@tenant.ContactEmail</div>
                            <div class="text-sm text-gray-500">@tenant.ContactPerson</div>
                        </td>
                        <td class="px-6 py-4">
                            @if (tenant.CurrentSubscription?.Plan != null)
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary-100 text-primary-800">
                                    @tenant.CurrentSubscription.Plan.Name
                                </span>
                                @if (tenant.IsInTrial)
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-800 ml-1">Trial</span>
                                }
                            }
                            else
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">No Plan</span>
                            }
                        </td>
                        <td class="px-6 py-4">
                            @switch (tenant.Status)
                            {
                                case Algora.Erp.Admin.Entities.TenantStatus.Active:
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800">Active</span>
                                    break;
                                case Algora.Erp.Admin.Entities.TenantStatus.Pending:
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">Pending</span>
                                    break;
                                case Algora.Erp.Admin.Entities.TenantStatus.Suspended:
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Suspended</span>
                                    break;
                                case Algora.Erp.Admin.Entities.TenantStatus.Cancelled:
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Cancelled</span>
                                    break;
                                case Algora.Erp.Admin.Entities.TenantStatus.Deleted:
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-800 text-white">Deleted</span>
                                    break;
                            }
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-sm text-gray-900">@tenant.CreatedAt.ToString("MMM dd, yyyy")</div>
                            <div class="text-sm text-gray-500">@tenant.CreatedAt.ToString("HH:mm")</div>
                        </td>
                        <td class="px-6 py-4 text-right">
                            <button id="dropdown-@tenant.Id" data-dropdown-toggle="dropdownMenu-@tenant.Id"
                                    class="p-2 text-gray-500 hover:bg-gray-100 rounded-lg">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <div id="dropdownMenu-@tenant.Id" class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow-lg w-44 border border-gray-200">
                                @if (tenant.IsDeleted)
                                {
                                    <ul class="py-2 text-sm text-gray-700">
                                        <li>
                                            <button class="w-full text-left px-4 py-2 hover:bg-gray-100 text-emerald-600"
                                                    hx-post="/Tenants?handler=Restore&id=@tenant.Id"
                                                    hx-target="#tenantsTableBody"
                                                    hx-confirm="Restore this tenant?">
                                                <i class="bi bi-arrow-counterclockwise mr-2"></i>Restore
                                            </button>
                                        </li>
                                        <li>
                                            <button class="w-full text-left px-4 py-2 hover:bg-gray-100 text-red-600"
                                                    hx-delete="/Tenants?handler=PermanentDelete&id=@tenant.Id"
                                                    hx-target="#tenantsTableBody"
                                                    hx-confirm="PERMANENTLY delete this tenant? This cannot be undone!">
                                                <i class="bi bi-x-circle mr-2"></i>Permanent Delete
                                            </button>
                                        </li>
                                    </ul>
                                }
                                else
                                {
                                    <ul class="py-2 text-sm text-gray-700">
                                        <li><a href="/Tenants/Edit/@tenant.Id" class="block px-4 py-2 hover:bg-gray-100"><i class="bi bi-pencil mr-2"></i>Edit</a></li>
                                        <li><a href="/Tenants/Details/@tenant.Id" class="block px-4 py-2 hover:bg-gray-100"><i class="bi bi-eye mr-2"></i>View Details</a></li>
                                    </ul>
                                    <ul class="py-2 text-sm">
                                        @if (tenant.IsSuspended)
                                        {
                                            <li>
                                                <button class="w-full text-left px-4 py-2 hover:bg-gray-100 text-emerald-600"
                                                        hx-post="/Tenants?handler=Unsuspend&id=@tenant.Id"
                                                        hx-target="#tenantsTableBody">
                                                    <i class="bi bi-play-circle mr-2"></i>Unsuspend
                                                </button>
                                            </li>
                                        }
                                        else
                                        {
                                            <li>
                                                <button class="w-full text-left px-4 py-2 hover:bg-gray-100 text-amber-600" onclick="showSuspendModal('@tenant.Id', '@tenant.Name')">
                                                    <i class="bi bi-pause-circle mr-2"></i>Suspend
                                                </button>
                                            </li>
                                        }
                                        <li>
                                            <button class="w-full text-left px-4 py-2 hover:bg-gray-100 text-red-600" onclick="showDeleteModal('@tenant.Id', '@tenant.Name')">
                                                <i class="bi bi-trash mr-2"></i>Delete
                                            </button>
                                        </li>
                                    </ul>
                                }
                            </div>
                        </td>
                    </tr>
                }
                @if (!Model.Tenants.Any())
                {
                    <tr>
                        <td colspan="8" class="px-6 py-12 text-center text-gray-500">
                            <i class="bi bi-inbox text-5xl block mb-2"></i>
                            No tenants found
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Create Tenant Modal -->
<div id="createTenantModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-2xl max-h-full">
        <div class="relative bg-white rounded-xl shadow-lg">
            <div class="flex items-center justify-between px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900">
                    <i class="bi bi-plus-circle mr-2"></i>Add New Tenant
                </h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 inline-flex justify-center items-center" data-modal-hide="createTenantModal">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <form method="post" asp-page-handler="Create">
                <div class="p-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Organization Name <span class="text-red-500">*</span></label>
                            <input type="text" name="Name" required class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Subdomain <span class="text-red-500">*</span></label>
                            <div class="flex">
                                <input type="text" name="Subdomain" required pattern="[a-z0-9-]+" id="subdomainInput" class="flex-1 px-3 py-2 bg-gray-50 border border-gray-300 rounded-l-lg focus:ring-primary-500 focus:border-primary-500" />
                                <span class="inline-flex items-center px-3 text-sm text-gray-500 bg-gray-100 border border-l-0 border-gray-300 rounded-r-lg">.algora.app</span>
                            </div>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Database Name</label>
                            <div class="flex">
                                <input type="text" name="DatabaseName" id="databaseNameInput" pattern="[a-zA-Z0-9_]+" placeholder="Auto-generated if empty" class="flex-1 px-3 py-2 bg-gray-50 border border-gray-300 rounded-l-lg focus:ring-primary-500 focus:border-primary-500" />
                                <button type="button" onclick="generateDbName()" class="px-3 py-2 text-gray-500 bg-gray-100 border border-l-0 border-gray-300 rounded-r-lg hover:bg-gray-200" title="Generate from subdomain">
                                    <i class="bi bi-arrow-repeat"></i>
                                </button>
                            </div>
                            <p class="text-xs text-gray-500 mt-1">Leave empty to auto-generate from subdomain</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Contact Email <span class="text-red-500">*</span></label>
                            <input type="email" name="ContactEmail" required class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Contact Person</label>
                            <input type="text" name="ContactPerson" class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Company Name</label>
                            <input type="text" name="CompanyName" class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
                            <input type="tel" name="ContactPhone" class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Billing Plan</label>
                            <select name="PlanId" class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500">
                                <option value="">Select a plan...</option>
                                @foreach (var plan in Model.Plans)
                                {
                                    <option value="@plan.Id">@plan.Name - @plan.MonthlyPrice.ToString("C0")/mo</option>
                                }
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Trial Period</label>
                            <div class="flex">
                                <input type="number" name="TrialDays" value="14" min="0" max="90" class="flex-1 px-3 py-2 bg-gray-50 border border-gray-300 rounded-l-lg focus:ring-primary-500 focus:border-primary-500" />
                                <span class="inline-flex items-center px-3 text-sm text-gray-500 bg-gray-100 border border-l-0 border-gray-300 rounded-r-lg">days</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="flex items-center justify-end gap-3 px-6 py-4 border-t border-gray-200">
                    <button type="button" data-modal-hide="createTenantModal" class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200">Cancel</button>
                    <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-primary-600 rounded-lg hover:bg-primary-700">
                        <i class="bi bi-check-lg mr-1"></i>Create Tenant
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div id="deleteModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-xl shadow-lg">
            <div class="flex items-center justify-between px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-red-600"><i class="bi bi-trash mr-2"></i>Delete Tenant</h3>
                <button type="button" class="text-gray-400 hover:text-gray-900 rounded-lg text-sm w-8 h-8 inline-flex justify-center items-center" data-modal-hide="deleteModal">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <form method="post" asp-page-handler="Delete">
                <input type="hidden" name="id" id="deleteId" />
                <div class="p-6">
                    <p class="text-gray-700 mb-4">Are you sure you want to delete <strong id="deleteName"></strong>?</p>
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-1">Reason for deletion <span class="text-red-500">*</span></label>
                        <textarea name="reason" rows="3" required class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500"></textarea>
                    </div>
                    <div class="flex items-center p-4 text-amber-800 bg-amber-50 rounded-lg">
                        <i class="bi bi-info-circle mr-3"></i>
                        <span class="text-sm">The tenant will be soft-deleted and can be restored later.</span>
                    </div>
                </div>
                <div class="flex items-center justify-end gap-3 px-6 py-4 border-t border-gray-200">
                    <button type="button" data-modal-hide="deleteModal" class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200">Cancel</button>
                    <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-lg hover:bg-red-700">Delete Tenant</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Suspend Modal -->
<div id="suspendModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-xl shadow-lg">
            <div class="flex items-center justify-between px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-amber-600"><i class="bi bi-pause-circle mr-2"></i>Suspend Tenant</h3>
                <button type="button" class="text-gray-400 hover:text-gray-900 rounded-lg text-sm w-8 h-8 inline-flex justify-center items-center" data-modal-hide="suspendModal">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <form method="post" asp-page-handler="Suspend">
                <input type="hidden" name="id" id="suspendId" />
                <div class="p-6">
                    <p class="text-gray-700 mb-4">Are you sure you want to suspend <strong id="suspendName"></strong>?</p>
                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-1">Reason for suspension <span class="text-red-500">*</span></label>
                        <textarea name="reason" rows="3" required class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500"></textarea>
                    </div>
                    <div class="flex items-center p-4 text-blue-800 bg-blue-50 rounded-lg">
                        <i class="bi bi-info-circle mr-3"></i>
                        <span class="text-sm">Suspended tenants cannot access the system until unsuspended.</span>
                    </div>
                </div>
                <div class="flex items-center justify-end gap-3 px-6 py-4 border-t border-gray-200">
                    <button type="button" data-modal-hide="suspendModal" class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200">Cancel</button>
                    <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-amber-600 rounded-lg hover:bg-amber-700">Suspend Tenant</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showDeleteModal(id, name) {
            document.getElementById('deleteId').value = id;
            document.getElementById('deleteName').textContent = name;
            const modal = FlowbiteInstances.getInstance('Modal', 'deleteModal');
            if (modal) modal.show();
        }

        function showSuspendModal(id, name) {
            document.getElementById('suspendId').value = id;
            document.getElementById('suspendName').textContent = name;
            const modal = FlowbiteInstances.getInstance('Modal', 'suspendModal');
            if (modal) modal.show();
        }

        function generateDbName() {
            const subdomain = document.getElementById('subdomainInput').value;
            if (subdomain) {
                const dbName = 'AlgoraErp_' + subdomain.replace(/-/g, '_');
