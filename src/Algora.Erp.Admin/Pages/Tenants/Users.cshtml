@page "{tenantId:guid}"
@model Algora.Erp.Admin.Pages.Tenants.UsersModel
@{
    ViewData["Title"] = $"Manage Users - {Model.Tenant.Name}";
}

<!-- Alerts -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="flex items-center p-4 mb-4 text-emerald-800 bg-emerald-50 rounded-lg" role="alert">
        <i class="bi bi-check-circle mr-3"></i>
        <span class="text-sm font-medium">@TempData["SuccessMessage"]</span>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="flex items-center p-4 mb-4 text-red-800 bg-red-50 rounded-lg" role="alert">
        <i class="bi bi-exclamation-triangle mr-3"></i>
        <span class="text-sm font-medium">@TempData["ErrorMessage"]</span>
    </div>
}

<!-- Breadcrumb & Header -->
<div class="flex justify-between items-center mb-6">
    <div>
        <nav class="flex mb-2" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 text-sm text-gray-500">
                <li><a href="/Tenants" class="hover:text-primary-600">Tenants</a></li>
                <li><i class="bi bi-chevron-right mx-2"></i></li>
                <li><a href="/Tenants/Details/@Model.Tenant.Id" class="hover:text-primary-600">@Model.Tenant.Name</a></li>
                <li><i class="bi bi-chevron-right mx-2"></i></li>
                <li class="text-gray-900">Users</li>
            </ol>
        </nav>
        <h4 class="text-xl font-bold text-gray-900">
            <i class="bi bi-people mr-2 text-primary-600"></i>User Management
        </h4>
        <p class="text-gray-500 text-sm">Manage users for @Model.Tenant.Name</p>
    </div>
    <div class="flex space-x-2">
        <button data-modal-target="createUserModal" data-modal-toggle="createUserModal"
                class="px-4 py-2 text-sm font-medium text-white bg-primary-600 rounded-lg hover:bg-primary-700 transition-colors">
            <i class="bi bi-plus-lg mr-1"></i>Add User
        </button>
        <a href="/Tenants/Details/@Model.Tenant.Id" class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors">
            <i class="bi bi-arrow-left mr-1"></i>Back
        </a>
    </div>
</div>

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
    <div class="bg-white rounded-xl shadow-sm p-6 text-center hover:shadow-md transition-shadow">
        <div class="text-primary-600 text-3xl mb-2"><i class="bi bi-people"></i></div>
        <h3 class="text-2xl font-bold text-gray-900">@Model.Stats.TotalUsers</h3>
        <p class="text-sm text-gray-500">Total Users</p>
    </div>
    <div class="bg-white rounded-xl shadow-sm p-6 text-center hover:shadow-md transition-shadow">
        <div class="text-emerald-600 text-3xl mb-2"><i class="bi bi-person-check"></i></div>
        <h3 class="text-2xl font-bold text-gray-900">@Model.Stats.ActiveUsers</h3>
        <p class="text-sm text-gray-500">Active Users</p>
    </div>
    <div class="bg-white rounded-xl shadow-sm p-6 text-center hover:shadow-md transition-shadow">
        <div class="text-amber-600 text-3xl mb-2"><i class="bi bi-person-x"></i></div>
        <h3 class="text-2xl font-bold text-gray-900">@Model.Stats.InactiveUsers</h3>
        <p class="text-sm text-gray-500">Inactive Users</p>
    </div>
    <div class="bg-white rounded-xl shadow-sm p-6 text-center hover:shadow-md transition-shadow">
        <div class="text-blue-600 text-3xl mb-2"><i class="bi bi-person-badge"></i></div>
        <h3 class="text-2xl font-bold text-gray-900">@Model.Stats.OwnerCount</h3>
        <p class="text-sm text-gray-500">Owners</p>
    </div>
</div>

<!-- Max Users Info -->
@if (Model.Tenant.MaxUsers > 0)
{
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
        <div class="flex items-center justify-between">
            <div class="flex items-center">
                <i class="bi bi-info-circle text-blue-600 mr-2"></i>
                <span class="text-blue-800">User Limit: @Model.Stats.TotalUsers / @Model.Tenant.MaxUsers users</span>
            </div>
            @if (Model.Stats.TotalUsers >= Model.Tenant.MaxUsers)
            {
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-red-100 text-red-800">Limit Reached</span>
            }
            else
            {
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-emerald-100 text-emerald-800">
                    @(Model.Tenant.MaxUsers - Model.Stats.TotalUsers) slots available
                </span>
            }
        </div>
        <div class="mt-2 w-full bg-blue-200 rounded-full h-2">
            @{
                var percentage = Model.Tenant.MaxUsers > 0 ? (Model.Stats.TotalUsers * 100 / Model.Tenant.MaxUsers) : 0;
            }
            <div class="@(percentage >= 100 ? "bg-red-600" : percentage >= 80 ? "bg-amber-500" : "bg-emerald-500") h-2 rounded-full" style="width: @percentage%"></div>
        </div>
    </div>
}

<!-- Users Table -->
<div class="bg-white rounded-xl shadow-sm">
    <div class="flex justify-between items-center px-6 py-4 border-b border-gray-200">
        <h6 class="font-semibold text-gray-800">
            <i class="bi bi-list-ul mr-2"></i>Tenant Users
        </h6>
        <div class="flex space-x-2">
            <input type="text" id="searchInput" placeholder="Search users..."
                   class="px-3 py-2 text-sm bg-gray-50 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500"
                   onkeyup="filterUsers(this.value)">
        </div>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full" id="usersTable">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">User</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Email</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Role</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Last Login</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Created</th>
                    <th class="px-6 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                @if (!Model.Users.Any())
                {
                    <tr>
                        <td colspan="7" class="px-6 py-12 text-center text-gray-500">
                            <i class="bi bi-inbox text-5xl block mb-2"></i>
                            No users found for this tenant
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var user in Model.Users)
                    {
                        <tr class="hover:bg-gray-50 user-row" data-name="@user.FullName.ToLower()" data-email="@user.Email.ToLower()">
                            <td class="px-6 py-4">
                                <div class="flex items-center">
                                    <div class="w-10 h-10 @(user.IsOwner ? "bg-amber-100" : "bg-primary-100") rounded-full flex items-center justify-center mr-3">
                                        <i class="bi @(user.IsOwner ? "bi-star text-amber-600" : "bi-person text-primary-600")"></i>
                                    </div>
                                    <div>
                                        <div class="font-semibold text-gray-900">@user.FullName</div>
                                        @if (user.IsOwner)
                                        {
                                            <span class="text-xs text-amber-600">Account Owner</span>
                                        }
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 text-gray-700">@user.Email</td>
                            <td class="px-6 py-4">
                                @if (!string.IsNullOrEmpty(user.Role))
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                        @user.Role
                                    </span>
                                }
                                else
                                {
                                    <span class="text-gray-400">â€”</span>
                                }
                            </td>
                            <td class="px-6 py-4">
                                @if (user.IsActive)
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800">Active</span>
                                }
                                else
                                {
                                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Inactive</span>
                                }
                            </td>
                            <td class="px-6 py-4">
                                @if (user.LastLoginAt.HasValue)
                                {
                                    <div class="text-sm text-gray-900">@user.LastLoginAt.Value.ToString("MMM dd, yyyy")</div>
                                    <div class="text-sm text-gray-500">@user.LastLoginAt.Value.ToString("HH:mm")</div>
                                }
                                else
                                {
                                    <span class="text-gray-400">Never</span>
                                }
                            </td>
                            <td class="px-6 py-4">
                                <div class="text-sm text-gray-900">@user.CreatedAt.ToString("MMM dd, yyyy")</div>
                                <div class="text-sm text-gray-500">@user.CreatedAt.ToString("HH:mm")</div>
                            </td>
                            <td class="px-6 py-4 text-right">
                                <button data-dropdown-toggle="userDropdown-@user.Id" class="p-2 text-gray-500 hover:bg-gray-100 rounded-lg">
                                    <i class="bi bi-three-dots-vertical"></i>
                                </button>
                                <div id="userDropdown-@user.Id" class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow-lg w-44 border border-gray-200">
                                    <ul class="py-2 text-sm text-gray-700">
                                        <li>
                                            <button class="w-full text-left px-4 py-2 hover:bg-gray-100"
                                                    onclick="showEditModal('@user.Id', '@user.FullName', '@user.Email', '@user.Role', @user.IsOwner.ToString().ToLower())">
                                                <i class="bi bi-pencil mr-2"></i>Edit
                                            </button>
                                        </li>
                                        <li>
                                            <form method="post" asp-page-handler="ToggleStatus" class="inline">
                                                <input type="hidden" name="tenantId" value="@Model.Tenant.Id" />
                                                <input type="hidden" name="userId" value="@user.Id" />
                                                <button type="submit" class="w-full text-left px-4 py-2 hover:bg-gray-100">
                                                    @if (user.IsActive)
                                                    {
                                                        <i class="bi bi-person-x mr-2 text-amber-600"></i><span>Deactivate</span>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-person-check mr-2 text-emerald-600"></i><span>Activate</span>
                                                    }
                                                </button>
                                            </form>
                                        </li>
                                        @if (!user.IsOwner)
                                        {
                                            <li>
                                                <form method="post" asp-page-handler="SetOwner" class="inline">
                                                    <input type="hidden" name="tenantId" value="@Model.Tenant.Id" />
                                                    <input type="hidden" name="userId" value="@user.Id" />
                                                    <button type="submit" class="w-full text-left px-4 py-2 hover:bg-gray-100">
                                                        <i class="bi bi-star mr-2 text-amber-600"></i>Set as Owner
                                                    </button>
                                                </form>
                                            </li>
                                        }
                                    </ul>
                                    @if (!user.IsOwner)
                                    {
                                        <ul class="py-2">
                                            <li>
                                                <button class="w-full text-left px-4 py-2 hover:bg-gray-100 text-red-600"
                                                        onclick="showDeleteModal('@user.Id', '@user.FullName')">
                                                    <i class="bi bi-trash mr-2"></i>Delete
                                                </button>
                                            </li>
                                        </ul>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Create User Modal -->
<div id="createUserModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-xl shadow-lg">
            <div class="flex items-center justify-between px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900"><i class="bi bi-person-plus mr-2"></i>Add Tenant User</h3>
                <button type="button" data-modal-hide="createUserModal" class="text-gray-400 hover:text-gray-900 rounded-lg text-sm w-8 h-8 inline-flex justify-center items-center">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <form method="post" asp-page-handler="Create">
                <input type="hidden" name="tenantId" value="@Model.Tenant.Id" />
                <div class="p-6">
                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Full Name <span class="text-red-500">*</span></label>
                            <input type="text" name="CreateInput.FullName" required class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Email <span class="text-red-500">*</span></label>
                            <input type="email" name="CreateInput.Email" required class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Role</label>
                            <select name="CreateInput.Role" class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500">
                                <option value="">Select a role...</option>
                                <option value="Admin">Admin</option>
                                <option value="Manager">Manager</option>
                                <option value="User">User</option>
                                <option value="Viewer">Viewer</option>
                            </select>
                        </div>
                        <div class="flex items-center">
                            <input type="checkbox" name="CreateInput.IsOwner" id="createIsOwner" value="true"
                                   class="w-4 h-4 text-primary-600 bg-gray-100 border-gray-300 rounded focus:ring-primary-500">
                            <label for="createIsOwner" class="ml-2 text-sm font-medium text-gray-700">Account Owner</label>
                        </div>
                    </div>
                </div>
                <div class="flex items-center justify-end gap-3 px-6 py-4 border-t border-gray-200">
                    <button type="button" data-modal-hide="createUserModal" class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200">Cancel</button>
                    <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-primary-600 rounded-lg hover:bg-primary-700"
                            @(Model.Tenant.MaxUsers > 0 && Model.Stats.TotalUsers >= Model.Tenant.MaxUsers ? "disabled" : "")>
                        <i class="bi bi-plus-lg mr-1"></i>Create User
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit User Modal -->
<div id="editUserModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-xl shadow-lg">
            <div class="flex items-center justify-between px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900"><i class="bi bi-pencil mr-2"></i>Edit User</h3>
                <button type="button" data-modal-hide="editUserModal" class="text-gray-400 hover:text-gray-900 rounded-lg text-sm w-8 h-8 inline-flex justify-center items-center">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <form method="post" asp-page-handler="Edit">
                <input type="hidden" name="tenantId" value="@Model.Tenant.Id" />
                <input type="hidden" name="EditInput.Id" id="editUserId" />
                <div class="p-6">
                    <div class="space-y-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Full Name <span class="text-red-500">*</span></label>
                            <input type="text" name="EditInput.FullName" id="editFullName" required class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Email <span class="text-red-500">*</span></label>
                            <input type="email" name="EditInput.Email" id="editEmail" required class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" />
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Role</label>
                            <select name="EditInput.Role" id="editRole" class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500">
                                <option value="">Select a role...</option>
                                <option value="Admin">Admin</option>
                                <option value="Manager">Manager</option>
                                <option value="User">User</option>
                                <option value="Viewer">Viewer</option>
                            </select>
                        </div>
                        <div class="flex items-center">
                            <input type="checkbox" name="EditInput.IsOwner" id="editIsOwner" value="true"
                                   class="w-4 h-4 text-primary-600 bg-gray-100 border-gray-300 rounded focus:ring-primary-500">
                            <label for="editIsOwner" class="ml-2 text-sm font-medium text-gray-700">Account Owner</label>
                        </div>
                    </div>
                </div>
                <div class="flex items-center justify-end gap-3 px-6 py-4 border-t border-gray-200">
                    <button type="button" data-modal-hide="editUserModal" class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200">Cancel</button>
                    <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-primary-600 rounded-lg hover:bg-primary-700">
                        <i class="bi bi-check-lg mr-1"></i>Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div id="deleteModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-xl shadow-lg">
            <div class="flex items-center justify-between px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-red-600"><i class="bi bi-trash mr-2"></i>Delete User</h3>
                <button type="button" data-modal-hide="deleteModal" class="text-gray-400 hover:text-gray-900 rounded-lg text-sm w-8 h-8 inline-flex justify-center items-center">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <form method="post" asp-page-handler="Delete">
                <input type="hidden" name="tenantId" value="@Model.Tenant.Id" />
                <input type="hidden" name="userId" id="deleteUserId" />
                <div class="p-6">
                    <p class="text-gray-700 mb-4">Are you sure you want to delete <strong id="deleteUserName"></strong>?</p>
                    <div class="flex items-center p-4 text-red-800 bg-red-50 rounded-lg">
                        <i class="bi bi-exclamation-triangle mr-3"></i>
                        <span class="text-sm">This will remove the user's access to the tenant's application.</span>
                    </div>
                </div>
                <div class="flex items-center justify-end gap-3 px-6 py-4 border-t border-gray-200">
                    <button type="button" data-modal-hide="deleteModal" class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200">Cancel</button>
                    <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-lg hover:bg-red-700">
                        <i class="bi bi-trash mr-1"></i>Delete User
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showEditModal(id, fullName, email, role, isOwner) {
            document.getElementById('editUserId').value = id;
            document.getElementById('editFullName').value = fullName;
            document.getElementById('editEmail').value = email;
            document.getElementById('editRole').value = role || '';
            document.getElementById('editIsOwner').checked = isOwner;

            const modal = FlowbiteInstances.getInstance('Modal', 'editUserModal');
            if (modal) modal.show();
        }

        function showDeleteModal(id, name) {
            document.getElementById('deleteUserId').value = id;
            document.getElementById('deleteUserName').textContent = name;
            const modal = FlowbiteInstances.getInstance('Modal', 'deleteModal');
            if (modal) modal.show();
        }

        function filterUsers(searchTerm) {
            const rows = document.querySelectorAll('.user-row');
            const term = searchTerm.toLowerCase();

            rows.forEach(row => {
                const name = row.getAttribute('data-name');
                const email = row.getAttribute('data-email');
                if (name.includes(term) || email.includes(term)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }
    </script>
}
