@page "{id:guid}"
@model Algora.Erp.Admin.Pages.Tenants.DetailsModel
@{
    ViewData["Title"] = $"Tenant: {Model.Tenant.Name}";
}

<!-- Alerts -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Header -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-2">
                <li class="breadcrumb-item"><a href="/Tenants">Tenants</a></li>
                <li class="breadcrumb-item active">@Model.Tenant.Name</li>
            </ol>
        </nav>
        <h4 class="mb-0">
            <i class="bi bi-building me-2 text-primary"></i>@Model.Tenant.Name
            @switch (Model.Tenant.Status)
            {
                case Algora.Erp.Admin.Entities.TenantStatus.Active:
                    <span class="badge bg-success ms-2">Active</span>
                    break;
                case Algora.Erp.Admin.Entities.TenantStatus.Pending:
                    <span class="badge bg-info ms-2">Pending</span>
                    break;
                case Algora.Erp.Admin.Entities.TenantStatus.Suspended:
                    <span class="badge bg-danger ms-2">Suspended</span>
                    break;
                case Algora.Erp.Admin.Entities.TenantStatus.Cancelled:
                    <span class="badge bg-secondary ms-2">Cancelled</span>
                    break;
            }
        </h4>
    </div>
    <div>
        <a href="/Tenants/Edit/@Model.Tenant.Id" class="btn btn-outline-primary me-2">
            <i class="bi bi-pencil me-1"></i>Edit
        </a>
        <a href="/Tenants" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to List
        </a>
    </div>
</div>

<div class="row">
    <!-- Left Column: Tenant Details -->
    <div class="col-lg-4">
        <!-- Basic Info Card -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0"><i class="bi bi-info-circle me-2"></i>Basic Information</h6>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5">Subdomain</dt>
                    <dd class="col-sm-7"><code>@(Model.Tenant.Subdomain).algora.app</code></dd>

                    <dt class="col-sm-5">Company</dt>
                    <dd class="col-sm-7">@(Model.Tenant.CompanyName ?? "-")</dd>

                    <dt class="col-sm-5">Contact</dt>
                    <dd class="col-sm-7">
                        @Model.Tenant.ContactEmail<br />
                        <small class="text-muted">@Model.Tenant.ContactPerson</small>
                    </dd>

                    <dt class="col-sm-5">Phone</dt>
                    <dd class="col-sm-7">@(Model.Tenant.ContactPhone ?? "-")</dd>

                    <dt class="col-sm-5">Created</dt>
                    <dd class="col-sm-7">@Model.Tenant.CreatedAt.ToString("MMM dd, yyyy HH:mm")</dd>

                    @if (Model.Tenant.IsInTrial)
                    {
                        <dt class="col-sm-5">Trial Ends</dt>
                        <dd class="col-sm-7">
                            <span class="badge bg-warning text-dark">@Model.Tenant.TrialEndsAt?.ToString("MMM dd, yyyy")</span>
                        </dd>
                    }
                </dl>
            </div>
        </div>

        <!-- Database Info Card -->
        <div class="card mb-4">
            <div class="card-header bg-primary bg-opacity-10">
                <h6 class="mb-0"><i class="bi bi-database me-2"></i>Database Information</h6>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-5">Database Name</dt>
                    <dd class="col-sm-7">
                        <code class="text-primary fs-6">@(Model.Tenant.DatabaseName ?? "Not Set")</code>
                    </dd>

                    <dt class="col-sm-5">Max Users</dt>
                    <dd class="col-sm-7">
                        @if (Model.Tenant.MaxUsers == -1)
                        {
                            <span class="badge bg-success">Unlimited</span>
                        }
                        else
                        {
                            @Model.Tenant.MaxUsers
                        }
                    </dd>

                    <dt class="col-sm-5">Currency</dt>
                    <dd class="col-sm-7">@(Model.Tenant.CurrencyCode ?? "INR")</dd>

                    <dt class="col-sm-5">Timezone</dt>
                    <dd class="col-sm-7">@(Model.Tenant.TimeZone ?? "Asia/Kolkata")</dd>
                </dl>
            </div>
        </div>

        <!-- Plan Info Card -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0"><i class="bi bi-credit-card me-2"></i>Subscription</h6>
            </div>
            <div class="card-body">
                @if (Model.Tenant.CurrentSubscription?.Plan != null)
                {
                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-primary bg-opacity-10 rounded-circle p-3 me-3">
                            <i class="bi bi-gem text-primary fs-4"></i>
                        </div>
                        <div>
                            <h5 class="mb-0">@Model.Tenant.CurrentSubscription.Plan.Name</h5>
                            <small class="text-muted">@Model.Tenant.CurrentSubscription.Plan.Description</small>
                        </div>
                    </div>
                    <dl class="row mb-0">
                        <dt class="col-sm-6">Billing Cycle</dt>
                        <dd class="col-sm-6">@Model.Tenant.CurrentSubscription.BillingCycle</dd>

                        <dt class="col-sm-6">Amount</dt>
                        <dd class="col-sm-6">@Model.Tenant.CurrentSubscription.TotalAmount.ToString("C2")</dd>

                        <dt class="col-sm-6">Next Billing</dt>
                        <dd class="col-sm-6">@Model.Tenant.CurrentSubscription.NextBillingDate?.ToString("MMM dd, yyyy")</dd>
                    </dl>
                }
                else
                {
                    <p class="text-muted mb-0">No active subscription</p>
                }
            </div>
        </div>
    </div>

    <!-- Right Column: Backup Management -->
    <div class="col-lg-8">
        <!-- Backup Stats -->
        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="card h-100 border-0 bg-light">
                    <div class="card-body text-center">
                        <div class="text-primary fs-4 mb-1">@Model.BackupStats.TotalBackups</div>
                        <small class="text-muted">Total Backups</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100 border-0 bg-light">
                    <div class="card-body text-center">
                        <div class="text-success fs-4 mb-1">@Model.BackupStats.CompletedBackups</div>
                        <small class="text-muted">Completed</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100 border-0 bg-light">
                    <div class="card-body text-center">
                        <div class="text-info fs-4 mb-1">@Model.BackupStats.TotalSizeFormatted</div>
                        <small class="text-muted">Total Size</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card h-100 border-0 bg-light">
                    <div class="card-body text-center">
                        <div class="text-secondary fs-4 mb-1">
                            @(Model.BackupStats.LastBackupDate?.ToString("MMM dd") ?? "Never")
                        </div>
                        <small class="text-muted">Last Backup</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Backup Management Card -->
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0"><i class="bi bi-cloud-arrow-up me-2"></i>Database Backups</h6>
                <button class="btn btn-gradient btn-sm" data-bs-toggle="modal" data-bs-target="#createBackupModal"
                        @(string.IsNullOrEmpty(Model.Tenant.DatabaseName) ? "disabled" : "")>
                    <i class="bi bi-plus-lg me-1"></i>Create Backup
                </button>
            </div>
            <div class="card-body p-0">
                @if (string.IsNullOrEmpty(Model.Tenant.DatabaseName))
                {
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-database-x fs-1 d-block mb-2"></i>
                        <p class="mb-0">Database name not configured for this tenant.</p>
                        <small>Set the database name to enable backups.</small>
                    </div>
                }
                else if (!Model.Backups.Any())
                {
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-cloud-slash fs-1 d-block mb-2"></i>
                        <p class="mb-0">No backups yet.</p>
                        <small>Create your first backup to protect your data.</small>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">Backup</th>
                                    <th>Type</th>
                                    <th>Size</th>
                                    <th>Status</th>
                                    <th>Created</th>
                                    <th class="text-end pe-4">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var backup in Model.Backups)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center">
                                                <div class="bg-secondary bg-opacity-10 rounded p-2 me-2">
                                                    <i class="bi bi-file-earmark-zip text-secondary"></i>
                                                </div>
                                                <div>
                                                    <div class="fw-semibold text-truncate" style="max-width: 200px;" title="@backup.FileName">
                                                        @backup.FileName
                                                    </div>
                                                    @if (!string.IsNullOrEmpty(backup.Notes))
                                                    {
                                                        <small class="text-muted">@backup.Notes</small>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="badge @(backup.Type == Algora.Erp.Admin.Entities.BackupType.Full ? "bg-primary" : backup.Type == Algora.Erp.Admin.Entities.BackupType.Differential ? "bg-info" : "bg-secondary")">
                                                @backup.Type
                                            </span>
                                        </td>
                                        <td>@(backup.FileSizeFormatted ?? "-")</td>
                                        <td>
                                            @switch (backup.Status)
                                            {
                                                case Algora.Erp.Admin.Entities.BackupStatus.Pending:
                                                    <span class="badge bg-warning text-dark">Pending</span>
                                                    break;
                                                case Algora.Erp.Admin.Entities.BackupStatus.InProgress:
                                                    <span class="badge bg-info">In Progress</span>
                                                    break;
                                                case Algora.Erp.Admin.Entities.BackupStatus.Completed:
                                                    <span class="badge bg-success">Completed</span>
                                                    break;
                                                case Algora.Erp.Admin.Entities.BackupStatus.Failed:
                                                    <span class="badge bg-danger" title="@backup.ErrorMessage">Failed</span>
                                                    break;
                                                case Algora.Erp.Admin.Entities.BackupStatus.Deleted:
                                                    <span class="badge bg-secondary">Deleted</span>
                                                    break;
                                            }
                                        </td>
                                        <td>
                                            <div>@backup.CreatedAt.ToString("MMM dd, yyyy")</div>
                                            <small class="text-muted">@backup.CreatedAt.ToString("HH:mm")</small>
                                        </td>
                                        <td class="text-end pe-4">
                                            @if (backup.Status == Algora.Erp.Admin.Entities.BackupStatus.Completed)
                                            {
                                                <div class="btn-group">
                                                    <a href="/Tenants/Details/@Model.Tenant.Id?handler=DownloadBackup&backupId=@backup.Id"
                                                       class="btn btn-sm btn-outline-primary" title="Download">
                                                        <i class="bi bi-download"></i>
                                                    </a>
                                                    <button class="btn btn-sm btn-outline-warning" title="Restore"
                                                            onclick="confirmRestore('@backup.Id', '@backup.FileName')">
                                                        <i class="bi bi-arrow-counterclockwise"></i>
                                                    </button>
                                                    <button class="btn btn-sm btn-outline-danger" title="Delete"
                                                            onclick="confirmDelete('@backup.Id', '@backup.FileName')">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            }
                                            else if (backup.Status == Algora.Erp.Admin.Entities.BackupStatus.Failed)
                                            {
                                                <button class="btn btn-sm btn-outline-danger" title="Delete"
                                                        onclick="confirmDelete('@backup.Id', '@backup.FileName')">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
            <div class="card-footer bg-light">
                <small class="text-muted">
                    <i class="bi bi-folder2 me-1"></i>Backup Location: <code>@Model.BackupDirectory</code>
                </small>
            </div>
        </div>
    </div>
</div>

<!-- Create Backup Modal -->
<div class="modal fade" id="createBackupModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-cloud-arrow-up me-2"></i>Create Database Backup</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="CreateBackup">
                <input type="hidden" name="id" value="@Model.Tenant.Id" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Database</label>
                        <input type="text" class="form-control" value="@Model.Tenant.DatabaseName" readonly />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Backup Type</label>
                        <select class="form-select" name="type">
                            <option value="0" selected>Full Backup</option>
                            <option value="1">Differential Backup</option>
                            <option value="2">Transaction Log</option>
                        </select>
                        <small class="text-muted">Full backup is recommended for most cases.</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Notes (Optional)</label>
                        <textarea class="form-control" name="notes" rows="2" placeholder="e.g., Pre-upgrade backup"></textarea>
                    </div>
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        The backup will be stored for @Model.RetentionDays days before automatic cleanup.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-gradient">
                        <i class="bi bi-cloud-arrow-up me-1"></i>Create Backup
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Restore Confirmation Modal -->
<div class="modal fade" id="restoreModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-warning"><i class="bi bi-exclamation-triangle me-2"></i>Confirm Restore</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="RestoreBackup">
                <input type="hidden" name="id" value="@Model.Tenant.Id" />
                <input type="hidden" name="backupId" id="restoreBackupId" />
                <div class="modal-body">
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-octagon me-2"></i>
                        <strong>Warning:</strong> Restoring a backup will overwrite the current database.
                        All data since the backup was created will be lost!
                    </div>
                    <p>Are you sure you want to restore from backup: <strong id="restoreBackupName"></strong>?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-arrow-counterclockwise me-1"></i>Restore Database
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger"><i class="bi bi-trash me-2"></i>Delete Backup</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="DeleteBackup">
                <input type="hidden" name="id" value="@Model.Tenant.Id" />
                <input type="hidden" name="backupId" id="deleteBackupId" />
                <div class="modal-body">
                    <p>Are you sure you want to delete backup: <strong id="deleteBackupName"></strong>?</p>
                    <p class="text-muted mb-0">This will permanently delete the backup file.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Delete Backup
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmRestore(backupId, fileName) {
            document.getElementById('restoreBackupId').value = backupId;
            document.getElementById('restoreBackupName').textContent = fileName;
            new bootstrap.Modal(document.getElementById('restoreModal')).show();
        }

        function confirmDelete(backupId, fileName) {
            document.getElementById('deleteBackupId').value = backupId;
            document.getElementById('deleteBackupName').textContent = fileName;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}
