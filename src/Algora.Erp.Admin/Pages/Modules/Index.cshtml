@page
@model Algora.Erp.Admin.Pages.Modules.IndexModel
@{
    ViewData["Title"] = "Module Pricing";
}

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
    <div class="bg-primary-600 text-white rounded-xl shadow-sm p-6">
        <div class="flex justify-between items-center">
            <div>
                <p class="text-sm text-primary-100 mb-1">Total Modules</p>
                <h3 class="text-2xl font-bold">@Model.Modules.Count</h3>
            </div>
            <i class="bi bi-grid text-4xl opacity-50"></i>
        </div>
    </div>
    <div class="bg-emerald-600 text-white rounded-xl shadow-sm p-6">
        <div class="flex justify-between items-center">
            <div>
                <p class="text-sm text-emerald-100 mb-1">Active Modules</p>
                <h3 class="text-2xl font-bold">@Model.Modules.Count(m => m.IsActive)</h3>
            </div>
            <i class="bi bi-check-circle text-4xl opacity-50"></i>
        </div>
    </div>
    <div class="bg-blue-600 text-white rounded-xl shadow-sm p-6">
        <div class="flex justify-between items-center">
            <div>
                <p class="text-sm text-blue-100 mb-1">Core Modules</p>
                <h3 class="text-2xl font-bold">@Model.CoreModulesCount</h3>
            </div>
            <i class="bi bi-star text-4xl opacity-50"></i>
        </div>
    </div>
    <div class="bg-amber-600 text-white rounded-xl shadow-sm p-6">
        <div class="flex justify-between items-center">
            <div>
                <p class="text-sm text-amber-100 mb-1">Total Monthly Value</p>
                <h3 class="text-2xl font-bold">@Model.TotalMonthlyRevenue.ToString("N0")</h3>
            </div>
            <i class="bi bi-currency-rupee text-4xl opacity-50"></i>
        </div>
    </div>
</div>

<!-- Modules Table -->
<div class="bg-white rounded-xl shadow-sm">
    <div class="flex justify-between items-center px-6 py-4 border-b border-gray-200">
        <h5 class="font-semibold text-gray-800">
            <i class="bi bi-grid mr-2"></i>ERP Modules & Pricing
        </h5>
        <button data-modal-target="moduleModal" data-modal-toggle="moduleModal" onclick="openCreateModal()"
                class="px-4 py-2 text-sm font-medium text-white bg-primary-600 rounded-lg hover:bg-primary-700 transition-colors">
            <i class="bi bi-plus-lg mr-1"></i>Add Module
        </button>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Module</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Category</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Monthly Price</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Annual Price</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Type</th>
                    <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider w-20">Actions</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                @foreach (var module in Model.Modules.OrderBy(m => m.Category).ThenBy(m => m.DisplayOrder))
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-6 py-4">
                            <div class="flex items-center">
                                <div class="w-10 h-10 bg-gray-100 rounded-full flex items-center justify-center mr-3">
                                    <i class="@module.Icon text-primary-600"></i>
                                </div>
                                <div>
                                    <div class="font-semibold text-gray-900">@module.Name</div>
                                    <div class="text-sm text-gray-500">@module.Code</div>
                                </div>
                            </div>
                        </td>
                        <td class="px-6 py-4">
                            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">@module.Category</span>
                        </td>
                        <td class="px-6 py-4">
                            <div class="font-semibold text-primary-600">@module.MonthlyPrice.ToString("N0")</div>
                        </td>
                        <td class="px-6 py-4">
                            <div class="text-gray-500">@module.AnnualPrice.ToString("N0")</div>
                        </td>
                        <td class="px-6 py-4">
                            @if (module.IsCore)
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-800">
                                    <i class="bi bi-star-fill mr-1"></i>Core
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Add-on</span>
                            }
                        </td>
                        <td class="px-6 py-4">
                            @if (module.IsActive)
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800">
                                    <i class="bi bi-check-circle mr-1"></i>Active
                                </span>
                            }
                            else
                            {
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                                    <i class="bi bi-x-circle mr-1"></i>Inactive
                                </span>
                            }
                        </td>
                        <td class="px-6 py-4 text-right">
                            <button data-dropdown-toggle="moduleDropdown-@module.Id" class="p-2 text-gray-500 hover:bg-gray-100 rounded-lg">
                                <i class="bi bi-three-dots-vertical"></i>
                            </button>
                            <div id="moduleDropdown-@module.Id" class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow-lg w-44 border border-gray-200">
                                <ul class="py-2 text-sm text-gray-700">
                                    <li>
                                        <button class="w-full text-left px-4 py-2 hover:bg-gray-100" onclick="openEditModal('@module.Id')">
                                            <i class="bi bi-pencil mr-2"></i>Edit
                                        </button>
                                    </li>
                                    <li>
                                        <button class="w-full text-left px-4 py-2 hover:bg-gray-100"
                                                hx-post="/Modules?handler=Toggle&moduleId=@module.Id"
                                                hx-swap="none">
                                            @if (module.IsActive)
                                            {
                                                <i class="bi bi-x-circle mr-2 text-amber-600"></i><span>Deactivate</span>
                                            }
                                            else
                                            {
                                                <i class="bi bi-check-circle mr-2 text-emerald-600"></i><span>Activate</span>
                                            }
                                        </button>
                                    </li>
                                </ul>
                                <ul class="py-2">
                                    <li>
                                        <button class="w-full text-left px-4 py-2 hover:bg-gray-100 text-red-600"
                                                hx-post="/Modules?handler=Delete&moduleId=@module.Id"
                                                hx-swap="none"
                                                hx-confirm="Are you sure you want to delete this module?">
                                            <i class="bi bi-trash mr-2"></i>Delete
                                        </button>
                                    </li>
                                </ul>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Module Modal -->
<div id="moduleModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-2xl max-h-full">
        <div class="relative bg-white rounded-xl shadow-lg">
            <div class="flex items-center justify-between px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900" id="moduleModalTitle">
                    <i class="bi bi-grid mr-2"></i>New Module
                </h3>
                <button type="button" data-modal-hide="moduleModal" class="text-gray-400 hover:text-gray-900 rounded-lg text-sm w-8 h-8 inline-flex justify-center items-center">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <form id="moduleForm" method="post" asp-page-handler="Save">
                <div class="p-6">
                    <input type="hidden" id="moduleId" name="ModuleId" />

                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Module Code <span class="text-red-500">*</span></label>
                            <input type="text" name="Input.Code" id="moduleCode" required pattern="^[a-z0-9_]+$" title="Lowercase letters, numbers, and underscores only"
                                   class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" />
                            <p class="text-xs text-gray-500 mt-1">Unique identifier (e.g., inventory, finance)</p>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Module Name <span class="text-red-500">*</span></label>
                            <input type="text" name="Input.Name" id="moduleName" required
                                   class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" />
                        </div>
                    </div>

                    <div class="mb-4">
                        <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                        <textarea name="Input.Description" id="moduleDescription" rows="2"
                                  class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500"></textarea>
                    </div>

                    <div class="grid grid-cols-2 gap-4 mb-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Category <span class="text-red-500">*</span></label>
                            <select name="Input.Category" id="moduleCategory" required
                                    class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500">
                                <option value="Core">Core</option>
                                <option value="Finance">Finance</option>
                                <option value="Operations">Operations</option>
                                <option value="HR">HR</option>
                                <option value="Advanced">Advanced</option>
                                <option value="Integration">Integration</option>
                            </select>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Icon (Bootstrap Icons)</label>
                            <div class="flex">
                                <span class="inline-flex items-center px-3 text-lg text-gray-500 bg-gray-100 border border-r-0 border-gray-300 rounded-l-lg">
                                    <i id="iconPreview" class="bi-box"></i>
                                </span>
                                <input type="text" name="Input.Icon" id="moduleIcon" value="bi-box"
                                       onchange="document.getElementById('iconPreview').className = this.value"
                                       class="flex-1 px-3 py-2 bg-gray-50 border border-gray-300 rounded-r-lg focus:ring-primary-500 focus:border-primary-500" />
                            </div>
                        </div>
                    </div>

                    <div class="border-t pt-4 mb-4">
                        <h6 class="font-medium text-gray-800 mb-3"><i class="bi bi-currency-rupee mr-2"></i>Pricing (INR)</h6>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Monthly Price <span class="text-red-500">*</span></label>
                                <div class="flex">
                                    <span class="inline-flex items-center px-3 text-sm text-gray-500 bg-gray-100 border border-r-0 border-gray-300 rounded-l-lg">INR</span>
                                    <input type="number" name="Input.MonthlyPrice" id="moduleMonthlyPrice" required min="0" step="1"
                                           class="flex-1 px-3 py-2 bg-gray-50 border border-gray-300 rounded-r-lg focus:ring-primary-500 focus:border-primary-500" />
                                </div>
                            </div>
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Annual Price <span class="text-red-500">*</span></label>
                                <div class="flex">
                                    <span class="inline-flex items-center px-3 text-sm text-gray-500 bg-gray-100 border border-r-0 border-gray-300 rounded-l-lg">INR</span>
                                    <input type="number" name="Input.AnnualPrice" id="moduleAnnualPrice" required min="0" step="1"
                                           class="flex-1 px-3 py-2 bg-gray-50 border border-gray-300 rounded-r-lg focus:ring-primary-500 focus:border-primary-500" />
                                </div>
                                <p class="text-xs text-gray-500 mt-1">Usually 10x monthly (2 months free)</p>
                            </div>
                        </div>
                    </div>

                    <div class="border-t pt-4">
                        <h6 class="font-medium text-gray-800 mb-3"><i class="bi bi-gear mr-2"></i>Options</h6>
                        <div class="grid grid-cols-3 gap-4 mb-4">
                            <div>
                                <label class="block text-sm font-medium text-gray-700 mb-1">Display Order</label>
                                <input type="number" name="Input.DisplayOrder" id="moduleDisplayOrder" value="1" min="1"
                                       class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" />
                            </div>
                            <div class="flex items-end">
                                <label class="flex items-center">
                                    <input type="checkbox" name="Input.IsActive" id="moduleIsActive" value="true" checked
                                           class="w-4 h-4 text-primary-600 bg-gray-100 border-gray-300 rounded focus:ring-primary-500" />
                                    <span class="ml-2 text-sm text-gray-700">Active</span>
                                </label>
                            </div>
                            <div class="flex items-end">
                                <label class="flex items-center">
                                    <input type="checkbox" name="Input.IsCore" id="moduleIsCore" value="true"
                                           class="w-4 h-4 text-primary-600 bg-gray-100 border-gray-300 rounded focus:ring-primary-500" />
                                    <span class="ml-2 text-sm text-gray-700">Core Module</span>
                                </label>
                            </div>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700 mb-1">Required Modules</label>
                            <input type="text" name="Input.RequiredModules" id="moduleRequiredModules" placeholder="e.g., inventory,finance"
                                   class="w-full px-3 py-2 bg-gray-50 border border-gray-300 rounded-lg focus:ring-primary-500 focus:border-primary-500" />
                            <p class="text-xs text-gray-500 mt-1">Comma-separated module codes that must be enabled for this module</p>
                        </div>
                    </div>
                </div>
                <div class="flex items-center justify-end gap-3 px-6 py-4 border-t border-gray-200">
                    <button type="button" data-modal-hide="moduleModal" class="px-4 py-2 text-sm font-medium text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200">Cancel</button>
                    <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-primary-600 rounded-lg hover:bg-primary-700">
                        <i class="bi bi-check-lg mr-1"></i>Save Module
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const modulesData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Modules.Select(m => new {
            m.Id, m.Code, m.Name, m.Description, m.Icon,
            m.MonthlyPrice, m.AnnualPrice,
            m.IsCore, m.RequiredModules, m.DisplayOrder, m.IsActive, m.Category
        })));

        function openCreateModal() {
            document.getElementById('moduleModalTitle').innerHTML = '<i class="bi bi-grid mr-2"></i>New Module';
            document.getElementById('moduleForm').reset();
            document.getElementById('moduleId').value = '';
            document.getElementById('moduleIsActive').checked = true;
            document.getElementById('iconPreview').className = 'bi-box';
        }

        function openEditModal(moduleId) {
            const module = modulesData.find(m => m.Id.toLowerCase() === moduleId.toLowerCase());
            if (!module) return;

            document.getElementById('moduleModalTitle').innerHTML = '<i class="bi bi-pencil mr-2"></i>Edit Module';
            document.getElementById('moduleId').value = module.Id;
            document.getElementById('moduleCode').value = module.Code;
            document.getElementById('moduleName').value = module.Name;
            document.getElementById('moduleDescription').value = module.Description || '';
            document.getElementById('moduleIcon').value = module.Icon || 'bi-box';
            document.getElementById('iconPreview').className = module.Icon || 'bi-box';
            document.getElementById('moduleMonthlyPrice').value = module.MonthlyPrice;
            document.getElementById('moduleAnnualPrice').value = module.AnnualPrice;
            document.getElementById('moduleIsCore').checked = module.IsCore;
            document.getElementById('moduleRequiredModules').value = module.RequiredModules || '';
            document.getElementById('moduleDisplayOrder').value = module.DisplayOrder;
            document.getElementById('moduleIsActive').checked = module.IsActive;
            document.getElementById('moduleCategory').value = module.Category;

            const modal = FlowbiteInstances.getInstance('Modal', 'moduleModal');
            if (modal) modal.show();
        }

        document.body.addEventListener('htmx:afterRequest', function (event) {
            if (event.detail.successful) {
                window.location.reload();
            } else {
                try {
                    const response = JSON.parse(event.detail.xhr.responseText);
                    alert(response.error || 'An error occurred');
                } catch {
                    alert('An error occurred');
                }
            }
        });

        document.getElementById('moduleForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const form = e.target;
            const formData = new FormData(form);

            try {
                const response = await fetch('/Modules?handler=Save', {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    window.location.reload();
                } else {
                    const data = await response.json();
                    alert(data.error || 'Failed to save module');
                }
            } catch (error) {
                alert('An error occurred while saving');
            }
        });

        // Auto-calculate annual price (10x monthly)
        document.getElementById('moduleMonthlyPrice').addEventListener('change', function() {
            const monthly = parseFloat(this.value) || 0;
            document.getElementById('moduleAnnualPrice').value = monthly * 10;
        });
    </script>
}
