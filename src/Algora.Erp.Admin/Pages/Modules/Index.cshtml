@page
@model Algora.Erp.Admin.Pages.Modules.IndexModel
@{
    ViewData["Title"] = "Module Pricing";
}

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card stat-card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1 text-white-50">Total Modules</h6>
                        <h3 class="mb-0">@Model.Modules.Count</h3>
                    </div>
                    <i class="bi bi-grid fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1 text-white-50">Active Modules</h6>
                        <h3 class="mb-0">@Model.Modules.Count(m => m.IsActive)</h3>
                    </div>
                    <i class="bi bi-check-circle fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1 text-white-50">Core Modules</h6>
                        <h3 class="mb-0">@Model.CoreModulesCount</h3>
                    </div>
                    <i class="bi bi-star fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card bg-warning text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1 text-white-50">Total Monthly Value</h6>
                        <h3 class="mb-0">@Model.TotalMonthlyRevenue.ToString("N0")</h3>
                    </div>
                    <i class="bi bi-currency-rupee fs-1 opacity-50"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modules Card -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center py-3">
        <h5 class="mb-0">
            <i class="bi bi-grid me-2"></i>ERP Modules & Pricing
        </h5>
        <button class="btn btn-gradient" data-bs-toggle="modal" data-bs-target="#moduleModal" onclick="openCreateModal()">
            <i class="bi bi-plus-lg me-1"></i>Add Module
        </button>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Module</th>
                        <th>Category</th>
                        <th>Monthly Price</th>
                        <th>Annual Price</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th width="80">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var module in Model.Modules.OrderBy(m => m.Category).ThenBy(m => m.DisplayOrder))
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                        <i class="@module.Icon text-primary"></i>
                                    </div>
                                    <div>
                                        <div class="fw-semibold">@module.Name</div>
                                        <small class="text-muted">@module.Code</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@module.Category</span>
                            </td>
                            <td>
                                <div class="fw-semibold text-primary">@module.MonthlyPrice.ToString("N0")</div>
                            </td>
                            <td>
                                <div class="text-muted">@module.AnnualPrice.ToString("N0")</div>
                            </td>
                            <td>
                                @if (module.IsCore)
                                {
                                    <span class="badge bg-warning text-dark"><i class="bi bi-star-fill me-1"></i>Core</span>
                                }
                                else
                                {
                                    <span class="badge bg-light text-dark">Add-on</span>
                                }
                            </td>
                            <td>
                                @if (module.IsActive)
                                {
                                    <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary"><i class="bi bi-x-circle me-1"></i>Inactive</span>
                                }
                            </td>
                            <td>
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-light" data-bs-toggle="dropdown">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <button class="dropdown-item" onclick="openEditModal('@module.Id')">
                                                <i class="bi bi-pencil me-2"></i>Edit
                                            </button>
                                        </li>
                                        <li>
                                            <button class="dropdown-item"
                                                    hx-post="/Modules?handler=Toggle&moduleId=@module.Id"
                                                    hx-swap="none">
                                                @if (module.IsActive)
                                                {
                                                    <i class="bi bi-x-circle me-2 text-warning"></i>
                                                    <span>Deactivate</span>
                                                }
                                                else
                                                {
                                                    <i class="bi bi-check-circle me-2 text-success"></i>
                                                    <span>Activate</span>
                                                }
                                            </button>
                                        </li>
                                        <li><hr class="dropdown-divider" /></li>
                                        <li>
                                            <button class="dropdown-item text-danger"
                                                    hx-post="/Modules?handler=Delete&moduleId=@module.Id"
                                                    hx-swap="none"
                                                    hx-confirm="Are you sure you want to delete this module?">
                                                <i class="bi bi-trash me-2"></i>Delete
                                            </button>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Module Modal -->
<div class="modal fade" id="moduleModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="moduleModalTitle">
                    <i class="bi bi-grid me-2"></i>New Module
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="moduleForm" method="post" asp-page-handler="Save">
                <div class="modal-body">
                    <input type="hidden" id="moduleId" name="ModuleId" />

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Module Code <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="Input.Code" id="moduleCode" required
                                   pattern="^[a-z0-9_]+$" title="Lowercase letters, numbers, and underscores only" />
                            <small class="text-muted">Unique identifier (e.g., inventory, finance)</small>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Module Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="Input.Name" id="moduleName" required />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea class="form-control" name="Input.Description" id="moduleDescription" rows="2"></textarea>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Category <span class="text-danger">*</span></label>
                            <select class="form-select" name="Input.Category" id="moduleCategory" required>
                                <option value="Core">Core</option>
                                <option value="Finance">Finance</option>
                                <option value="Operations">Operations</option>
                                <option value="HR">HR</option>
                                <option value="Advanced">Advanced</option>
                                <option value="Integration">Integration</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Icon (Bootstrap Icons)</label>
                            <div class="input-group">
                                <span class="input-group-text"><i id="iconPreview" class="bi-box"></i></span>
                                <input type="text" class="form-control" name="Input.Icon" id="moduleIcon" value="bi-box"
                                       onchange="document.getElementById('iconPreview').className = this.value" />
                            </div>
                        </div>
                    </div>

                    <hr class="my-4" />
                    <h6 class="mb-3"><i class="bi bi-currency-rupee me-2"></i>Pricing (INR)</h6>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Monthly Price <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">INR</span>
                                <input type="number" class="form-control" name="Input.MonthlyPrice" id="moduleMonthlyPrice" required min="0" step="1" />
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Annual Price <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <span class="input-group-text">INR</span>
                                <input type="number" class="form-control" name="Input.AnnualPrice" id="moduleAnnualPrice" required min="0" step="1" />
                            </div>
                            <small class="text-muted">Usually 10x monthly (2 months free)</small>
                        </div>
                    </div>

                    <hr class="my-4" />
                    <h6 class="mb-3"><i class="bi bi-gear me-2"></i>Options</h6>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Display Order</label>
                            <input type="number" class="form-control" name="Input.DisplayOrder" id="moduleDisplayOrder" value="1" min="1" />
                        </div>
                        <div class="col-md-4 mb-3 d-flex align-items-end">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="Input.IsActive" id="moduleIsActive" value="true" checked />
                                <label class="form-check-label" for="moduleIsActive">Active</label>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3 d-flex align-items-end">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" name="Input.IsCore" id="moduleIsCore" value="true" />
                                <label class="form-check-label" for="moduleIsCore">Core Module</label>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Required Modules</label>
                        <input type="text" class="form-control" name="Input.RequiredModules" id="moduleRequiredModules"
                               placeholder="e.g., inventory,finance" />
                        <small class="text-muted">Comma-separated module codes that must be enabled for this module</small>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-gradient">
                        <i class="bi bi-check-lg me-1"></i>Save Module
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Store modules data for editing
        const modulesData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Modules.Select(m => new {
            m.Id, m.Code, m.Name, m.Description, m.Icon,
            m.MonthlyPrice, m.AnnualPrice,
            m.IsCore, m.RequiredModules, m.DisplayOrder, m.IsActive, m.Category
        })));

        function openCreateModal() {
            document.getElementById('moduleModalTitle').innerHTML = '<i class="bi bi-grid me-2"></i>New Module';
            document.getElementById('moduleForm').reset();
            document.getElementById('moduleId').value = '';
            document.getElementById('moduleIsActive').checked = true;
            document.getElementById('iconPreview').className = 'bi-box';
        }

        function openEditModal(moduleId) {
            const module = modulesData.find(m => m.id === moduleId);
            if (!module) return;

            document.getElementById('moduleModalTitle').innerHTML = '<i class="bi bi-pencil me-2"></i>Edit Module';
            document.getElementById('moduleId').value = module.id;
            document.getElementById('moduleCode').value = module.code;
            document.getElementById('moduleName').value = module.name;
            document.getElementById('moduleDescription').value = module.description || '';
            document.getElementById('moduleIcon').value = module.icon || 'bi-box';
            document.getElementById('iconPreview').className = module.icon || 'bi-box';
            document.getElementById('moduleMonthlyPrice').value = module.monthlyPrice;
            document.getElementById('moduleAnnualPrice').value = module.annualPrice;
            document.getElementById('moduleIsCore').checked = module.isCore;
            document.getElementById('moduleRequiredModules').value = module.requiredModules || '';
            document.getElementById('moduleDisplayOrder').value = module.displayOrder;
            document.getElementById('moduleIsActive').checked = module.isActive;
            document.getElementById('moduleCategory').value = module.category;

            const modal = new bootstrap.Modal(document.getElementById('moduleModal'));
            modal.show();
        }

        // Handle HTMX responses
        document.body.addEventListener('htmx:afterRequest', function (event) {
            if (event.detail.successful) {
                window.location.reload();
            } else {
                try {
                    const response = JSON.parse(event.detail.xhr.responseText);
                    alert(response.error || 'An error occurred');
                } catch {
                    alert('An error occurred');
                }
            }
        });

        // Handle form submission
        document.getElementById('moduleForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            const form = e.target;
            const formData = new FormData(form);

            try {
                const response = await fetch('/Modules?handler=Save', {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    window.location.reload();
                } else {
                    const data = await response.json();
                    alert(data.error || 'Failed to save module');
                }
            } catch (error) {
                alert('An error occurred while saving');
            }
        });

        // Auto-calculate annual price (10x monthly)
        document.getElementById('moduleMonthlyPrice').addEventListener('change', function() {
            const monthly = parseFloat(this.value) || 0;
            document.getElementById('moduleAnnualPrice').value = monthly * 10;
        });
    </script>
}
