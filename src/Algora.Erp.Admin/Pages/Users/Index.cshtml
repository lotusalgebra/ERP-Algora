@page
@model Algora.Erp.Admin.Pages.Users.IndexModel
@{
    ViewData["Title"] = "Admin Users";
}

<!-- Alerts -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Stats Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card stat-card h-100">
            <div class="card-body text-center">
                <div class="text-primary fs-2 mb-2"><i class="bi bi-people"></i></div>
                <h3 class="mb-0">@Model.Stats.TotalUsers</h3>
                <small class="text-muted">Total Users</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card stat-card h-100">
            <div class="card-body text-center">
                <div class="text-success fs-2 mb-2"><i class="bi bi-person-check"></i></div>
                <h3 class="mb-0">@Model.Stats.ActiveUsers</h3>
                <small class="text-muted">Active Users</small>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card stat-card h-100">
            <div class="card-body text-center">
                <div class="text-danger fs-2 mb-2"><i class="bi bi-person-lock"></i></div>
                <h3 class="mb-0">@Model.Stats.LockedUsers</h3>
                <small class="text-muted">Locked Users</small>
            </div>
        </div>
    </div>
</div>

<!-- Users Table -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center py-3">
        <h6 class="mb-0"><i class="bi bi-people me-2"></i>Admin Users</h6>
        <button class="btn btn-gradient" data-bs-toggle="modal" data-bs-target="#createUserModal">
            <i class="bi bi-plus-lg me-1"></i>Add User
        </button>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">User</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Status</th>
                        <th>Last Login</th>
                        <th>Created</th>
                        <th class="text-end pe-4">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td class="ps-4">
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 rounded-circle p-2 me-3">
                                        <i class="bi bi-person text-primary"></i>
                                    </div>
                                    <div>
                                        <div class="fw-semibold">@user.FullName</div>
                                        <small class="text-muted">@user.Phone</small>
                                    </div>
                                </div>
                            </td>
                            <td>@user.Email</td>
                            <td>
                                <span class="badge @(user.Role?.Name == "SuperAdmin" ? "bg-danger" : user.Role?.Name == "Admin" ? "bg-primary" : "bg-secondary")">
                                    @user.Role?.Name
                                </span>
                            </td>
                            <td>
                                @if (user.LockoutEnd.HasValue && user.LockoutEnd > DateTime.UtcNow)
                                {
                                    <span class="badge bg-danger">Locked</span>
                                }
                                else if (user.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </td>
                            <td>
                                @if (user.LastLoginAt.HasValue)
                                {
                                    <div>@user.LastLoginAt.Value.ToString("MMM dd, yyyy")</div>
                                    <small class="text-muted">@user.LastLoginAt.Value.ToString("HH:mm")</small>
                                }
                                else
                                {
                                    <span class="text-muted">Never</span>
                                }
                            </td>
                            <td>
                                <div>@user.CreatedAt.ToString("MMM dd, yyyy")</div>
                                <small class="text-muted">@user.CreatedAt.ToString("HH:mm")</small>
                            </td>
                            <td class="text-end pe-4">
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-light" data-bs-toggle="dropdown">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        @if (user.LockoutEnd.HasValue && user.LockoutEnd > DateTime.UtcNow)
                                        {
                                            <li>
                                                <form method="post" asp-page-handler="Unlock" class="d-inline">
                                                    <input type="hidden" name="id" value="@user.Id" />
                                                    <button type="submit" class="dropdown-item text-success">
                                                        <i class="bi bi-unlock me-2"></i>Unlock
                                                    </button>
                                                </form>
                                            </li>
                                        }
                                        <li>
                                            <form method="post" asp-page-handler="ToggleStatus" class="d-inline">
                                                <input type="hidden" name="id" value="@user.Id" />
                                                <button type="submit" class="dropdown-item">
                                                    @if (user.IsActive)
                                                    {
                                                        <i class="bi bi-person-x me-2 text-warning"></i><span>Deactivate</span>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-person-check me-2 text-success"></i><span>Activate</span>
                                                    }
                                                </button>
                                            </form>
                                        </li>
                                        <li>
                                            <button class="dropdown-item" onclick="showResetPasswordModal('@user.Id', '@user.FullName')">
                                                <i class="bi bi-key me-2"></i>Reset Password
                                            </button>
                                        </li>
                                        <li><hr class="dropdown-divider" /></li>
                                        <li>
                                            <button class="dropdown-item text-danger" onclick="showDeleteModal('@user.Id', '@user.FullName')">
                                                <i class="bi bi-trash me-2"></i>Delete
                                            </button>
                                        </li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                    @if (!Model.Users.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center py-5 text-muted">
                                <i class="bi bi-inbox fs-1 d-block mb-2"></i>
                                No admin users found
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Create User Modal -->
<div class="modal fade" id="createUserModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-person-plus me-2"></i>Add Admin User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="Create">
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">First Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="CreateInput.FirstName" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Last Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="CreateInput.LastName" required />
                        </div>
                        <div class="col-12">
                            <label class="form-label">Email <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" name="CreateInput.Email" required />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Password <span class="text-danger">*</span></label>
                            <input type="password" class="form-control" name="CreateInput.Password" required minlength="6" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Phone</label>
                            <input type="tel" class="form-control" name="CreateInput.Phone" />
                        </div>
                        <div class="col-12">
                            <label class="form-label">Role <span class="text-danger">*</span></label>
                            <select class="form-select" name="CreateInput.RoleId" required>
                                <option value="">Select a role...</option>
                                @foreach (var role in Model.Roles)
                                {
                                    <option value="@role.Id">@role.Name - @role.Description</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-gradient">
                        <i class="bi bi-plus-lg me-1"></i>Create User
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Reset Password Modal -->
<div class="modal fade" id="resetPasswordModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="bi bi-key me-2"></i>Reset Password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="ResetPassword">
                <input type="hidden" name="id" id="resetPasswordUserId" />
                <div class="modal-body">
                    <p>Reset password for <strong id="resetPasswordUserName"></strong>?</p>
                    <div class="mb-3">
                        <label class="form-label">New Password <span class="text-danger">*</span></label>
                        <input type="password" class="form-control" name="newPassword" required minlength="6" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">
                        <i class="bi bi-key me-1"></i>Reset Password
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger"><i class="bi bi-trash me-2"></i>Delete User</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-page-handler="Delete">
                <input type="hidden" name="id" id="deleteUserId" />
                <div class="modal-body">
                    <p>Are you sure you want to delete <strong id="deleteUserName"></strong>?</p>
                    <div class="alert alert-danger">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        This action cannot be undone.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Delete User
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showResetPasswordModal(id, name) {
            document.getElementById('resetPasswordUserId').value = id;
            document.getElementById('resetPasswordUserName').textContent = name;
            new bootstrap.Modal(document.getElementById('resetPasswordModal')).show();
        }

        function showDeleteModal(id, name) {
            document.getElementById('deleteUserId').value = id;
            document.getElementById('deleteUserName').textContent = name;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}
