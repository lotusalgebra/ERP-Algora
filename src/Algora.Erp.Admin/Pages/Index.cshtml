@page
@model Algora.Erp.Admin.Pages.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<!-- Stats Cards -->
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
    <!-- Total Tenants -->
    <div class="bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow p-6">
        <div class="flex justify-between items-center">
            <div>
                <p class="text-sm font-medium text-gray-500 mb-1">Total Tenants</p>
                <h3 class="text-2xl font-bold text-gray-900">@Model.Stats.TotalTenants</h3>
                <p class="text-sm text-emerald-600 mt-1">
                    <i class="bi bi-arrow-up"></i> @Model.Stats.NewTenantsThisMonth new this month
                </p>
            </div>
            <div class="p-3 bg-primary-100 rounded-full">
                <i class="bi bi-building text-2xl text-primary-600"></i>
            </div>
        </div>
    </div>

    <!-- Active Subscriptions -->
    <div class="bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow p-6">
        <div class="flex justify-between items-center">
            <div>
                <p class="text-sm font-medium text-gray-500 mb-1">Active Subscriptions</p>
                <h3 class="text-2xl font-bold text-gray-900">@Model.Stats.ActiveSubscriptions</h3>
                <p class="text-sm text-gray-500 mt-1">
                    @Model.Stats.TrialSubscriptions on trial
                </p>
            </div>
            <div class="p-3 bg-emerald-100 rounded-full">
                <i class="bi bi-check-circle text-2xl text-emerald-600"></i>
            </div>
        </div>
    </div>

    <!-- Monthly Revenue -->
    <div class="bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow p-6">
        <div class="flex justify-between items-center">
            <div>
                <p class="text-sm font-medium text-gray-500 mb-1">Monthly Revenue</p>
                <h3 class="text-2xl font-bold text-gray-900">$@Model.Stats.MonthlyRevenue.ToString("N0")</h3>
                <p class="text-sm text-emerald-600 mt-1">
                    <i class="bi bi-arrow-up"></i> @Model.Stats.RevenueGrowthPercent% vs last month
                </p>
            </div>
            <div class="p-3 bg-blue-100 rounded-full">
                <i class="bi bi-currency-dollar text-2xl text-blue-600"></i>
            </div>
        </div>
    </div>

    <!-- Suspended -->
    <div class="bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow p-6">
        <div class="flex justify-between items-center">
            <div>
                <p class="text-sm font-medium text-gray-500 mb-1">Suspended</p>
                <h3 class="text-2xl font-bold text-gray-900">@Model.Stats.SuspendedTenants</h3>
                <p class="text-sm text-amber-600 mt-1">
                    @Model.Stats.PendingCancellations pending cancellation
                </p>
            </div>
            <div class="p-3 bg-amber-100 rounded-full">
                <i class="bi bi-pause-circle text-2xl text-amber-600"></i>
            </div>
        </div>
    </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Recent Tenants -->
    <div class="lg:col-span-2 bg-white rounded-xl shadow-sm">
        <div class="flex justify-between items-center px-6 py-4 border-b border-gray-200">
            <h6 class="font-semibold text-gray-800">
                <i class="bi bi-building mr-2"></i>Recent Tenants
            </h6>
            <a href="/Tenants" class="text-sm text-primary-600 hover:text-primary-700 font-medium">
                View All <i class="bi bi-arrow-right ml-1"></i>
            </a>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Tenant</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Plan</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Status</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Created</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @foreach (var tenant in Model.RecentTenants)
                    {
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4">
                                <div class="flex items-center">
                                    <div class="w-8 h-8 bg-gray-100 rounded-full flex items-center justify-center mr-3">
                                        <i class="bi bi-building text-primary-600 text-sm"></i>
                                    </div>
                                    <div>
                                        <div class="font-medium text-gray-900">@tenant.Name</div>
                                        <div class="text-sm text-gray-500">@tenant.ContactEmail</div>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4">
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-primary-100 text-primary-800">
                                    @(tenant.CurrentSubscription?.Plan?.Name ?? "No Plan")
                                </span>
                            </td>
                            <td class="px-6 py-4">
                                @switch (tenant.Status)
                                {
                                    case Algora.Erp.Admin.Entities.TenantStatus.Active:
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-100 text-emerald-800">Active</span>
                                        break;
                                    case Algora.Erp.Admin.Entities.TenantStatus.Pending:
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-amber-100 text-amber-800">Pending</span>
                                        break;
                                    case Algora.Erp.Admin.Entities.TenantStatus.Suspended:
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Suspended</span>
                                        break;
                                    default:
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">@tenant.Status</span>
                                        break;
                                }
                            </td>
                            <td class="px-6 py-4">
                                <span class="text-sm text-gray-500">@tenant.CreatedAt.ToString("MMM dd, yyyy")</span>
                            </td>
                        </tr>
                    }
                    @if (!Model.RecentTenants.Any())
                    {
                        <tr>
                            <td colspan="4" class="px-6 py-12 text-center text-gray-500">
                                <i class="bi bi-inbox text-4xl block mb-2"></i>
                                No tenants yet
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Quick Actions & Plan Distribution -->
    <div class="space-y-6">
        <!-- Quick Actions -->
        <div class="bg-white rounded-xl shadow-sm">
            <div class="px-6 py-4 border-b border-gray-200">
                <h6 class="font-semibold text-gray-800">
                    <i class="bi bi-lightning mr-2"></i>Quick Actions
                </h6>
            </div>
            <div class="p-6 space-y-3">
                <a href="/Tenants" class="flex items-center justify-center w-full px-4 py-2.5 text-white bg-primary-600 hover:bg-primary-700 rounded-lg font-medium transition-colors">
                    <i class="bi bi-plus-lg mr-2"></i>Add New Tenant
                </a>
                <a href="/Plans" class="flex items-center justify-center w-full px-4 py-2.5 text-primary-600 border border-primary-600 hover:bg-primary-50 rounded-lg font-medium transition-colors">
                    <i class="bi bi-tags mr-2"></i>Manage Plans
                </a>
                <a href="/Users" class="flex items-center justify-center w-full px-4 py-2.5 text-gray-700 border border-gray-300 hover:bg-gray-50 rounded-lg font-medium transition-colors">
                    <i class="bi bi-people mr-2"></i>Admin Users
                </a>
            </div>
        </div>

        <!-- Plan Distribution -->
        <div class="bg-white rounded-xl shadow-sm">
            <div class="px-6 py-4 border-b border-gray-200">
                <h6 class="font-semibold text-gray-800">
                    <i class="bi bi-pie-chart mr-2"></i>Plan Distribution
                </h6>
            </div>
            <div class="p-6">
                @foreach (var plan in Model.PlanDistribution)
                {
                    var percentage = Model.Stats.ActiveSubscriptions > 0
                        ? (plan.Value * 100.0 / Model.Stats.ActiveSubscriptions)
                        : 0;
                    <div class="mb-4 last:mb-0">
                        <div class="flex justify-between mb-1">
                            <span class="text-sm font-medium text-gray-700">@plan.Key</span>
                            <span class="text-sm font-semibold text-gray-900">@plan.Value</span>
                        </div>
                        <div class="w-full bg-gray-200 rounded-full h-2">
                            <div class="bg-primary-600 h-2 rounded-full" style="width: @percentage%"></div>
                        </div>
                    </div>
                }
                @if (!Model.PlanDistribution.Any())
                {
                    <p class="text-gray-500 text-center text-sm">No active subscriptions</p>
                }
            </div>
        </div>
    </div>
</div>
