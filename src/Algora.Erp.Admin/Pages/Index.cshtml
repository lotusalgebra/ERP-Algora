@page
@model Algora.Erp.Admin.Pages.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<!-- Stats Cards -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Total Tenants</h6>
                        <h3 class="mb-0">@Model.Stats.TotalTenants</h3>
                        <small class="text-success">
                            <i class="bi bi-arrow-up"></i> @Model.Stats.NewTenantsThisMonth new this month
                        </small>
                    </div>
                    <div class="bg-primary bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-building text-primary fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Active Subscriptions</h6>
                        <h3 class="mb-0">@Model.Stats.ActiveSubscriptions</h3>
                        <small class="text-muted">
                            @Model.Stats.TrialSubscriptions on trial
                        </small>
                    </div>
                    <div class="bg-success bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-check-circle text-success fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Monthly Revenue</h6>
                        <h3 class="mb-0">$@Model.Stats.MonthlyRevenue.ToString("N0")</h3>
                        <small class="text-success">
                            <i class="bi bi-arrow-up"></i> @Model.Stats.RevenueGrowthPercent% vs last month
                        </small>
                    </div>
                    <div class="bg-info bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-currency-dollar text-info fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="text-muted mb-1">Suspended</h6>
                        <h3 class="mb-0">@Model.Stats.SuspendedTenants</h3>
                        <small class="text-warning">
                            @Model.Stats.PendingCancellations pending cancellation
                        </small>
                    </div>
                    <div class="bg-warning bg-opacity-10 rounded-circle p-3">
                        <i class="bi bi-pause-circle text-warning fs-4"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Recent Tenants -->
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="mb-0"><i class="bi bi-building me-2"></i>Recent Tenants</h6>
                <a href="/Tenants" class="btn btn-sm btn-light">View All</a>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Tenant</th>
                                <th>Plan</th>
                                <th>Status</th>
                                <th>Created</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var tenant in Model.RecentTenants)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                                                <i class="bi bi-building text-primary small"></i>
                                            </div>
                                            <div>
                                                <div class="fw-medium">@tenant.Name</div>
                                                <small class="text-muted">@tenant.ContactEmail</small>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">@(tenant.CurrentSubscription?.Plan?.Name ?? "No Plan")</span>
                                    </td>
                                    <td>
                                        @switch (tenant.Status)
                                        {
                                            case Algora.Erp.Admin.Entities.TenantStatus.Active:
                                                <span class="badge bg-success">Active</span>
                                                break;
                                            case Algora.Erp.Admin.Entities.TenantStatus.Pending:
                                                <span class="badge bg-warning text-dark">Pending</span>
                                                break;
                                            case Algora.Erp.Admin.Entities.TenantStatus.Suspended:
                                                <span class="badge bg-danger">Suspended</span>
                                                break;
                                            default:
                                                <span class="badge bg-secondary">@tenant.Status</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <small class="text-muted">@tenant.CreatedAt.ToString("MMM dd, yyyy")</small>
                                    </td>
                                </tr>
                            }
                            @if (!Model.RecentTenants.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-4 text-muted">
                                        <i class="bi bi-inbox fs-3 d-block mb-2"></i>
                                        No tenants yet
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions & Plan Distribution -->
    <div class="col-md-4">
        <!-- Quick Actions -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="mb-0"><i class="bi bi-lightning me-2"></i>Quick Actions</h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/Tenants" class="btn btn-gradient">
                        <i class="bi bi-plus-lg me-2"></i>Add New Tenant
                    </a>
                    <a href="/Plans" class="btn btn-outline-primary">
                        <i class="bi bi-tags me-2"></i>Manage Plans
                    </a>
                    <a href="/Users" class="btn btn-outline-secondary">
                        <i class="bi bi-people me-2"></i>Admin Users
                    </a>
                </div>
            </div>
        </div>

        <!-- Plan Distribution -->
        <div class="card">
            <div class="card-header">
                <h6 class="mb-0"><i class="bi bi-pie-chart me-2"></i>Plan Distribution</h6>
            </div>
            <div class="card-body">
                @foreach (var plan in Model.PlanDistribution)
                {
                    var percentage = Model.Stats.ActiveSubscriptions > 0
                        ? (plan.Value * 100.0 / Model.Stats.ActiveSubscriptions)
                        : 0;
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-1">
                            <span>@plan.Key</span>
                            <span class="fw-medium">@plan.Value</span>
                        </div>
                        <div class="progress" style="height: 6px;">
                            <div class="progress-bar bg-primary" style="width: @percentage%"></div>
                        </div>
                    </div>
                }
                @if (!Model.PlanDistribution.Any())
                {
                    <p class="text-muted text-center mb-0">No active subscriptions</p>
                }
            </div>
        </div>
    </div>
</div>
