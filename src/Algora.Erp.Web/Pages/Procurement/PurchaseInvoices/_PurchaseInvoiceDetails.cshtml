@model Algora.Erp.Domain.Entities.Finance.Invoice
@using Algora.Erp.Domain.Entities.Finance

@{
    var statusClass = Model.Status switch
    {
        InvoiceStatus.Draft => "bg-gray-100 text-gray-800",
        InvoiceStatus.Pending => "bg-amber-100 text-amber-800",
        InvoiceStatus.Sent => "bg-blue-100 text-blue-800",
        InvoiceStatus.PartiallyPaid => "bg-primary-100 text-primary-800",
        InvoiceStatus.Paid => "bg-emerald-100 text-emerald-800",
        InvoiceStatus.Overdue => "bg-red-100 text-red-800",
        InvoiceStatus.Void => "bg-gray-800 text-white",
        InvoiceStatus.Cancelled => "bg-gray-800 text-white",
        _ => "bg-gray-100 text-gray-800"
    };

    var isOverdue = Model.Status != InvoiceStatus.Paid &&
                    Model.Status != InvoiceStatus.Void &&
                    Model.Status != InvoiceStatus.Cancelled &&
                    Model.DueDate < DateTime.Today;

    var supplierName = ViewData["SupplierName"] as string ?? Model.BillingName ?? "-";
}

<div class="grid grid-cols-12 gap-4">
    <!-- Header Info -->
    <div class="col-span-12">
        <div class="flex justify-between items-start">
            <div>
                <h5 class="text-xl font-semibold text-gray-900 mb-1">@Model.InvoiceNumber</h5>
                <p class="text-gray-500 mb-0">
                    Invoice Date: @Model.InvoiceDate.ToString("dd MMM yyyy")
                    @if (!string.IsNullOrEmpty(Model.Reference))
                    {
                        <span class="ml-2">| Ref: @Model.Reference</span>
                    }
                </p>
            </div>
            <div class="text-right">
                <span class="text-sm font-medium px-3 py-1 rounded-full @statusClass">@Model.Status</span>
                @if (isOverdue)
                {
                    <span class="text-sm font-medium px-3 py-1 rounded-full bg-red-100 text-red-800 ml-1">Overdue</span>
                }
            </div>
        </div>
    </div>

    <!-- Supplier & Dates -->
    <div class="col-span-12 md:col-span-6">
        <div class="bg-white rounded-lg shadow-md h-full">
            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                <h6 class="font-medium text-gray-900 mb-0">Supplier Details</h6>
            </div>
            <div class="p-6">
                <p class="font-medium text-gray-900 mb-2">@supplierName</p>
                @if (!string.IsNullOrEmpty(Model.BillingAddress))
                {
                    <address class="text-gray-500 mb-0 not-italic">
                        @Model.BillingAddress<br />
                        @if (!string.IsNullOrEmpty(Model.BillingCity) || !string.IsNullOrEmpty(Model.BillingState))
                        {
                            @Model.BillingCity@(Model.BillingCity != null && Model.BillingState != null ? ", " : "")@Model.BillingState @Model.BillingPostalCode<br />
                        }
                        @Model.BillingCountry
                    </address>
                }
            </div>
        </div>
    </div>

    <div class="col-span-12 md:col-span-6">
        <div class="bg-white rounded-lg shadow-md h-full">
            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                <h6 class="font-medium text-gray-900 mb-0">Payment Information</h6>
            </div>
            <div class="p-6">
                <table class="w-full text-sm">
                    <tr>
                        <td class="text-gray-500 py-1" style="width: 40%;">Due Date:</td>
                        <td class="font-medium py-1 @(isOverdue ? "text-red-600" : "text-gray-900")">
                            @Model.DueDate.ToString("dd MMM yyyy")
                            @if (isOverdue)
                            {
                                <i class="bi bi-exclamation-triangle-fill text-red-600 ml-1"></i>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td class="text-gray-500 py-1">Payment Terms:</td>
                        <td class="font-medium text-gray-900 py-1">@Model.PaymentTermDays days</td>
                    </tr>
                    <tr>
                        <td class="text-gray-500 py-1">Currency:</td>
                        <td class="font-medium text-gray-900 py-1">@Model.Currency</td>
                    </tr>
                    @if (Model.PaidDate.HasValue)
                    {
                        <tr>
                            <td class="text-gray-500 py-1">Paid Date:</td>
                            <td class="font-medium text-emerald-600 py-1">@Model.PaidDate.Value.ToString("dd MMM yyyy")</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>

    <!-- Line Items -->
    <div class="col-span-12">
        <div class="bg-white rounded-lg shadow-md">
            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                <h6 class="font-medium text-gray-900 mb-0">Line Items</h6>
            </div>
            <div class="p-0">
                <div class="overflow-x-auto">
                    <table class="w-full text-sm text-left">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                            <tr>
                                <th class="px-4 py-3" style="width: 5%;">#</th>
                                <th class="px-4 py-3" style="width: 35%;">Description</th>
                                <th class="px-4 py-3 text-right" style="width: 12%;">Qty</th>
                                <th class="px-4 py-3 text-right" style="width: 15%;">Unit Price</th>
                                <th class="px-4 py-3 text-right" style="width: 10%;">Discount</th>
                                <th class="px-4 py-3 text-right" style="width: 10%;">Tax</th>
                                <th class="px-4 py-3 text-right" style="width: 13%;">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Lines?.Any() == true)
                            {
                                foreach (var line in Model.Lines.Where(l => !l.IsDeleted).OrderBy(l => l.LineNumber))
                                {
                                    <tr class="border-b">
                                        <td class="px-4 py-3">@line.LineNumber</td>
                                        <td class="px-4 py-3">
                                            <div class="font-medium text-gray-900">@line.Description</div>
                                            @if (!string.IsNullOrEmpty(line.ProductCode))
                                            {
                                                <small class="text-gray-500">@line.ProductCode</small>
                                            }
                                        </td>
                                        <td class="px-4 py-3 text-right">@line.Quantity.ToString("N2") @line.UnitOfMeasure</td>
                                        <td class="px-4 py-3 text-right">@line.UnitPrice.ToString("C2")</td>
                                        <td class="px-4 py-3 text-right">
                                            @if (line.DiscountPercent > 0)
                                            {
                                                <span>@line.DiscountPercent.ToString("N1")%</span>
                                            }
                                            else
                                            {
                                                <span class="text-gray-500">-</span>
                                            }
                                        </td>
                                        <td class="px-4 py-3 text-right">
                                            @if (line.TaxPercent > 0)
                                            {
                                                <span>@line.TaxPercent.ToString("N1")%</span>
                                            }
                                            else
                                            {
                                                <span class="text-gray-500">-</span>
                                            }
                                        </td>
                                        <td class="px-4 py-3 text-right font-medium">@line.LineTotal.ToString("C2")</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-gray-500 py-4">No line items</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="bg-gray-50">
                            <tr>
                                <td colspan="6" class="px-4 py-2 text-right">Subtotal:</td>
                                <td class="px-4 py-2 text-right font-medium">@Model.SubTotal.ToString("C2")</td>
                            </tr>
                            @if (Model.DiscountAmount > 0)
                            {
                                <tr>
                                    <td colspan="6" class="px-4 py-2 text-right">Discount:</td>
                                    <td class="px-4 py-2 text-right text-red-600">-@Model.DiscountAmount.ToString("C2")</td>
                                </tr>
                            }
                            <tr>
                                <td colspan="6" class="px-4 py-2 text-right">Tax:</td>
                                <td class="px-4 py-2 text-right">@Model.TaxAmount.ToString("C2")</td>
                            </tr>
                            <tr>
                                <td colspan="6" class="px-4 py-2 text-right font-bold">Total:</td>
                                <td class="px-4 py-2 text-right font-bold text-lg">@Model.TotalAmount.ToString("C2")</td>
                            </tr>
                            @if (Model.PaidAmount > 0)
                            {
                                <tr>
                                    <td colspan="6" class="px-4 py-2 text-right text-emerald-600">Paid:</td>
                                    <td class="px-4 py-2 text-right text-emerald-600">@Model.PaidAmount.ToString("C2")</td>
                                </tr>
                            }
                            <tr>
                                <td colspan="6" class="px-4 py-2 text-right font-bold">Balance Due:</td>
                                <td class="px-4 py-2 text-right font-bold text-lg @(Model.BalanceDue > 0 ? "text-red-600" : "text-emerald-600")">
                                    @Model.BalanceDue.ToString("C2")
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Payment History -->
    @if (Model.Payments?.Any() == true)
    {
        <div class="col-span-12">
            <div class="bg-white rounded-lg shadow-md">
                <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                    <h6 class="font-medium text-gray-900 mb-0">Payment History</h6>
                </div>
                <div class="p-0">
                    <div class="overflow-x-auto">
                        <table class="w-full text-sm text-left">
                            <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                                <tr>
                                    <th class="px-4 py-3">Payment #</th>
                                    <th class="px-4 py-3">Date</th>
                                    <th class="px-4 py-3">Method</th>
                                    <th class="px-4 py-3">Reference</th>
                                    <th class="px-4 py-3 text-right">Amount</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var payment in Model.Payments.OrderBy(p => p.PaymentDate))
                                {
                                    <tr class="border-b">
                                        <td class="px-4 py-3 font-medium text-gray-900">@payment.PaymentNumber</td>
                                        <td class="px-4 py-3">@payment.PaymentDate.ToString("dd MMM yyyy")</td>
                                        <td class="px-4 py-3">
                                            <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-50 text-gray-800">@payment.PaymentMethod</span>
                                        </td>
                                        <td class="px-4 py-3">@(payment.Reference ?? "-")</td>
                                        <td class="px-4 py-3 text-right font-medium text-emerald-600">@payment.Amount.ToString("C2")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Notes -->
    @if (!string.IsNullOrEmpty(Model.Notes))
    {
        <div class="col-span-12">
            <div class="bg-white rounded-lg shadow-md">
                <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                    <h6 class="font-medium text-gray-900 mb-0">Notes</h6>
                </div>
                <div class="p-6">
                    <p class="mb-0 text-gray-700">@Model.Notes</p>
                </div>
            </div>
        </div>
    }
</div>

<div class="flex items-center p-4 border-t border-gray-200 rounded-b gap-2 mt-4 px-0 pb-0">
    @if (Model.Status == InvoiceStatus.Draft || Model.Status == InvoiceStatus.Pending)
    {
        <button type="button" class="text-primary-700 hover:text-white border border-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5" onclick="editInvoice('@Model.Id')" data-modal-hide="detailsModal">
            <i class="bi bi-pencil mr-2"></i>Edit
        </button>
    }
    @if (Model.BalanceDue > 0 && Model.Status != InvoiceStatus.Draft && Model.Status != InvoiceStatus.Void && Model.Status != InvoiceStatus.Cancelled)
    {
        <button type="button" class="text-white bg-emerald-600 hover:bg-emerald-700 focus:ring-4 focus:ring-emerald-300 font-medium rounded-lg text-sm px-5 py-2.5" onclick="showPaymentModal('@Model.Id', '@Model.BalanceDue.ToString("C2")')" data-modal-hide="detailsModal">
            <i class="bi bi-cash mr-2"></i>Record Payment
        </button>
    }
    <button type="button" class="text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5" data-modal-hide="detailsModal">Close</button>
</div>
