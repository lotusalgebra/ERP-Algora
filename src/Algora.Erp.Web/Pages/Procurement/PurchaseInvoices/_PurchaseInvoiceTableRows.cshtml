@model Algora.Erp.Web.Pages.Procurement.PurchaseInvoices.PurchaseInvoicesTableViewModel
@using Algora.Erp.Domain.Entities.Finance

@if (!Model.Invoices.Any())
{
    <tr>
        <td colspan="8" class="text-center py-5">
            <div class="text-gray-500">
                <i class="bi bi-receipt text-4xl block mb-3"></i>
                <p class="mb-0">No purchase invoices found</p>
            </div>
        </td>
    </tr>
}
else
{
    @foreach (var invoice in Model.Invoices)
    {
        var statusClass = invoice.Status switch
        {
            InvoiceStatus.Draft => "bg-gray-100 text-gray-800",
            InvoiceStatus.Pending => "bg-amber-100 text-amber-800",
            InvoiceStatus.Sent => "bg-blue-100 text-blue-800",
            InvoiceStatus.PartiallyPaid => "bg-primary-100 text-primary-800",
            InvoiceStatus.Paid => "bg-emerald-100 text-emerald-800",
            InvoiceStatus.Overdue => "bg-red-100 text-red-800",
            InvoiceStatus.Void => "bg-gray-800 text-white",
            InvoiceStatus.Cancelled => "bg-gray-800 text-white",
            _ => "bg-gray-100 text-gray-800"
        };

        var isOverdue = invoice.Status != InvoiceStatus.Paid &&
                        invoice.Status != InvoiceStatus.Void &&
                        invoice.Status != InvoiceStatus.Cancelled &&
                        invoice.DueDate < DateTime.Today;

        var supplierName = invoice.SupplierId.HasValue && Model.SupplierNames.TryGetValue(invoice.SupplierId.Value, out var name)
            ? name
            : invoice.BillingName ?? "-";

        <tr class="bg-white border-b hover:bg-gray-50">
            <td class="px-6 py-4">
                <a href="/Procurement/PurchaseInvoices/Details/@invoice.Id" class="text-primary-600 hover:underline font-medium">
                    @invoice.InvoiceNumber
                </a>
                @if (!string.IsNullOrEmpty(invoice.Reference))
                {
                    <br /><small class="text-gray-500">Ref: @invoice.Reference</small>
                }
            </td>
            <td class="px-6 py-4">
                <span class="truncate inline-block" style="max-width: 150px;">
                    @supplierName
                </span>
            </td>
            <td class="px-6 py-4">@invoice.InvoiceDate.ToString("dd MMM yyyy")</td>
            <td class="px-6 py-4">
                <span class="@(isOverdue ? "text-red-600 font-medium" : "")">
                    @invoice.DueDate.ToString("dd MMM yyyy")
                </span>
                @if (isOverdue)
                {
                    <i class="bi bi-exclamation-triangle-fill text-red-600 ml-1" title="Overdue"></i>
                }
            </td>
            <td class="px-6 py-4 text-right font-medium">@invoice.TotalAmount.ToString("C2")</td>
            <td class="px-6 py-4 text-right">
                @if (invoice.BalanceDue > 0)
                {
                    <span class="text-red-600 font-medium">@invoice.BalanceDue.ToString("C2")</span>
                }
                else
                {
                    <span class="text-emerald-600">Paid</span>
                }
            </td>
            <td class="px-6 py-4">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @statusClass">@invoice.Status</span>
            </td>
            <td class="px-6 py-4 text-right">
                <button class="text-gray-700 hover:text-white border border-gray-700 hover:bg-gray-800 focus:ring-4 focus:outline-none focus:ring-gray-300 font-medium rounded-lg text-xs px-3 py-2" type="button" id="dropdownPInv@(invoice.Id)" data-dropdown-toggle="dropdownMenuPInv@(invoice.Id)" data-dropdown-placement="bottom-end">
                    <i class="bi bi-three-dots-vertical"></i>
                </button>
                <div class="z-50 hidden absolute right-0 mt-2 bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuPInv@(invoice.Id)">
                    <ul class="py-2 text-sm text-gray-700">
                        <li>
                            <a class="block px-4 py-2 hover:bg-gray-100" href="/Procurement/PurchaseInvoices/Details/@invoice.Id">
                                <i class="bi bi-eye mr-2"></i>View Details
                            </a>
                        </li>
                        @if (invoice.Status == InvoiceStatus.Draft || invoice.Status == InvoiceStatus.Pending)
                        {
                            <li>
                                <a class="block px-4 py-2 hover:bg-gray-100" href="/Procurement/PurchaseInvoices/Edit/@invoice.Id">
                                    <i class="bi bi-pencil mr-2"></i>Edit
                                </a>
                            </li>
                        }
                        @if (invoice.Status == InvoiceStatus.Pending)
                        {
                            <li><hr class="my-1 border-gray-200"></li>
                            <li>
                                <a class="block px-4 py-2 hover:bg-gray-100 text-blue-600 cursor-pointer"
                                   hx-post="?handler=UpdateStatus&id=@invoice.Id&status=Sent"
                                   hx-target="#invoicesTableBody"
                                   hx-swap="innerHTML"
                                   hx-confirm="Mark this invoice as received?">
                                    <i class="bi bi-send mr-2"></i>Mark as Received
                                </a>
                            </li>
                        }
                        @if (invoice.BalanceDue > 0 && invoice.Status != InvoiceStatus.Draft && invoice.Status != InvoiceStatus.Void && invoice.Status != InvoiceStatus.Cancelled)
                        {
                            <li><hr class="my-1 border-gray-200"></li>
                            <li>
                                <a class="block px-4 py-2 hover:bg-gray-100 text-emerald-600 cursor-pointer"
                                   hx-get="?handler=PaymentForm&id=@invoice.Id"
                                   hx-target="#formModalBody"
                                   data-modal-target="formModal" data-modal-toggle="formModal">
                                    <i class="bi bi-cash mr-2"></i>Record Payment
                                </a>
                            </li>
                        }
                        @if (invoice.Status != InvoiceStatus.Void && invoice.Status != InvoiceStatus.Cancelled && invoice.Status != InvoiceStatus.Paid)
                        {
                            <li><hr class="my-1 border-gray-200"></li>
                            <li>
                                <a class="block px-4 py-2 hover:bg-gray-100 text-red-600 cursor-pointer"
                                   hx-post="?handler=UpdateStatus&id=@invoice.Id&status=Void"
                                   hx-target="#invoicesTableBody"
                                   hx-swap="innerHTML"
                                   hx-confirm="Are you sure you want to void this invoice?">
                                    <i class="bi bi-x-circle mr-2"></i>Void
                                </a>
                            </li>
                        }
                        @if (invoice.Status == InvoiceStatus.Draft || invoice.Status == InvoiceStatus.Pending)
                        {
                            <li>
                                <a class="block px-4 py-2 hover:bg-gray-100 text-red-600 cursor-pointer"
                                   hx-delete="?handler=Delete&id=@invoice.Id"
                                   hx-target="#invoicesTableBody"
                                   hx-swap="innerHTML"
                                   hx-confirm="Are you sure you want to delete this invoice?">
                                    <i class="bi bi-trash mr-2"></i>Delete
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="8" class="px-6 py-3">
            @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", Model.Pagination)
        </td>
    </tr>
}
