@model Algora.Erp.Web.Pages.Procurement.GoodsReceipt.GrnTableViewModel
@using Algora.Erp.Domain.Entities.Procurement

@if (!Model.GoodsReceiptNotes.Any())
{
    <tr>
        <td colspan="9" class="text-center py-5">
            <div class="text-gray-500">
                <i class="bi bi-inbox text-4xl block mb-3"></i>
                <p class="mb-0">No goods receipt notes found</p>
            </div>
        </td>
    </tr>
}
else
{
    @foreach (var grn in Model.GoodsReceiptNotes)
    {
        var statusClass = grn.Status switch
        {
            GoodsReceiptStatus.Draft => "bg-gray-100 text-gray-800",
            GoodsReceiptStatus.Pending => "bg-blue-100 text-blue-800",
            GoodsReceiptStatus.QCPending => "bg-amber-100 text-amber-800",
            GoodsReceiptStatus.QCCompleted => "bg-primary-100 text-primary-800",
            GoodsReceiptStatus.Accepted => "bg-emerald-100 text-emerald-800",
            GoodsReceiptStatus.PartiallyAccepted => "bg-amber-100 text-amber-800",
            GoodsReceiptStatus.Rejected => "bg-red-100 text-red-800",
            GoodsReceiptStatus.Cancelled => "bg-gray-800 text-white",
            _ => "bg-gray-100 text-gray-800"
        };

        <tr class="bg-white border-b hover:bg-gray-50">
            <td class="px-6 py-4">
                <a href="/Procurement/GoodsReceipt/Details/@grn.Id" class="text-primary-600 hover:underline font-medium">
                    @grn.GrnNumber
                </a>
            </td>
            <td class="px-6 py-4">
                <span class="truncate inline-block" style="max-width: 150px;">
                    @grn.SupplierName
                </span>
            </td>
            <td class="px-6 py-4">
                @if (!string.IsNullOrEmpty(grn.PurchaseOrderNumber))
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">@grn.PurchaseOrderNumber</span>
                }
                else
                {
                    <span class="text-gray-500">-</span>
                }
            </td>
            <td class="px-6 py-4">@grn.GrnDate.ToString("dd MMM yyyy")</td>
            <td class="px-6 py-4 text-center">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">@grn.Lines.Count items</span>
            </td>
            <td class="px-6 py-4 text-right">@grn.TotalReceivedQuantity.ToString("N2")</td>
            <td class="px-6 py-4 text-right">@grn.TotalValue.ToString("C2")</td>
            <td class="px-6 py-4">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @statusClass">@grn.Status</span>
            </td>
            <td class="px-6 py-4 text-right">
                <button class="text-gray-700 hover:text-white border border-gray-700 hover:bg-gray-800 focus:ring-4 focus:outline-none focus:ring-gray-300 font-medium rounded-lg text-xs px-3 py-2" type="button" id="dropdownGrn@(grn.Id)" data-dropdown-toggle="dropdownMenuGrn@(grn.Id)" data-dropdown-placement="bottom-end">
                    <i class="bi bi-three-dots-vertical"></i>
                </button>
                <div class="z-50 hidden absolute right-0 mt-2 bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuGrn@(grn.Id)">
                    <ul class="py-2 text-sm text-gray-700">
                        <li>
                            <a class="block px-4 py-2 hover:bg-gray-100" href="/Procurement/GoodsReceipt/Details/@grn.Id">
                                <i class="bi bi-eye mr-2"></i>View Details
                            </a>
                        </li>
                        @if (grn.Status == GoodsReceiptStatus.Draft || grn.Status == GoodsReceiptStatus.Pending)
                        {
                            <li>
                                <a class="block px-4 py-2 hover:bg-gray-100" href="/Procurement/GoodsReceipt/Edit/@grn.Id">
                                    <i class="bi bi-pencil mr-2"></i>Edit
                                </a>
                            </li>
                        }
                        @if (grn.Status == GoodsReceiptStatus.QCPending)
                        {
                            <li><hr class="my-1 border-gray-200"></li>
                            <li>
                                <a class="block px-4 py-2 hover:bg-gray-100 text-emerald-600" href="/Quality/Inspections?grnId=@grn.Id">
                                    <i class="bi bi-clipboard-check mr-2"></i>Start QC Inspection
                                </a>
                            </li>
                        }
                        @if (grn.Status == GoodsReceiptStatus.QCCompleted)
                        {
                            <li><hr class="my-1 border-gray-200"></li>
                            <li>
                                <a class="block px-4 py-2 hover:bg-gray-100 text-emerald-600 cursor-pointer"
                                   hx-post="?handler=UpdateStatus&id=@grn.Id&status=Accepted"
                                   hx-target="#grnTableBody"
                                   hx-confirm="Accept this GRN?">
                                    <i class="bi bi-check-circle mr-2"></i>Accept GRN
                                </a>
                            </li>
                        }
                        @if (grn.Status == GoodsReceiptStatus.Pending)
                        {
                            <li><hr class="my-1 border-gray-200"></li>
                            <li>
                                <a class="block px-4 py-2 hover:bg-gray-100 text-emerald-600 cursor-pointer"
                                   hx-post="?handler=UpdateStatus&id=@grn.Id&status=Accepted"
                                   hx-target="#grnTableBody"
                                   hx-confirm="Accept this GRN without QC?">
                                    <i class="bi bi-check-circle mr-2"></i>Accept (No QC)
                                </a>
                            </li>
                            <li>
                                <a class="block px-4 py-2 hover:bg-gray-100 text-amber-600 cursor-pointer"
                                   hx-post="?handler=UpdateStatus&id=@grn.Id&status=QCPending"
                                   hx-target="#grnTableBody"
                                   hx-confirm="Send this GRN to QC?">
                                    <i class="bi bi-clipboard-check mr-2"></i>Send to QC
                                </a>
                            </li>
                        }
                        @if (grn.Status != GoodsReceiptStatus.Cancelled && grn.Status != GoodsReceiptStatus.Accepted)
                        {
                            <li><hr class="my-1 border-gray-200"></li>
                            <li>
                                <a class="block px-4 py-2 hover:bg-gray-100 text-red-600 cursor-pointer"
                                   hx-post="?handler=UpdateStatus&id=@grn.Id&status=Cancelled"
                                   hx-target="#grnTableBody"
                                   hx-confirm="Cancel this GRN?">
                                    <i class="bi bi-x-circle mr-2"></i>Cancel
                                </a>
                            </li>
                        }
                        @if (grn.Status == GoodsReceiptStatus.Draft)
                        {
                            <li>
                                <a class="block px-4 py-2 hover:bg-gray-100 text-red-600 cursor-pointer"
                                   hx-delete="?handler=Delete&id=@grn.Id"
                                   hx-target="#grnTableBody"
                                   hx-confirm="Are you sure you want to delete this GRN?">
                                    <i class="bi bi-trash mr-2"></i>Delete
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="9" class="px-6 py-3">
            @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", Model.Pagination)
        </td>
    </tr>
}
<script>
    // Re-initialize Flowbite dropdowns and HTMX after content swap
    if (typeof initFlowbite === 'function') { initFlowbite(); }
    if (typeof htmx !== 'undefined') { htmx.process(document.body); }
</script>