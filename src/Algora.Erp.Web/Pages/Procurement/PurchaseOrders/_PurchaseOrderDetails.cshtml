@model Algora.Erp.Domain.Entities.Procurement.PurchaseOrder

<div class="row g-4">
    <!-- Header -->
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h5 class="mb-1">@Model.OrderNumber</h5>
                <p class="text-muted mb-0">
                    @if (!string.IsNullOrEmpty(Model.Reference))
                    {
                        <span class="me-3">Ref: @Model.Reference</span>
                    }
                    <span>Created: @Model.OrderDate.ToString("MMM dd, yyyy")</span>
                </p>
            </div>
            <span class="badge fs-6 @(Model.Status switch {
                Algora.Erp.Domain.Entities.Procurement.PurchaseOrderStatus.Draft => "bg-secondary",
                Algora.Erp.Domain.Entities.Procurement.PurchaseOrderStatus.Pending => "bg-warning text-dark",
                Algora.Erp.Domain.Entities.Procurement.PurchaseOrderStatus.Approved => "bg-info",
                Algora.Erp.Domain.Entities.Procurement.PurchaseOrderStatus.Sent => "bg-primary",
                Algora.Erp.Domain.Entities.Procurement.PurchaseOrderStatus.Received => "bg-success",
                Algora.Erp.Domain.Entities.Procurement.PurchaseOrderStatus.Paid => "bg-success",
                Algora.Erp.Domain.Entities.Procurement.PurchaseOrderStatus.Cancelled => "bg-danger",
                _ => "bg-secondary"
            })">
                @Model.Status
            </span>
        </div>
    </div>

    <!-- Supplier Info -->
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header bg-light">
                <h6 class="mb-0">Supplier</h6>
            </div>
            <div class="card-body">
                <h6 class="mb-1">@Model.Supplier?.Name</h6>
                <p class="text-muted small mb-2">@Model.Supplier?.Code</p>
                @if (!string.IsNullOrEmpty(Model.Supplier?.Email))
                {
                    <p class="mb-1"><i class="bi bi-envelope me-2"></i>@Model.Supplier.Email</p>
                }
                @if (!string.IsNullOrEmpty(Model.Supplier?.Phone))
                {
                    <p class="mb-1"><i class="bi bi-telephone me-2"></i>@Model.Supplier.Phone</p>
                }
                @if (!string.IsNullOrEmpty(Model.Supplier?.Address))
                {
                    <p class="mb-0 text-muted small">
                        <i class="bi bi-geo-alt me-2"></i>
                        @Model.Supplier.Address, @Model.Supplier.City @Model.Supplier.State @Model.Supplier.PostalCode
                    </p>
                }
            </div>
        </div>
    </div>

    <!-- Order Details -->
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header bg-light">
                <h6 class="mb-0">Order Details</h6>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-6 mb-2">
                        <small class="text-muted d-block">Order Date</small>
                        <span>@Model.OrderDate.ToString("MMM dd, yyyy")</span>
                    </div>
                    <div class="col-6 mb-2">
                        <small class="text-muted d-block">Due Date</small>
                        <span>@(Model.DueDate?.ToString("MMM dd, yyyy") ?? "—")</span>
                    </div>
                    <div class="col-6 mb-2">
                        <small class="text-muted d-block">Expected Delivery</small>
                        <span>@(Model.ExpectedDeliveryDate?.ToString("MMM dd, yyyy") ?? "—")</span>
                    </div>
                    <div class="col-6 mb-2">
                        <small class="text-muted d-block">Currency</small>
                        <span>@Model.Currency</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Order Lines -->
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-light">
                <h6 class="mb-0">Order Items</h6>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-sm mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>#</th>
                                <th>Product</th>
                                <th class="text-end">Qty</th>
                                <th class="text-end">Unit Price</th>
                                <th class="text-end">Discount</th>
                                <th class="text-end">Tax</th>
                                <th class="text-end">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Lines != null && Model.Lines.Any())
                            {
                                foreach (var line in Model.Lines.OrderBy(l => l.LineNumber))
                                {
                                    <tr>
                                        <td>@line.LineNumber</td>
                                        <td>
                                            <strong>@line.ProductName</strong>
                                            <br><small class="text-muted">@line.ProductSku</small>
                                        </td>
                                        <td class="text-end">@line.Quantity.ToString("N2") @line.UnitOfMeasure</td>
                                        <td class="text-end">@line.UnitPrice.ToString("C2")</td>
                                        <td class="text-end">
                                            @if (line.DiscountPercent > 0)
                                            {
                                                <span>@line.DiscountPercent.ToString("N1")%</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">—</span>
                                            }
                                        </td>
                                        <td class="text-end">@line.TaxAmount.ToString("C2")</td>
                                        <td class="text-end fw-medium">@line.LineTotal.ToString("C2")</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted py-4">No items</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Totals -->
    <div class="col-md-6 offset-md-6">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span>Subtotal:</span>
                    <span>@Model.SubTotal.ToString("C2")</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Tax:</span>
                    <span>@Model.TaxAmount.ToString("C2")</span>
                </div>
                @if (Model.ShippingAmount > 0)
                {
                    <div class="d-flex justify-content-between mb-2">
                        <span>Shipping:</span>
                        <span>@Model.ShippingAmount.ToString("C2")</span>
                    </div>
                }
                @if (Model.DiscountAmount > 0)
                {
                    <div class="d-flex justify-content-between mb-2 text-success">
                        <span>Discount:</span>
                        <span>-@Model.DiscountAmount.ToString("C2")</span>
                    </div>
                }
                <hr>
                <div class="d-flex justify-content-between fw-bold fs-5">
                    <span>Total:</span>
                    <span>@Model.TotalAmount.ToString("C2")</span>
                </div>
                @if (Model.AmountPaid > 0)
                {
                    <div class="d-flex justify-content-between text-muted mt-2">
                        <span>Paid:</span>
                        <span>@Model.AmountPaid.ToString("C2")</span>
                    </div>
                    <div class="d-flex justify-content-between text-danger fw-medium">
                        <span>Balance Due:</span>
                        <span>@Model.AmountDue.ToString("C2")</span>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Notes -->
    @if (!string.IsNullOrEmpty(Model.Notes))
    {
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h6 class="mb-0">Notes</h6>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.Notes</p>
                </div>
            </div>
        </div>
    }
</div>
