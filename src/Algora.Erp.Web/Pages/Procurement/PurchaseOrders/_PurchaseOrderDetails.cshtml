@model Algora.Erp.Domain.Entities.Procurement.PurchaseOrder

@{
    var statusClass = Model.Status switch
    {
        Algora.Erp.Domain.Entities.Procurement.PurchaseOrderStatus.Draft => "bg-gray-100 text-gray-800",
        Algora.Erp.Domain.Entities.Procurement.PurchaseOrderStatus.Pending => "bg-amber-100 text-amber-800",
        Algora.Erp.Domain.Entities.Procurement.PurchaseOrderStatus.Approved => "bg-blue-100 text-blue-800",
        Algora.Erp.Domain.Entities.Procurement.PurchaseOrderStatus.Sent => "bg-primary-100 text-primary-800",
        Algora.Erp.Domain.Entities.Procurement.PurchaseOrderStatus.Received => "bg-emerald-100 text-emerald-800",
        Algora.Erp.Domain.Entities.Procurement.PurchaseOrderStatus.Paid => "bg-emerald-100 text-emerald-800",
        Algora.Erp.Domain.Entities.Procurement.PurchaseOrderStatus.Cancelled => "bg-red-100 text-red-800",
        _ => "bg-gray-100 text-gray-800"
    };
}

<div class="grid grid-cols-12 gap-4">
    <!-- Header -->
    <div class="col-span-12">
        <div class="flex justify-between items-start">
            <div>
                <h5 class="text-xl font-semibold text-gray-900 mb-1">@Model.OrderNumber</h5>
                <p class="text-gray-500 mb-0">
                    @if (!string.IsNullOrEmpty(Model.Reference))
                    {
                        <span class="mr-3">Ref: @Model.Reference</span>
                    }
                    <span>Created: @Model.OrderDate.ToString("MMM dd, yyyy")</span>
                </p>
            </div>
            <span class="text-sm font-medium px-3 py-1 rounded-full @statusClass">
                @Model.Status
            </span>
        </div>
    </div>

    <!-- Supplier Info -->
    <div class="col-span-12 md:col-span-6">
        <div class="bg-white rounded-lg shadow-md h-full">
            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                <h6 class="font-medium text-gray-900 mb-0">Supplier</h6>
            </div>
            <div class="p-6">
                <h6 class="font-semibold text-gray-900 mb-1">@Model.Supplier?.Name</h6>
                <p class="text-gray-500 text-sm mb-2">@Model.Supplier?.Code</p>
                @if (!string.IsNullOrEmpty(Model.Supplier?.Email))
                {
                    <p class="mb-1 text-gray-700"><i class="bi bi-envelope mr-2"></i>@Model.Supplier.Email</p>
                }
                @if (!string.IsNullOrEmpty(Model.Supplier?.Phone))
                {
                    <p class="mb-1 text-gray-700"><i class="bi bi-telephone mr-2"></i>@Model.Supplier.Phone</p>
                }
                @if (!string.IsNullOrEmpty(Model.Supplier?.Address))
                {
                    <p class="mb-0 text-gray-500 text-sm">
                        <i class="bi bi-geo-alt mr-2"></i>
                        @Model.Supplier.Address, @Model.Supplier.City @Model.Supplier.State @Model.Supplier.PostalCode
                    </p>
                }
            </div>
        </div>
    </div>

    <!-- Order Details -->
    <div class="col-span-12 md:col-span-6">
        <div class="bg-white rounded-lg shadow-md h-full">
            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                <h6 class="font-medium text-gray-900 mb-0">Order Details</h6>
            </div>
            <div class="p-6">
                <div class="grid grid-cols-2 gap-2">
                    <div class="mb-2">
                        <small class="text-gray-500 block">Order Date</small>
                        <span class="text-gray-900">@Model.OrderDate.ToString("MMM dd, yyyy")</span>
                    </div>
                    <div class="mb-2">
                        <small class="text-gray-500 block">Due Date</small>
                        <span class="text-gray-900">@(Model.DueDate?.ToString("MMM dd, yyyy") ?? "—")</span>
                    </div>
                    <div class="mb-2">
                        <small class="text-gray-500 block">Expected Delivery</small>
                        <span class="text-gray-900">@(Model.ExpectedDeliveryDate?.ToString("MMM dd, yyyy") ?? "—")</span>
                    </div>
                    <div class="mb-2">
                        <small class="text-gray-500 block">Currency</small>
                        <span class="text-gray-900">@Model.Currency</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Order Lines -->
    <div class="col-span-12">
        <div class="bg-white rounded-lg shadow-md">
            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                <h6 class="font-medium text-gray-900 mb-0">Order Items</h6>
            </div>
            <div class="p-0">
                <div class="overflow-x-auto">
                    <table class="w-full text-sm text-left">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                            <tr>
                                <th class="px-4 py-3">#</th>
                                <th class="px-4 py-3">Product</th>
                                <th class="px-4 py-3 text-right">Qty</th>
                                <th class="px-4 py-3 text-right">Unit Price</th>
                                <th class="px-4 py-3 text-right">Discount</th>
                                <th class="px-4 py-3 text-right">Tax</th>
                                <th class="px-4 py-3 text-right">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Lines != null && Model.Lines.Any())
                            {
                                foreach (var line in Model.Lines.OrderBy(l => l.LineNumber))
                                {
                                    <tr class="border-b">
                                        <td class="px-4 py-3">@line.LineNumber</td>
                                        <td class="px-4 py-3">
                                            <strong class="text-gray-900">@line.ProductName</strong>
                                            <br><small class="text-gray-500">@line.ProductSku</small>
                                        </td>
                                        <td class="px-4 py-3 text-right">@line.Quantity.ToString("N2") @line.UnitOfMeasure</td>
                                        <td class="px-4 py-3 text-right">@line.UnitPrice.ToString("C2")</td>
                                        <td class="px-4 py-3 text-right">
                                            @if (line.DiscountPercent > 0)
                                            {
                                                <span>@line.DiscountPercent.ToString("N1")%</span>
                                            }
                                            else
                                            {
                                                <span class="text-gray-500">—</span>
                                            }
                                        </td>
                                        <td class="px-4 py-3 text-right">@line.TaxAmount.ToString("C2")</td>
                                        <td class="px-4 py-3 text-right font-medium">@line.LineTotal.ToString("C2")</td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-gray-500 py-4">No items</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Totals -->
    <div class="col-span-12 md:col-span-6 md:col-start-7">
        <div class="bg-white rounded-lg shadow-md">
            <div class="p-6">
                <div class="flex justify-between mb-2">
                    <span class="text-gray-700">Subtotal:</span>
                    <span>@Model.SubTotal.ToString("C2")</span>
                </div>
                <div class="flex justify-between mb-2">
                    <span class="text-gray-700">Tax:</span>
                    <span>@Model.TaxAmount.ToString("C2")</span>
                </div>
                @if (Model.ShippingAmount > 0)
                {
                    <div class="flex justify-between mb-2">
                        <span class="text-gray-700">Shipping:</span>
                        <span>@Model.ShippingAmount.ToString("C2")</span>
                    </div>
                }
                @if (Model.DiscountAmount > 0)
                {
                    <div class="flex justify-between mb-2 text-emerald-600">
                        <span>Discount:</span>
                        <span>-@Model.DiscountAmount.ToString("C2")</span>
                    </div>
                }
                <hr class="my-2 border-gray-200">
                <div class="flex justify-between font-bold text-lg">
                    <span>Total:</span>
                    <span>@Model.TotalAmount.ToString("C2")</span>
                </div>
                @if (Model.AmountPaid > 0)
                {
                    <div class="flex justify-between text-gray-500 mt-2">
                        <span>Paid:</span>
                        <span>@Model.AmountPaid.ToString("C2")</span>
                    </div>
                    <div class="flex justify-between text-red-600 font-medium">
                        <span>Balance Due:</span>
                        <span>@Model.AmountDue.ToString("C2")</span>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Notes -->
    @if (!string.IsNullOrEmpty(Model.Notes))
    {
        <div class="col-span-12">
            <div class="bg-white rounded-lg shadow-md">
                <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                    <h6 class="font-medium text-gray-900 mb-0">Notes</h6>
                </div>
                <div class="p-6">
                    <p class="mb-0 text-gray-700">@Model.Notes</p>
                </div>
            </div>
        </div>
    }
</div>
