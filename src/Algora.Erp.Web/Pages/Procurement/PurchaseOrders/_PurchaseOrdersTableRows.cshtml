@model Algora.Erp.Web.Pages.Procurement.PurchaseOrders.PurchaseOrdersTableViewModel
@using Algora.Erp.Domain.Entities.Procurement

@if (Model.PurchaseOrders.Count == 0)
{
    <tr>
        <td colspan="8" class="text-center py-5">
            <div class="text-gray-500">
                <i class="bi bi-file-earmark-text text-4xl block mb-3"></i>
                <p class="mb-0">No purchase orders found</p>
            </div>
        </td>
    </tr>
}
else
{
    @foreach (var order in Model.PurchaseOrders)
    {
        var isOverdue = order.DueDate.HasValue && order.DueDate < DateTime.UtcNow &&
                       order.Status != PurchaseOrderStatus.Received &&
                       order.Status != PurchaseOrderStatus.Paid &&
                       order.Status != PurchaseOrderStatus.Cancelled;

        var statusClass = order.Status switch
        {
            PurchaseOrderStatus.Draft => "bg-gray-100 text-gray-800",
            PurchaseOrderStatus.Pending => "bg-amber-100 text-amber-800",
            PurchaseOrderStatus.Approved => "bg-blue-100 text-blue-800",
            PurchaseOrderStatus.Sent => "bg-primary-100 text-primary-800",
            PurchaseOrderStatus.PartiallyReceived => "bg-blue-100 text-blue-800",
            PurchaseOrderStatus.Received => "bg-emerald-100 text-emerald-800",
            PurchaseOrderStatus.Paid => "bg-emerald-100 text-emerald-800",
            PurchaseOrderStatus.Cancelled => "bg-red-100 text-red-800",
            PurchaseOrderStatus.OnHold => "bg-amber-100 text-amber-800",
            _ => "bg-gray-100 text-gray-800"
        };

        var lineCount = order.Lines?.Count ?? 0;

        <tr class="bg-white border-b hover:bg-gray-50">
            <td class="px-6 py-4">
                <a class="text-primary-600 hover:underline font-medium cursor-pointer"
                   hx-get="?handler=Details&id=@order.Id"
                   hx-target="#detailsModalBody"
                   data-modal-target="detailsModal" data-modal-toggle="detailsModal">
                    @order.OrderNumber
                </a>
                @if (!string.IsNullOrEmpty(order.Reference))
                {
                    <br><small class="text-gray-500">Ref: @order.Reference</small>
                }
            </td>
            <td class="px-6 py-4">
                <div class="font-medium text-gray-900">@order.Supplier?.Name</div>
                <small class="text-gray-500">@order.Supplier?.Code</small>
            </td>
            <td class="px-6 py-4">@order.OrderDate.ToString("MMM dd, yyyy")</td>
            <td class="px-6 py-4">
                @if (order.DueDate.HasValue)
                {
                    if (isOverdue)
                    {
                        <span class="text-red-600">
                            <i class="bi bi-exclamation-circle mr-1"></i>@order.DueDate.Value.ToString("MMM dd, yyyy")
                        </span>
                    }
                    else
                    {
                        @order.DueDate.Value.ToString("MMM dd, yyyy")
                    }
                }
                else
                {
                    <span class="text-gray-500">â€”</span>
                }
            </td>
            <td class="px-6 py-4 text-center">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">@lineCount</span>
            </td>
            <td class="px-6 py-4 text-right font-medium">@order.TotalAmount.ToString("C2")</td>
            <td class="px-6 py-4">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @statusClass">@order.Status</span>
            </td>
            <td class="px-6 py-4 text-right">
                <div class="relative inline-block">
                    <button type="button" class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg"
                            id="dropdownPO@(order.Id)" data-dropdown-toggle="dropdownMenuPO@(order.Id)" data-dropdown-placement="bottom-end">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <div class="z-50 hidden absolute right-0 mt-2 bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuPO@(order.Id)">
                        <ul class="py-2 text-sm text-gray-700">
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100 cursor-pointer"
                                   hx-get="?handler=Details&id=@order.Id"
                                   hx-target="#detailsModalBody"
                                   data-modal-target="detailsModal" data-modal-toggle="detailsModal">
                                    <i class="bi bi-eye mr-2"></i> View Details
                                </a>
                            </li>
                            @if (order.Status == PurchaseOrderStatus.Draft)
                            {
                                <li>
                                    <a class="flex items-center px-4 py-2 hover:bg-gray-100 cursor-pointer"
                                       hx-get="?handler=EditForm&id=@order.Id"
                                       hx-target="#formModalBody"
                                       data-modal-target="formModal" data-modal-toggle="formModal">
                                        <i class="bi bi-pencil mr-2"></i> Edit
                                    </a>
                                </li>
                                <li>
                                    <a class="flex items-center px-4 py-2 text-amber-600 hover:bg-gray-100 cursor-pointer"
                                       hx-post="?handler=UpdateStatus&id=@order.Id&status=Pending"
                                       hx-target="#ordersTableBody"
                                       hx-confirm="Submit this order for approval?">
                                        <i class="bi bi-send mr-2"></i> Submit for Approval
                                    </a>
                                </li>
                            }
                            @if (order.Status == PurchaseOrderStatus.Pending)
                            {
                                <li>
                                    <a class="flex items-center px-4 py-2 text-emerald-600 hover:bg-gray-100 cursor-pointer"
                                       hx-post="?handler=UpdateStatus&id=@order.Id&status=Approved"
                                       hx-target="#ordersTableBody"
                                       hx-confirm="Approve this purchase order?">
                                        <i class="bi bi-check-lg mr-2"></i> Approve
                                    </a>
                                </li>
                            }
                            @if (order.Status == PurchaseOrderStatus.Approved)
                            {
                                <li>
                                    <a class="flex items-center px-4 py-2 text-primary-600 hover:bg-gray-100 cursor-pointer"
                                       hx-post="?handler=UpdateStatus&id=@order.Id&status=Sent"
                                       hx-target="#ordersTableBody"
                                       hx-confirm="Mark this order as sent to supplier?">
                                        <i class="bi bi-envelope mr-2"></i> Mark as Sent
                                    </a>
                                </li>
                            }
                            @if (order.Status == PurchaseOrderStatus.Sent)
                            {
                                <li>
                                    <a class="flex items-center px-4 py-2 text-emerald-600 hover:bg-gray-100 cursor-pointer"
                                       hx-post="?handler=UpdateStatus&id=@order.Id&status=Received"
                                       hx-target="#ordersTableBody"
                                       hx-confirm="Mark this order as received?">
                                        <i class="bi bi-box-arrow-in-down mr-2"></i> Mark Received
                                    </a>
                                </li>
                            }
                        </ul>
                        @if (order.Status == PurchaseOrderStatus.Draft)
                        {
                            <div class="py-2">
                                <a class="flex items-center px-4 py-2 text-red-600 hover:bg-gray-100 cursor-pointer"
                                   hx-delete="?handler=Delete&id=@order.Id"
                                   hx-target="#ordersTableBody"
                                   hx-confirm="Are you sure you want to delete this purchase order?">
                                    <i class="bi bi-trash mr-2"></i> Delete
                                </a>
                            </div>
                        }
                        @if (order.Status == PurchaseOrderStatus.Pending)
                        {
                            <div class="py-2">
                                <a class="flex items-center px-4 py-2 text-red-600 hover:bg-gray-100 cursor-pointer"
                                   hx-post="?handler=UpdateStatus&id=@order.Id&status=Cancelled"
                                   hx-target="#ordersTableBody"
                                   hx-confirm="Reject this purchase order?">
                                    <i class="bi bi-x-lg mr-2"></i> Reject
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="8" class="px-6 py-3">
            @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", Model.Pagination)
        </td>
    </tr>
}
<script>
    // Re-initialize Flowbite dropdowns and HTMX after content swap
    if (typeof initFlowbite === 'function') { initFlowbite(); }
    if (typeof htmx !== 'undefined') { htmx.process(document.body); }
</script>