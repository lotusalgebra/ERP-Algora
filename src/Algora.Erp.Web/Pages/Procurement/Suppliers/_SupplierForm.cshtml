@model Algora.Erp.Web.Pages.Procurement.Suppliers.SupplierFormViewModel

<form hx-post=""
      hx-target="#suppliersTableBody"
      hx-on::after-request="if(event.detail.successful) document.body.dispatchEvent(new Event('formSubmitSuccess'))">

    @if (Model.IsEdit && Model.Supplier != null)
    {
        <input type="hidden" name="Id" value="@Model.Supplier.Id" />
    }

    <div class="row g-3">
        <!-- Basic Information -->
        <div class="col-12">
            <h6 class="text-muted text-uppercase small mb-3">Basic Information</h6>
        </div>

        <div class="col-md-12">
            <label class="form-label">Supplier Name <span class="text-danger">*</span></label>
            <input type="text" class="form-control" name="Name"
                   value="@Model.Supplier?.Name" required>
        </div>

        <div class="col-md-6">
            <label class="form-label">Contact Person</label>
            <input type="text" class="form-control" name="ContactPerson"
                   value="@Model.Supplier?.ContactPerson">
        </div>

        <div class="col-md-6">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" name="Email"
                   value="@Model.Supplier?.Email">
        </div>

        <div class="col-md-4">
            <label class="form-label">Phone</label>
            <input type="tel" class="form-control" name="Phone"
                   value="@Model.Supplier?.Phone">
        </div>

        <div class="col-md-4">
            <label class="form-label">Fax</label>
            <input type="text" class="form-control" name="Fax"
                   value="@Model.Supplier?.Fax">
        </div>

        <div class="col-md-4">
            <label class="form-label">Website</label>
            <input type="url" class="form-control" name="Website"
                   value="@Model.Supplier?.Website" placeholder="https://">
        </div>

        <!-- Address -->
        <div class="col-12 mt-4">
            <h6 class="text-muted text-uppercase small mb-3">Address</h6>
        </div>

        <div class="col-12">
            <label class="form-label">Street Address</label>
            <input type="text" class="form-control" name="Address"
                   value="@Model.Supplier?.Address">
        </div>

        <div class="col-md-6">
            <label class="form-label">City</label>
            <input type="text" class="form-control" name="City"
                   value="@Model.Supplier?.City">
        </div>

        <div class="col-md-6">
            <label class="form-label">State/Province</label>
            <input type="text" class="form-control" name="State"
                   value="@Model.Supplier?.State">
        </div>

        <div class="col-md-6">
            <label class="form-label">Country</label>
            <input type="text" class="form-control" name="Country"
                   value="@Model.Supplier?.Country">
        </div>

        <div class="col-md-6">
            <label class="form-label">Postal Code</label>
            <input type="text" class="form-control" name="PostalCode"
                   value="@Model.Supplier?.PostalCode">
        </div>

        <!-- Payment Terms -->
        <div class="col-12 mt-4">
            <h6 class="text-muted text-uppercase small mb-3">Payment & Terms</h6>
        </div>

        <div class="col-md-4">
            <label class="form-label">Payment Terms (Days)</label>
            <input type="number" class="form-control" name="PaymentTermsDays"
                   value="@(Model.Supplier?.PaymentTermsDays ?? 30)" min="0">
        </div>

        <div class="col-md-4">
            <label class="form-label">Currency</label>
            <select class="form-select" name="Currency">
                <option value="USD" selected="@(Model.Supplier?.Currency == "USD")">USD</option>
                <option value="EUR" selected="@(Model.Supplier?.Currency == "EUR")">EUR</option>
                <option value="GBP" selected="@(Model.Supplier?.Currency == "GBP")">GBP</option>
                <option value="CAD" selected="@(Model.Supplier?.Currency == "CAD")">CAD</option>
                <option value="AUD" selected="@(Model.Supplier?.Currency == "AUD")">AUD</option>
            </select>
        </div>

        <div class="col-md-4">
            <label class="form-label">Lead Time (Days)</label>
            <input type="number" class="form-control" name="LeadTimeDays"
                   value="@(Model.Supplier?.LeadTimeDays ?? 0)" min="0">
        </div>

        <div class="col-md-6">
            <label class="form-label">Minimum Order Amount</label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input type="number" class="form-control" name="MinimumOrderAmount"
                       value="@(Model.Supplier?.MinimumOrderAmount ?? 0)" step="0.01" min="0">
            </div>
        </div>

        <div class="col-md-6">
            <label class="form-label">Tax ID</label>
            <input type="text" class="form-control" name="TaxId"
                   value="@Model.Supplier?.TaxId">
        </div>

        <!-- Bank Information -->
        <div class="col-12 mt-4">
            <h6 class="text-muted text-uppercase small mb-3">Bank Information</h6>
        </div>

        <div class="col-md-4">
            <label class="form-label">Bank Name</label>
            <input type="text" class="form-control" name="BankName"
                   value="@Model.Supplier?.BankName">
        </div>

        <div class="col-md-4">
            <label class="form-label">Account Number</label>
            <input type="text" class="form-control" name="BankAccountNumber"
                   value="@Model.Supplier?.BankAccountNumber">
        </div>

        <div class="col-md-4">
            <label class="form-label">Routing Number</label>
            <input type="text" class="form-control" name="BankRoutingNumber"
                   value="@Model.Supplier?.BankRoutingNumber">
        </div>

        <!-- Notes -->
        <div class="col-12 mt-4">
            <label class="form-label">Notes</label>
            <textarea class="form-control" name="Notes" rows="2">@Model.Supplier?.Notes</textarea>
        </div>

        <!-- Options -->
        <div class="col-12">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="IsActive" value="true" id="isActive"
                       checked="@(Model.Supplier?.IsActive ?? true)">
                <label class="form-check-label" for="isActive">Active</label>
            </div>
        </div>
    </div>

    <div class="modal-footer px-0 pb-0 mt-4">
        <button type="button" class="btn btn-secondary" data-modal-hide="supplierModal">Cancel</button>
        <button type="submit" class="btn btn-primary">
            @(Model.IsEdit ? "Update Supplier" : "Create Supplier")
        </button>
    </div>
</form>
