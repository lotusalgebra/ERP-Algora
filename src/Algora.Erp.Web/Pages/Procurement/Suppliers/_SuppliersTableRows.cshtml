@model Algora.Erp.Web.Pages.Procurement.Suppliers.SuppliersTableViewModel

@if (Model.Suppliers.Count == 0)
{
    <tr>
        <td colspan="8" class="text-center py-5">
            <div class="text-gray-500">
                <i class="bi bi-people text-4xl block mb-3"></i>
                <p class="mb-0">No suppliers found</p>
            </div>
        </td>
    </tr>
}
else
{
    @foreach (var supplier in Model.Suppliers)
    {
        var poCount = supplier.PurchaseOrders?.Count ?? 0;

        <tr class="bg-white border-b hover:bg-gray-50">
            <td class="px-6 py-4">
                <code class="bg-gray-50 px-2 py-1 rounded text-sm">@supplier.Code</code>
            </td>
            <td class="px-6 py-4">
                <div class="font-medium text-gray-900">@supplier.Name</div>
                @if (!string.IsNullOrEmpty(supplier.Website))
                {
                    <small class="text-gray-500">
                        <i class="bi bi-globe mr-1"></i>@supplier.Website
                    </small>
                }
            </td>
            <td class="px-6 py-4">
                @if (!string.IsNullOrEmpty(supplier.ContactPerson))
                {
                    <div class="text-gray-900">@supplier.ContactPerson</div>
                }
                @if (!string.IsNullOrEmpty(supplier.Email))
                {
                    <small class="text-gray-500">
                        <i class="bi bi-envelope mr-1"></i>@supplier.Email
                    </small>
                }
                else if (!string.IsNullOrEmpty(supplier.Phone))
                {
                    <small class="text-gray-500">
                        <i class="bi bi-telephone mr-1"></i>@supplier.Phone
                    </small>
                }
            </td>
            <td class="px-6 py-4">
                @if (!string.IsNullOrEmpty(supplier.City))
                {
                    <div class="text-gray-900">
                        <i class="bi bi-geo-alt mr-1 text-gray-500"></i>
                        @supplier.City@(string.IsNullOrEmpty(supplier.State) ? "" : $", {supplier.State}")
                    </div>
                    @if (!string.IsNullOrEmpty(supplier.Country))
                    {
                        <small class="text-gray-500">@supplier.Country</small>
                    }
                }
                else
                {
                    <span class="text-gray-500">—</span>
                }
            </td>
            <td class="px-6 py-4 text-center">
                @if (supplier.LeadTimeDays > 0)
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-blue-100 text-blue-800">@supplier.LeadTimeDays days</span>
                }
                else
                {
                    <span class="text-gray-500">—</span>
                }
            </td>
            <td class="px-6 py-4 text-right">
                @if (supplier.CurrentBalance > 0)
                {
                    <span class="text-red-600 font-medium">@supplier.CurrentBalance.ToString("C2")</span>
                }
                else
                {
                    <span class="text-emerald-600">@supplier.CurrentBalance.ToString("C2")</span>
                }
            </td>
            <td class="px-6 py-4">
                @if (supplier.IsActive)
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-emerald-100 text-emerald-800">Active</span>
                }
                else
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">Inactive</span>
                }
            </td>
            <td class="px-6 py-4 text-right">
                <div class="relative inline-block">
                    <button type="button" class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg"
                            id="dropdownSupp@(supplier.Id)" data-dropdown-toggle="dropdownMenuSupp@(supplier.Id)" data-dropdown-placement="bottom-end">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <div class="z-50 hidden absolute right-0 mt-2 bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuSupp@(supplier.Id)">
                        <ul class="py-2 text-sm text-gray-700">
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100 cursor-pointer"
                                   hx-get="?handler=EditForm&id=@supplier.Id"
                                   hx-target="#formModalBody"
                                   data-modal-target="formModal" data-modal-toggle="formModal">
                                    <i class="bi bi-pencil mr-2"></i>Edit
                                </a>
                            </li>
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100" href="/Procurement/PurchaseOrders?supplierId=@supplier.Id">
                                    <i class="bi bi-file-earmark-text mr-2"></i>View POs (@poCount)
                                </a>
                            </li>
                        </ul>
                        <div class="py-2">
                            <a class="flex items-center px-4 py-2 text-red-600 hover:bg-gray-100 cursor-pointer"
                               hx-delete="?handler=Delete&id=@supplier.Id"
                               hx-target="#suppliersTableBody"
                               hx-swap="innerHTML"
                               hx-confirm="Are you sure you want to delete this supplier?">
                                <i class="bi bi-trash mr-2"></i>Delete
                            </a>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="8" class="px-6 py-3">
            @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", Model.Pagination)
        </td>
    </tr>
}
