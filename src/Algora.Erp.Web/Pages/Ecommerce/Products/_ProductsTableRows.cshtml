@model Algora.Erp.Web.Pages.Ecommerce.Products.EcommerceProductsTableViewModel

@if (!Model.Products.Any())
{
    <tr>
        <td colspan="8" class="text-center py-5 text-muted">
            <i class="bi bi-inbox fs-1 d-block mb-3"></i>
            No products found
        </td>
    </tr>
}
else
{
    @foreach (var product in Model.Products)
    {
        var imageUrl = product.Images.FirstOrDefault()?.Url;
        <tr>
            <td class="ps-4" style="width: 60px;">
                @if (!string.IsNullOrEmpty(imageUrl))
                {
                    <img src="@imageUrl" alt="@product.Name" class="rounded" style="width: 48px; height: 48px; object-fit: cover;">
                }
                else
                {
                    <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 48px; height: 48px;">
                        <i class="bi bi-image text-muted"></i>
                    </div>
                }
            </td>
            <td>
                <div class="fw-semibold">@product.Name</div>
                @if (product.IsFeatured)
                {
                    <span class="badge bg-warning bg-opacity-10 text-warning me-1"><i class="bi bi-star-fill"></i> Featured</span>
                }
                @if (product.IsNewArrival)
                {
                    <span class="badge bg-info bg-opacity-10 text-info me-1">New</span>
                }
                @if (product.IsBestSeller)
                {
                    <span class="badge bg-success bg-opacity-10 text-success">Best Seller</span>
                }
            </td>
            <td><code>@product.Sku</code></td>
            <td>@(product.Category?.Name ?? "-")</td>
            <td class="text-end">
                <div class="fw-semibold">@product.Price.ToString("C")</div>
                @if (product.CompareAtPrice.HasValue && product.CompareAtPrice > product.Price)
                {
                    <small class="text-muted text-decoration-line-through">@product.CompareAtPrice.Value.ToString("C")</small>
                }
            </td>
            <td class="text-end">
                @if (product.TrackInventory)
                {
                    if (product.StockQuantity <= 0)
                    {
                        <span class="badge bg-danger">Out of Stock</span>
                    }
                    else if (product.StockQuantity <= product.LowStockThreshold)
                    {
                        <span class="badge bg-warning">@product.StockQuantity (Low)</span>
                    }
                    else
                    {
                        <span class="text-success">@product.StockQuantity</span>
                    }
                }
                else
                {
                    <span class="text-muted">-</span>
                }
            </td>
            <td>
                @switch (product.Status)
                {
                    case Algora.Erp.Domain.Entities.Ecommerce.ProductStatus.Active:
                        <span class="badge bg-success">Active</span>
                        break;
                    case Algora.Erp.Domain.Entities.Ecommerce.ProductStatus.Draft:
                        <span class="badge bg-secondary">Draft</span>
                        break;
                    case Algora.Erp.Domain.Entities.Ecommerce.ProductStatus.Archived:
                        <span class="badge bg-dark">Archived</span>
                        break;
                }
            </td>
            <td class="text-end pe-4">
                <div class="btn-group btn-group-sm">
                    <button class="btn btn-outline-primary"
                            hx-get="?handler=EditForm&id=@product.Id"
                            hx-target="#formModalBody"
                            data-modal-target="formModal" data-modal-toggle="formModal">
                        <i class="bi bi-pencil"></i>
                    </button>
                    <button class="btn btn-outline-danger" onclick="confirmDelete('@product.Id')">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
    <tr>
        <td colspan="8" class="bg-light">
            <div class="d-flex justify-content-between align-items-center px-3 py-2">
                <small class="text-muted">
                    Showing @((Model.Page - 1) * Model.PageSize + 1) to @Math.Min(Model.Page * Model.PageSize, Model.TotalRecords) of @Model.TotalRecords entries
                </small>
                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        @if (Model.Page > 1)
                        {
                            <li class="page-item">
                                <button type="button" class="page-link"
                                        hx-get="?handler=Table&pageNumber=@(Model.Page - 1)&pageSize=@Model.PageSize"
                                        hx-target="#productsTableBody"
                                        hx-include="#searchInput, #categoryFilter, #statusFilter">
                                    Previous
                                </button>
                            </li>
                        }
                        @for (var i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.TotalPages, Model.Page + 2); i++)
                        {
                            <li class="page-item @(i == Model.Page ? "active" : "")">
                                <button type="button" class="page-link"
                                        hx-get="?handler=Table&pageNumber=@i&pageSize=@Model.PageSize"
                                        hx-target="#productsTableBody"
                                        hx-include="#searchInput, #categoryFilter, #statusFilter">
                                    @i
                                </button>
                            </li>
                        }
                        @if (Model.Page < Model.TotalPages)
                        {
                            <li class="page-item">
                                <button type="button" class="page-link"
                                        hx-get="?handler=Table&pageNumber=@(Model.Page + 1)&pageSize=@Model.PageSize"
                                        hx-target="#productsTableBody"
                                        hx-include="#searchInput, #categoryFilter, #statusFilter">
                                    Next
                                </button>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </td>
    </tr>
    }
    else if (Model.TotalRecords > 0)
    {
    <tr>
        <td colspan="8" class="bg-light">
            <div class="px-3 py-2">
                <small class="text-muted">Showing @Model.TotalRecords entries</small>
            </div>
        </td>
    </tr>
    }
}
