@model Algora.Erp.Web.Pages.Ecommerce.Products.EcommerceProductsTableViewModel

@if (!Model.Products.Any())
{
    <tr>
        <td colspan="8" class="text-center py-12 text-gray-500">
            <i class="bi bi-inbox text-4xl block mb-3"></i>
            No products found
        </td>
    </tr>
}
else
{
    @foreach (var product in Model.Products)
    {
        var imageUrl = product.Images.FirstOrDefault()?.Url;
        <tr class="bg-white border-b hover:bg-gray-50">
            <td class="px-6 py-4" style="width: 60px;">
                @if (!string.IsNullOrEmpty(imageUrl))
                {
                    <img src="@imageUrl" alt="@product.Name" class="rounded w-12 h-12 object-cover">
                }
                else
                {
                    <div class="bg-gray-100 rounded flex items-center justify-center w-12 h-12">
                        <i class="bi bi-image text-gray-400"></i>
                    </div>
                }
            </td>
            <td class="px-6 py-4">
                <div class="font-semibold text-gray-900">@product.Name</div>
                @if (product.IsFeatured)
                {
                    <span class="text-xs font-medium px-2 py-0.5 rounded-full bg-amber-100 text-amber-800 mr-1"><i class="bi bi-star-fill"></i> Featured</span>
                }
                @if (product.IsNewArrival)
                {
                    <span class="text-xs font-medium px-2 py-0.5 rounded-full bg-blue-100 text-blue-800 mr-1">New</span>
                }
                @if (product.IsBestSeller)
                {
                    <span class="text-xs font-medium px-2 py-0.5 rounded-full bg-emerald-100 text-emerald-800">Best Seller</span>
                }
            </td>
            <td class="px-6 py-4"><code class="text-xs bg-gray-100 px-2 py-1 rounded">@product.Sku</code></td>
            <td class="px-6 py-4 text-gray-500">@(product.Category?.Name ?? "-")</td>
            <td class="px-6 py-4 text-right">
                <div class="font-semibold text-gray-900">@product.Price.ToString("C")</div>
                @if (product.CompareAtPrice.HasValue && product.CompareAtPrice > product.Price)
                {
                    <small class="text-gray-500 line-through">@product.CompareAtPrice.Value.ToString("C")</small>
                }
            </td>
            <td class="px-6 py-4 text-right">
                @if (product.TrackInventory)
                {
                    if (product.StockQuantity <= 0)
                    {
                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-red-100 text-red-800">Out of Stock</span>
                    }
                    else if (product.StockQuantity <= product.LowStockThreshold)
                    {
                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-amber-100 text-amber-800">@product.StockQuantity (Low)</span>
                    }
                    else
                    {
                        <span class="text-emerald-600 font-medium">@product.StockQuantity</span>
                    }
                }
                else
                {
                    <span class="text-gray-400">-</span>
                }
            </td>
            <td class="px-6 py-4">
                @switch (product.Status)
                {
                    case Algora.Erp.Domain.Entities.Ecommerce.ProductStatus.Active:
                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-emerald-100 text-emerald-800">Active</span>
                        break;
                    case Algora.Erp.Domain.Entities.Ecommerce.ProductStatus.Draft:
                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">Draft</span>
                        break;
                    case Algora.Erp.Domain.Entities.Ecommerce.ProductStatus.Archived:
                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-700 text-white">Archived</span>
                        break;
                }
            </td>
            <td class="px-6 py-4 text-right">
                <div class="relative inline-block">
                    <button type="button" class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg"
                            id="dropdownEProd@(product.Id)" data-dropdown-toggle="dropdownMenuEProd@(product.Id)" data-dropdown-placement="bottom-end">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <div class="z-50 hidden absolute right-0 mt-2 bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuEProd@(product.Id)">
                        <ul class="py-2 text-sm text-gray-700">
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100 cursor-pointer"
                                   hx-get="?handler=EditForm&id=@product.Id"
                                   hx-target="#formModalBody"
                                   data-modal-target="formModal" data-modal-toggle="formModal">
                                    <i class="bi bi-pencil mr-2"></i>Edit
                                </a>
                            </li>
                        </ul>
                        <div class="py-2">
                            <a class="flex items-center px-4 py-2 text-red-600 hover:bg-gray-100 cursor-pointer"
                               hx-delete="?handler=Delete&id=@product.Id"
                               hx-target="#productsTableBody"
                               hx-swap="innerHTML"
                               hx-confirm="Are you sure you want to delete this product?">
                                <i class="bi bi-trash mr-2"></i>Delete
                            </a>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="8" class="bg-gray-50 px-6 py-3">
            <div class="flex justify-between items-center">
                <small class="text-gray-500">
                    @if (Model.TotalRecords > 0)
                    {
                        @:Showing @Model.Pagination.FirstRecord to @Model.Pagination.LastRecord of @Model.TotalRecords entries
                    }
                    else
                    {
                        @:No entries
                    }
                </small>
                <partial name="/Pages/Shared/_Pagination.cshtml" model="Model.Pagination" />
            </div>
        </td>
    </tr>
}

<script>
    // Re-initialize Flowbite dropdowns and HTMX after content swap
    if (typeof initFlowbite === 'function') { initFlowbite(); }
    if (typeof htmx !== 'undefined') { htmx.process(document.body); }
</script>
