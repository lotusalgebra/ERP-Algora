@model Algora.Erp.Web.Pages.Ecommerce.Customers.WebCustomersTableViewModel

@if (!Model.Customers.Any())
{
    <tr>
        <td colspan="8" class="text-center py-5 text-muted">
            <i class="bi bi-people fs-1 d-block mb-3"></i>
            No customers found
        </td>
    </tr>
}
else
{
    @foreach (var customer in Model.Customers)
    {
        <tr>
            <td class="ps-4">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-primary bg-opacity-10 text-primary d-flex align-items-center justify-content-center me-3"
                         style="width: 40px; height: 40px;">
                        <span class="fw-semibold">@customer.FirstName[0]@customer.LastName[0]</span>
                    </div>
                    <div>
                        <a href="#" class="text-primary fw-semibold text-decoration-none"
                           hx-get="?handler=Details&id=@customer.Id"
                           hx-target="#detailsModalBody"
                           data-bs-toggle="modal"
                           data-bs-target="#detailsModal">
                            @customer.FirstName @customer.LastName
                        </a>
                    </div>
                </div>
            </td>
            <td>@customer.Email</td>
            <td>@(customer.Phone ?? "-")</td>
            <td class="text-center">
                <span class="badge bg-secondary">@customer.OrderCount orders</span>
            </td>
            <td class="text-end fw-semibold">@customer.TotalSpent.ToString("C")</td>
            <td>
                @if (customer.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactive</span>
                }
            </td>
            <td>
                <div>@customer.CreatedAt.ToString("MMM dd, yyyy")</div>
            </td>
            <td class="text-end pe-4">
                <div class="dropdown">
                    <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="bi bi-gear"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a class="dropdown-item" href="#"
                               hx-get="?handler=Details&id=@customer.Id"
                               hx-target="#detailsModalBody"
                               data-bs-toggle="modal"
                               data-bs-target="#detailsModal">
                                <i class="bi bi-eye me-2"></i>View Details
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" href="#"
                               hx-get="?handler=EditForm&id=@customer.Id"
                               hx-target="#customerModalBody"
                               data-bs-toggle="modal"
                               data-bs-target="#customerModal">
                                <i class="bi bi-pencil me-2"></i>Edit
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item text-danger" href="#"
                               hx-delete="?handler=&id=@customer.Id"
                               hx-target="#customersTableBody"
                               hx-confirm="Are you sure you want to delete this customer?">
                                <i class="bi bi-trash me-2"></i>Delete
                            </a>
                        </li>
                    </ul>
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="8" class="bg-light">
            <div class="d-flex justify-content-between align-items-center px-3 py-2">
                <small class="text-muted">
                    Showing @((Model.Page - 1) * Model.PageSize + 1) to @Math.Min(Model.Page * Model.PageSize, Model.TotalRecords) of @Model.TotalRecords entries
                </small>
                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                            <a class="page-link" href="#"
                               hx-get="?handler=Table&page=@(Model.Page - 1)&pageSize=@Model.PageSize"
                               hx-target="#customersTableBody"
                               hx-include="#searchInput, #statusFilter">
                                Previous
                            </a>
                        </li>
                        @for (var i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.TotalPages, Model.Page + 2); i++)
                        {
                            <li class="page-item @(i == Model.Page ? "active" : "")">
                                <a class="page-link" href="#"
                                   hx-get="?handler=Table&page=@i&pageSize=@Model.PageSize"
                                   hx-target="#customersTableBody"
                                   hx-include="#searchInput, #statusFilter">
                                    @i
                                </a>
                            </li>
                        }
                        <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="#"
                               hx-get="?handler=Table&page=@(Model.Page + 1)&pageSize=@Model.PageSize"
                               hx-target="#customersTableBody"
                               hx-include="#searchInput, #statusFilter">
                                Next
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </td>
    </tr>
}
