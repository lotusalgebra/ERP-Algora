@model Algora.Erp.Web.Pages.Ecommerce.Customers.WebCustomersTableViewModel

@if (!Model.Customers.Any())
{
    <tr>
        <td colspan="8" class="text-center py-12 text-gray-500">
            <i class="bi bi-people text-4xl block mb-3"></i>
            No customers found
        </td>
    </tr>
}
else
{
    @foreach (var customer in Model.Customers)
    {
        <tr class="bg-white border-b hover:bg-gray-50">
            <td class="px-6 py-4">
                <div class="flex items-center">
                    <div class="rounded-full bg-primary-100 text-primary-600 flex items-center justify-center mr-3 w-10 h-10">
                        <span class="font-semibold text-sm">@customer.FirstName[0]@customer.LastName[0]</span>
                    </div>
                    <div>
                        <a href="#" class="text-primary-600 font-semibold hover:underline"
                           hx-get="?handler=Details&id=@customer.Id"
                           hx-target="#detailsModalBody"
                           data-modal-target="detailsModal" data-modal-toggle="detailsModal">
                            @customer.FirstName @customer.LastName
                        </a>
                    </div>
                </div>
            </td>
            <td class="px-6 py-4 text-gray-500">@customer.Email</td>
            <td class="px-6 py-4 text-gray-500">@(customer.Phone ?? "-")</td>
            <td class="px-6 py-4 text-center">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">@customer.OrderCount orders</span>
            </td>
            <td class="px-6 py-4 text-right font-semibold text-gray-900">@customer.TotalSpent.ToString("C")</td>
            <td class="px-6 py-4">
                @if (customer.IsActive)
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-emerald-100 text-emerald-800">Active</span>
                }
                else
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">Inactive</span>
                }
            </td>
            <td class="px-6 py-4">
                <div class="text-gray-900">@customer.CreatedAt.ToString("MMM dd, yyyy")</div>
            </td>
            <td class="px-6 py-4 text-right">
                <button class="px-3 py-2 text-xs font-medium text-gray-700 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 focus:z-10 focus:ring-2 focus:ring-gray-200" type="button" id="dropdownCust@(customer.Id)" data-dropdown-toggle="dropdownMenuCust@(customer.Id)" data-dropdown-placement="bottom-end">
                    <i class="bi bi-gear"></i>
                </button>
                <div class="z-50 hidden absolute right-0 mt-2 bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuCust@(customer.Id)">
                    <ul class="py-2 text-sm text-gray-700">
                        <li>
                            <a class="block px-4 py-2 hover:bg-gray-100" href="#"
                               hx-get="?handler=Details&id=@customer.Id"
                               hx-target="#detailsModalBody"
                               data-modal-target="detailsModal" data-modal-toggle="detailsModal">
                                <i class="bi bi-eye mr-2"></i>View Details
                            </a>
                        </li>
                        <li>
                            <a class="block px-4 py-2 hover:bg-gray-100" href="#"
                               hx-get="?handler=EditForm&id=@customer.Id"
                               hx-target="#customerModalBody"
                               data-modal-target="customerModal" data-modal-toggle="customerModal">
                                <i class="bi bi-pencil mr-2"></i>Edit
                            </a>
                        </li>
                        <li><hr class="my-1 border-gray-200"></li>
                        <li>
                            <a class="block px-4 py-2 hover:bg-gray-100 text-red-600" href="#"
                               hx-delete="?handler=&id=@customer.Id"
                               hx-target="#customersTableBody"
                               hx-confirm="Are you sure you want to delete this customer?">
                                <i class="bi bi-trash mr-2"></i>Delete
                            </a>
                        </li>
                    </ul>
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
    <tr>
        <td colspan="8" class="bg-gray-50 px-6 py-3">
            <div class="flex justify-between items-center">
                <small class="text-gray-500">
                    Showing @((Model.Page - 1) * Model.PageSize + 1) to @Math.Min(Model.Page * Model.PageSize, Model.TotalRecords) of @Model.TotalRecords entries
                </small>
                <nav>
                    <ul class="inline-flex -space-x-px text-sm">
                        @if (Model.Page > 1)
                        {
                            <li>
                                <button type="button" class="flex items-center justify-center px-3 h-8 ms-0 leading-tight text-gray-500 bg-white border border-gray-300 rounded-s-lg hover:bg-gray-100 hover:text-gray-700"
                                        hx-get="?handler=Table&pageNumber=@(Model.Page - 1)&pageSize=@Model.PageSize"
                                        hx-target="#customersTableBody"
                                        hx-include="#searchInput, #statusFilter">
                                    Previous
                                </button>
                            </li>
                        }
                        @for (var i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.TotalPages, Model.Page + 2); i++)
                        {
                            <li>
                                <button type="button" class="flex items-center justify-center px-3 h-8 leading-tight @(i == Model.Page ? "text-primary-600 border border-primary-300 bg-primary-50 hover:bg-primary-100 hover:text-primary-700" : "text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700")"
                                        hx-get="?handler=Table&pageNumber=@i&pageSize=@Model.PageSize"
                                        hx-target="#customersTableBody"
                                        hx-include="#searchInput, #statusFilter">
                                    @i
                                </button>
                            </li>
                        }
                        @if (Model.Page < Model.TotalPages)
                        {
                            <li>
                                <button type="button" class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded-e-lg hover:bg-gray-100 hover:text-gray-700"
                                        hx-get="?handler=Table&pageNumber=@(Model.Page + 1)&pageSize=@Model.PageSize"
                                        hx-target="#customersTableBody"
                                        hx-include="#searchInput, #statusFilter">
                                    Next
                                </button>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </td>
    </tr>
    }
    else if (Model.TotalRecords > 0)
    {
    <tr>
        <td colspan="8" class="bg-gray-50 px-6 py-3">
            <small class="text-gray-500">Showing @Model.TotalRecords entries</small>
        </td>
    </tr>
    }
}
