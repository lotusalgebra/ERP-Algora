@model Algora.Erp.Domain.Entities.Ecommerce.WebCustomer

<div class="grid grid-cols-12 gap-6">
    <!-- Customer Info -->
    <div class="col-span-12 md:col-span-4">
        <div class="text-center mb-6">
            <div class="rounded-full bg-primary-100 text-primary-600 flex items-center justify-center mx-auto mb-3 w-20 h-20 text-2xl">
                <span class="font-semibold">@Model.FirstName[0]@Model.LastName[0]</span>
            </div>
            <h5 class="text-lg font-semibold text-gray-900 mb-1">@Model.FirstName @Model.LastName</h5>
            @if (Model.IsActive)
            {
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-emerald-100 text-emerald-800">Active</span>
            }
            else
            {
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">Inactive</span>
            }
        </div>

        <div class="bg-white rounded-lg border border-gray-200 mb-4">
            <div class="px-4 py-3 bg-gray-50 border-b border-gray-200 rounded-t-lg">
                <h6 class="font-semibold text-gray-900"><i class="bi bi-person mr-2"></i>Contact Info</h6>
            </div>
            <div class="p-4">
                <div class="mb-2 text-gray-600">
                    <i class="bi bi-envelope mr-2 text-gray-400"></i>@Model.Email
                </div>
                @if (!string.IsNullOrEmpty(Model.Phone))
                {
                    <div class="mb-2 text-gray-600">
                        <i class="bi bi-telephone mr-2 text-gray-400"></i>@Model.Phone
                    </div>
                }
            </div>
        </div>

        <div class="bg-white rounded-lg border border-gray-200 mb-4">
            <div class="px-4 py-3 bg-gray-50 border-b border-gray-200 rounded-t-lg">
                <h6 class="font-semibold text-gray-900"><i class="bi bi-geo-alt mr-2"></i>Address</h6>
            </div>
            <div class="p-4 text-gray-600">
                @if (!string.IsNullOrEmpty(Model.Address))
                {
                    <div>@Model.Address</div>
                    <div>@Model.City, @Model.State @Model.PostalCode</div>
                    <div>@Model.Country</div>
                }
                else
                {
                    <span class="text-gray-400">No address on file</span>
                }
            </div>
        </div>

        <div class="bg-white rounded-lg border border-gray-200">
            <div class="px-4 py-3 bg-gray-50 border-b border-gray-200 rounded-t-lg">
                <h6 class="font-semibold text-gray-900"><i class="bi bi-graph-up mr-2"></i>Statistics</h6>
            </div>
            <div class="p-4">
                <div class="flex justify-between mb-2">
                    <span class="text-gray-600">Total Orders:</span>
                    <span class="font-semibold text-gray-900">@Model.OrderCount</span>
                </div>
                <div class="flex justify-between mb-2">
                    <span class="text-gray-600">Total Spent:</span>
                    <span class="font-semibold text-emerald-600">@Model.TotalSpent.ToString("C")</span>
                </div>
                <div class="flex justify-between">
                    <span class="text-gray-600">Customer Since:</span>
                    <span class="font-semibold text-gray-900">@Model.CreatedAt.ToString("MMM yyyy")</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Orders -->
    <div class="col-span-12 md:col-span-8">
        <div class="bg-white rounded-lg border border-gray-200">
            <div class="px-4 py-3 bg-gray-50 border-b border-gray-200 rounded-t-lg">
                <h6 class="font-semibold text-gray-900"><i class="bi bi-bag mr-2"></i>Recent Orders</h6>
            </div>
            <div class="overflow-x-auto">
                @if (Model.Orders.Any())
                {
                    <table class="w-full text-sm text-left">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                            <tr>
                                <th class="px-4 py-3">Order #</th>
                                <th class="px-4 py-3 text-center">Items</th>
                                <th class="px-4 py-3 text-right">Total</th>
                                <th class="px-4 py-3">Status</th>
                                <th class="px-4 py-3">Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Orders)
                            {
                                <tr class="border-b">
                                    <td class="px-4 py-3"><span class="font-semibold text-gray-900">@order.OrderNumber</span></td>
                                    <td class="px-4 py-3 text-center">@order.Items.Sum(i => i.Quantity)</td>
                                    <td class="px-4 py-3 text-right font-semibold">@order.Total.ToString("C")</td>
                                    <td class="px-4 py-3">
                                        @switch (order.Status)
                                        {
                                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Pending:
                                                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-amber-100 text-amber-800">Pending</span>
                                                break;
                                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Confirmed:
                                                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-blue-100 text-blue-800">Confirmed</span>
                                                break;
                                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Processing:
                                                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-primary-100 text-primary-800">Processing</span>
                                                break;
                                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Shipped:
                                                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-blue-100 text-blue-800">Shipped</span>
                                                break;
                                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Delivered:
                                                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-emerald-100 text-emerald-800">Delivered</span>
                                                break;
                                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Cancelled:
                                                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-700 text-white">Cancelled</span>
                                                break;
                                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Refunded:
                                                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">Refunded</span>
                                                break;
                                        }
                                    </td>
                                    <td class="px-4 py-3 text-gray-500">@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="text-center py-12 text-gray-500">
                        <i class="bi bi-bag text-4xl block mb-3"></i>
                        No orders yet
                    </div>
                }
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Notes))
        {
            <div class="bg-white rounded-lg border border-gray-200 mt-4">
                <div class="px-4 py-3 bg-gray-50 border-b border-gray-200 rounded-t-lg">
                    <h6 class="font-semibold text-gray-900"><i class="bi bi-sticky mr-2"></i>Notes</h6>
                </div>
                <div class="p-4">
                    <p class="text-gray-600">@Model.Notes</p>
                </div>
            </div>
        }
    </div>
</div>

<div class="flex items-center justify-end p-4 border-t border-gray-200 rounded-b gap-2 mt-6">
    <button type="button" class="text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5" onclick="closeModal('detailsModal')">Close</button>
</div>
