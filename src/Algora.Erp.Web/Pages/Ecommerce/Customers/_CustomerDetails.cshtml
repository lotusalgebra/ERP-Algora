@model Algora.Erp.Domain.Entities.Ecommerce.WebCustomer

<div class="row">
    <!-- Customer Info -->
    <div class="col-md-4">
        <div class="text-center mb-4">
            <div class="rounded-circle bg-primary bg-opacity-10 text-primary d-flex align-items-center justify-content-center mx-auto mb-3"
                 style="width: 80px; height: 80px; font-size: 2rem;">
                <span class="fw-semibold">@Model.FirstName[0]@Model.LastName[0]</span>
            </div>
            <h5 class="mb-1">@Model.FirstName @Model.LastName</h5>
            @if (Model.IsActive)
            {
                <span class="badge bg-success">Active</span>
            }
            else
            {
                <span class="badge bg-secondary">Inactive</span>
            }
        </div>

        <div class="card border mb-3">
            <div class="card-header bg-light">
                <h6 class="mb-0"><i class="bi bi-person me-2"></i>Contact Info</h6>
            </div>
            <div class="card-body">
                <div class="mb-2">
                    <i class="bi bi-envelope me-2 text-muted"></i>@Model.Email
                </div>
                @if (!string.IsNullOrEmpty(Model.Phone))
                {
                    <div class="mb-2">
                        <i class="bi bi-telephone me-2 text-muted"></i>@Model.Phone
                    </div>
                }
            </div>
        </div>

        <div class="card border mb-3">
            <div class="card-header bg-light">
                <h6 class="mb-0"><i class="bi bi-geo-alt me-2"></i>Address</h6>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.Address))
                {
                    <div>@Model.Address</div>
                    <div>@Model.City, @Model.State @Model.PostalCode</div>
                    <div>@Model.Country</div>
                }
                else
                {
                    <span class="text-muted">No address on file</span>
                }
            </div>
        </div>

        <div class="card border">
            <div class="card-header bg-light">
                <h6 class="mb-0"><i class="bi bi-graph-up me-2"></i>Statistics</h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span>Total Orders:</span>
                    <span class="fw-semibold">@Model.OrderCount</span>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <span>Total Spent:</span>
                    <span class="fw-semibold text-success">@Model.TotalSpent.ToString("C")</span>
                </div>
                <div class="d-flex justify-content-between">
                    <span>Customer Since:</span>
                    <span class="fw-semibold">@Model.CreatedAt.ToString("MMM yyyy")</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Orders -->
    <div class="col-md-8">
        <div class="card border">
            <div class="card-header bg-light">
                <h6 class="mb-0"><i class="bi bi-bag me-2"></i>Recent Orders</h6>
            </div>
            <div class="card-body p-0">
                @if (Model.Orders.Any())
                {
                    <table class="table table-sm mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th>Order #</th>
                                <th class="text-center">Items</th>
                                <th class="text-end">Total</th>
                                <th>Status</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model.Orders)
                            {
                                <tr>
                                    <td><span class="fw-semibold">@order.OrderNumber</span></td>
                                    <td class="text-center">@order.Items.Sum(i => i.Quantity)</td>
                                    <td class="text-end fw-semibold">@order.Total.ToString("C")</td>
                                    <td>
                                        @switch (order.Status)
                                        {
                                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Pending:
                                                <span class="badge bg-warning">Pending</span>
                                                break;
                                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Confirmed:
                                                <span class="badge bg-info">Confirmed</span>
                                                break;
                                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Processing:
                                                <span class="badge bg-primary">Processing</span>
                                                break;
                                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Shipped:
                                                <span class="badge bg-info">Shipped</span>
                                                break;
                                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Delivered:
                                                <span class="badge bg-success">Delivered</span>
                                                break;
                                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Cancelled:
                                                <span class="badge bg-dark">Cancelled</span>
                                                break;
                                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Refunded:
                                                <span class="badge bg-secondary">Refunded</span>
                                                break;
                                        }
                                    </td>
                                    <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="text-center py-5 text-muted">
                        <i class="bi bi-bag fs-1 d-block mb-3"></i>
                        No orders yet
                    </div>
                }
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.Notes))
        {
            <div class="card border mt-3">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-sticky me-2"></i>Notes</h6>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.Notes</p>
                </div>
            </div>
        }
    </div>
</div>

<div class="modal-footer mt-4">
    <button type="button" class="btn btn-secondary" data-modal-hide="customerModal">Close</button>
</div>
