@page
@model Algora.Erp.Web.Pages.Ecommerce.Customers.IndexModel
@{
    ViewData["Title"] = "Web Customers";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1">Web Customers</h4>
        <p class="text-muted mb-0">Manage your online store customers</p>
    </div>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#customerModal"
            hx-get="?handler=CreateForm" hx-target="#customerModalBody">
        <i class="bi bi-plus-lg me-2"></i>Add Customer
    </button>
</div>

<!-- Statistics -->
<div class="row mb-4">
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="d-flex align-items-center">
                <div class="stat-icon bg-primary bg-opacity-10 text-primary me-3">
                    <i class="bi bi-people"></i>
                </div>
                <div>
                    <div class="stat-value">@Model.TotalCustomers</div>
                    <div class="stat-label">Total Customers</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="d-flex align-items-center">
                <div class="stat-icon bg-success bg-opacity-10 text-success me-3">
                    <i class="bi bi-person-check"></i>
                </div>
                <div>
                    <div class="stat-value">@Model.ActiveCustomers</div>
                    <div class="stat-label">Active Customers</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="d-flex align-items-center">
                <div class="stat-icon bg-info bg-opacity-10 text-info me-3">
                    <i class="bi bi-bag-check"></i>
                </div>
                <div>
                    <div class="stat-value">@Model.CustomersWithOrders</div>
                    <div class="stat-label">With Orders</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="d-flex align-items-center">
                <div class="stat-icon bg-warning bg-opacity-10 text-warning me-3">
                    <i class="bi bi-calendar-plus"></i>
                </div>
                <div>
                    <div class="stat-value">@Model.NewThisMonth</div>
                    <div class="stat-label">New This Month</div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-body">
        <div class="row align-items-end">
            <div class="col-md-4">
                <label class="form-label">Search</label>
                <input type="text" class="form-control" id="searchInput" placeholder="Search customers..."
                       hx-get="?handler=Table" hx-target="#customersTableBody" hx-trigger="keyup changed delay:300ms"
                       hx-include="#statusFilter" name="search" />
            </div>
            <div class="col-md-3">
                <label class="form-label">Status</label>
                <select class="form-select" id="statusFilter" name="statusFilter"
                        hx-get="?handler=Table" hx-target="#customersTableBody" hx-include="#searchInput">
                    <option value="">All Statuses</option>
                    <option value="true">Active</option>
                    <option value="false">Inactive</option>
                </select>
            </div>
            <div class="col-md-5 text-end">
                <button class="btn btn-outline-secondary" onclick="exportCustomers()">
                    <i class="bi bi-download me-2"></i>Export CSV
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Customers Table -->
<div class="card">
    <div class="table-responsive">
        <table class="table table-hover mb-0">
            <thead class="bg-light">
                <tr>
                    <th class="ps-4">Customer</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th class="text-center">Orders</th>
                    <th class="text-end">Total Spent</th>
                    <th>Status</th>
                    <th>Joined</th>
                    <th class="text-end pe-4">Actions</th>
                </tr>
            </thead>
            <tbody id="customersTableBody" hx-get="?handler=Table" hx-trigger="load">
                <tr>
                    <td colspan="8" class="text-center py-5">
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<!-- Customer Modal -->
<div class="modal fade" id="customerModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Customer</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="customerModalBody">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Customer Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="detailsModalBody">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    document.body.addEventListener('formSubmitSuccess', function() {
        var modal = bootstrap.Modal.getInstance(document.getElementById('customerModal'));
        if (modal) modal.hide();
    });

    function exportCustomers() {
        const search = document.getElementById('searchInput').value;
        const status = document.getElementById('statusFilter').value;
        window.location.href = `?handler=Export&search=${search}&statusFilter=${status}`;
    }
</script>
}
