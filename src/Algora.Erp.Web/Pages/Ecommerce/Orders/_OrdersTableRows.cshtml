@model Algora.Erp.Web.Pages.Ecommerce.Orders.WebOrdersTableViewModel

@if (!Model.Orders.Any())
{
    <tr>
        <td colspan="8" class="text-center py-12 text-gray-500">
            <i class="bi bi-inbox text-4xl block mb-3"></i>
            No orders found
        </td>
    </tr>
}
else
{
    @foreach (var order in Model.Orders)
    {
        var customerName = $"{order.ShippingFirstName} {order.ShippingLastName}".Trim();
        <tr class="bg-white border-b hover:bg-gray-50">
            <td class="px-6 py-4">
                <a href="#" class="text-primary-600 font-semibold hover:underline"
                   hx-get="?handler=Details&id=@order.Id"
                   hx-target="#detailsModalBody"
                   data-modal-target="detailsModal" data-modal-toggle="detailsModal">
                    @order.OrderNumber
                </a>
            </td>
            <td class="px-6 py-4">
                <div class="font-semibold text-gray-900">@customerName</div>
                <small class="text-gray-500">@order.CustomerEmail</small>
            </td>
            <td class="px-6 py-4 text-center">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">@order.Items.Sum(i => i.Quantity) items</span>
            </td>
            <td class="px-6 py-4 text-right font-semibold text-gray-900">@order.Total.ToString("C")</td>
            <td class="px-6 py-4">
                @switch (order.PaymentStatus)
                {
                    case Algora.Erp.Domain.Entities.Ecommerce.PaymentStatus.Paid:
                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-emerald-100 text-emerald-800"><i class="bi bi-check-circle mr-1"></i>Paid</span>
                        break;
                    case Algora.Erp.Domain.Entities.Ecommerce.PaymentStatus.Pending:
                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-amber-100 text-amber-800"><i class="bi bi-clock mr-1"></i>Pending</span>
                        break;
                    case Algora.Erp.Domain.Entities.Ecommerce.PaymentStatus.Failed:
                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-red-100 text-red-800"><i class="bi bi-x-circle mr-1"></i>Failed</span>
                        break;
                    case Algora.Erp.Domain.Entities.Ecommerce.PaymentStatus.Refunded:
                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-700 text-white"><i class="bi bi-arrow-return-left mr-1"></i>Refunded</span>
                        break;
                }
            </td>
            <td class="px-6 py-4">
                @switch (order.Status)
                {
                    case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Pending:
                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-amber-100 text-amber-800">Pending</span>
                        break;
                    case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Confirmed:
                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-blue-100 text-blue-800">Confirmed</span>
                        break;
                    case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Processing:
                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-primary-100 text-primary-800">Processing</span>
                        break;
                    case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Shipped:
                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-blue-100 text-blue-800">Shipped</span>
                        break;
                    case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Delivered:
                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-emerald-100 text-emerald-800">Delivered</span>
                        break;
                    case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Cancelled:
                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-700 text-white">Cancelled</span>
                        break;
                    case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Refunded:
                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">Refunded</span>
                        break;
                }
            </td>
            <td class="px-6 py-4">
                <div class="text-gray-900">@order.OrderDate.ToString("MMM dd, yyyy")</div>
                <small class="text-gray-500">@order.OrderDate.ToString("hh:mm tt")</small>
            </td>
            <td class="px-6 py-4 text-right">
                <button class="px-3 py-2 text-xs font-medium text-gray-700 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 focus:z-10 focus:ring-2 focus:ring-gray-200" type="button" id="dropdownOrd@(order.Id)" data-dropdown-toggle="dropdownMenuOrd@(order.Id)" data-dropdown-placement="bottom-end">
                    <i class="bi bi-gear"></i>
                </button>
                <div class="z-50 hidden absolute right-0 mt-2 bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuOrd@(order.Id)">
                    <ul class="py-2 text-sm text-gray-700">
                        <li>
                            <a class="block px-4 py-2 hover:bg-gray-100" href="#"
                               hx-get="?handler=Details&id=@order.Id"
                               hx-target="#detailsModalBody"
                               data-modal-target="detailsModal" data-modal-toggle="detailsModal">
                                <i class="bi bi-eye mr-2"></i>View Details
                            </a>
                        </li>
                        <li><hr class="my-1 border-gray-200"></li>
                        @if (order.Status == Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Pending)
                        {
                            <li>
                                <a class="block px-4 py-2 hover:bg-gray-100 cursor-pointer"
                                   hx-post="?handler=UpdateStatus&id=@order.Id&status=Confirmed"
                                   hx-target="#ordersTableBody"
                                   hx-confirm="Confirm this order?">
                                    <i class="bi bi-check mr-2"></i>Confirm Order
                                </a>
                            </li>
                        }
                        @if (order.Status == Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Confirmed)
                        {
                            <li>
                                <a class="block px-4 py-2 hover:bg-gray-100 cursor-pointer"
                                   hx-post="?handler=UpdateStatus&id=@order.Id&status=Processing"
                                   hx-target="#ordersTableBody"
                                   hx-confirm="Start processing this order?">
                                    <i class="bi bi-box mr-2"></i>Start Processing
                                </a>
                            </li>
                        }
                        @if (order.Status == Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Processing)
                        {
                            <li>
                                <a class="block px-4 py-2 hover:bg-gray-100 cursor-pointer"
                                   hx-post="?handler=UpdateStatus&id=@order.Id&status=Shipped"
                                   hx-target="#ordersTableBody"
                                   hx-confirm="Mark this order as shipped?">
                                    <i class="bi bi-truck mr-2"></i>Mark Shipped
                                </a>
                            </li>
                        }
                        @if (order.Status == Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Shipped)
                        {
                            <li>
                                <a class="block px-4 py-2 hover:bg-gray-100 cursor-pointer"
                                   hx-post="?handler=UpdateStatus&id=@order.Id&status=Delivered"
                                   hx-target="#ordersTableBody"
                                   hx-confirm="Mark this order as delivered?">
                                    <i class="bi bi-check-circle mr-2"></i>Mark Delivered
                                </a>
                            </li>
                        }
                        @if (order.Status != Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Cancelled &&
                             order.Status != Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Delivered &&
                             order.Status != Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Refunded)
                        {
                            <li><hr class="my-1 border-gray-200"></li>
                            <li>
                                <a class="block px-4 py-2 hover:bg-gray-100 text-red-600 cursor-pointer"
                                   hx-post="?handler=UpdateStatus&id=@order.Id&status=Cancelled"
                                   hx-target="#ordersTableBody"
                                   hx-confirm="Cancel this order?">
                                    <i class="bi bi-x-circle mr-2"></i>Cancel Order
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="8" class="bg-gray-50 px-6 py-3">
            <div class="flex justify-between items-center">
                <small class="text-gray-500">
                    @if (Model.TotalRecords > 0)
                    {
                        @:Showing @Model.Pagination.FirstRecord to @Model.Pagination.LastRecord of @Model.TotalRecords entries
                    }
                    else
                    {
                        @:No entries
                    }
                </small>
                <partial name="/Pages/Shared/_Pagination.cshtml" model="Model.Pagination" />
            </div>
        </td>
    </tr>
}

<script>
    // Re-initialize Flowbite dropdowns and HTMX after content swap
    if (typeof initFlowbite === 'function') { initFlowbite(); }
    if (typeof htmx !== 'undefined') { htmx.process(document.body); }
</script>
