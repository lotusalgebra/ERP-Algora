@model List<Algora.Erp.Domain.Entities.Ecommerce.ShippingMethod>

@if (!Model.Any())
{
    <div class="text-center text-gray-500 py-4">
        <i class="bi bi-truck block text-2xl mb-2"></i>
        No shipping methods
    </div>
}
else
{
    @foreach (var method in Model)
    {
        <div class="flex justify-between items-center px-4 py-3">
            <div>
                <div class="font-semibold text-gray-900">@method.Name</div>
                <small class="text-gray-500">
                    @method.Rate.ToString("C")
                    @if (method.FreeShippingThreshold.HasValue)
                    {
                        <span class="text-emerald-600">(Free over @method.FreeShippingThreshold.Value.ToString("C"))</span>
                    }
                </small>
            </div>
            <div class="flex items-center gap-2">
                @if (method.IsActive)
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-emerald-100 text-emerald-800">Active</span>
                }
                else
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">Inactive</span>
                }
                <button class="px-2 py-1.5 text-xs font-medium text-red-700 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-red-800 focus:z-10 focus:ring-2 focus:ring-red-200"
                        hx-delete="?handler=Shipping&id=@method.Id"
                        hx-target="#shippingMethods"
                        hx-confirm="Delete this shipping method?">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        </div>
    }
}
