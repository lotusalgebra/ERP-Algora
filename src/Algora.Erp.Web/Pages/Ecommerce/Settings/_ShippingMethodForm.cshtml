@model Algora.Erp.Domain.Entities.Ecommerce.ShippingMethod

<form hx-post="?handler=Shipping" hx-swap="none">
    @if (Model.Id != Guid.Empty)
    {
        <input type="hidden" name="Id" value="@Model.Id" />
    }

    <div class="mb-3">
        <label class="form-label">Method Name <span class="text-danger">*</span></label>
        <input type="text" class="form-control" name="Name" value="@Model.Name" required placeholder="e.g., Standard Shipping" />
    </div>

    <div class="mb-3">
        <label class="form-label">Carrier</label>
        <input type="text" class="form-control" name="Carrier" value="@Model.Carrier" placeholder="e.g., FedEx, UPS" />
    </div>

    <div class="mb-3">
        <label class="form-label">Description</label>
        <input type="text" class="form-control" name="Description" value="@Model.Description" placeholder="5-7 business days" />
    </div>

    <div class="row mb-3">
        <div class="col-6">
            <label class="form-label">Rate <span class="text-danger">*</span></label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input type="number" step="0.01" class="form-control" name="Rate" value="@Model.Rate.ToString("F2")" required />
            </div>
        </div>
        <div class="col-6">
            <label class="form-label">Free Shipping Over</label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input type="number" step="0.01" class="form-control" name="FreeShippingThreshold" value="@Model.FreeShippingThreshold?.ToString("F2")" />
            </div>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-6">
            <label class="form-label">Min Delivery Days</label>
            <input type="number" class="form-control" name="MinDeliveryDays" value="@Model.MinDeliveryDays" />
        </div>
        <div class="col-6">
            <label class="form-label">Max Delivery Days</label>
            <input type="number" class="form-control" name="MaxDeliveryDays" value="@Model.MaxDeliveryDays" />
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-6">
            <label class="form-label">Sort Order</label>
            <input type="number" class="form-control" name="SortOrder" value="@Model.SortOrder" />
        </div>
        <div class="col-6 d-flex align-items-end">
            <div class="form-check form-switch">
                <input type="checkbox" class="form-check-input" name="IsActive" value="true"
                       @(Model.IsActive ? "checked" : "") id="shippingActive" />
                <label class="form-check-label" for="shippingActive">Active</label>
            </div>
        </div>
    </div>

    <div class="modal-footer px-0 pb-0">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-check-lg me-2"></i>Save Method
        </button>
    </div>
</form>
