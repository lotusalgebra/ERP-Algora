@model Algora.Erp.Web.Pages.Ecommerce.Categories.WebCategoriesTableViewModel

@if (!Model.Categories.Any())
{
    <tr>
        <td colspan="6" class="text-center py-12 text-gray-500">
            <i class="bi bi-inbox text-4xl block mb-3"></i>
            No categories found
        </td>
    </tr>
}
else
{
    @foreach (var category in Model.Categories)
    {
        <tr class="bg-white border-b hover:bg-gray-50">
            <td class="px-6 py-4">
                <div class="flex items-center">
                    @if (!string.IsNullOrEmpty(category.ImageUrl))
                    {
                        <img src="@category.ImageUrl" alt="@category.Name" class="rounded mr-3 w-10 h-10 object-cover">
                    }
                    else
                    {
                        <div class="bg-gray-100 rounded flex items-center justify-center mr-3 w-10 h-10">
                            <i class="bi bi-folder text-gray-400"></i>
                        </div>
                    }
                    <div>
                        <div class="font-semibold text-gray-900">@category.Name</div>
                        @if (!string.IsNullOrEmpty(category.Description))
                        {
                            <small class="text-gray-500">@(category.Description.Length > 50 ? category.Description[..50] + "..." : category.Description)</small>
                        }
                    </div>
                </div>
            </td>
            <td class="px-6 py-4"><code class="text-xs bg-gray-100 px-2 py-1 rounded">@category.Slug</code></td>
            <td class="px-6 py-4 text-gray-500">@(category.Parent?.Name ?? "-")</td>
            <td class="px-6 py-4 text-right text-gray-900">@category.Products.Count</td>
            <td class="px-6 py-4">
                @if (category.IsActive)
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-emerald-100 text-emerald-800">Active</span>
                }
                else
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">Inactive</span>
                }
            </td>
            <td class="px-6 py-4 text-right">
                <div class="relative inline-block">
                    <button type="button" class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg"
                            id="dropdownCat@(category.Id)" data-dropdown-toggle="dropdownMenuCat@(category.Id)" data-dropdown-placement="bottom-end">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <div class="z-50 hidden absolute right-0 mt-2 bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuCat@(category.Id)">
                        <ul class="py-2 text-sm text-gray-700">
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100 cursor-pointer"
                                   hx-get="?handler=EditForm&id=@category.Id"
                                   hx-target="#formModalBody"
                                   data-modal-target="formModal" data-modal-toggle="formModal">
                                    <i class="bi bi-pencil mr-2"></i>Edit
                                </a>
                            </li>
                        </ul>
                        <div class="py-2">
                            <a class="flex items-center px-4 py-2 text-red-600 hover:bg-gray-100 cursor-pointer"
                               hx-delete="?handler=Delete&id=@category.Id"
                               hx-target="#categoriesTableBody"
                               hx-swap="innerHTML"
                               hx-confirm="Are you sure you want to delete this category?">
                                <i class="bi bi-trash mr-2"></i>Delete
                            </a>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="6" class="bg-gray-50 px-6 py-3">
            <div class="flex justify-between items-center">
                <small class="text-gray-500">
                    @if (Model.TotalRecords > 0)
                    {
                        @:Showing @Model.Pagination.FirstRecord to @Model.Pagination.LastRecord of @Model.TotalRecords entries
                    }
                    else
                    {
                        @:No entries
                    }
                </small>
                <partial name="/Pages/Shared/_Pagination.cshtml" model="Model.Pagination" />
            </div>
        </td>
    </tr>
}
