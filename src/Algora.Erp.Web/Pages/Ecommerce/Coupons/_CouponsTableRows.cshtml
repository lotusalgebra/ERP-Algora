@model Algora.Erp.Web.Pages.Ecommerce.Coupons.CouponsTableViewModel

@if (!Model.Coupons.Any())
{
    <tr>
        <td colspan="7" class="text-center py-12 text-gray-500">
            <i class="bi bi-ticket-perforated text-4xl block mb-3"></i>
            No coupons found
        </td>
    </tr>
}
else
{
    @foreach (var coupon in Model.Coupons)
    {
        var isExpired = coupon.ExpiresAt.HasValue && coupon.ExpiresAt.Value < Model.Now;
        var isNotStarted = coupon.StartsAt.HasValue && coupon.StartsAt.Value > Model.Now;
        var isAtLimit = coupon.UsageLimit.HasValue && coupon.TimesUsed >= coupon.UsageLimit;

        <tr class="bg-white border-b hover:bg-gray-50">
            <td class="px-6 py-4">
                <code class="bg-gray-100 px-2 py-1 rounded text-sm font-semibold">@coupon.Code</code>
            </td>
            <td class="px-6 py-4">
                @if (!string.IsNullOrEmpty(coupon.Description))
                {
                    <span class="text-gray-700">@coupon.Description</span>
                }
                else
                {
                    <span class="text-gray-400">-</span>
                }
            </td>
            <td class="px-6 py-4">
                @if (coupon.DiscountType == Algora.Erp.Domain.Entities.Ecommerce.DiscountType.Percentage)
                {
                    <span class="font-semibold text-emerald-600">@coupon.DiscountValue%</span>
                    @if (coupon.MaxDiscountAmount.HasValue)
                    {
                        <small class="text-gray-500 block">Max: @coupon.MaxDiscountAmount.Value.ToString("C")</small>
                    }
                }
                else
                {
                    <span class="font-semibold text-emerald-600">@coupon.DiscountValue.ToString("C")</span>
                }
                @if (coupon.MinOrderAmount.HasValue)
                {
                    <small class="text-gray-500 block">Min order: @coupon.MinOrderAmount.Value.ToString("C")</small>
                }
            </td>
            <td class="px-6 py-4 text-center">
                <span class="font-semibold text-gray-900">@coupon.TimesUsed</span>
                @if (coupon.UsageLimit.HasValue)
                {
                    <span class="text-gray-500">/ @coupon.UsageLimit</span>
                }
            </td>
            <td class="px-6 py-4">
                @if (coupon.StartsAt.HasValue || coupon.ExpiresAt.HasValue)
                {
                    <div class="text-sm">
                        @if (coupon.StartsAt.HasValue)
                        {
                            <span class="text-gray-700">@coupon.StartsAt.Value.ToString("MMM dd, yyyy")</span>
                        }
                        else
                        {
                            <span class="text-gray-400">Start</span>
                        }
                        <span class="text-gray-400 mx-1">-</span>
                        @if (coupon.ExpiresAt.HasValue)
                        {
                            <span class="text-gray-700">@coupon.ExpiresAt.Value.ToString("MMM dd, yyyy")</span>
                        }
                        else
                        {
                            <span class="text-gray-400">Forever</span>
                        }
                    </div>
                }
                else
                {
                    <span class="text-gray-400">No limit</span>
                }
            </td>
            <td class="px-6 py-4">
                @if (!coupon.IsActive)
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">Disabled</span>
                }
                else if (isExpired)
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-700 text-white">Expired</span>
                }
                else if (isNotStarted)
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-blue-100 text-blue-800">Scheduled</span>
                }
                else if (isAtLimit)
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-amber-100 text-amber-800">Limit Reached</span>
                }
                else
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-emerald-100 text-emerald-800">Active</span>
                }
            </td>
            <td class="px-6 py-4 text-right">
                <button class="px-3 py-2 text-xs font-medium text-gray-700 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 focus:z-10 focus:ring-2 focus:ring-gray-200" type="button" id="dropdownCoupon@(coupon.Id)" data-dropdown-toggle="dropdownMenuCoupon@(coupon.Id)" data-dropdown-placement="bottom-end">
                    <i class="bi bi-gear"></i>
                </button>
                <div class="z-50 hidden absolute right-0 mt-2 bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuCoupon@(coupon.Id)">
                    <ul class="py-2 text-sm text-gray-700">
                        <li>
                            <a class="block px-4 py-2 hover:bg-gray-100" href="#"
                               hx-get="?handler=EditForm&id=@coupon.Id"
                               hx-target="#couponModalBody"
                               data-modal-target="couponModal" data-modal-toggle="couponModal">
                                <i class="bi bi-pencil mr-2"></i>Edit
                            </a>
                        </li>
                        <li><hr class="my-1 border-gray-200"></li>
                        <li>
                            <a class="block px-4 py-2 hover:bg-gray-100 text-red-600" href="#"
                               hx-delete="?handler=&id=@coupon.Id"
                               hx-target="#couponsTableBody"
                               hx-confirm="Are you sure you want to delete this coupon?">
                                <i class="bi bi-trash mr-2"></i>Delete
                            </a>
                        </li>
                    </ul>
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="7" class="bg-gray-50 px-6 py-3">
            <div class="flex justify-between items-center">
                <small class="text-gray-500">
                    @if (Model.TotalRecords > 0)
                    {
                        @:Showing @Model.Pagination.FirstRecord to @Model.Pagination.LastRecord of @Model.TotalRecords entries
                    }
                    else
                    {
                        @:No entries
                    }
                </small>
                <partial name="/Pages/Shared/_Pagination.cshtml" model="Model.Pagination" />
            </div>
        </td>
    </tr>
}

<script>
    // Re-initialize Flowbite dropdowns and HTMX after content swap
    if (typeof initFlowbite === 'function') { initFlowbite(); }
    if (typeof htmx !== 'undefined') { htmx.process(document.body); }
</script>
