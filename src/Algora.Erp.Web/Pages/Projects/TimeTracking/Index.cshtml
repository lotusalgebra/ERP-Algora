@page
@model Algora.Erp.Web.Pages.Projects.TimeTracking.IndexModel
@{
    ViewData["Title"] = "Time Tracking";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">Time Tracking</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/Projects">Projects</a></li>
                    <li class="breadcrumb-item active">Time Tracking</li>
                </ol>
            </nav>
        </div>
        <button type="button" class="btn btn-primary"
                hx-get="/Projects/TimeTracking?handler=CreateForm"
                hx-target="#formModalContent"
                data-modal-target="formModal" data-modal-toggle="formModal">
            <i class="bi bi-plus-lg me-1"></i> Log Time
        </button>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-clock-history text-primary fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Total Entries</h6>
                            <h3 class="mb-0">@Model.TotalEntries</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-info bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-stopwatch text-info fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Total Hours</h6>
                            <h3 class="mb-0">@Model.TotalHours.ToString("N1")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-currency-dollar text-success fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Billable Hours</h6>
                            <h3 class="mb-0">@Model.BillableHours.ToString("N1")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-warning bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-hourglass-split text-warning fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Pending Approval</h6>
                            <h3 class="mb-0">@Model.PendingApproval</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-3">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text"
                               id="searchInput"
                               class="form-control border-start-0"
                               placeholder="Search..."
                               hx-get="/Projects/TimeTracking?handler=Table"
                               hx-trigger="keyup changed delay:300ms"
                               hx-target="#timeEntriesTableContainer"
                               hx-include="#projectFilter, #statusFilter"
                               name="search">
                    </div>
                </div>
                <div class="col-md-3">
                    <select id="projectFilter"
                            name="projectId"
                            class="form-select"
                            hx-get="/Projects/TimeTracking?handler=Table"
                            hx-trigger="change"
                            hx-target="#timeEntriesTableContainer"
                            hx-include="#searchInput, #statusFilter">
                        <option value="">All Projects</option>
                        @foreach (var project in Model.Projects)
                        {
                            <option value="@project.Id">@project.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <select id="statusFilter"
                            name="statusFilter"
                            class="form-select"
                            hx-get="/Projects/TimeTracking?handler=Table"
                            hx-trigger="change"
                            hx-target="#timeEntriesTableContainer"
                            hx-include="#searchInput, #projectFilter">
                        <option value="">All Statuses</option>
                        <option value="Draft">Draft</option>
                        <option value="Submitted">Submitted</option>
                        <option value="Approved">Approved</option>
                        <option value="Rejected">Rejected</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Time Entries Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Date</th>
                            <th>Employee</th>
                            <th>Project</th>
                            <th>Task</th>
                            <th>Description</th>
                            <th class="text-end">Hours</th>
                            <th>Billable</th>
                            <th>Status</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="timeEntriesTableContainer"
                           hx-get="/Projects/TimeTracking?handler=Table"
                           hx-trigger="load"
                           hx-swap="innerHTML">
                        <tr>
                            <td colspan="9" class="text-center py-4">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Form Modal -->
<div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="formModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="formModalContent">
            <div class="modal-body text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Close modal after successful form submission
        document.body.addEventListener('htmx:afterSwap', function(event) {
            if (event.detail.target.id === 'timeEntriesTableContainer') {
                const modal = FlowbiteInstances.getInstance('Modal', 'formModal');
                if (modal) modal.hide();
            }
        });
    </script>
}
