@page
@model Algora.Erp.Web.Pages.Projects.IndexModel
@{
    ViewData["Title"] = "Projects";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Projects</h1>
            <nav class="flex mt-1" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 text-sm text-gray-500">
                    <li><a href="/Dashboard" class="hover:text-primary-600">Dashboard</a></li>
                    <li><span class="mx-1">/</span></li>
                    <li class="text-gray-900 font-medium">Projects</li>
                </ol>
            </nav>
        </div>
        <button type="button" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition-colors"
                hx-get="/Projects?handler=CreateForm"
                hx-target="#formModalContent"
                data-modal-target="formModal"
                data-modal-toggle="formModal">
            <i class="bi bi-plus-lg me-2"></i> New Project
        </button>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-primary-100 rounded-lg">
                    <i class="bi bi-kanban text-xl text-primary-600"></i>
                </div>
                <div class="ms-4">
                    <p class="text-sm text-gray-500 mb-1">Total Projects</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.TotalProjects</h3>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-blue-100 rounded-lg">
                    <i class="bi bi-activity text-xl text-blue-600"></i>
                </div>
                <div class="ms-4">
                    <p class="text-sm text-gray-500 mb-1">Active</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.ActiveProjects</h3>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-emerald-100 rounded-lg">
                    <i class="bi bi-check-circle text-xl text-emerald-600"></i>
                </div>
                <div class="ms-4">
                    <p class="text-sm text-gray-500 mb-1">Completed</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.CompletedProjects</h3>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-amber-100 rounded-lg">
                    <i class="bi bi-currency-dollar text-xl text-amber-600"></i>
                </div>
                <div class="ms-4">
                    <p class="text-sm text-gray-500 mb-1">Total Budget</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.TotalBudget.ToString("C0")</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-xl shadow-sm p-4">
        <div class="grid grid-cols-1 md:grid-cols-12 gap-3">
            <div class="md:col-span-5">
                <div class="relative">
                    <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                        <i class="bi bi-search text-gray-400"></i>
                    </div>
                    <input type="text"
                           id="searchInput"
                           class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full ps-10 p-2.5"
                           placeholder="Search projects..."
                           hx-get="/Projects?handler=Table"
                           hx-trigger="keyup changed delay:300ms"
                           hx-target="#projectsTableContainer"
                           hx-include="#statusFilter"
                           name="search">
                </div>
            </div>
            <div class="md:col-span-3">
                <select id="statusFilter"
                        name="statusFilter"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                        hx-get="/Projects?handler=Table"
                        hx-trigger="change"
                        hx-target="#projectsTableContainer"
                        hx-include="#searchInput">
                    <option value="">All Statuses</option>
                    <option value="Planning">Planning</option>
                    <option value="Active">Active</option>
                    <option value="OnHold">On Hold</option>
                    <option value="Completed">Completed</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Projects Table -->
    <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3">Project</th>
                        <th scope="col" class="px-6 py-3">Customer</th>
                        <th scope="col" class="px-6 py-3">Manager</th>
                        <th scope="col" class="px-6 py-3">Progress</th>
                        <th scope="col" class="px-6 py-3">Priority</th>
                        <th scope="col" class="px-6 py-3">Status</th>
                        <th scope="col" class="px-6 py-3 text-right">Budget</th>
                        <th scope="col" class="px-6 py-3">Dates</th>
                        <th scope="col" class="px-6 py-3 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody id="projectsTableContainer"
                       hx-get="/Projects?handler=Table"
                       hx-trigger="load"
                       hx-swap="innerHTML">
                    <tr>
                        <td colspan="9" class="px-6 py-8 text-center">
                            <div class="inline-block animate-spin rounded-full h-6 w-6 border-b-2 border-primary-600"></div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Form Modal -->
<div id="formModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-2xl max-h-full">
        <div class="relative bg-white rounded-lg shadow" id="formModalContent">
            <div class="text-center py-8">
                <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-primary-600"></div>
            </div>
        </div>
    </div>
</div>

<!-- Details Modal -->
<div id="detailsModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-6xl max-h-full">
        <div class="relative bg-white rounded-lg shadow" id="detailsModalContent">
            <div class="text-center py-8">
                <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-primary-600"></div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Close modal after successful form submission
        document.body.addEventListener('htmx:afterSwap', function(event) {
            if (event.detail.target.id === 'projectsTableContainer') {
                const modal = FlowbiteInstances.getInstance('Modal', 'formModal');
                if (modal) modal.hide();
            }
        });
    </script>
}
