@using Algora.Erp.Domain.Entities.Projects
@model Algora.Erp.Web.Pages.Projects.ProjectTableViewModel

@if (!Model.Projects.Any())
{
    <tr>
        <td colspan="9" class="text-center py-5">
            <div class="text-muted">
                <i class="bi bi-kanban fs-1 d-block mb-3"></i>
                <p class="mb-0">No projects found</p>
            </div>
        </td>
    </tr>
}
else
{
    @foreach (var project in Model.Projects)
    {
        var statusClass = project.Status switch
        {
            ProjectStatus.Planning => "bg-secondary",
            ProjectStatus.Active => "bg-primary",
            ProjectStatus.OnHold => "bg-warning",
            ProjectStatus.Completed => "bg-success",
            ProjectStatus.Cancelled => "bg-danger",
            _ => "bg-secondary"
        };

        var priorityClass = project.Priority switch
        {
            ProjectPriority.Low => "text-muted",
            ProjectPriority.Normal => "text-dark",
            ProjectPriority.High => "text-warning",
            ProjectPriority.Critical => "text-danger",
            _ => "text-dark"
        };

        var progressPercent = (int)project.Progress;

        <tr>
            <td class="ps-4">
                <a href="#"
                   class="text-decoration-none fw-semibold"
                   hx-get="/Projects?handler=Details&id=@project.Id"
                   hx-target="#detailsModalContent"
                   data-bs-toggle="modal"
                   data-bs-target="#detailsModal">
                    @project.ProjectCode
                </a>
                <div class="small text-muted">@project.Name</div>
            </td>
            <td>@(project.Customer?.Name ?? "-")</td>
            <td>
                @if (project.ProjectManager != null)
                {
                    <span>@project.ProjectManager.FirstName @project.ProjectManager.LastName</span>
                }
                else
                {
                    <span class="text-muted">-</span>
                }
            </td>
            <td>
                <div class="d-flex align-items-center">
                    <div class="progress flex-grow-1" style="height: 8px; width: 80px;">
                        <div class="progress-bar @(progressPercent >= 100 ? "bg-success" : "bg-primary")"
                             style="width: @progressPercent%"></div>
                    </div>
                    <span class="ms-2 small">@progressPercent%</span>
                </div>
            </td>
            <td>
                <span class="@priorityClass">
                    @if (project.Priority == ProjectPriority.Critical)
                    {
                        <i class="bi bi-exclamation-circle-fill me-1"></i>
                    }
                    @project.Priority
                </span>
            </td>
            <td>
                <span class="badge @statusClass">@project.Status</span>
            </td>
            <td>@project.BudgetAmount.ToString("C0")</td>
            <td>
                <div class="small">
                    <span class="text-muted">Start:</span> @project.StartDate.ToString("MMM dd")
                    @if (project.EndDate.HasValue)
                    {
                        <br><span class="text-muted">End:</span> @project.EndDate.Value.ToString("MMM dd")
                    }
                </div>
            </td>
            <td class="text-end pe-4">
                <div class="btn-group">
                    <button type="button"
                            class="btn btn-sm btn-outline-secondary"
                            hx-get="/Projects?handler=Details&id=@project.Id"
                            hx-target="#detailsModalContent"
                            data-bs-toggle="modal"
                            data-bs-target="#detailsModal"
                            title="View Details">
                        <i class="bi bi-eye"></i>
                    </button>
                    @if (project.Status == ProjectStatus.Planning || project.Status == ProjectStatus.OnHold)
                    {
                        <button type="button"
                                class="btn btn-sm btn-outline-primary"
                                hx-get="/Projects?handler=EditForm&id=@project.Id"
                                hx-target="#formModalContent"
                                data-bs-toggle="modal"
                                data-bs-target="#formModal"
                                title="Edit">
                            <i class="bi bi-pencil"></i>
                        </button>
                    }
                    @if (project.Status == ProjectStatus.Planning)
                    {
                        <button type="button"
                                class="btn btn-sm btn-outline-success"
                                hx-post="/Projects?handler=UpdateStatus&id=@project.Id&status=Active"
                                hx-target="#projectsTableContainer"
                                hx-confirm="Start this project?"
                                title="Start">
                            <i class="bi bi-play-fill"></i>
                        </button>
                        <button type="button"
                                class="btn btn-sm btn-outline-danger"
                                hx-delete="/Projects?id=@project.Id"
                                hx-target="#projectsTableContainer"
                                hx-confirm="Delete this project?"
                                title="Delete">
                            <i class="bi bi-trash"></i>
                        </button>
                    }
                    @if (project.Status == ProjectStatus.Active)
                    {
                        <button type="button"
                                class="btn btn-sm btn-outline-warning"
                                hx-post="/Projects?handler=UpdateStatus&id=@project.Id&status=OnHold"
                                hx-target="#projectsTableContainer"
                                hx-confirm="Put this project on hold?"
                                title="Hold">
                            <i class="bi bi-pause-fill"></i>
                        </button>
                        <button type="button"
                                class="btn btn-sm btn-outline-success"
                                hx-post="/Projects?handler=UpdateStatus&id=@project.Id&status=Completed"
                                hx-target="#projectsTableContainer"
                                hx-confirm="Complete this project?"
                                title="Complete">
                            <i class="bi bi-check-lg"></i>
                        </button>
                    }
                    @if (project.Status == ProjectStatus.OnHold)
                    {
                        <button type="button"
                                class="btn btn-sm btn-outline-success"
                                hx-post="/Projects?handler=UpdateStatus&id=@project.Id&status=Active"
                                hx-target="#projectsTableContainer"
                                hx-confirm="Resume this project?"
                                title="Resume">
                            <i class="bi bi-play-fill"></i>
                        </button>
                    }
                    @if (project.Status != ProjectStatus.Completed && project.Status != ProjectStatus.Cancelled)
                    {
                        <button type="button"
                                class="btn btn-sm btn-outline-danger"
                                hx-post="/Projects?handler=UpdateStatus&id=@project.Id&status=Cancelled"
                                hx-target="#projectsTableContainer"
                                hx-confirm="Cancel this project?"
                                title="Cancel">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    }
                </div>
            </td>
        </tr>
    }
}

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <tr>
        <td colspan="9" class="border-0">
            <div class="d-flex justify-content-between align-items-center px-3 py-2">
                <div class="text-muted small">
                    Showing @((Model.Page - 1) * Model.PageSize + 1) to @Math.Min(Model.Page * Model.PageSize, Model.TotalRecords) of @Model.TotalRecords entries
                </div>
                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                            <a class="page-link" href="#"
                               hx-get="/Projects?handler=Table&page=@(Model.Page - 1)"
                               hx-target="#projectsTableContainer"
                               hx-include="#searchInput, #statusFilter">
                                Previous
                            </a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.Page ? "active" : "")">
                                <a class="page-link" href="#"
                                   hx-get="/Projects?handler=Table&page=@i"
                                   hx-target="#projectsTableContainer"
                                   hx-include="#searchInput, #statusFilter">
                                    @i
                                </a>
                            </li>
                        }
                        <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="#"
                               hx-get="/Projects?handler=Table&page=@(Model.Page + 1)"
                               hx-target="#projectsTableContainer"
                               hx-include="#searchInput, #statusFilter">
                                Next
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </td>
    </tr>
}
