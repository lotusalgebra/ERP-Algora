@using Algora.Erp.Domain.Entities.Projects
@model Algora.Erp.Web.Pages.Projects.ProjectTableViewModel

@if (!Model.Projects.Any())
{
    <tr>
        <td colspan="9" class="text-center py-12">
            <div class="text-gray-500">
                <i class="bi bi-kanban text-4xl block mb-3"></i>
                <p class="mb-0">No projects found</p>
            </div>
        </td>
    </tr>
}
else
{
    @foreach (var project in Model.Projects)
    {
        var statusClass = project.Status switch
        {
            ProjectStatus.Planning => "bg-gray-100 text-gray-800",
            ProjectStatus.Active => "bg-primary-100 text-primary-800",
            ProjectStatus.OnHold => "bg-amber-100 text-amber-800",
            ProjectStatus.Completed => "bg-emerald-100 text-emerald-800",
            ProjectStatus.Cancelled => "bg-red-100 text-red-800",
            _ => "bg-gray-100 text-gray-800"
        };

        var priorityClass = project.Priority switch
        {
            ProjectPriority.Low => "text-gray-500",
            ProjectPriority.Normal => "text-gray-900",
            ProjectPriority.High => "text-amber-600",
            ProjectPriority.Critical => "text-red-600",
            _ => "text-gray-900"
        };

        var progressPercent = (int)project.Progress;

        <tr class="border-b hover:bg-gray-50">
            <td class="px-6 py-4">
                <a href="#"
                   class="font-semibold text-primary-600 hover:text-primary-700"
                   hx-get="/Projects?handler=Details&id=@project.Id"
                   hx-target="#detailsModalContent"
                   data-modal-target="detailsModal" data-modal-toggle="detailsModal">
                    @project.ProjectCode
                </a>
                <div class="text-sm text-gray-500">@project.Name</div>
            </td>
            <td class="px-6 py-4">@(project.Customer?.Name ?? "-")</td>
            <td class="px-6 py-4">
                @if (project.ProjectManager != null)
                {
                    <span>@project.ProjectManager.FirstName @project.ProjectManager.LastName</span>
                }
                else
                {
                    <span class="text-gray-500">-</span>
                }
            </td>
            <td class="px-6 py-4">
                <div class="flex items-center">
                    <div class="w-20 bg-gray-200 rounded-full h-2 mr-2">
                        <div class="@(progressPercent >= 100 ? "bg-emerald-500" : "bg-primary-600") h-2 rounded-full"
                             style="width: @progressPercent%"></div>
                    </div>
                    <span class="text-sm">@progressPercent%</span>
                </div>
            </td>
            <td class="px-6 py-4">
                <span class="@priorityClass">
                    @if (project.Priority == ProjectPriority.Critical)
                    {
                        <i class="bi bi-exclamation-circle-fill mr-1"></i>
                    }
                    @project.Priority
                </span>
            </td>
            <td class="px-6 py-4">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @statusClass">@project.Status</span>
            </td>
            <td class="px-6 py-4 text-right">@project.BudgetAmount.ToString("C0")</td>
            <td class="px-6 py-4">
                <div class="text-sm">
                    <span class="text-gray-500">Start:</span> @project.StartDate.ToString("MMM dd")
                    @if (project.EndDate.HasValue)
                    {
                        <br><span class="text-gray-500">End:</span> @project.EndDate.Value.ToString("MMM dd")
                    }
                </div>
            </td>
            <td class="px-6 py-4 text-right">
                <div class="inline-flex rounded-lg shadow-sm" role="group">
                    <button type="button"
                            class="px-3 py-2 text-sm font-medium text-gray-600 bg-white border border-gray-200 rounded-l-lg hover:bg-gray-100 focus:z-10 focus:ring-2 focus:ring-primary-500"
                            hx-get="/Projects?handler=Details&id=@project.Id"
                            hx-target="#detailsModalContent"
                            data-modal-target="detailsModal" data-modal-toggle="detailsModal"
                            title="View Details">
                        <i class="bi bi-eye"></i>
                    </button>
                    @if (project.Status == ProjectStatus.Planning || project.Status == ProjectStatus.OnHold)
                    {
                        <button type="button"
                                class="px-3 py-2 text-sm font-medium text-primary-600 bg-white border-t border-b border-gray-200 hover:bg-gray-100 focus:z-10 focus:ring-2 focus:ring-primary-500"
                                hx-get="/Projects?handler=EditForm&id=@project.Id"
                                hx-target="#formModalContent"
                                data-modal-target="formModal" data-modal-toggle="formModal"
                                title="Edit">
                            <i class="bi bi-pencil"></i>
                        </button>
                    }
                    @if (project.Status == ProjectStatus.Planning)
                    {
                        <button type="button"
                                class="px-3 py-2 text-sm font-medium text-emerald-600 bg-white border-t border-b border-gray-200 hover:bg-gray-100 focus:z-10 focus:ring-2 focus:ring-primary-500"
                                hx-post="/Projects?handler=UpdateStatus&id=@project.Id&status=Active"
                                hx-target="#projectsTableContainer"
                                hx-confirm="Start this project?"
                                title="Start">
                            <i class="bi bi-play-fill"></i>
                        </button>
                        <button type="button"
                                class="px-3 py-2 text-sm font-medium text-red-600 bg-white border border-gray-200 rounded-r-lg hover:bg-gray-100 focus:z-10 focus:ring-2 focus:ring-primary-500"
                                hx-delete="/Projects?id=@project.Id"
                                hx-target="#projectsTableContainer"
                                hx-confirm="Delete this project?"
                                title="Delete">
                            <i class="bi bi-trash"></i>
                        </button>
                    }
                    @if (project.Status == ProjectStatus.Active)
                    {
                        <button type="button"
                                class="px-3 py-2 text-sm font-medium text-amber-600 bg-white border-t border-b border-gray-200 hover:bg-gray-100 focus:z-10 focus:ring-2 focus:ring-primary-500"
                                hx-post="/Projects?handler=UpdateStatus&id=@project.Id&status=OnHold"
                                hx-target="#projectsTableContainer"
                                hx-confirm="Put this project on hold?"
                                title="Hold">
                            <i class="bi bi-pause-fill"></i>
                        </button>
                        <button type="button"
                                class="px-3 py-2 text-sm font-medium text-emerald-600 bg-white border border-gray-200 rounded-r-lg hover:bg-gray-100 focus:z-10 focus:ring-2 focus:ring-primary-500"
                                hx-post="/Projects?handler=UpdateStatus&id=@project.Id&status=Completed"
                                hx-target="#projectsTableContainer"
                                hx-confirm="Complete this project?"
                                title="Complete">
                            <i class="bi bi-check-lg"></i>
                        </button>
                    }
                    @if (project.Status == ProjectStatus.OnHold)
                    {
                        <button type="button"
                                class="px-3 py-2 text-sm font-medium text-emerald-600 bg-white border border-gray-200 rounded-r-lg hover:bg-gray-100 focus:z-10 focus:ring-2 focus:ring-primary-500"
                                hx-post="/Projects?handler=UpdateStatus&id=@project.Id&status=Active"
                                hx-target="#projectsTableContainer"
                                hx-confirm="Resume this project?"
                                title="Resume">
                            <i class="bi bi-play-fill"></i>
                        </button>
                    }
                    @if (project.Status != ProjectStatus.Completed && project.Status != ProjectStatus.Cancelled && project.Status != ProjectStatus.Planning && project.Status != ProjectStatus.Active && project.Status != ProjectStatus.OnHold)
                    {
                        <button type="button"
                                class="px-3 py-2 text-sm font-medium text-red-600 bg-white border border-gray-200 rounded-r-lg hover:bg-gray-100 focus:z-10 focus:ring-2 focus:ring-primary-500"
                                hx-post="/Projects?handler=UpdateStatus&id=@project.Id&status=Cancelled"
                                hx-target="#projectsTableContainer"
                                hx-confirm="Cancel this project?"
                                title="Cancel">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    }
                </div>
            </td>
        </tr>
    }
}

<!-- Pagination -->
<tr>
    <td colspan="9" class="bg-gray-50 px-6 py-3">
        @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", Model.Pagination)
    </td>
</tr>
<script>
    // Re-initialize Flowbite dropdowns and HTMX after content swap
    if (typeof initFlowbite === 'function') { initFlowbite(); }
    if (typeof htmx !== 'undefined') { htmx.process(document.body); }
</script>