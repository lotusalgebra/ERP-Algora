@page
@model Algora.Erp.Web.Pages.Account.ForgotPasswordModel
@{
    Layout = null;
    ViewData["Title"] = "Forgot Password";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Forgot Password - Algora ERP</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .card-custom {
            max-width: 420px;
            width: 100%;
            background: white;
            border-radius: 16px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        }
        .card-header-custom {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            padding: 2rem;
            text-align: center;
            border-radius: 16px 16px 0 0;
        }
        .card-header-custom h1 {
            color: white;
            font-size: 1.5rem;
            margin-bottom: 0.5rem;
        }
        .card-header-custom p {
            color: rgba(255,255,255,0.8);
            margin: 0;
        }
        .card-body-custom {
            padding: 2rem;
        }
        .form-control:focus {
            border-color: #1e3c72;
            box-shadow: 0 0 0 0.2rem rgba(30,60,114,0.25);
        }
        .btn-primary {
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
            border: none;
        }
        .btn-primary:hover {
            background: linear-gradient(135deg, #163159 0%, #1e3c72 100%);
        }
    </style>
</head>
<body>
    <div class="card-custom">
        <div class="card-header-custom">
            <h1><i class="bi bi-key me-2"></i>Forgot Password</h1>
            <p>Reset your password</p>
        </div>
        <div class="card-body-custom">
            @if (Model.EmailSent)
            {
                <div class="alert alert-success">
                    <i class="bi bi-check-circle me-2"></i>
                    If an account exists with that email, we've sent password reset instructions.
                </div>
                <a href="/Account/Login" class="btn btn-primary w-100">
                    <i class="bi bi-arrow-left me-2"></i>Back to Login
                </a>
            }
            else
            {
                <p class="text-muted mb-4">
                    Enter your email address and we'll send you instructions to reset your password.
                </p>

                <form method="post">
                    <div class="mb-4">
                        <label class="form-label">Email Address</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="email" class="form-control" asp-for="Input.Email" placeholder="user@company.com" required autofocus />
                        </div>
                        <span asp-validation-for="Input.Email" class="text-danger small"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100 py-2 mb-3">
                        <i class="bi bi-envelope-arrow-up me-2"></i>Send Reset Link
                    </button>

                    <a href="/Account/Login" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-arrow-left me-2"></i>Back to Login
                    </a>
                </form>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
