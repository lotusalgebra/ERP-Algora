@page
@model Algora.Erp.Web.Pages.Sales.Quotations.IndexModel
@{
    ViewData["Title"] = "Quotations";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Quotations</h1>
            <p class="text-sm text-gray-500 mt-1">Create and manage customer quotations</p>
        </div>
        <button type="button" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition-colors"
                hx-get="?handler=CreateForm"
                hx-target="#formModalBody"
                data-modal-target="formModal"
                data-modal-toggle="formModal">
            <i class="bi bi-plus-lg me-2"></i>New Quotation
        </button>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-primary-100 rounded-lg">
                    <i class="bi bi-file-earmark-text text-xl text-primary-600"></i>
                </div>
                <div class="ms-4">
                    <p class="text-sm text-gray-500 mb-1">Total Quotations</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.TotalQuotations</h3>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-amber-100 rounded-lg">
                    <i class="bi bi-hourglass-split text-xl text-amber-600"></i>
                </div>
                <div class="ms-4">
                    <p class="text-sm text-gray-500 mb-1">Pending</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.PendingQuotations</h3>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-emerald-100 rounded-lg">
                    <i class="bi bi-check-circle text-xl text-emerald-600"></i>
                </div>
                <div class="ms-4">
                    <p class="text-sm text-gray-500 mb-1">Accepted</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.AcceptedQuotations</h3>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-blue-100 rounded-lg">
                    <i class="bi bi-currency-dollar text-xl text-blue-600"></i>
                </div>
                <div class="ms-4">
                    <p class="text-sm text-gray-500 mb-1">Total Value</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.TotalValue.ToString("C0")</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Quotations Table -->
    <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <div class="p-4 border-b border-gray-200">
            <div class="grid grid-cols-1 md:grid-cols-12 gap-3">
                <div class="md:col-span-4">
                    <div class="relative">
                        <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                            <i class="bi bi-search text-gray-400"></i>
                        </div>
                        <input type="text"
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full ps-10 p-2.5"
                               placeholder="Search quotations..."
                               id="searchInput"
                               hx-get="?handler=Table"
                               hx-trigger="keyup changed delay:300ms"
                               hx-target="#quotationsTableBody"
                               hx-include="#customerFilter, #statusFilter"
                               name="search">
                    </div>
                </div>
                <div class="md:col-span-3">
                    <select id="customerFilter"
                            name="customerFilter"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                            hx-get="?handler=Table"
                            hx-trigger="change"
                            hx-target="#quotationsTableBody"
                            hx-include="#searchInput, #statusFilter">
                        <option value="">All Customers</option>
                        @foreach (var customer in Model.Customers)
                        {
                            <option value="@customer.Id">@customer.Name</option>
                        }
                    </select>
                </div>
                <div class="md:col-span-3">
                    <select id="statusFilter"
                            name="statusFilter"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                            hx-get="?handler=Table"
                            hx-trigger="change"
                            hx-target="#quotationsTableBody"
                            hx-include="#searchInput, #customerFilter">
                        <option value="">All Status</option>
                        <option value="Draft">Draft</option>
                        <option value="Sent">Sent</option>
                        <option value="Accepted">Accepted</option>
                        <option value="Rejected">Rejected</option>
                        <option value="Expired">Expired</option>
                    </select>
                </div>
                <div class="md:col-span-2 flex justify-end">
                    <button type="button" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 hover:bg-gray-50 rounded-lg"
                            hx-get="?handler=Export"
                            hx-include="#searchInput, #customerFilter, #statusFilter">
                        <i class="bi bi-download me-2"></i>Export
                    </button>
                </div>
            </div>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3">Quote #</th>
                        <th scope="col" class="px-6 py-3">Customer</th>
                        <th scope="col" class="px-6 py-3">Created</th>
                        <th scope="col" class="px-6 py-3">Valid Until</th>
                        <th scope="col" class="px-6 py-3 text-center">Items</th>
                        <th scope="col" class="px-6 py-3 text-right">Amount</th>
                        <th scope="col" class="px-6 py-3">Status</th>
                        <th scope="col" class="px-6 py-3 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody id="quotationsTableBody"
                       hx-get="?handler=Table"
                       hx-trigger="load"
                       hx-include="#searchInput, #customerFilter, #statusFilter">
                    <tr>
                        <td colspan="8" class="px-6 py-8 text-center">
                            <div class="inline-block animate-spin rounded-full h-6 w-6 border-b-2 border-primary-600"></div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Form Modal -->
<div id="formModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-4xl max-h-full">
        <div class="relative bg-white rounded-lg shadow">
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t">
                <h3 class="text-xl font-semibold text-gray-900">Quotation</h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="formModal">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="p-4 md:p-5" id="formModalBody">
                <div class="text-center py-8">
                    <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-primary-600"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Details Modal -->
<div id="detailsModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-4xl max-h-full">
        <div class="relative bg-white rounded-lg shadow">
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t">
                <h3 class="text-xl font-semibold text-gray-900">Quotation Details</h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="detailsModal">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="p-4 md:p-5" id="detailsModalBody">
                <div class="text-center py-8">
                    <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-primary-600"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function viewDetails(id) {
            htmx.ajax('GET', `?handler=Details&id=${id}`, {
                target: '#detailsModalBody',
                swap: 'innerHTML'
            });
            const modal = FlowbiteInstances.getInstance('Modal', 'detailsModal');
            if (modal) modal.show();
        }

        function updateStatus(id, status) {
            htmx.ajax('POST', `?handler=UpdateStatus&id=${id}&status=${status}`, {
                target: '#quotationsTableBody',
                swap: 'innerHTML'
            });
        }

        function convertToOrder(id) {
            if (confirm('Convert this quotation to a sales order?')) {
                htmx.ajax('POST', `?handler=ConvertToOrder&id=${id}`, {
                    target: '#quotationsTableBody',
                    swap: 'innerHTML'
                });
            }
        }

        function deleteQuotation(id) {
            if (confirm('Are you sure you want to delete this quotation?')) {
                htmx.ajax('DELETE', `?handler=&id=${id}`, {
                    target: '#quotationsTableBody',
                    swap: 'innerHTML'
                });
            }
        }

        document.body.addEventListener('formSubmitSuccess', function() {
            const modal = FlowbiteInstances.getInstance('Modal', 'formModal');
            if (modal) modal.hide();
        });
    </script>
}
