@model Algora.Erp.Web.Pages.Sales.Quotations.QuotationsTableViewModel
@using Algora.Erp.Domain.Entities.Sales

@if (Model.Quotations.Count == 0)
{
    <tr>
        <td colspan="8" class="text-center py-5">
            <div class="text-gray-500">
                <i class="bi bi-file-earmark-x text-4xl block mb-3"></i>
                <p class="mb-0">No quotations found</p>
            </div>
        </td>
    </tr>
}
else
{
    @foreach (var quote in Model.Quotations)
    {
        var status = quote.Status switch
        {
            SalesOrderStatus.Draft => "Draft",
            SalesOrderStatus.Confirmed => "Sent",
            SalesOrderStatus.Paid => "Accepted",
            SalesOrderStatus.Cancelled => "Rejected",
            SalesOrderStatus.OnHold => "Expired",
            _ => quote.Status.ToString()
        };

        var statusColor = quote.Status switch
        {
            SalesOrderStatus.Draft => "bg-gray-100 text-gray-800",
            SalesOrderStatus.Confirmed => "bg-primary-100 text-primary-800",
            SalesOrderStatus.Paid => "bg-emerald-100 text-emerald-800",
            SalesOrderStatus.Cancelled => "bg-red-100 text-red-800",
            SalesOrderStatus.OnHold => "bg-amber-100 text-amber-800",
            _ => "bg-gray-100 text-gray-800"
        };

        var isExpired = quote.DueDate.HasValue && quote.DueDate.Value < DateTime.Today &&
                       quote.Status != SalesOrderStatus.Paid &&
                       quote.Status != SalesOrderStatus.Cancelled &&
                       quote.Status != SalesOrderStatus.OnHold;

        <tr class="hover:bg-gray-50">
            <td class="px-6 py-4">
                <div class="font-medium text-gray-900">@quote.OrderNumber</div>
                @if (!string.IsNullOrEmpty(quote.Reference))
                {
                    <span class="text-sm text-gray-500">Ref: @quote.Reference</span>
                }
            </td>
            <td class="px-6 py-4">
                <div class="font-medium text-gray-900">@quote.Customer?.Name</div>
                @if (!string.IsNullOrEmpty(quote.Customer?.Email))
                {
                    <span class="text-sm text-gray-500">@quote.Customer.Email</span>
                }
            </td>
            <td class="px-6 py-4">
                <div>@quote.OrderDate.ToString("MMM dd, yyyy")</div>
            </td>
            <td class="px-6 py-4">
                @if (quote.DueDate.HasValue)
                {
                    <span class="@(isExpired ? "text-red-600 font-medium" : "")">
                        @quote.DueDate.Value.ToString("MMM dd, yyyy")
                        @if (isExpired)
                        {
                            <i class="bi bi-exclamation-circle ml-1" title="Expired"></i>
                        }
                    </span>
                }
                else
                {
                    <span class="text-gray-500">-</span>
                }
            </td>
            <td class="px-6 py-4 text-center">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">
                    @quote.Lines.Count
                </span>
            </td>
            <td class="px-6 py-4 text-right">
                <span class="font-medium text-gray-900">@quote.TotalAmount.ToString("C2")</span>
            </td>
            <td class="px-6 py-4">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @statusColor">
                    @status
                </span>
            </td>
            <td class="px-6 py-4 text-right">
                <div class="relative inline-block">
                    <button class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg" id="dropdownQuote@(quote.Id)" data-dropdown-toggle="dropdownMenuQuote@(quote.Id)" data-dropdown-placement="bottom-end">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <div class="z-50 hidden absolute right-0 mt-2 bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuQuote@(quote.Id)">
                        <ul class="py-2 text-sm text-gray-700">
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100" href="/Sales/Quotations/Details/@quote.Id">
                                    <i class="bi bi-eye mr-2"></i> View Details
                                </a>
                            </li>
                            @if (quote.Status == SalesOrderStatus.Draft)
                            {
                                <li>
                                    <a class="flex items-center px-4 py-2 hover:bg-gray-100 cursor-pointer"
                                       hx-get="?handler=EditForm&id=@quote.Id"
                                       hx-target="#formModalBody"
                                       data-modal-target="formModal" data-modal-toggle="formModal">
                                        <i class="bi bi-pencil mr-2"></i> Edit
                                    </a>
                                </li>
                                <li>
                                    <a class="flex items-center px-4 py-2 text-emerald-600 hover:bg-gray-100 cursor-pointer"
                                       hx-post="?handler=UpdateStatus&id=@quote.Id&status=Confirmed"
                                       hx-target="#quotationsTableBody"
                                       hx-confirm="Mark this quotation as sent?">
                                        <i class="bi bi-send mr-2"></i> Mark as Sent
                                    </a>
                                </li>
                            }
                            @if (quote.Status == SalesOrderStatus.Confirmed)
                            {
                                <li>
                                    <a class="flex items-center px-4 py-2 text-emerald-600 hover:bg-gray-100 cursor-pointer"
                                       hx-post="?handler=ConvertToOrder&id=@quote.Id"
                                       hx-target="#quotationsTableBody"
                                       hx-confirm="Convert this quotation to a sales order?">
                                        <i class="bi bi-bag-plus mr-2"></i> Convert to Order
                                    </a>
                                </li>
                            }
                        </ul>
                        @if (quote.Status == SalesOrderStatus.Draft)
                        {
                            <div class="py-2">
                                <a class="flex items-center px-4 py-2 text-red-600 hover:bg-gray-100 cursor-pointer"
                                   hx-delete="?handler=Delete&id=@quote.Id"
                                   hx-target="#quotationsTableBody"
                                   hx-confirm="Are you sure you want to delete this quotation?">
                                    <i class="bi bi-trash mr-2"></i> Delete
                                </a>
                            </div>
                        }
                        @if (quote.Status == SalesOrderStatus.Confirmed)
                        {
                            <div class="py-2">
                                <a class="flex items-center px-4 py-2 text-amber-600 hover:bg-gray-100 cursor-pointer"
                                   hx-post="?handler=UpdateStatus&id=@quote.Id&status=Cancelled"
                                   hx-target="#quotationsTableBody"
                                   hx-confirm="Mark this quotation as rejected?">
                                    <i class="bi bi-x-lg mr-2"></i> Mark Rejected
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="8" class="px-6 py-3">
            @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", Model.Pagination)
        </td>
    </tr>
}
