@model Algora.Erp.Domain.Entities.Sales.SalesOrder
@using Algora.Erp.Domain.Entities.Sales

@{
    var status = Model.Status switch
    {
        SalesOrderStatus.Draft => "Draft",
        SalesOrderStatus.Confirmed => "Sent",
        SalesOrderStatus.Paid => "Accepted",
        SalesOrderStatus.Cancelled => "Rejected",
        SalesOrderStatus.OnHold => "Expired",
        _ => Model.Status.ToString()
    };

    var statusColor = Model.Status switch
    {
        SalesOrderStatus.Draft => "bg-gray-100 text-gray-800",
        SalesOrderStatus.Confirmed => "bg-primary-100 text-primary-800",
        SalesOrderStatus.Paid => "bg-emerald-100 text-emerald-800",
        SalesOrderStatus.Cancelled => "bg-red-100 text-red-800",
        SalesOrderStatus.OnHold => "bg-amber-100 text-amber-800",
        _ => "bg-gray-100 text-gray-800"
    };

    var isExpired = Model.DueDate.HasValue && Model.DueDate.Value < DateTime.Today &&
                   Model.Status != SalesOrderStatus.Paid &&
                   Model.Status != SalesOrderStatus.Cancelled;
}

<div class="p-2">
    <!-- Header -->
    <div class="flex justify-between items-start mb-4">
        <div>
            <h5 class="text-xl font-semibold text-gray-900 mb-1">@Model.OrderNumber</h5>
            <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @statusColor">@status</span>
            @if (isExpired)
            {
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-amber-100 text-amber-800 ml-1">
                    <i class="bi bi-exclamation-triangle mr-1"></i>Expired
                </span>
            }
        </div>
        <div class="text-right">
            <div class="text-gray-500 text-sm">Quote Date</div>
            <div class="font-medium text-gray-900">@Model.OrderDate.ToString("MMMM dd, yyyy")</div>
        </div>
    </div>

    <div class="grid grid-cols-12 gap-4">
        <!-- Customer Info -->
        <div class="col-span-12 md:col-span-6">
            <div class="bg-gray-50 rounded-lg h-full">
                <div class="p-6">
                    <h6 class="text-gray-500 uppercase text-sm mb-3">
                        <i class="bi bi-person mr-2"></i>Customer
                    </h6>
                    <div class="font-medium text-gray-900">@Model.Customer?.Name</div>
                    @if (!string.IsNullOrEmpty(Model.Customer?.ContactPerson))
                    {
                        <div class="text-gray-500 text-sm">Attn: @Model.Customer.ContactPerson</div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Customer?.Email))
                    {
                        <div class="text-gray-500 text-sm">
                            <i class="bi bi-envelope mr-1"></i>@Model.Customer.Email
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Customer?.Phone))
                    {
                        <div class="text-gray-500 text-sm">
                            <i class="bi bi-telephone mr-1"></i>@Model.Customer.Phone
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(Model.Customer?.BillingAddress))
                    {
                        <div class="text-gray-500 text-sm mt-2">
                            @Model.Customer.BillingAddress<br />
                            @Model.Customer.BillingCity, @Model.Customer.BillingState @Model.Customer.BillingPostalCode<br />
                            @Model.Customer.BillingCountry
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Quote Info -->
        <div class="col-span-12 md:col-span-6">
            <div class="bg-gray-50 rounded-lg h-full">
                <div class="p-6">
                    <h6 class="text-gray-500 uppercase text-sm mb-3">
                        <i class="bi bi-info-circle mr-2"></i>Quote Details
                    </h6>
                    <div class="grid grid-cols-2 gap-2">
                        <div>
                            <div class="text-gray-500 text-sm">Valid Until</div>
                            <div class="font-medium @(isExpired ? "text-red-600" : "text-gray-900")">
                                @(Model.DueDate?.ToString("MMM dd, yyyy") ?? "-")
                            </div>
                        </div>
                        <div>
                            <div class="text-gray-500 text-sm">Currency</div>
                            <div class="font-medium text-gray-900">@Model.Currency</div>
                        </div>
                        <div>
                            <div class="text-gray-500 text-sm">Reference</div>
                            <div class="font-medium text-gray-900">@(Model.Reference ?? "-")</div>
                        </div>
                        <div>
                            <div class="text-gray-500 text-sm">Items</div>
                            <div class="font-medium text-gray-900">@Model.Lines.Count</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Line Items -->
    <div class="mt-4">
        <h6 class="text-gray-500 uppercase text-sm mb-3">
            <i class="bi bi-list-ul mr-2"></i>Line Items
        </h6>
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                    <tr>
                        <th class="px-4 py-3">#</th>
                        <th class="px-4 py-3">Product</th>
                        <th class="px-4 py-3 text-center">Qty</th>
                        <th class="px-4 py-3 text-right">Unit Price</th>
                        <th class="px-4 py-3 text-right">Discount</th>
                        <th class="px-4 py-3 text-right">Tax</th>
                        <th class="px-4 py-3 text-right">Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var line in Model.Lines.OrderBy(l => l.LineNumber))
                    {
                        <tr class="border-b border-gray-200 hover:bg-gray-50">
                            <td class="px-4 py-3 text-gray-500">@line.LineNumber</td>
                            <td class="px-4 py-3">
                                <div class="font-medium text-gray-900">@line.ProductName</div>
                                <span class="text-sm text-gray-500">@line.ProductSku</span>
                            </td>
                            <td class="px-4 py-3 text-center">@line.Quantity @line.UnitOfMeasure</td>
                            <td class="px-4 py-3 text-right">@line.UnitPrice.ToString("C2")</td>
                            <td class="px-4 py-3 text-right">
                                @if (line.DiscountPercent > 0)
                                {
                                    <span class="text-red-600">-@line.DiscountPercent%</span>
                                }
                                else
                                {
                                    <span class="text-gray-500">-</span>
                                }
                            </td>
                            <td class="px-4 py-3 text-right">
                                @if (line.TaxPercent > 0)
                                {
                                    <span>@line.TaxPercent%</span>
                                }
                                else
                                {
                                    <span class="text-gray-500">-</span>
                                }
                            </td>
                            <td class="px-4 py-3 text-right font-medium">@line.LineTotal.ToString("C2")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Totals -->
    <div class="grid grid-cols-12 gap-4 mt-3">
        <div class="col-span-12 md:col-span-6">
            @if (!string.IsNullOrEmpty(Model.Notes))
            {
                <div class="bg-gray-50 rounded-lg">
                    <div class="p-6">
                        <h6 class="text-gray-500 uppercase text-sm mb-2">Notes</h6>
                        <p class="mb-0 text-sm text-gray-900">@Model.Notes</p>
                    </div>
                </div>
            }
        </div>
        <div class="col-span-12 md:col-span-6">
            <div class="bg-gray-50 rounded-lg">
                <div class="p-6">
                    <div class="flex justify-between mb-2">
                        <span class="text-gray-500">Subtotal:</span>
                        <span class="text-gray-900">@Model.SubTotal.ToString("C2")</span>
                    </div>
                    @if (Model.DiscountAmount > 0)
                    {
                        <div class="flex justify-between mb-2 text-red-600">
                            <span>Discount:</span>
                            <span>-@Model.DiscountAmount.ToString("C2")</span>
                        </div>
                    }
                    <div class="flex justify-between mb-2">
                        <span class="text-gray-500">Tax:</span>
                        <span class="text-gray-900">@Model.TaxAmount.ToString("C2")</span>
                    </div>
                    <hr class="my-2 border-gray-200" />
                    <div class="flex justify-between">
                        <span class="font-bold text-gray-900">Total:</span>
                        <span class="font-bold text-xl text-gray-900">@Model.TotalAmount.ToString("C2")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Actions -->
    <div class="mt-4 flex justify-between">
        <button type="button" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50" onclick="closeModal('detailsModal')">
            Close
        </button>
        <div class="flex gap-2">
            @if (Model.Status == SalesOrderStatus.Draft)
            {
                <button type="button" class="text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-4 py-2" onclick="updateStatus('@Model.Id', 'Sent'); window.AlgoraModal.hide('detailsModal');">
                    <i class="bi bi-send mr-1"></i>Send to Customer
                </button>
            }
            else if (Model.Status == SalesOrderStatus.Confirmed)
            {
                <button type="button" class="text-white bg-emerald-600 hover:bg-emerald-700 focus:ring-4 focus:ring-emerald-300 font-medium rounded-lg text-sm px-4 py-2" onclick="convertToOrder('@Model.Id'); window.AlgoraModal.hide('detailsModal');">
                    <i class="bi bi-bag-plus mr-1"></i>Convert to Order
                </button>
            }
            <button type="button" class="text-primary-700 bg-white border border-primary-300 hover:bg-primary-50 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-4 py-2" onclick="window.print()">
                <i class="bi bi-printer mr-1"></i>Print
            </button>
        </div>
    </div>
</div>
