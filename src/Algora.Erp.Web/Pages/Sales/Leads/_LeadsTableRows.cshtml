@model Algora.Erp.Web.Pages.Sales.Leads.LeadsTableViewModel
@using Algora.Erp.Domain.Entities.Sales

@if (Model.Leads.Any())
{
    foreach (var lead in Model.Leads)
    {
        var statusClass = lead.Status switch
        {
            LeadStatus.New => "bg-blue-100 text-blue-800",
            LeadStatus.Contacted => "bg-primary-100 text-primary-800",
            LeadStatus.Qualified => "bg-emerald-100 text-emerald-800",
            LeadStatus.Proposal => "bg-amber-100 text-amber-800",
            LeadStatus.Negotiation => "bg-amber-100 text-amber-800",
            LeadStatus.Won => "bg-emerald-100 text-emerald-800",
            LeadStatus.Lost => "bg-red-100 text-red-800",
            LeadStatus.Unqualified => "bg-gray-100 text-gray-800",
            _ => "bg-gray-100 text-gray-800"
        };
        var ratingClass = lead.Rating switch
        {
            LeadRating.Hot => "bg-red-100 text-red-800",
            LeadRating.Warm => "bg-amber-100 text-amber-800",
            LeadRating.Cold => "bg-blue-100 text-blue-800",
            _ => "bg-gray-100 text-gray-800"
        };

        <tr class="hover:bg-gray-50">
            <td class="px-6 py-4">
                <div class="font-medium text-gray-900">@lead.Name</div>
                @if (!string.IsNullOrEmpty(lead.Phone))
                {
                    <span class="text-sm text-gray-500">@lead.Phone</span>
                }
            </td>
            <td class="px-6 py-4">@(lead.Company ?? "-")</td>
            <td class="px-6 py-4">
                @if (!string.IsNullOrEmpty(lead.Email))
                {
                    <a href="mailto:@lead.Email" class="text-primary-600 hover:underline">@lead.Email</a>
                }
                else
                {
                    <span class="text-gray-500">-</span>
                }
            </td>
            <td class="px-6 py-4">@lead.Source</td>
            <td class="px-6 py-4">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @ratingClass">@lead.Rating</span>
            </td>
            <td class="px-6 py-4 text-right">@(lead.EstimatedValue?.ToString("C0") ?? "-")</td>
            <td class="px-6 py-4 text-center">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @statusClass">@lead.Status</span>
            </td>
            <td class="px-6 py-4 text-right">
                <div class="relative inline-block">
                    <button class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg" id="dropdownLead@(lead.Id)" data-dropdown-toggle="dropdownMenuLead@(lead.Id)" data-dropdown-placement="bottom-end">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <div class="z-50 hidden absolute right-0 mt-2 bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuLead@(lead.Id)">
                        <ul class="py-2 text-sm text-gray-700">
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100 cursor-pointer"
                                   hx-get="/Sales/Leads?handler=EditForm&id=@lead.Id"
                                   hx-target="#formContainer"
                                   hx-swap="innerHTML"
                                   data-modal-target="leadModal" data-modal-toggle="leadModal">
                                    <i class="bi bi-pencil mr-2"></i> Edit
                                </a>
                            </li>
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100" href="mailto:@lead.Email">
                                    <i class="bi bi-envelope mr-2"></i> Send Email
                                </a>
                            </li>
                        </ul>
                        <div class="py-2">
                            <a class="flex items-center px-4 py-2 text-red-600 hover:bg-gray-100 cursor-pointer"
                               hx-delete="/Sales/Leads?id=@lead.Id"
                               hx-target="#leadsTableBody"
                               hx-swap="innerHTML"
                               hx-confirm="Delete this lead?">
                                <i class="bi bi-trash mr-2"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="8" class="px-6 py-3">
            @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", Model.Pagination)
        </td>
    </tr>
}
else
{
    <tr>
        <td colspan="8" class="text-center py-5 text-gray-500">
            <i class="bi bi-people text-4xl block mb-2"></i>
            No leads found
        </td>
    </tr>
}
<script>
    // Re-initialize Flowbite dropdowns and HTMX after content swap
    if (typeof initFlowbite === 'function') { initFlowbite(); }
    if (typeof htmx !== 'undefined') { htmx.process(document.body); }
</script>