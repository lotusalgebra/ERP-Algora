@page
@model Algora.Erp.Web.Pages.Sales.Leads.IndexModel
@using Algora.Erp.Domain.Entities.Sales
@{
    ViewData["Title"] = "Leads";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Leads</h1>
            <nav class="flex mt-1" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 text-sm text-gray-500">
                    <li><a href="/" class="hover:text-primary-600">Dashboard</a></li>
                    <li><span class="mx-1">/</span></li>
                    <li><a href="/Sales" class="hover:text-primary-600">Sales</a></li>
                    <li><span class="mx-1">/</span></li>
                    <li class="text-gray-900 font-medium">Leads</li>
                </ol>
            </nav>
        </div>
        <button type="button" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition-colors"
                hx-get="/Sales/Leads?handler=CreateForm"
                hx-target="#formContainer"
                hx-swap="innerHTML"
                data-modal-target="leadModal"
                data-modal-toggle="leadModal">
            <i class="bi bi-plus-lg mr-2"></i> New Lead
        </button>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-primary-100 rounded-lg">
                    <i class="bi bi-people text-xl text-primary-600"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm text-gray-500 mb-1">Total Leads</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.TotalLeads</h3>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-blue-100 rounded-lg">
                    <i class="bi bi-star text-xl text-blue-600"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm text-gray-500 mb-1">New Leads</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.NewLeads</h3>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-emerald-100 rounded-lg">
                    <i class="bi bi-check-circle text-xl text-emerald-600"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm text-gray-500 mb-1">Qualified</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.QualifiedLeads</h3>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-amber-100 rounded-lg">
                    <i class="bi bi-currency-dollar text-xl text-amber-600"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm text-gray-500 mb-1">Pipeline Value</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.PipelineValue.ToString("C0")</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters & Table -->
    <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <div class="p-4 border-b border-gray-200">
            <div class="grid grid-cols-1 md:grid-cols-12 gap-3">
                <div class="md:col-span-4">
                    <div class="relative">
                        <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                            <i class="bi bi-search text-gray-400"></i>
                        </div>
                        <input type="text"
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full ps-10 p-2.5"
                               id="searchInput"
                               placeholder="Search leads...">
                    </div>
                </div>
                <div class="md:col-span-2">
                    <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                            id="statusFilter">
                        <option value="">All Status</option>
                        @foreach (LeadStatus s in Enum.GetValues(typeof(LeadStatus)))
                        {
                            <option value="@s">@s</option>
                        }
                    </select>
                </div>
                <div class="md:col-span-2">
                    <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                            id="sourceFilter">
                        <option value="">All Sources</option>
                        @foreach (LeadSource s in Enum.GetValues(typeof(LeadSource)))
                        {
                            <option value="@s">@s</option>
                        }
                    </select>
                </div>
                <div class="md:col-span-2">
                    <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                            id="ratingFilter">
                        <option value="">All Ratings</option>
                        @foreach (LeadRating r in Enum.GetValues(typeof(LeadRating)))
                        {
                            <option value="@r">@r</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3">Name</th>
                        <th scope="col" class="px-6 py-3">Company</th>
                        <th scope="col" class="px-6 py-3">Email</th>
                        <th scope="col" class="px-6 py-3">Source</th>
                        <th scope="col" class="px-6 py-3">Rating</th>
                        <th scope="col" class="px-6 py-3 text-right">Est. Value</th>
                        <th scope="col" class="px-6 py-3 text-center">Status</th>
                        <th scope="col" class="px-6 py-3 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody id="leadsTableBody" hx-get="/Sales/Leads?handler=Table" hx-trigger="load" hx-swap="innerHTML">
                    <tr>
                        <td colspan="8" class="px-6 py-8 text-center">
                            <div class="inline-block animate-spin rounded-full h-6 w-6 border-b-2 border-primary-600"></div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Lead Modal -->
<div id="leadModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-2xl max-h-full">
        <div class="relative bg-white rounded-lg shadow">
            <div id="formContainer"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let searchTimeout;
        const searchInput = document.getElementById('searchInput');
        const statusFilter = document.getElementById('statusFilter');
        const sourceFilter = document.getElementById('sourceFilter');
        const ratingFilter = document.getElementById('ratingFilter');

        function loadTable(page = 1) {
            const params = new URLSearchParams({
                handler: 'Table',
                page: page,
                search: searchInput.value,
                statusFilter: statusFilter.value,
                sourceFilter: sourceFilter.value,
                ratingFilter: ratingFilter.value
            });
            htmx.ajax('GET', `/Sales/Leads?${params}`, {target: '#leadsTableBody', swap: 'innerHTML'});
        }

        searchInput?.addEventListener('input', () => {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => loadTable(), 300);
        });

        statusFilter?.addEventListener('change', () => loadTable());
        sourceFilter?.addEventListener('change', () => loadTable());
        ratingFilter?.addEventListener('change', () => loadTable());

        document.getElementById('leadModal')?.addEventListener('hidden.bs.modal', () => {
            document.getElementById('formContainer').innerHTML = '';
        });

        document.body.addEventListener('htmx:afterRequest', (e) => {
            if (e.detail.elt.closest('#leadModal')) {
                const modal = FlowbiteInstances.getInstance('Modal', 'leadModal');
                if (modal) modal.hide();
            }
        });
    </script>
}
