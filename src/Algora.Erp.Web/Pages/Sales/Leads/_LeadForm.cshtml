@model Algora.Erp.Web.Pages.Sales.Leads.LeadFormViewModel
@using Algora.Erp.Domain.Entities.Sales

<form hx-post="/Sales/Leads" hx-target="#leadsTableBody" hx-swap="outerHTML">
    <div class="flex items-center justify-between p-4 border-b rounded-t">
        <h5 class="text-xl font-semibold text-gray-900">@(Model.IsEdit ? "Edit Lead" : "New Lead")</h5>
        <button type="button" class="text-gray-400 hover:text-gray-900" data-modal-hide="leadModal">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>
    <div class="p-6">
        @if (Model.IsEdit)
        {
            <input type="hidden" name="Id" value="@Model.Lead?.Id" />
        }

        <div class="grid grid-cols-12 gap-3">
            <div class="col-span-12 md:col-span-6">
                <label class="block mb-2 text-sm font-medium text-gray-900">Name <span class="text-red-600">*</span></label>
                <input type="text" name="Name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" value="@Model.Lead?.Name" required />
            </div>
            <div class="col-span-12 md:col-span-6">
                <label class="block mb-2 text-sm font-medium text-gray-900">Company</label>
                <input type="text" name="Company" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" value="@Model.Lead?.Company" />
            </div>
            <div class="col-span-12 md:col-span-6">
                <label class="block mb-2 text-sm font-medium text-gray-900">Email</label>
                <input type="email" name="Email" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" value="@Model.Lead?.Email" />
            </div>
            <div class="col-span-12 md:col-span-6">
                <label class="block mb-2 text-sm font-medium text-gray-900">Phone</label>
                <input type="text" name="Phone" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" value="@Model.Lead?.Phone" />
            </div>
            <div class="col-span-12 md:col-span-6">
                <label class="block mb-2 text-sm font-medium text-gray-900">Source</label>
                <select name="Source" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5">
                    @foreach (LeadSource s in Enum.GetValues(typeof(LeadSource)))
                    {
                        <option value="@s" selected="@(Model.Lead?.Source == s)">@s</option>
                    }
                </select>
            </div>
            <div class="col-span-12 md:col-span-6">
                <label class="block mb-2 text-sm font-medium text-gray-900">Status</label>
                <select name="Status" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5">
                    @foreach (LeadStatus s in Enum.GetValues(typeof(LeadStatus)))
                    {
                        <option value="@s" selected="@(Model.Lead?.Status == s)">@s</option>
                    }
                </select>
            </div>
            <div class="col-span-12 md:col-span-6">
                <label class="block mb-2 text-sm font-medium text-gray-900">Rating</label>
                <select name="Rating" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5">
                    @foreach (LeadRating r in Enum.GetValues(typeof(LeadRating)))
                    {
                        <option value="@r" selected="@(Model.Lead?.Rating == r)">@r</option>
                    }
                </select>
            </div>
            <div class="col-span-12 md:col-span-6">
                <label class="block mb-2 text-sm font-medium text-gray-900">Estimated Value</label>
                <input type="number" step="0.01" name="EstimatedValue" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" value="@Model.Lead?.EstimatedValue" />
            </div>
            <div class="col-span-12 md:col-span-6">
                <label class="block mb-2 text-sm font-medium text-gray-900">Website</label>
                <input type="url" name="Website" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" value="@Model.Lead?.Website" />
            </div>
            <div class="col-span-12 md:col-span-6">
                <label class="block mb-2 text-sm font-medium text-gray-900">Next Follow-up</label>
                <input type="date" name="NextFollowUpDate" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" value="@Model.Lead?.NextFollowUpDate?.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-span-12">
                <label class="block mb-2 text-sm font-medium text-gray-900">Notes</label>
                <textarea name="Notes" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" rows="2">@Model.Lead?.Notes</textarea>
            </div>
            <div class="col-span-12">
                <label class="block mb-2 text-sm font-medium text-gray-900">Tags</label>
                <input type="text" name="Tags" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" value="@Model.Lead?.Tags" placeholder="Comma-separated tags" />
            </div>
        </div>
    </div>
    <div class="flex items-center p-4 border-t border-gray-200 rounded-b gap-2">
        <button type="button" class="text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5" data-modal-hide="leadModal">Cancel</button>
        <button type="submit" class="text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5">@(Model.IsEdit ? "Update" : "Create") Lead</button>
    </div>
</form>
