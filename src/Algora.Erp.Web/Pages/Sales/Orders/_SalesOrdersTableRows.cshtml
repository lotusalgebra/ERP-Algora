@model Algora.Erp.Web.Pages.Sales.Orders.SalesOrdersTableViewModel
@using Algora.Erp.Domain.Entities.Sales

@if (Model.SalesOrders.Count == 0)
{
    <tr>
        <td colspan="8" class="text-center py-5">
            <div class="text-gray-500">
                <i class="bi bi-bag-x text-4xl block mb-3"></i>
                <p class="mb-0">No sales orders found</p>
            </div>
        </td>
    </tr>
}
else
{
    @foreach (var order in Model.SalesOrders)
    {
        var statusColor = order.Status switch
        {
            SalesOrderStatus.Draft => "bg-gray-100 text-gray-800",
            SalesOrderStatus.Confirmed => "bg-primary-100 text-primary-800",
            SalesOrderStatus.PartiallyShipped => "bg-blue-100 text-blue-800",
            SalesOrderStatus.Shipped => "bg-blue-100 text-blue-800",
            SalesOrderStatus.Delivered => "bg-emerald-100 text-emerald-800",
            SalesOrderStatus.Paid => "bg-emerald-100 text-emerald-800",
            SalesOrderStatus.Cancelled => "bg-red-100 text-red-800",
            _ => "bg-gray-100 text-gray-800"
        };

        <tr class="hover:bg-gray-50">
            <td class="px-6 py-4">
                <div class="font-medium text-gray-900">@order.OrderNumber</div>
                @if (!string.IsNullOrEmpty(order.Reference))
                {
                    <span class="text-sm text-gray-500">Ref: @order.Reference</span>
                }
            </td>
            <td class="px-6 py-4">
                <div class="font-medium text-gray-900">@order.Customer?.Name</div>
                @if (!string.IsNullOrEmpty(order.Customer?.BillingCity))
                {
                    <span class="text-sm text-gray-500">
                        <i class="bi bi-geo-alt mr-1"></i>@order.Customer.BillingCity
                    </span>
                }
            </td>
            <td class="px-6 py-4">
                <div>@order.OrderDate.ToString("MMM dd, yyyy")</div>
            </td>
            <td class="px-6 py-4">
                @if (order.DueDate.HasValue)
                {
                    var isOverdue = order.DueDate.Value < DateTime.Today &&
                                   order.Status != SalesOrderStatus.Paid &&
                                   order.Status != SalesOrderStatus.Delivered &&
                                   order.Status != SalesOrderStatus.Cancelled;
                    <span class="@(isOverdue ? "text-red-600 font-medium" : "")">
                        @order.DueDate.Value.ToString("MMM dd, yyyy")
                        @if (isOverdue)
                        {
                            <i class="bi bi-exclamation-circle ml-1"></i>
                        }
                    </span>
                }
                else
                {
                    <span class="text-gray-500">-</span>
                }
            </td>
            <td class="px-6 py-4 text-center">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">
                    @order.Lines.Count
                </span>
            </td>
            <td class="px-6 py-4 text-right">
                <span class="font-medium text-gray-900">@order.TotalAmount.ToString("C2")</span>
                @if (order.AmountDue > 0 && order.Status != SalesOrderStatus.Draft && order.Status != SalesOrderStatus.Cancelled)
                {
                    <div class="text-sm text-amber-600">Due: @order.AmountDue.ToString("C2")</div>
                }
            </td>
            <td class="px-6 py-4">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @statusColor">
                    @order.Status
                </span>
            </td>
            <td class="px-6 py-4 text-right">
                <div class="relative inline-block">
                    <button class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg" id="dropdownOrder@(order.Id)" data-dropdown-toggle="dropdownMenuOrder@(order.Id)" data-dropdown-placement="bottom-end">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <div class="z-50 hidden absolute right-0 mt-2 bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuOrder@(order.Id)">
                        <ul class="py-2 text-sm text-gray-700">
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100" href="/Sales/Orders/Details/@order.Id">
                                    <i class="bi bi-eye mr-2"></i> View Details
                                </a>
                            </li>
                            @if (order.Status == SalesOrderStatus.Draft)
                            {
                                <li>
                                    <a class="flex items-center px-4 py-2 hover:bg-gray-100 cursor-pointer"
                                       hx-get="?handler=EditForm&id=@order.Id"
                                       hx-target="#formModalBody"
                                       data-modal-target="formModal" data-modal-toggle="formModal">
                                        <i class="bi bi-pencil mr-2"></i> Edit
                                    </a>
                                </li>
                                <li>
                                    <a class="flex items-center px-4 py-2 text-emerald-600 hover:bg-gray-100 cursor-pointer"
                                       hx-post="?handler=UpdateStatus&id=@order.Id&status=Confirmed"
                                       hx-target="#ordersTableBody"
                                       hx-confirm="Confirm this order?">
                                        <i class="bi bi-check-lg mr-2"></i> Confirm Order
                                    </a>
                                </li>
                            }
                            @if (order.Status == SalesOrderStatus.Confirmed)
                            {
                                <li>
                                    <a class="flex items-center px-4 py-2 text-blue-600 hover:bg-gray-100 cursor-pointer"
                                       hx-post="?handler=UpdateStatus&id=@order.Id&status=Shipped"
                                       hx-target="#ordersTableBody"
                                       hx-confirm="Mark this order as shipped?">
                                        <i class="bi bi-truck mr-2"></i> Mark Shipped
                                    </a>
                                </li>
                            }
                            @if (order.Status == SalesOrderStatus.Shipped || order.Status == SalesOrderStatus.PartiallyShipped)
                            {
                                <li>
                                    <a class="flex items-center px-4 py-2 text-emerald-600 hover:bg-gray-100 cursor-pointer"
                                       hx-post="?handler=UpdateStatus&id=@order.Id&status=Delivered"
                                       hx-target="#ordersTableBody"
                                       hx-confirm="Mark this order as delivered?">
                                        <i class="bi bi-box-seam mr-2"></i> Mark Delivered
                                    </a>
                                </li>
                            }
                            @if (order.Status == SalesOrderStatus.Delivered)
                            {
                                <li>
                                    <a class="flex items-center px-4 py-2 text-emerald-600 hover:bg-gray-100 cursor-pointer"
                                       hx-post="?handler=UpdateStatus&id=@order.Id&status=Paid"
                                       hx-target="#ordersTableBody"
                                       hx-confirm="Mark this order as paid?">
                                        <i class="bi bi-currency-dollar mr-2"></i> Mark Paid
                                    </a>
                                </li>
                            }
                        </ul>
                        @if (order.Status == SalesOrderStatus.Draft)
                        {
                            <div class="py-2">
                                <a class="flex items-center px-4 py-2 text-red-600 hover:bg-gray-100 cursor-pointer"
                                   hx-delete="?handler=Delete&id=@order.Id"
                                   hx-target="#ordersTableBody"
                                   hx-confirm="Are you sure you want to delete this order?">
                                    <i class="bi bi-trash mr-2"></i> Delete
                                </a>
                            </div>
                        }
                        @if (order.Status == SalesOrderStatus.Confirmed)
                        {
                            <div class="py-2">
                                <a class="flex items-center px-4 py-2 text-gray-600 hover:bg-gray-100 cursor-pointer"
                                   hx-post="?handler=UpdateStatus&id=@order.Id&status=Cancelled"
                                   hx-target="#ordersTableBody"
                                   hx-confirm="Cancel this order?">
                                    <i class="bi bi-x-lg mr-2"></i> Cancel Order
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="8" class="px-6 py-3">
            @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", Model.Pagination)
        </td>
    </tr>
}
