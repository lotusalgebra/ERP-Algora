@model Algora.Erp.Domain.Entities.Sales.SalesOrder
@using Algora.Erp.Domain.Entities.Sales

@{
    var statusColor = Model.Status switch
    {
        SalesOrderStatus.Draft => "bg-gray-100 text-gray-800",
        SalesOrderStatus.Confirmed => "bg-primary-100 text-primary-800",
        SalesOrderStatus.PartiallyShipped => "bg-blue-100 text-blue-800",
        SalesOrderStatus.Shipped => "bg-blue-100 text-blue-800",
        SalesOrderStatus.Delivered => "bg-emerald-100 text-emerald-800",
        SalesOrderStatus.Paid => "bg-emerald-100 text-emerald-800",
        SalesOrderStatus.Cancelled => "bg-red-100 text-red-800",
        _ => "bg-gray-100 text-gray-800"
    };
}

<div class="grid grid-cols-12 gap-4">
    <!-- Header -->
    <div class="col-span-12">
        <div class="flex justify-between items-start">
            <div>
                <h4 class="text-xl font-bold text-gray-900 mb-1">@Model.OrderNumber</h4>
                @if (!string.IsNullOrEmpty(Model.Reference))
                {
                    <p class="text-gray-500 mb-0">Reference: @Model.Reference</p>
                }
            </div>
            <span class="text-sm font-medium px-3 py-1 rounded-full @statusColor">@Model.Status</span>
        </div>
    </div>

    <!-- Order Info -->
    <div class="col-span-12 md:col-span-6">
        <div class="bg-gray-50 rounded-lg shadow-md h-full">
            <div class="p-6">
                <h6 class="text-gray-500 uppercase text-sm mb-3">Order Information</h6>
                <div class="grid grid-cols-2 gap-2">
                    <div>
                        <span class="text-gray-500 text-sm block">Order Type</span>
                        <span class="text-gray-900">@Model.OrderType</span>
                    </div>
                    <div>
                        <span class="text-gray-500 text-sm block">Currency</span>
                        <span class="text-gray-900">@Model.Currency</span>
                    </div>
                    <div>
                        <span class="text-gray-500 text-sm block">Order Date</span>
                        <span class="text-gray-900">@Model.OrderDate.ToString("MMM dd, yyyy")</span>
                    </div>
                    <div>
                        <span class="text-gray-500 text-sm block">Due Date</span>
                        <span class="text-gray-900">@(Model.DueDate?.ToString("MMM dd, yyyy") ?? "-")</span>
                    </div>
                    <div>
                        <span class="text-gray-500 text-sm block">Expected Delivery</span>
                        <span class="text-gray-900">@(Model.ExpectedDeliveryDate?.ToString("MMM dd, yyyy") ?? "-")</span>
                    </div>
                    <div>
                        <span class="text-gray-500 text-sm block">Shipping Method</span>
                        <span class="text-gray-900">@(Model.ShippingMethod ?? "-")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Customer Info -->
    <div class="col-span-12 md:col-span-6">
        <div class="bg-gray-50 rounded-lg shadow-md h-full">
            <div class="p-6">
                <h6 class="text-gray-500 uppercase text-sm mb-3">Customer</h6>
                @if (Model.Customer != null)
                {
                    <div class="font-medium text-gray-900 mb-2">@Model.Customer.Name</div>
                    <div class="grid grid-cols-1 gap-2">
                        <div>
                            <span class="text-gray-500 text-sm block">Contact</span>
                            <span class="text-gray-900">@(Model.Customer.ContactPerson ?? "-")</span>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Customer.Email))
                        {
                            <div>
                                <span class="text-gray-500 text-sm block">Email</span>
                                <a href="mailto:@Model.Customer.Email" class="text-primary-600 hover:underline">@Model.Customer.Email</a>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Customer.Phone))
                        {
                            <div>
                                <span class="text-gray-500 text-sm block">Phone</span>
                                <span class="text-gray-900">@Model.Customer.Phone</span>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Shipping Address -->
    @if (!string.IsNullOrEmpty(Model.ShippingAddress))
    {
        <div class="col-span-12">
            <div class="bg-gray-50 rounded-lg shadow-md">
                <div class="p-6">
                    <h6 class="text-gray-500 uppercase text-sm mb-3">Shipping Address</h6>
                    <p class="mb-0 whitespace-pre-line text-gray-900">@Model.ShippingAddress</p>
                </div>
            </div>
        </div>
    }

    <!-- Order Lines -->
    <div class="col-span-12">
        <h6 class="text-gray-500 uppercase text-sm mb-3">Order Lines</h6>
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left border border-gray-200">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                    <tr>
                        <th style="width: 5%" class="px-4 py-3">#</th>
                        <th class="px-4 py-3">Product</th>
                        <th class="px-4 py-3 text-center" style="width: 10%">Qty</th>
                        <th class="px-4 py-3 text-right" style="width: 12%">Unit Price</th>
                        <th class="px-4 py-3 text-center" style="width: 8%">Disc %</th>
                        <th class="px-4 py-3 text-center" style="width: 8%">Tax %</th>
                        <th class="px-4 py-3 text-right" style="width: 12%">Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var line in Model.Lines.OrderBy(l => l.LineNumber))
                    {
                        <tr class="border-b border-gray-200 hover:bg-gray-50">
                            <td class="px-4 py-3 text-center text-gray-500">@line.LineNumber</td>
                            <td class="px-4 py-3">
                                <div class="font-medium text-gray-900">@line.ProductName</div>
                                @if (!string.IsNullOrEmpty(line.ProductSku))
                                {
                                    <span class="text-sm text-gray-500">SKU: @line.ProductSku</span>
                                }
                            </td>
                            <td class="px-4 py-3 text-center">@line.Quantity @line.UnitOfMeasure</td>
                            <td class="px-4 py-3 text-right">@line.UnitPrice.ToString("C2")</td>
                            <td class="px-4 py-3 text-center">@line.DiscountPercent%</td>
                            <td class="px-4 py-3 text-center">@line.TaxPercent%</td>
                            <td class="px-4 py-3 text-right font-medium">@line.LineTotal.ToString("C2")</td>
                        </tr>
                    }
                </tbody>
                <tfoot class="bg-gray-50">
                    <tr class="border-b border-gray-200">
                        <td colspan="6" class="px-4 py-2 text-right">Subtotal:</td>
                        <td class="px-4 py-2 text-right">@Model.SubTotal.ToString("C2")</td>
                    </tr>
                    <tr class="border-b border-gray-200">
                        <td colspan="6" class="px-4 py-2 text-right">Tax:</td>
                        <td class="px-4 py-2 text-right">@Model.TaxAmount.ToString("C2")</td>
                    </tr>
                    @if (Model.ShippingAmount > 0)
                    {
                        <tr class="border-b border-gray-200">
                            <td colspan="6" class="px-4 py-2 text-right">Shipping:</td>
                            <td class="px-4 py-2 text-right">@Model.ShippingAmount.ToString("C2")</td>
                        </tr>
                    }
                    @if (Model.DiscountAmount > 0)
                    {
                        <tr class="border-b border-gray-200">
                            <td colspan="6" class="px-4 py-2 text-right">Discount:</td>
                            <td class="px-4 py-2 text-right text-red-600">-@Model.DiscountAmount.ToString("C2")</td>
                        </tr>
                    }
                    <tr class="font-bold border-b border-gray-200">
                        <td colspan="6" class="px-4 py-2 text-right">Total:</td>
                        <td class="px-4 py-2 text-right">@Model.TotalAmount.ToString("C2")</td>
                    </tr>
                    @if (Model.AmountPaid > 0)
                    {
                        <tr class="border-b border-gray-200">
                            <td colspan="6" class="px-4 py-2 text-right">Amount Paid:</td>
                            <td class="px-4 py-2 text-right text-emerald-600">@Model.AmountPaid.ToString("C2")</td>
                        </tr>
                        <tr class="font-bold">
                            <td colspan="6" class="px-4 py-2 text-right">Amount Due:</td>
                            <td class="px-4 py-2 text-right @(Model.AmountDue > 0 ? "text-red-600" : "text-emerald-600")">
                                @Model.AmountDue.ToString("C2")
                            </td>
                        </tr>
                    }
                </tfoot>
            </table>
        </div>
    </div>

    <!-- Notes -->
    @if (!string.IsNullOrEmpty(Model.Notes))
    {
        <div class="col-span-12">
            <div class="bg-gray-50 rounded-lg shadow-md">
                <div class="p-6">
                    <h6 class="text-gray-500 uppercase text-sm mb-3">Notes</h6>
                    <p class="mb-0 whitespace-pre-line text-gray-900">@Model.Notes</p>
                </div>
            </div>
        </div>
    }

    <!-- Timestamps -->
    <div class="col-span-12">
        <div class="text-gray-500 text-sm">
            <span>Created: @Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</span>
            @if (Model.ModifiedAt.HasValue)
            {
                <span class="ml-3">Modified: @Model.ModifiedAt.Value.ToString("MMM dd, yyyy HH:mm")</span>
            }
        </div>
    </div>
</div>

<div class="flex items-center p-4 border-t border-gray-200 rounded-b gap-2 mt-4 -mx-4 -mb-4">
    <button type="button" class="text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5" data-modal-hide="detailsModal">Close</button>
    @if (Model.Status == SalesOrderStatus.Draft)
    {
        <button type="button" class="text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5"
                hx-get="?handler=EditForm&id=@Model.Id"
                hx-target="#formModalBody"
                data-modal-target="formModal" data-modal-toggle="formModal">
            <i class="bi bi-pencil mr-2"></i>Edit Order
        </button>
    }
</div>
