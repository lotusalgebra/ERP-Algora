@model Algora.Erp.Web.Pages.Sales.Customers.CustomerFormViewModel
@using Algora.Erp.Domain.Entities.Sales

<form hx-post=""
      hx-target="#customersTableBody"
      hx-on::after-request="if(event.detail.successful) document.body.dispatchEvent(new Event('formSubmitSuccess'))">

    @if (Model.IsEdit && Model.Customer != null)
    {
        <input type="hidden" name="Id" value="@Model.Customer.Id" />
    }

    <div class="grid grid-cols-12 gap-3">
        <!-- Basic Information -->
        <div class="col-span-12">
            <h6 class="text-gray-500 uppercase text-sm mb-3">Basic Information</h6>
        </div>

        <div class="col-span-12 md:col-span-8">
            <label class="block mb-2 text-sm font-medium text-gray-900">Customer Name <span class="text-red-600">*</span></label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Name"
                   value="@Model.Customer?.Name" required>
        </div>

        <div class="col-span-12 md:col-span-4">
            <label class="block mb-2 text-sm font-medium text-gray-900">Type</label>
            <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="CustomerType">
                @foreach (var type in Enum.GetValues<CustomerType>())
                {
                    <option value="@type" selected="@(Model.Customer?.CustomerType == type)">@type</option>
                }
            </select>
        </div>

        <div class="col-span-12 md:col-span-6">
            <label class="block mb-2 text-sm font-medium text-gray-900">Contact Person</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="ContactPerson"
                   value="@Model.Customer?.ContactPerson">
        </div>

        <div class="col-span-12 md:col-span-6">
            <label class="block mb-2 text-sm font-medium text-gray-900">Email</label>
            <input type="email" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Email"
                   value="@Model.Customer?.Email">
        </div>

        <div class="col-span-12 md:col-span-4">
            <label class="block mb-2 text-sm font-medium text-gray-900">Phone</label>
            <input type="tel" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Phone"
                   value="@Model.Customer?.Phone">
        </div>

        <div class="col-span-12 md:col-span-4">
            <label class="block mb-2 text-sm font-medium text-gray-900">Mobile</label>
            <input type="tel" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Mobile"
                   value="@Model.Customer?.Mobile">
        </div>

        <div class="col-span-12 md:col-span-4">
            <label class="block mb-2 text-sm font-medium text-gray-900">Website</label>
            <input type="url" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Website"
                   value="@Model.Customer?.Website" placeholder="https://">
        </div>

        <!-- Billing Address -->
        <div class="col-span-12 mt-4">
            <h6 class="text-gray-500 uppercase text-sm mb-3">Billing Address</h6>
        </div>

        <div class="col-span-12">
            <label class="block mb-2 text-sm font-medium text-gray-900">Street Address</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="BillingAddress"
                   value="@Model.Customer?.BillingAddress">
        </div>

        <div class="col-span-12 md:col-span-6">
            <label class="block mb-2 text-sm font-medium text-gray-900">City</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="BillingCity"
                   value="@Model.Customer?.BillingCity">
        </div>

        <div class="col-span-12 md:col-span-6">
            <label class="block mb-2 text-sm font-medium text-gray-900">State/Province</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="BillingState"
                   value="@Model.Customer?.BillingState">
        </div>

        <div class="col-span-12 md:col-span-6">
            <label class="block mb-2 text-sm font-medium text-gray-900">Country</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="BillingCountry"
                   value="@Model.Customer?.BillingCountry">
        </div>

        <div class="col-span-12 md:col-span-6">
            <label class="block mb-2 text-sm font-medium text-gray-900">Postal Code</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="BillingPostalCode"
                   value="@Model.Customer?.BillingPostalCode">
        </div>

        <!-- Shipping Address -->
        <div class="col-span-12 mt-4">
            <div class="flex justify-between items-center">
                <h6 class="text-gray-500 uppercase text-sm mb-0">Shipping Address</h6>
                <button type="button" class="text-primary-700 hover:text-primary-800 text-sm font-medium" onclick="copyBillingToShipping()">
                    <i class="bi bi-copy mr-1"></i>Same as Billing
                </button>
            </div>
        </div>

        <div class="col-span-12">
            <label class="block mb-2 text-sm font-medium text-gray-900">Street Address</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="ShippingAddress" id="shippingAddress"
                   value="@Model.Customer?.ShippingAddress">
        </div>

        <div class="col-span-12 md:col-span-6">
            <label class="block mb-2 text-sm font-medium text-gray-900">City</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="ShippingCity" id="shippingCity"
                   value="@Model.Customer?.ShippingCity">
        </div>

        <div class="col-span-12 md:col-span-6">
            <label class="block mb-2 text-sm font-medium text-gray-900">State/Province</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="ShippingState" id="shippingState"
                   value="@Model.Customer?.ShippingState">
        </div>

        <div class="col-span-12 md:col-span-6">
            <label class="block mb-2 text-sm font-medium text-gray-900">Country</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="ShippingCountry" id="shippingCountry"
                   value="@Model.Customer?.ShippingCountry">
        </div>

        <div class="col-span-12 md:col-span-6">
            <label class="block mb-2 text-sm font-medium text-gray-900">Postal Code</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="ShippingPostalCode" id="shippingPostalCode"
                   value="@Model.Customer?.ShippingPostalCode">
        </div>

        <!-- Payment Terms -->
        <div class="col-span-12 mt-4">
            <h6 class="text-gray-500 uppercase text-sm mb-3">Payment Terms</h6>
        </div>

        <div class="col-span-12 md:col-span-4">
            <label class="block mb-2 text-sm font-medium text-gray-900">Payment Terms (Days)</label>
            <input type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="PaymentTermsDays"
                   value="@(Model.Customer?.PaymentTermsDays ?? 30)" min="0">
        </div>

        <div class="col-span-12 md:col-span-4">
            <label class="block mb-2 text-sm font-medium text-gray-900">Credit Limit</label>
            <div class="flex">
                <span class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 border border-r-0 border-gray-300 rounded-l-lg">$</span>
                <input type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-r-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="CreditLimit"
                       value="@(Model.Customer?.CreditLimit ?? 0)" step="0.01" min="0">
            </div>
        </div>

        <div class="col-span-12 md:col-span-4">
            <label class="block mb-2 text-sm font-medium text-gray-900">Currency</label>
            <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Currency">
                <option value="USD" selected="@(Model.Customer?.Currency == "USD")">USD</option>
                <option value="EUR" selected="@(Model.Customer?.Currency == "EUR")">EUR</option>
                <option value="GBP" selected="@(Model.Customer?.Currency == "GBP")">GBP</option>
            </select>
        </div>

        <div class="col-span-12 md:col-span-6">
            <label class="block mb-2 text-sm font-medium text-gray-900">Tax ID</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="TaxId"
                   value="@Model.Customer?.TaxId">
        </div>

        <div class="col-span-12 md:col-span-6 flex items-end">
            <div class="flex items-center">
                <input class="w-4 h-4 text-primary-600 bg-gray-100 border-gray-300 rounded focus:ring-primary-500 focus:ring-2" type="checkbox" name="IsTaxExempt" value="true" id="isTaxExempt"
                       checked="@(Model.Customer?.IsTaxExempt ?? false)">
                <label class="ml-2 text-sm font-medium text-gray-900" for="isTaxExempt">Tax Exempt</label>
            </div>
        </div>

        <!-- Notes -->
        <div class="col-span-12 mt-4">
            <label class="block mb-2 text-sm font-medium text-gray-900">Notes</label>
            <textarea class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Notes" rows="2">@Model.Customer?.Notes</textarea>
        </div>

        <!-- Options -->
        <div class="col-span-12">
            <div class="flex items-center">
                <input class="w-4 h-4 text-primary-600 bg-gray-100 border-gray-300 rounded focus:ring-primary-500 focus:ring-2" type="checkbox" name="IsActive" value="true" id="isActive"
                       checked="@(Model.Customer?.IsActive ?? true)">
                <label class="ml-2 text-sm font-medium text-gray-900" for="isActive">Active</label>
            </div>
        </div>
    </div>

    <div class="flex items-center p-4 border-t border-gray-200 rounded-b gap-2 mt-4 -mx-4 -mb-4">
        <button type="button" class="text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5" onclick="closeModal('customerModal')">Cancel</button>
        <button type="submit" class="text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5">
            @(Model.IsEdit ? "Update Customer" : "Create Customer")
        </button>
    </div>
</form>

<script>
    function copyBillingToShipping() {
        document.getElementById('shippingAddress').value = document.querySelector('input[name="BillingAddress"]').value;
        document.getElementById('shippingCity').value = document.querySelector('input[name="BillingCity"]').value;
        document.getElementById('shippingState').value = document.querySelector('input[name="BillingState"]').value;
        document.getElementById('shippingCountry').value = document.querySelector('input[name="BillingCountry"]').value;
        document.getElementById('shippingPostalCode').value = document.querySelector('input[name="BillingPostalCode"]').value;
    }
</script>
