@model Algora.Erp.Web.Pages.Sales.Customers.CustomersTableViewModel

@if (Model.Customers.Count == 0)
{
    <tr>
        <td colspan="8" class="text-center py-5">
            <div class="text-gray-500">
                <i class="bi bi-people text-4xl block mb-3"></i>
                <p class="mb-0">No customers found</p>
            </div>
        </td>
    </tr>
}
else
{
    @foreach (var customer in Model.Customers)
    {
        var orderCount = customer.SalesOrders?.Count ?? 0;

        <tr class="hover:bg-gray-50">
            <td class="px-6 py-4">
                <code class="bg-gray-50 px-2 py-1 rounded text-sm">@customer.Code</code>
            </td>
            <td class="px-6 py-4">
                <div class="font-medium text-gray-900">@customer.Name</div>
                @if (!string.IsNullOrEmpty(customer.BillingCity))
                {
                    <span class="text-sm text-gray-500">
                        <i class="bi bi-geo-alt mr-1"></i>@customer.BillingCity
                    </span>
                }
            </td>
            <td class="px-6 py-4">
                @if (!string.IsNullOrEmpty(customer.ContactPerson))
                {
                    <div class="text-gray-900">@customer.ContactPerson</div>
                }
                @if (!string.IsNullOrEmpty(customer.Email))
                {
                    <span class="text-sm text-gray-500">
                        <i class="bi bi-envelope mr-1"></i>@customer.Email
                    </span>
                }
                else if (!string.IsNullOrEmpty(customer.Phone))
                {
                    <span class="text-sm text-gray-500">
                        <i class="bi bi-telephone mr-1"></i>@customer.Phone
                    </span>
                }
            </td>
            <td class="px-6 py-4">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @(customer.CustomerType == Algora.Erp.Domain.Entities.Sales.CustomerType.Company ? "bg-primary-100 text-primary-800" : "bg-blue-100 text-blue-800")">
                    @customer.CustomerType
                </span>
            </td>
            <td class="px-6 py-4 text-center">
                <a href="/Sales/Orders?customerId=@customer.Id" class="text-primary-600 hover:text-primary-700">
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">@orderCount</span>
                </a>
            </td>
            <td class="px-6 py-4 text-right">
                @if (customer.CurrentBalance > 0)
                {
                    <span class="text-emerald-600 font-medium">@customer.CurrentBalance.ToString("C2")</span>
                }
                else if (customer.CurrentBalance < 0)
                {
                    <span class="text-red-600 font-medium">@customer.CurrentBalance.ToString("C2")</span>
                }
                else
                {
                    <span class="text-gray-500">@customer.CurrentBalance.ToString("C2")</span>
                }
            </td>
            <td class="px-6 py-4">
                @if (customer.IsActive)
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-emerald-100 text-emerald-800">Active</span>
                }
                else
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">Inactive</span>
                }
            </td>
            <td class="px-6 py-4 text-right">
                <div class="relative inline-block">
                    <button class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg" id="dropdownCust@(customer.Id)" data-dropdown-toggle="dropdownMenuCust@(customer.Id)" data-dropdown-placement="bottom-end">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <div class="z-50 hidden absolute right-0 mt-2 bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuCust@(customer.Id)">
                        <ul class="py-2 text-sm text-gray-700">
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100 cursor-pointer"
                                   hx-get="?handler=EditForm&id=@customer.Id"
                                   hx-target="#formModalBody"
                                   data-modal-target="formModal" data-modal-toggle="formModal">
                                    <i class="bi bi-pencil mr-2"></i> Edit
                                </a>
                            </li>
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100" href="/Sales/Orders?customerId=@customer.Id">
                                    <i class="bi bi-bag-check mr-2"></i> View Orders
                                </a>
                            </li>
                        </ul>
                        <div class="py-2">
                            <a class="flex items-center px-4 py-2 text-red-600 hover:bg-gray-100 cursor-pointer"
                               hx-delete="?handler=Delete&id=@customer.Id"
                               hx-target="#customersTableBody"
                               hx-swap="innerHTML"
                               hx-confirm="Are you sure you want to delete this customer?">
                                <i class="bi bi-trash mr-2"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="8" class="px-6 py-3">
            @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", Model.Pagination)
        </td>
    </tr>
}
<script>
    // Re-initialize Flowbite dropdowns and HTMX after content swap
    if (typeof initFlowbite === 'function') { initFlowbite(); }
    if (typeof htmx !== 'undefined') { htmx.process(document.body); }
</script>