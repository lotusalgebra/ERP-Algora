@page
@model Algora.Erp.Web.Pages.Quality.Rejections.IndexModel
@{
    ViewData["Title"] = "Rejection Notes";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1">Rejection Notes</h4>
            <p class="text-muted mb-0">Manage rejected items and dispositions</p>
        </div>
        <button class="btn btn-primary"
                hx-get="?handler=CreateForm"
                hx-target="#formModalBody"
                data-bs-toggle="modal"
                data-bs-target="#formModal">
            <i class="bi bi-plus-lg me-2"></i>New Rejection
        </button>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <div class="bg-danger bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-x-circle text-danger fs-4"></i>
                            </div>
                        </div>
                        <div>
                            <p class="text-muted mb-1 small">Total Rejections</p>
                            <h4 class="mb-0">@Model.TotalRejections</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <div class="bg-warning bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-hourglass-split text-warning fs-4"></i>
                            </div>
                        </div>
                        <div>
                            <p class="text-muted mb-1 small">Pending Disposition</p>
                            <h4 class="mb-0">@Model.PendingDisposition</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <div class="bg-info bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-currency-dollar text-info fs-4"></i>
                            </div>
                        </div>
                        <div>
                            <p class="text-muted mb-1 small">Total Value</p>
                            <h4 class="mb-0">@Model.TotalRejectedValue.ToString("C0")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <div class="bg-primary bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-arrow-return-left text-primary fs-4"></i>
                            </div>
                        </div>
                        <div>
                            <p class="text-muted mb-1 small">Returned to Supplier</p>
                            <h4 class="mb-0">@Model.ReturnedToSupplier</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Rejections Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="row g-3 align-items-center">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text"
                               class="form-control border-start-0"
                               placeholder="Search rejections..."
                               id="searchInput"
                               hx-get="?handler=Table"
                               hx-trigger="keyup changed delay:300ms"
                               hx-target="#rejectionsTableBody"
                               hx-include="#statusFilter, #supplierFilter, #pageSizeSelect"
                               name="search">
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select"
                            id="statusFilter"
                            name="statusFilter"
                            hx-get="?handler=Table"
                            hx-trigger="change"
                            hx-target="#rejectionsTableBody"
                            hx-include="#searchInput, #supplierFilter, #pageSizeSelect">
                        <option value="">All Dispositions</option>
                        <option value="Pending">Pending</option>
                        <option value="ReturnToSupplier">Return to Supplier</option>
                        <option value="Scrapped">Scrapped</option>
                        <option value="Reworked">Reworked</option>
                        <option value="Disposed">Disposed</option>
                        <option value="AcceptedWithDeviation">Accepted with Deviation</option>
                        <option value="HoldForReview">Hold for Review</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select"
                            id="supplierFilter"
                            name="supplierFilter"
                            hx-get="?handler=Table"
                            hx-trigger="change"
                            hx-target="#rejectionsTableBody"
                            hx-include="#searchInput, #statusFilter, #pageSizeSelect">
                        <option value="">All Suppliers</option>
                        @foreach (var supplier in Model.Suppliers)
                        {
                            <option value="@supplier.Id">@supplier.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <select class="form-select"
                            id="pageSizeSelect"
                            name="pageSize"
                            hx-get="?handler=Table"
                            hx-trigger="change"
                            hx-target="#rejectionsTableBody"
                            hx-include="#searchInput, #statusFilter, #supplierFilter">
                        <option value="10">10 per page</option>
                        <option value="25">25 per page</option>
                        <option value="50">50 per page</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Rejection #</th>
                            <th>Product</th>
                            <th>Supplier</th>
                            <th>Date</th>
                            <th class="text-end">Quantity</th>
                            <th class="text-end">Value</th>
                            <th>Category</th>
                            <th>Disposition</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="rejectionsTableBody"
                           hx-get="?handler=Table"
                           hx-trigger="load"
                           hx-include="#searchInput, #statusFilter, #supplierFilter, #pageSizeSelect">
                        <tr>
                            <td colspan="9" class="text-center py-5">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Form Modal -->
<div class="modal fade" id="formModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Rejection Note</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="formModalBody">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Rejection Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="detailsModalBody">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Disposition Modal -->
<div class="modal fade" id="dispositionModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Update Disposition</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="dispositionModalBody">
                <!-- Content loaded dynamically -->
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this rejection note? This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let deleteId = null;
        const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));

        function confirmDelete(id) {
            deleteId = id;
            deleteModal.show();
        }

        document.getElementById('confirmDeleteBtn').addEventListener('click', function() {
            if (deleteId) {
                htmx.ajax('DELETE', `?handler=&id=${deleteId}`, {
                    target: '#rejectionsTableBody',
                    swap: 'innerHTML'
                }).then(() => {
                    deleteModal.hide();
                    deleteId = null;
                });
            }
        });

        function viewDetails(id) {
            htmx.ajax('GET', `?handler=Details&id=${id}`, {
                target: '#detailsModalBody',
                swap: 'innerHTML'
            });
            new bootstrap.Modal(document.getElementById('detailsModal')).show();
        }

        function editRejection(id) {
            htmx.ajax('GET', `?handler=EditForm&id=${id}`, {
                target: '#formModalBody',
                swap: 'innerHTML'
            });
            new bootstrap.Modal(document.getElementById('formModal')).show();
        }

        function showDispositionModal(id, currentStatus) {
            const html = `
                <form hx-post="?handler=UpdateDisposition&id=${id}" hx-target="#rejectionsTableBody" hx-swap="innerHTML">
                    <div class="mb-3">
                        <label class="form-label">Disposition Status</label>
                        <select class="form-select" name="DispositionStatus" id="dispositionStatus" onchange="toggleDispositionFields()" required>
                            <option value="Pending">Pending</option>
                            <option value="ReturnToSupplier">Return to Supplier</option>
                            <option value="Scrapped">Scrapped</option>
                            <option value="Reworked">Reworked</option>
                            <option value="Disposed">Disposed</option>
                            <option value="AcceptedWithDeviation">Accepted with Deviation</option>
                            <option value="HoldForReview">Hold for Review</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Action Taken</label>
                        <textarea class="form-control" name="DispositionAction" rows="2"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Processed By</label>
                        <input type="text" class="form-control" name="DisposerName" />
                    </div>
                    <div id="returnFields" style="display: none;">
                        <div class="mb-3">
                            <label class="form-label">Return Date</label>
                            <input type="date" class="form-control" name="ReturnDate" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Return Reference</label>
                            <input type="text" class="form-control" name="ReturnReference" />
                        </div>
                    </div>
                    <div id="scrapFields" style="display: none;">
                        <div class="mb-3">
                            <label class="form-label">Scrap Reference</label>
                            <input type="text" class="form-control" name="ScrapReference" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Scrap Value</label>
                            <input type="number" class="form-control" name="ScrapValue" step="0.01" />
                        </div>
                    </div>
                    <div id="reworkFields" style="display: none;">
                        <div class="mb-3">
                            <label class="form-label">Rework Instructions</label>
                            <textarea class="form-control" name="ReworkInstructions" rows="2"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer px-0 pb-0">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Update Disposition</button>
                    </div>
                </form>
            `;
            document.getElementById('dispositionModalBody').innerHTML = html;
            document.getElementById('dispositionStatus').value = currentStatus || 'Pending';
            toggleDispositionFields();
            new bootstrap.Modal(document.getElementById('dispositionModal')).show();
        }

        function toggleDispositionFields() {
            const status = document.getElementById('dispositionStatus').value;
            document.getElementById('returnFields').style.display = status === 'ReturnToSupplier' ? 'block' : 'none';
            document.getElementById('scrapFields').style.display = status === 'Scrapped' ? 'block' : 'none';
            document.getElementById('reworkFields').style.display = status === 'Reworked' ? 'block' : 'none';
        }

        document.body.addEventListener('formSubmitSuccess', function() {
            bootstrap.Modal.getInstance(document.getElementById('formModal'))?.hide();
            bootstrap.Modal.getInstance(document.getElementById('dispositionModal'))?.hide();
        });

        document.body.addEventListener('htmx:afterRequest', function(e) {
            if (e.detail.successful && e.detail.elt.closest('#dispositionModal')) {
                bootstrap.Modal.getInstance(document.getElementById('dispositionModal'))?.hide();
            }
        });
    </script>
}
