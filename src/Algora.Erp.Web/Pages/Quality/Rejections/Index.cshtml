@page
@model Algora.Erp.Web.Pages.Quality.Rejections.IndexModel
@{
    ViewData["Title"] = "Rejection Notes";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Rejection Notes</h1>
            <p class="text-sm text-gray-500 mt-1">Manage rejected items and dispositions</p>
        </div>
        <button type="button" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition-colors"
                hx-get="?handler=CreateForm"
                hx-target="#formModalBody"
                data-modal-target="formModal"
                data-modal-toggle="formModal">
            <i class="bi bi-plus-lg me-2"></i>New Rejection
        </button>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-red-100 rounded-lg">
                    <i class="bi bi-x-circle text-xl text-red-600"></i>
                </div>
                <div class="ms-4">
                    <p class="text-sm text-gray-500 mb-1">Total Rejections</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.TotalRejections</h3>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-amber-100 rounded-lg">
                    <i class="bi bi-hourglass-split text-xl text-amber-600"></i>
                </div>
                <div class="ms-4">
                    <p class="text-sm text-gray-500 mb-1">Pending Disposition</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.PendingDisposition</h3>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-blue-100 rounded-lg">
                    <i class="bi bi-currency-dollar text-xl text-blue-600"></i>
                </div>
                <div class="ms-4">
                    <p class="text-sm text-gray-500 mb-1">Total Value</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.TotalRejectedValue.ToString("C0")</h3>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-primary-100 rounded-lg">
                    <i class="bi bi-arrow-return-left text-xl text-primary-600"></i>
                </div>
                <div class="ms-4">
                    <p class="text-sm text-gray-500 mb-1">Returned to Supplier</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.ReturnedToSupplier</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Rejections Table -->
    <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <div class="p-4 border-b border-gray-200">
            <div class="grid grid-cols-1 md:grid-cols-12 gap-3">
                <div class="md:col-span-4">
                    <div class="relative">
                        <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                            <i class="bi bi-search text-gray-400"></i>
                        </div>
                        <input type="text"
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full ps-10 p-2.5"
                               placeholder="Search rejections..."
                               id="searchInput"
                               hx-get="?handler=Table"
                               hx-trigger="keyup changed delay:300ms"
                               hx-target="#rejectionsTableBody"
                               hx-include="#statusFilter, #supplierFilter, #pageSizeSelect"
                               name="search">
                    </div>
                </div>
                <div class="md:col-span-3">
                    <select id="statusFilter"
                            name="statusFilter"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                            hx-get="?handler=Table"
                            hx-trigger="change"
                            hx-target="#rejectionsTableBody"
                            hx-include="#searchInput, #supplierFilter, #pageSizeSelect">
                        <option value="">All Dispositions</option>
                        <option value="Pending">Pending</option>
                        <option value="ReturnToSupplier">Return to Supplier</option>
                        <option value="Scrapped">Scrapped</option>
                        <option value="Reworked">Reworked</option>
                        <option value="Disposed">Disposed</option>
                        <option value="AcceptedWithDeviation">Accepted with Deviation</option>
                        <option value="HoldForReview">Hold for Review</option>
                    </select>
                </div>
                <div class="md:col-span-3">
                    <select id="supplierFilter"
                            name="supplierFilter"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                            hx-get="?handler=Table"
                            hx-trigger="change"
                            hx-target="#rejectionsTableBody"
                            hx-include="#searchInput, #statusFilter, #pageSizeSelect">
                        <option value="">All Suppliers</option>
                        @foreach (var supplier in Model.Suppliers)
                        {
                            <option value="@supplier.Id">@supplier.Name</option>
                        }
                    </select>
                </div>
                <div class="md:col-span-2">
                    <select id="pageSizeSelect"
                            name="pageSize"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                            hx-get="?handler=Table"
                            hx-trigger="change"
                            hx-target="#rejectionsTableBody"
                            hx-include="#searchInput, #statusFilter, #supplierFilter">
                        <option value="10">10 per page</option>
                        <option value="25">25 per page</option>
                        <option value="50">50 per page</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3">Rejection #</th>
                        <th scope="col" class="px-6 py-3">Product</th>
                        <th scope="col" class="px-6 py-3">Supplier</th>
                        <th scope="col" class="px-6 py-3">Date</th>
                        <th scope="col" class="px-6 py-3 text-right">Quantity</th>
                        <th scope="col" class="px-6 py-3 text-right">Value</th>
                        <th scope="col" class="px-6 py-3">Category</th>
                        <th scope="col" class="px-6 py-3">Disposition</th>
                        <th scope="col" class="px-6 py-3 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody id="rejectionsTableBody"
                       hx-get="?handler=Table"
                       hx-trigger="load"
                       hx-include="#searchInput, #statusFilter, #supplierFilter, #pageSizeSelect">
                    <tr>
                        <td colspan="9" class="px-6 py-8 text-center">
                            <div class="inline-block animate-spin rounded-full h-6 w-6 border-b-2 border-primary-600"></div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Form Modal -->
<div id="formModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-4xl max-h-full">
        <div class="relative bg-white rounded-lg shadow">
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t">
                <h3 class="text-xl font-semibold text-gray-900">Rejection Note</h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="formModal">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="p-4 md:p-5" id="formModalBody">
                <div class="text-center py-8">
                    <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-primary-600"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Details Modal -->
<div id="detailsModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-4xl max-h-full">
        <div class="relative bg-white rounded-lg shadow">
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t">
                <h3 class="text-xl font-semibold text-gray-900">Rejection Details</h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="detailsModal">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="p-4 md:p-5" id="detailsModalBody">
                <div class="text-center py-8">
                    <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-primary-600"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Disposition Modal -->
<div id="dispositionModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-2xl max-h-full">
        <div class="relative bg-white rounded-lg shadow">
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t">
                <h3 class="text-xl font-semibold text-gray-900">Update Disposition</h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="dispositionModal">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="p-4 md:p-5" id="dispositionModalBody">
                <!-- Content loaded dynamically -->
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" tabindex="-1" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-lg shadow">
            <button type="button" class="absolute top-3 end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="deleteModal">
                <i class="bi bi-x-lg"></i>
            </button>
            <div class="p-4 md:p-5 text-center">
                <i class="bi bi-exclamation-triangle text-amber-500 text-5xl mb-4"></i>
                <h3 class="mb-5 text-lg font-normal text-gray-500">Are you sure you want to delete this rejection note?</h3>
                <p class="mb-5 text-sm text-gray-400">This action cannot be undone.</p>
                <button type="button" class="text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center me-2" id="confirmDeleteBtn">
                    Yes, delete
                </button>
                <button data-modal-hide="deleteModal" type="button" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900">
                    Cancel
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let deleteId = null;

        function confirmDelete(id) {
            deleteId = id;
            const modal = FlowbiteInstances.getInstance('Modal', 'deleteModal');
            if (modal) modal.show();
        }

        document.getElementById('confirmDeleteBtn')?.addEventListener('click', function() {
            if (deleteId) {
                htmx.ajax('DELETE', `?handler=&id=${deleteId}`, {
                    target: '#rejectionsTableBody',
                    swap: 'innerHTML'
                }).then(() => {
                    const modal = FlowbiteInstances.getInstance('Modal', 'deleteModal');
                    if (modal) modal.hide();
                    deleteId = null;
                });
            }
        });

        function viewDetails(id) {
            htmx.ajax('GET', `?handler=Details&id=${id}`, {
                target: '#detailsModalBody',
                swap: 'innerHTML'
            });
            const modal = FlowbiteInstances.getInstance('Modal', 'detailsModal');
            if (modal) modal.show();
        }

        function editRejection(id) {
            htmx.ajax('GET', `?handler=EditForm&id=${id}`, {
                target: '#formModalBody',
                swap: 'innerHTML'
            });
            const modal = FlowbiteInstances.getInstance('Modal', 'formModal');
            if (modal) modal.show();
        }

        function showDispositionModal(id, currentStatus) {
            const html = `
                <form hx-post="?handler=UpdateDisposition&id=${id}" hx-target="#rejectionsTableBody" hx-swap="innerHTML">
                    <div class="mb-4">
                        <label class="block mb-2 text-sm font-medium text-gray-900">Disposition Status</label>
                        <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="DispositionStatus" id="dispositionStatus" onchange="toggleDispositionFields()" required>
                            <option value="Pending">Pending</option>
                            <option value="ReturnToSupplier">Return to Supplier</option>
                            <option value="Scrapped">Scrapped</option>
                            <option value="Reworked">Reworked</option>
                            <option value="Disposed">Disposed</option>
                            <option value="AcceptedWithDeviation">Accepted with Deviation</option>
                            <option value="HoldForReview">Hold for Review</option>
                        </select>
                    </div>
                    <div class="mb-4">
                        <label class="block mb-2 text-sm font-medium text-gray-900">Action Taken</label>
                        <textarea class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="DispositionAction" rows="2"></textarea>
                    </div>
                    <div class="mb-4">
                        <label class="block mb-2 text-sm font-medium text-gray-900">Processed By</label>
                        <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="DisposerName" />
                    </div>
                    <div id="returnFields" style="display: none;">
                        <div class="mb-4">
                            <label class="block mb-2 text-sm font-medium text-gray-900">Return Date</label>
                            <input type="date" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="ReturnDate" />
                        </div>
                        <div class="mb-4">
                            <label class="block mb-2 text-sm font-medium text-gray-900">Return Reference</label>
                            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="ReturnReference" />
                        </div>
                    </div>
                    <div id="scrapFields" style="display: none;">
                        <div class="mb-4">
                            <label class="block mb-2 text-sm font-medium text-gray-900">Scrap Reference</label>
                            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="ScrapReference" />
                        </div>
                        <div class="mb-4">
                            <label class="block mb-2 text-sm font-medium text-gray-900">Scrap Value</label>
                            <input type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="ScrapValue" step="0.01" />
                        </div>
                    </div>
                    <div id="reworkFields" style="display: none;">
                        <div class="mb-4">
                            <label class="block mb-2 text-sm font-medium text-gray-900">Rework Instructions</label>
                            <textarea class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="ReworkInstructions" rows="2"></textarea>
                        </div>
                    </div>
                    <div class="flex justify-end gap-3 pt-4 border-t border-gray-200">
                        <button type="button" data-modal-hide="dispositionModal" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900">Cancel</button>
                        <button type="submit" class="text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5">Update Disposition</button>
                    </div>
                </form>
            `;
            document.getElementById('dispositionModalBody').innerHTML = html;
            document.getElementById('dispositionStatus').value = currentStatus || 'Pending';
            toggleDispositionFields();
            htmx.process(document.getElementById('dispositionModalBody'));
            const modal = FlowbiteInstances.getInstance('Modal', 'dispositionModal');
            if (modal) modal.show();
        }

        function toggleDispositionFields() {
            const status = document.getElementById('dispositionStatus').value;
            document.getElementById('returnFields').style.display = status === 'ReturnToSupplier' ? 'block' : 'none';
            document.getElementById('scrapFields').style.display = status === 'Scrapped' ? 'block' : 'none';
            document.getElementById('reworkFields').style.display = status === 'Reworked' ? 'block' : 'none';
        }

        document.body.addEventListener('formSubmitSuccess', function() {
            const formModal = FlowbiteInstances.getInstance('Modal', 'formModal');
            if (formModal) formModal.hide();
            const dispositionModal = FlowbiteInstances.getInstance('Modal', 'dispositionModal');
            if (dispositionModal) dispositionModal.hide();
        });

        document.body.addEventListener('htmx:afterRequest', function(e) {
            if (e.detail.successful && e.detail.elt.closest('#dispositionModal')) {
                const modal = FlowbiteInstances.getInstance('Modal', 'dispositionModal');
                if (modal) modal.hide();
            }
        });
    </script>
}
