@model Algora.Erp.Domain.Entities.Quality.RejectionNote
@using Algora.Erp.Domain.Entities.Quality

@{
    var dispositionClass = Model.DispositionStatus switch
    {
        RejectionDisposition.Pending => "bg-gray-100 text-gray-800",
        RejectionDisposition.ReturnToSupplier => "bg-primary-100 text-primary-800",
        RejectionDisposition.Scrapped => "bg-red-100 text-red-800",
        RejectionDisposition.Reworked => "bg-blue-100 text-blue-800",
        RejectionDisposition.Disposed => "bg-gray-700 text-white",
        RejectionDisposition.AcceptedWithDeviation => "bg-amber-100 text-amber-800",
        RejectionDisposition.HoldForReview => "bg-amber-100 text-amber-800",
        _ => "bg-gray-100 text-gray-800"
    };

    var categoryClass = Model.RejectionCategory switch
    {
        RejectionCategory.QualityDefect => "bg-red-100 text-red-800",
        RejectionCategory.DamagedInTransit => "bg-amber-100 text-amber-800",
        RejectionCategory.WrongProduct => "bg-blue-100 text-blue-800",
        RejectionCategory.QuantityMismatch => "bg-gray-100 text-gray-800",
        RejectionCategory.ExpiredProduct => "bg-gray-700 text-white",
        _ => "bg-gray-100 text-gray-800"
    };
}

<div class="grid grid-cols-12 gap-4">
    <!-- Header Info -->
    <div class="col-span-12">
        <div class="flex justify-between items-start">
            <div>
                <h5 class="text-lg font-semibold text-gray-900 mb-1">@Model.RejectionNumber</h5>
                <p class="text-gray-500 mb-0">@Model.RejectionDate.ToString("dd MMM yyyy")</p>
            </div>
            <div class="text-right">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @categoryClass mr-2">@Model.RejectionCategory</span>
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @dispositionClass">@Model.DispositionStatus</span>
            </div>
        </div>
    </div>

    <!-- Product Details -->
    <div class="md:col-span-6 col-span-12">
        <div class="bg-white rounded-lg shadow-md h-full">
            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                <h6 class="text-sm font-medium text-gray-900 mb-0">Product Information</h6>
            </div>
            <div class="p-6">
                <table class="w-full text-sm">
                    <tr>
                        <td class="text-gray-500 py-1" style="width: 40%;">Product:</td>
                        <td class="py-1">
                            <div class="font-medium text-gray-900">@Model.ProductName</div>
                            <small class="text-gray-500">@Model.ProductSku</small>
                        </td>
                    </tr>
                    @if (Model.Warehouse != null)
                    {
                        <tr>
                            <td class="text-gray-500 py-1">Warehouse:</td>
                            <td class="font-medium text-gray-900 py-1">@Model.Warehouse.Name</td>
                        </tr>
                    }
                    @if (Model.Supplier != null)
                    {
                        <tr>
                            <td class="text-gray-500 py-1">Supplier:</td>
                            <td class="font-medium text-gray-900 py-1">@Model.Supplier.Name</td>
                        </tr>
                    }
                    <tr>
                        <td class="text-gray-500 py-1">Source Document:</td>
                        <td class="font-medium text-gray-900 py-1">
                            @(Model.SourceDocumentType): @(Model.SourceDocumentNumber ?? "-")
                        </td>
                    </tr>
                    @if (Model.QualityInspection != null)
                    {
                        <tr>
                            <td class="text-gray-500 py-1">QC Inspection:</td>
                            <td class="font-medium text-gray-900 py-1">@Model.QualityInspection.InspectionNumber</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>

    <!-- Quantity & Value -->
    <div class="md:col-span-6 col-span-12">
        <div class="bg-white rounded-lg shadow-md h-full">
            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                <h6 class="text-sm font-medium text-gray-900 mb-0">Quantity & Value</h6>
            </div>
            <div class="p-6">
                <table class="w-full text-sm">
                    <tr>
                        <td class="text-gray-500 py-1" style="width: 40%;">Rejected Quantity:</td>
                        <td class="font-medium text-gray-900 py-1">@Model.RejectedQuantity.ToString("N2") @Model.UnitOfMeasure</td>
                    </tr>
                    <tr>
                        <td class="text-gray-500 py-1">Unit Cost:</td>
                        <td class="font-medium text-gray-900 py-1">@Model.UnitCost.ToString("C2")</td>
                    </tr>
                    <tr>
                        <td class="text-gray-500 py-1">Total Value:</td>
                        <td class="font-medium text-red-600 text-lg py-1">@Model.TotalValue.ToString("C2")</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <!-- Rejection Details -->
    <div class="col-span-12">
        <div class="bg-white rounded-lg shadow-md">
            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                <h6 class="text-sm font-medium text-gray-900 mb-0">Rejection Details</h6>
            </div>
            <div class="p-6">
                <div class="grid grid-cols-12 gap-3">
                    <div class="md:col-span-6 col-span-12">
                        <label class="block mb-1 text-sm text-gray-500">Category</label>
                        <p class="mb-0"><span class="text-xs font-medium px-2.5 py-0.5 rounded-full @categoryClass">@Model.RejectionCategory</span></p>
                    </div>
                    <div class="md:col-span-6 col-span-12">
                        <label class="block mb-1 text-sm text-gray-500">Reason</label>
                        <p class="mb-0 font-medium text-gray-900">@Model.RejectionReason</p>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.DefectDescription))
                    {
                        <div class="col-span-12">
                            <label class="block mb-1 text-sm text-gray-500">Defect Description</label>
                            <p class="mb-0 text-gray-700">@Model.DefectDescription</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Disposition Details -->
    @if (Model.DispositionStatus != RejectionDisposition.Pending)
    {
        <div class="col-span-12">
            <div class="bg-white rounded-lg shadow-md">
                <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                    <h6 class="text-sm font-medium text-gray-900 mb-0">Disposition Details</h6>
                </div>
                <div class="p-6">
                    <div class="grid grid-cols-12 gap-3">
                        <div class="md:col-span-4 col-span-12">
                            <label class="block mb-1 text-sm text-gray-500">Disposition</label>
                            <p class="mb-0"><span class="text-xs font-medium px-2.5 py-0.5 rounded-full @dispositionClass">@Model.DispositionStatus</span></p>
                        </div>
                        @if (Model.DispositionDate.HasValue)
                        {
                            <div class="md:col-span-4 col-span-12">
                                <label class="block mb-1 text-sm text-gray-500">Disposition Date</label>
                                <p class="mb-0 font-medium text-gray-900">@Model.DispositionDate.Value.ToString("dd MMM yyyy")</p>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.DisposerName))
                        {
                            <div class="md:col-span-4 col-span-12">
                                <label class="block mb-1 text-sm text-gray-500">Processed By</label>
                                <p class="mb-0 font-medium text-gray-900">@Model.DisposerName</p>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.DispositionAction))
                        {
                            <div class="col-span-12">
                                <label class="block mb-1 text-sm text-gray-500">Action Taken</label>
                                <p class="mb-0 text-gray-700">@Model.DispositionAction</p>
                            </div>
                        }

                        @* Return to Supplier Details *@
                        @if (Model.DispositionStatus == RejectionDisposition.ReturnToSupplier)
                        {
                            @if (Model.ReturnDate.HasValue)
                            {
                                <div class="md:col-span-4 col-span-12">
                                    <label class="block mb-1 text-sm text-gray-500">Return Date</label>
                                    <p class="mb-0 font-medium text-gray-900">@Model.ReturnDate.Value.ToString("dd MMM yyyy")</p>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.ReturnReference))
                            {
                                <div class="md:col-span-4 col-span-12">
                                    <label class="block mb-1 text-sm text-gray-500">Return Reference</label>
                                    <p class="mb-0 font-medium text-gray-900">@Model.ReturnReference</p>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.DebitNoteNumber))
                            {
                                <div class="md:col-span-4 col-span-12">
                                    <label class="block mb-1 text-sm text-gray-500">Debit Note</label>
                                    <p class="mb-0 font-medium text-gray-900">@Model.DebitNoteNumber</p>
                                </div>
                            }
                        }

                        @* Scrap Details *@
                        @if (Model.DispositionStatus == RejectionDisposition.Scrapped)
                        {
                            @if (Model.ScrapDate.HasValue)
                            {
                                <div class="md:col-span-4 col-span-12">
                                    <label class="block mb-1 text-sm text-gray-500">Scrap Date</label>
                                    <p class="mb-0 font-medium text-gray-900">@Model.ScrapDate.Value.ToString("dd MMM yyyy")</p>
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(Model.ScrapReference))
                            {
                                <div class="md:col-span-4 col-span-12">
                                    <label class="block mb-1 text-sm text-gray-500">Scrap Reference</label>
                                    <p class="mb-0 font-medium text-gray-900">@Model.ScrapReference</p>
                                </div>
                            }
                            @if (Model.ScrapValue.HasValue)
                            {
                                <div class="md:col-span-4 col-span-12">
                                    <label class="block mb-1 text-sm text-gray-500">Scrap Value</label>
                                    <p class="mb-0 font-medium text-gray-900">@Model.ScrapValue.Value.ToString("C2")</p>
                                </div>
                            }
                        }

                        @* Rework Details *@
                        @if (Model.DispositionStatus == RejectionDisposition.Reworked)
                        {
                            @if (!string.IsNullOrEmpty(Model.ReworkInstructions))
                            {
                                <div class="col-span-12">
                                    <label class="block mb-1 text-sm text-gray-500">Rework Instructions</label>
                                    <p class="mb-0 text-gray-700">@Model.ReworkInstructions</p>
                                </div>
                            }
                            @if (Model.ReworkCompletedAt.HasValue)
                            {
                                <div class="md:col-span-4 col-span-12">
                                    <label class="block mb-1 text-sm text-gray-500">Rework Completed</label>
                                    <p class="mb-0 font-medium text-gray-900">@Model.ReworkCompletedAt.Value.ToString("dd MMM yyyy HH:mm")</p>
                                </div>
                            }
                            @if (Model.ReworkCost.HasValue)
                            {
                                <div class="md:col-span-4 col-span-12">
                                    <label class="block mb-1 text-sm text-gray-500">Rework Cost</label>
                                    <p class="mb-0 font-medium text-gray-900">@Model.ReworkCost.Value.ToString("C2")</p>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Notes -->
    @if (!string.IsNullOrEmpty(Model.Notes))
    {
        <div class="col-span-12">
            <div class="bg-white rounded-lg shadow-md">
                <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                    <h6 class="text-sm font-medium text-gray-900 mb-0">Notes</h6>
                </div>
                <div class="p-6">
                    <p class="mb-0 text-gray-700">@Model.Notes</p>
                </div>
            </div>
        </div>
    }
</div>

<div class="flex items-center p-4 border-t border-gray-200 rounded-b gap-2 mt-4 px-0 pb-0">
    @if (Model.DispositionStatus == RejectionDisposition.Pending || Model.DispositionStatus == RejectionDisposition.HoldForReview)
    {
        <button type="button" class="text-primary-600 border border-primary-600 hover:bg-primary-50 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5" onclick="editRejection('@Model.Id')" data-modal-hide="detailsModal">
            <i class="bi bi-pencil mr-2"></i>Edit
        </button>
        <button type="button" class="text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5" onclick="showDispositionModal('@Model.Id', '@Model.DispositionStatus')" data-modal-hide="detailsModal">
            <i class="bi bi-arrow-right-circle mr-2"></i>Update Disposition
        </button>
    }
    <button type="button" class="text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5" data-modal-hide="detailsModal">Close</button>
</div>
