@model Algora.Erp.Web.Pages.Quality.Rejections.RejectionFormViewModel
@using Algora.Erp.Domain.Entities.Quality

<form hx-post="?handler=" hx-target="#rejectionsTableBody" hx-swap="innerHTML">
    @if (Model.IsEdit && Model.Rejection != null)
    {
        <input type="hidden" name="Id" value="@Model.Rejection.Id" />
    }

    <div class="grid grid-cols-12 gap-3">
        <div class="md:col-span-6 col-span-12">
            <label class="block mb-2 text-sm font-medium text-gray-900">Rejection Date <span class="text-red-500">*</span></label>
            <input type="date" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="RejectionDate"
                   value="@(Model.Rejection?.RejectionDate.ToString("yyyy-MM-dd") ?? DateTime.Today.ToString("yyyy-MM-dd"))" required />
        </div>
        <div class="md:col-span-6 col-span-12">
            <label class="block mb-2 text-sm font-medium text-gray-900">Rejection Category <span class="text-red-500">*</span></label>
            <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="RejectionCategory" required>
                @foreach (var category in Enum.GetValues<RejectionCategory>())
                {
                    if (Model.Rejection?.RejectionCategory == category)
                    {
                        <option value="@category" selected>@category</option>
                    }
                    else
                    {
                        <option value="@category">@category</option>
                    }
                }
            </select>
        </div>

        @if (Model.FailedInspections?.Any() == true)
        {
            <div class="col-span-12">
                <label class="block mb-2 text-sm font-medium text-gray-900">Link to QC Inspection (Optional)</label>
                <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="QualityInspectionId" id="qcSelect" onchange="loadQcDetails(this.value)">
                    <option value="">-- Create Manual Rejection --</option>
                    @foreach (var qc in Model.FailedInspections)
                    {
                        if (Model.Rejection?.QualityInspectionId == qc.Id)
                        {
                            <option value="@qc.Id" data-product="@qc.ProductId" data-warehouse="@qc.WarehouseId"
                                    data-supplier="@qc.SupplierId" data-qty="@qc.FailedQuantity"
                                    data-source-type="@qc.SourceDocumentType" data-source-id="@qc.SourceDocumentId"
                                    data-source-number="@qc.SourceDocumentNumber" selected>
                                @qc.InspectionNumber - @qc.Product?.Name (@qc.OverallResult)
                            </option>
                        }
                        else
                        {
                            <option value="@qc.Id" data-product="@qc.ProductId" data-warehouse="@qc.WarehouseId"
                                    data-supplier="@qc.SupplierId" data-qty="@qc.FailedQuantity"
                                    data-source-type="@qc.SourceDocumentType" data-source-id="@qc.SourceDocumentId"
                                    data-source-number="@qc.SourceDocumentNumber">
                                @qc.InspectionNumber - @qc.Product?.Name (@qc.OverallResult)
                            </option>
                        }
                    }
                </select>
            </div>
        }

        <div class="md:col-span-6 col-span-12">
            <label class="block mb-2 text-sm font-medium text-gray-900">Source Document Type</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="SourceDocumentType" id="sourceDocumentType"
                   value="@Model.Rejection?.SourceDocumentType" placeholder="e.g., GoodsReceipt, QualityInspection" />
        </div>
        <div class="md:col-span-6 col-span-12">
            <label class="block mb-2 text-sm font-medium text-gray-900">Source Document Number</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="SourceDocumentNumber" id="sourceDocumentNumber"
                   value="@Model.Rejection?.SourceDocumentNumber" />
            <input type="hidden" name="SourceDocumentId" id="sourceDocumentId" value="@Model.Rejection?.SourceDocumentId" />
        </div>

        <div class="md:col-span-6 col-span-12">
            <label class="block mb-2 text-sm font-medium text-gray-900">Product <span class="text-red-500">*</span></label>
            <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="ProductId" id="productSelect" required>
                <option value="">-- Select Product --</option>
                @foreach (var product in Model.Products)
                {
                    if (Model.Rejection?.ProductId == product.Id)
                    {
                        <option value="@product.Id" selected>@product.Name (@product.Sku)</option>
                    }
                    else
                    {
                        <option value="@product.Id">@product.Name (@product.Sku)</option>
                    }
                }
            </select>
        </div>
        <div class="md:col-span-6 col-span-12">
            <label class="block mb-2 text-sm font-medium text-gray-900">Warehouse <span class="text-red-500">*</span></label>
            <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="WarehouseId" id="warehouseSelect" required>
                <option value="">-- Select Warehouse --</option>
                @foreach (var warehouse in Model.Warehouses)
                {
                    if (Model.Rejection?.WarehouseId == warehouse.Id)
                    {
                        <option value="@warehouse.Id" selected>@warehouse.Name</option>
                    }
                    else
                    {
                        <option value="@warehouse.Id">@warehouse.Name</option>
                    }
                }
            </select>
        </div>

        <div class="md:col-span-6 col-span-12">
            <label class="block mb-2 text-sm font-medium text-gray-900">Supplier (if applicable)</label>
            <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="SupplierId" id="supplierSelect">
                <option value="">-- Select Supplier --</option>
                @foreach (var supplier in Model.Suppliers)
                {
                    if (Model.Rejection?.SupplierId == supplier.Id)
                    {
                        <option value="@supplier.Id" selected>@supplier.Name</option>
                    }
                    else
                    {
                        <option value="@supplier.Id">@supplier.Name</option>
                    }
                }
            </select>
        </div>
        <div class="md:col-span-6 col-span-12">
            &nbsp;
        </div>

        <div class="md:col-span-4 col-span-12">
            <label class="block mb-2 text-sm font-medium text-gray-900">Rejected Quantity <span class="text-red-500">*</span></label>
            <input type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="RejectedQuantity" id="rejectedQty"
                   value="@Model.Rejection?.RejectedQuantity" required step="0.01" min="0.01" onchange="calculateTotal()" />
        </div>
        <div class="md:col-span-4 col-span-12">
            <label class="block mb-2 text-sm font-medium text-gray-900">Unit of Measure</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="UnitOfMeasure"
                   value="@(Model.Rejection?.UnitOfMeasure ?? "EA")" />
        </div>
        <div class="md:col-span-4 col-span-12">
            <label class="block mb-2 text-sm font-medium text-gray-900">Unit Cost</label>
            <input type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="UnitCost" id="unitCost"
                   value="@Model.Rejection?.UnitCost" step="0.01" min="0" onchange="calculateTotal()" />
        </div>

        <div class="col-span-12">
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                <div class="flex justify-between items-center">
                    <span class="text-blue-800 text-sm">Total Rejection Value:</span>
                    <strong class="text-blue-800" id="totalValue">@Model.Rejection?.TotalValue.ToString("C2")</strong>
                </div>
            </div>
        </div>

        <div class="col-span-12">
            <label class="block mb-2 text-sm font-medium text-gray-900">Rejection Reason <span class="text-red-500">*</span></label>
            <textarea class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="RejectionReason" rows="2" required>@Model.Rejection?.RejectionReason</textarea>
        </div>

        <div class="col-span-12">
            <label class="block mb-2 text-sm font-medium text-gray-900">Defect Description</label>
            <textarea class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="DefectDescription" rows="2">@Model.Rejection?.DefectDescription</textarea>
        </div>

        <div class="col-span-12">
            <label class="block mb-2 text-sm font-medium text-gray-900">Notes</label>
            <textarea class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Notes" rows="2">@Model.Rejection?.Notes</textarea>
        </div>
    </div>

    <div class="flex items-center p-4 border-t border-gray-200 rounded-b gap-2 px-0 pb-0 mt-3">
        <button type="button" class="text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5" data-modal-hide="rejectionModal">Cancel</button>
        <button type="submit" class="text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5">
            <i class="bi bi-check-lg mr-2"></i>@(Model.IsEdit ? "Update" : "Create") Rejection
        </button>
    </div>
</form>

<script>
    function loadQcDetails(qcId) {
        const select = document.getElementById('qcSelect');
        const option = select.options[select.selectedIndex];
        if (option && option.value) {
            document.getElementById('productSelect').value = option.dataset.product || '';
            document.getElementById('warehouseSelect').value = option.dataset.warehouse || '';
            document.getElementById('supplierSelect').value = option.dataset.supplier || '';
            document.getElementById('rejectedQty').value = option.dataset.qty || '';
            document.getElementById('sourceDocumentType').value = option.dataset.sourceType || '';
            document.getElementById('sourceDocumentId').value = option.dataset.sourceId || '';
            document.getElementById('sourceDocumentNumber').value = option.dataset.sourceNumber || '';
            calculateTotal();
        }
    }

    function calculateTotal() {
        const qty = parseFloat(document.getElementById('rejectedQty').value) || 0;
        const cost = parseFloat(document.getElementById('unitCost').value) || 0;
        const total = qty * cost;
        document.getElementById('totalValue').textContent = '$' + total.toFixed(2);
    }

    // Handle form submission success
    document.querySelector('form').addEventListener('htmx:afterRequest', function(e) {
        if (e.detail.successful) {
            document.body.dispatchEvent(new CustomEvent('formSubmitSuccess'));
        }
    });
</script>
