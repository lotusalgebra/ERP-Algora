@model Algora.Erp.Web.Pages.Quality.Rejections.RejectionsTableViewModel
@using Algora.Erp.Domain.Entities.Quality

@if (!Model.Rejections.Any())
{
    <tr>
        <td colspan="9" class="text-center py-8">
            <div class="text-gray-500">
                <i class="bi bi-x-circle text-4xl block mb-3"></i>
                <p class="mb-0">No rejection notes found</p>
            </div>
        </td>
    </tr>
}
else
{
    @foreach (var rejection in Model.Rejections)
    {
        var dispositionClass = rejection.DispositionStatus switch
        {
            RejectionDisposition.Pending => "bg-gray-100 text-gray-800",
            RejectionDisposition.ReturnToSupplier => "bg-primary-100 text-primary-800",
            RejectionDisposition.Scrapped => "bg-red-100 text-red-800",
            RejectionDisposition.Reworked => "bg-blue-100 text-blue-800",
            RejectionDisposition.Disposed => "bg-gray-700 text-white",
            RejectionDisposition.AcceptedWithDeviation => "bg-amber-100 text-amber-800",
            RejectionDisposition.HoldForReview => "bg-amber-100 text-amber-800",
            _ => "bg-gray-100 text-gray-800"
        };

        var categoryClass = rejection.RejectionCategory switch
        {
            RejectionCategory.QualityDefect => "bg-red-100 text-red-800",
            RejectionCategory.DamagedInTransit => "bg-amber-100 text-amber-800",
            RejectionCategory.WrongProduct => "bg-blue-100 text-blue-800",
            RejectionCategory.QuantityMismatch => "bg-gray-100 text-gray-800",
            RejectionCategory.ExpiredProduct => "bg-gray-700 text-white",
            _ => "bg-gray-100 text-gray-800"
        };

        <tr class="bg-white border-b hover:bg-gray-50">
            <td class="px-6 py-4">
                <a href="/Quality/Rejections/Details/@rejection.Id" class="text-primary-600 hover:underline font-medium">
                    @rejection.RejectionNumber
                </a>
            </td>
            <td class="px-6 py-4">
                <div class="font-medium text-gray-900">@rejection.ProductName</div>
                <small class="text-gray-500">@rejection.ProductSku</small>
            </td>
            <td class="px-6 py-4">
                @if (rejection.Supplier != null)
                {
                    <span class="truncate inline-block max-w-[120px] text-gray-900">@rejection.Supplier.Name</span>
                }
                else
                {
                    <span class="text-gray-400">-</span>
                }
            </td>
            <td class="px-6 py-4 text-gray-900">@rejection.RejectionDate.ToString("dd MMM yyyy")</td>
            <td class="px-6 py-4 text-right">
                @rejection.RejectedQuantity.ToString("N2")
                <small class="text-gray-500">@rejection.UnitOfMeasure</small>
            </td>
            <td class="px-6 py-4 text-right text-red-600 font-medium">@rejection.TotalValue.ToString("C2")</td>
            <td class="px-6 py-4">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @categoryClass">@rejection.RejectionCategory</span>
            </td>
            <td class="px-6 py-4">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @dispositionClass">@rejection.DispositionStatus</span>
            </td>
            <td class="px-6 py-4 text-right">
                <div class="relative inline-block">
                    <button type="button" class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg"
                            id="dropdownRej@(rejection.Id)" data-dropdown-toggle="dropdownMenuRej@(rejection.Id)" data-dropdown-placement="bottom-end">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <div class="z-50 hidden absolute right-0 mt-2 bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuRej@(rejection.Id)">
                        <ul class="py-2 text-sm text-gray-700">
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100" href="/Quality/Rejections/Details/@rejection.Id">
                                    <i class="bi bi-eye mr-2"></i>View Details
                                </a>
                            </li>
                            @if (rejection.DispositionStatus == RejectionDisposition.Pending || rejection.DispositionStatus == RejectionDisposition.HoldForReview)
                            {
                                <li>
                                    <a class="flex items-center px-4 py-2 hover:bg-gray-100 cursor-pointer"
                                       hx-get="?handler=EditForm&id=@rejection.Id"
                                       hx-target="#formModalBody"
                                       data-modal-target="formModal" data-modal-toggle="formModal">
                                        <i class="bi bi-pencil mr-2"></i>Edit
                                    </a>
                                </li>
                                <li>
                                    <a class="flex items-center px-4 py-2 hover:bg-gray-100 text-primary-600 cursor-pointer"
                                       hx-get="?handler=DispositionForm&id=@rejection.Id"
                                       hx-target="#formModalBody"
                                       data-modal-target="formModal" data-modal-toggle="formModal">
                                        <i class="bi bi-arrow-right-circle mr-2"></i>Update Disposition
                                    </a>
                                </li>
                            }
                        </ul>
                        @if (rejection.DispositionStatus == RejectionDisposition.Pending)
                        {
                            <div class="py-2">
                                <a class="flex items-center px-4 py-2 text-red-600 hover:bg-gray-100 cursor-pointer"
                                   hx-delete="?handler=Delete&id=@rejection.Id"
                                   hx-target="#rejectionsTableBody"
                                   hx-swap="innerHTML"
                                   hx-confirm="Are you sure you want to delete this rejection note?">
                                    <i class="bi bi-trash mr-2"></i>Delete
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="9" class="px-6 py-3">
            @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", Model.Pagination)
        </td>
    </tr>
}
