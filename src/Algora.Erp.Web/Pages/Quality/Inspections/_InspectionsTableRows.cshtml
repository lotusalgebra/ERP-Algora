@model Algora.Erp.Web.Pages.Quality.Inspections.InspectionsTableViewModel
@using Algora.Erp.Domain.Entities.Quality

@if (!Model.Inspections.Any())
{
    <tr>
        <td colspan="9" class="text-center py-8">
            <div class="text-gray-500">
                <i class="bi bi-clipboard-check text-4xl block mb-3"></i>
                <p class="mb-0">No inspections found</p>
            </div>
        </td>
    </tr>
}
else
{
    @foreach (var inspection in Model.Inspections)
    {
        var statusClass = inspection.Status switch
        {
            InspectionStatus.Pending => "bg-gray-100 text-gray-800",
            InspectionStatus.InProgress => "bg-blue-100 text-blue-800",
            InspectionStatus.Completed => "bg-primary-100 text-primary-800",
            InspectionStatus.Approved => "bg-emerald-100 text-emerald-800",
            InspectionStatus.Rejected => "bg-red-100 text-red-800",
            InspectionStatus.Cancelled => "bg-gray-700 text-white",
            _ => "bg-gray-100 text-gray-800"
        };

        var resultClass = inspection.OverallResult switch
        {
            QCOverallResult.Pending => "bg-gray-100 text-gray-800",
            QCOverallResult.Pass => "bg-emerald-100 text-emerald-800",
            QCOverallResult.Fail => "bg-red-100 text-red-800",
            QCOverallResult.PartialPass => "bg-amber-100 text-amber-800",
            QCOverallResult.ConditionalPass => "bg-blue-100 text-blue-800",
            _ => "bg-gray-100 text-gray-800"
        };

        var typeClass = inspection.InspectionType switch
        {
            InspectionType.Incoming => "bg-primary-100 text-primary-800",
            InspectionType.Outgoing => "bg-emerald-100 text-emerald-800",
            InspectionType.InProcess => "bg-amber-100 text-amber-800",
            InspectionType.Random => "bg-blue-100 text-blue-800",
            InspectionType.Final => "bg-gray-700 text-white",
            _ => "bg-gray-100 text-gray-800"
        };

        <tr class="bg-white border-b hover:bg-gray-50">
            <td class="px-6 py-4">
                <a href="/Quality/Inspections/Details/@inspection.Id" class="text-primary-600 hover:underline font-medium">
                    @inspection.InspectionNumber
                </a>
            </td>
            <td class="px-6 py-4">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @typeClass">@inspection.InspectionType</span>
            </td>
            <td class="px-6 py-4">
                <div class="text-sm">
                    <span class="text-gray-500">@inspection.SourceDocumentType:</span>
                    <span class="font-medium text-gray-900">@inspection.SourceDocumentNumber</span>
                </div>
            </td>
            <td class="px-6 py-4">
                @if (inspection.Product != null)
                {
                    <div class="font-medium text-gray-900">@inspection.Product.Name</div>
                    <small class="text-gray-500">@inspection.Product.Sku</small>
                }
                else
                {
                    <span class="text-gray-400">-</span>
                }
            </td>
            <td class="px-6 py-4 text-gray-900">@inspection.InspectionDate.ToString("dd MMM yyyy")</td>
            <td class="px-6 py-4 text-center">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">@inspection.SampleSize / @inspection.TotalQuantity</span>
            </td>
            <td class="px-6 py-4">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @resultClass">@inspection.OverallResult</span>
            </td>
            <td class="px-6 py-4">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @statusClass">@inspection.Status</span>
            </td>
            <td class="px-6 py-4 text-right">
                <div class="relative inline-block">
                    <button type="button" class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg"
                            id="dropdownInsp@(inspection.Id)" data-dropdown-toggle="dropdownMenuInsp@(inspection.Id)" data-dropdown-placement="bottom-end">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <div class="z-50 hidden absolute right-0 mt-2 bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuInsp@(inspection.Id)">
                        <ul class="py-2 text-sm text-gray-700">
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100" href="/Quality/Inspections/Details/@inspection.Id">
                                    <i class="bi bi-eye mr-2"></i>View Details
                                </a>
                            </li>
                            @if (inspection.Status == InspectionStatus.Pending || inspection.Status == InspectionStatus.InProgress)
                            {
                                <li>
                                    <a class="flex items-center px-4 py-2 hover:bg-gray-100 cursor-pointer"
                                       hx-get="?handler=EditForm&id=@inspection.Id"
                                       hx-target="#formModalBody"
                                       data-modal-target="formModal" data-modal-toggle="formModal">
                                        <i class="bi bi-pencil mr-2"></i>Edit / Record Results
                                    </a>
                                </li>
                            }
                            @if (inspection.Status == InspectionStatus.Completed)
                            {
                                <li>
                                    <a class="flex items-center px-4 py-2 hover:bg-gray-100 text-emerald-600 cursor-pointer"
                                       hx-post="?handler=Approve&id=@inspection.Id"
                                       hx-target="#inspectionsTableBody"
                                       hx-swap="innerHTML"
                                       hx-confirm="Are you sure you want to approve this inspection?">
                                        <i class="bi bi-check-circle mr-2"></i>Approve
                                    </a>
                                </li>
                            }
                        </ul>
                        @if (inspection.Status == InspectionStatus.Pending)
                        {
                            <div class="py-2">
                                <a class="flex items-center px-4 py-2 text-red-600 hover:bg-gray-100 cursor-pointer"
                                   hx-delete="?handler=Delete&id=@inspection.Id"
                                   hx-target="#inspectionsTableBody"
                                   hx-swap="innerHTML"
                                   hx-confirm="Are you sure you want to delete this inspection?">
                                    <i class="bi bi-trash mr-2"></i>Delete
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="9" class="px-6 py-3">
            @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", Model.Pagination)
        </td>
    </tr>
}
<script>
    // Re-initialize Flowbite dropdowns and HTMX after content swap
    if (typeof initFlowbite === 'function') { initFlowbite(); }
    if (typeof htmx !== 'undefined') { htmx.process(document.body); }
</script>