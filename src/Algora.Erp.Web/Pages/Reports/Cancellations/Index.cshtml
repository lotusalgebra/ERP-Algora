@page
@model Algora.Erp.Web.Pages.Reports.Cancellations.IndexModel
@{
    ViewData["Title"] = "Cancellation Report";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Cancellation Report</h1>
            <p class="text-gray-500 mt-1">Audit trail of all cancelled documents</p>
        </div>
        <a href="?handler=Export" class="inline-flex items-center text-primary-700 border border-primary-300 hover:bg-primary-50 focus:ring-4 focus:ring-primary-200 font-medium rounded-lg text-sm px-5 py-2.5" id="exportBtn">
            <i class="bi bi-download mr-2"></i>Export CSV
        </a>
    </div>

    @functions {
        string FormatCategoryName(Algora.Erp.Domain.Entities.Common.CancellationReasonCategory category)
        {
            return category switch
            {
                Algora.Erp.Domain.Entities.Common.CancellationReasonCategory.CustomerRequest => "Customer Request",
                Algora.Erp.Domain.Entities.Common.CancellationReasonCategory.DuplicateEntry => "Duplicate",
                Algora.Erp.Domain.Entities.Common.CancellationReasonCategory.DataEntryError => "Data Error",
                Algora.Erp.Domain.Entities.Common.CancellationReasonCategory.SupplierIssue => "Supplier",
                Algora.Erp.Domain.Entities.Common.CancellationReasonCategory.QualityIssue => "Quality",
                Algora.Erp.Domain.Entities.Common.CancellationReasonCategory.PriceDispute => "Price",
                Algora.Erp.Domain.Entities.Common.CancellationReasonCategory.DeliveryIssue => "Delivery",
                Algora.Erp.Domain.Entities.Common.CancellationReasonCategory.PaymentIssue => "Payment",
                Algora.Erp.Domain.Entities.Common.CancellationReasonCategory.OutOfStock => "Out of Stock",
                Algora.Erp.Domain.Entities.Common.CancellationReasonCategory.SystemError => "System Error",
                Algora.Erp.Domain.Entities.Common.CancellationReasonCategory.Other => "Other",
                _ => category.ToString()
            };
        }

        string GetCategoryBadgeClass(Algora.Erp.Domain.Entities.Common.CancellationReasonCategory category)
        {
            return category switch
            {
                Algora.Erp.Domain.Entities.Common.CancellationReasonCategory.CustomerRequest => "bg-primary-100 text-primary-800",
                Algora.Erp.Domain.Entities.Common.CancellationReasonCategory.QualityIssue => "bg-red-100 text-red-800",
                Algora.Erp.Domain.Entities.Common.CancellationReasonCategory.PaymentIssue => "bg-red-100 text-red-800",
                Algora.Erp.Domain.Entities.Common.CancellationReasonCategory.DataEntryError => "bg-amber-100 text-amber-800",
                Algora.Erp.Domain.Entities.Common.CancellationReasonCategory.PriceDispute => "bg-amber-100 text-amber-800",
                Algora.Erp.Domain.Entities.Common.CancellationReasonCategory.SupplierIssue => "bg-cyan-100 text-cyan-800",
                Algora.Erp.Domain.Entities.Common.CancellationReasonCategory.DeliveryIssue => "bg-cyan-100 text-cyan-800",
                _ => "bg-gray-100 text-gray-800"
            };
        }
    }

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-5 gap-4">
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-red-100 rounded-lg mr-3">
                    <i class="bi bi-x-circle text-xl text-red-600"></i>
                </div>
                <div>
                    <p class="text-gray-500 text-sm mb-1">Total</p>
                    <h4 class="text-2xl font-bold text-gray-900">@Model.TotalCancellations</h4>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-amber-100 rounded-lg mr-3">
                    <i class="bi bi-calendar-month text-xl text-amber-600"></i>
                </div>
                <div>
                    <p class="text-gray-500 text-sm mb-1">This Month</p>
                    <h4 class="text-2xl font-bold text-gray-900">@Model.ThisMonth</h4>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-cyan-100 rounded-lg mr-3">
                    <i class="bi bi-calendar-week text-xl text-cyan-600"></i>
                </div>
                <div>
                    <p class="text-gray-500 text-sm mb-1">This Week</p>
                    <h4 class="text-2xl font-bold text-gray-900">@Model.ThisWeek</h4>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-4">
            <p class="text-gray-500 text-sm mb-2"><i class="bi bi-file-text mr-1"></i>By Document Type</p>
            @if (Model.ByDocumentType.Any())
            {
                <div class="flex flex-wrap gap-1">
                    @foreach (var item in Model.ByDocumentType.OrderByDescending(x => x.Value).Take(4))
                    {
                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">@item.Key: @item.Value</span>
                    }
                </div>
            }
            else
            {
                <span class="text-gray-500 text-sm">No data</span>
            }
        </div>
        <div class="bg-white rounded-xl shadow-sm p-4">
            <p class="text-gray-500 text-sm mb-2"><i class="bi bi-tag mr-1"></i>By Reason Category</p>
            @if (Model.ByReasonCategory.Any())
            {
                <div class="flex flex-wrap gap-1">
                    @foreach (var item in Model.ByReasonCategory.OrderByDescending(x => x.Value).Take(4))
                    {
                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @GetCategoryBadgeClass(item.Key)">@FormatCategoryName(item.Key): @item.Value</span>
                    }
                </div>
            }
            else
            {
                <span class="text-gray-500 text-sm">No data</span>
            }
        </div>
    </div>

    <!-- Cancellations Table -->
    <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
            <div class="grid grid-cols-1 md:grid-cols-12 gap-3 items-center">
                <div class="md:col-span-3">
                    <div class="relative">
                        <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                            <i class="bi bi-search text-gray-400"></i>
                        </div>
                        <input type="text"
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full ps-10 p-2.5"
                               placeholder="Search..."
                               id="searchInput"
                               hx-get="?handler=Table"
                               hx-trigger="keyup changed delay:300ms"
                               hx-target="#cancellationsTableBody"
                               hx-include="#documentTypeFilter, #reasonCategoryFilter, #fromDate, #toDate, #pageSizeSelect"
                               name="search">
                    </div>
                </div>
                <div class="md:col-span-2">
                    <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                            id="documentTypeFilter"
                            name="documentTypeFilter"
                            hx-get="?handler=Table"
                            hx-trigger="change"
                            hx-target="#cancellationsTableBody"
                            hx-include="#searchInput, #reasonCategoryFilter, #fromDate, #toDate, #pageSizeSelect">
                        <option value="">All Types</option>
                        <option value="PurchaseOrder">Purchase Order</option>
                        <option value="SalesOrder">Sales Order</option>
                        <option value="Invoice">Invoice</option>
                        <option value="GoodsReceiptNote">Goods Receipt</option>
                        <option value="DeliveryChallan">Delivery Challan</option>
                        <option value="QualityInspection">Quality Inspection</option>
                    </select>
                </div>
                <div class="md:col-span-2">
                    <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                            id="reasonCategoryFilter"
                            name="reasonCategoryFilter"
                            hx-get="?handler=Table"
                            hx-trigger="change"
                            hx-target="#cancellationsTableBody"
                            hx-include="#searchInput, #documentTypeFilter, #fromDate, #toDate, #pageSizeSelect">
                        <option value="">All Reasons</option>
                        <option value="0">Customer Request</option>
                        <option value="1">Duplicate Entry</option>
                        <option value="2">Data Entry Error</option>
                        <option value="3">Supplier Issue</option>
                        <option value="4">Quality Issue</option>
                        <option value="5">Price Dispute</option>
                        <option value="6">Delivery Issue</option>
                        <option value="7">Payment Issue</option>
                        <option value="8">Out of Stock</option>
                        <option value="9">System Error</option>
                        <option value="99">Other</option>
                    </select>
                </div>
                <div class="md:col-span-2">
                    <input type="date" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                           id="fromDate"
                           name="fromDate"
                           placeholder="From Date"
                           hx-get="?handler=Table"
                           hx-trigger="change"
                           hx-target="#cancellationsTableBody"
                           hx-include="#searchInput, #documentTypeFilter, #reasonCategoryFilter, #toDate, #pageSizeSelect">
                </div>
                <div class="md:col-span-2">
                    <input type="date" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                           id="toDate"
                           name="toDate"
                           placeholder="To Date"
                           hx-get="?handler=Table"
                           hx-trigger="change"
                           hx-target="#cancellationsTableBody"
                           hx-include="#searchInput, #documentTypeFilter, #reasonCategoryFilter, #fromDate, #pageSizeSelect">
                </div>
                <div class="md:col-span-1 flex gap-2">
                    <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                            id="pageSizeSelect"
                            name="pageSize"
                            hx-get="?handler=Table"
                            hx-trigger="change"
                            hx-target="#cancellationsTableBody"
                            hx-include="#searchInput, #documentTypeFilter, #reasonCategoryFilter, #fromDate, #toDate">
                        <option value="10">10</option>
                        <option value="25">25</option>
                        <option value="50">50</option>
                    </select>
                    <button type="button" class="text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-3 py-2.5" onclick="clearFilters()" title="Clear filters">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3">Document</th>
                        <th scope="col" class="px-6 py-3">Type</th>
                        <th scope="col" class="px-6 py-3">Cancelled At</th>
                        <th scope="col" class="px-6 py-3">Cancelled By</th>
                        <th scope="col" class="px-6 py-3">Category</th>
                        <th scope="col" class="px-6 py-3">Reason</th>
                        <th scope="col" class="px-6 py-3 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody id="cancellationsTableBody"
                       hx-get="?handler=Table"
                       hx-trigger="load"
                       hx-include="#searchInput, #documentTypeFilter, #reasonCategoryFilter, #fromDate, #toDate, #pageSizeSelect">
                    <tr>
                        <td colspan="7" class="text-center py-8">
                            <div class="inline-block animate-spin rounded-full h-6 w-6 border-b-2 border-primary-600"></div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Details Modal -->
<div id="detailsModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-2xl max-h-full">
        <div class="relative bg-white rounded-lg shadow">
            <div class="flex items-center justify-between p-4 border-b rounded-t">
                <h5 class="text-lg font-semibold text-gray-900">Cancellation Details</h5>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 inline-flex justify-center items-center" data-modal-hide="detailsModal">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="p-6" id="detailsModalBody">
                <div class="text-center py-8">
                    <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-primary-600"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function viewDetails(id) {
            htmx.ajax('GET', `?handler=Details&id=${id}`, {
                target: '#detailsModalBody',
                swap: 'innerHTML'
            });
            const modal = FlowbiteInstances.getInstance('Modal', 'detailsModal');
            if (modal) modal.show();
        }

        function clearFilters() {
            document.getElementById('searchInput').value = '';
            document.getElementById('documentTypeFilter').value = '';
            document.getElementById('reasonCategoryFilter').value = '';
            document.getElementById('fromDate').value = '';
            document.getElementById('toDate').value = '';
            htmx.ajax('GET', '?handler=Table', {
                target: '#cancellationsTableBody',
                swap: 'innerHTML'
            });
            updateExportUrl();
        }

        // Update export button URL based on filters
        function updateExportUrl() {
            const params = new URLSearchParams();
            params.append('handler', 'Export');

            const docType = document.getElementById('documentTypeFilter').value;
            const reasonCategory = document.getElementById('reasonCategoryFilter').value;
            const fromDate = document.getElementById('fromDate').value;
            const toDate = document.getElementById('toDate').value;

            if (docType) params.append('documentTypeFilter', docType);
            if (reasonCategory) params.append('reasonCategoryFilter', reasonCategory);
            if (fromDate) params.append('fromDate', fromDate);
            if (toDate) params.append('toDate', toDate);

            document.getElementById('exportBtn').href = `?${params.toString()}`;
        }

        document.getElementById('documentTypeFilter').addEventListener('change', updateExportUrl);
        document.getElementById('reasonCategoryFilter').addEventListener('change', updateExportUrl);
        document.getElementById('fromDate').addEventListener('change', updateExportUrl);
        document.getElementById('toDate').addEventListener('change', updateExportUrl);
    </script>
}
