@using Algora.Erp.Domain.Entities.Common
@model Algora.Erp.Web.Pages.Reports.Cancellations.CancellationsTableViewModel

@functions {
    string FormatReasonCategory(CancellationReasonCategory category)
    {
        return category switch
        {
            CancellationReasonCategory.CustomerRequest => "Customer Request",
            CancellationReasonCategory.DuplicateEntry => "Duplicate Entry",
            CancellationReasonCategory.DataEntryError => "Data Entry Error",
            CancellationReasonCategory.SupplierIssue => "Supplier Issue",
            CancellationReasonCategory.QualityIssue => "Quality Issue",
            CancellationReasonCategory.PriceDispute => "Price Dispute",
            CancellationReasonCategory.DeliveryIssue => "Delivery Issue",
            CancellationReasonCategory.PaymentIssue => "Payment Issue",
            CancellationReasonCategory.OutOfStock => "Out of Stock",
            CancellationReasonCategory.SystemError => "System Error",
            CancellationReasonCategory.Other => "Other",
            _ => category.ToString()
        };
    }

    string GetCategoryBadgeClass(CancellationReasonCategory category)
    {
        return category switch
        {
            CancellationReasonCategory.CustomerRequest => "bg-primary-100 text-primary-800",
            CancellationReasonCategory.DuplicateEntry => "bg-gray-100 text-gray-800",
            CancellationReasonCategory.DataEntryError => "bg-amber-100 text-amber-800",
            CancellationReasonCategory.SupplierIssue => "bg-cyan-100 text-cyan-800",
            CancellationReasonCategory.QualityIssue => "bg-red-100 text-red-800",
            CancellationReasonCategory.PriceDispute => "bg-amber-100 text-amber-800",
            CancellationReasonCategory.DeliveryIssue => "bg-cyan-100 text-cyan-800",
            CancellationReasonCategory.PaymentIssue => "bg-red-100 text-red-800",
            CancellationReasonCategory.OutOfStock => "bg-gray-100 text-gray-800",
            CancellationReasonCategory.SystemError => "bg-gray-700 text-white",
            _ => "bg-gray-100 text-gray-500"
        };
    }
}

@if (!Model.Cancellations.Any())
{
    <tr>
        <td colspan="7" class="text-center py-12">
            <div class="text-gray-500">
                <i class="bi bi-check-circle text-4xl block mb-3"></i>
                <p class="mb-0">No cancellations found</p>
            </div>
        </td>
    </tr>
}
else
{
    @foreach (var cancellation in Model.Cancellations)
    {
        var typeClass = cancellation.DocumentType switch
        {
            "PurchaseOrder" => "bg-primary-100 text-primary-800",
            "SalesOrder" => "bg-emerald-100 text-emerald-800",
            "Invoice" => "bg-cyan-100 text-cyan-800",
            "GoodsReceiptNote" or "GoodsReceipt" => "bg-amber-100 text-amber-800",
            "DeliveryChallan" => "bg-gray-100 text-gray-800",
            "QualityInspection" => "bg-red-100 text-red-800",
            _ => "bg-gray-700 text-white"
        };

        var typeIcon = cancellation.DocumentType switch
        {
            "PurchaseOrder" => "bi-cart",
            "SalesOrder" => "bi-bag",
            "Invoice" => "bi-receipt",
            "GoodsReceiptNote" or "GoodsReceipt" => "bi-box-seam",
            "DeliveryChallan" => "bi-truck",
            "QualityInspection" => "bi-clipboard-check",
            _ => "bi-file-text"
        };

        <tr class="border-b hover:bg-gray-50">
            <td class="px-6 py-4">
                <a href="/Reports/Cancellations/Details/@cancellation.Id" class="font-medium text-primary-600 hover:text-primary-700">
                    @cancellation.DocumentNumber
                </a>
            </td>
            <td class="px-6 py-4">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @typeClass">
                    <i class="bi @typeIcon mr-1"></i>@cancellation.DocumentType
                </span>
            </td>
            <td class="px-6 py-4">
                <div>@cancellation.CancelledAt.ToString("dd MMM yyyy")</div>
                <small class="text-gray-500">@cancellation.CancelledAt.ToString("HH:mm")</small>
            </td>
            <td class="px-6 py-4">
                @if (!string.IsNullOrEmpty(cancellation.CancelledByName))
                {
                    <span>@cancellation.CancelledByName</span>
                }
                else
                {
                    <span class="text-gray-500">-</span>
                }
            </td>
            <td class="px-6 py-4">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @GetCategoryBadgeClass(cancellation.ReasonCategory)">
                    @FormatReasonCategory(cancellation.ReasonCategory)
                </span>
            </td>
            <td class="px-6 py-4">
                @if (!string.IsNullOrEmpty(cancellation.CancellationReason))
                {
                    <span class="truncate inline-block max-w-[150px]" title="@cancellation.CancellationReason">
                        @cancellation.CancellationReason
                    </span>
                }
                else
                {
                    <span class="text-gray-500">-</span>
                }
            </td>
            <td class="px-6 py-4 text-right">
                <a href="/Reports/Cancellations/Details/@cancellation.Id"
                   class="px-3 py-2 text-sm font-medium text-gray-600 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 focus:ring-2 focus:ring-primary-500 inline-block">
                    <i class="bi bi-eye"></i>
                </a>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="7" class="bg-gray-50 px-6 py-3">
            @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", Model.Pagination)
        </td>
    </tr>
}
