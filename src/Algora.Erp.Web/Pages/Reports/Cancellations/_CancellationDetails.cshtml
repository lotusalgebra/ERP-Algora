@model Algora.Erp.Domain.Entities.Common.CancellationLog

@functions {
    string FormatFieldName(string name)
    {
        // Convert PascalCase to Title Case with spaces
        var result = System.Text.RegularExpressions.Regex.Replace(name, "([a-z])([A-Z])", "$1 $2");
        return System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(result.ToLower());
    }

    string FormatFieldValue(System.Text.Json.JsonElement value)
    {
        return value.ValueKind switch
        {
            System.Text.Json.JsonValueKind.String => value.GetString() ?? "-",
            System.Text.Json.JsonValueKind.Number => value.TryGetDecimal(out var d)
                ? d.ToString("N2")
                : value.ToString(),
            System.Text.Json.JsonValueKind.True => "Yes",
            System.Text.Json.JsonValueKind.False => "No",
            System.Text.Json.JsonValueKind.Null => "-",
            _ => value.ToString()
        };
    }
}

@{
    var typeClass = Model.DocumentType switch
    {
        "PurchaseOrder" => "bg-primary-100 text-primary-800",
        "SalesOrder" => "bg-emerald-100 text-emerald-800",
        "Invoice" => "bg-cyan-100 text-cyan-800",
        "GoodsReceiptNote" or "GoodsReceipt" => "bg-amber-100 text-amber-800",
        "DeliveryChallan" => "bg-gray-100 text-gray-800",
        "QualityInspection" => "bg-red-100 text-red-800",
        _ => "bg-gray-700 text-white"
    };

    var typeIcon = Model.DocumentType switch
    {
        "PurchaseOrder" => "bi-cart",
        "SalesOrder" => "bi-bag",
        "Invoice" => "bi-receipt",
        "GoodsReceiptNote" or "GoodsReceipt" => "bi-box-seam",
        "DeliveryChallan" => "bi-truck",
        "QualityInspection" => "bi-clipboard-check",
        _ => "bi-file-text"
    };
}

<div class="grid grid-cols-12 gap-4">
    <!-- Header Info -->
    <div class="col-span-12">
        <div class="flex justify-between items-start">
            <div>
                <h5 class="text-lg font-semibold text-gray-900 mb-1">@Model.DocumentNumber</h5>
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @typeClass">
                    <i class="bi @typeIcon mr-1"></i>@Model.DocumentType
                </span>
            </div>
            <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-red-100 text-red-800 text-base">Cancelled</span>
        </div>
    </div>

    <!-- Cancellation Details -->
    <div class="col-span-12 md:col-span-6">
        <div class="bg-white rounded-lg border border-gray-200 h-full">
            <div class="px-4 py-3 bg-gray-50 border-b border-gray-200 rounded-t-lg">
                <h6 class="font-semibold text-gray-900 mb-0">Cancellation Information</h6>
            </div>
            <div class="p-4">
                <dl class="space-y-2 text-sm">
                    <div class="grid grid-cols-2 gap-2">
                        <dt class="text-gray-500">Document ID:</dt>
                        <dd class="font-medium font-mono text-xs text-gray-900">@Model.DocumentId</dd>
                    </div>
                    <div class="grid grid-cols-2 gap-2">
                        <dt class="text-gray-500">Cancelled At:</dt>
                        <dd class="font-medium text-gray-900">@Model.CancelledAt.ToString("dd MMM yyyy HH:mm")</dd>
                    </div>
                    <div class="grid grid-cols-2 gap-2">
                        <dt class="text-gray-500">Cancelled By:</dt>
                        <dd class="font-medium text-gray-900">@(Model.CancelledByName ?? "-")</dd>
                    </div>
                    @if (Model.CancelledBy != Guid.Empty)
                    {
                        <div class="grid grid-cols-2 gap-2">
                            <dt class="text-gray-500">User ID:</dt>
                            <dd class="font-medium font-mono text-xs text-gray-900">@Model.CancelledBy</dd>
                        </div>
                    }
                </dl>
            </div>
        </div>
    </div>

    <!-- Audit Info -->
    <div class="col-span-12 md:col-span-6">
        <div class="bg-white rounded-lg border border-gray-200 h-full">
            <div class="px-4 py-3 bg-gray-50 border-b border-gray-200 rounded-t-lg">
                <h6 class="font-semibold text-gray-900 mb-0">Audit Trail</h6>
            </div>
            <div class="p-4">
                <dl class="space-y-2 text-sm">
                    <div class="grid grid-cols-2 gap-2">
                        <dt class="text-gray-500">Record ID:</dt>
                        <dd class="font-medium font-mono text-xs text-gray-900">@Model.Id</dd>
                    </div>
                    <div class="grid grid-cols-2 gap-2">
                        <dt class="text-gray-500">Created At:</dt>
                        <dd class="font-medium text-gray-900">@Model.CreatedAt.ToString("dd MMM yyyy HH:mm")</dd>
                    </div>
                    @if (Model.ModifiedAt.HasValue)
                    {
                        <div class="grid grid-cols-2 gap-2">
                            <dt class="text-gray-500">Last Modified:</dt>
                            <dd class="font-medium text-gray-900">@Model.ModifiedAt.Value.ToString("dd MMM yyyy HH:mm")</dd>
                        </div>
                    }
                </dl>
            </div>
        </div>
    </div>

    <!-- Reason -->
    <div class="col-span-12">
        <div class="bg-white rounded-lg border border-gray-200">
            <div class="px-4 py-3 bg-gray-50 border-b border-gray-200 rounded-t-lg">
                <h6 class="font-semibold text-gray-900 mb-0">Cancellation Reason</h6>
            </div>
            <div class="p-4">
                @if (!string.IsNullOrEmpty(Model.CancellationReason))
                {
                    <p class="mb-0 text-gray-700">@Model.CancellationReason</p>
                }
                else
                {
                    <p class="mb-0 text-gray-500">No reason provided</p>
                }
            </div>
        </div>
    </div>

    <!-- Reversal Details -->
    @if (Model.StockReversed || Model.FinancialReversed || !string.IsNullOrEmpty(Model.StockReversalDetails) || !string.IsNullOrEmpty(Model.FinancialReversalDetails))
    {
        <div class="col-span-12">
            <div class="bg-white rounded-lg border border-gray-200">
                <div class="px-4 py-3 bg-gray-50 border-b border-gray-200 rounded-t-lg">
                    <h6 class="font-semibold text-gray-900 mb-0">Reversal Actions</h6>
                </div>
                <div class="p-4">
                    <div class="grid grid-cols-12 gap-4">
                        <div class="col-span-12 md:col-span-6">
                            <label class="block text-sm text-gray-500 mb-1">Stock Reversal</label>
                            <div>
                                @if (Model.StockReversed)
                                {
                                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-emerald-100 text-emerald-800 mr-2">Yes</span>
                                    @if (!string.IsNullOrEmpty(Model.StockReversalDetails))
                                    {
                                        <pre class="mt-2 mb-0 bg-gray-100 p-2 rounded text-xs overflow-x-auto"><code>@Model.StockReversalDetails</code></pre>
                                    }
                                }
                                else
                                {
                                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">No</span>
                                }
                            </div>
                        </div>
                        <div class="col-span-12 md:col-span-6">
                            <label class="block text-sm text-gray-500 mb-1">Financial Reversal</label>
                            <div>
                                @if (Model.FinancialReversed)
                                {
                                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-emerald-100 text-emerald-800 mr-2">Yes</span>
                                    @if (!string.IsNullOrEmpty(Model.FinancialReversalDetails))
                                    {
                                        <pre class="mt-2 mb-0 bg-gray-100 p-2 rounded text-xs overflow-x-auto"><code>@Model.FinancialReversalDetails</code></pre>
                                    }
                                }
                                else
                                {
                                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">No</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Original Document State -->
    @if (!string.IsNullOrEmpty(Model.OriginalDocumentState))
    {
        <div class="col-span-12">
            <div class="bg-white rounded-lg border border-gray-200">
                <div class="px-4 py-3 bg-gray-50 border-b border-gray-200 rounded-t-lg flex justify-between items-center">
                    <h6 class="font-semibold text-gray-900 mb-0">Original Document State</h6>
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">At time of cancellation</span>
                </div>
                <div class="p-4">
                    @try
                    {
                        var jsonDoc = System.Text.Json.JsonDocument.Parse(Model.OriginalDocumentState);
                        <div class="overflow-x-auto">
                            <table class="w-full text-sm text-left">
                                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                                    <tr>
                                        <th scope="col" class="px-4 py-2" style="width: 35%;">Field</th>
                                        <th scope="col" class="px-4 py-2">Value</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var prop in jsonDoc.RootElement.EnumerateObject())
                                    {
                                        <tr class="border-b">
                                            <td class="px-4 py-2 text-gray-500">@FormatFieldName(prop.Name)</td>
                                            <td class="px-4 py-2 font-medium text-gray-900">@FormatFieldValue(prop.Value)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    catch
                    {
                        <pre class="mb-0 bg-gray-100 p-3 rounded text-xs overflow-x-auto"><code>@Model.OriginalDocumentState</code></pre>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Notes -->
    @if (!string.IsNullOrEmpty(Model.Notes))
    {
        <div class="col-span-12">
            <div class="bg-white rounded-lg border border-gray-200">
                <div class="px-4 py-3 bg-gray-50 border-b border-gray-200 rounded-t-lg">
                    <h6 class="font-semibold text-gray-900 mb-0">Additional Notes</h6>
                </div>
                <div class="p-4">
                    <p class="mb-0 text-gray-700">@Model.Notes</p>
                </div>
            </div>
        </div>
    }
</div>

<div class="flex items-center mt-6 pt-4 border-t border-gray-200 gap-2">
    <button type="button" class="text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5" data-modal-hide="detailsModal">Close</button>
</div>
