@model Algora.Erp.Domain.Entities.Common.CancellationLog

@functions {
    string FormatFieldName(string name)
    {
        // Convert PascalCase to Title Case with spaces
        var result = System.Text.RegularExpressions.Regex.Replace(name, "([a-z])([A-Z])", "$1 $2");
        return System.Globalization.CultureInfo.CurrentCulture.TextInfo.ToTitleCase(result.ToLower());
    }

    string FormatFieldValue(System.Text.Json.JsonElement value)
    {
        return value.ValueKind switch
        {
            System.Text.Json.JsonValueKind.String => value.GetString() ?? "-",
            System.Text.Json.JsonValueKind.Number => value.TryGetDecimal(out var d)
                ? d.ToString("N2")
                : value.ToString(),
            System.Text.Json.JsonValueKind.True => "Yes",
            System.Text.Json.JsonValueKind.False => "No",
            System.Text.Json.JsonValueKind.Null => "-",
            _ => value.ToString()
        };
    }
}

@{
    var typeClass = Model.DocumentType switch
    {
        "PurchaseOrder" => "bg-primary",
        "SalesOrder" => "bg-success",
        "Invoice" => "bg-info",
        "GoodsReceiptNote" or "GoodsReceipt" => "bg-warning",
        "DeliveryChallan" => "bg-secondary",
        "QualityInspection" => "bg-danger",
        _ => "bg-dark"
    };

    var typeIcon = Model.DocumentType switch
    {
        "PurchaseOrder" => "bi-cart",
        "SalesOrder" => "bi-bag",
        "Invoice" => "bi-receipt",
        "GoodsReceiptNote" or "GoodsReceipt" => "bi-box-seam",
        "DeliveryChallan" => "bi-truck",
        "QualityInspection" => "bi-clipboard-check",
        _ => "bi-file-text"
    };
}

<div class="row g-4">
    <!-- Header Info -->
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-start">
            <div>
                <h5 class="mb-1">@Model.DocumentNumber</h5>
                <span class="badge @typeClass">
                    <i class="bi @typeIcon me-1"></i>@Model.DocumentType
                </span>
            </div>
            <span class="badge bg-danger fs-6">Cancelled</span>
        </div>
    </div>

    <!-- Cancellation Details -->
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header bg-light">
                <h6 class="mb-0">Cancellation Information</h6>
            </div>
            <div class="card-body">
                <table class="table table-sm table-borderless mb-0">
                    <tr>
                        <td class="text-muted" style="width: 40%;">Document ID:</td>
                        <td class="fw-medium font-monospace small">@Model.DocumentId</td>
                    </tr>
                    <tr>
                        <td class="text-muted">Cancelled At:</td>
                        <td class="fw-medium">@Model.CancelledAt.ToString("dd MMM yyyy HH:mm")</td>
                    </tr>
                    <tr>
                        <td class="text-muted">Cancelled By:</td>
                        <td class="fw-medium">@(Model.CancelledByName ?? "-")</td>
                    </tr>
                    @if (Model.CancelledBy != Guid.Empty)
                    {
                        <tr>
                            <td class="text-muted">User ID:</td>
                            <td class="fw-medium font-monospace small">@Model.CancelledBy</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>

    <!-- Audit Info -->
    <div class="col-md-6">
        <div class="card h-100">
            <div class="card-header bg-light">
                <h6 class="mb-0">Audit Trail</h6>
            </div>
            <div class="card-body">
                <table class="table table-sm table-borderless mb-0">
                    <tr>
                        <td class="text-muted" style="width: 40%;">Record ID:</td>
                        <td class="fw-medium font-monospace small">@Model.Id</td>
                    </tr>
                    <tr>
                        <td class="text-muted">Created At:</td>
                        <td class="fw-medium">@Model.CreatedAt.ToString("dd MMM yyyy HH:mm")</td>
                    </tr>
                    @if (Model.ModifiedAt.HasValue)
                    {
                        <tr>
                            <td class="text-muted">Last Modified:</td>
                            <td class="fw-medium">@Model.ModifiedAt.Value.ToString("dd MMM yyyy HH:mm")</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>

    <!-- Reason -->
    <div class="col-12">
        <div class="card">
            <div class="card-header bg-light">
                <h6 class="mb-0">Cancellation Reason</h6>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.CancellationReason))
                {
                    <p class="mb-0">@Model.CancellationReason</p>
                }
                else
                {
                    <p class="mb-0 text-muted">No reason provided</p>
                }
            </div>
        </div>
    </div>

    <!-- Reversal Details -->
    @if (Model.StockReversed || Model.FinancialReversed || !string.IsNullOrEmpty(Model.StockReversalDetails) || !string.IsNullOrEmpty(Model.FinancialReversalDetails))
    {
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h6 class="mb-0">Reversal Actions</h6>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label text-muted small">Stock Reversal</label>
                            <p class="mb-0">
                                @if (Model.StockReversed)
                                {
                                    <span class="badge bg-success me-2">Yes</span>
                                    @if (!string.IsNullOrEmpty(Model.StockReversalDetails))
                                    {
                                        <pre class="mt-2 mb-0 bg-light p-2 rounded small"><code>@Model.StockReversalDetails</code></pre>
                                    }
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted small">Financial Reversal</label>
                            <p class="mb-0">
                                @if (Model.FinancialReversed)
                                {
                                    <span class="badge bg-success me-2">Yes</span>
                                    @if (!string.IsNullOrEmpty(Model.FinancialReversalDetails))
                                    {
                                        <pre class="mt-2 mb-0 bg-light p-2 rounded small"><code>@Model.FinancialReversalDetails</code></pre>
                                    }
                                }
                                else
                                {
                                    <span class="badge bg-secondary">No</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Original Document State -->
    @if (!string.IsNullOrEmpty(Model.OriginalDocumentState))
    {
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">Original Document State</h6>
                    <span class="badge bg-secondary">At time of cancellation</span>
                </div>
                <div class="card-body">
                    @try
                    {
                        var jsonDoc = System.Text.Json.JsonDocument.Parse(Model.OriginalDocumentState);
                        <div class="table-responsive">
                            <table class="table table-sm table-striped mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 35%;">Field</th>
                                        <th>Value</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var prop in jsonDoc.RootElement.EnumerateObject())
                                    {
                                        <tr>
                                            <td class="text-muted">@FormatFieldName(prop.Name)</td>
                                            <td class="fw-medium">@FormatFieldValue(prop.Value)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    catch
                    {
                        <pre class="mb-0 bg-light p-3 rounded small"><code>@Model.OriginalDocumentState</code></pre>
                    }
                </div>
            </div>
        </div>
    }

    <!-- Notes -->
    @if (!string.IsNullOrEmpty(Model.Notes))
    {
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h6 class="mb-0">Additional Notes</h6>
                </div>
                <div class="card-body">
                    <p class="mb-0">@Model.Notes</p>
                </div>
            </div>
        </div>
    }
</div>

<div class="modal-footer mt-4 px-0 pb-0">
    <button type="button" class="btn btn-secondary" data-modal-hide="detailsModal">Close</button>
</div>
