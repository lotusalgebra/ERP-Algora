@page
@model Algora.Erp.Web.Pages.Finance.Reports.ProfitLossModel
@{
    ViewData["Title"] = "Profit & Loss Statement";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Profit & Loss Statement</h1>
            <nav class="flex mt-1" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 text-sm text-gray-500">
                    <li><a href="/" class="hover:text-primary-600">Dashboard</a></li>
                    <li><span class="mx-1">/</span></li>
                    <li><a href="/Finance" class="hover:text-primary-600">Finance</a></li>
                    <li><span class="mx-1">/</span></li>
                    <li><a href="/Finance/Reports" class="hover:text-primary-600">Reports</a></li>
                    <li><span class="mx-1">/</span></li>
                    <li class="text-gray-900 font-medium">Profit & Loss</li>
                </ol>
            </nav>
        </div>
        <div class="flex gap-2">
            <a href="?handler=ExportPdf&StartDate=@Model.StartDate?.ToString("yyyy-MM-dd")&EndDate=@Model.EndDate?.ToString("yyyy-MM-dd")"
               class="inline-flex items-center px-4 py-2 border border-red-300 text-red-700 rounded-lg hover:bg-red-50">
                <i class="bi bi-file-pdf me-2"></i>Export PDF
            </a>
            <a href="?handler=ExportCsv&StartDate=@Model.StartDate?.ToString("yyyy-MM-dd")&EndDate=@Model.EndDate?.ToString("yyyy-MM-dd")"
               class="inline-flex items-center px-4 py-2 border border-emerald-300 text-emerald-700 rounded-lg hover:bg-emerald-50">
                <i class="bi bi-file-earmark-excel me-2"></i>Export CSV
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-xl shadow-sm p-4">
        <form method="get" class="grid grid-cols-1 md:grid-cols-6 gap-4 items-end">
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Period</label>
                <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                        name="Period" onchange="this.form.submit()">
                    <option value="thismonth" selected="@(Model.Period == "thismonth")">This Month</option>
                    <option value="lastmonth" selected="@(Model.Period == "lastmonth")">Last Month</option>
                    <option value="thisquarter" selected="@(Model.Period == "thisquarter")">This Quarter</option>
                    <option value="thisyear" selected="@(Model.Period == "thisyear")">This Year</option>
                    <option value="lastyear" selected="@(Model.Period == "lastyear")">Last Year</option>
                </select>
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Start Date</label>
                <input type="date" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                       name="StartDate" value="@Model.StartDate?.ToString("yyyy-MM-dd")">
            </div>
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">End Date</label>
                <input type="date" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                       name="EndDate" value="@Model.EndDate?.ToString("yyyy-MM-dd")">
            </div>
            <div class="flex gap-2">
                <button type="submit" class="px-4 py-2.5 bg-primary-600 text-white rounded-lg hover:bg-primary-700">
                    <i class="bi bi-funnel me-1"></i>Apply
                </button>
                <a href="/Finance/Reports/ProfitLoss" class="px-4 py-2.5 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-50">Reset</a>
            </div>
            <div class="md:col-span-2 text-right text-sm text-gray-500">
                <i class="bi bi-calendar me-1"></i>
                @Model.DateRange.StartDate.ToString("MMM dd, yyyy") - @Model.DateRange.EndDate.ToString("MMM dd, yyyy")
            </div>
        </form>
    </div>

    <!-- Key Metrics -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex justify-between items-start">
                <div>
                    <p class="text-sm text-gray-500 mb-2">Total Revenue</p>
                    <h3 class="text-2xl font-bold text-primary-600">@Model.Report.TotalRevenue.ToString("C0")</h3>
                    @if (Model.Report.PreviousPeriod != null)
                    {
                        var change = Model.Report.PreviousPeriod.RevenueChange;
                        <p class="text-sm mt-1">
                            <span class="px-2 py-0.5 rounded-full text-xs font-medium @(change >= 0 ? "bg-emerald-100 text-emerald-800" : "bg-red-100 text-red-800")">
                                <i class="bi @(change >= 0 ? "bi-arrow-up" : "bi-arrow-down")"></i>
                                @Math.Abs(change).ToString("F1")%
                            </span>
                            <span class="text-gray-500 ms-1">vs prior</span>
                        </p>
                    }
                </div>
                <div class="p-2 bg-primary-100 rounded-lg">
                    <i class="bi bi-graph-up-arrow text-xl text-primary-600"></i>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex justify-between items-start">
                <div>
                    <p class="text-sm text-gray-500 mb-2">Gross Profit</p>
                    <h3 class="text-2xl font-bold @(Model.Report.GrossProfit >= 0 ? "text-emerald-600" : "text-red-600")">
                        @Model.Report.GrossProfit.ToString("C0")
                    </h3>
                    <p class="text-sm text-gray-500 mt-1">@Model.Report.GrossProfitMargin.ToString("F1")% margin</p>
                </div>
                <div class="p-2 bg-emerald-100 rounded-lg">
                    <i class="bi bi-cash-coin text-xl text-emerald-600"></i>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex justify-between items-start">
                <div>
                    <p class="text-sm text-gray-500 mb-2">Operating Income</p>
                    <h3 class="text-2xl font-bold @(Model.Report.OperatingIncome >= 0 ? "text-blue-600" : "text-red-600")">
                        @Model.Report.OperatingIncome.ToString("C0")
                    </h3>
                    <p class="text-sm text-gray-500 mt-1">@Model.Report.OperatingMargin.ToString("F1")% margin</p>
                </div>
                <div class="p-2 bg-blue-100 rounded-lg">
                    <i class="bi bi-briefcase text-xl text-blue-600"></i>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5 border-2 @(Model.Report.NetIncome >= 0 ? "border-emerald-500" : "border-red-500")">
            <div class="flex justify-between items-start">
                <div>
                    <p class="text-sm text-gray-500 mb-2">Net Income</p>
                    <h3 class="text-2xl font-bold @(Model.Report.NetIncome >= 0 ? "text-emerald-600" : "text-red-600")">
                        @Model.Report.NetIncome.ToString("C0")
                    </h3>
                    <p class="text-sm text-gray-500 mt-1">@Model.Report.NetProfitMargin.ToString("F1")% margin</p>
                </div>
                <div class="p-2 @(Model.Report.NetIncome >= 0 ? "bg-emerald-100" : "bg-red-100") rounded-lg">
                    <i class="bi @(Model.Report.NetIncome >= 0 ? "bi-trophy text-emerald-600" : "bi-exclamation-triangle text-red-600") text-xl"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- P&L Statement -->
        <div class="lg:col-span-2 bg-white rounded-xl shadow-sm overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200">
                <h5 class="text-lg font-semibold text-gray-900">
                    <i class="bi bi-file-text me-2"></i>Income Statement
                </h5>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full text-sm">
                    <thead class="bg-gray-50 text-xs text-gray-700 uppercase">
                        <tr>
                            <th class="px-6 py-3 text-left">Account</th>
                            <th class="px-6 py-3 text-right">Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Revenue Section -->
                        <tr class="bg-primary-50">
                            <td class="px-6 py-3 font-bold text-primary-700" colspan="2">REVENUE</td>
                        </tr>
                        @foreach (var item in Model.Report.RevenueItems)
                        {
                            <tr class="border-b hover:bg-gray-50">
                                <td class="px-6 py-3 ps-10">@item.AccountName</td>
                                <td class="px-6 py-3 text-right">@item.Amount.ToString("C0")</td>
                            </tr>
                        }
                        <tr class="bg-gray-100 font-semibold">
                            <td class="px-6 py-3">Total Revenue</td>
                            <td class="px-6 py-3 text-right text-primary-600">@Model.Report.TotalRevenue.ToString("C0")</td>
                        </tr>

                        <!-- COGS Section -->
                        <tr class="bg-amber-50">
                            <td class="px-6 py-3 font-bold text-amber-700" colspan="2">COST OF GOODS SOLD</td>
                        </tr>
                        @foreach (var item in Model.Report.COGSItems)
                        {
                            <tr class="border-b hover:bg-gray-50">
                                <td class="px-6 py-3 ps-10">@item.AccountName</td>
                                <td class="px-6 py-3 text-right">@item.Amount.ToString("C0")</td>
                            </tr>
                        }
                        @if (!Model.Report.COGSItems.Any())
                        {
                            <tr class="border-b">
                                <td class="px-6 py-3 ps-10 text-gray-500 italic">No COGS recorded</td>
                                <td class="px-6 py-3 text-right">$0</td>
                            </tr>
                        }
                        <tr class="bg-gray-100 font-semibold">
                            <td class="px-6 py-3">Total COGS</td>
                            <td class="px-6 py-3 text-right">@Model.Report.TotalCOGS.ToString("C0")</td>
                        </tr>

                        <!-- Gross Profit -->
                        <tr class="bg-emerald-50">
                            <td class="px-6 py-3 font-bold text-emerald-700">GROSS PROFIT</td>
                            <td class="px-6 py-3 text-right font-bold text-emerald-600">@Model.Report.GrossProfit.ToString("C0")</td>
                        </tr>

                        <!-- Operating Expenses -->
                        <tr class="bg-red-50">
                            <td class="px-6 py-3 font-bold text-red-700" colspan="2">OPERATING EXPENSES</td>
                        </tr>
                        @foreach (var item in Model.Report.OperatingExpenseItems)
                        {
                            <tr class="border-b hover:bg-gray-50">
                                <td class="px-6 py-3 ps-10">@item.AccountName</td>
                                <td class="px-6 py-3 text-right">@item.Amount.ToString("C0")</td>
                            </tr>
                        }
                        @if (!Model.Report.OperatingExpenseItems.Any())
                        {
                            <tr class="border-b">
                                <td class="px-6 py-3 ps-10 text-gray-500 italic">No operating expenses recorded</td>
                                <td class="px-6 py-3 text-right">$0</td>
                            </tr>
                        }
                        <tr class="bg-gray-100 font-semibold">
                            <td class="px-6 py-3">Total Operating Expenses</td>
                            <td class="px-6 py-3 text-right text-red-600">@Model.Report.TotalOperatingExpenses.ToString("C0")</td>
                        </tr>

                        <!-- Operating Income -->
                        <tr class="bg-blue-50">
                            <td class="px-6 py-3 font-bold text-blue-700">OPERATING INCOME</td>
                            <td class="px-6 py-3 text-right font-bold text-blue-600">@Model.Report.OperatingIncome.ToString("C0")</td>
                        </tr>

                        <!-- Other Income/Expenses -->
                        @if (Model.Report.OtherIncomeItems.Any() || Model.Report.OtherExpenseItems.Any())
                        {
                            <tr class="bg-gray-200">
                                <td class="px-6 py-3 font-bold text-gray-700" colspan="2">OTHER INCOME / EXPENSES</td>
                            </tr>
                            @foreach (var item in Model.Report.OtherIncomeItems)
                            {
                                <tr class="border-b hover:bg-gray-50">
                                    <td class="px-6 py-3 ps-10 text-emerald-600">@item.AccountName</td>
                                    <td class="px-6 py-3 text-right text-emerald-600">@item.Amount.ToString("C0")</td>
                                </tr>
                            }
                            @foreach (var item in Model.Report.OtherExpenseItems)
                            {
                                <tr class="border-b hover:bg-gray-50">
                                    <td class="px-6 py-3 ps-10 text-red-600">@item.AccountName</td>
                                    <td class="px-6 py-3 text-right text-red-600">(@item.Amount.ToString("C0"))</td>
                                </tr>
                            }
                        }

                        <!-- Net Income -->
                        <tr class="@(Model.Report.NetIncome >= 0 ? "bg-emerald-100" : "bg-red-100")">
                            <td class="px-6 py-4 font-bold text-lg">NET INCOME</td>
                            <td class="px-6 py-4 text-right font-bold text-lg @(Model.Report.NetIncome >= 0 ? "text-emerald-600" : "text-red-600")">
                                @Model.Report.NetIncome.ToString("C0")
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Charts -->
        <div class="space-y-6">
            <!-- Monthly Trend -->
            <div class="bg-white rounded-xl shadow-sm overflow-hidden">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h5 class="text-lg font-semibold text-gray-900">
                        <i class="bi bi-graph-up me-2"></i>Monthly Trend
                    </h5>
                </div>
                <div class="p-6">
                    <canvas id="monthlyTrendChart" height="250"></canvas>
                </div>
            </div>

            <!-- Expense Breakdown -->
            @if (Model.Report.OperatingExpenseItems.Any())
            {
                <div class="bg-white rounded-xl shadow-sm overflow-hidden">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h5 class="text-lg font-semibold text-gray-900">
                            <i class="bi bi-pie-chart me-2"></i>Expense Breakdown
                        </h5>
                    </div>
                    <div class="p-6">
                        <canvas id="expenseChart" height="250"></canvas>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Comparison with Previous Period -->
    @if (Model.Report.PreviousPeriod != null)
    {
        <div class="bg-white rounded-xl shadow-sm overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200">
                <h5 class="text-lg font-semibold text-gray-900">
                    <i class="bi bi-arrow-left-right me-2"></i>Period Comparison
                </h5>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full text-sm">
                    <thead class="bg-gray-50 text-xs text-gray-700 uppercase">
                        <tr>
                            <th class="px-6 py-3 text-left">Metric</th>
                            <th class="px-6 py-3 text-right">Current Period</th>
                            <th class="px-6 py-3 text-right">Prior Period</th>
                            <th class="px-6 py-3 text-right">Change</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="border-b hover:bg-gray-50">
                            <td class="px-6 py-4">Total Revenue</td>
                            <td class="px-6 py-4 text-right">@Model.Report.TotalRevenue.ToString("C0")</td>
                            <td class="px-6 py-4 text-right">@Model.Report.PreviousPeriod.TotalRevenue.ToString("C0")</td>
                            <td class="px-6 py-4 text-right">
                                @{
                                    var revChange = Model.Report.PreviousPeriod.RevenueChange;
                                }
                                <span class="px-2 py-1 rounded-full text-xs font-medium @(revChange >= 0 ? "bg-emerald-100 text-emerald-800" : "bg-red-100 text-red-800")">
                                    @(revChange >= 0 ? "+" : "")@revChange.ToString("F1")%
                                </span>
                            </td>
                        </tr>
                        <tr class="border-b hover:bg-gray-50">
                            <td class="px-6 py-4">Gross Profit</td>
                            <td class="px-6 py-4 text-right">@Model.Report.GrossProfit.ToString("C0")</td>
                            <td class="px-6 py-4 text-right">@Model.Report.PreviousPeriod.GrossProfit.ToString("C0")</td>
                            <td class="px-6 py-4 text-right">
                                @{
                                    var gpChange = Model.Report.PreviousPeriod.GrossProfitChange;
                                }
                                <span class="px-2 py-1 rounded-full text-xs font-medium @(gpChange >= 0 ? "bg-emerald-100 text-emerald-800" : "bg-red-100 text-red-800")">
                                    @(gpChange >= 0 ? "+" : "")@gpChange.ToString("F1")%
                                </span>
                            </td>
                        </tr>
                        <tr class="border-b hover:bg-gray-50">
                            <td class="px-6 py-4">Operating Income</td>
                            <td class="px-6 py-4 text-right">@Model.Report.OperatingIncome.ToString("C0")</td>
                            <td class="px-6 py-4 text-right">@Model.Report.PreviousPeriod.OperatingIncome.ToString("C0")</td>
                            <td class="px-6 py-4 text-right">
                                @{
                                    var oiChange = Model.Report.PreviousPeriod.OperatingIncomeChange;
                                }
                                <span class="px-2 py-1 rounded-full text-xs font-medium @(oiChange >= 0 ? "bg-emerald-100 text-emerald-800" : "bg-red-100 text-red-800")">
                                    @(oiChange >= 0 ? "+" : "")@oiChange.ToString("F1")%
                                </span>
                            </td>
                        </tr>
                        <tr class="bg-gray-100 font-semibold">
                            <td class="px-6 py-4">Net Income</td>
                            <td class="px-6 py-4 text-right">@Model.Report.NetIncome.ToString("C0")</td>
                            <td class="px-6 py-4 text-right">@Model.Report.PreviousPeriod.NetIncome.ToString("C0")</td>
                            <td class="px-6 py-4 text-right">
                                @{
                                    var niChange = Model.Report.PreviousPeriod.NetIncomeChange;
                                }
                                <span class="px-2.5 py-1 rounded-full text-sm font-medium @(niChange >= 0 ? "bg-emerald-100 text-emerald-800" : "bg-red-100 text-red-800")">
                                    @(niChange >= 0 ? "+" : "")@niChange.ToString("F1")%
                                </span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Monthly Trend Chart
        const trendCtx = document.getElementById('monthlyTrendChart').getContext('2d');
        new Chart(trendCtx, {
            type: 'line',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.Report.MonthlyTrend.Select(m => $"'{m.MonthName}'")))],
                datasets: [{
                    label: 'Revenue',
                    data: [@string.Join(",", Model.Report.MonthlyTrend.Select(m => m.Revenue.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)))],
                    borderColor: 'rgb(99, 102, 241)',
                    backgroundColor: 'rgba(99, 102, 241, 0.1)',
                    fill: true,
                    tension: 0.3
                }, {
                    label: 'Net Income',
                    data: [@string.Join(",", Model.Report.MonthlyTrend.Select(m => m.NetIncome.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)))],
                    borderColor: 'rgb(16, 185, 129)',
                    backgroundColor: 'rgba(16, 185, 129, 0.1)',
                    fill: true,
                    tension: 0.3
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom' }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) { return '$' + value.toLocaleString(); }
                        }
                    }
                }
            }
        });

        @if (Model.Report.OperatingExpenseItems.Any())
        {
            <text>
        // Expense Breakdown Chart
        const expenseCtx = document.getElementById('expenseChart').getContext('2d');
        new Chart(expenseCtx, {
            type: 'doughnut',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.Report.OperatingExpenseItems.Take(8).Select(e => $"'{e.AccountName}'")))],
                datasets: [{
                    data: [@string.Join(",", Model.Report.OperatingExpenseItems.Take(8).Select(e => e.Amount.ToString("F2", System.Globalization.CultureInfo.InvariantCulture)))],
                    backgroundColor: [
                        'rgba(239, 68, 68, 0.8)',
                        'rgba(249, 115, 22, 0.8)',
                        'rgba(234, 179, 8, 0.8)',
                        'rgba(132, 204, 22, 0.8)',
                        'rgba(34, 197, 94, 0.8)',
                        'rgba(20, 184, 166, 0.8)',
                        'rgba(59, 130, 246, 0.8)',
                        'rgba(168, 85, 247, 0.8)'
                    ],
                    borderWidth: 2,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'right',
                        labels: { boxWidth: 12, padding: 8, font: { size: 10 } }
                    }
                }
            }
        });
            </text>
        }
    </script>
}
