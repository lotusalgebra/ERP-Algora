@page
@model Algora.Erp.Web.Pages.Finance.Reports.GeneralLedgerModel
@{
    ViewData["Title"] = "General Ledger";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">General Ledger</h1>
            <p class="text-sm text-gray-500 mt-1 flex items-center flex-wrap gap-2">
                @Model.Report.DateRange.StartDate.ToString("MMM dd, yyyy") - @Model.Report.DateRange.EndDate.ToString("MMM dd, yyyy")
                @if (Model.Report.FilteredAccountId.HasValue)
                {
                    <span class="px-2 py-0.5 text-xs font-medium bg-cyan-100 text-cyan-700 rounded-full">@Model.Report.FilteredAccountName</span>
                }
            </p>
        </div>
        <div class="flex gap-2">
            <a href="/Finance/Reports/GeneralLedger?handler=ExportCsv&startDate=@Model.StartDate?.ToString("yyyy-MM-dd")&endDate=@Model.EndDate?.ToString("yyyy-MM-dd")@(Model.AccountId.HasValue ? $"&accountId={Model.AccountId}" : "")"
               class="inline-flex items-center px-4 py-2 border border-green-300 text-green-700 bg-white rounded-lg hover:bg-green-50 text-sm font-medium transition-colors">
                <i class="bi bi-file-earmark-spreadsheet mr-2"></i> Export CSV
            </a>
            <a href="/Finance/Reports/GeneralLedger?handler=ExportPdf&startDate=@Model.StartDate?.ToString("yyyy-MM-dd")&endDate=@Model.EndDate?.ToString("yyyy-MM-dd")@(Model.AccountId.HasValue ? $"&accountId={Model.AccountId}" : "")"
               class="inline-flex items-center px-4 py-2 border border-red-300 text-red-700 bg-white rounded-lg hover:bg-red-50 text-sm font-medium transition-colors">
                <i class="bi bi-file-earmark-pdf mr-2"></i> Export PDF
            </a>
            <a href="/Finance/Reports" class="inline-flex items-center px-4 py-2 border border-gray-300 text-gray-700 bg-white rounded-lg hover:bg-gray-50 text-sm font-medium transition-colors">
                <i class="bi bi-arrow-left mr-2"></i> Back
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
        <div class="p-4 sm:p-6">
            <form method="get" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 items-end">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Start Date</label>
                    <input type="date" name="startDate" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                           value="@Model.StartDate?.ToString("yyyy-MM-dd")" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">End Date</label>
                    <input type="date" name="endDate" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                           value="@Model.EndDate?.ToString("yyyy-MM-dd")" />
                </div>
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Account</label>
                    <select name="accountId" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500">
                        @foreach (var option in Model.AccountOptions)
                        {
                            if (option.Value == Model.AccountId?.ToString())
                            {
                                <option value="@option.Value" selected>@option.Text</option>
                            }
                            else
                            {
                                <option value="@option.Value">@option.Text</option>
                            }
                        }
                    </select>
                </div>
                <div>
                    <button type="submit" class="w-full inline-flex items-center justify-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 text-sm font-medium transition-colors">
                        <i class="bi bi-funnel mr-2"></i> Apply Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Metrics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-4">
        <!-- Total Debits -->
        <div class="bg-indigo-600 rounded-xl shadow-sm p-5 text-white">
            <div class="flex justify-between items-start">
                <div>
                    <p class="text-sm font-medium text-indigo-200 mb-1">Total Debits</p>
                    <p class="text-2xl font-bold">@Model.Report.TotalDebits.ToString("C2")</p>
                </div>
                <div class="p-2.5 bg-indigo-500/30 rounded-lg">
                    <i class="bi bi-arrow-up-circle text-2xl opacity-75"></i>
                </div>
            </div>
        </div>

        <!-- Total Credits -->
        <div class="bg-green-600 rounded-xl shadow-sm p-5 text-white">
            <div class="flex justify-between items-start">
                <div>
                    <p class="text-sm font-medium text-green-200 mb-1">Total Credits</p>
                    <p class="text-2xl font-bold">@Model.Report.TotalCredits.ToString("C2")</p>
                </div>
                <div class="p-2.5 bg-green-500/30 rounded-lg">
                    <i class="bi bi-arrow-down-circle text-2xl opacity-75"></i>
                </div>
            </div>
        </div>

        <!-- Transactions -->
        <div class="bg-cyan-600 rounded-xl shadow-sm p-5 text-white">
            <div class="flex justify-between items-start">
                <div>
                    <p class="text-sm font-medium text-cyan-200 mb-1">Transactions</p>
                    <p class="text-2xl font-bold">@Model.Report.TotalTransactions</p>
                </div>
                <div class="p-2.5 bg-cyan-500/30 rounded-lg">
                    <i class="bi bi-receipt text-2xl opacity-75"></i>
                </div>
            </div>
        </div>

        <!-- Active Accounts -->
        <div class="bg-amber-500 rounded-xl shadow-sm p-5 text-white">
            <div class="flex justify-between items-start">
                <div>
                    <p class="text-sm font-medium text-amber-100 mb-1">Active Accounts</p>
                    <p class="text-2xl font-bold">@Model.Report.AccountsWithActivity</p>
                </div>
                <div class="p-2.5 bg-amber-400/30 rounded-lg">
                    <i class="bi bi-journal-text text-2xl opacity-75"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Ledger by Account -->
    @if (Model.Report.Accounts.Any())
    {
        @foreach (var account in Model.Report.Accounts)
        {
            <div class="bg-white rounded-xl shadow-sm border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200 bg-gray-50 rounded-t-xl flex flex-col sm:flex-row sm:justify-between sm:items-center gap-2">
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900">@account.AccountCode - @account.AccountName</h3>
                        <p class="text-sm text-gray-500">@account.AccountType</p>
                    </div>
                    <div class="text-right">
                        <p class="text-xs text-gray-500">Closing Balance</p>
                        <p class="text-xl font-bold @(account.ClosingBalance >= 0 ? "text-green-600" : "text-red-600")">
                            @account.ClosingBalance.ToString("C2")
                        </p>
                    </div>
                </div>
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead class="bg-gray-50 border-b border-gray-200">
                            <tr>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider" style="width: 100px;">Date</th>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider" style="width: 120px;">Entry #</th>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Description</th>
                                <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider" style="width: 120px;">Reference</th>
                                <th class="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider" style="width: 120px;">Debit</th>
                                <th class="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider" style="width: 120px;">Credit</th>
                                <th class="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider" style="width: 140px;">Balance</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100">
                            <!-- Opening Balance Row -->
                            <tr class="bg-gray-100">
                                <td class="px-4 py-3 text-sm text-gray-700">@Model.Report.DateRange.StartDate.ToString("MM/dd/yyyy")</td>
                                <td class="px-4 py-3 text-sm text-gray-500">-</td>
                                <td class="px-4 py-3 text-sm text-gray-700 italic">Opening Balance</td>
                                <td class="px-4 py-3 text-sm text-gray-500">-</td>
                                <td class="px-4 py-3 text-sm text-right text-gray-500">-</td>
                                <td class="px-4 py-3 text-sm text-right text-gray-500">-</td>
                                <td class="px-4 py-3 text-sm text-right font-bold text-gray-900">@account.OpeningBalance.ToString("C2")</td>
                            </tr>
                            @foreach (var txn in account.Transactions)
                            {
                                <tr class="hover:bg-gray-50">
                                    <td class="px-4 py-3 text-sm text-gray-700">@txn.EntryDate.ToString("MM/dd/yyyy")</td>
                                    <td class="px-4 py-3 text-sm">
                                        <a href="/Finance/JournalEntries/Details/@txn.JournalEntryId" class="text-indigo-600 hover:text-indigo-800 hover:underline">
                                            @txn.EntryNumber
                                        </a>
                                    </td>
                                    <td class="px-4 py-3 text-sm text-gray-700">@txn.Description</td>
                                    <td class="px-4 py-3 text-sm text-gray-500">@(string.IsNullOrEmpty(txn.Reference) ? "-" : txn.Reference)</td>
                                    <td class="px-4 py-3 text-sm text-right @(txn.Debit > 0 ? "text-indigo-600 font-medium" : "text-gray-400")">
                                        @(txn.Debit > 0 ? txn.Debit.ToString("N2") : "-")
                                    </td>
                                    <td class="px-4 py-3 text-sm text-right @(txn.Credit > 0 ? "text-green-600 font-medium" : "text-gray-400")">
                                        @(txn.Credit > 0 ? txn.Credit.ToString("N2") : "-")
                                    </td>
                                    <td class="px-4 py-3 text-sm text-right font-semibold @(txn.RunningBalance >= 0 ? "text-gray-900" : "text-red-600")">
                                        @txn.RunningBalance.ToString("C2")
                                    </td>
                                </tr>
                            }
                            <!-- Closing Balance Row -->
                            <tr class="bg-gray-100">
                                <td class="px-4 py-3 text-sm text-gray-700">@Model.Report.DateRange.EndDate.ToString("MM/dd/yyyy")</td>
                                <td class="px-4 py-3 text-sm text-gray-500">-</td>
                                <td class="px-4 py-3 text-sm text-gray-700 italic">Closing Balance</td>
                                <td class="px-4 py-3 text-sm text-gray-500">-</td>
                                <td class="px-4 py-3 text-sm text-right font-bold text-indigo-600">@account.TotalDebits.ToString("N2")</td>
                                <td class="px-4 py-3 text-sm text-right font-bold text-green-600">@account.TotalCredits.ToString("N2")</td>
                                <td class="px-4 py-3 text-sm text-right font-bold @(account.ClosingBalance >= 0 ? "text-green-600" : "text-red-600")">
                                    @account.ClosingBalance.ToString("C2")
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                @if (account.Transactions.Count == 0)
                {
                    <div class="px-6 py-4 border-t border-gray-200 text-center text-gray-500 bg-gray-50 rounded-b-xl">
                        <i class="bi bi-info-circle mr-1"></i> No transactions during this period
                    </div>
                }
            </div>
        }
    }
    else
    {
        <div class="bg-white rounded-xl shadow-sm border border-gray-200">
            <div class="py-12 text-center">
                <i class="bi bi-journal-x text-5xl text-gray-300"></i>
                <h3 class="mt-4 text-lg font-medium text-gray-500">No Ledger Data</h3>
                <p class="text-sm text-gray-400 mt-1">No accounts with activity found for the selected period.</p>
            </div>
        </div>
    }

    <!-- Summary Chart -->
    @if (Model.Report.Accounts.Count > 1)
    {
        <div class="bg-white rounded-xl shadow-sm border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-lg font-semibold text-gray-900">
                    <i class="bi bi-bar-chart mr-2 text-indigo-600"></i>Account Activity Summary
                </h2>
            </div>
            <div class="p-4">
                <canvas id="activityChart" height="100"></canvas>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        @if (Model.Report.Accounts.Count > 1)
        {
            <text>
            const ctx = document.getElementById('activityChart').getContext('2d');
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: [@Html.Raw(string.Join(",", Model.Report.Accounts.Take(10).Select(a => $"'{a.AccountCode}'")))],
                    datasets: [
                        {
                            label: 'Debits',
                            data: [@string.Join(",", Model.Report.Accounts.Take(10).Select(a => a.TotalDebits.ToString("F2")))],
                            backgroundColor: 'rgba(99, 102, 241, 0.8)',
                            borderRadius: 4
                        },
                        {
                            label: 'Credits',
                            data: [@string.Join(",", Model.Report.Accounts.Take(10).Select(a => a.TotalCredits.ToString("F2")))],
                            backgroundColor: 'rgba(34, 197, 94, 0.8)',
                            borderRadius: 4
                        }
                    ]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        title: {
                            display: true,
                            text: 'Top 10 Accounts by Activity'
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return '$' + value.toLocaleString();
                                }
                            }
                        }
                    }
                }
            });
            </text>
        }
    </script>
}
