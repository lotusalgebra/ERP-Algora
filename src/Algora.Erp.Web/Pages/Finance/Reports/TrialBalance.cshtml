@page
@model Algora.Erp.Web.Pages.Finance.Reports.TrialBalanceModel
@{
    ViewData["Title"] = "Trial Balance";
}

<div class="space-y-6">
    <!-- Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Trial Balance</h1>
            <p class="text-sm text-gray-500 mt-1">As of @Model.Report.AsOfDate.ToString("MMMM dd, yyyy")</p>
        </div>
        <div class="flex gap-2">
            <a href="/Finance/Reports/TrialBalance?handler=ExportPdf&asOfDate=@Model.AsOfDate?.ToString("yyyy-MM-dd")"
               class="inline-flex items-center px-4 py-2 border border-red-300 text-red-700 bg-white rounded-lg hover:bg-red-50 text-sm font-medium transition-colors">
                <i class="bi bi-file-pdf mr-2"></i> Export PDF
            </a>
            <a href="/Finance/Reports/TrialBalance?handler=ExportCsv&asOfDate=@Model.AsOfDate?.ToString("yyyy-MM-dd")"
               class="inline-flex items-center px-4 py-2 border border-green-300 text-green-700 bg-white rounded-lg hover:bg-green-50 text-sm font-medium transition-colors">
                <i class="bi bi-file-csv mr-2"></i> Export CSV
            </a>
        </div>
    </div>

    <!-- Date Selector -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
        <div class="p-4 sm:p-6">
            <form method="get" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 items-end">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">As of Date</label>
                    <input type="date" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" name="asOfDate"
                           value="@Model.AsOfDate?.ToString("yyyy-MM-dd")" />
                </div>
                <div>
                    <div class="inline-flex rounded-lg shadow-sm" role="group">
                        <a href="/Finance/Reports/TrialBalance?asOfDate=@DateTime.Today.ToString("yyyy-MM-dd")"
                           class="px-3 py-2 text-sm font-medium bg-white border border-gray-300 rounded-l-lg hover:bg-gray-50 @(Model.AsOfDate?.Date == DateTime.Today ? "text-indigo-600 bg-indigo-50" : "text-gray-700")">Today</a>
                        <a href="/Finance/Reports/TrialBalance?asOfDate=@(new DateTime(DateTime.Today.Year, DateTime.Today.Month, 1).AddDays(-1).ToString("yyyy-MM-dd"))"
                           class="px-3 py-2 text-sm font-medium text-gray-700 bg-white border-t border-b border-gray-300 hover:bg-gray-50">Last Month End</a>
                        <a href="/Finance/Reports/TrialBalance?asOfDate=@(new DateTime(DateTime.Today.Year, 1, 1).AddDays(-1).ToString("yyyy-MM-dd"))"
                           class="px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-r-lg hover:bg-gray-50">Last Year End</a>
                    </div>
                </div>
                <div>
                    <button type="submit" class="inline-flex items-center px-4 py-2 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 text-sm font-medium transition-colors">
                        <i class="bi bi-arrow-clockwise mr-2"></i>Update
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Key Metrics Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-4">
        <!-- Total Debits -->
        <div class="bg-indigo-600 rounded-xl shadow-sm p-5 text-white">
            <div class="flex justify-between items-start">
                <div>
                    <p class="text-sm font-medium text-indigo-200 mb-1">Total Debits</p>
                    <p class="text-2xl font-bold">@Model.Report.TotalDebits.ToString("C0")</p>
                    @if (Model.Report.PreviousPeriod != null)
                    {
                        var change = Model.Report.PreviousPeriod.DebitsChange;
                        <p class="text-sm mt-2 @(change >= 0 ? "text-green-300" : "text-red-300")">
                            <i class="bi bi-arrow-@(change >= 0 ? "up" : "down") mr-1"></i>
                            @Math.Abs(change).ToString("F1")% vs last year
                        </p>
                    }
                </div>
                <div class="p-2.5 bg-indigo-500/30 rounded-lg">
                    <i class="bi bi-arrow-left-circle text-2xl opacity-75"></i>
                </div>
            </div>
        </div>

        <!-- Total Credits -->
        <div class="bg-green-600 rounded-xl shadow-sm p-5 text-white">
            <div class="flex justify-between items-start">
                <div>
                    <p class="text-sm font-medium text-green-200 mb-1">Total Credits</p>
                    <p class="text-2xl font-bold">@Model.Report.TotalCredits.ToString("C0")</p>
                    @if (Model.Report.PreviousPeriod != null)
                    {
                        var change = Model.Report.PreviousPeriod.CreditsChange;
                        <p class="text-sm mt-2 @(change >= 0 ? "text-green-300" : "text-red-300")">
                            <i class="bi bi-arrow-@(change >= 0 ? "up" : "down") mr-1"></i>
                            @Math.Abs(change).ToString("F1")% vs last year
                        </p>
                    }
                </div>
                <div class="p-2.5 bg-green-500/30 rounded-lg">
                    <i class="bi bi-arrow-right-circle text-2xl opacity-75"></i>
                </div>
            </div>
        </div>

        <!-- Balance Status -->
        <div class="@(Model.Report.IsBalanced ? "bg-cyan-600" : "bg-red-600") rounded-xl shadow-sm p-5 text-white">
            <div class="flex justify-between items-start">
                <div>
                    <p class="text-sm font-medium @(Model.Report.IsBalanced ? "text-cyan-200" : "text-red-200") mb-1">Balance Status</p>
                    <p class="text-xl font-bold flex items-center">
                        @if (Model.Report.IsBalanced)
                        {
                            <i class="bi bi-check-circle mr-2"></i> <span>Balanced</span>
                        }
                        else
                        {
                            <i class="bi bi-exclamation-triangle mr-2"></i> <span>Unbalanced</span>
                        }
                    </p>
                    @if (!Model.Report.IsBalanced)
                    {
                        <p class="text-sm mt-2 text-red-200">Difference: @Model.Report.Difference.ToString("C2")</p>
                    }
                    else
                    {
                        <p class="text-sm mt-2 text-cyan-200">Debits = Credits</p>
                    }
                </div>
                <div class="p-2.5 @(Model.Report.IsBalanced ? "bg-cyan-500/30" : "bg-red-500/30") rounded-lg">
                    <i class="bi bi-balance-scale text-2xl opacity-75"></i>
                </div>
            </div>
        </div>

        <!-- Accounts -->
        <div class="bg-gray-600 rounded-xl shadow-sm p-5 text-white">
            <div class="flex justify-between items-start">
                <div>
                    <p class="text-sm font-medium text-gray-300 mb-1">Accounts</p>
                    <p class="text-2xl font-bold">@Model.Report.AccountsWithActivity</p>
                    <p class="text-sm mt-2 text-gray-300">@Model.Report.ZeroBalanceAccounts zero balance accounts</p>
                </div>
                <div class="p-2.5 bg-gray-500/30 rounded-lg">
                    <i class="bi bi-journal-text text-2xl opacity-75"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Trial Balance Table -->
    <div class="bg-white rounded-xl shadow-sm border border-gray-200">
        <div class="px-6 py-4 border-b border-gray-200 flex justify-between items-center">
            <h2 class="text-lg font-semibold text-gray-900">
                <i class="bi bi-table mr-2 text-indigo-600"></i>Trial Balance Details
            </h2>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50 border-b border-gray-200">
                    <tr>
                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider" style="width: 100px;">Code</th>
                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Account Name</th>
                        <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider" style="width: 100px;">Type</th>
                        <th class="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider" style="width: 150px;">Debit</th>
                        <th class="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider" style="width: 150px;">Credit</th>
                        @if (Model.Report.PreviousPeriod != null)
                        {
                            <th class="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider" style="width: 120px;">Change</th>
                        }
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                    @foreach (var section in Model.Report.Sections)
                    {
                        <!-- Section Header -->
                        <tr class="bg-gray-100">
                            <td colspan="@(Model.Report.PreviousPeriod != null ? 6 : 5)" class="px-4 py-3 text-sm font-bold text-gray-700 uppercase">
                                @(section.SectionName) (@(section.AccountCount) accounts)
                            </td>
                        </tr>

                        @foreach (var account in section.Accounts)
                        {
                            <tr class="hover:bg-gray-50">
                                <td class="px-4 py-3 text-sm">
                                    <code class="px-1.5 py-0.5 bg-gray-100 rounded text-gray-700 text-xs">@account.AccountCode</code>
                                </td>
                                <td class="px-4 py-3 text-sm text-gray-700">@account.AccountName</td>
                                <td class="px-4 py-3 text-sm">
                                    <span class="px-2 py-1 text-xs font-medium rounded-full @GetTypeBadgeClass(account.AccountType)">
                                        @account.AccountType
                                    </span>
                                </td>
                                <td class="px-4 py-3 text-sm text-right">
                                    @if (account.Debit > 0)
                                    {
                                        <span class="text-indigo-600 font-medium">@account.Debit.ToString("C2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400">-</span>
                                    }
                                </td>
                                <td class="px-4 py-3 text-sm text-right">
                                    @if (account.Credit > 0)
                                    {
                                        <span class="text-green-600 font-medium">@account.Credit.ToString("C2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400">-</span>
                                    }
                                </td>
                                @if (Model.Report.PreviousPeriod != null)
                                {
                                    <td class="px-4 py-3 text-sm text-right">
                                        @if (account.ChangePercent.HasValue)
                                        {
                                            var change = account.ChangePercent.Value;
                                            <span class="@(change >= 0 ? "text-green-600" : "text-red-600")">
                                                <i class="bi bi-arrow-@(change >= 0 ? "up" : "down") mr-1"></i>
                                                @Math.Abs(change).ToString("F1")%
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-gray-400 text-xs">New</span>
                                        }
                                    </td>
                                }
                            </tr>
                        }

                        <!-- Section Subtotal -->
                        <tr class="bg-gray-50 font-semibold">
                            <td class="px-4 py-3"></td>
                            <td class="px-4 py-3 text-sm text-gray-700">@(section.SectionName) Total</td>
                            <td class="px-4 py-3"></td>
                            <td class="px-4 py-3 text-sm text-right text-indigo-600">@(section.TotalDebits.ToString("C2"))</td>
                            <td class="px-4 py-3 text-sm text-right text-green-600">@(section.TotalCredits.ToString("C2"))</td>
                            @if (Model.Report.PreviousPeriod != null)
                            {
                                <td class="px-4 py-3"></td>
                            }
                        </tr>
                    }
                </tbody>
                <tfoot class="bg-gray-800 text-white">
                    <tr class="font-bold">
                        <td colspan="3" class="px-4 py-4 text-sm">GRAND TOTAL</td>
                        <td class="px-4 py-4 text-sm text-right">@Model.Report.TotalDebits.ToString("C2")</td>
                        <td class="px-4 py-4 text-sm text-right">@Model.Report.TotalCredits.ToString("C2")</td>
                        @if (Model.Report.PreviousPeriod != null)
                        {
                            <td class="px-4 py-4"></td>
                        }
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="bg-white rounded-xl shadow-sm border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900">
                    <i class="bi bi-bar-chart mr-2 text-indigo-600"></i>Debit/Credit by Account Type
                </h3>
            </div>
            <div class="p-4">
                <canvas id="typeChart" height="200"></canvas>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900">
                    <i class="bi bi-pie-chart mr-2 text-indigo-600"></i>Account Distribution
                </h3>
            </div>
            <div class="p-4">
                <canvas id="distributionChart" height="200"></canvas>
            </div>
        </div>
    </div>

    @if (Model.Report.PreviousPeriod != null)
    {
        <!-- Year-over-Year Comparison -->
        <div class="bg-white rounded-xl shadow-sm border border-gray-200">
            <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-lg font-semibold text-gray-900">
                    <i class="bi bi-arrow-left-right mr-2 text-indigo-600"></i>Year-over-Year Comparison
                </h2>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead class="bg-gray-50 border-b border-gray-200">
                        <tr>
                            <th class="px-4 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">Metric</th>
                            <th class="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">@Model.Report.AsOfDate.ToString("MMM yyyy")</th>
                            <th class="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">@Model.Report.PreviousPeriod.AsOfDate.ToString("MMM yyyy")</th>
                            <th class="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">Change</th>
                            <th class="px-4 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider">% Change</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100">
                        <tr class="hover:bg-gray-50">
                            <td class="px-4 py-3 text-sm font-semibold text-gray-700">Total Debits</td>
                            <td class="px-4 py-3 text-sm text-right">@Model.Report.TotalDebits.ToString("C2")</td>
                            <td class="px-4 py-3 text-sm text-right">@Model.Report.PreviousPeriod.TotalDebits.ToString("C2")</td>
                            <td class="px-4 py-3 text-sm text-right @(Model.Report.TotalDebits - Model.Report.PreviousPeriod.TotalDebits >= 0 ? "text-green-600" : "text-red-600")">
                                @((Model.Report.TotalDebits - Model.Report.PreviousPeriod.TotalDebits).ToString("C2"))
                            </td>
                            <td class="px-4 py-3 text-sm text-right @(Model.Report.PreviousPeriod.DebitsChange >= 0 ? "text-green-600" : "text-red-600")">
                                <i class="bi bi-arrow-@(Model.Report.PreviousPeriod.DebitsChange >= 0 ? "up" : "down") mr-1"></i>
                                @Math.Abs(Model.Report.PreviousPeriod.DebitsChange).ToString("F1")%
                            </td>
                        </tr>
                        <tr class="hover:bg-gray-50">
                            <td class="px-4 py-3 text-sm font-semibold text-gray-700">Total Credits</td>
                            <td class="px-4 py-3 text-sm text-right">@Model.Report.TotalCredits.ToString("C2")</td>
                            <td class="px-4 py-3 text-sm text-right">@Model.Report.PreviousPeriod.TotalCredits.ToString("C2")</td>
                            <td class="px-4 py-3 text-sm text-right @(Model.Report.TotalCredits - Model.Report.PreviousPeriod.TotalCredits >= 0 ? "text-green-600" : "text-red-600")">
                                @((Model.Report.TotalCredits - Model.Report.PreviousPeriod.TotalCredits).ToString("C2"))
                            </td>
                            <td class="px-4 py-3 text-sm text-right @(Model.Report.PreviousPeriod.CreditsChange >= 0 ? "text-green-600" : "text-red-600")">
                                <i class="bi bi-arrow-@(Model.Report.PreviousPeriod.CreditsChange >= 0 ? "up" : "down") mr-1"></i>
                                @Math.Abs(Model.Report.PreviousPeriod.CreditsChange).ToString("F1")%
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>

@functions {
    string GetTypeBadgeClass(Algora.Erp.Domain.Entities.Finance.AccountType type)
    {
        return type switch
        {
            Algora.Erp.Domain.Entities.Finance.AccountType.Asset => "bg-indigo-100 text-indigo-700",
            Algora.Erp.Domain.Entities.Finance.AccountType.Liability => "bg-red-100 text-red-700",
            Algora.Erp.Domain.Entities.Finance.AccountType.Equity => "bg-green-100 text-green-700",
            Algora.Erp.Domain.Entities.Finance.AccountType.Revenue => "bg-cyan-100 text-cyan-700",
            Algora.Erp.Domain.Entities.Finance.AccountType.Expense => "bg-amber-100 text-amber-700",
            _ => "bg-gray-100 text-gray-700"
        };
    }
}

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Debit/Credit by Account Type Chart
        const typeCtx = document.getElementById('typeChart').getContext('2d');
        new Chart(typeCtx, {
            type: 'bar',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.Report.Sections.Select(s => $"'{s.SectionName}'")))],
                datasets: [
                    {
                        label: 'Debits',
                        data: [@string.Join(",", Model.Report.Sections.Select(s => s.TotalDebits))],
                        backgroundColor: 'rgba(99, 102, 241, 0.8)',
                        borderRadius: 4
                    },
                    {
                        label: 'Credits',
                        data: [@string.Join(",", Model.Report.Sections.Select(s => s.TotalCredits))],
                        backgroundColor: 'rgba(34, 197, 94, 0.8)',
                        borderRadius: 4
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) {
                                return '$' + value.toLocaleString();
                            }
                        }
                    }
                },
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        // Account Distribution Pie Chart
        const distCtx = document.getElementById('distributionChart').getContext('2d');
        new Chart(distCtx, {
            type: 'pie',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.Report.Sections.Select(s => $"'{s.SectionName} ({s.AccountCount})'")))],
                datasets: [{
                    data: [@string.Join(",", Model.Report.Sections.Select(s => s.AccountCount))],
                    backgroundColor: [
                        'rgba(99, 102, 241, 0.8)',
                        'rgba(239, 68, 68, 0.8)',
                        'rgba(34, 197, 94, 0.8)',
                        'rgba(6, 182, 212, 0.8)',
                        'rgba(245, 158, 11, 0.8)'
                    ],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });
    </script>
}
