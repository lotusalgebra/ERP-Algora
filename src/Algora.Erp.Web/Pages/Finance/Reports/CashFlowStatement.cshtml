@page
@model Algora.Erp.Web.Pages.Finance.Reports.CashFlowStatementModel
@using Algora.Erp.Application.Common.Interfaces
@{
    ViewData["Title"] = "Cash Flow Statement";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">Cash Flow Statement</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/Finance">Finance</a></li>
                    <li class="breadcrumb-item"><a href="/Finance/Reports">Reports</a></li>
                    <li class="breadcrumb-item active">Cash Flow Statement</li>
                </ol>
            </nav>
        </div>
        <div class="d-flex gap-2">
            <a href="?handler=ExportPdf&StartDate=@(Model.StartDate?.ToString("yyyy-MM-dd"))&EndDate=@(Model.EndDate?.ToString("yyyy-MM-dd"))"
               class="btn btn-outline-danger">
                <i class="bi bi-file-pdf me-1"></i>Export PDF
            </a>
            <a href="?handler=ExportCsv&StartDate=@(Model.StartDate?.ToString("yyyy-MM-dd"))&EndDate=@(Model.EndDate?.ToString("yyyy-MM-dd"))"
               class="btn btn-outline-success">
                <i class="bi bi-file-excel me-1"></i>Export CSV
            </a>
        </div>
    </div>

    <!-- Date Range Filter -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <form method="get" class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label">Start Date</label>
                    <input type="date" class="form-control" name="StartDate" value="@(Model.StartDate?.ToString("yyyy-MM-dd"))">
                </div>
                <div class="col-md-3">
                    <label class="form-label">End Date</label>
                    <input type="date" class="form-control" name="EndDate" value="@(Model.EndDate?.ToString("yyyy-MM-dd"))">
                </div>
                <div class="col-md-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i>Generate Report
                    </button>
                </div>
                <div class="col-md-3 text-end">
                    <div class="btn-group" role="group">
                        <a href="?StartDate=@(new DateTime(DateTime.Today.Year, DateTime.Today.Month, 1).ToString("yyyy-MM-dd"))&EndDate=@(DateTime.Today.ToString("yyyy-MM-dd"))"
                           class="btn btn-sm btn-outline-secondary">MTD</a>
                        <a href="?StartDate=@(new DateTime(DateTime.Today.Year, (DateTime.Today.Month-1)/3*3+1, 1).ToString("yyyy-MM-dd"))&EndDate=@(DateTime.Today.ToString("yyyy-MM-dd"))"
                           class="btn btn-sm btn-outline-secondary">QTD</a>
                        <a href="?StartDate=@(new DateTime(DateTime.Today.Year, 1, 1).ToString("yyyy-MM-dd"))&EndDate=@(DateTime.Today.ToString("yyyy-MM-dd"))"
                           class="btn btn-sm btn-outline-secondary">YTD</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Key Metrics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="text-muted mb-2">Operating Cash Flow</h6>
                            <h3 class="mb-0 @(Model.Report.NetCashFromOperating >= 0 ? "text-success" : "text-danger")">
                                @Model.Report.NetCashFromOperating.ToString("C0")
                            </h3>
                            <small class="text-muted">From operations</small>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-2 rounded">
                            <i class="bi bi-gear text-primary fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="text-muted mb-2">Free Cash Flow</h6>
                            <h3 class="mb-0 @(Model.Report.FreeCashFlow >= 0 ? "text-success" : "text-danger")">
                                @Model.Report.FreeCashFlow.ToString("C0")
                            </h3>
                            <small class="text-muted">Available for distribution</small>
                        </div>
                        <div class="bg-success bg-opacity-10 p-2 rounded">
                            <i class="bi bi-cash-coin text-success fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="text-muted mb-2">Net Change in Cash</h6>
                            <h3 class="mb-0 @(Model.Report.NetChangeInCash >= 0 ? "text-success" : "text-danger")">
                                @Model.Report.NetChangeInCash.ToString("C0")
                            </h3>
                            <small class="text-muted">Period change</small>
                        </div>
                        <div class="bg-info bg-opacity-10 p-2 rounded">
                            <i class="bi bi-graph-up-arrow text-info fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h6 class="text-muted mb-2">Ending Cash Balance</h6>
                            <h3 class="mb-0">@Model.Report.EndingCashBalance.ToString("C0")</h3>
                            <small class="text-muted">
                                @if (Model.Report.IsBalanced)
                                {
                                    <span class="text-success"><i class="bi bi-check-circle"></i> Balanced</span>
                                }
                                else
                                {
                                    <span class="text-danger"><i class="bi bi-exclamation-circle"></i> Imbalanced</span>
                                }
                            </small>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-2 rounded">
                            <i class="bi bi-wallet2 text-warning fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Cash Flow Statement -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-file-earmark-spreadsheet me-2"></i>
                        Cash Flow Statement
                        <small class="text-muted ms-2">
                            @Model.Report.DateRange.StartDate.ToString("MMM dd, yyyy") - @Model.Report.DateRange.EndDate.ToString("MMM dd, yyyy")
                        </small>
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <!-- Operating Activities -->
                            <thead class="bg-primary bg-opacity-10">
                                <tr>
                                    <th colspan="2" class="ps-4 py-3">
                                        <i class="bi bi-gear me-2"></i>CASH FLOWS FROM OPERATING ACTIVITIES
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="ps-4">Net Income</td>
                                    <td class="text-end pe-4 fw-medium">@Model.Report.NetIncome.ToString("C2")</td>
                                </tr>
                                @if (Model.Report.OperatingAdjustments.Any())
                                {
                                    <tr class="bg-light">
                                        <td colspan="2" class="ps-4 fst-italic text-muted">Adjustments to reconcile net income:</td>
                                    </tr>
                                    @foreach (var item in Model.Report.OperatingAdjustments)
                                    {
                                        <tr>
                                            <td class="ps-5">@item.Description</td>
                                            <td class="text-end pe-4 @(item.Amount >= 0 ? "text-success" : "text-danger")">
                                                @item.Amount.ToString("C2")
                                            </td>
                                        </tr>
                                    }
                                }
                                @if (Model.Report.WorkingCapitalChanges.Any())
                                {
                                    <tr class="bg-light">
                                        <td colspan="2" class="ps-4 fst-italic text-muted">Changes in operating assets and liabilities:</td>
                                    </tr>
                                    @foreach (var item in Model.Report.WorkingCapitalChanges)
                                    {
                                        <tr>
                                            <td class="ps-5">@item.Description</td>
                                            <td class="text-end pe-4 @(item.Amount >= 0 ? "text-success" : "text-danger")">
                                                @item.Amount.ToString("C2")
                                            </td>
                                        </tr>
                                    }
                                }
                                <tr class="table-secondary">
                                    <td class="ps-4 fw-bold">Net Cash from Operating Activities</td>
                                    <td class="text-end pe-4 fw-bold @(Model.Report.NetCashFromOperating >= 0 ? "text-success" : "text-danger")">
                                        @Model.Report.NetCashFromOperating.ToString("C2")
                                    </td>
                                </tr>
                            </tbody>

                            <!-- Investing Activities -->
                            <thead class="bg-info bg-opacity-10">
                                <tr>
                                    <th colspan="2" class="ps-4 py-3">
                                        <i class="bi bi-building me-2"></i>CASH FLOWS FROM INVESTING ACTIVITIES
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Report.InvestingActivities.Any())
                                {
                                    @foreach (var item in Model.Report.InvestingActivities)
                                    {
                                        <tr>
                                            <td class="ps-4">@item.Description</td>
                                            <td class="text-end pe-4 @(item.Amount >= 0 ? "text-success" : "text-danger")">
                                                @item.Amount.ToString("C2")
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td class="ps-4 text-muted fst-italic">(No investing activities)</td>
                                        <td class="text-end pe-4 text-muted">$0.00</td>
                                    </tr>
                                }
                                <tr class="table-secondary">
                                    <td class="ps-4 fw-bold">Net Cash from Investing Activities</td>
                                    <td class="text-end pe-4 fw-bold @(Model.Report.NetCashFromInvesting >= 0 ? "text-success" : "text-danger")">
                                        @Model.Report.NetCashFromInvesting.ToString("C2")
                                    </td>
                                </tr>
                            </tbody>

                            <!-- Financing Activities -->
                            <thead class="bg-warning bg-opacity-10">
                                <tr>
                                    <th colspan="2" class="ps-4 py-3">
                                        <i class="bi bi-bank me-2"></i>CASH FLOWS FROM FINANCING ACTIVITIES
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Report.FinancingActivities.Any())
                                {
                                    @foreach (var item in Model.Report.FinancingActivities)
                                    {
                                        <tr>
                                            <td class="ps-4">@item.Description</td>
                                            <td class="text-end pe-4 @(item.Amount >= 0 ? "text-success" : "text-danger")">
                                                @item.Amount.ToString("C2")
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td class="ps-4 text-muted fst-italic">(No financing activities)</td>
                                        <td class="text-end pe-4 text-muted">$0.00</td>
                                    </tr>
                                }
                                <tr class="table-secondary">
                                    <td class="ps-4 fw-bold">Net Cash from Financing Activities</td>
                                    <td class="text-end pe-4 fw-bold @(Model.Report.NetCashFromFinancing >= 0 ? "text-success" : "text-danger")">
                                        @Model.Report.NetCashFromFinancing.ToString("C2")
                                    </td>
                                </tr>
                            </tbody>

                            <!-- Summary -->
                            <thead class="bg-dark text-white">
                                <tr>
                                    <th colspan="2" class="ps-4 py-3">
                                        <i class="bi bi-calculator me-2"></i>SUMMARY
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="ps-4 fw-bold">Net Change in Cash</td>
                                    <td class="text-end pe-4 fw-bold fs-5 @(Model.Report.NetChangeInCash >= 0 ? "text-success" : "text-danger")">
                                        @Model.Report.NetChangeInCash.ToString("C2")
                                    </td>
                                </tr>
                                <tr>
                                    <td class="ps-4">Beginning Cash Balance</td>
                                    <td class="text-end pe-4">@Model.Report.BeginningCashBalance.ToString("C2")</td>
                                </tr>
                                <tr class="table-dark">
                                    <td class="ps-4 fw-bold fs-5">Ending Cash Balance</td>
                                    <td class="text-end pe-4 fw-bold fs-5">@Model.Report.EndingCashBalance.ToString("C2")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts and Metrics -->
        <div class="col-lg-4">
            <!-- Cash Flow Breakdown Chart -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="bi bi-pie-chart me-2"></i>Cash Flow Breakdown</h5>
                </div>
                <div class="card-body">
                    <canvas id="cashFlowBreakdownChart" height="250"></canvas>
                </div>
            </div>

            <!-- Key Ratios -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="bi bi-speedometer2 me-2"></i>Key Ratios</h5>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Operating CF Ratio</span>
                            <span class="badge @(Model.Report.OperatingCashFlowRatio >= 1 ? "bg-success" : Model.Report.OperatingCashFlowRatio >= 0.5m ? "bg-warning" : "bg-danger") fs-6">
                                @Model.Report.OperatingCashFlowRatio.ToString("F2")
                            </span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            @{
                                var ocfProgress = Math.Min(Model.Report.OperatingCashFlowRatio * 50, 100);
                            }
                            <div class="progress-bar @(Model.Report.OperatingCashFlowRatio >= 1 ? "bg-success" : Model.Report.OperatingCashFlowRatio >= 0.5m ? "bg-warning" : "bg-danger")"
                                 style="width: @ocfProgress%"></div>
                        </div>
                        <small class="text-muted">Operating cash flow / Current liabilities</small>
                    </div>

                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span>Cash Flow to Debt Ratio</span>
                            <span class="badge @(Model.Report.CashFlowToDebtRatio >= 0.5m ? "bg-success" : Model.Report.CashFlowToDebtRatio >= 0.25m ? "bg-warning" : "bg-danger") fs-6">
                                @Model.Report.CashFlowToDebtRatio.ToString("F2")
                            </span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            @{
                                var cftdProgress = Math.Min(Model.Report.CashFlowToDebtRatio * 100, 100);
                            }
                            <div class="progress-bar @(Model.Report.CashFlowToDebtRatio >= 0.5m ? "bg-success" : Model.Report.CashFlowToDebtRatio >= 0.25m ? "bg-warning" : "bg-danger")"
                                 style="width: @cftdProgress%"></div>
                        </div>
                        <small class="text-muted">Operating cash flow / Total debt</small>
                    </div>

                    <hr>

                    <div class="row text-center">
                        <div class="col-6">
                            <h5 class="mb-1 @(Model.Report.FreeCashFlow >= 0 ? "text-success" : "text-danger")">
                                @Model.Report.FreeCashFlow.ToString("C0")
                            </h5>
                            <small class="text-muted">Free Cash Flow</small>
                        </div>
                        <div class="col-6">
                            <h5 class="mb-1">@Model.Report.NetIncome.ToString("C0")</h5>
                            <small class="text-muted">Net Income</small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Period Comparison -->
            @if (Model.Report.PreviousPeriod != null)
            {
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0"><i class="bi bi-arrow-left-right me-2"></i>Period Comparison</h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm mb-0">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th class="text-end">Current</th>
                                    <th class="text-end">Previous</th>
                                    <th class="text-end">Change</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Operating</td>
                                    <td class="text-end">@Model.Report.NetCashFromOperating.ToString("C0")</td>
                                    <td class="text-end">@Model.Report.PreviousPeriod.NetCashFromOperating.ToString("C0")</td>
                                    <td class="text-end">
                                        @{
                                            var opChange = Model.Report.PreviousPeriod.NetCashFromOperating != 0
                                                ? ((Model.Report.NetCashFromOperating - Model.Report.PreviousPeriod.NetCashFromOperating) / Math.Abs(Model.Report.PreviousPeriod.NetCashFromOperating)) * 100
                                                : 0;
                                        }
                                        <span class="@(opChange >= 0 ? "text-success" : "text-danger")">
                                            @(opChange >= 0 ? "+" : "")@opChange.ToString("F1")%
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Investing</td>
                                    <td class="text-end">@Model.Report.NetCashFromInvesting.ToString("C0")</td>
                                    <td class="text-end">@Model.Report.PreviousPeriod.NetCashFromInvesting.ToString("C0")</td>
                                    <td class="text-end">
                                        @{
                                            var invChange = Model.Report.PreviousPeriod.NetCashFromInvesting != 0
                                                ? ((Model.Report.NetCashFromInvesting - Model.Report.PreviousPeriod.NetCashFromInvesting) / Math.Abs(Model.Report.PreviousPeriod.NetCashFromInvesting)) * 100
                                                : 0;
                                        }
                                        <span class="@(invChange >= 0 ? "text-success" : "text-danger")">
                                            @(invChange >= 0 ? "+" : "")@invChange.ToString("F1")%
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Financing</td>
                                    <td class="text-end">@Model.Report.NetCashFromFinancing.ToString("C0")</td>
                                    <td class="text-end">@Model.Report.PreviousPeriod.NetCashFromFinancing.ToString("C0")</td>
                                    <td class="text-end">
                                        @{
                                            var finChange = Model.Report.PreviousPeriod.NetCashFromFinancing != 0
                                                ? ((Model.Report.NetCashFromFinancing - Model.Report.PreviousPeriod.NetCashFromFinancing) / Math.Abs(Model.Report.PreviousPeriod.NetCashFromFinancing)) * 100
                                                : 0;
                                        }
                                        <span class="@(finChange >= 0 ? "text-success" : "text-danger")">
                                            @(finChange >= 0 ? "+" : "")@finChange.ToString("F1")%
                                        </span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Monthly Trend Chart -->
    @if (Model.Report.MonthlyTrend.Any())
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0"><i class="bi bi-graph-up me-2"></i>Monthly Cash Flow Trend</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="monthlyTrendChart" height="100"></canvas>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Cash Flow Breakdown Chart
        const breakdownCtx = document.getElementById('cashFlowBreakdownChart').getContext('2d');
        new Chart(breakdownCtx, {
            type: 'bar',
            data: {
                labels: ['Operating', 'Investing', 'Financing', 'Net Change'],
                datasets: [{
                    data: [
                        @Model.Report.NetCashFromOperating.ToString(System.Globalization.CultureInfo.InvariantCulture),
                        @Model.Report.NetCashFromInvesting.ToString(System.Globalization.CultureInfo.InvariantCulture),
                        @Model.Report.NetCashFromFinancing.ToString(System.Globalization.CultureInfo.InvariantCulture),
                        @Model.Report.NetChangeInCash.ToString(System.Globalization.CultureInfo.InvariantCulture)
                    ],
                    backgroundColor: [
                        @(Model.Report.NetCashFromOperating >= 0 ? "'rgba(34, 197, 94, 0.8)'" : "'rgba(239, 68, 68, 0.8)'"),
                        @(Model.Report.NetCashFromInvesting >= 0 ? "'rgba(59, 130, 246, 0.8)'" : "'rgba(239, 68, 68, 0.8)'"),
                        @(Model.Report.NetCashFromFinancing >= 0 ? "'rgba(245, 158, 11, 0.8)'" : "'rgba(239, 68, 68, 0.8)'"),
                        @(Model.Report.NetChangeInCash >= 0 ? "'rgba(16, 185, 129, 0.8)'" : "'rgba(239, 68, 68, 0.8)'")
                    ],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) { return '$' + value.toLocaleString(); }
                        }
                    }
                }
            }
        });

        @if (Model.Report.MonthlyTrend.Any())
        {
            <text>
        // Monthly Trend Chart
        const trendCtx = document.getElementById('monthlyTrendChart').getContext('2d');
        new Chart(trendCtx, {
            type: 'line',
            data: {
                labels: [@Html.Raw(string.Join(",", Model.Report.MonthlyTrend.Select(m => $"'{m.MonthName}'")))],
                datasets: [
                    {
                        label: 'Operating',
                        data: [@string.Join(",", Model.Report.MonthlyTrend.Select(m => m.Operating.ToString(System.Globalization.CultureInfo.InvariantCulture)))],
                        borderColor: 'rgb(34, 197, 94)',
                        backgroundColor: 'rgba(34, 197, 94, 0.1)',
                        fill: true,
                        tension: 0.4
                    },
                    {
                        label: 'Investing',
                        data: [@string.Join(",", Model.Report.MonthlyTrend.Select(m => m.Investing.ToString(System.Globalization.CultureInfo.InvariantCulture)))],
                        borderColor: 'rgb(59, 130, 246)',
                        backgroundColor: 'rgba(59, 130, 246, 0.1)',
                        fill: true,
                        tension: 0.4
                    },
                    {
                        label: 'Financing',
                        data: [@string.Join(",", Model.Report.MonthlyTrend.Select(m => m.Financing.ToString(System.Globalization.CultureInfo.InvariantCulture)))],
                        borderColor: 'rgb(245, 158, 11)',
                        backgroundColor: 'rgba(245, 158, 11, 0.1)',
                        fill: true,
                        tension: 0.4
                    },
                    {
                        label: 'Net Change',
                        data: [@string.Join(",", Model.Report.MonthlyTrend.Select(m => m.NetChange.ToString(System.Globalization.CultureInfo.InvariantCulture)))],
                        borderColor: 'rgb(139, 92, 246)',
                        borderWidth: 3,
                        borderDash: [5, 5],
                        fill: false,
                        tension: 0.4
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'top' }
                },
                scales: {
                    y: {
                        ticks: {
                            callback: function(value) { return '$' + value.toLocaleString(); }
                        }
                    }
                }
            }
        });
            </text>
        }
    </script>
}
