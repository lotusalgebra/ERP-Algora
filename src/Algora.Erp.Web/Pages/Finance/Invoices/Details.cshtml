@page "{id:guid}"
@model Algora.Erp.Web.Pages.Finance.Invoices.DetailsModel
@using Algora.Erp.Domain.Entities.Finance
@{
    ViewData["Title"] = $"Invoice {Model.Invoice.InvoiceNumber}";

    var statusBadgeClass = Model.Invoice.Status switch
    {
        InvoiceStatus.Draft => "bg-secondary",
        InvoiceStatus.Pending => "bg-warning text-dark",
        InvoiceStatus.Sent => "bg-info",
        InvoiceStatus.PartiallyPaid => "bg-primary",
        InvoiceStatus.Paid => "bg-success",
        InvoiceStatus.Overdue => "bg-danger",
        InvoiceStatus.Void => "bg-dark",
        InvoiceStatus.Cancelled => "bg-secondary",
        _ => "bg-secondary"
    };

    var isOverdue = Model.Invoice.DueDate < DateTime.UtcNow &&
        Model.Invoice.Status != InvoiceStatus.Paid &&
        Model.Invoice.Status != InvoiceStatus.Void &&
        Model.Invoice.Status != InvoiceStatus.Cancelled;
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <div class="d-flex align-items-center gap-3">
                <h1 class="h3 mb-0">@Model.Invoice.InvoiceNumber</h1>
                <span class="badge @statusBadgeClass fs-6">@Model.Invoice.Status</span>
                @if (isOverdue && Model.Invoice.Status != InvoiceStatus.Overdue)
                {
                    <span class="badge bg-danger fs-6">Overdue</span>
                }
            </div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/Finance">Finance</a></li>
                    <li class="breadcrumb-item"><a href="/Finance/Invoices">Invoices</a></li>
                    <li class="breadcrumb-item active">@Model.Invoice.InvoiceNumber</li>
                </ol>
            </nav>
        </div>
        <div class="d-flex gap-2">
            @if (Model.Invoice.Status == InvoiceStatus.Draft)
            {
                <a href="/Finance/Invoices/Edit/@Model.Invoice.Id" class="btn btn-outline-primary">
                    <i class="bi bi-pencil me-1"></i> Edit
                </a>
                <form method="post" asp-page-handler="Send" asp-route-id="@Model.Invoice.Id" class="d-inline">
                    <button type="submit" class="btn btn-primary" onclick="return confirm('Send this invoice?')">
                        <i class="bi bi-send me-1"></i> Send
                    </button>
                </form>
            }
            @if (Model.Invoice.Status != InvoiceStatus.Paid && Model.Invoice.Status != InvoiceStatus.Void)
            {
                <button type="button" class="btn btn-success" data-modal-target="paymentModal" data-modal-toggle="paymentModal">
                    <i class="bi bi-cash me-1"></i> Record Payment
                </button>
            }
            <div class="dropdown">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="dropdownActions" data-dropdown-toggle="dropdownMenuActions">
                    <i class="bi bi-three-dots"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end" id="dropdownMenuActions">
                    <li>
                        <a class="dropdown-item" href="/Finance/Invoices/Print/@Model.Invoice.Id" target="_blank">
                            <i class="bi bi-printer me-2"></i> Print
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="/Finance/Invoices/Download/@Model.Invoice.Id">
                            <i class="bi bi-download me-2"></i> Download PDF
                        </a>
                    </li>
                    <li>
                        <a class="dropdown-item" href="#" data-modal-target="emailModal" data-modal-toggle="emailModal">
                            <i class="bi bi-envelope me-2"></i> Email to Customer
                        </a>
                    </li>
                    @if (Model.Invoice.Status != InvoiceStatus.Paid && Model.Invoice.Status != InvoiceStatus.Void)
                    {
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form method="post" asp-page-handler="MarkPaid" asp-route-id="@Model.Invoice.Id">
                                <button type="submit" class="dropdown-item" onclick="return confirm('Mark as fully paid?')">
                                    <i class="bi bi-check-circle me-2"></i> Mark as Paid
                                </button>
                            </form>
                        </li>
                    }
                    @if (Model.Invoice.Status != InvoiceStatus.Void)
                    {
                        <li>
                            <form method="post" asp-page-handler="Void" asp-route-id="@Model.Invoice.Id">
                                <button type="submit" class="dropdown-item text-danger" onclick="return confirm('Void this invoice? This cannot be undone.')">
                                    <i class="bi bi-x-circle me-2"></i> Void Invoice
                                </button>
                            </form>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-dismiss-target="[role='alert']" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-dismiss-target="[role='alert']" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Invoice Info Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted text-uppercase small mb-3">Bill To</h6>
                            @if (Model.Invoice.Customer != null)
                            {
                                <h5 class="mb-1">@Model.Invoice.Customer.Name</h5>
                                <p class="text-muted mb-0">
                                    @if (!string.IsNullOrEmpty(Model.Invoice.BillingAddress))
                                    {
                                        @Model.Invoice.BillingAddress<br />
                                    }
                                    @if (!string.IsNullOrEmpty(Model.Invoice.BillingCity))
                                    {
                                        @Model.Invoice.BillingCity@(string.IsNullOrEmpty(Model.Invoice.BillingState) ? "" : ", " + Model.Invoice.BillingState)
                                        @Model.Invoice.BillingPostalCode<br />
                                    }
                                    @Model.Invoice.BillingCountry
                                </p>
                                @if (!string.IsNullOrEmpty(Model.Invoice.Customer.Email))
                                {
                                    <p class="mb-0 mt-2">
                                        <i class="bi bi-envelope me-1"></i> @Model.Invoice.Customer.Email
                                    </p>
                                }
                            }
                            else
                            {
                                <p class="text-muted">@Model.Invoice.BillingName</p>
                            }
                        </div>
                        <div class="col-md-6 text-md-end">
                            <h6 class="text-muted text-uppercase small mb-3">Invoice Details</h6>
                            <table class="table table-borderless table-sm mb-0" style="width: auto; margin-left: auto;">
                                <tr>
                                    <td class="text-muted pe-3">Invoice Number:</td>
                                    <td class="fw-medium">@Model.Invoice.InvoiceNumber</td>
                                </tr>
                                <tr>
                                    <td class="text-muted pe-3">Invoice Date:</td>
                                    <td>@Model.Invoice.InvoiceDate.ToString("MMM dd, yyyy")</td>
                                </tr>
                                <tr>
                                    <td class="text-muted pe-3">Due Date:</td>
                                    <td class="@(isOverdue ? "text-danger fw-medium" : "")">
                                        @Model.Invoice.DueDate.ToString("MMM dd, yyyy")
                                        @if (isOverdue)
                                        {
                                            <i class="bi bi-exclamation-circle ms-1"></i>
                                        }
                                    </td>
                                </tr>
                                @if (!string.IsNullOrEmpty(Model.Invoice.PaymentTerms))
                                {
                                    <tr>
                                        <td class="text-muted pe-3">Payment Terms:</td>
                                        <td>@Model.Invoice.PaymentTerms</td>
                                    </tr>
                                }
                                @if (!string.IsNullOrEmpty(Model.Invoice.Reference))
                                {
                                    <tr>
                                        <td class="text-muted pe-3">Reference:</td>
                                        <td>@Model.Invoice.Reference</td>
                                    </tr>
                                }
                                @if (Model.Invoice.SalesOrder != null)
                                {
                                    <tr>
                                        <td class="text-muted pe-3">Sales Order:</td>
                                        <td>
                                            <a href="/Sales/Orders/Details/@Model.Invoice.SalesOrderId">
                                                @Model.Invoice.SalesOrder.OrderNumber
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- GST Details Card -->
            @if (Model.Invoice.FromLocation != null || !string.IsNullOrEmpty(Model.Invoice.CustomerGstin))
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0"><i class="bi bi-percent me-2"></i>GST Details</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                @if (Model.Invoice.FromLocation != null)
                                {
                                    <div class="mb-3">
                                        <h6 class="text-muted text-uppercase small mb-2">From Location</h6>
                                        <p class="mb-1 fw-medium">@Model.Invoice.FromLocation.Name</p>
                                        <p class="text-muted mb-0">
                                            @Model.Invoice.FromLocation.AddressLine1<br />
                                            @Model.Invoice.FromLocation.City, @Model.Invoice.FromLocation.State?.Name @Model.Invoice.FromLocation.PostalCode<br />
                                            @if (!string.IsNullOrEmpty(Model.Invoice.FromLocation.GstNumber))
                                            {
                                                <span class="badge bg-light text-dark mt-1">GSTIN: @Model.Invoice.FromLocation.GstNumber</span>
                                            }
                                        </p>
                                    </div>
                                }
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <h6 class="text-muted text-uppercase small mb-2">Customer GST Info</h6>
                                    @if (!string.IsNullOrEmpty(Model.Invoice.CustomerGstin))
                                    {
                                        <p class="mb-1">
                                            <span class="badge bg-primary">GSTIN: @Model.Invoice.CustomerGstin</span>
                                        </p>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.Invoice.CustomerStateCode))
                                    {
                                        <p class="mb-1">State Code: @Model.Invoice.CustomerStateCode</p>
                                    }
                                    <p class="mb-0">
                                        @if (Model.Invoice.IsInterState)
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-arrow-left-right me-1"></i>Inter-State (IGST)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-geo-alt me-1"></i>Intra-State (CGST + SGST)
                                            </span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Line Items Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Line Items</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="ps-4">#</th>
                                    <th>Description</th>
                                    <th class="text-center">Qty</th>
                                    <th class="text-end">Unit Price</th>
                                    <th class="text-center">Disc %</th>
                                    <th>GST</th>
                                    <th>HSN</th>
                                    <th class="text-end pe-4">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var line in Model.Invoice.Lines.OrderBy(l => l.LineNumber))
                                {
                                    <tr>
                                        <td class="ps-4 text-muted">@line.LineNumber</td>
                                        <td>
                                            <span class="fw-medium">@line.Description</span>
                                            @if (!string.IsNullOrEmpty(line.ProductCode))
                                            {
                                                <br /><small class="text-muted">SKU: @line.ProductCode</small>
                                            }
                                        </td>
                                        <td class="text-center">@line.Quantity</td>
                                        <td class="text-end">₹@line.UnitPrice.ToString("N2")</td>
                                        <td class="text-center">
                                            @if (line.DiscountPercent > 0)
                                            {
                                                @line.DiscountPercent.ToString("0.##")@:%
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (line.GstSlab != null)
                                            {
                                                <span class="badge bg-light text-dark">@line.GstSlab.Name</span>
                                            }
                                            else if (line.TaxPercent > 0)
                                            {
                                                <span class="text-muted">@line.TaxPercent.ToString("0.##")%</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(line.HsnCode))
                                            {
                                                <code>@line.HsnCode</code>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td class="text-end pe-4 fw-medium">₹@line.LineTotal.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="bg-light">
                                <tr>
                                    <td colspan="7" class="text-end">Subtotal:</td>
                                    <td class="text-end pe-4">₹@Model.Invoice.SubTotal.ToString("N2")</td>
                                </tr>
                                @if (Model.Invoice.DiscountAmount > 0)
                                {
                                    <tr>
                                        <td colspan="7" class="text-end text-danger">Discount:</td>
                                        <td class="text-end pe-4 text-danger">-₹@Model.Invoice.DiscountAmount.ToString("N2")</td>
                                    </tr>
                                }
                                @if (Model.Invoice.IsInterState)
                                {
                                    <tr>
                                        <td colspan="7" class="text-end text-warning">IGST:</td>
                                        <td class="text-end pe-4 text-warning">₹@Model.Invoice.IgstAmount.ToString("N2")</td>
                                    </tr>
                                }
                                else
                                {
                                    @if (Model.Invoice.CgstAmount > 0)
                                    {
                                        <tr>
                                            <td colspan="7" class="text-end text-success">CGST:</td>
                                            <td class="text-end pe-4 text-success">₹@Model.Invoice.CgstAmount.ToString("N2")</td>
                                        </tr>
                                    }
                                    @if (Model.Invoice.SgstAmount > 0)
                                    {
                                        <tr>
                                            <td colspan="7" class="text-end text-info">SGST:</td>
                                            <td class="text-end pe-4 text-info">₹@Model.Invoice.SgstAmount.ToString("N2")</td>
                                        </tr>
                                    }
                                }
                                @if (Model.Invoice.TaxAmount > 0 && Model.Invoice.CgstAmount == 0 && Model.Invoice.SgstAmount == 0 && Model.Invoice.IgstAmount == 0)
                                {
                                    <tr>
                                        <td colspan="7" class="text-end">Tax:</td>
                                        <td class="text-end pe-4">₹@Model.Invoice.TaxAmount.ToString("N2")</td>
                                    </tr>
                                }
                                <tr class="fw-bold fs-5">
                                    <td colspan="7" class="text-end">Total:</td>
                                    <td class="text-end pe-4">₹@Model.Invoice.TotalAmount.ToString("N2")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Payment History Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="bi bi-cash-stack me-2"></i>Payment History</h5>
                        @if (Model.Invoice.Status != InvoiceStatus.Paid && Model.Invoice.Status != InvoiceStatus.Void)
                        {
                            <button type="button" class="btn btn-sm btn-outline-success" data-modal-target="paymentModal" data-modal-toggle="paymentModal">
                                <i class="bi bi-plus-lg me-1"></i>Record Payment
                            </button>
                        }
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (Model.Payments.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="ps-4">Payment #</th>
                                        <th>Date</th>
                                        <th>Method</th>
                                        <th>Reference</th>
                                        <th class="text-end">Amount</th>
                                        <th class="text-end pe-4"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payment in Model.Payments)
                                    {
                                        <tr>
                                            <td class="ps-4 fw-medium">@payment.PaymentNumber</td>
                                            <td>@payment.PaymentDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                <span class="badge bg-light text-dark">@payment.PaymentMethod</span>
                                            </td>
                                            <td>@(payment.Reference ?? "-")</td>
                                            <td class="text-end fw-medium text-success">@payment.Amount.ToString("C2")</td>
                                            <td class="text-end pe-4">
                                                <form method="post" asp-page-handler="DeletePayment" asp-route-id="@Model.Invoice.Id" asp-route-paymentId="@payment.Id" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete this payment?')">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 text-muted">
                            <i class="bi bi-cash fs-1 d-block mb-3"></i>
                            <p class="mb-0">No payments recorded yet</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Notes Card -->
            @if (!string.IsNullOrEmpty(Model.Invoice.Notes) || !string.IsNullOrEmpty(Model.Invoice.InternalNotes))
            {
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0"><i class="bi bi-chat-left-text me-2"></i>Notes</h5>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model.Invoice.Notes))
                        {
                            <div class="mb-3">
                                <h6 class="text-muted small text-uppercase">Customer Notes</h6>
                                <p class="mb-0">@Model.Invoice.Notes</p>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Invoice.InternalNotes))
                        {
                            <div>
                                <h6 class="text-muted small text-uppercase">Internal Notes</h6>
                                <p class="mb-0 text-muted">@Model.Invoice.InternalNotes</p>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Payment Summary Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="bi bi-wallet2 me-2"></i>Payment Summary</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Invoice Total</span>
                        <span class="fw-medium">₹@Model.Invoice.TotalAmount.ToString("N2")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Amount Paid</span>
                        <span class="text-success">₹@Model.Invoice.PaidAmount.ToString("N2")</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <span class="fw-bold">Balance Due</span>
                        <span class="fw-bold fs-4 @(Model.Invoice.BalanceDue > 0 ? "text-danger" : "text-success")">
                            ₹@Model.Invoice.BalanceDue.ToString("N2")
                        </span>
                    </div>

                    @if (Model.Invoice.BalanceDue > 0)
                    {
                        <!-- Progress bar -->
                        <div class="mt-3">
                            @{
                                var paidPercent = Model.Invoice.TotalAmount > 0
                                    ? (Model.Invoice.PaidAmount / Model.Invoice.TotalAmount) * 100
                                    : 0;
                            }
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar bg-success" role="progressbar"
                                     style="width: @paidPercent.ToString("0")%"></div>
                            </div>
                            <small class="text-muted">@paidPercent.ToString("0")% paid</small>
                        </div>
                    }
                </div>
            </div>

            <!-- Timeline Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Timeline</h5>
                </div>
                <div class="card-body">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <p class="mb-0 fw-medium">Invoice Created</p>
                                <small class="text-muted">@Model.Invoice.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
                            </div>
                        </div>
                        @if (Model.Invoice.SentAt.HasValue)
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-info"></div>
                                <div class="timeline-content">
                                    <p class="mb-0 fw-medium">Invoice Sent</p>
                                    <small class="text-muted">@Model.Invoice.SentAt.Value.ToString("MMM dd, yyyy HH:mm")</small>
                                </div>
                            </div>
                        }
                        @foreach (var payment in Model.Payments.OrderBy(p => p.PaymentDate))
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-success"></div>
                                <div class="timeline-content">
                                    <p class="mb-0 fw-medium">Payment Received - @payment.Amount.ToString("C2")</p>
                                    <small class="text-muted">@payment.PaymentDate.ToString("MMM dd, yyyy")</small>
                                </div>
                            </div>
                        }
                        @if (Model.Invoice.PaidDate.HasValue)
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-success"></div>
                                <div class="timeline-content">
                                    <p class="mb-0 fw-medium">Fully Paid</p>
                                    <small class="text-muted">@Model.Invoice.PaidDate.Value.ToString("MMM dd, yyyy HH:mm")</small>
                                </div>
                            </div>
                        }
                        @if (Model.Invoice.Status == InvoiceStatus.Void)
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-dark"></div>
                                <div class="timeline-content">
                                    <p class="mb-0 fw-medium">Invoice Voided</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Quick Actions Card -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/Finance/Invoices/Create?customerId=@Model.Invoice.CustomerId" class="btn btn-outline-primary">
                            <i class="bi bi-plus-lg me-2"></i>New Invoice for Customer
                        </a>
                        <a href="/Finance/Invoices" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to Invoices
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Record Payment Modal -->
<div class="modal fade" id="paymentModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-page-handler="RecordPayment">
                <input type="hidden" name="PaymentInput.InvoiceId" value="@Model.Invoice.Id" />
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-cash me-2"></i>Record Payment</h5>
                    <button type="button" class="btn-close" data-modal-hide="paymentModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Payment Date <span class="text-danger">*</span></label>
                        <input type="date" class="form-control" name="PaymentInput.PaymentDate"
                               value="@DateTime.Today.ToString("yyyy-MM-dd")" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Amount <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input type="number" class="form-control" name="PaymentInput.Amount"
                                   value="@Model.Invoice.BalanceDue" min="0.01" step="0.01" required>
                        </div>
                        <small class="text-muted">Balance due: @Model.Invoice.BalanceDue.ToString("C2")</small>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Payment Method</label>
                        <select class="form-select" name="PaymentInput.PaymentMethod">
                            @foreach (var method in Enum.GetValues<PaymentMethod>())
                            {
                                <option value="@method">@method</option>
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Reference</label>
                        <input type="text" class="form-control" name="PaymentInput.Reference"
                               placeholder="Check #, Transaction ID, etc.">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Notes</label>
                        <textarea class="form-control" name="PaymentInput.Notes" rows="2"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-modal-hide="paymentModal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-lg me-1"></i>Record Payment
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Email Invoice Modal -->
<div class="modal fade" id="emailModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form method="post" asp-page-handler="SendEmail">
                <input type="hidden" name="EmailInput.InvoiceId" value="@Model.Invoice.Id" />
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-envelope me-2"></i>Email Invoice to Customer</h5>
                    <button type="button" class="btn-close" data-modal-hide="emailModal"></button>
                </div>
                <div class="modal-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">To <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" name="EmailInput.To"
                                   value="@Model.EmailInput.To" required placeholder="customer@example.com">
                            @if (Model.Invoice.Customer != null && !string.IsNullOrEmpty(Model.Invoice.Customer.Email))
                            {
                                <small class="text-muted">Customer email: @Model.Invoice.Customer.Email</small>
                            }
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">CC</label>
                            <input type="email" class="form-control" name="EmailInput.Cc"
                                   placeholder="copy@example.com">
                        </div>
                        <div class="col-12">
                            <label class="form-label">Subject <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="EmailInput.Subject"
                                   value="@Model.EmailInput.Subject" required>
                        </div>
                        <div class="col-12">
                            <label class="form-label">Message <span class="text-danger">*</span></label>
                            <textarea class="form-control" name="EmailInput.Message" rows="10" required>@Model.EmailInput.Message</textarea>
                        </div>
                        <div class="col-12">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="EmailInput.AttachPdf"
                                       value="true" id="attachPdf" checked>
                                <label class="form-check-label" for="attachPdf">
                                    <i class="bi bi-file-pdf me-1"></i>Attach invoice PDF
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="alert alert-info mt-3 mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Note:</strong> This will send the invoice to the specified email address.
                        @if (Model.Invoice.Status == Domain.Entities.Finance.InvoiceStatus.Draft)
                        {
                            <text>The invoice status will be updated to "Sent".</text>
                        }
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-modal-hide="emailModal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-send me-1"></i>Send Email
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

