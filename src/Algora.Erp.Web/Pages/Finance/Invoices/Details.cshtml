@page "{id:guid}"
@model Algora.Erp.Web.Pages.Finance.Invoices.DetailsModel
@using Algora.Erp.Domain.Entities.Finance
@{
    ViewData["Title"] = $"Invoice {Model.Invoice.InvoiceNumber}";

    var statusBadgeClass = Model.Invoice.Status switch
    {
        InvoiceStatus.Draft => "bg-gray-100 text-gray-800",
        InvoiceStatus.Pending => "bg-amber-100 text-amber-800",
        InvoiceStatus.Sent => "bg-blue-100 text-blue-800",
        InvoiceStatus.PartiallyPaid => "bg-primary-100 text-primary-800",
        InvoiceStatus.Paid => "bg-emerald-100 text-emerald-800",
        InvoiceStatus.Overdue => "bg-red-100 text-red-800",
        InvoiceStatus.Void => "bg-gray-700 text-white",
        InvoiceStatus.Cancelled => "bg-gray-100 text-gray-800",
        _ => "bg-gray-100 text-gray-800"
    };

    var isOverdue = Model.Invoice.DueDate < DateTime.UtcNow &&
        Model.Invoice.Status != InvoiceStatus.Paid &&
        Model.Invoice.Status != InvoiceStatus.Void &&
        Model.Invoice.Status != InvoiceStatus.Cancelled;
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <div class="flex items-center gap-3">
                <h1 class="text-2xl font-bold text-gray-900">@Model.Invoice.InvoiceNumber</h1>
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @statusBadgeClass">@Model.Invoice.Status</span>
                @if (isOverdue && Model.Invoice.Status != InvoiceStatus.Overdue)
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-red-100 text-red-800">Overdue</span>
                }
            </div>
            <nav class="flex mt-1" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 text-sm text-gray-500">
                    <li><a href="/" class="hover:text-primary-600">Dashboard</a></li>
                    <li><span class="mx-1">/</span></li>
                    <li><a href="/Finance" class="hover:text-primary-600">Finance</a></li>
                    <li><span class="mx-1">/</span></li>
                    <li><a href="/Finance/Invoices" class="hover:text-primary-600">Invoices</a></li>
                    <li><span class="mx-1">/</span></li>
                    <li class="text-gray-900 font-medium">@Model.Invoice.InvoiceNumber</li>
                </ol>
            </nav>
        </div>
        <div class="flex gap-2">
            @if (Model.Invoice.Status == InvoiceStatus.Draft)
            {
                <a href="/Finance/Invoices/Edit/@Model.Invoice.Id" class="text-primary-700 border border-primary-700 hover:bg-primary-700 hover:text-white focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5">
                    <i class="bi bi-pencil mr-1"></i> Edit
                </a>
                <form method="post" asp-page-handler="Send" asp-route-id="@Model.Invoice.Id" class="inline">
                    <button type="submit" class="text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5" onclick="return confirm('Send this invoice?')">
                        <i class="bi bi-send mr-1"></i> Send
                    </button>
                </form>
            }
            @if (Model.Invoice.Status != InvoiceStatus.Paid && Model.Invoice.Status != InvoiceStatus.Void)
            {
                <button type="button" class="text-white bg-emerald-600 hover:bg-emerald-700 focus:ring-4 focus:ring-emerald-300 font-medium rounded-lg text-sm px-5 py-2.5" data-modal-target="paymentModal" data-modal-toggle="paymentModal">
                    <i class="bi bi-cash mr-1"></i> Record Payment
                </button>
            }
            <div class="relative">
                <button class="text-gray-700 border border-gray-700 hover:bg-gray-700 hover:text-white focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5" type="button" id="dropdownActions" data-dropdown-toggle="dropdownMenuActions">
                    <i class="bi bi-three-dots"></i>
                </button>
                <div class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuActions">
                    <ul class="py-2 text-sm text-gray-700">
                        <li>
                            <a class="block px-4 py-2 hover:bg-gray-100" href="/Finance/Invoices/Print/@Model.Invoice.Id" target="_blank">
                                <i class="bi bi-printer mr-2"></i> Print
                            </a>
                        </li>
                        <li>
                            <a class="block px-4 py-2 hover:bg-gray-100" href="/Finance/Invoices/Download/@Model.Invoice.Id">
                                <i class="bi bi-download mr-2"></i> Download PDF
                            </a>
                        </li>
                        <li>
                            <a class="block px-4 py-2 hover:bg-gray-100" href="#" data-modal-target="emailModal" data-modal-toggle="emailModal">
                                <i class="bi bi-envelope mr-2"></i> Email to Customer
                            </a>
                        </li>
                        @if (Model.Invoice.Status != InvoiceStatus.Paid && Model.Invoice.Status != InvoiceStatus.Void)
                        {
                            <li class="border-t border-gray-100">
                                <form method="post" asp-page-handler="MarkPaid" asp-route-id="@Model.Invoice.Id">
                                    <button type="submit" class="block w-full text-left px-4 py-2 hover:bg-gray-100" onclick="return confirm('Mark as fully paid?')">
                                        <i class="bi bi-check-circle mr-2"></i> Mark as Paid
                                    </button>
                                </form>
                            </li>
                        }
                        @if (Model.Invoice.Status != InvoiceStatus.Void)
                        {
                            <li>
                                <form method="post" asp-page-handler="Void" asp-route-id="@Model.Invoice.Id">
                                    <button type="submit" class="block w-full text-left px-4 py-2 hover:bg-gray-100 text-red-600" onclick="return confirm('Void this invoice? This cannot be undone.')">
                                        <i class="bi bi-x-circle mr-2"></i> Void Invoice
                                    </button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="p-4 mb-4 text-sm text-emerald-800 rounded-lg bg-emerald-50 flex items-center" role="alert">
            <i class="bi bi-check-circle mr-2"></i>@TempData["Success"]
            <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-emerald-50 text-emerald-500 rounded-lg p-1.5 hover:bg-emerald-200 inline-flex items-center justify-center h-8 w-8" onclick="this.parentElement.remove()">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 flex items-center" role="alert">
            <i class="bi bi-exclamation-circle mr-2"></i>@TempData["Error"]
            <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-red-50 text-red-500 rounded-lg p-1.5 hover:bg-red-200 inline-flex items-center justify-center h-8 w-8" onclick="this.parentElement.remove()">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
    }

    <div class="grid grid-cols-12 gap-6">
        <!-- Main Content -->
        <div class="col-span-12 lg:col-span-8 space-y-6">
            <!-- Invoice Info Card -->
            <div class="bg-white rounded-lg shadow-md">
                <div class="p-6">
                    <div class="grid grid-cols-12 gap-6">
                        <div class="col-span-12 md:col-span-6">
                            <h6 class="text-gray-500 uppercase text-xs font-medium mb-3">Bill To</h6>
                            @if (Model.Invoice.Customer != null)
                            {
                                <h5 class="text-lg font-semibold text-gray-900 mb-1">@Model.Invoice.Customer.Name</h5>
                                <p class="text-gray-500 mb-0">
                                    @if (!string.IsNullOrEmpty(Model.Invoice.BillingAddress))
                                    {
                                        @Model.Invoice.BillingAddress<br />
                                    }
                                    @if (!string.IsNullOrEmpty(Model.Invoice.BillingCity))
                                    {
                                        @Model.Invoice.BillingCity@(string.IsNullOrEmpty(Model.Invoice.BillingState) ? "" : ", " + Model.Invoice.BillingState)
                                        @Model.Invoice.BillingPostalCode<br />
                                    }
                                    @Model.Invoice.BillingCountry
                                </p>
                                @if (!string.IsNullOrEmpty(Model.Invoice.Customer.Email))
                                {
                                    <p class="mb-0 mt-2">
                                        <i class="bi bi-envelope mr-1"></i> @Model.Invoice.Customer.Email
                                    </p>
                                }
                            }
                            else
                            {
                                <p class="text-gray-500">@Model.Invoice.BillingName</p>
                            }
                        </div>
                        <div class="col-span-12 md:col-span-6 md:text-right">
                            <h6 class="text-gray-500 uppercase text-xs font-medium mb-3">Invoice Details</h6>
                            <table class="text-sm w-auto ml-auto">
                                <tr>
                                    <td class="text-gray-500 pr-3 py-1">Invoice Number:</td>
                                    <td class="font-medium text-right">@Model.Invoice.InvoiceNumber</td>
                                </tr>
                                <tr>
                                    <td class="text-gray-500 pr-3 py-1">Invoice Date:</td>
                                    <td class="text-right">@Model.Invoice.InvoiceDate.ToString("MMM dd, yyyy")</td>
                                </tr>
                                <tr>
                                    <td class="text-gray-500 pr-3 py-1">Due Date:</td>
                                    <td class="text-right @(isOverdue ? "text-red-600 font-medium" : "")">
                                        @Model.Invoice.DueDate.ToString("MMM dd, yyyy")
                                        @if (isOverdue)
                                        {
                                            <i class="bi bi-exclamation-circle ml-1"></i>
                                        }
                                    </td>
                                </tr>
                                @if (!string.IsNullOrEmpty(Model.Invoice.PaymentTerms))
                                {
                                    <tr>
                                        <td class="text-gray-500 pr-3 py-1">Payment Terms:</td>
                                        <td class="text-right">@Model.Invoice.PaymentTerms</td>
                                    </tr>
                                }
                                @if (!string.IsNullOrEmpty(Model.Invoice.Reference))
                                {
                                    <tr>
                                        <td class="text-gray-500 pr-3 py-1">Reference:</td>
                                        <td class="text-right">@Model.Invoice.Reference</td>
                                    </tr>
                                }
                                @if (Model.Invoice.SalesOrder != null)
                                {
                                    <tr>
                                        <td class="text-gray-500 pr-3 py-1">Sales Order:</td>
                                        <td class="text-right">
                                            <a href="/Sales/Orders/Details/@Model.Invoice.SalesOrderId" class="text-primary-600 hover:underline">
                                                @Model.Invoice.SalesOrder.OrderNumber
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <!-- GST Details Card -->
            @if (Model.Invoice.FromLocation != null || !string.IsNullOrEmpty(Model.Invoice.CustomerGstin))
            {
                <div class="bg-white rounded-lg shadow-md">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h5 class="text-lg font-semibold text-gray-900"><i class="bi bi-percent mr-2"></i>GST Details</h5>
                    </div>
                    <div class="p-6">
                        <div class="grid grid-cols-12 gap-6">
                            <div class="col-span-12 md:col-span-6">
                                @if (Model.Invoice.FromLocation != null)
                                {
                                    <div class="mb-3">
                                        <h6 class="text-gray-500 uppercase text-xs font-medium mb-2">From Location</h6>
                                        <p class="mb-1 font-medium">@Model.Invoice.FromLocation.Name</p>
                                        <p class="text-gray-500 mb-0">
                                            @Model.Invoice.FromLocation.AddressLine1<br />
                                            @Model.Invoice.FromLocation.City, @Model.Invoice.FromLocation.State?.Name @Model.Invoice.FromLocation.PostalCode<br />
                                            @if (!string.IsNullOrEmpty(Model.Invoice.FromLocation.GstNumber))
                                            {
                                                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800 mt-1 inline-block">GSTIN: @Model.Invoice.FromLocation.GstNumber</span>
                                            }
                                        </p>
                                    </div>
                                }
                            </div>
                            <div class="col-span-12 md:col-span-6">
                                <div class="mb-3">
                                    <h6 class="text-gray-500 uppercase text-xs font-medium mb-2">Customer GST Info</h6>
                                    @if (!string.IsNullOrEmpty(Model.Invoice.CustomerGstin))
                                    {
                                        <p class="mb-1">
                                            <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-primary-100 text-primary-800">GSTIN: @Model.Invoice.CustomerGstin</span>
                                        </p>
                                    }
                                    @if (!string.IsNullOrEmpty(Model.Invoice.CustomerStateCode))
                                    {
                                        <p class="mb-1">State Code: @Model.Invoice.CustomerStateCode</p>
                                    }
                                    <p class="mb-0">
                                        @if (Model.Invoice.IsInterState)
                                        {
                                            <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-amber-100 text-amber-800">
                                                <i class="bi bi-arrow-left-right mr-1"></i>Inter-State (IGST)
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-emerald-100 text-emerald-800">
                                                <i class="bi bi-geo-alt mr-1"></i>Intra-State (CGST + SGST)
                                            </span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Line Items Card -->
            <div class="bg-white rounded-lg shadow-md">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h5 class="text-lg font-semibold text-gray-900"><i class="bi bi-list-ul mr-2"></i>Line Items</h5>
                </div>
                <div class="p-0">
                    <div class="overflow-x-auto">
                        <table class="w-full text-sm text-left text-gray-500 [&>tbody>tr]:hover:bg-gray-100">
                            <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                                <tr>
                                    <th scope="col" class="px-6 py-3">#</th>
                                    <th scope="col" class="px-6 py-3">Description</th>
                                    <th scope="col" class="px-6 py-3 text-center">Qty</th>
                                    <th scope="col" class="px-6 py-3 text-right">Unit Price</th>
                                    <th scope="col" class="px-6 py-3 text-center">Disc %</th>
                                    <th scope="col" class="px-6 py-3">GST</th>
                                    <th scope="col" class="px-6 py-3">HSN</th>
                                    <th scope="col" class="px-6 py-3 text-right">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var line in Model.Invoice.Lines.OrderBy(l => l.LineNumber))
                                {
                                    <tr class="bg-white border-b">
                                        <td class="px-6 py-4 text-gray-500">@line.LineNumber</td>
                                        <td class="px-6 py-4">
                                            <span class="font-medium text-gray-900">@line.Description</span>
                                            @if (!string.IsNullOrEmpty(line.ProductCode))
                                            {
                                                <br /><small class="text-gray-500">SKU: @line.ProductCode</small>
                                            }
                                        </td>
                                        <td class="px-6 py-4 text-center">@line.Quantity</td>
                                        <td class="px-6 py-4 text-right">₹@line.UnitPrice.ToString("N2")</td>
                                        <td class="px-6 py-4 text-center">
                                            @if (line.DiscountPercent > 0)
                                            {
                                                @line.DiscountPercent.ToString("0.##")@:%
                                            }
                                            else
                                            {
                                                <span class="text-gray-400">-</span>
                                            }
                                        </td>
                                        <td class="px-6 py-4">
                                            @if (line.GstSlab != null)
                                            {
                                                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">@line.GstSlab.Name</span>
                                            }
                                            else if (line.TaxPercent > 0)
                                            {
                                                <span class="text-gray-500">@line.TaxPercent.ToString("0.##")%</span>
                                            }
                                            else
                                            {
                                                <span class="text-gray-400">-</span>
                                            }
                                        </td>
                                        <td class="px-6 py-4">
                                            @if (!string.IsNullOrEmpty(line.HsnCode))
                                            {
                                                <code class="bg-gray-100 px-1 rounded">@line.HsnCode</code>
                                            }
                                            else
                                            {
                                                <span class="text-gray-400">-</span>
                                            }
                                        </td>
                                        <td class="px-6 py-4 text-right font-medium">₹@line.LineTotal.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot class="bg-gray-50">
                                <tr>
                                    <td colspan="7" class="px-6 py-3 text-right">Subtotal:</td>
                                    <td class="px-6 py-3 text-right">₹@Model.Invoice.SubTotal.ToString("N2")</td>
                                </tr>
                                @if (Model.Invoice.DiscountAmount > 0)
                                {
                                    <tr>
                                        <td colspan="7" class="px-6 py-3 text-right text-red-600">Discount:</td>
                                        <td class="px-6 py-3 text-right text-red-600">-₹@Model.Invoice.DiscountAmount.ToString("N2")</td>
                                    </tr>
                                }
                                @if (Model.Invoice.IsInterState)
                                {
                                    <tr>
                                        <td colspan="7" class="px-6 py-3 text-right text-amber-600">IGST:</td>
                                        <td class="px-6 py-3 text-right text-amber-600">₹@Model.Invoice.IgstAmount.ToString("N2")</td>
                                    </tr>
                                }
                                else
                                {
                                    @if (Model.Invoice.CgstAmount > 0)
                                    {
                                        <tr>
                                            <td colspan="7" class="px-6 py-3 text-right text-emerald-600">CGST:</td>
                                            <td class="px-6 py-3 text-right text-emerald-600">₹@Model.Invoice.CgstAmount.ToString("N2")</td>
                                        </tr>
                                    }
                                    @if (Model.Invoice.SgstAmount > 0)
                                    {
                                        <tr>
                                            <td colspan="7" class="px-6 py-3 text-right text-blue-600">SGST:</td>
                                            <td class="px-6 py-3 text-right text-blue-600">₹@Model.Invoice.SgstAmount.ToString("N2")</td>
                                        </tr>
                                    }
                                }
                                @if (Model.Invoice.TaxAmount > 0 && Model.Invoice.CgstAmount == 0 && Model.Invoice.SgstAmount == 0 && Model.Invoice.IgstAmount == 0)
                                {
                                    <tr>
                                        <td colspan="7" class="px-6 py-3 text-right">Tax:</td>
                                        <td class="px-6 py-3 text-right">₹@Model.Invoice.TaxAmount.ToString("N2")</td>
                                    </tr>
                                }
                                <tr class="font-bold text-lg">
                                    <td colspan="7" class="px-6 py-3 text-right">Total:</td>
                                    <td class="px-6 py-3 text-right">₹@Model.Invoice.TotalAmount.ToString("N2")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Payment History Card -->
            <div class="bg-white rounded-lg shadow-md">
                <div class="px-6 py-4 border-b border-gray-200">
                    <div class="flex justify-between items-center">
                        <h5 class="text-lg font-semibold text-gray-900"><i class="bi bi-cash-stack mr-2"></i>Payment History</h5>
                        @if (Model.Invoice.Status != InvoiceStatus.Paid && Model.Invoice.Status != InvoiceStatus.Void)
                        {
                            <button type="button" class="text-emerald-700 border border-emerald-700 hover:bg-emerald-700 hover:text-white focus:ring-4 focus:ring-emerald-300 font-medium rounded-lg text-xs px-3 py-2" data-modal-target="paymentModal" data-modal-toggle="paymentModal">
                                <i class="bi bi-plus-lg mr-1"></i>Record Payment
                            </button>
                        }
                    </div>
                </div>
                <div class="p-0">
                    @if (Model.Payments.Any())
                    {
                        <div class="overflow-x-auto">
                            <table class="w-full text-sm text-left text-gray-500 [&>tbody>tr]:hover:bg-gray-100">
                                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                                    <tr>
                                        <th scope="col" class="px-6 py-3">Payment #</th>
                                        <th scope="col" class="px-6 py-3">Date</th>
                                        <th scope="col" class="px-6 py-3">Method</th>
                                        <th scope="col" class="px-6 py-3">Reference</th>
                                        <th scope="col" class="px-6 py-3 text-right">Amount</th>
                                        <th scope="col" class="px-6 py-3 text-right"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payment in Model.Payments)
                                    {
                                        <tr class="bg-white border-b">
                                            <td class="px-6 py-4 font-medium">@payment.PaymentNumber</td>
                                            <td class="px-6 py-4">@payment.PaymentDate.ToString("MMM dd, yyyy")</td>
                                            <td class="px-6 py-4">
                                                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">@payment.PaymentMethod</span>
                                            </td>
                                            <td class="px-6 py-4">@(payment.Reference ?? "-")</td>
                                            <td class="px-6 py-4 text-right font-medium text-emerald-600">@payment.Amount.ToString("C2")</td>
                                            <td class="px-6 py-4 text-right">
                                                <form method="post" asp-page-handler="DeletePayment" asp-route-id="@Model.Invoice.Id" asp-route-paymentId="@payment.Id" class="inline">
                                                    <button type="submit" class="text-red-700 border border-red-700 hover:bg-red-700 hover:text-white focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-xs px-3 py-2" onclick="return confirm('Delete this payment?')">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-12 text-gray-500">
                            <i class="bi bi-cash text-4xl block mb-3"></i>
                            <p class="mb-0">No payments recorded yet</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Notes Card -->
            @if (!string.IsNullOrEmpty(Model.Invoice.Notes) || !string.IsNullOrEmpty(Model.Invoice.InternalNotes))
            {
                <div class="bg-white rounded-lg shadow-md">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h5 class="text-lg font-semibold text-gray-900"><i class="bi bi-chat-left-text mr-2"></i>Notes</h5>
                    </div>
                    <div class="p-6">
                        @if (!string.IsNullOrEmpty(Model.Invoice.Notes))
                        {
                            <div class="mb-4">
                                <h6 class="text-gray-500 uppercase text-xs font-medium mb-2">Customer Notes</h6>
                                <p class="mb-0">@Model.Invoice.Notes</p>
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.Invoice.InternalNotes))
                        {
                            <div>
                                <h6 class="text-gray-500 uppercase text-xs font-medium mb-2">Internal Notes</h6>
                                <p class="mb-0 text-gray-500">@Model.Invoice.InternalNotes</p>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>

        <!-- Sidebar -->
        <div class="col-span-12 lg:col-span-4 space-y-6">
            <!-- Payment Summary Card -->
            <div class="bg-white rounded-lg shadow-md">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h5 class="text-lg font-semibold text-gray-900"><i class="bi bi-wallet2 mr-2"></i>Payment Summary</h5>
                </div>
                <div class="p-6">
                    <div class="flex justify-between mb-2">
                        <span class="text-gray-500">Invoice Total</span>
                        <span class="font-medium">₹@Model.Invoice.TotalAmount.ToString("N2")</span>
                    </div>
                    <div class="flex justify-between mb-2">
                        <span class="text-gray-500">Amount Paid</span>
                        <span class="text-emerald-600">₹@Model.Invoice.PaidAmount.ToString("N2")</span>
                    </div>
                    <hr class="my-4 border-gray-200">
                    <div class="flex justify-between">
                        <span class="font-bold">Balance Due</span>
                        <span class="font-bold text-2xl @(Model.Invoice.BalanceDue > 0 ? "text-red-600" : "text-emerald-600")">
                            ₹@Model.Invoice.BalanceDue.ToString("N2")
                        </span>
                    </div>

                    @if (Model.Invoice.BalanceDue > 0)
                    {
                        <!-- Progress bar -->
                        <div class="mt-4">
                            @{
                                var paidPercent = Model.Invoice.TotalAmount > 0
                                    ? (Model.Invoice.PaidAmount / Model.Invoice.TotalAmount) * 100
                                    : 0;
                            }
                            <div class="w-full bg-gray-200 rounded-full h-2">
                                <div class="bg-emerald-500 h-2 rounded-full" style="width: @paidPercent.ToString("0")%"></div>
                            </div>
                            <small class="text-gray-500">@paidPercent.ToString("0")% paid</small>
                        </div>
                    }
                </div>
            </div>

            <!-- Timeline Card -->
            <div class="bg-white rounded-lg shadow-md">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h5 class="text-lg font-semibold text-gray-900"><i class="bi bi-clock-history mr-2"></i>Timeline</h5>
                </div>
                <div class="p-6">
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary-500"></div>
                            <div class="timeline-content">
                                <p class="mb-0 font-medium">Invoice Created</p>
                                <small class="text-gray-500">@Model.Invoice.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
                            </div>
                        </div>
                        @if (Model.Invoice.SentAt.HasValue)
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-blue-500"></div>
                                <div class="timeline-content">
                                    <p class="mb-0 font-medium">Invoice Sent</p>
                                    <small class="text-gray-500">@Model.Invoice.SentAt.Value.ToString("MMM dd, yyyy HH:mm")</small>
                                </div>
                            </div>
                        }
                        @foreach (var payment in Model.Payments.OrderBy(p => p.PaymentDate))
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-emerald-500"></div>
                                <div class="timeline-content">
                                    <p class="mb-0 font-medium">Payment Received - @payment.Amount.ToString("C2")</p>
                                    <small class="text-gray-500">@payment.PaymentDate.ToString("MMM dd, yyyy")</small>
                                </div>
                            </div>
                        }
                        @if (Model.Invoice.PaidDate.HasValue)
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-emerald-500"></div>
                                <div class="timeline-content">
                                    <p class="mb-0 font-medium">Fully Paid</p>
                                    <small class="text-gray-500">@Model.Invoice.PaidDate.Value.ToString("MMM dd, yyyy HH:mm")</small>
                                </div>
                            </div>
                        }
                        @if (Model.Invoice.Status == InvoiceStatus.Void)
                        {
                            <div class="timeline-item">
                                <div class="timeline-marker bg-gray-800"></div>
                                <div class="timeline-content">
                                    <p class="mb-0 font-medium">Invoice Voided</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Quick Actions Card -->
            <div class="bg-white rounded-lg shadow-md">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h5 class="text-lg font-semibold text-gray-900"><i class="bi bi-lightning mr-2"></i>Quick Actions</h5>
                </div>
                <div class="p-6 space-y-2">
                    <a href="/Finance/Invoices/Create?customerId=@Model.Invoice.CustomerId" class="w-full block text-center text-primary-700 border border-primary-700 hover:bg-primary-700 hover:text-white focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5">
                        <i class="bi bi-plus-lg mr-2"></i>New Invoice for Customer
                    </a>
                    <a href="/Finance/Invoices" class="w-full block text-center text-gray-700 border border-gray-700 hover:bg-gray-700 hover:text-white focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5">
                        <i class="bi bi-arrow-left mr-2"></i>Back to Invoices
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Record Payment Modal -->
<div id="paymentModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-lg shadow">
            <form method="post" asp-page-handler="RecordPayment">
                <input type="hidden" name="PaymentInput.InvoiceId" value="@Model.Invoice.Id" />
                <div class="flex items-center justify-between p-4 border-b rounded-t">
                    <h3 class="text-xl font-semibold text-gray-900"><i class="bi bi-cash mr-2"></i>Record Payment</h3>
                    <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" onclick="closeModal('paymentModal')">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>
                <div class="p-6 space-y-4">
                    <div>
                        <label class="block mb-2 text-sm font-medium text-gray-900">Payment Date <span class="text-red-600">*</span></label>
                        <input type="date" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="PaymentInput.PaymentDate"
                               value="@DateTime.Today.ToString("yyyy-MM-dd")" required>
                    </div>
                    <div>
                        <label class="block mb-2 text-sm font-medium text-gray-900">Amount <span class="text-red-600">*</span></label>
                        <div class="relative">
                            <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                                <span class="text-gray-500">$</span>
                            </div>
                            <input type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full ps-8 p-2.5" name="PaymentInput.Amount"
                                   value="@Model.Invoice.BalanceDue" min="0.01" step="0.01" required>
                        </div>
                        <small class="text-gray-500">Balance due: @Model.Invoice.BalanceDue.ToString("C2")</small>
                    </div>
                    <div>
                        <label class="block mb-2 text-sm font-medium text-gray-900">Payment Method</label>
                        <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="PaymentInput.PaymentMethod">
                            @foreach (var method in Enum.GetValues<PaymentMethod>())
                            {
                                <option value="@method">@method</option>
                            }
                        </select>
                    </div>
                    <div>
                        <label class="block mb-2 text-sm font-medium text-gray-900">Reference</label>
                        <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="PaymentInput.Reference"
                               placeholder="Check #, Transaction ID, etc.">
                    </div>
                    <div>
                        <label class="block mb-2 text-sm font-medium text-gray-900">Notes</label>
                        <textarea class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="PaymentInput.Notes" rows="2"></textarea>
                    </div>
                </div>
                <div class="flex items-center p-4 border-t border-gray-200 rounded-b gap-2">
                    <button type="button" class="text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5" onclick="closeModal('paymentModal')">Cancel</button>
                    <button type="submit" class="text-white bg-emerald-600 hover:bg-emerald-700 focus:ring-4 focus:ring-emerald-300 font-medium rounded-lg text-sm px-5 py-2.5">
                        <i class="bi bi-check-lg mr-1"></i>Record Payment
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Email Invoice Modal -->
<div id="emailModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-2xl max-h-full">
        <div class="relative bg-white rounded-lg shadow">
            <form method="post" asp-page-handler="SendEmail">
                <input type="hidden" name="EmailInput.InvoiceId" value="@Model.Invoice.Id" />
                <div class="flex items-center justify-between p-4 border-b rounded-t">
                    <h3 class="text-xl font-semibold text-gray-900"><i class="bi bi-envelope mr-2"></i>Email Invoice to Customer</h3>
                    <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" onclick="closeModal('emailModal')">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>
                <div class="p-6 space-y-4">
                    <div class="grid grid-cols-12 gap-4">
                        <div class="col-span-6">
                            <label class="block mb-2 text-sm font-medium text-gray-900">To <span class="text-red-600">*</span></label>
                            <input type="email" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="EmailInput.To"
                                   value="@Model.EmailInput.To" required placeholder="customer@example.com">
                            @if (Model.Invoice.Customer != null && !string.IsNullOrEmpty(Model.Invoice.Customer.Email))
                            {
                                <small class="text-gray-500">Customer email: @Model.Invoice.Customer.Email</small>
                            }
                        </div>
                        <div class="col-span-6">
                            <label class="block mb-2 text-sm font-medium text-gray-900">CC</label>
                            <input type="email" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="EmailInput.Cc"
                                   placeholder="copy@example.com">
                        </div>
                        <div class="col-span-12">
                            <label class="block mb-2 text-sm font-medium text-gray-900">Subject <span class="text-red-600">*</span></label>
                            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="EmailInput.Subject"
                                   value="@Model.EmailInput.Subject" required>
                        </div>
                        <div class="col-span-12">
                            <label class="block mb-2 text-sm font-medium text-gray-900">Message <span class="text-red-600">*</span></label>
                            <textarea class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="EmailInput.Message" rows="10" required>@Model.EmailInput.Message</textarea>
                        </div>
                        <div class="col-span-12">
                            <div class="flex items-center">
                                <input class="w-4 h-4 text-primary-600 bg-gray-100 border-gray-300 rounded focus:ring-primary-500 focus:ring-2" type="checkbox" name="EmailInput.AttachPdf"
                                       value="true" id="attachPdf" checked>
                                <label class="ms-2 text-sm font-medium text-gray-900" for="attachPdf">
                                    <i class="bi bi-file-pdf mr-1"></i>Attach invoice PDF
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="p-4 text-sm text-blue-800 rounded-lg bg-blue-50 flex items-center">
                        <i class="bi bi-info-circle mr-2"></i>
                        <span>
                            <strong>Note:</strong> This will send the invoice to the specified email address.
                            @if (Model.Invoice.Status == Domain.Entities.Finance.InvoiceStatus.Draft)
                            {
                                <text>The invoice status will be updated to "Sent".</text>
                            }
                        </span>
                    </div>
                </div>
                <div class="flex items-center p-4 border-t border-gray-200 rounded-b gap-2">
                    <button type="button" class="text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5" onclick="closeModal('emailModal')">Cancel</button>
                    <button type="submit" class="text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5">
                        <i class="bi bi-send mr-1"></i>Send Email
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

