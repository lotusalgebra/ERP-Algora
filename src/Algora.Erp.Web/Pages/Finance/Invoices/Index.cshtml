@page
@model Algora.Erp.Web.Pages.Finance.Invoices.IndexModel
@using Algora.Erp.Domain.Entities.Finance
@{
    ViewData["Title"] = "Invoices";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Invoices</h1>
            <nav class="flex mt-1" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 text-sm text-gray-500">
                    <li><a href="/" class="hover:text-primary-600">Dashboard</a></li>
                    <li><span class="mx-1">/</span></li>
                    <li><a href="/Finance" class="hover:text-primary-600">Finance</a></li>
                    <li><span class="mx-1">/</span></li>
                    <li class="text-gray-900 font-medium">Invoices</li>
                </ol>
            </nav>
        </div>
        <a href="/Finance/Invoices/Create" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition-colors">
            <i class="bi bi-plus-lg me-2"></i> New Invoice
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-amber-100 rounded-lg">
                    <i class="bi bi-file-earmark-text text-xl text-amber-600"></i>
                </div>
                <div class="ms-4">
                    <p class="text-sm text-gray-500 mb-1">Draft</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.DraftInvoices</h3>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-blue-100 rounded-lg">
                    <i class="bi bi-send text-xl text-blue-600"></i>
                </div>
                <div class="ms-4">
                    <p class="text-sm text-gray-500 mb-1">Pending/Sent</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.PendingInvoices</h3>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-red-100 rounded-lg">
                    <i class="bi bi-exclamation-triangle text-xl text-red-600"></i>
                </div>
                <div class="ms-4">
                    <p class="text-sm text-gray-500 mb-1">Overdue</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.OverdueInvoices</h3>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-primary-100 rounded-lg">
                    <i class="bi bi-currency-dollar text-xl text-primary-600"></i>
                </div>
                <div class="ms-4">
                    <p class="text-sm text-gray-500 mb-1">Outstanding</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.TotalOutstanding.ToString("C0")</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Invoices Table -->
    <div class="bg-white rounded-xl shadow-sm">
        <div class="p-4 border-b border-gray-200">
            <div class="grid grid-cols-1 md:grid-cols-6 gap-3">
                <div class="md:col-span-2">
                    <div class="relative">
                        <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                            <i class="bi bi-search text-gray-400"></i>
                        </div>
                        <input type="text"
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full ps-10 p-2.5"
                               placeholder="Search invoices..."
                               id="searchInput"
                               hx-get="/Finance/Invoices?handler=Table"
                               hx-trigger="keyup changed delay:300ms"
                               hx-target="#tableContent"
                               hx-swap="outerHTML"
                               hx-include="#statusFilter,#typeFilter,#dateFrom,#dateTo"
                               name="search">
                    </div>
                </div>
                <div>
                    <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                            id="statusFilter" name="statusFilter"
                            hx-get="/Finance/Invoices?handler=Table"
                            hx-trigger="change"
                            hx-target="#tableContent"
                            hx-swap="outerHTML"
                            hx-include="#searchInput,#typeFilter,#dateFrom,#dateTo">
                        <option value="">All Status</option>
                        <option value="0">Draft</option>
                        <option value="1">Pending</option>
                        <option value="2">Sent</option>
                        <option value="3">Partially Paid</option>
                        <option value="4">Paid</option>
                        <option value="5">Overdue</option>
                        <option value="6">Void</option>
                    </select>
                </div>
                <div>
                    <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                            id="typeFilter" name="typeFilter"
                            hx-get="/Finance/Invoices?handler=Table"
                            hx-trigger="change"
                            hx-target="#tableContent"
                            hx-swap="outerHTML"
                            hx-include="#searchInput,#statusFilter,#dateFrom,#dateTo">
                        <option value="">All Types</option>
                        @foreach (InvoiceType type in Enum.GetValues(typeof(InvoiceType)))
                        {
                            <option value="@((int)type)">@type</option>
                        }
                    </select>
                </div>
                <div>
                    <input type="date" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                           id="dateFrom" name="dateFrom"
                           hx-get="/Finance/Invoices?handler=Table"
                           hx-trigger="change"
                           hx-target="#tableContent"
                           hx-swap="outerHTML"
                           hx-include="#searchInput,#statusFilter,#typeFilter,#dateTo"
                           placeholder="From">
                </div>
                <div>
                    <input type="date" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                           id="dateTo" name="dateTo"
                           hx-get="/Finance/Invoices?handler=Table"
                           hx-trigger="change"
                           hx-target="#tableContent"
                           hx-swap="outerHTML"
                           hx-include="#searchInput,#statusFilter,#typeFilter,#dateFrom"
                           placeholder="To">
                </div>
            </div>
        </div>
        <div class="min-w-full">
            <table class="w-full text-sm text-left">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3">Invoice #</th>
                        <th scope="col" class="px-6 py-3">Date</th>
                        <th scope="col" class="px-6 py-3">Customer</th>
                        <th scope="col" class="px-6 py-3">Due Date</th>
                        <th scope="col" class="px-6 py-3 text-right">Amount</th>
                        <th scope="col" class="px-6 py-3 text-right">Balance</th>
                        <th scope="col" class="px-6 py-3">Status</th>
                        <th scope="col" class="px-6 py-3 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody id="tableContent">
                    @if (Model.Invoices.Count == 0)
                    {
                        <tr>
                            <td colspan="8" class="text-center py-12 text-gray-500">
                                <i class="bi bi-inbox text-4xl block mb-3"></i>
                                No invoices found
                            </td>
                        </tr>
                    }
                    else
                    {
                        foreach (var invoice in Model.Invoices)
                        {
                            var statusBadgeClass = invoice.Status switch
                            {
                                InvoiceStatus.Draft => "bg-gray-100 text-gray-800",
                                InvoiceStatus.Pending => "bg-amber-100 text-amber-800",
                                InvoiceStatus.Sent => "bg-blue-100 text-blue-800",
                                InvoiceStatus.PartiallyPaid => "bg-primary-100 text-primary-800",
                                InvoiceStatus.Paid => "bg-emerald-100 text-emerald-800",
                                InvoiceStatus.Overdue => "bg-red-100 text-red-800",
                                InvoiceStatus.Void => "bg-gray-700 text-white",
                                InvoiceStatus.Cancelled => "bg-gray-100 text-gray-800",
                                _ => "bg-gray-100 text-gray-800"
                            };

                            var isOverdue = invoice.DueDate < DateTime.UtcNow &&
                                invoice.Status != InvoiceStatus.Paid &&
                                invoice.Status != InvoiceStatus.Void &&
                                invoice.Status != InvoiceStatus.Cancelled;

                            <tr class="bg-white border-b hover:bg-gray-50">
                                <td class="px-6 py-4">
                                    <a href="/Finance/Invoices/Details/@invoice.Id" class="text-primary-600 hover:underline font-medium">
                                        @invoice.InvoiceNumber
                                    </a>
                                </td>
                                <td class="px-6 py-4">@invoice.InvoiceDate.ToString("MMM dd, yyyy")</td>
                                <td class="px-6 py-4">
                                    @if (invoice.Customer != null)
                                    {
                                        <span>@invoice.Customer.Name</span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-500">-</span>
                                    }
                                </td>
                                <td class="px-6 py-4">
                                    <span class="@(isOverdue ? "text-red-600 font-medium" : "")">
                                        @invoice.DueDate.ToString("MMM dd, yyyy")
                                    </span>
                                </td>
                                <td class="px-6 py-4 text-right">@invoice.TotalAmount.ToString("C2")</td>
                                <td class="px-6 py-4 text-right">
                                    @if (invoice.BalanceDue > 0)
                                    {
                                        <span class="font-medium">@invoice.BalanceDue.ToString("C2")</span>
                                    }
                                    else
                                    {
                                        <span class="text-gray-500">$0.00</span>
                                    }
                                </td>
                                <td class="px-6 py-4">
                                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @statusBadgeClass">@invoice.Status</span>
                                </td>
                                <td class="px-6 py-4 text-right">
                                    <button type="button" class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg"
                                            id="dropdownInv@(invoice.Id)" data-dropdown-toggle="dropdownMenuInv@(invoice.Id)" data-dropdown-placement="left-start">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <div class="z-50 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuInv@(invoice.Id)">
                                            <ul class="py-2 text-sm text-gray-700">
                                                <li>
                                                    <a class="block px-4 py-2 hover:bg-gray-100" href="/Finance/Invoices/Details/@invoice.Id">
                                                        <i class="bi bi-eye mr-2"></i> View
                                                    </a>
                                                </li>
                                                @if (invoice.Status == InvoiceStatus.Draft)
                                                {
                                                    <li>
                                                        <a class="block px-4 py-2 hover:bg-gray-100" href="/Finance/Invoices/Edit/@invoice.Id">
                                                            <i class="bi bi-pencil mr-2"></i> Edit
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <button class="block w-full text-left px-4 py-2 hover:bg-gray-100"
                                                                hx-post="/Finance/Invoices?handler=Send&id=@invoice.Id"
                                                                hx-target="#tableContent"
                                                                hx-swap="outerHTML"
                                                                hx-confirm="Are you sure you want to send this invoice?">
                                                            <i class="bi bi-send mr-2"></i> Send
                                                        </button>
                                                    </li>
                                                }
                                                @if (invoice.Status != InvoiceStatus.Paid && invoice.Status != InvoiceStatus.Void)
                                                {
                                                    <li>
                                                        <a class="block px-4 py-2 hover:bg-gray-100 cursor-pointer"
                                                           hx-get="/Finance/Invoices?handler=PaymentForm&id=@invoice.Id"
                                                           hx-target="#paymentModalContent"
                                                           >
                                                            <i class="bi bi-cash mr-2"></i> Record Payment
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <button class="block w-full text-left px-4 py-2 hover:bg-gray-100"
                                                                hx-post="/Finance/Invoices?handler=MarkPaid&id=@invoice.Id"
                                                                hx-target="#tableContent"
                                                                hx-swap="outerHTML"
                                                                hx-confirm="Mark this invoice as fully paid?">
                                                            <i class="bi bi-check-circle mr-2"></i> Mark as Paid
                                                        </button>
                                                    </li>
                                                }
                                                <li class="border-t border-gray-100"></li>
                                                <li>
                                                    <a class="block px-4 py-2 hover:bg-gray-100" href="/Finance/Invoices/Print/@invoice.Id" target="_blank">
                                                        <i class="bi bi-printer mr-2"></i> Print
                                                    </a>
                                                </li>
                                                @if (invoice.Status != InvoiceStatus.Paid)
                                                {
                                                    <li>
                                                        <button class="block w-full text-left px-4 py-2 hover:bg-gray-100 text-red-600"
                                                                hx-delete="/Finance/Invoices?id=@invoice.Id"
                                                                hx-target="#tableContent"
                                                                hx-swap="outerHTML"
                                                                hx-confirm="Are you sure you want to delete this invoice?">
                                                            <i class="bi bi-trash mr-2"></i> Delete
                                                        </button>
                                                    </li>
                                                }
                                                else
                                                {
                                                    <li>
                                                        <button class="block w-full text-left px-4 py-2 hover:bg-gray-100 text-amber-600"
                                                                hx-post="/Finance/Invoices?handler=Void&id=@invoice.Id"
                                                                hx-target="#tableContent"
                                                                hx-swap="outerHTML"
                                                                hx-confirm="Are you sure you want to void this invoice?">
                                                            <i class="bi bi-x-circle mr-2"></i> Void
                                                        </button>
                                                    </li>
                                                }
                                            </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="px-6 py-4 border-t border-gray-200">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
                <div class="text-sm text-gray-500" id="paginationInfo">
                    Showing 0 entries
                </div>
                <nav id="paginationNav">
                    <ul class="inline-flex -space-x-px text-sm">
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Payment Modal -->
<div id="paymentModal" tabindex="-1" aria-hidden="true" data-modal-backdrop="static"
     class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700" id="paymentModalContent">
            <div class="text-center py-8">
                <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-primary-600"></div>
            </div>
        </div>
    </div>
</div>
