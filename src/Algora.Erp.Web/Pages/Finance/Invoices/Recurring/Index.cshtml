@page
@model Algora.Erp.Web.Pages.Finance.Invoices.Recurring.IndexModel
@using Algora.Erp.Domain.Entities.Finance
@{
    ViewData["Title"] = "Recurring Invoices";
}

<div class="p-4">
    <!-- Page Header -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-2xl font-semibold text-gray-900 dark:text-white mb-1">Recurring Invoices</h1>
            <nav class="flex" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 text-sm text-gray-500">
                    <li><a href="/" class="hover:text-primary-600">Dashboard</a></li>
                    <li><span class="mx-2">/</span></li>
                    <li><a href="/Finance" class="hover:text-primary-600">Finance</a></li>
                    <li><span class="mx-2">/</span></li>
                    <li><a href="/Finance/Invoices" class="hover:text-primary-600">Invoices</a></li>
                    <li><span class="mx-2">/</span></li>
                    <li class="text-gray-700 dark:text-gray-300">Recurring</li>
                </ol>
            </nav>
        </div>
        <a href="/Finance/Invoices/Recurring/Create" class="text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 dark:bg-primary-600 dark:hover:bg-primary-700">
            <i class="bi bi-plus-lg mr-1"></i> New Recurring Invoice
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="flex items-center p-4 mb-4 text-emerald-800 rounded-lg bg-emerald-50 dark:bg-gray-800 dark:text-emerald-400" role="alert">
            <i class="bi bi-check-circle mr-2"></i>
            <span>@TempData["Success"]</span>
            <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-emerald-50 text-emerald-500 rounded-lg p-1.5 hover:bg-emerald-200 dark:bg-gray-800 dark:text-emerald-400 dark:hover:bg-gray-700" data-dismiss-target="[role='alert']" aria-label="Close">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="flex items-center p-4 mb-4 text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="bi bi-exclamation-circle mr-2"></i>
            <span>@TempData["Error"]</span>
            <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-red-50 text-red-500 rounded-lg p-1.5 hover:bg-red-200 dark:bg-gray-800 dark:text-red-400 dark:hover:bg-gray-700" data-dismiss-target="[role='alert']" aria-label="Close">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
    }

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
        <div class="bg-white rounded-lg shadow-md dark:bg-gray-800">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-emerald-100 dark:bg-emerald-900/30 rounded-xl p-3">
                            <i class="bi bi-arrow-repeat text-emerald-600 dark:text-emerald-400 text-2xl"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">Active</p>
                        <h3 class="text-2xl font-semibold text-gray-900 dark:text-white">@Model.ActiveCount</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-lg shadow-md dark:bg-gray-800">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-amber-100 dark:bg-amber-900/30 rounded-xl p-3">
                            <i class="bi bi-pause-circle text-amber-600 dark:text-amber-400 text-2xl"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">Paused</p>
                        <h3 class="text-2xl font-semibold text-gray-900 dark:text-white">@Model.PausedCount</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-lg shadow-md dark:bg-gray-800">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-gray-100 dark:bg-gray-700 rounded-xl p-3">
                            <i class="bi bi-check-circle text-gray-600 dark:text-gray-400 text-2xl"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">Completed</p>
                        <h3 class="text-2xl font-semibold text-gray-900 dark:text-white">@Model.CompletedCount</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-lg shadow-md dark:bg-gray-800">
            <div class="p-5">
                <div class="flex items-center">
                    <div class="flex-shrink-0">
                        <div class="bg-primary-100 dark:bg-primary-900/30 rounded-xl p-3">
                            <i class="bi bi-currency-dollar text-primary-600 dark:text-primary-400 text-2xl"></i>
                        </div>
                    </div>
                    <div class="ml-4">
                        <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">Monthly Recurring</p>
                        <h3 class="text-2xl font-semibold text-gray-900 dark:text-white">@Model.MonthlyRecurring.ToString("C0")</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recurring Invoices Table -->
    <div class="bg-white rounded-lg shadow-md dark:bg-gray-800">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
            <div class="grid grid-cols-12 gap-4 items-center">
                <div class="col-span-12 md:col-span-5">
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                            <i class="bi bi-search text-gray-400"></i>
                        </div>
                        <input type="text" class="block w-full pl-10 pr-3 py-2 border border-gray-300 rounded-lg bg-gray-50 text-sm focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                               placeholder="Search recurring invoices..."
                               id="searchInput"
                               hx-get="/Finance/Invoices/Recurring?handler=Table"
                               hx-trigger="keyup changed delay:300ms"
                               hx-target="#tableContent"
                               hx-include="#statusFilter"
                               name="search">
                    </div>
                </div>
                <div class="col-span-12 md:col-span-3">
                    <select class="block w-full px-3 py-2 border border-gray-300 rounded-lg bg-gray-50 text-sm focus:ring-primary-500 focus:border-primary-500 dark:bg-gray-700 dark:border-gray-600 dark:text-white"
                            id="statusFilter" name="statusFilter"
                            hx-get="/Finance/Invoices/Recurring?handler=Table"
                            hx-trigger="change"
                            hx-target="#tableContent"
                            hx-include="#searchInput">
                        <option value="">All Status</option>
                        <option value="0">Active</option>
                        <option value="1">Paused</option>
                        <option value="2">Completed</option>
                        <option value="3">Cancelled</option>
                    </select>
                </div>
                <div class="col-span-12 md:col-span-4 text-right">
                    <a href="/Finance/Invoices" class="text-gray-700 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-4 py-2 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:bg-gray-700">
                        <i class="bi bi-list mr-1"></i> View All Invoices
                    </a>
                </div>
            </div>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th scope="col" class="px-6 py-3">Name</th>
                        <th scope="col" class="px-6 py-3">Customer</th>
                        <th scope="col" class="px-6 py-3">Frequency</th>
                        <th scope="col" class="px-6 py-3 text-right">Amount</th>
                        <th scope="col" class="px-6 py-3">Next Invoice</th>
                        <th scope="col" class="px-6 py-3">Progress</th>
                        <th scope="col" class="px-6 py-3">Status</th>
                        <th scope="col" class="px-6 py-3 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody id="tableContent" hx-get="/Finance/Invoices/Recurring?handler=Table" hx-trigger="load">
                    <tr>
                        <td colspan="8" class="text-center py-8">
                            <div role="status">
                                <svg aria-hidden="true" class="inline w-6 h-6 text-gray-200 animate-spin dark:text-gray-600 fill-primary-600" viewBox="0 0 100 101" fill="none">
                                    <path d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z" fill="currentColor"/>
                                    <path d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z" fill="currentFill"/>
                                </svg>
                                <span class="sr-only">Loading...</span>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="px-6 py-4 border-t border-gray-200 dark:border-gray-700">
            <div class="flex justify-between items-center">
                <div class="text-sm text-gray-500 dark:text-gray-400" id="paginationInfo">
                    Showing 0 entries
                </div>
                <nav id="paginationNav">
                    <ul class="inline-flex -space-x-px text-sm">
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
