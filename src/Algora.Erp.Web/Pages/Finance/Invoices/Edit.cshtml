@page "{id:guid}"
@model Algora.Erp.Web.Pages.Finance.Invoices.EditModel
@using Algora.Erp.Domain.Entities.Finance
@{
    ViewData["Title"] = $"Edit Invoice {Model.Input.InvoiceNumber}";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <div class="flex items-center gap-3">
                <h1 class="text-2xl font-bold text-gray-900">Edit Invoice</h1>
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">@Model.Input.InvoiceNumber</span>
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-amber-100 text-amber-800">Draft</span>
            </div>
            <nav class="flex mt-1" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 text-sm text-gray-500">
                    <li><a href="/" class="hover:text-primary-600">Dashboard</a></li>
                    <li><span class="mx-1">/</span></li>
                    <li><a href="/Finance" class="hover:text-primary-600">Finance</a></li>
                    <li><span class="mx-1">/</span></li>
                    <li><a href="/Finance/Invoices" class="hover:text-primary-600">Invoices</a></li>
                    <li><span class="mx-1">/</span></li>
                    <li><a href="/Finance/Invoices/Details/@Model.Input.Id" class="hover:text-primary-600">@Model.Input.InvoiceNumber</a></li>
                    <li><span class="mx-1">/</span></li>
                    <li class="text-gray-900 font-medium">Edit</li>
                </ol>
            </nav>
        </div>
        <div>
            <button type="button" class="text-red-700 border border-red-700 hover:bg-red-700 hover:text-white focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5" data-modal-target="deleteModal" data-modal-toggle="deleteModal">
                <i class="bi bi-trash mr-1"></i>Delete Invoice
            </button>
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 flex items-center" role="alert">
            <i class="bi bi-exclamation-circle mr-2"></i>@TempData["Error"]
            <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-red-50 text-red-500 rounded-lg p-1.5 hover:bg-red-200 inline-flex items-center justify-center h-8 w-8" onclick="this.parentElement.remove()">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
    }

    <form method="post">
        <input type="hidden" name="Input.Id" value="@Model.Input.Id" />
        <input type="hidden" name="Input.InvoiceNumber" value="@Model.Input.InvoiceNumber" />

        <div class="grid grid-cols-12 gap-6">
            <!-- Main Content -->
            <div class="col-span-12 lg:col-span-8 space-y-6">
                <!-- Invoice Details Card -->
                <div class="bg-white rounded-lg shadow-md">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h5 class="text-lg font-semibold text-gray-900"><i class="bi bi-file-earmark-text mr-2"></i>Invoice Details</h5>
                    </div>
                    <div class="p-6">
                        <div class="grid grid-cols-12 gap-4">
                            <div class="col-span-12 md:col-span-6">
                                <label class="block mb-2 text-sm font-medium text-gray-900">Customer <span class="text-red-600">*</span></label>
                                <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Input.CustomerId" id="customerSelect" required>
                                    <option value="">Select Customer</option>
                                    @foreach (var customer in Model.Customers)
                                    {
                                        <option value="@customer.Id"
                                                selected="@(Model.Input.CustomerId == customer.Id)"
                                                data-name="@customer.Name"
                                                data-address="@customer.BillingAddress"
                                                data-city="@customer.BillingCity"
                                                data-state="@customer.BillingState"
                                                data-postal="@customer.BillingPostalCode"
                                                data-country="@customer.BillingCountry">
                                            @customer.Name (@customer.Code)
                                        </option>
                                    }
                                </select>
                            </div>

                            <div class="col-span-12 md:col-span-6">
                                <label class="block mb-2 text-sm font-medium text-gray-900">From Sales Order</label>
                                <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Input.SalesOrderId" id="salesOrderSelect">
                                    <option value="">None</option>
                                    @foreach (var order in Model.SalesOrders)
                                    {
                                        <option value="@order.Id" selected="@(Model.Input.SalesOrderId == order.Id)">
                                            @order.OrderNumber - @order.Customer?.Name (@order.TotalAmount.ToString("C2"))
                                        </option>
                                    }
                                </select>
                            </div>

                            <div class="col-span-12 md:col-span-4">
                                <label class="block mb-2 text-sm font-medium text-gray-900">Invoice Type</label>
                                <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Input.Type">
                                    @foreach (var type in Enum.GetValues<InvoiceType>())
                                    {
                                        <option value="@type" selected="@(Model.Input.Type == type)">@type</option>
                                    }
                                </select>
                            </div>

                            <div class="col-span-12 md:col-span-4">
                                <label class="block mb-2 text-sm font-medium text-gray-900">Invoice Date <span class="text-red-600">*</span></label>
                                <input type="date" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Input.InvoiceDate"
                                       value="@Model.Input.InvoiceDate.ToString("yyyy-MM-dd")" required>
                            </div>

                            <div class="col-span-12 md:col-span-4">
                                <label class="block mb-2 text-sm font-medium text-gray-900">Due Date <span class="text-red-600">*</span></label>
                                <input type="date" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Input.DueDate" id="dueDate"
                                       value="@Model.Input.DueDate.ToString("yyyy-MM-dd")" required>
                            </div>

                            <div class="col-span-12 md:col-span-4">
                                <label class="block mb-2 text-sm font-medium text-gray-900">Payment Terms</label>
                                <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Input.PaymentTerms" id="paymentTerms" onchange="updateDueDate()">
                                    <option value="Due on Receipt" data-days="0" selected="@(Model.Input.PaymentTerms == "Due on Receipt")">Due on Receipt</option>
                                    <option value="Net 15" data-days="15" selected="@(Model.Input.PaymentTerms == "Net 15")">Net 15</option>
                                    <option value="Net 30" data-days="30" selected="@(Model.Input.PaymentTerms == "Net 30")">Net 30</option>
                                    <option value="Net 45" data-days="45" selected="@(Model.Input.PaymentTerms == "Net 45")">Net 45</option>
                                    <option value="Net 60" data-days="60" selected="@(Model.Input.PaymentTerms == "Net 60")">Net 60</option>
                                    <option value="Custom" data-days="0" selected="@(Model.Input.PaymentTerms == "Custom")">Custom</option>
                                </select>
                                <input type="hidden" name="Input.PaymentTermDays" id="paymentTermDays" value="@Model.Input.PaymentTermDays">
                            </div>

                            <div class="col-span-12 md:col-span-4">
                                <label class="block mb-2 text-sm font-medium text-gray-900">Currency</label>
                                <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Input.Currency">
                                    <option value="USD" selected="@(Model.Input.Currency == "USD")">USD - US Dollar</option>
                                    <option value="EUR" selected="@(Model.Input.Currency == "EUR")">EUR - Euro</option>
                                    <option value="GBP" selected="@(Model.Input.Currency == "GBP")">GBP - British Pound</option>
                                    <option value="CAD" selected="@(Model.Input.Currency == "CAD")">CAD - Canadian Dollar</option>
                                    <option value="AUD" selected="@(Model.Input.Currency == "AUD")">AUD - Australian Dollar</option>
                                </select>
                            </div>

                            <div class="col-span-12 md:col-span-4">
                                <label class="block mb-2 text-sm font-medium text-gray-900">Reference</label>
                                <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Input.Reference"
                                       value="@Model.Input.Reference" placeholder="PO#, Quote#, etc.">
                            </div>
                        </div>
                    </div>
                </div>

                <!-- GST Details Card -->
                <div class="bg-white rounded-lg shadow-md">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h5 class="text-lg font-semibold text-gray-900"><i class="bi bi-percent mr-2"></i>GST Details</h5>
                    </div>
                    <div class="p-6">
                        <div class="grid grid-cols-12 gap-4">
                            <div class="col-span-12 md:col-span-6">
                                <label class="block mb-2 text-sm font-medium text-gray-900">From Location <span class="text-red-600">*</span></label>
                                <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Input.FromLocationId" id="fromLocationSelect" required onchange="checkInterState()">
                                    <option value="">Select Location</option>
                                    @foreach (var location in Model.Locations)
                                    {
                                        <option value="@location.Id"
                                                data-state-id="@location.StateId"
                                                selected="@(Model.Input.FromLocationId == location.Id)">
                                            @location.Name (@location.Code) - @location.State?.Name
                                        </option>
                                    }
                                </select>
                            </div>
                            <div class="col-span-12 md:col-span-6">
                                <label class="block mb-2 text-sm font-medium text-gray-900">Customer State <span class="text-red-600">*</span></label>
                                <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Input.CustomerStateId" id="customerStateSelect" required onchange="checkInterState()">
                                    <option value="">Select State</option>
                                    @foreach (var state in Model.States)
                                    {
                                        <option value="@state.Id"
                                                selected="@(Model.Input.CustomerStateId == state.Id)">
                                            @state.Name (@state.ShortName)
                                        </option>
                                    }
                                </select>
                            </div>
                            <div class="col-span-12 md:col-span-6">
                                <label class="block mb-2 text-sm font-medium text-gray-900">Customer GSTIN</label>
                                <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Input.CustomerGstin"
                                       value="@Model.Input.CustomerGstin" placeholder="22AAAAA0000A1Z5"
                                       pattern="^[0-9]{2}[A-Z]{5}[0-9]{4}[A-Z]{1}[1-9A-Z]{1}Z[0-9A-Z]{1}$">
                            </div>
                            <div class="col-span-12 md:col-span-6">
                                <div id="gstTypeAlert" class="p-4 text-sm rounded-lg flex items-center @(Model.Input.FromLocationId.HasValue && Model.Input.CustomerStateId.HasValue ? (Model.Input.IsInterState ? "bg-amber-50 text-amber-800" : "bg-emerald-50 text-emerald-800") : "bg-blue-50 text-blue-800 hidden")">
                                    <i class="bi bi-info-circle mr-2"></i>
                                    <span id="gstTypeText">@(Model.Input.IsInterState ? "Inter-State: IGST applies" : "Intra-State: CGST + SGST applies")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Line Items Card -->
                <div class="bg-white rounded-lg shadow-md">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <div class="flex justify-between items-center">
                            <h5 class="text-lg font-semibold text-gray-900"><i class="bi bi-list-ul mr-2"></i>Line Items</h5>
                            <button type="button" class="text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-xs px-3 py-2" onclick="addLine()">
                                <i class="bi bi-plus-lg mr-1"></i>Add Line
                            </button>
                        </div>
                    </div>
                    <div class="p-0">
                        <div class="overflow-x-auto">
                            <table class="w-full text-sm text-left text-gray-500 [&>tbody>tr]:hover:bg-gray-100" id="linesTable">
                                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                                    <tr>
                                        <th scope="col" class="px-4 py-3" style="width: 18%">Product</th>
                                        <th scope="col" class="px-4 py-3" style="width: 15%">Description</th>
                                        <th scope="col" class="px-4 py-3 text-center" style="width: 7%">Qty</th>
                                        <th scope="col" class="px-4 py-3 text-right" style="width: 10%">Unit Price</th>
                                        <th scope="col" class="px-4 py-3 text-center" style="width: 6%">Disc %</th>
                                        <th scope="col" class="px-4 py-3" style="width: 14%">GST Slab</th>
                                        <th scope="col" class="px-4 py-3" style="width: 10%">HSN Code</th>
                                        <th scope="col" class="px-4 py-3 text-right" style="width: 10%">Total</th>
                                        <th scope="col" class="px-4 py-3 text-center" style="width: 5%"></th>
                                    </tr>
                                </thead>
                                <tbody id="linesBody">
                                    @if (Model.Input.Lines.Any())
                                    {
                                        var index = 0;
                                        foreach (var line in Model.Input.Lines)
                                        {
                                            <tr data-index="@index" class="bg-white border-b">
                                                <td class="px-4 py-3">
                                                    <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2 product-select" name="Input.Lines[@index].ProductId" onchange="updateLineFromProduct(this)">
                                                        <option value="">Select Product</option>
                                                        @foreach (var product in Model.Products)
                                                        {
                                                            <option value="@product.Id"
                                                                    data-sku="@product.Sku"
                                                                    data-name="@product.Name"
                                                                    data-price="@product.SellingPrice"
                                                                    data-tax="@(product.TaxRate ?? 0)"
                                                                    selected="@(line.ProductId == product.Id)">
                                                                @product.Name
                                                            </option>
                                                        }
                                                    </select>
                                                    <input type="hidden" name="Input.Lines[@index].ProductCode" class="product-code" value="@line.ProductCode">
                                                </td>
                                                <td class="px-4 py-3">
                                                    <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2 description-input"
                                                           name="Input.Lines[@index].Description" value="@line.Description" placeholder="Description">
                                                </td>
                                                <td class="px-4 py-3">
                                                    <input type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2 text-center qty-input"
                                                           name="Input.Lines[@index].Quantity" value="@line.Quantity" min="0.01" step="0.01" onchange="calculateLineTotal(this)">
                                                </td>
                                                <td class="px-4 py-3">
                                                    <input type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2 text-right price-input"
                                                           name="Input.Lines[@index].UnitPrice" value="@line.UnitPrice" min="0" step="0.01" onchange="calculateLineTotal(this)">
                                                </td>
                                                <td class="px-4 py-3">
                                                    <input type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2 text-center discount-input"
                                                           name="Input.Lines[@index].DiscountPercent" value="@line.DiscountPercent" min="0" max="100" step="0.01" onchange="calculateLineTotal(this)">
                                                </td>
                                                <td class="px-4 py-3">
                                                    <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2 gst-select" name="Input.Lines[@index].GstSlabId" onchange="calculateLineTotal(this)">
                                                        <option value="">No GST</option>
                                                        @foreach (var slab in Model.GstSlabs)
                                                        {
                                                            <option value="@slab.Id"
                                                                    data-rate="@slab.Rate"
                                                                    data-cgst="@slab.CgstRate"
                                                                    data-sgst="@slab.SgstRate"
                                                                    data-igst="@slab.IgstRate"
                                                                    selected="@(line.GstSlabId == slab.Id)">
                                                                @slab.Name (@slab.Rate%)
                                                            </option>
                                                        }
                                                    </select>
                                                </td>
                                                <td class="px-4 py-3">
                                                    <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2 hsn-input"
                                                           name="Input.Lines[@index].HsnCode" value="@line.HsnCode" placeholder="HSN">
                                                </td>
                                                <td class="px-4 py-3 text-right align-middle">
                                                    <span class="line-total font-medium">₹0.00</span>
                                                </td>
                                                <td class="px-4 py-3 text-center">
                                                    <button type="button" class="text-red-700 border border-red-700 hover:bg-red-700 hover:text-white focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-xs px-3 py-2" onclick="removeLine(this)">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                            index++;
                                        }
                                    }
                                </tbody>
                                <tfoot class="bg-gray-50">
                                    <tr>
                                        <td colspan="7" class="px-4 py-3 text-right font-medium">Subtotal:</td>
                                        <td class="px-4 py-3 text-right font-medium" id="subtotalDisplay">₹0.00</td>
                                        <td></td>
                                    </tr>
                                    <tr>
                                        <td colspan="7" class="px-4 py-3 text-right text-red-600">Discount:</td>
                                        <td class="px-4 py-3 text-right text-red-600" id="discountDisplay">-₹0.00</td>
                                        <td></td>
                                    </tr>
                                    <tr id="cgstRow">
                                        <td colspan="7" class="px-4 py-3 text-right text-emerald-600">CGST:</td>
                                        <td class="px-4 py-3 text-right text-emerald-600" id="cgstDisplay">₹0.00</td>
                                        <td></td>
                                    </tr>
                                    <tr id="sgstRow">
                                        <td colspan="7" class="px-4 py-3 text-right text-blue-600">SGST:</td>
                                        <td class="px-4 py-3 text-right text-blue-600" id="sgstDisplay">₹0.00</td>
                                        <td></td>
                                    </tr>
                                    <tr id="igstRow" class="hidden">
                                        <td colspan="7" class="px-4 py-3 text-right text-amber-600">IGST:</td>
                                        <td class="px-4 py-3 text-right text-amber-600" id="igstDisplay">₹0.00</td>
                                        <td></td>
                                    </tr>
                                    <tr class="font-bold text-lg">
                                        <td colspan="7" class="px-4 py-3 text-right">Total:</td>
                                        <td class="px-4 py-3 text-right text-primary-600" id="totalDisplay">₹0.00</td>
                                        <td></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Notes Card -->
                <div class="bg-white rounded-lg shadow-md">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h5 class="text-lg font-semibold text-gray-900"><i class="bi bi-chat-left-text mr-2"></i>Notes</h5>
                    </div>
                    <div class="p-6">
                        <div class="grid grid-cols-12 gap-4">
                            <div class="col-span-12">
                                <label class="block mb-2 text-sm font-medium text-gray-900">Notes (visible to customer)</label>
                                <textarea class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Input.Notes" rows="2" placeholder="Thank you for your business...">@Model.Input.Notes</textarea>
                            </div>
                            <div class="col-span-12">
                                <label class="block mb-2 text-sm font-medium text-gray-900">Internal Notes (not visible to customer)</label>
                                <textarea class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Input.InternalNotes" rows="2" placeholder="Internal notes...">@Model.Input.InternalNotes</textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="col-span-12 lg:col-span-4 space-y-6">
                <!-- Billing Address Card -->
                <div class="bg-white rounded-lg shadow-md">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h5 class="text-lg font-semibold text-gray-900"><i class="bi bi-geo-alt mr-2"></i>Billing Address</h5>
                    </div>
                    <div class="p-6">
                        <div class="grid grid-cols-12 gap-4">
                            <div class="col-span-12">
                                <label class="block mb-2 text-sm font-medium text-gray-900">Name</label>
                                <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Input.BillingName" id="billingName"
                                       value="@Model.Input.BillingName" placeholder="Company/Customer Name">
                            </div>
                            <div class="col-span-12">
                                <label class="block mb-2 text-sm font-medium text-gray-900">Address</label>
                                <textarea class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Input.BillingAddress" id="billingAddress"
                                          rows="2" placeholder="Street address">@Model.Input.BillingAddress</textarea>
                            </div>
                            <div class="col-span-6">
                                <label class="block mb-2 text-sm font-medium text-gray-900">City</label>
                                <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Input.BillingCity" id="billingCity"
                                       value="@Model.Input.BillingCity">
                            </div>
                            <div class="col-span-6">
                                <label class="block mb-2 text-sm font-medium text-gray-900">State</label>
                                <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Input.BillingState" id="billingState"
                                       value="@Model.Input.BillingState">
                            </div>
                            <div class="col-span-6">
                                <label class="block mb-2 text-sm font-medium text-gray-900">Postal Code</label>
                                <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Input.BillingPostalCode" id="billingPostalCode"
                                       value="@Model.Input.BillingPostalCode">
                            </div>
                            <div class="col-span-6">
                                <label class="block mb-2 text-sm font-medium text-gray-900">Country</label>
                                <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Input.BillingCountry" id="billingCountry"
                                       value="@Model.Input.BillingCountry">
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Summary Card -->
                <div class="bg-white rounded-lg shadow-md sticky top-4">
                    <div class="px-6 py-4 border-b border-gray-200">
                        <h5 class="text-lg font-semibold text-gray-900"><i class="bi bi-calculator mr-2"></i>Summary</h5>
                    </div>
                    <div class="p-6">
                        <div class="flex justify-between mb-2">
                            <span class="text-gray-500">Subtotal</span>
                            <span id="summarySubtotal">₹0.00</span>
                        </div>
                        <div class="flex justify-between mb-2">
                            <span class="text-gray-500">Discount</span>
                            <span class="text-red-600" id="summaryDiscount">-₹0.00</span>
                        </div>
                        <div class="flex justify-between mb-2" id="summaryCgstRow">
                            <span class="text-gray-500">CGST</span>
                            <span class="text-emerald-600" id="summaryCgst">₹0.00</span>
                        </div>
                        <div class="flex justify-between mb-2" id="summarySgstRow">
                            <span class="text-gray-500">SGST</span>
                            <span class="text-blue-600" id="summarySgst">₹0.00</span>
                        </div>
                        <div class="flex justify-between mb-2 hidden" id="summaryIgstRow">
                            <span class="text-gray-500">IGST</span>
                            <span class="text-amber-600" id="summaryIgst">₹0.00</span>
                        </div>
                        <hr class="my-4 border-gray-200">
                        <div class="flex justify-between mb-4">
                            <span class="font-bold text-lg">Total</span>
                            <span class="font-bold text-lg text-primary-600" id="summaryTotal">₹0.00</span>
                        </div>

                        <div class="space-y-2">
                            <button type="submit" class="w-full text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-3">
                                <i class="bi bi-check-lg mr-2"></i>Save Changes
                            </button>
                            <a href="/Finance/Invoices/Details/@Model.Input.Id" class="w-full block text-center text-gray-700 border border-gray-700 hover:bg-gray-700 hover:text-white focus:ring-4 focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-3">
                                <i class="bi bi-x-lg mr-2"></i>Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-lg shadow">
            <div class="flex items-center justify-between p-4 border-b rounded-t">
                <h3 class="text-xl font-semibold text-gray-900"><i class="bi bi-exclamation-triangle text-red-600 mr-2"></i>Delete Invoice</h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" onclick="closeModal('deleteModal')">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="p-6">
                <p>Are you sure you want to delete invoice <strong>@Model.Input.InvoiceNumber</strong>?</p>
                <p class="text-gray-500 mb-0">This action cannot be undone. All line items will be removed.</p>
            </div>
            <div class="flex items-center p-4 border-t border-gray-200 rounded-b gap-2">
                <button type="button" class="text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5" onclick="closeModal('deleteModal')">Cancel</button>
                <form method="post" asp-page-handler="Delete" class="inline">
                    <input type="hidden" name="Input.Id" value="@Model.Input.Id" />
                    <button type="submit" class="text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5">
                        <i class="bi bi-trash mr-1"></i>Delete Invoice
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    let lineIndex = @(Model.Input.Lines.Count);
    let isInterState = @(Model.Input.IsInterState ? "true" : "false");

    const products = [
        @foreach (var product in Model.Products)
        {
            <text>{ id: '@product.Id', sku: '@product.Sku', name: '@product.Name.Replace("'", "\\'")', price: @product.SellingPrice, tax: @(product.TaxRate ?? 0) },</text>
        }
    ];

    const gstSlabs = [
        @foreach (var slab in Model.GstSlabs)
        {
            <text>{ id: '@slab.Id', name: '@slab.Name', rate: @slab.Rate, cgst: @slab.CgstRate, sgst: @slab.SgstRate, igst: @slab.IgstRate },</text>
        }
    ];

    function checkInterState() {
        const fromSelect = document.getElementById('fromLocationSelect');
        const customerStateSelect = document.getElementById('customerStateSelect');
        const gstTypeAlert = document.getElementById('gstTypeAlert');
        const gstTypeText = document.getElementById('gstTypeText');

        if (fromSelect.value && customerStateSelect.value) {
            const fromOption = fromSelect.options[fromSelect.selectedIndex];
            const fromStateId = fromOption.dataset.stateId;
            const customerStateId = customerStateSelect.value;

            isInterState = fromStateId !== customerStateId;

            gstTypeAlert.classList.remove('hidden');
            if (isInterState) {
                gstTypeText.textContent = 'Inter-State: IGST applies';
                gstTypeAlert.classList.remove('bg-emerald-50', 'text-emerald-800');
                gstTypeAlert.classList.add('bg-amber-50', 'text-amber-800');
            } else {
                gstTypeText.textContent = 'Intra-State: CGST + SGST applies';
                gstTypeAlert.classList.remove('bg-amber-50', 'text-amber-800');
                gstTypeAlert.classList.add('bg-emerald-50', 'text-emerald-800');
            }

            // Update tax display rows
            updateTaxDisplayRows();
            calculateTotals();
        } else {
            gstTypeAlert.classList.add('hidden');
        }
    }

    function updateTaxDisplayRows() {
        const cgstRow = document.getElementById('cgstRow');
        const sgstRow = document.getElementById('sgstRow');
        const igstRow = document.getElementById('igstRow');
        const summaryCgstRow = document.getElementById('summaryCgstRow');
        const summarySgstRow = document.getElementById('summarySgstRow');
        const summaryIgstRow = document.getElementById('summaryIgstRow');

        if (isInterState) {
            cgstRow.classList.add('hidden');
            sgstRow.classList.add('hidden');
            igstRow.classList.remove('hidden');
            summaryCgstRow.classList.add('hidden');
            summarySgstRow.classList.add('hidden');
            summaryIgstRow.classList.remove('hidden');
        } else {
            cgstRow.classList.remove('hidden');
            sgstRow.classList.remove('hidden');
            igstRow.classList.add('hidden');
            summaryCgstRow.classList.remove('hidden');
            summarySgstRow.classList.remove('hidden');
            summaryIgstRow.classList.add('hidden');
        }
    }

    function addLine() {
        const tbody = document.getElementById('linesBody');
        const row = document.createElement('tr');
        row.setAttribute('data-index', lineIndex);
        row.className = 'bg-white border-b';
        row.innerHTML = `
            <td class="px-4 py-3">
                <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2 product-select" name="Input.Lines[${lineIndex}].ProductId" onchange="updateLineFromProduct(this)">
                    <option value="">Select Product</option>
                    ${products.map(p => `<option value="${p.id}" data-sku="${p.sku}" data-name="${p.name}" data-price="${p.price}" data-tax="${p.tax}">${p.name}</option>`).join('')}
                </select>
                <input type="hidden" name="Input.Lines[${lineIndex}].ProductCode" class="product-code" value="">
            </td>
            <td class="px-4 py-3">
                <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2 description-input"
                       name="Input.Lines[${lineIndex}].Description" value="" placeholder="Description">
            </td>
            <td class="px-4 py-3">
                <input type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2 text-center qty-input"
                       name="Input.Lines[${lineIndex}].Quantity" value="1" min="0.01" step="0.01" onchange="calculateLineTotal(this)">
            </td>
            <td class="px-4 py-3">
                <input type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2 text-right price-input"
                       name="Input.Lines[${lineIndex}].UnitPrice" value="0" min="0" step="0.01" onchange="calculateLineTotal(this)">
            </td>
            <td class="px-4 py-3">
                <input type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2 text-center discount-input"
                       name="Input.Lines[${lineIndex}].DiscountPercent" value="0" min="0" max="100" step="0.01" onchange="calculateLineTotal(this)">
            </td>
            <td class="px-4 py-3">
                <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2 gst-select" name="Input.Lines[${lineIndex}].GstSlabId" onchange="calculateLineTotal(this)">
                    <option value="">No GST</option>
                    ${gstSlabs.map(g => `<option value="${g.id}" data-rate="${g.rate}" data-cgst="${g.cgst}" data-sgst="${g.sgst}" data-igst="${g.igst}">${g.name} (${g.rate}%)</option>`).join('')}
                </select>
            </td>
            <td class="px-4 py-3">
                <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2 hsn-input"
                       name="Input.Lines[${lineIndex}].HsnCode" value="" placeholder="HSN">
            </td>
            <td class="px-4 py-3 text-right align-middle">
                <span class="line-total font-medium">₹0.00</span>
            </td>
            <td class="px-4 py-3 text-center">
                <button type="button" class="text-red-700 border border-red-700 hover:bg-red-700 hover:text-white focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-xs px-3 py-2" onclick="removeLine(this)">
                    <i class="bi bi-trash"></i>
                </button>
            </td>
        `;
        tbody.appendChild(row);
        lineIndex++;
    }

    function removeLine(btn) {
        btn.closest('tr').remove();
        reindexLines();
        calculateTotals();
    }

    function reindexLines() {
        const rows = document.querySelectorAll('#linesBody tr');
        rows.forEach((row, index) => {
            row.setAttribute('data-index', index);
            row.querySelectorAll('[name]').forEach(input => {
                input.name = input.name.replace(/\[\d+\]/, `[${index}]`);
            });
        });
        lineIndex = rows.length;
    }

    function updateLineFromProduct(select) {
        const row = select.closest('tr');
        const option = select.options[select.selectedIndex];
        const descInput = row.querySelector('.description-input');
        const priceInput = row.querySelector('.price-input');
        const codeInput = row.querySelector('.product-code');

        if (option.value) {
            descInput.value = option.dataset.name || '';
            priceInput.value = option.dataset.price || 0;
            codeInput.value = option.dataset.sku || '';
        }
        calculateLineTotal(select);
    }

    function calculateLineTotal(input) {
        const row = input.closest('tr');
        const qty = parseFloat(row.querySelector('.qty-input').value) || 0;
        const price = parseFloat(row.querySelector('.price-input').value) || 0;
        const discount = parseFloat(row.querySelector('.discount-input').value) || 0;
        const gstSelect = row.querySelector('.gst-select');
        const gstOption = gstSelect?.options[gstSelect.selectedIndex];

        const subtotal = qty * price;
        const discountAmt = subtotal * discount / 100;
        const afterDiscount = subtotal - discountAmt;

        let taxAmount = 0;
        if (gstOption && gstOption.value) {
            if (isInterState) {
                taxAmount = afterDiscount * (parseFloat(gstOption.dataset.igst) || 0) / 100;
            } else {
                taxAmount = afterDiscount * ((parseFloat(gstOption.dataset.cgst) || 0) + (parseFloat(gstOption.dataset.sgst) || 0)) / 100;
            }
        }

        const total = afterDiscount + taxAmount;
        row.querySelector('.line-total').textContent = '₹' + total.toFixed(2);
        calculateTotals();
    }

    function calculateTotals() {
        let subtotal = 0;
        let discountTotal = 0;
        let cgstTotal = 0;
        let sgstTotal = 0;
        let igstTotal = 0;

        document.querySelectorAll('#linesBody tr').forEach(row => {
            const qty = parseFloat(row.querySelector('.qty-input')?.value) || 0;
            const price = parseFloat(row.querySelector('.price-input')?.value) || 0;
            const discount = parseFloat(row.querySelector('.discount-input')?.value) || 0;
            const gstSelect = row.querySelector('.gst-select');
            const gstOption = gstSelect?.options[gstSelect?.selectedIndex];

            const lineSubtotal = qty * price;
            const lineDiscount = lineSubtotal * discount / 100;
            const lineAfterDiscount = lineSubtotal - lineDiscount;

            subtotal += lineSubtotal;
            discountTotal += lineDiscount;

            if (gstOption && gstOption.value) {
                if (isInterState) {
                    igstTotal += lineAfterDiscount * (parseFloat(gstOption.dataset.igst) || 0) / 100;
                } else {
                    cgstTotal += lineAfterDiscount * (parseFloat(gstOption.dataset.cgst) || 0) / 100;
                    sgstTotal += lineAfterDiscount * (parseFloat(gstOption.dataset.sgst) || 0) / 100;
                }
            }
        });

        const taxTotal = cgstTotal + sgstTotal + igstTotal;
        const total = subtotal - discountTotal + taxTotal;

        // Update table footer
        document.getElementById('subtotalDisplay').textContent = '₹' + subtotal.toFixed(2);
        document.getElementById('discountDisplay').textContent = '-₹' + discountTotal.toFixed(2);
        document.getElementById('cgstDisplay').textContent = '₹' + cgstTotal.toFixed(2);
        document.getElementById('sgstDisplay').textContent = '₹' + sgstTotal.toFixed(2);
        document.getElementById('igstDisplay').textContent = '₹' + igstTotal.toFixed(2);
        document.getElementById('totalDisplay').textContent = '₹' + total.toFixed(2);

        // Update sidebar summary
        document.getElementById('summarySubtotal').textContent = '₹' + subtotal.toFixed(2);
        document.getElementById('summaryDiscount').textContent = '-₹' + discountTotal.toFixed(2);
        document.getElementById('summaryCgst').textContent = '₹' + cgstTotal.toFixed(2);
        document.getElementById('summarySgst').textContent = '₹' + sgstTotal.toFixed(2);
        document.getElementById('summaryIgst').textContent = '₹' + igstTotal.toFixed(2);
        document.getElementById('summaryTotal').textContent = '₹' + total.toFixed(2);
    }

    function updateDueDate() {
        const select = document.getElementById('paymentTerms');
        const option = select.options[select.selectedIndex];
        const days = parseInt(option.dataset.days) || 0;

        if (days > 0) {
            const invoiceDate = new Date(document.querySelector('[name="Input.InvoiceDate"]').value);
            const dueDate = new Date(invoiceDate);
            dueDate.setDate(dueDate.getDate() + days);
            document.getElementById('dueDate').value = dueDate.toISOString().split('T')[0];
            document.getElementById('paymentTermDays').value = days;
        }
    }

    // Auto-fill billing address when customer selected
    document.getElementById('customerSelect')?.addEventListener('change', function() {
        const option = this.options[this.selectedIndex];
        if (option.value) {
            document.getElementById('billingName').value = option.dataset.name || '';
            document.getElementById('billingAddress').value = option.dataset.address || '';
            document.getElementById('billingCity').value = option.dataset.city || '';
            document.getElementById('billingState').value = option.dataset.state || '';
            document.getElementById('billingPostalCode').value = option.dataset.postal || '';
            document.getElementById('billingCountry').value = option.dataset.country || '';
        }
    });

    // Initialize on page load
    updateTaxDisplayRows();
    document.querySelectorAll('#linesBody tr').forEach(row => {
        const input = row.querySelector('.qty-input');
        if (input) calculateLineTotal(input);
    });
    calculateTotals();

    // Add first line if empty
    if (document.querySelectorAll('#linesBody tr').length === 0) {
        addLine();
    }
</script>
