@model Algora.Erp.Web.Pages.Finance.Accounts.AccountFormViewModel
@using Algora.Erp.Domain.Entities.Finance

<form hx-post="/Finance/Accounts" hx-target="#tableContent" hx-swap="innerHTML"
      hx-on::after-request="if(event.detail.successful) { window.AlgoraModal.hide('accountModal'); }">

    @if (Model.IsEdit && Model.Account != null)
    {
        <input type="hidden" name="Id" value="@Model.Account.Id" />
    }

    <div class="grid grid-cols-1 md:grid-cols-12 gap-4">
        <div class="md:col-span-4">
            <label class="block text-sm font-medium text-gray-700 mb-1">Account Code <span class="text-red-500">*</span></label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 @(Model.IsEdit ? "bg-gray-100" : "")" name="Code" required
                   value="@(Model.Account?.Code)" placeholder="e.g., 1000"
                   @(Model.IsEdit ? "readonly" : "")>
        </div>
        <div class="md:col-span-8">
            <label class="block text-sm font-medium text-gray-700 mb-1">Account Name <span class="text-red-500">*</span></label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Name" required
                   value="@(Model.Account?.Name)" placeholder="Enter account name">
        </div>
        <div class="md:col-span-12">
            <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
            <textarea class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Description" rows="2"
                      placeholder="Optional description">@Model.Account?.Description</textarea>
        </div>
        <div class="md:col-span-6">
            <label class="block text-sm font-medium text-gray-700 mb-1">Account Type <span class="text-red-500">*</span></label>
            <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="AccountType" required id="accountType" onchange="updateSubTypes()">
                @foreach (AccountType type in Enum.GetValues(typeof(AccountType)))
                {
                    if (Model.Account?.AccountType == type)
                    {
                        <option value="@((int)type)" selected>@type</option>
                    }
                    else
                    {
                        <option value="@((int)type)">@type</option>
                    }
                }
            </select>
        </div>
        <div class="md:col-span-6">
            <label class="block text-sm font-medium text-gray-700 mb-1">Sub-Type</label>
            <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="AccountSubType" id="accountSubType">
                <option value="">Select Sub-Type</option>
                @foreach (AccountSubType subType in Enum.GetValues(typeof(AccountSubType)))
                {
                    if (Model.Account?.AccountSubType == subType)
                    {
                        <option value="@((int)subType)" selected>@subType</option>
                    }
                    else
                    {
                        <option value="@((int)subType)">@subType</option>
                    }
                }
            </select>
        </div>
        <div class="md:col-span-12">
            <label class="block text-sm font-medium text-gray-700 mb-1">Parent Account</label>
            <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="ParentAccountId">
                <option value="">None (Top Level)</option>
                @foreach (var parent in Model.ParentAccounts)
                {
                    if (Model.Account?.ParentAccountId == parent.Id)
                    {
                        <option value="@parent.Id" selected>@parent.Code - @parent.Name</option>
                    }
                    else
                    {
                        <option value="@parent.Id">@parent.Code - @parent.Name</option>
                    }
                }
            </select>
        </div>
        <div class="md:col-span-4">
            <label class="block text-sm font-medium text-gray-700 mb-1">Opening Balance</label>
            <div class="flex">
                <span class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 border border-e-0 border-gray-300 rounded-s-lg">$</span>
                <input type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-e-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="OpeningBalance" step="0.01"
                       value="@(Model.Account?.OpeningBalance ?? 0)" placeholder="0.00">
            </div>
        </div>
        <div class="md:col-span-4">
            <label class="block text-sm font-medium text-gray-700 mb-1">Current Balance</label>
            <div class="flex">
                <span class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 border border-e-0 border-gray-300 rounded-s-lg">$</span>
                <input type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-e-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 @(Model.IsEdit ? "" : "bg-gray-100")" name="CurrentBalance" step="0.01"
                       value="@(Model.Account?.CurrentBalance)" placeholder="Same as opening"
                       @(Model.IsEdit ? "" : "readonly")>
            </div>
        </div>
        <div class="md:col-span-4">
            <label class="block text-sm font-medium text-gray-700 mb-1">Currency</label>
            <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Currency">
                <option value="USD" selected="@(Model.Account?.Currency == "USD" || Model.Account?.Currency == null)">USD - US Dollar</option>
                <option value="EUR" selected="@(Model.Account?.Currency == "EUR")">EUR - Euro</option>
                <option value="GBP" selected="@(Model.Account?.Currency == "GBP")">GBP - British Pound</option>
                <option value="INR" selected="@(Model.Account?.Currency == "INR")">INR - Indian Rupee</option>
            </select>
        </div>
        <div class="md:col-span-6 flex items-end">
            <label class="relative inline-flex items-center cursor-pointer">
                @if (Model.Account?.IsActive ?? true)
                {
                    <input type="checkbox" class="sr-only peer" name="IsActive" value="true" checked>
                }
                else
                {
                    <input type="checkbox" class="sr-only peer" name="IsActive" value="true">
                }
                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-300 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-600"></div>
                <span class="ms-3 text-sm font-medium text-gray-900">Active</span>
            </label>
        </div>
        <div class="md:col-span-6 flex items-end">
            <label class="relative inline-flex items-center cursor-pointer">
                @if (Model.Account?.AllowDirectPosting ?? true)
                {
                    <input type="checkbox" class="sr-only peer" name="AllowDirectPosting" value="true" checked>
                }
                else
                {
                    <input type="checkbox" class="sr-only peer" name="AllowDirectPosting" value="true">
                }
                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-300 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-600"></div>
                <span class="ms-3 text-sm font-medium text-gray-900">Allow Direct Posting</span>
            </label>
        </div>
    </div>

    <div class="flex justify-end gap-3 mt-6 pt-4 border-t border-gray-200">
        <button type="button" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50" onclick="closeModal('accountModal')">Cancel</button>
        <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-primary-600 rounded-lg hover:bg-primary-700">
            @(Model.IsEdit ? "Update Account" : "Create Account")
        </button>
    </div>
</form>

<script>
    function updateSubTypes() {
        // This would filter sub-types based on account type selection
        // For now, all sub-types are shown
    }
</script>
