@model Algora.Erp.Web.Pages.Finance.Accounts.AccountFormViewModel
@using Algora.Erp.Domain.Entities.Finance

<form hx-post="/Finance/Accounts" hx-target="#tableContent" hx-swap="innerHTML"
      hx-on::after-request="if(event.detail.successful) bootstrap.Modal.getInstance(document.getElementById('accountModal')).hide()">

    @if (Model.IsEdit && Model.Account != null)
    {
        <input type="hidden" name="Id" value="@Model.Account.Id" />
    }

    <div class="row g-3">
        <div class="col-md-4">
            <label class="form-label">Account Code <span class="text-danger">*</span></label>
            <input type="text" class="form-control" name="Code" required
                   value="@(Model.Account?.Code)" placeholder="e.g., 1000"
                   @(Model.IsEdit ? "readonly" : "")>
        </div>
        <div class="col-md-8">
            <label class="form-label">Account Name <span class="text-danger">*</span></label>
            <input type="text" class="form-control" name="Name" required
                   value="@(Model.Account?.Name)" placeholder="Enter account name">
        </div>
        <div class="col-12">
            <label class="form-label">Description</label>
            <textarea class="form-control" name="Description" rows="2"
                      placeholder="Optional description">@Model.Account?.Description</textarea>
        </div>
        <div class="col-md-6">
            <label class="form-label">Account Type <span class="text-danger">*</span></label>
            <select class="form-select" name="AccountType" required id="accountType" onchange="updateSubTypes()">
                @foreach (AccountType type in Enum.GetValues(typeof(AccountType)))
                {
                    if (Model.Account?.AccountType == type)
                    {
                        <option value="@((int)type)" selected>@type</option>
                    }
                    else
                    {
                        <option value="@((int)type)">@type</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-6">
            <label class="form-label">Sub-Type</label>
            <select class="form-select" name="AccountSubType" id="accountSubType">
                <option value="">Select Sub-Type</option>
                @foreach (AccountSubType subType in Enum.GetValues(typeof(AccountSubType)))
                {
                    if (Model.Account?.AccountSubType == subType)
                    {
                        <option value="@((int)subType)" selected>@subType</option>
                    }
                    else
                    {
                        <option value="@((int)subType)">@subType</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-12">
            <label class="form-label">Parent Account</label>
            <select class="form-select" name="ParentAccountId">
                <option value="">None (Top Level)</option>
                @foreach (var parent in Model.ParentAccounts)
                {
                    if (Model.Account?.ParentAccountId == parent.Id)
                    {
                        <option value="@parent.Id" selected>@parent.Code - @parent.Name</option>
                    }
                    else
                    {
                        <option value="@parent.Id">@parent.Code - @parent.Name</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-4">
            <label class="form-label">Opening Balance</label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input type="number" class="form-control" name="OpeningBalance" step="0.01"
                       value="@(Model.Account?.OpeningBalance ?? 0)" placeholder="0.00">
            </div>
        </div>
        <div class="col-md-4">
            <label class="form-label">Current Balance</label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input type="number" class="form-control" name="CurrentBalance" step="0.01"
                       value="@(Model.Account?.CurrentBalance)" placeholder="Same as opening"
                       @(Model.IsEdit ? "" : "readonly")>
            </div>
        </div>
        <div class="col-md-4">
            <label class="form-label">Currency</label>
            <select class="form-select" name="Currency">
                <option value="USD" selected="@(Model.Account?.Currency == "USD" || Model.Account?.Currency == null)">USD - US Dollar</option>
                <option value="EUR" selected="@(Model.Account?.Currency == "EUR")">EUR - Euro</option>
                <option value="GBP" selected="@(Model.Account?.Currency == "GBP")">GBP - British Pound</option>
                <option value="INR" selected="@(Model.Account?.Currency == "INR")">INR - Indian Rupee</option>
            </select>
        </div>
        <div class="col-md-6">
            <div class="form-check mt-4">
                @if (Model.Account?.IsActive ?? true)
                {
                    <input class="form-check-input" type="checkbox" name="IsActive" value="true" id="isActive" checked>
                }
                else
                {
                    <input class="form-check-input" type="checkbox" name="IsActive" value="true" id="isActive">
                }
                <label class="form-check-label" for="isActive">Active</label>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-check mt-4">
                @if (Model.Account?.AllowDirectPosting ?? true)
                {
                    <input class="form-check-input" type="checkbox" name="AllowDirectPosting" value="true" id="allowPosting" checked>
                }
                else
                {
                    <input class="form-check-input" type="checkbox" name="AllowDirectPosting" value="true" id="allowPosting">
                }
                <label class="form-check-label" for="allowPosting">Allow Direct Posting</label>
            </div>
        </div>
    </div>

    <div class="modal-footer px-0 pb-0 mt-4">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">
            @(Model.IsEdit ? "Update Account" : "Create Account")
        </button>
    </div>
</form>

<script>
    function updateSubTypes() {
        // This would filter sub-types based on account type selection
        // For now, all sub-types are shown
    }
</script>
