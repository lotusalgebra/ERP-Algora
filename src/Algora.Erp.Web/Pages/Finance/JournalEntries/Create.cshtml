@page
@model Algora.Erp.Web.Pages.Finance.JournalEntries.CreateModel
@using Algora.Erp.Domain.Entities.Finance
@{
    ViewData["Title"] = "New Journal Entry";
}

<div class="w-full">
    <!-- Page Header -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-2xl font-semibold text-gray-900 dark:text-white mb-1">New Journal Entry</h1>
            <nav class="flex" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-3">
                    <li class="inline-flex items-center">
                        <a href="/" class="text-sm text-gray-500 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-500">Dashboard</a>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <svg class="w-3 h-3 mx-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
                            <a href="/Finance" class="text-sm text-gray-500 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-500">Finance</a>
                        </div>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <svg class="w-3 h-3 mx-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
                            <a href="/Finance/JournalEntries" class="text-sm text-gray-500 hover:text-primary-600 dark:text-gray-400 dark:hover:text-primary-500">Journal Entries</a>
                        </div>
                    </li>
                    <li aria-current="page">
                        <div class="flex items-center">
                            <svg class="w-3 h-3 mx-1 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
                            <span class="text-sm text-gray-500 dark:text-gray-400">New</span>
                        </div>
                    </li>
                </ol>
            </nav>
        </div>
    </div>

    <form method="post" id="journalEntryForm">
        <!-- Validation Summary -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="flex items-center p-4 mb-4 text-red-800 border border-red-300 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400 dark:border-red-800" role="alert">
                <i class="bi bi-exclamation-triangle mr-2"></i>
                <div class="flex-1">
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                        <span>@error.ErrorMessage</span><br />
                    }
                </div>
                <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-red-50 text-red-500 rounded-lg focus:ring-2 focus:ring-red-400 p-1.5 hover:bg-red-200 inline-flex items-center justify-center h-8 w-8 dark:bg-gray-800 dark:text-red-400 dark:hover:bg-gray-700" data-dismiss-target="[role='alert']" aria-label="Close">
                    <span class="sr-only">Close</span>
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                    </svg>
                </button>
            </div>
        }

        <div class="grid grid-cols-12 gap-6">
            <!-- Entry Header -->
            <div class="col-span-12 lg:col-span-8">
                <div class="bg-white rounded-lg shadow-md dark:bg-gray-800">
                    <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                        <h5 class="text-lg font-semibold text-gray-900 dark:text-white"><i class="bi bi-info-circle mr-2"></i>Entry Details</h5>
                    </div>
                    <div class="p-6">
                        <div class="grid grid-cols-12 gap-4">
                            <div class="col-span-12 md:col-span-4">
                                <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Entry Date <span class="text-red-500">*</span></label>
                                <input type="date" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" asp-for="Input.EntryDate" required />
                            </div>
                            <div class="col-span-12 md:col-span-4">
                                <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Entry Type <span class="text-red-500">*</span></label>
                                <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" asp-for="Input.EntryType" asp-items="Model.EntryTypes"></select>
                            </div>
                            <div class="col-span-12 md:col-span-4">
                                <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Reference</label>
                                <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" asp-for="Input.Reference" placeholder="e.g., INV-001, PO-123" />
                            </div>
                            <div class="col-span-12">
                                <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Description <span class="text-red-500">*</span></label>
                                <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" asp-for="Input.Description" placeholder="Brief description of this entry" required />
                            </div>
                            <div class="col-span-12">
                                <label class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">Notes</label>
                                <textarea class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500" asp-for="Input.Notes" rows="2" placeholder="Additional notes (optional)"></textarea>
                            </div>
                            <div class="col-span-12">
                                <div class="flex items-center">
                                    <input class="w-4 h-4 text-primary-600 bg-gray-100 border-gray-300 rounded focus:ring-primary-500 dark:focus:ring-primary-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600" type="checkbox" asp-for="Input.IsAdjusting" />
                                    <label class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-300" asp-for="Input.IsAdjusting">
                                        This is an adjusting entry
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Summary Card -->
            <div class="col-span-12 lg:col-span-4">
                <div class="bg-white rounded-lg shadow-md dark:bg-gray-800">
                    <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                        <h5 class="text-lg font-semibold text-gray-900 dark:text-white"><i class="bi bi-calculator mr-2"></i>Summary</h5>
                    </div>
                    <div class="p-6">
                        <div class="flex justify-between mb-3">
                            <span class="text-gray-500 dark:text-gray-400">Total Debit:</span>
                            <span class="font-bold text-emerald-600 dark:text-emerald-400" id="totalDebit">$0.00</span>
                        </div>
                        <div class="flex justify-between mb-3">
                            <span class="text-gray-500 dark:text-gray-400">Total Credit:</span>
                            <span class="font-bold text-red-600 dark:text-red-400" id="totalCredit">$0.00</span>
                        </div>
                        <hr class="border-gray-200 dark:border-gray-700" />
                        <div class="flex justify-between mt-3">
                            <span class="text-gray-500 dark:text-gray-400">Difference:</span>
                            <span class="font-bold" id="difference">$0.00</span>
                        </div>
                        <div id="balanceStatus" class="mt-4 text-center">
                            <span class="inline-flex items-center px-3 py-1 text-sm font-medium rounded-full bg-amber-100 text-amber-800 dark:bg-amber-900 dark:text-amber-300">
                                <i class="bi bi-exclamation-triangle mr-1"></i>Entry not balanced
                            </span>
                        </div>
                    </div>
                </div>

                <div class="bg-white rounded-lg shadow-md dark:bg-gray-800 mt-4">
                    <div class="p-6">
                        <div class="flex flex-col gap-3">
                            <button type="submit" class="w-full text-primary-700 hover:text-white border border-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:border-primary-500 dark:text-primary-500 dark:hover:text-white dark:hover:bg-primary-600 dark:focus:ring-primary-800" name="Input.SaveAsDraft" value="true">
                                <i class="bi bi-save mr-2"></i>Save as Draft
                            </button>
                            <button type="submit" class="w-full text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" name="Input.SaveAsDraft" value="false" id="submitBtn">
                                <i class="bi bi-check-lg mr-2"></i>Submit for Approval
                            </button>
                            <a href="/Finance/JournalEntries" class="w-full text-gray-700 hover:text-white border border-gray-700 hover:bg-gray-800 focus:ring-4 focus:outline-none focus:ring-gray-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:border-gray-500 dark:text-gray-400 dark:hover:text-white dark:hover:bg-gray-600 dark:focus:ring-gray-700">
                                <i class="bi bi-x-lg mr-2"></i>Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Line Items -->
        <div class="bg-white rounded-lg shadow-md dark:bg-gray-800 mt-6">
            <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 flex justify-between items-center">
                <h5 class="text-lg font-semibold text-gray-900 dark:text-white"><i class="bi bi-list-ul mr-2"></i>Line Items</h5>
                <button type="button" class="text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-xs px-3 py-2 dark:bg-primary-600 dark:hover:bg-primary-700 dark:focus:ring-primary-800" id="addLineBtn">
                    <i class="bi bi-plus-lg mr-1"></i>Add Line
                </button>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                        <tr>
                            <th scope="col" class="px-4 py-3" style="width: 40px;">#</th>
                            <th scope="col" class="px-4 py-3" style="width: 35%;">Account <span class="text-red-500">*</span></th>
                            <th scope="col" class="px-4 py-3">Description</th>
                            <th scope="col" class="px-4 py-3 text-right" style="width: 150px;">Debit</th>
                            <th scope="col" class="px-4 py-3 text-right" style="width: 150px;">Credit</th>
                            <th scope="col" class="px-4 py-3" style="width: 50px;"></th>
                        </tr>
                    </thead>
                    <tbody id="linesContainer">
                        @for (int i = 0; i < Model.Input.Lines.Count; i++)
                        {
                            <tr class="line-row bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600" data-index="@i">
                                <td class="px-4 py-3 text-gray-500 dark:text-gray-400 line-number">@(i + 1)</td>
                                <td class="px-4 py-3">
                                    <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 account-select"
                                            name="Input.Lines[@i].AccountId">
                                        <option value="">-- Select Account --</option>
                                        @foreach (var group in Model.Accounts.GroupBy(a => a.Group?.Name))
                                        {
                                            <optgroup label="@group.Key">
                                                @foreach (var account in group)
                                                {
                                                    <option value="@account.Value"
                                                            selected="@(account.Value == Model.Input.Lines[i].AccountId.ToString())">
                                                        @account.Text
                                                    </option>
                                                }
                                            </optgroup>
                                        }
                                    </select>
                                </td>
                                <td class="px-4 py-3">
                                    <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                                           name="Input.Lines[@i].Description"
                                           value="@Model.Input.Lines[i].Description"
                                           placeholder="Line description" />
                                </td>
                                <td class="px-4 py-3">
                                    <input type="number" step="0.01" min="0"
                                           class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2 text-right dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 debit-input"
                                           name="Input.Lines[@i].DebitAmount"
                                           value="@(Model.Input.Lines[i].DebitAmount > 0 ? Model.Input.Lines[i].DebitAmount : "")"
                                           placeholder="0.00" />
                                </td>
                                <td class="px-4 py-3">
                                    <input type="number" step="0.01" min="0"
                                           class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2 text-right dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 credit-input"
                                           name="Input.Lines[@i].CreditAmount"
                                           value="@(Model.Input.Lines[i].CreditAmount > 0 ? Model.Input.Lines[i].CreditAmount : "")"
                                           placeholder="0.00" />
                                </td>
                                <td class="px-4 py-3 text-center">
                                    <button type="button" class="text-red-600 hover:text-red-900 dark:text-red-500 dark:hover:text-red-400 remove-line-btn" title="Remove line">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="bg-gray-50 dark:bg-gray-700">
                        <tr>
                            <td colspan="3" class="px-4 py-3 text-right font-bold text-gray-900 dark:text-white">Totals:</td>
                            <td class="px-4 py-3 text-right font-bold text-emerald-600 dark:text-emerald-400" id="footerDebit">$0.00</td>
                            <td class="px-4 py-3 text-right font-bold text-red-600 dark:text-red-400" id="footerCredit">$0.00</td>
                            <td class="px-4 py-3"></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </form>
</div>

<!-- Line Template (hidden) -->
<template id="lineTemplate">
    <tr class="line-row bg-white border-b dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600" data-index="__INDEX__">
        <td class="px-4 py-3 text-gray-500 dark:text-gray-400 line-number">__LINE_NUM__</td>
        <td class="px-4 py-3">
            <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 account-select"
                    name="Input.Lines[__INDEX__].AccountId">
                <option value="">-- Select Account --</option>
                @foreach (var group in Model.Accounts.GroupBy(a => a.Group?.Name))
                {
                    <optgroup label="@group.Key">
                        @foreach (var account in group)
                        {
                            <option value="@account.Value">@account.Text</option>
                        }
                    </optgroup>
                }
            </select>
        </td>
        <td class="px-4 py-3">
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500"
                   name="Input.Lines[__INDEX__].Description"
                   placeholder="Line description" />
        </td>
        <td class="px-4 py-3">
            <input type="number" step="0.01" min="0"
                   class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2 text-right dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 debit-input"
                   name="Input.Lines[__INDEX__].DebitAmount"
                   placeholder="0.00" />
        </td>
        <td class="px-4 py-3">
            <input type="number" step="0.01" min="0"
                   class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2 text-right dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-primary-500 dark:focus:border-primary-500 credit-input"
                   name="Input.Lines[__INDEX__].CreditAmount"
                   placeholder="0.00" />
        </td>
        <td class="px-4 py-3 text-center">
            <button type="button" class="text-red-600 hover:text-red-900 dark:text-red-500 dark:hover:text-red-400 remove-line-btn" title="Remove line">
                <i class="bi bi-trash"></i>
            </button>
        </td>
    </tr>
</template>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const linesContainer = document.getElementById('linesContainer');
            const lineTemplate = document.getElementById('lineTemplate');
            const addLineBtn = document.getElementById('addLineBtn');

            function getNextIndex() {
                const rows = linesContainer.querySelectorAll('.line-row');
                let maxIndex = -1;
                rows.forEach(row => {
                    const idx = parseInt(row.dataset.index);
                    if (idx > maxIndex) maxIndex = idx;
                });
                return maxIndex + 1;
            }

            function updateLineNumbers() {
                const rows = linesContainer.querySelectorAll('.line-row');
                rows.forEach((row, i) => {
                    row.querySelector('.line-number').textContent = i + 1;
                });
            }

            function calculateTotals() {
                let totalDebit = 0;
                let totalCredit = 0;

                linesContainer.querySelectorAll('.line-row').forEach(row => {
                    const debit = parseFloat(row.querySelector('.debit-input').value) || 0;
                    const credit = parseFloat(row.querySelector('.credit-input').value) || 0;
                    totalDebit += debit;
                    totalCredit += credit;
                });

                const formatter = new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' });

                document.getElementById('totalDebit').textContent = formatter.format(totalDebit);
                document.getElementById('totalCredit').textContent = formatter.format(totalCredit);
                document.getElementById('footerDebit').textContent = formatter.format(totalDebit);
                document.getElementById('footerCredit').textContent = formatter.format(totalCredit);

                const difference = Math.abs(totalDebit - totalCredit);
                const diffElement = document.getElementById('difference');
                diffElement.textContent = formatter.format(difference);

                const balanceStatus = document.getElementById('balanceStatus');
                if (difference === 0 && totalDebit > 0) {
                    diffElement.classList.remove('text-red-600', 'dark:text-red-400');
                    diffElement.classList.add('text-emerald-600', 'dark:text-emerald-400');
                    balanceStatus.innerHTML = '<span class="inline-flex items-center px-3 py-1 text-sm font-medium rounded-full bg-emerald-100 text-emerald-800 dark:bg-emerald-900 dark:text-emerald-300"><i class="bi bi-check-circle mr-1"></i>Entry is balanced</span>';
                } else {
                    diffElement.classList.remove('text-emerald-600', 'dark:text-emerald-400');
                    diffElement.classList.add('text-red-600', 'dark:text-red-400');
                    balanceStatus.innerHTML = '<span class="inline-flex items-center px-3 py-1 text-sm font-medium rounded-full bg-amber-100 text-amber-800 dark:bg-amber-900 dark:text-amber-300"><i class="bi bi-exclamation-triangle mr-1"></i>Entry not balanced</span>';
                }
            }

            function addLine() {
                const index = getNextIndex();
                const lineNum = linesContainer.querySelectorAll('.line-row').length + 1;
                let html = lineTemplate.innerHTML
                    .replace(/__INDEX__/g, index)
                    .replace(/__LINE_NUM__/g, lineNum);

                const temp = document.createElement('tbody');
                temp.innerHTML = html;
                const newRow = temp.firstElementChild;
                linesContainer.appendChild(newRow);

                // Add event listeners to new row
                attachRowListeners(newRow);

                // Focus the account dropdown
                newRow.querySelector('.account-select').focus();
            }

            function removeLine(row) {
                if (linesContainer.querySelectorAll('.line-row').length > 2) {
                    row.remove();
                    updateLineNumbers();
                    calculateTotals();
                } else {
                    alert('A journal entry must have at least 2 lines.');
                }
            }

            function attachRowListeners(row) {
                row.querySelector('.remove-line-btn').addEventListener('click', () => removeLine(row));
                row.querySelector('.debit-input').addEventListener('input', function() {
                    // If debit has value, clear credit
                    if (this.value && parseFloat(this.value) > 0) {
                        row.querySelector('.credit-input').value = '';
                    }
                    calculateTotals();
                });
                row.querySelector('.credit-input').addEventListener('input', function() {
                    // If credit has value, clear debit
                    if (this.value && parseFloat(this.value) > 0) {
                        row.querySelector('.debit-input').value = '';
                    }
                    calculateTotals();
                });
            }

            // Attach listeners to existing rows
            linesContainer.querySelectorAll('.line-row').forEach(attachRowListeners);

            // Add line button
            addLineBtn.addEventListener('click', addLine);

            // Initial calculation
            calculateTotals();

            // Form validation
            document.getElementById('journalEntryForm').addEventListener('submit', function(e) {
                const rows = linesContainer.querySelectorAll('.line-row');
                let validLines = 0;

                rows.forEach(row => {
                    const account = row.querySelector('.account-select').value;
                    const debit = parseFloat(row.querySelector('.debit-input').value) || 0;
                    const credit = parseFloat(row.querySelector('.credit-input').value) || 0;

                    if (account && (debit > 0 || credit > 0)) {
                        validLines++;
                    }
                });

                if (validLines < 2) {
                    e.preventDefault();
                    alert('A journal entry must have at least 2 valid lines with accounts and amounts.');
                    return;
                }

                // Check balance
                let totalDebit = 0;
                let totalCredit = 0;
                rows.forEach(row => {
                    totalDebit += parseFloat(row.querySelector('.debit-input').value) || 0;
                    totalCredit += parseFloat(row.querySelector('.credit-input').value) || 0;
                });

                if (Math.abs(totalDebit - totalCredit) > 0.001) {
                    e.preventDefault();
                    alert('The journal entry is not balanced. Total Debit must equal Total Credit.');
                }
            });
        });
    </script>
}
