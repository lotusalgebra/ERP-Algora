@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const linesContainer = document.getElementById('linesContainer');
            const isReadOnly = @(Model.IsReadOnly ? "true" : "false");

            function calculateTotals() {
                let totalDebit = 0;
                let totalCredit = 0;

                linesContainer.querySelectorAll('.line-row').forEach(row => {
                    const debitInput = row.querySelector('.debit-input');
                    const creditInput = row.querySelector('.credit-input');

                    if (debitInput) {
                        totalDebit += parseFloat(debitInput.value) || 0;
                    } else {
                        // Read-only mode - parse from text
                        const debitText = row.querySelectorAll('td')[3]?.textContent?.trim();
                        if (debitText && debitText !== '-') {
                            totalDebit += parseFloat(debitText.replace(/[$,]/g, '')) || 0;
                        }
                    }

                    if (creditInput) {
                        totalCredit += parseFloat(creditInput.value) || 0;
                    } else {
                        // Read-only mode - parse from text
                        const creditText = row.querySelectorAll('td')[4]?.textContent?.trim();
                        if (creditText && creditText !== '-') {
                            totalCredit += parseFloat(creditText.replace(/[$,]/g, '')) || 0;
                        }
                    }
                });

                const formatter = new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' });

                document.getElementById('totalDebit').textContent = formatter.format(totalDebit);
                document.getElementById('totalCredit').textContent = formatter.format(totalCredit);
                document.getElementById('footerDebit').textContent = formatter.format(totalDebit);
                document.getElementById('footerCredit').textContent = formatter.format(totalCredit);

                const difference = Math.abs(totalDebit - totalCredit);
                const diffElement = document.getElementById('difference');
                diffElement.textContent = formatter.format(difference);

                const balanceStatus = document.getElementById('balanceStatus');
                if (difference < 0.01 && totalDebit > 0) {
                    diffElement.classList.remove('text-red-600', 'dark:text-red-400');
                    diffElement.classList.add('text-emerald-600', 'dark:text-emerald-400');
                    balanceStatus.innerHTML = '<span class="inline-flex items-center px-3 py-1 text-sm font-medium rounded-full bg-emerald-100 text-emerald-800 dark:bg-emerald-900 dark:text-emerald-300"><i class="bi bi-check-circle mr-1"></i>Entry is balanced</span>';
                } else {
                    diffElement.classList.remove('text-emerald-600', 'dark:text-emerald-400');
                    diffElement.classList.add('text-red-600', 'dark:text-red-400');
                    balanceStatus.innerHTML = '<span class="inline-flex items-center px-3 py-1 text-sm font-medium rounded-full bg-amber-100 text-amber-800 dark:bg-amber-900 dark:text-amber-300"><i class="bi bi-exclamation-triangle mr-1"></i>Entry not balanced</span>';
                }
            }

            // Initial calculation
            calculateTotals();

            if (isReadOnly) return;

            const lineTemplate = document.getElementById('lineTemplate');
            const addLineBtn = document.getElementById('addLineBtn');

            function getNextIndex() {
                const rows = linesContainer.querySelectorAll('.line-row');
                let maxIndex = -1;
                rows.forEach(row => {
                    const idx = parseInt(row.dataset.index);
                    if (idx > maxIndex) maxIndex = idx;
                });
                return maxIndex + 1;
            }

            function updateLineNumbers() {
                const rows = linesContainer.querySelectorAll('.line-row');
                rows.forEach((row, i) => {
                    row.querySelector('.line-number').textContent = i + 1;
                });
            }

            function addLine() {
                const index = getNextIndex();
                const lineNum = linesContainer.querySelectorAll('.line-row').length + 1;
                let html = lineTemplate.innerHTML
                    .replace(/__INDEX__/g, index)
                    .replace(/__LINE_NUM__/g, lineNum);

                const temp = document.createElement('tbody');
                temp.innerHTML = html;
                const newRow = temp.firstElementChild;
                linesContainer.appendChild(newRow);

                attachRowListeners(newRow);
                newRow.querySelector('.account-select').focus();
            }

            function removeLine(row) {
                if (linesContainer.querySelectorAll('.line-row').length > 2) {
                    row.remove();
                    updateLineNumbers();
                    calculateTotals();
                } else {
                    alert('A journal entry must have at least 2 lines.');
                }
            }

            function attachRowListeners(row) {
                row.querySelector('.remove-line-btn')?.addEventListener('click', () => removeLine(row));
                row.querySelector('.debit-input')?.addEventListener('input', function() {
                    if (this.value && parseFloat(this.value) > 0) {
                        row.querySelector('.credit-input').value = '';
                    }
                    calculateTotals();
                });
                row.querySelector('.credit-input')?.addEventListener('input', function() {
                    if (this.value && parseFloat(this.value) > 0) {
                        row.querySelector('.debit-input').value = '';
                    }
                    calculateTotals();
                });
            }

            // Attach listeners to existing rows
            linesContainer.querySelectorAll('.line-row').forEach(attachRowListeners);

            // Add line button
            addLineBtn?.addEventListener('click', addLine);

            // Form validation
            document.getElementById('journalEntryForm').addEventListener('submit', function(e) {
                const rows = linesContainer.querySelectorAll('.line-row');
                let validLines = 0;

                rows.forEach(row => {
                    const account = row.querySelector('.account-select')?.value;
                    const debit = parseFloat(row.querySelector('.debit-input')?.value) || 0;
                    const credit = parseFloat(row.querySelector('.credit-input')?.value) || 0;

                    if (account && (debit > 0 || credit > 0)) {
                        validLines++;
                    }
                });

                if (validLines < 2) {
                    e.preventDefault();
                    alert('A journal entry must have at least 2 valid lines with accounts and amounts.');
                    return;
                }

                let totalDebit = 0;
                let totalCredit = 0;
                rows.forEach(row => {
                    totalDebit += parseFloat(row.querySelector('.debit-input')?.value) || 0;
                    totalCredit += parseFloat(row.querySelector('.credit-input')?.value) || 0;
                });

                if (Math.abs(totalDebit - totalCredit) > 0.001) {
                    e.preventDefault();
                    alert('The journal entry is not balanced. Total Debit must equal Total Credit.');
                }
            });
        });
    </script>
