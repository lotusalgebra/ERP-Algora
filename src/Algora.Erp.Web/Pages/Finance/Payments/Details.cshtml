@page "{id:guid}"
@model Algora.Erp.Web.Pages.Finance.Payments.DetailsModel
@using Algora.Erp.Domain.Entities.Finance
@{
    ViewData["Title"] = $"Payment {Model.Payment.PaymentNumber}";

    var methodBadgeClass = Model.Payment.PaymentMethod switch
    {
        PaymentMethod.Cash => "bg-emerald-100 text-emerald-800 dark:bg-emerald-900/30 dark:text-emerald-400",
        PaymentMethod.BankTransfer => "bg-primary-100 text-primary-800 dark:bg-primary-900/30 dark:text-primary-400",
        PaymentMethod.CreditCard => "bg-sky-100 text-sky-800 dark:bg-sky-900/30 dark:text-sky-400",
        PaymentMethod.DebitCard => "bg-sky-100 text-sky-800 dark:bg-sky-900/30 dark:text-sky-400",
        PaymentMethod.Check => "bg-amber-100 text-amber-800 dark:bg-amber-900/30 dark:text-amber-400",
        PaymentMethod.PayPal => "bg-primary-100 text-primary-800 dark:bg-primary-900/30 dark:text-primary-400",
        _ => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300"
    };
}

<div class="p-4">
    <!-- Page Header -->
    <div class="flex justify-between items-center mb-6">
        <div>
            <div class="flex items-center gap-3 mb-1">
                <h1 class="text-2xl font-semibold text-gray-900 dark:text-white">@Model.Payment.PaymentNumber</h1>
                <span class="text-sm font-medium px-3 py-1 rounded-full @methodBadgeClass">@Model.Payment.PaymentMethod</span>
            </div>
            <nav class="flex" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 text-sm text-gray-500">
                    <li><a href="/" class="hover:text-primary-600">Dashboard</a></li>
                    <li><span class="mx-2">/</span></li>
                    <li><a href="/Finance" class="hover:text-primary-600">Finance</a></li>
                    <li><span class="mx-2">/</span></li>
                    <li><a href="/Finance/Payments" class="hover:text-primary-600">Payments</a></li>
                    <li><span class="mx-2">/</span></li>
                    <li class="text-gray-700 dark:text-gray-300">@Model.Payment.PaymentNumber</li>
                </ol>
            </nav>
        </div>
        <div class="flex gap-2">
            <a href="/Finance/Payments/Receipt/@Model.Payment.Id" class="text-primary-700 border border-primary-700 hover:bg-primary-700 hover:text-white focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-4 py-2 dark:border-primary-500 dark:text-primary-500 dark:hover:bg-primary-600 dark:hover:text-white" target="_blank">
                <i class="bi bi-printer mr-1"></i> Print Receipt
            </a>
            <button type="button" class="text-gray-700 border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-3 py-2 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:bg-gray-700" id="dropdownActions" data-dropdown-toggle="dropdownMenuActions">
                <i class="bi bi-three-dots"></i>
            </button>
            <div class="z-10 hidden bg-white divide-y divide-gray-100 rounded-lg shadow w-44 dark:bg-gray-700" id="dropdownMenuActions">
                <ul class="py-2 text-sm text-gray-700 dark:text-gray-200">
                    <li>
                        <a href="/Finance/Invoices/Details/@Model.Payment.InvoiceId" class="flex items-center px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">
                            <i class="bi bi-file-text mr-2"></i>View Invoice
                        </a>
                    </li>
                    @if (Model.Payment.Invoice?.CustomerId != null)
                    {
                        <li>
                            <a href="/Sales/Customers/Details/@Model.Payment.Invoice.CustomerId" class="flex items-center px-4 py-2 hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white">
                                <i class="bi bi-person mr-2"></i>View Customer
                            </a>
                        </li>
                    }
                </ul>
                <div class="py-2">
                    <form method="post" asp-page-handler="Delete" asp-route-id="@Model.Payment.Id">
                        <button type="submit" class="flex items-center w-full px-4 py-2 text-red-600 hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-red-400"
                                onclick="return confirm('Delete this payment? This will restore the invoice balance.')">
                            <i class="bi bi-trash mr-2"></i>Delete Payment
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="flex items-center p-4 mb-4 text-emerald-800 rounded-lg bg-emerald-50 dark:bg-gray-800 dark:text-emerald-400" role="alert">
            <i class="bi bi-check-circle mr-2"></i>
            <span>@TempData["Success"]</span>
            <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-emerald-50 text-emerald-500 rounded-lg p-1.5 hover:bg-emerald-200 dark:bg-gray-800 dark:text-emerald-400 dark:hover:bg-gray-700" data-dismiss-target="[role='alert']" aria-label="Close">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="flex items-center p-4 mb-4 text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
            <i class="bi bi-exclamation-circle mr-2"></i>
            <span>@TempData["Error"]</span>
            <button type="button" class="ml-auto -mx-1.5 -my-1.5 bg-red-50 text-red-500 rounded-lg p-1.5 hover:bg-red-200 dark:bg-gray-800 dark:text-red-400 dark:hover:bg-gray-700" data-dismiss-target="[role='alert']" aria-label="Close">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>
    }

    <div class="grid grid-cols-12 gap-6">
        <!-- Main Content -->
        <div class="col-span-12 lg:col-span-8">
            <!-- Payment Details Card -->
            <div class="bg-white rounded-lg shadow-md dark:bg-gray-800 mb-6">
                <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                    <h5 class="text-lg font-medium text-gray-900 dark:text-white"><i class="bi bi-cash mr-2"></i>Payment Details</h5>
                </div>
                <div class="p-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <table class="w-full text-sm">
                                <tr>
                                    <td class="py-2 text-gray-500 dark:text-gray-400" style="width: 150px;">Payment Number</td>
                                    <td class="py-2 font-medium text-gray-900 dark:text-white">@Model.Payment.PaymentNumber</td>
                                </tr>
                                <tr>
                                    <td class="py-2 text-gray-500 dark:text-gray-400">Payment Date</td>
                                    <td class="py-2 text-gray-900 dark:text-white">@Model.Payment.PaymentDate.ToString("MMMM dd, yyyy")</td>
                                </tr>
                                <tr>
                                    <td class="py-2 text-gray-500 dark:text-gray-400">Payment Method</td>
                                    <td class="py-2">
                                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @methodBadgeClass">@Model.Payment.PaymentMethod</span>
                                    </td>
                                </tr>
                                @if (!string.IsNullOrEmpty(Model.Payment.Reference))
                                {
                                    <tr>
                                        <td class="py-2 text-gray-500 dark:text-gray-400">Reference</td>
                                        <td class="py-2 text-gray-900 dark:text-white">@Model.Payment.Reference</td>
                                    </tr>
                                }
                            </table>
                        </div>
                        <div>
                            <div class="bg-emerald-50 dark:bg-emerald-900/20 rounded-lg p-6 text-center">
                                <p class="text-sm text-gray-500 dark:text-gray-400 mb-1">Amount Paid</p>
                                <h2 class="text-3xl font-bold text-emerald-600 dark:text-emerald-400">@Model.Payment.Amount.ToString("C2")</h2>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Payment.Notes))
                    {
                        <hr class="my-6 border-gray-200 dark:border-gray-700">
                        <div>
                            <h6 class="text-xs text-gray-500 dark:text-gray-400 uppercase mb-2">Notes</h6>
                            <p class="text-gray-700 dark:text-gray-300">@Model.Payment.Notes</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Invoice Info Card -->
            <div class="bg-white rounded-lg shadow-md dark:bg-gray-800 mb-6">
                <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 flex justify-between items-center">
                    <h5 class="text-lg font-medium text-gray-900 dark:text-white"><i class="bi bi-file-text mr-2"></i>Invoice Details</h5>
                    <a href="/Finance/Invoices/Details/@Model.Payment.InvoiceId" class="text-primary-700 border border-primary-700 hover:bg-primary-700 hover:text-white focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-3 py-1.5 dark:border-primary-500 dark:text-primary-500 dark:hover:bg-primary-600 dark:hover:text-white">
                        View Invoice
                    </a>
                </div>
                <div class="p-6">
                    @if (Model.Payment.Invoice != null)
                    {
                        var invoice = Model.Payment.Invoice;
                        var statusBadgeClass = invoice.Status switch
                        {
                            InvoiceStatus.Draft => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300",
                            InvoiceStatus.Pending => "bg-amber-100 text-amber-800 dark:bg-amber-900/30 dark:text-amber-400",
                            InvoiceStatus.Sent => "bg-sky-100 text-sky-800 dark:bg-sky-900/30 dark:text-sky-400",
                            InvoiceStatus.PartiallyPaid => "bg-primary-100 text-primary-800 dark:bg-primary-900/30 dark:text-primary-400",
                            InvoiceStatus.Paid => "bg-emerald-100 text-emerald-800 dark:bg-emerald-900/30 dark:text-emerald-400",
                            InvoiceStatus.Overdue => "bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-400",
                            InvoiceStatus.Void => "bg-gray-800 text-white dark:bg-gray-900 dark:text-gray-300",
                            _ => "bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-300"
                        };

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                            <div>
                                <table class="w-full text-sm">
                                    <tr>
                                        <td class="py-2 text-gray-500 dark:text-gray-400" style="width: 150px;">Invoice Number</td>
                                        <td class="py-2 font-medium text-gray-900 dark:text-white">@invoice.InvoiceNumber</td>
                                    </tr>
                                    <tr>
                                        <td class="py-2 text-gray-500 dark:text-gray-400">Status</td>
                                        <td class="py-2"><span class="text-xs font-medium px-2.5 py-0.5 rounded-full @statusBadgeClass">@invoice.Status</span></td>
                                    </tr>
                                    <tr>
                                        <td class="py-2 text-gray-500 dark:text-gray-400">Invoice Date</td>
                                        <td class="py-2 text-gray-900 dark:text-white">@invoice.InvoiceDate.ToString("MMM dd, yyyy")</td>
                                    </tr>
                                    <tr>
                                        <td class="py-2 text-gray-500 dark:text-gray-400">Due Date</td>
                                        <td class="py-2 text-gray-900 dark:text-white">@invoice.DueDate.ToString("MMM dd, yyyy")</td>
                                    </tr>
                                </table>
                            </div>
                            <div>
                                <table class="w-full text-sm">
                                    <tr>
                                        <td class="py-2 text-gray-500 dark:text-gray-400" style="width: 150px;">Invoice Total</td>
                                        <td class="py-2 font-medium text-gray-900 dark:text-white">@invoice.TotalAmount.ToString("C2")</td>
                                    </tr>
                                    <tr>
                                        <td class="py-2 text-gray-500 dark:text-gray-400">Amount Paid</td>
                                        <td class="py-2 text-emerald-600 dark:text-emerald-400">@invoice.PaidAmount.ToString("C2")</td>
                                    </tr>
                                    <tr>
                                        <td class="py-2 text-gray-500 dark:text-gray-400">Balance Due</td>
                                        <td class="py-2 @(invoice.BalanceDue > 0 ? "text-red-600 dark:text-red-400 font-medium" : "text-emerald-600 dark:text-emerald-400")">
                                            @invoice.BalanceDue.ToString("C2")
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-span-12 lg:col-span-4">
            <!-- Customer Card -->
            @if (Model.Payment.Invoice?.Customer != null)
            {
                var customer = Model.Payment.Invoice.Customer;
                <div class="bg-white rounded-lg shadow-md dark:bg-gray-800 mb-6">
                    <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                        <h5 class="text-lg font-medium text-gray-900 dark:text-white"><i class="bi bi-person mr-2"></i>Customer</h5>
                    </div>
                    <div class="p-6">
                        <h6 class="font-medium text-gray-900 dark:text-white mb-1">@customer.Name</h6>
                        @if (!string.IsNullOrEmpty(customer.Email))
                        {
                            <p class="text-gray-500 dark:text-gray-400 mb-1">
                                <i class="bi bi-envelope mr-1"></i>@customer.Email
                            </p>
                        }
                        @if (!string.IsNullOrEmpty(customer.Phone))
                        {
                            <p class="text-gray-500 dark:text-gray-400 mb-0">
                                <i class="bi bi-telephone mr-1"></i>@customer.Phone
                            </p>
                        }
                        <a href="/Sales/Customers/Details/@customer.Id" class="inline-block mt-4 text-primary-700 border border-primary-700 hover:bg-primary-700 hover:text-white focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-3 py-1.5 dark:border-primary-500 dark:text-primary-500 dark:hover:bg-primary-600 dark:hover:text-white">
                            View Customer
                        </a>
                    </div>
                </div>
            }

            <!-- Audit Info Card -->
            <div class="bg-white rounded-lg shadow-md dark:bg-gray-800 mb-6">
                <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                    <h5 class="text-lg font-medium text-gray-900 dark:text-white"><i class="bi bi-clock-history mr-2"></i>Audit Information</h5>
                </div>
                <div class="p-6">
                    <table class="w-full text-sm">
                        <tr>
                            <td class="py-2 text-gray-500 dark:text-gray-400">Created At</td>
                            <td class="py-2 text-gray-900 dark:text-white">@Model.Payment.CreatedAt.ToString("MMM dd, yyyy HH:mm")</td>
                        </tr>
                        @if (Model.Payment.ModifiedAt.HasValue)
                        {
                            <tr>
                                <td class="py-2 text-gray-500 dark:text-gray-400">Last Modified</td>
                                <td class="py-2 text-gray-900 dark:text-white">@Model.Payment.ModifiedAt.Value.ToString("MMM dd, yyyy HH:mm")</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>

            <!-- Quick Actions Card -->
            <div class="bg-white rounded-lg shadow-md dark:bg-gray-800">
                <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700">
                    <h5 class="text-lg font-medium text-gray-900 dark:text-white"><i class="bi bi-lightning mr-2"></i>Quick Actions</h5>
                </div>
                <div class="p-6">
                    <div class="flex flex-col gap-2">
                        <a href="/Finance/Payments/Receipt/@Model.Payment.Id" class="w-full text-center text-primary-700 border border-primary-700 hover:bg-primary-700 hover:text-white focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-4 py-2.5 dark:border-primary-500 dark:text-primary-500 dark:hover:bg-primary-600 dark:hover:text-white" target="_blank">
                            <i class="bi bi-printer mr-2"></i>Print Receipt
                        </a>
                        <a href="/Finance/Payments" class="w-full text-center text-gray-700 border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-4 py-2.5 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:bg-gray-700">
                            <i class="bi bi-arrow-left mr-2"></i>Back to Payments
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
