@page "{id:guid}"
@model Algora.Erp.Web.Pages.Finance.Payments.DetailsModel
@using Algora.Erp.Domain.Entities.Finance
@{
    ViewData["Title"] = $"Payment {Model.Payment.PaymentNumber}";

    var methodBadgeClass = Model.Payment.PaymentMethod switch
    {
        PaymentMethod.Cash => "bg-success",
        PaymentMethod.BankTransfer => "bg-primary",
        PaymentMethod.CreditCard => "bg-info",
        PaymentMethod.DebitCard => "bg-info",
        PaymentMethod.Check => "bg-warning text-dark",
        PaymentMethod.PayPal => "bg-primary",
        _ => "bg-secondary"
    };
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <div class="d-flex align-items-center gap-3">
                <h1 class="h3 mb-0">@Model.Payment.PaymentNumber</h1>
                <span class="badge @methodBadgeClass fs-6">@Model.Payment.PaymentMethod</span>
            </div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/Finance">Finance</a></li>
                    <li class="breadcrumb-item"><a href="/Finance/Payments">Payments</a></li>
                    <li class="breadcrumb-item active">@Model.Payment.PaymentNumber</li>
                </ol>
            </nav>
        </div>
        <div class="d-flex gap-2">
            <a href="/Finance/Payments/Receipt/@Model.Payment.Id" class="btn btn-outline-primary" target="_blank">
                <i class="bi bi-printer me-1"></i> Print Receipt
            </a>
            <div class="dropdown">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                    <i class="bi bi-three-dots"></i>
                </button>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <a class="dropdown-item" href="/Finance/Invoices/Details/@Model.Payment.InvoiceId">
                            <i class="bi bi-file-text me-2"></i>View Invoice
                        </a>
                    </li>
                    @if (Model.Payment.Invoice?.CustomerId != null)
                    {
                        <li>
                            <a class="dropdown-item" href="/Sales/Customers/Details/@Model.Payment.Invoice.CustomerId">
                                <i class="bi bi-person me-2"></i>View Customer
                            </a>
                        </li>
                    }
                    <li><hr class="dropdown-divider"></li>
                    <li>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@Model.Payment.Id">
                            <button type="submit" class="dropdown-item text-danger"
                                    onclick="return confirm('Delete this payment? This will restore the invoice balance.')">
                                <i class="bi bi-trash me-2"></i>Delete Payment
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Payment Details Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="bi bi-cash me-2"></i>Payment Details</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <table class="table table-borderless mb-0">
                                <tr>
                                    <td class="text-muted" style="width: 150px;">Payment Number</td>
                                    <td class="fw-medium">@Model.Payment.PaymentNumber</td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Payment Date</td>
                                    <td>@Model.Payment.PaymentDate.ToString("MMMM dd, yyyy")</td>
                                </tr>
                                <tr>
                                    <td class="text-muted">Payment Method</td>
                                    <td>
                                        <span class="badge @methodBadgeClass">@Model.Payment.PaymentMethod</span>
                                    </td>
                                </tr>
                                @if (!string.IsNullOrEmpty(Model.Payment.Reference))
                                {
                                    <tr>
                                        <td class="text-muted">Reference</td>
                                        <td>@Model.Payment.Reference</td>
                                    </tr>
                                }
                            </table>
                        </div>
                        <div class="col-md-6">
                            <div class="bg-success bg-opacity-10 rounded p-4 text-center">
                                <p class="text-muted mb-1">Amount Paid</p>
                                <h2 class="mb-0 text-success">@Model.Payment.Amount.ToString("C2")</h2>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Payment.Notes))
                    {
                        <hr>
                        <div>
                            <h6 class="text-muted text-uppercase small mb-2">Notes</h6>
                            <p class="mb-0">@Model.Payment.Notes</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Invoice Info Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="bi bi-file-text me-2"></i>Invoice Details</h5>
                        <a href="/Finance/Invoices/Details/@Model.Payment.InvoiceId" class="btn btn-sm btn-outline-primary">
                            View Invoice
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.Payment.Invoice != null)
                    {
                        var invoice = Model.Payment.Invoice;
                        var statusBadgeClass = invoice.Status switch
                        {
                            InvoiceStatus.Draft => "bg-secondary",
                            InvoiceStatus.Pending => "bg-warning text-dark",
                            InvoiceStatus.Sent => "bg-info",
                            InvoiceStatus.PartiallyPaid => "bg-primary",
                            InvoiceStatus.Paid => "bg-success",
                            InvoiceStatus.Overdue => "bg-danger",
                            InvoiceStatus.Void => "bg-dark",
                            _ => "bg-secondary"
                        };

                        <div class="row">
                            <div class="col-md-6">
                                <table class="table table-borderless mb-0">
                                    <tr>
                                        <td class="text-muted" style="width: 150px;">Invoice Number</td>
                                        <td class="fw-medium">@invoice.InvoiceNumber</td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted">Status</td>
                                        <td><span class="badge @statusBadgeClass">@invoice.Status</span></td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted">Invoice Date</td>
                                        <td>@invoice.InvoiceDate.ToString("MMM dd, yyyy")</td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted">Due Date</td>
                                        <td>@invoice.DueDate.ToString("MMM dd, yyyy")</td>
                                    </tr>
                                </table>
                            </div>
                            <div class="col-md-6">
                                <table class="table table-borderless mb-0">
                                    <tr>
                                        <td class="text-muted" style="width: 150px;">Invoice Total</td>
                                        <td class="fw-medium">@invoice.TotalAmount.ToString("C2")</td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted">Amount Paid</td>
                                        <td class="text-success">@invoice.PaidAmount.ToString("C2")</td>
                                    </tr>
                                    <tr>
                                        <td class="text-muted">Balance Due</td>
                                        <td class="@(invoice.BalanceDue > 0 ? "text-danger fw-medium" : "text-success")">
                                            @invoice.BalanceDue.ToString("C2")
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Customer Card -->
            @if (Model.Payment.Invoice?.Customer != null)
            {
                var customer = Model.Payment.Invoice.Customer;
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white py-3">
                        <h5 class="mb-0"><i class="bi bi-person me-2"></i>Customer</h5>
                    </div>
                    <div class="card-body">
                        <h6 class="fw-medium mb-1">@customer.Name</h6>
                        @if (!string.IsNullOrEmpty(customer.Email))
                        {
                            <p class="text-muted mb-1">
                                <i class="bi bi-envelope me-1"></i>@customer.Email
                            </p>
                        }
                        @if (!string.IsNullOrEmpty(customer.Phone))
                        {
                            <p class="text-muted mb-0">
                                <i class="bi bi-telephone me-1"></i>@customer.Phone
                            </p>
                        }
                        <a href="/Sales/Customers/Details/@customer.Id" class="btn btn-sm btn-outline-primary mt-3">
                            View Customer
                        </a>
                    </div>
                </div>
            }

            <!-- Audit Info Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="bi bi-clock-history me-2"></i>Audit Information</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless table-sm mb-0">
                        <tr>
                            <td class="text-muted">Created At</td>
                            <td>@Model.Payment.CreatedAt.ToString("MMM dd, yyyy HH:mm")</td>
                        </tr>
                        @if (Model.Payment.ModifiedAt.HasValue)
                        {
                            <tr>
                                <td class="text-muted">Last Modified</td>
                                <td>@Model.Payment.ModifiedAt.Value.ToString("MMM dd, yyyy HH:mm")</td>
                            </tr>
                        }
                    </table>
                </div>
            </div>

            <!-- Quick Actions Card -->
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0"><i class="bi bi-lightning me-2"></i>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/Finance/Payments/Receipt/@Model.Payment.Id" class="btn btn-outline-primary" target="_blank">
                            <i class="bi bi-printer me-2"></i>Print Receipt
                        </a>
                        <a href="/Finance/Payments" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Back to Payments
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
