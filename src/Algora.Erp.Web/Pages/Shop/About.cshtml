@page
@{
    ViewData["Title"] = "About Us";
    Layout = "_LayoutShop";
}

<!-- Hero -->
<section class="bg-gradient-to-r from-primary-600 to-primary-500 text-white py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h1 class="text-4xl font-bold mb-3">About Algora Shop</h1>
        <p class="text-lg text-primary-100">Your trusted destination for quality products</p>
    </div>
</section>

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Our Story -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center mb-12">
        <div class="mb-4 lg:mb-0">
            <h2 class="text-2xl font-bold text-gray-900 mb-4">Our Story</h2>
            <p class="text-gray-500 mb-4">
                Founded with a passion for delivering exceptional products and outstanding customer service,
                Algora Shop has grown to become a trusted name in online retail. We believe that shopping
                should be easy, enjoyable, and accessible to everyone.
            </p>
            <p class="text-gray-500">
                Our team works tirelessly to curate a diverse selection of high-quality products across
                multiple categories, ensuring that our customers always find exactly what they're looking for.
            </p>
        </div>
        <div class="text-center">
            <div class="bg-gray-50 rounded-2xl p-12">
                <i class="bi bi-box-seam text-8xl text-primary-600"></i>
            </div>
        </div>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center py-12 bg-gray-50 rounded-2xl mb-12">
        <div class="mb-4 md:mb-0">
            <div class="text-4xl font-bold text-primary-600">10K+</div>
            <p class="text-gray-500">Happy Customers</p>
        </div>
        <div class="mb-4 md:mb-0">
            <div class="text-4xl font-bold text-primary-600">5K+</div>
            <p class="text-gray-500">Products</p>
        </div>
        <div class="mb-4 md:mb-0">
            <div class="text-4xl font-bold text-primary-600">50+</div>
            <p class="text-gray-500">Categories</p>
        </div>
        <div>
            <div class="text-4xl font-bold text-primary-600">24/7</div>
            <p class="text-gray-500">Support</p>
        </div>
    </div>

    <!-- Why Choose Us -->
    <h2 class="text-2xl font-bold text-gray-900 text-center mb-8">Why Choose Us?</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
        <div class="bg-white rounded-xl border border-gray-200 shadow-sm h-full">
            <div class="text-center p-6">
                <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-gradient-to-br from-primary-600 to-primary-500 flex items-center justify-center">
                    <i class="bi bi-truck text-2xl text-white"></i>
                </div>
                <h5 class="font-semibold text-gray-900 mb-2">Fast Delivery</h5>
                <p class="text-gray-500">Quick and reliable shipping to your doorstep. Track your orders in real-time.</p>
            </div>
        </div>
        <div class="bg-white rounded-xl border border-gray-200 shadow-sm h-full">
            <div class="text-center p-6">
                <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-gradient-to-br from-primary-600 to-primary-500 flex items-center justify-center">
                    <i class="bi bi-shield-check text-2xl text-white"></i>
                </div>
                <h5 class="font-semibold text-gray-900 mb-2">Secure Shopping</h5>
                <p class="text-gray-500">Your data is protected with enterprise-grade security. Shop with confidence.</p>
            </div>
        </div>
        <div class="bg-white rounded-xl border border-gray-200 shadow-sm h-full">
            <div class="text-center p-6">
                <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-gradient-to-br from-primary-600 to-primary-500 flex items-center justify-center">
                    <i class="bi bi-arrow-repeat text-2xl text-white"></i>
                </div>
                <h5 class="font-semibold text-gray-900 mb-2">Easy Returns</h5>
                <p class="text-gray-500">Not satisfied? Return within 30 days for a full refund. No questions asked.</p>
            </div>
        </div>
    </div>

    <!-- Contact -->
    <div class="bg-gray-50 rounded-2xl p-8 text-center">
        <h3 class="text-xl font-bold text-gray-900 mb-4">Get in Touch</h3>
        <p class="text-gray-500 mb-6">Have questions? We'd love to hear from you.</p>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="mb-4 md:mb-0">
                <i class="bi bi-envelope text-3xl text-primary-600 block mb-2"></i>
                <p class="text-gray-700">support@algora.shop</p>
            </div>
            <div class="mb-4 md:mb-0">
                <i class="bi bi-telephone text-3xl text-primary-600 block mb-2"></i>
                <p class="text-gray-700">1-800-ALGORA</p>
            </div>
            <div>
                <i class="bi bi-geo-alt text-3xl text-primary-600 block mb-2"></i>
                <p class="text-gray-700">New York, NY 10001</p>
            </div>
        </div>
    </div>
</div>
