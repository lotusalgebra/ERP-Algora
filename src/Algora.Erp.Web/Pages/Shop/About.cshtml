@page
@{
    ViewData["Title"] = "About Us";
    Layout = "_LayoutShop";
}

<!-- Hero -->
<section class="bg-primary text-white py-5">
    <div class="container text-center">
        <h1 class="display-4 fw-bold mb-3">About Algora Shop</h1>
        <p class="lead mb-0">Your trusted destination for quality products</p>
    </div>
</section>

<div class="container py-5">
    <!-- Our Story -->
    <div class="row align-items-center mb-5">
        <div class="col-lg-6 mb-4 mb-lg-0">
            <h2 class="fw-bold mb-4">Our Story</h2>
            <p class="text-muted">
                Founded with a passion for delivering exceptional products and outstanding customer service,
                Algora Shop has grown to become a trusted name in online retail. We believe that shopping
                should be easy, enjoyable, and accessible to everyone.
            </p>
            <p class="text-muted">
                Our team works tirelessly to curate a diverse selection of high-quality products across
                multiple categories, ensuring that our customers always find exactly what they're looking for.
            </p>
        </div>
        <div class="col-lg-6 text-center">
            <div class="bg-light rounded-4 p-5">
                <i class="bi bi-box-seam display-1 text-primary"></i>
            </div>
        </div>
    </div>

    <!-- Stats -->
    <div class="row text-center py-5 bg-light rounded-4 mb-5">
        <div class="col-md-3 mb-4 mb-md-0">
            <div class="display-4 fw-bold text-primary">10K+</div>
            <p class="text-muted mb-0">Happy Customers</p>
        </div>
        <div class="col-md-3 mb-4 mb-md-0">
            <div class="display-4 fw-bold text-primary">5K+</div>
            <p class="text-muted mb-0">Products</p>
        </div>
        <div class="col-md-3 mb-4 mb-md-0">
            <div class="display-4 fw-bold text-primary">50+</div>
            <p class="text-muted mb-0">Categories</p>
        </div>
        <div class="col-md-3">
            <div class="display-4 fw-bold text-primary">24/7</div>
            <p class="text-muted mb-0">Support</p>
        </div>
    </div>

    <!-- Why Choose Us -->
    <h2 class="fw-bold text-center mb-5">Why Choose Us?</h2>
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-primary bg-gradient text-white rounded-circle mb-3 mx-auto" style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-truck fs-4"></i>
                    </div>
                    <h5>Fast Delivery</h5>
                    <p class="text-muted mb-0">Quick and reliable shipping to your doorstep. Track your orders in real-time.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-primary bg-gradient text-white rounded-circle mb-3 mx-auto" style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-shield-check fs-4"></i>
                    </div>
                    <h5>Secure Shopping</h5>
                    <p class="text-muted mb-0">Your data is protected with enterprise-grade security. Shop with confidence.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="feature-icon bg-primary bg-gradient text-white rounded-circle mb-3 mx-auto" style="width: 60px; height: 60px; display: flex; align-items: center; justify-content: center;">
                        <i class="bi bi-arrow-repeat fs-4"></i>
                    </div>
                    <h5>Easy Returns</h5>
                    <p class="text-muted mb-0">Not satisfied? Return within 30 days for a full refund. No questions asked.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact -->
    <div class="bg-light rounded-4 p-5 text-center">
        <h3 class="fw-bold mb-4">Get in Touch</h3>
        <p class="text-muted mb-4">Have questions? We'd love to hear from you.</p>
        <div class="row justify-content-center">
            <div class="col-md-3 mb-3 mb-md-0">
                <i class="bi bi-envelope fs-3 text-primary d-block mb-2"></i>
                <p class="mb-0">support@algora.shop</p>
            </div>
            <div class="col-md-3 mb-3 mb-md-0">
                <i class="bi bi-telephone fs-3 text-primary d-block mb-2"></i>
                <p class="mb-0">1-800-ALGORA</p>
            </div>
            <div class="col-md-3">
                <i class="bi bi-geo-alt fs-3 text-primary d-block mb-2"></i>
                <p class="mb-0">New York, NY 10001</p>
            </div>
        </div>
    </div>
</div>
