@page "{slug}"
@model Algora.Erp.Web.Pages.Shop.ProductModel
@{
    ViewData["Title"] = Model.Product?.Name ?? "Product";
    Layout = "_LayoutShop";
}

@if (Model.Product == null)
{
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 text-center">
        <i class="bi bi-box-seam text-6xl text-gray-300 block mb-3"></i>
        <h2 class="text-2xl font-bold text-gray-900 mb-2">Product Not Found</h2>
        <p class="text-gray-500 mb-4">The product you're looking for doesn't exist or has been removed.</p>
        <a href="/Shop" class="inline-flex items-center px-5 py-2.5 text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm">Continue Shopping</a>
    </div>
}
else
{
    var primaryImage = Model.Product.Images.FirstOrDefault(i => i.IsPrimary)?.Url ?? Model.Product.Images.FirstOrDefault()?.Url;

    <!-- Breadcrumb -->
    <nav class="bg-gray-50 py-3">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <ol class="flex items-center space-x-2 text-sm">
                <li><a href="/Shop" class="text-gray-500 hover:text-primary-600">Shop</a></li>
                @if (Model.Product.Category != null)
                {
                    <li class="text-gray-400">/</li>
                    <li><a href="/Shop?category=@Model.Product.Category.Slug" class="text-gray-500 hover:text-primary-600">@Model.Product.Category.Name</a></li>
                }
                <li class="text-gray-400">/</li>
                <li class="text-gray-900 font-medium">@Model.Product.Name</li>
            </ol>
        </div>
    </nav>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Product Images -->
            <div class="mb-4">
                <div class="relative">
                    @if (Model.Product.CompareAtPrice.HasValue && Model.Product.CompareAtPrice > Model.Product.Price)
                    {
                        var discount = (int)Math.Round((1 - Model.Product.Price / Model.Product.CompareAtPrice.Value) * 100);
                        <span class="absolute top-3 left-3 z-10 px-3 py-1 text-sm font-semibold text-white bg-red-500 rounded-full">-@discount% OFF</span>
                    }
                    @if (!string.IsNullOrEmpty(primaryImage))
                    {
                        <img src="@primaryImage" alt="@Model.Product.Name" class="w-full rounded-lg product-main-image">
                    }
                    else
                    {
                        <div class="bg-gray-100 rounded-lg flex items-center justify-center h-96">
                            <i class="bi bi-image text-gray-300" style="font-size: 5rem;"></i>
                        </div>
                    }
                </div>

                <!-- Additional Images -->
                @if (Model.Product.Images.Count > 1)
                {
                    <div class="grid grid-cols-4 gap-2 mt-3">
                        @foreach (var image in Model.Product.Images.Take(4))
                        {
                            <div>
                                <img src="@image.Url" alt="@image.AltText" class="w-full h-24 object-cover rounded-lg cursor-pointer hover:opacity-80 transition-opacity"
                                     onclick="document.querySelector('.product-main-image')?.setAttribute('src', '@image.Url')">
                            </div>
                        }
                    </div>
                }
            </div>

            <!-- Product Details -->
            <div>
                @if (Model.Product.Category != null)
                {
                    <span class="inline-block px-3 py-1 text-sm font-medium text-gray-700 bg-gray-100 rounded-full mb-2">@Model.Product.Category.Name</span>
                }

                <h1 class="text-3xl font-bold text-gray-900 mb-3">@Model.Product.Name</h1>

                @if (!string.IsNullOrEmpty(Model.Product.ShortDescription))
                {
                    <p class="text-gray-500 mb-4">@Model.Product.ShortDescription</p>
                }

                <div class="mb-4">
                    <span class="text-3xl font-bold text-primary-600">@Model.Product.Price.ToString("C")</span>
                    @if (Model.Product.CompareAtPrice.HasValue && Model.Product.CompareAtPrice > Model.Product.Price)
                    {
                        <span class="text-gray-400 line-through ml-2 text-xl">@Model.Product.CompareAtPrice.Value.ToString("C")</span>
                        <span class="ml-2 px-2.5 py-0.5 text-sm font-medium text-emerald-800 bg-emerald-100 rounded-full">Save @((Model.Product.CompareAtPrice.Value - Model.Product.Price).ToString("C"))</span>
                    }
                </div>

                <!-- Stock Status -->
                <div class="mb-4">
                    @if (Model.Product.StockQuantity > 10)
                    {
                        <span class="text-emerald-600"><i class="bi bi-check-circle mr-1"></i>In Stock</span>
                    }
                    else if (Model.Product.StockQuantity > 0)
                    {
                        <span class="text-amber-500"><i class="bi bi-exclamation-circle mr-1"></i>Low Stock - Only @Model.Product.StockQuantity left!</span>
                    }
                    else
                    {
                        <span class="text-red-600"><i class="bi bi-x-circle mr-1"></i>Out of Stock</span>
                    }
                </div>

                <!-- Quantity Selector -->
                @if (Model.Product.StockQuantity > 0)
                {
                    <div class="mb-4">
                        <label class="block mb-2 text-sm font-semibold text-gray-900">Quantity</label>
                        <div class="inline-flex items-center" style="width: 140px;">
                            <button class="px-4 py-2 text-gray-600 bg-gray-100 border border-gray-300 rounded-l-lg hover:bg-gray-200" type="button" onclick="updateQuantity(-1)">-</button>
                            <input type="number" class="w-12 text-center border-y border-gray-300 py-2 text-sm focus:ring-primary-500 focus:border-primary-500" id="quantity" value="1" min="1" max="@Model.Product.StockQuantity">
                            <button class="px-4 py-2 text-gray-600 bg-gray-100 border border-gray-300 rounded-r-lg hover:bg-gray-200" type="button" onclick="updateQuantity(1)">+</button>
                        </div>
                    </div>

                    <div class="flex gap-2 mb-4">
                        <button class="flex-grow-1 inline-flex items-center justify-center px-6 py-3 text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-base"
                                onclick="addToCartWithQty('@Model.Product.Id', '@Model.Product.Name.Replace("'", "\\'")', @Model.Product.Price, '@primaryImage')">
                            <i class="bi bi-cart-plus mr-2"></i>Add to Cart
                        </button>
                        <button class="px-4 py-3 text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg" title="Add to Wishlist">
                            <i class="bi bi-heart"></i>
                        </button>
                    </div>
                }
                else
                {
                    <button class="w-full inline-flex items-center justify-center px-6 py-3 text-gray-900 bg-white border border-gray-300 font-medium rounded-lg text-base mb-4 cursor-not-allowed opacity-60" disabled>
                        <i class="bi bi-x-circle mr-2"></i>Out of Stock
                    </button>
                }

                <!-- Product Info -->
                <div class="border-t border-gray-200 pt-4">
                    <div class="grid grid-cols-2 gap-3 text-gray-500 text-sm">
                        <div>
                            <i class="bi bi-upc mr-2"></i>SKU: @(Model.Product.Sku ?? "N/A")
                        </div>
                        @if (Model.Product.Category != null)
                        {
                            <div>
                                <i class="bi bi-tag mr-2"></i>Category: @Model.Product.Category.Name
                            </div>
                        }
                        @if (Model.Product.Weight.HasValue)
                        {
                            <div>
                                <i class="bi bi-box mr-2"></i>Weight: @Model.Product.Weight.Value kg
                            </div>
                        }
                    </div>
                </div>

                <!-- Features -->
                <div class="border-t border-gray-200 mt-4 pt-4">
                    <div class="grid grid-cols-2 gap-3">
                        <div>
                            <div class="flex items-center">
                                <i class="bi bi-truck text-2xl text-primary-600 mr-3"></i>
                                <div>
                                    <div class="font-semibold text-gray-900">Free Shipping</div>
                                    <small class="text-gray-500">On orders over $50</small>
                                </div>
                            </div>
                        </div>
                        <div>
                            <div class="flex items-center">
                                <i class="bi bi-arrow-repeat text-2xl text-primary-600 mr-3"></i>
                                <div>
                                    <div class="font-semibold text-gray-900">Easy Returns</div>
                                    <small class="text-gray-500">30-day return policy</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Description -->
        <div class="mt-12">
            <div class="bg-white rounded-lg border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200 bg-white">
                    <h5 class="font-semibold text-gray-900">Description</h5>
                </div>
                <div class="p-6">
                    @if (!string.IsNullOrEmpty(Model.Product.Description))
                    {
                        <div class="text-gray-700">@Html.Raw(Model.Product.Description.Replace("\n", "<br>"))</div>
                    }
                    else
                    {
                        <p class="text-gray-500">No description available.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Related Products -->
        @if (Model.RelatedProducts.Any())
        {
            <div class="mt-12">
                <h3 class="text-xl font-bold text-gray-900 mb-6">Related Products</h3>
                <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                    @foreach (var related in Model.RelatedProducts)
                    {
                        var relatedImage = related.Images.FirstOrDefault(i => i.IsPrimary)?.Url ?? related.Images.FirstOrDefault()?.Url;
                        <div class="bg-white rounded-xl border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow">
                            <a href="/Shop/Product/@related.Slug">
                                @if (!string.IsNullOrEmpty(relatedImage))
                                {
                                    <img src="@relatedImage" alt="@related.Name" class="w-full h-48 object-cover">
                                }
                                else
                                {
                                    <div class="w-full h-48 bg-gray-100 flex items-center justify-center">
                                        <i class="bi bi-image text-gray-300" style="font-size: 3rem;"></i>
                                    </div>
                                }
                            </a>
                            <div class="p-4">
                                <h6 class="font-semibold text-gray-900 mb-2">
                                    <a href="/Shop/Product/@related.Slug" class="hover:text-primary-600">@related.Name</a>
                                </h6>
                                <span class="text-lg font-bold text-primary-600">@related.Price.ToString("C")</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <script>
        function updateQuantity(delta) {
            const input = document.getElementById('quantity');
            let value = parseInt(input.value) + delta;
            const max = parseInt(input.max);
            if (value < 1) value = 1;
            if (value > max) value = max;
            input.value = value;
        }

        function addToCartWithQty(productId, name, price, image) {
            const quantity = parseInt(document.getElementById('quantity').value);
            const cart = JSON.parse(localStorage.getItem('cart') || '[]');
            const existing = cart.find(item => item.productId === productId);

            if (existing) {
                existing.quantity += quantity;
            } else {
                cart.push({ productId, name, price, image, quantity });
            }

            localStorage.setItem('cart', JSON.stringify(cart));
            updateCartCount();

            // Show toast notification
            const toast = document.getElementById('cartToast');
            toast.classList.remove('hidden');
            toast.classList.add('flex');
            setTimeout(() => {
                toast.classList.add('hidden');
                toast.classList.remove('flex');
            }, 3000);
        }
    </script>
}
