@page
@model Algora.Erp.Web.Pages.Shop.Account.ProfileModel
@{
    ViewData["Title"] = "My Profile";
    Layout = "_LayoutShop";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        <!-- Sidebar -->
        <div class="lg:col-span-1 mb-4">
            <div class="bg-white rounded-lg border border-gray-200">
                <div class="p-6">
                    <div class="text-center mb-6">
                        <div class="w-20 h-20 mx-auto mb-3 rounded-full bg-primary-100 text-primary-600 flex items-center justify-center text-2xl font-semibold">
                            @if (Model.Customer != null)
                            {
                                <span>@Model.Customer.FirstName[0]@Model.Customer.LastName[0]</span>
                            }
                        </div>
                        @if (Model.Customer != null)
                        {
                            <h5 class="font-semibold text-gray-900 mb-1">@Model.Customer.FirstName @Model.Customer.LastName</h5>
                            <small class="text-gray-500">@Model.Customer.Email</small>
                        }
                    </div>

                    <nav class="flex flex-col space-y-1">
                        <a class="flex items-center px-4 py-2 text-sm font-medium rounded-lg text-gray-700 hover:bg-gray-100" href="/Shop/Account">
                            <i class="bi bi-speedometer2 mr-2"></i>Dashboard
                        </a>
                        <a class="flex items-center px-4 py-2 text-sm font-medium rounded-lg text-gray-700 hover:bg-gray-100" href="/Shop/Account/Orders">
                            <i class="bi bi-bag mr-2"></i>My Orders
                        </a>
                        <a class="flex items-center px-4 py-2 text-sm font-medium rounded-lg bg-primary-50 text-primary-600" href="/Shop/Account/Profile">
                            <i class="bi bi-person mr-2"></i>Profile
                        </a>
                        <a class="flex items-center px-4 py-2 text-sm font-medium rounded-lg text-gray-700 hover:bg-gray-100" href="/Shop/Account/Addresses">
                            <i class="bi bi-geo-alt mr-2"></i>Addresses
                        </a>
                        <hr class="my-2 border-gray-200">
                        <a class="flex items-center px-4 py-2 text-sm font-medium rounded-lg text-red-600 hover:bg-red-50" href="/Shop/Account/Logout">
                            <i class="bi bi-box-arrow-right mr-2"></i>Logout
                        </a>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="lg:col-span-3">
            <div class="bg-white rounded-lg border border-gray-200">
                <div class="px-6 py-4 border-b border-gray-200 bg-white">
                    <h5 class="font-semibold text-gray-900">Profile Information</h5>
                </div>
                <div class="p-6">
                    @if (TempData["Success"] != null)
                    {
                        <div class="p-4 mb-4 text-sm text-emerald-800 rounded-lg bg-emerald-50 flex items-center justify-between" role="alert">
                            <span>@TempData["Success"]</span>
                            <button type="button" class="text-emerald-800 hover:text-emerald-900" data-dismiss-target="[role='alert']" aria-label="Close">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 flex items-center justify-between" role="alert">
                            <span>@TempData["Error"]</span>
                            <button type="button" class="text-red-800 hover:text-red-900" data-dismiss-target="[role='alert']" aria-label="Close">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        </div>
                    }

                    <form method="post">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            <div>
                                <label class="block mb-2 text-sm font-medium text-gray-900">First Name</label>
                                <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" asp-for="FirstName" required>
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-medium text-gray-900">Last Name</label>
                                <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" asp-for="LastName" required>
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-medium text-gray-900">Email Address</label>
                                <input type="email" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" asp-for="Email" required>
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-medium text-gray-900">Phone Number</label>
                                <input type="tel" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" asp-for="Phone">
                            </div>
                        </div>

                        <hr class="my-6 border-gray-200">

                        <h6 class="font-semibold text-gray-900 mb-4">Change Password</h6>
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                            <div>
                                <label class="block mb-2 text-sm font-medium text-gray-900">Current Password</label>
                                <input type="password" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="currentPassword">
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-medium text-gray-900">New Password</label>
                                <input type="password" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="newPassword">
                            </div>
                            <div>
                                <label class="block mb-2 text-sm font-medium text-gray-900">Confirm Password</label>
                                <input type="password" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="confirmPassword">
                            </div>
                        </div>

                        <div class="mt-6 flex gap-2">
                            <button type="submit" class="inline-flex items-center px-5 py-2.5 text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm">Save Changes</button>
                            <a href="/Shop/Account" class="inline-flex items-center px-5 py-2.5 text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
