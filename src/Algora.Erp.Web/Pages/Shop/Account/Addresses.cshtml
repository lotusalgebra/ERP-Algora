@page
@model Algora.Erp.Web.Pages.Shop.Account.AddressesModel
@{
    ViewData["Title"] = "My Addresses";
    Layout = "_LayoutShop";
}

<div class="container py-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-3 mb-4">
            <div class="card border">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="rounded-circle bg-primary bg-opacity-10 text-primary d-flex align-items-center justify-content-center mx-auto mb-3"
                             style="width: 80px; height: 80px; font-size: 2rem;">
                            @if (Model.Customer != null)
                            {
                                <span class="fw-semibold">@Model.Customer.FirstName[0]@Model.Customer.LastName[0]</span>
                            }
                        </div>
                        @if (Model.Customer != null)
                        {
                            <h5 class="mb-1">@Model.Customer.FirstName @Model.Customer.LastName</h5>
                            <small class="text-muted">@Model.Customer.Email</small>
                        }
                    </div>

                    <nav class="nav flex-column">
                        <a class="nav-link" href="/Shop/Account">
                            <i class="bi bi-speedometer2 me-2"></i>Dashboard
                        </a>
                        <a class="nav-link" href="/Shop/Account/Orders">
                            <i class="bi bi-bag me-2"></i>My Orders
                        </a>
                        <a class="nav-link" href="/Shop/Account/Profile">
                            <i class="bi bi-person me-2"></i>Profile
                        </a>
                        <a class="nav-link active" href="/Shop/Account/Addresses">
                            <i class="bi bi-geo-alt me-2"></i>Addresses
                        </a>
                        <hr>
                        <a class="nav-link text-danger" href="/Shop/Account/Logout">
                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                        </a>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-dismiss-target="[role='alert']" aria-label="Close"></button>
                </div>
            }

            <!-- Existing Addresses -->
            <div class="card border mb-4">
                <div class="card-header bg-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Saved Addresses</h5>
                    <button class="btn btn-sm btn-primary" data-collapse-toggle="addAddressForm">
                        <i class="bi bi-plus me-1"></i>Add New
                    </button>
                </div>
                <div class="card-body">
                    @if (Model.Addresses.Any())
                    {
                        <div class="row g-3">
                            @foreach (var address in Model.Addresses)
                            {
                                <div class="col-md-6">
                                    <div class="card h-100 @(address.IsDefault ? "border-primary" : "border")">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <span class="badge bg-secondary">@address.Label</span>
                                                @if (address.IsDefault)
                                                {
                                                    <span class="badge bg-primary">Default</span>
                                                }
                                            </div>
                                            <p class="fw-semibold mb-1">@address.FirstName @address.LastName</p>
                                            @if (!string.IsNullOrEmpty(address.Company))
                                            {
                                                <p class="text-muted small mb-1">@address.Company</p>
                                            }
                                            <p class="mb-1">@address.Address1</p>
                                            @if (!string.IsNullOrEmpty(address.Address2))
                                            {
                                                <p class="mb-1">@address.Address2</p>
                                            }
                                            <p class="mb-1">@address.City, @address.State @address.PostalCode</p>
                                            <p class="mb-2">@address.Country</p>
                                            @if (!string.IsNullOrEmpty(address.Phone))
                                            {
                                                <p class="small text-muted"><i class="bi bi-telephone me-1"></i>@address.Phone</p>
                                            }

                                            <div class="mt-3 d-flex gap-2">
                                                @if (!address.IsDefault)
                                                {
                                                    <form method="post" asp-page-handler="SetDefault">
                                                        <input type="hidden" name="addressId" value="@address.Id" />
                                                        <button type="submit" class="btn btn-sm btn-outline-primary">Set as Default</button>
                                                    </form>
                                                }
                                                <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Are you sure you want to delete this address?');">
                                                    <input type="hidden" name="addressId" value="@address.Id" />
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4 text-muted">
                            <i class="bi bi-geo-alt fs-1 d-block mb-3"></i>
                            <p>You haven't added any addresses yet.</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Add New Address Form -->
            <div class="collapse" id="addAddressForm">
                <div class="card border">
                    <div class="card-header bg-white">
                        <h5 class="mb-0">Add New Address</h5>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-page-handler="Add">
                            <div class="row g-3">
                                <div class="col-md-6">
                                    <label class="form-label">Label</label>
                                    <select class="form-select" asp-for="NewAddress.Label">
                                        <option value="Home">Home</option>
                                        <option value="Work">Work</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-check mt-4">
                                        <input class="form-check-input" type="checkbox" asp-for="NewAddress.IsDefault" id="isDefault">
                                        <label class="form-check-label" for="isDefault">Set as default address</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">First Name</label>
                                    <input type="text" class="form-control" asp-for="NewAddress.FirstName" required>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Last Name</label>
                                    <input type="text" class="form-control" asp-for="NewAddress.LastName" required>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Company (Optional)</label>
                                    <input type="text" class="form-control" asp-for="NewAddress.Company">
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Address Line 1</label>
                                    <input type="text" class="form-control" asp-for="NewAddress.Address1" required>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Address Line 2 (Optional)</label>
                                    <input type="text" class="form-control" asp-for="NewAddress.Address2">
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">City</label>
                                    <input type="text" class="form-control" asp-for="NewAddress.City" required>
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">State/Province</label>
                                    <input type="text" class="form-control" asp-for="NewAddress.State">
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Postal Code</label>
                                    <input type="text" class="form-control" asp-for="NewAddress.PostalCode" required>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Country</label>
                                    <input type="text" class="form-control" asp-for="NewAddress.Country" required>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Phone (Optional)</label>
                                    <input type="tel" class="form-control" asp-for="NewAddress.Phone">
                                </div>
                            </div>

                            <div class="mt-4">
                                <button type="submit" class="btn btn-primary">Save Address</button>
                                <button type="button" class="btn btn-outline-secondary ms-2" data-collapse-toggle="addAddressForm">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
