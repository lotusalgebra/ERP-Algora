@page
@model Algora.Erp.Web.Pages.Shop.Account.AddressesModel
@{
    ViewData["Title"] = "My Addresses";
    Layout = "_LayoutShop";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        <!-- Sidebar -->
        <div class="lg:col-span-1 mb-4">
            <div class="bg-white rounded-lg border border-gray-200">
                <div class="p-6">
                    <div class="text-center mb-6">
                        <div class="w-20 h-20 mx-auto mb-3 rounded-full bg-primary-100 text-primary-600 flex items-center justify-center text-2xl font-semibold">
                            @if (Model.Customer != null)
                            {
                                <span>@Model.Customer.FirstName[0]@Model.Customer.LastName[0]</span>
                            }
                        </div>
                        @if (Model.Customer != null)
                        {
                            <h5 class="font-semibold text-gray-900 mb-1">@Model.Customer.FirstName @Model.Customer.LastName</h5>
                            <small class="text-gray-500">@Model.Customer.Email</small>
                        }
                    </div>

                    <nav class="flex flex-col space-y-1">
                        <a class="flex items-center px-4 py-2 text-sm font-medium rounded-lg text-gray-700 hover:bg-gray-100" href="/Shop/Account">
                            <i class="bi bi-speedometer2 mr-2"></i>Dashboard
                        </a>
                        <a class="flex items-center px-4 py-2 text-sm font-medium rounded-lg text-gray-700 hover:bg-gray-100" href="/Shop/Account/Orders">
                            <i class="bi bi-bag mr-2"></i>My Orders
                        </a>
                        <a class="flex items-center px-4 py-2 text-sm font-medium rounded-lg text-gray-700 hover:bg-gray-100" href="/Shop/Account/Profile">
                            <i class="bi bi-person mr-2"></i>Profile
                        </a>
                        <a class="flex items-center px-4 py-2 text-sm font-medium rounded-lg bg-primary-50 text-primary-600" href="/Shop/Account/Addresses">
                            <i class="bi bi-geo-alt mr-2"></i>Addresses
                        </a>
                        <hr class="my-2 border-gray-200">
                        <a class="flex items-center px-4 py-2 text-sm font-medium rounded-lg text-red-600 hover:bg-red-50" href="/Shop/Account/Logout">
                            <i class="bi bi-box-arrow-right mr-2"></i>Logout
                        </a>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="lg:col-span-3">
            @if (TempData["Success"] != null)
            {
                <div class="p-4 mb-4 text-sm text-emerald-800 rounded-lg bg-emerald-50 flex items-center justify-between" role="alert">
                    <span>@TempData["Success"]</span>
                    <button type="button" class="text-emerald-800 hover:text-emerald-900" data-dismiss-target="[role='alert']" aria-label="Close">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </div>
            }

            <!-- Existing Addresses -->
            <div class="bg-white rounded-lg border border-gray-200 mb-4">
                <div class="px-6 py-4 border-b border-gray-200 bg-white flex justify-between items-center">
                    <h5 class="font-semibold text-gray-900">Saved Addresses</h5>
                    <button class="text-xs px-3 py-2 text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg" data-collapse-toggle="addAddressForm">
                        <i class="bi bi-plus mr-1"></i>Add New
                    </button>
                </div>
                <div class="p-6">
                    @if (Model.Addresses.Any())
                    {
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                            @foreach (var address in Model.Addresses)
                            {
                                <div class="rounded-lg border @(address.IsDefault ? "border-primary-500 bg-primary-50/30" : "border-gray-200") h-full">
                                    <div class="p-4">
                                        <div class="flex justify-between items-start mb-2">
                                            <span class="px-2.5 py-0.5 text-xs font-medium rounded-full bg-gray-100 text-gray-800">@address.Label</span>
                                            @if (address.IsDefault)
                                            {
                                                <span class="px-2.5 py-0.5 text-xs font-medium rounded-full bg-primary-100 text-primary-800">Default</span>
                                            }
                                        </div>
                                        <p class="font-semibold text-gray-900 mb-1">@address.FirstName @address.LastName</p>
                                        @if (!string.IsNullOrEmpty(address.Company))
                                        {
                                            <p class="text-gray-500 text-sm mb-1">@address.Company</p>
                                        }
                                        <p class="text-gray-700 mb-1">@address.Address1</p>
                                        @if (!string.IsNullOrEmpty(address.Address2))
                                        {
                                            <p class="text-gray-700 mb-1">@address.Address2</p>
                                        }
                                        <p class="text-gray-700 mb-1">@address.City, @address.State @address.PostalCode</p>
                                        <p class="text-gray-700 mb-2">@address.Country</p>
                                        @if (!string.IsNullOrEmpty(address.Phone))
                                        {
                                            <p class="text-sm text-gray-500"><i class="bi bi-telephone mr-1"></i>@address.Phone</p>
                                        }

                                        <div class="mt-4 flex gap-2">
                                            @if (!address.IsDefault)
                                            {
                                                <form method="post" asp-page-handler="SetDefault">
                                                    <input type="hidden" name="addressId" value="@address.Id" />
                                                    <button type="submit" class="text-xs px-3 py-2 text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg">Set as Default</button>
                                                </form>
                                            }
                                            <form method="post" asp-page-handler="Delete" onsubmit="return confirm('Are you sure you want to delete this address?');">
                                                <input type="hidden" name="addressId" value="@address.Id" />
                                                <button type="submit" class="text-xs px-3 py-2 text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:ring-red-300 font-medium rounded-lg">Delete</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-8 text-gray-500">
                            <i class="bi bi-geo-alt text-5xl block mb-3 text-gray-300"></i>
                            <p>You haven't added any addresses yet.</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Add New Address Form -->
            <div class="hidden" id="addAddressForm">
                <div class="bg-white rounded-lg border border-gray-200">
                    <div class="px-6 py-4 border-b border-gray-200 bg-white">
                        <h5 class="font-semibold text-gray-900">Add New Address</h5>
                    </div>
                    <div class="p-6">
                        <form method="post" asp-page-handler="Add">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div>
                                    <label class="block mb-2 text-sm font-medium text-gray-900">Label</label>
                                    <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" asp-for="NewAddress.Label">
                                        <option value="Home">Home</option>
                                        <option value="Work">Work</option>
                                        <option value="Other">Other</option>
                                    </select>
                                </div>
                                <div class="flex items-center mt-6">
                                    <input class="w-4 h-4 text-primary-600 bg-gray-100 border-gray-300 rounded focus:ring-primary-500 focus:ring-2" type="checkbox" asp-for="NewAddress.IsDefault" id="isDefault">
                                    <label class="ml-2 text-sm text-gray-700" for="isDefault">Set as default address</label>
                                </div>
                                <div>
                                    <label class="block mb-2 text-sm font-medium text-gray-900">First Name</label>
                                    <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" asp-for="NewAddress.FirstName" required>
                                </div>
                                <div>
                                    <label class="block mb-2 text-sm font-medium text-gray-900">Last Name</label>
                                    <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" asp-for="NewAddress.LastName" required>
                                </div>
                                <div class="md:col-span-2">
                                    <label class="block mb-2 text-sm font-medium text-gray-900">Company (Optional)</label>
                                    <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" asp-for="NewAddress.Company">
                                </div>
                                <div class="md:col-span-2">
                                    <label class="block mb-2 text-sm font-medium text-gray-900">Address Line 1</label>
                                    <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" asp-for="NewAddress.Address1" required>
                                </div>
                                <div class="md:col-span-2">
                                    <label class="block mb-2 text-sm font-medium text-gray-900">Address Line 2 (Optional)</label>
                                    <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" asp-for="NewAddress.Address2">
                                </div>
                                <div>
                                    <label class="block mb-2 text-sm font-medium text-gray-900">City</label>
                                    <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" asp-for="NewAddress.City" required>
                                </div>
                                <div class="grid grid-cols-2 gap-4">
                                    <div>
                                        <label class="block mb-2 text-sm font-medium text-gray-900">State/Province</label>
                                        <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" asp-for="NewAddress.State">
                                    </div>
                                    <div>
                                        <label class="block mb-2 text-sm font-medium text-gray-900">Postal Code</label>
                                        <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" asp-for="NewAddress.PostalCode" required>
                                    </div>
                                </div>
                                <div>
                                    <label class="block mb-2 text-sm font-medium text-gray-900">Country</label>
                                    <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" asp-for="NewAddress.Country" required>
                                </div>
                                <div>
                                    <label class="block mb-2 text-sm font-medium text-gray-900">Phone (Optional)</label>
                                    <input type="tel" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" asp-for="NewAddress.Phone">
                                </div>
                            </div>

                            <div class="mt-6 flex gap-2">
                                <button type="submit" class="inline-flex items-center px-5 py-2.5 text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm">Save Address</button>
                                <button type="button" class="inline-flex items-center px-5 py-2.5 text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm" data-collapse-toggle="addAddressForm">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
