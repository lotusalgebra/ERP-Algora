@page "{id:guid?}"
@model Algora.Erp.Web.Pages.Shop.Account.OrdersModel
@{
    ViewData["Title"] = Model.Order != null ? $"Order {Model.Order.OrderNumber}" : "My Orders";
    Layout = "_LayoutShop";
}

<div class="container py-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-3 mb-4">
            <div class="card border">
                <div class="card-body">
                    <nav class="nav flex-column">
                        <a class="nav-link" href="/Shop/Account">
                            <i class="bi bi-speedometer2 me-2"></i>Dashboard
                        </a>
                        <a class="nav-link active" href="/Shop/Account/Orders">
                            <i class="bi bi-bag me-2"></i>My Orders
                        </a>
                        <a class="nav-link" href="/Shop/Account/Profile">
                            <i class="bi bi-person me-2"></i>Profile
                        </a>
                        <a class="nav-link" href="/Shop/Account/Addresses">
                            <i class="bi bi-geo-alt me-2"></i>Addresses
                        </a>
                        <hr>
                        <a class="nav-link text-danger" href="/Shop/Account/Logout">
                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                        </a>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            @if (Model.Order != null)
            {
                <!-- Order Detail View -->
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Shop/Account">Account</a></li>
                        <li class="breadcrumb-item"><a href="/Shop/Account/Orders">Orders</a></li>
                        <li class="breadcrumb-item active">@Model.Order.OrderNumber</li>
                    </ol>
                </nav>

                <div class="card border mb-4">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Order @Model.Order.OrderNumber</h5>
                        @switch (Model.Order.Status)
                        {
                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Pending:
                                <span class="badge bg-warning">Pending</span>
                                break;
                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Confirmed:
                                <span class="badge bg-info">Confirmed</span>
                                break;
                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Processing:
                                <span class="badge bg-primary">Processing</span>
                                break;
                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Shipped:
                                <span class="badge bg-info">Shipped</span>
                                break;
                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Delivered:
                                <span class="badge bg-success">Delivered</span>
                                break;
                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Cancelled:
                                <span class="badge bg-dark">Cancelled</span>
                                break;
                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Refunded:
                                <span class="badge bg-secondary">Refunded</span>
                                break;
                        }
                    </div>
                    <div class="card-body">
                        <div class="row mb-4">
                            <div class="col-md-4">
                                <h6 class="text-muted">Order Date</h6>
                                <p class="mb-0">@Model.Order.OrderDate.ToString("MMMM dd, yyyy")</p>
                            </div>
                            <div class="col-md-4">
                                <h6 class="text-muted">Payment Status</h6>
                                <p class="mb-0">
                                    @switch (Model.Order.PaymentStatus)
                                    {
                                        case Algora.Erp.Domain.Entities.Ecommerce.PaymentStatus.Pending:
                                            <span class="badge bg-warning">Pending</span>
                                            break;
                                        case Algora.Erp.Domain.Entities.Ecommerce.PaymentStatus.Paid:
                                            <span class="badge bg-success">Paid</span>
                                            break;
                                        case Algora.Erp.Domain.Entities.Ecommerce.PaymentStatus.Failed:
                                            <span class="badge bg-danger">Failed</span>
                                            break;
                                        case Algora.Erp.Domain.Entities.Ecommerce.PaymentStatus.Refunded:
                                            <span class="badge bg-secondary">Refunded</span>
                                            break;
                                    }
                                </p>
                            </div>
                            <div class="col-md-4">
                                <h6 class="text-muted">Shipping Address</h6>
                                <p class="mb-0 small">
                                    @Model.Order.ShippingFirstName @Model.Order.ShippingLastName<br>
                                    @Model.Order.ShippingAddress1<br>
                                    @Model.Order.ShippingCity, @Model.Order.ShippingState @Model.Order.ShippingPostalCode
                                </p>
                            </div>
                        </div>

                        <h6 class="mb-3">Items</h6>
                        <table class="table">
                            <thead class="bg-light">
                                <tr>
                                    <th>Product</th>
                                    <th class="text-center">Qty</th>
                                    <th class="text-end">Price</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Order.Items)
                                {
                                    <tr>
                                        <td>
                                            <div class="fw-semibold">@item.ProductName</div>
                                            @if (!string.IsNullOrEmpty(item.Sku))
                                            {
                                                <small class="text-muted">SKU: @item.Sku</small>
                                            }
                                        </td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">@item.UnitPrice.ToString("C")</td>
                                        <td class="text-end fw-semibold">@item.LineTotal.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <div class="row justify-content-end">
                            <div class="col-md-5">
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Subtotal</span>
                                    <span>@Model.Order.Subtotal.ToString("C")</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Shipping</span>
                                    <span>@Model.Order.ShippingAmount.ToString("C")</span>
                                </div>
                                @if (Model.Order.TaxAmount > 0)
                                {
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Tax</span>
                                        <span>@Model.Order.TaxAmount.ToString("C")</span>
                                    </div>
                                }
                                @if (Model.Order.DiscountAmount > 0)
                                {
                                    <div class="d-flex justify-content-between mb-2 text-success">
                                        <span>Discount</span>
                                        <span>-@Model.Order.DiscountAmount.ToString("C")</span>
                                    </div>
                                }
                                <hr>
                                <div class="d-flex justify-content-between fw-bold h5">
                                    <span>Total</span>
                                    <span>@Model.Order.Total.ToString("C")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <a href="/Shop/Account/Orders" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-2"></i>Back to Orders
                </a>
            }
            else
            {
                <!-- Orders List -->
                <h4 class="mb-4">My Orders</h4>

                @if (Model.Orders.Any())
                {
                    <div class="card border">
                        <div class="card-body p-0">
                            <table class="table mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th>Order #</th>
                                        <th>Date</th>
                                        <th>Items</th>
                                        <th>Status</th>
                                        <th class="text-end">Total</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.Orders)
                                    {
                                        <tr>
                                            <td class="fw-semibold">@order.OrderNumber</td>
                                            <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                            <td>@order.Items.Sum(i => i.Quantity) items</td>
                                            <td>
                                                @switch (order.Status)
                                                {
                                                    case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Pending:
                                                        <span class="badge bg-warning">Pending</span>
                                                        break;
                                                    case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Confirmed:
                                                        <span class="badge bg-info">Confirmed</span>
                                                        break;
                                                    case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Processing:
                                                        <span class="badge bg-primary">Processing</span>
                                                        break;
                                                    case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Shipped:
                                                        <span class="badge bg-info">Shipped</span>
                                                        break;
                                                    case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Delivered:
                                                        <span class="badge bg-success">Delivered</span>
                                                        break;
                                                    case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Cancelled:
                                                        <span class="badge bg-dark">Cancelled</span>
                                                        break;
                                                    case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Refunded:
                                                        <span class="badge bg-secondary">Refunded</span>
                                                        break;
                                                }
                                            </td>
                                            <td class="text-end fw-semibold">@order.Total.ToString("C")</td>
                                            <td class="text-end">
                                                <a href="/Shop/Account/Orders/@order.Id" class="btn btn-sm btn-outline-primary">View</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
                else
                {
                    <div class="card border">
                        <div class="card-body text-center py-5">
                            <i class="bi bi-bag fs-1 text-muted d-block mb-3"></i>
                            <h5>No orders yet</h5>
                            <p class="text-muted">You haven't placed any orders yet.</p>
                            <a href="/Shop" class="btn btn-primary">Start Shopping</a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
