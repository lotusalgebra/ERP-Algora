@page "{id:guid?}"
@model Algora.Erp.Web.Pages.Shop.Account.OrdersModel
@{
    ViewData["Title"] = Model.Order != null ? $"Order {Model.Order.OrderNumber}" : "My Orders";
    Layout = "_LayoutShop";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        <!-- Sidebar -->
        <div class="lg:col-span-1 mb-4">
            <div class="bg-white rounded-lg border border-gray-200">
                <div class="p-6">
                    <nav class="flex flex-col space-y-1">
                        <a class="flex items-center px-4 py-2 text-sm font-medium rounded-lg text-gray-700 hover:bg-gray-100" href="/Shop/Account">
                            <i class="bi bi-speedometer2 mr-2"></i>Dashboard
                        </a>
                        <a class="flex items-center px-4 py-2 text-sm font-medium rounded-lg bg-primary-50 text-primary-600" href="/Shop/Account/Orders">
                            <i class="bi bi-bag mr-2"></i>My Orders
                        </a>
                        <a class="flex items-center px-4 py-2 text-sm font-medium rounded-lg text-gray-700 hover:bg-gray-100" href="/Shop/Account/Profile">
                            <i class="bi bi-person mr-2"></i>Profile
                        </a>
                        <a class="flex items-center px-4 py-2 text-sm font-medium rounded-lg text-gray-700 hover:bg-gray-100" href="/Shop/Account/Addresses">
                            <i class="bi bi-geo-alt mr-2"></i>Addresses
                        </a>
                        <hr class="my-2 border-gray-200">
                        <a class="flex items-center px-4 py-2 text-sm font-medium rounded-lg text-red-600 hover:bg-red-50" href="/Shop/Account/Logout">
                            <i class="bi bi-box-arrow-right mr-2"></i>Logout
                        </a>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="lg:col-span-3">
            @if (Model.Order != null)
            {
                <!-- Order Detail View -->
                <nav class="mb-4">
                    <ol class="flex items-center space-x-2 text-sm">
                        <li><a href="/Shop/Account" class="text-gray-500 hover:text-primary-600">Account</a></li>
                        <li class="text-gray-400">/</li>
                        <li><a href="/Shop/Account/Orders" class="text-gray-500 hover:text-primary-600">Orders</a></li>
                        <li class="text-gray-400">/</li>
                        <li class="text-gray-900 font-medium">@Model.Order.OrderNumber</li>
                    </ol>
                </nav>

                <div class="bg-white rounded-lg border border-gray-200 mb-4">
                    <div class="px-6 py-4 border-b border-gray-200 bg-white flex justify-between items-center">
                        <h5 class="font-semibold text-gray-900">Order @Model.Order.OrderNumber</h5>
                        @switch (Model.Order.Status)
                        {
                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Pending:
                                <span class="px-2.5 py-0.5 text-xs font-medium rounded-full bg-amber-100 text-amber-800">Pending</span>
                                break;
                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Confirmed:
                                <span class="px-2.5 py-0.5 text-xs font-medium rounded-full bg-blue-100 text-blue-800">Confirmed</span>
                                break;
                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Processing:
                                <span class="px-2.5 py-0.5 text-xs font-medium rounded-full bg-primary-100 text-primary-800">Processing</span>
                                break;
                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Shipped:
                                <span class="px-2.5 py-0.5 text-xs font-medium rounded-full bg-blue-100 text-blue-800">Shipped</span>
                                break;
                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Delivered:
                                <span class="px-2.5 py-0.5 text-xs font-medium rounded-full bg-emerald-100 text-emerald-800">Delivered</span>
                                break;
                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Cancelled:
                                <span class="px-2.5 py-0.5 text-xs font-medium rounded-full bg-gray-800 text-white">Cancelled</span>
                                break;
                            case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Refunded:
                                <span class="px-2.5 py-0.5 text-xs font-medium rounded-full bg-gray-100 text-gray-800">Refunded</span>
                                break;
                        }
                    </div>
                    <div class="p-6">
                        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
                            <div>
                                <h6 class="text-gray-500 text-sm font-medium mb-2">Order Date</h6>
                                <p class="text-gray-900">@Model.Order.OrderDate.ToString("MMMM dd, yyyy")</p>
                            </div>
                            <div>
                                <h6 class="text-gray-500 text-sm font-medium mb-2">Payment Status</h6>
                                <p class="text-gray-900">
                                    @switch (Model.Order.PaymentStatus)
                                    {
                                        case Algora.Erp.Domain.Entities.Ecommerce.PaymentStatus.Pending:
                                            <span class="px-2.5 py-0.5 text-xs font-medium rounded-full bg-amber-100 text-amber-800">Pending</span>
                                            break;
                                        case Algora.Erp.Domain.Entities.Ecommerce.PaymentStatus.Paid:
                                            <span class="px-2.5 py-0.5 text-xs font-medium rounded-full bg-emerald-100 text-emerald-800">Paid</span>
                                            break;
                                        case Algora.Erp.Domain.Entities.Ecommerce.PaymentStatus.Failed:
                                            <span class="px-2.5 py-0.5 text-xs font-medium rounded-full bg-red-100 text-red-800">Failed</span>
                                            break;
                                        case Algora.Erp.Domain.Entities.Ecommerce.PaymentStatus.Refunded:
                                            <span class="px-2.5 py-0.5 text-xs font-medium rounded-full bg-gray-100 text-gray-800">Refunded</span>
                                            break;
                                    }
                                </p>
                            </div>
                            <div>
                                <h6 class="text-gray-500 text-sm font-medium mb-2">Shipping Address</h6>
                                <p class="text-sm text-gray-900">
                                    @Model.Order.ShippingFirstName @Model.Order.ShippingLastName<br>
                                    @Model.Order.ShippingAddress1<br>
                                    @Model.Order.ShippingCity, @Model.Order.ShippingState @Model.Order.ShippingPostalCode
                                </p>
                            </div>
                        </div>

                        <h6 class="font-medium text-gray-900 mb-3">Items</h6>
                        <div class="overflow-x-auto">
                            <table class="w-full text-sm text-left text-gray-500">
                                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                                    <tr>
                                        <th class="px-4 py-3">Product</th>
                                        <th class="px-4 py-3 text-center">Qty</th>
                                        <th class="px-4 py-3 text-right">Price</th>
                                        <th class="px-4 py-3 text-right">Total</th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-200">
                                    @foreach (var item in Model.Order.Items)
                                    {
                                        <tr>
                                            <td class="px-4 py-3">
                                                <div class="font-semibold text-gray-900">@item.ProductName</div>
                                                @if (!string.IsNullOrEmpty(item.Sku))
                                                {
                                                    <small class="text-gray-500">SKU: @item.Sku</small>
                                                }
                                            </td>
                                            <td class="px-4 py-3 text-center">@item.Quantity</td>
                                            <td class="px-4 py-3 text-right">@item.UnitPrice.ToString("C")</td>
                                            <td class="px-4 py-3 text-right font-semibold text-gray-900">@item.LineTotal.ToString("C")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="flex justify-end mt-4">
                            <div class="w-full md:w-64">
                                <div class="flex justify-between mb-2">
                                    <span class="text-gray-600">Subtotal</span>
                                    <span class="text-gray-900">@Model.Order.Subtotal.ToString("C")</span>
                                </div>
                                <div class="flex justify-between mb-2">
                                    <span class="text-gray-600">Shipping</span>
                                    <span class="text-gray-900">@Model.Order.ShippingAmount.ToString("C")</span>
                                </div>
                                @if (Model.Order.TaxAmount > 0)
                                {
                                    <div class="flex justify-between mb-2">
                                        <span class="text-gray-600">Tax</span>
                                        <span class="text-gray-900">@Model.Order.TaxAmount.ToString("C")</span>
                                    </div>
                                }
                                @if (Model.Order.DiscountAmount > 0)
                                {
                                    <div class="flex justify-between mb-2 text-emerald-600">
                                        <span>Discount</span>
                                        <span>-@Model.Order.DiscountAmount.ToString("C")</span>
                                    </div>
                                }
                                <hr class="my-3 border-gray-200">
                                <div class="flex justify-between font-bold text-lg">
                                    <span class="text-gray-900">Total</span>
                                    <span class="text-gray-900">@Model.Order.Total.ToString("C")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <a href="/Shop/Account/Orders" class="inline-flex items-center px-5 py-2.5 text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm">
                    <i class="bi bi-arrow-left mr-2"></i>Back to Orders
                </a>
            }
            else
            {
                <!-- Orders List -->
                <h4 class="text-xl font-bold text-gray-900 mb-6">My Orders</h4>

                @if (Model.Orders.Any())
                {
                    <div class="bg-white rounded-lg border border-gray-200">
                        <div class="p-0 overflow-x-auto">
                            <table class="w-full text-sm text-left text-gray-500">
                                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                                    <tr>
                                        <th class="px-6 py-3">Order #</th>
                                        <th class="px-6 py-3">Date</th>
                                        <th class="px-6 py-3">Items</th>
                                        <th class="px-6 py-3">Status</th>
                                        <th class="px-6 py-3 text-right">Total</th>
                                        <th class="px-6 py-3"></th>
                                    </tr>
                                </thead>
                                <tbody class="divide-y divide-gray-200">
                                    @foreach (var order in Model.Orders)
                                    {
                                        <tr class="hover:bg-gray-50">
                                            <td class="px-6 py-4 font-semibold text-gray-900">@order.OrderNumber</td>
                                            <td class="px-6 py-4">@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                            <td class="px-6 py-4">@order.Items.Sum(i => i.Quantity) items</td>
                                            <td class="px-6 py-4">
                                                @switch (order.Status)
                                                {
                                                    case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Pending:
                                                        <span class="px-2.5 py-0.5 text-xs font-medium rounded-full bg-amber-100 text-amber-800">Pending</span>
                                                        break;
                                                    case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Confirmed:
                                                        <span class="px-2.5 py-0.5 text-xs font-medium rounded-full bg-blue-100 text-blue-800">Confirmed</span>
                                                        break;
                                                    case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Processing:
                                                        <span class="px-2.5 py-0.5 text-xs font-medium rounded-full bg-primary-100 text-primary-800">Processing</span>
                                                        break;
                                                    case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Shipped:
                                                        <span class="px-2.5 py-0.5 text-xs font-medium rounded-full bg-blue-100 text-blue-800">Shipped</span>
                                                        break;
                                                    case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Delivered:
                                                        <span class="px-2.5 py-0.5 text-xs font-medium rounded-full bg-emerald-100 text-emerald-800">Delivered</span>
                                                        break;
                                                    case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Cancelled:
                                                        <span class="px-2.5 py-0.5 text-xs font-medium rounded-full bg-gray-800 text-white">Cancelled</span>
                                                        break;
                                                    case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Refunded:
                                                        <span class="px-2.5 py-0.5 text-xs font-medium rounded-full bg-gray-100 text-gray-800">Refunded</span>
                                                        break;
                                                }
                                            </td>
                                            <td class="px-6 py-4 text-right font-semibold text-gray-900">@order.Total.ToString("C")</td>
                                            <td class="px-6 py-4 text-right">
                                                <a href="/Shop/Account/Orders/@order.Id" class="text-xs px-3 py-2 text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg">View</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
                else
                {
                    <div class="bg-white rounded-lg border border-gray-200">
                        <div class="p-6 text-center py-12">
                            <i class="bi bi-bag text-5xl text-gray-300 block mb-3"></i>
                            <h5 class="text-lg font-semibold text-gray-700 mb-2">No orders yet</h5>
                            <p class="text-gray-500 mb-4">You haven't placed any orders yet.</p>
                            <a href="/Shop" class="inline-flex items-center px-5 py-2.5 text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm">Start Shopping</a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>
