@page
@model Algora.Erp.Web.Pages.Shop.Account.IndexModel
@{
    ViewData["Title"] = "My Account";
    Layout = "_LayoutShop";
}

<div class="container py-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-lg-3 mb-4">
            <div class="card border">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="rounded-circle bg-primary bg-opacity-10 text-primary d-flex align-items-center justify-content-center mx-auto mb-3"
                             style="width: 80px; height: 80px; font-size: 2rem;">
                            @if (Model.Customer != null)
                            {
                                <span class="fw-semibold">@Model.Customer.FirstName[0]@Model.Customer.LastName[0]</span>
                            }
                            else
                            {
                                <i class="bi bi-person"></i>
                            }
                        </div>
                        @if (Model.Customer != null)
                        {
                            <h5 class="mb-1">@Model.Customer.FirstName @Model.Customer.LastName</h5>
                            <small class="text-muted">@Model.Customer.Email</small>
                        }
                    </div>

                    <nav class="nav flex-column">
                        <a class="nav-link active" href="/Shop/Account">
                            <i class="bi bi-speedometer2 me-2"></i>Dashboard
                        </a>
                        <a class="nav-link" href="/Shop/Account/Orders">
                            <i class="bi bi-bag me-2"></i>My Orders
                        </a>
                        <a class="nav-link" href="/Shop/Account/Profile">
                            <i class="bi bi-person me-2"></i>Profile
                        </a>
                        <a class="nav-link" href="/Shop/Account/Addresses">
                            <i class="bi bi-geo-alt me-2"></i>Addresses
                        </a>
                        <hr>
                        <a class="nav-link text-danger" href="/Shop/Account/Logout">
                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                        </a>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-lg-9">
            @if (Model.Customer == null)
            {
                <!-- Login / Register Form -->
                <div class="row">
                    <div class="col-md-6 mb-4">
                        <div class="card border h-100">
                            <div class="card-header bg-white">
                                <h5 class="mb-0">Login</h5>
                            </div>
                            <div class="card-body">
                                <form method="post" asp-page-handler="Login">
                                    <div class="mb-3">
                                        <label class="form-label">Email Address</label>
                                        <input type="email" class="form-control" name="LoginEmail" required>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Password</label>
                                        <input type="password" class="form-control" name="LoginPassword" required>
                                    </div>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="RememberMe" id="rememberMe">
                                            <label class="form-check-label" for="rememberMe">Remember me</label>
                                        </div>
                                        <a href="#" class="small">Forgot password?</a>
                                    </div>
                                    <button type="submit" class="btn btn-primary w-100 mt-3">Login</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 mb-4">
                        <div class="card border h-100">
                            <div class="card-header bg-white">
                                <h5 class="mb-0">Create Account</h5>
                            </div>
                            <div class="card-body">
                                <form method="post" asp-page-handler="Register">
                                    <div class="row g-3">
                                        <div class="col-6">
                                            <label class="form-label">First Name</label>
                                            <input type="text" class="form-control" name="FirstName" required>
                                        </div>
                                        <div class="col-6">
                                            <label class="form-label">Last Name</label>
                                            <input type="text" class="form-control" name="LastName" required>
                                        </div>
                                    </div>
                                    <div class="mb-3 mt-3">
                                        <label class="form-label">Email Address</label>
                                        <input type="email" class="form-control" name="Email" required>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Password</label>
                                        <input type="password" class="form-control" name="Password" required minlength="6">
                                    </div>
                                    <button type="submit" class="btn btn-primary w-100">Create Account</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Dashboard -->
                <h4 class="mb-4">Welcome back, @Model.Customer.FirstName!</h4>

                <!-- Stats -->
                <div class="row g-4 mb-4">
                    <div class="col-md-4">
                        <div class="card border">
                            <div class="card-body text-center">
                                <i class="bi bi-bag fs-2 text-primary mb-2"></i>
                                <h3 class="mb-0">@Model.Customer.OrderCount</h3>
                                <small class="text-muted">Total Orders</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border">
                            <div class="card-body text-center">
                                <i class="bi bi-currency-dollar fs-2 text-success mb-2"></i>
                                <h3 class="mb-0">@Model.Customer.TotalSpent.ToString("C")</h3>
                                <small class="text-muted">Total Spent</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border">
                            <div class="card-body text-center">
                                <i class="bi bi-calendar fs-2 text-info mb-2"></i>
                                <h3 class="mb-0">@Model.Customer.CreatedAt.ToString("MMM yyyy")</h3>
                                <small class="text-muted">Member Since</small>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Orders -->
                <div class="card border">
                    <div class="card-header bg-white d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Recent Orders</h5>
                        <a href="/Shop/Account/Orders" class="btn btn-sm btn-outline-primary">View All</a>
                    </div>
                    <div class="card-body p-0">
                        @if (Model.RecentOrders.Any())
                        {
                            <table class="table mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th>Order #</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th class="text-end">Total</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.RecentOrders)
                                    {
                                        <tr>
                                            <td class="fw-semibold">@order.OrderNumber</td>
                                            <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @switch (order.Status)
                                                {
                                                    case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Pending:
                                                        <span class="badge bg-warning">Pending</span>
                                                        break;
                                                    case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Processing:
                                                        <span class="badge bg-primary">Processing</span>
                                                        break;
                                                    case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Shipped:
                                                        <span class="badge bg-info">Shipped</span>
                                                        break;
                                                    case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Delivered:
                                                        <span class="badge bg-success">Delivered</span>
                                                        break;
                                                    default:
                                                        <span class="badge bg-secondary">@order.Status</span>
                                                        break;
                                                }
                                            </td>
                                            <td class="text-end fw-semibold">@order.Total.ToString("C")</td>
                                            <td class="text-end">
                                                <a href="/Shop/Account/Orders/@order.Id" class="btn btn-sm btn-outline-secondary">View</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="text-center py-5 text-muted">
                                <i class="bi bi-bag fs-1 d-block mb-3"></i>
                                <p>You haven't placed any orders yet.</p>
                                <a href="/Shop" class="btn btn-primary">Start Shopping</a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>
