@page
@model Algora.Erp.Web.Pages.Shop.Account.IndexModel
@{
    ViewData["Title"] = "My Account";
    Layout = "_LayoutShop";
}

<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        <!-- Sidebar -->
        <div class="lg:col-span-1 mb-4">
            <div class="bg-white rounded-lg border border-gray-200">
                <div class="p-6">
                    <div class="text-center mb-6">
                        <div class="w-20 h-20 mx-auto mb-3 rounded-full bg-primary-100 text-primary-600 flex items-center justify-center text-2xl font-semibold">
                            @if (Model.Customer != null)
                            {
                                <span>@Model.Customer.FirstName[0]@Model.Customer.LastName[0]</span>
                            }
                            else
                            {
                                <i class="bi bi-person"></i>
                            }
                        </div>
                        @if (Model.Customer != null)
                        {
                            <h5 class="font-semibold text-gray-900 mb-1">@Model.Customer.FirstName @Model.Customer.LastName</h5>
                            <small class="text-gray-500">@Model.Customer.Email</small>
                        }
                    </div>

                    <nav class="flex flex-col space-y-1">
                        <a class="flex items-center px-4 py-2 text-sm font-medium rounded-lg bg-primary-50 text-primary-600" href="/Shop/Account">
                            <i class="bi bi-speedometer2 mr-2"></i>Dashboard
                        </a>
                        <a class="flex items-center px-4 py-2 text-sm font-medium rounded-lg text-gray-700 hover:bg-gray-100" href="/Shop/Account/Orders">
                            <i class="bi bi-bag mr-2"></i>My Orders
                        </a>
                        <a class="flex items-center px-4 py-2 text-sm font-medium rounded-lg text-gray-700 hover:bg-gray-100" href="/Shop/Account/Profile">
                            <i class="bi bi-person mr-2"></i>Profile
                        </a>
                        <a class="flex items-center px-4 py-2 text-sm font-medium rounded-lg text-gray-700 hover:bg-gray-100" href="/Shop/Account/Addresses">
                            <i class="bi bi-geo-alt mr-2"></i>Addresses
                        </a>
                        <hr class="my-2 border-gray-200">
                        <a class="flex items-center px-4 py-2 text-sm font-medium rounded-lg text-red-600 hover:bg-red-50" href="/Shop/Account/Logout">
                            <i class="bi bi-box-arrow-right mr-2"></i>Logout
                        </a>
                    </nav>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="lg:col-span-3">
            @if (Model.Customer == null)
            {
                <!-- Login / Register Form -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="mb-4">
                        <div class="bg-white rounded-lg border border-gray-200 h-full">
                            <div class="px-6 py-4 border-b border-gray-200 bg-white">
                                <h5 class="font-semibold text-gray-900">Login</h5>
                            </div>
                            <div class="p-6">
                                <form method="post" asp-page-handler="Login">
                                    <div class="mb-4">
                                        <label class="block mb-2 text-sm font-medium text-gray-900">Email Address</label>
                                        <input type="email" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="LoginEmail" required>
                                    </div>
                                    <div class="mb-4">
                                        <label class="block mb-2 text-sm font-medium text-gray-900">Password</label>
                                        <input type="password" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="LoginPassword" required>
                                    </div>
                                    <div class="flex justify-between items-center mb-4">
                                        <div class="flex items-center">
                                            <input class="w-4 h-4 text-primary-600 bg-gray-100 border-gray-300 rounded focus:ring-primary-500 focus:ring-2" type="checkbox" name="RememberMe" id="rememberMe">
                                            <label class="ml-2 text-sm text-gray-700" for="rememberMe">Remember me</label>
                                        </div>
                                        <a href="#" class="text-sm text-primary-600 hover:underline">Forgot password?</a>
                                    </div>
                                    <button type="submit" class="w-full inline-flex items-center justify-center px-5 py-2.5 text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm">Login</button>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="mb-4">
                        <div class="bg-white rounded-lg border border-gray-200 h-full">
                            <div class="px-6 py-4 border-b border-gray-200 bg-white">
                                <h5 class="font-semibold text-gray-900">Create Account</h5>
                            </div>
                            <div class="p-6">
                                <form method="post" asp-page-handler="Register">
                                    <div class="grid grid-cols-2 gap-4 mb-4">
                                        <div>
                                            <label class="block mb-2 text-sm font-medium text-gray-900">First Name</label>
                                            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="FirstName" required>
                                        </div>
                                        <div>
                                            <label class="block mb-2 text-sm font-medium text-gray-900">Last Name</label>
                                            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="LastName" required>
                                        </div>
                                    </div>
                                    <div class="mb-4">
                                        <label class="block mb-2 text-sm font-medium text-gray-900">Email Address</label>
                                        <input type="email" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Email" required>
                                    </div>
                                    <div class="mb-4">
                                        <label class="block mb-2 text-sm font-medium text-gray-900">Password</label>
                                        <input type="password" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Password" required minlength="6">
                                    </div>
                                    <button type="submit" class="w-full inline-flex items-center justify-center px-5 py-2.5 text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm">Create Account</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Dashboard -->
                <h4 class="text-xl font-bold text-gray-900 mb-6">Welcome back, @Model.Customer.FirstName!</h4>

                <!-- Stats -->
                <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
                    <div class="bg-white rounded-lg border border-gray-200">
                        <div class="p-6 text-center">
                            <i class="bi bi-bag text-3xl text-primary-600 mb-2"></i>
                            <h3 class="text-2xl font-bold text-gray-900">@Model.Customer.OrderCount</h3>
                            <small class="text-gray-500">Total Orders</small>
                        </div>
                    </div>
                    <div class="bg-white rounded-lg border border-gray-200">
                        <div class="p-6 text-center">
                            <i class="bi bi-currency-dollar text-3xl text-emerald-600 mb-2"></i>
                            <h3 class="text-2xl font-bold text-gray-900">@Model.Customer.TotalSpent.ToString("C")</h3>
                            <small class="text-gray-500">Total Spent</small>
                        </div>
                    </div>
                    <div class="bg-white rounded-lg border border-gray-200">
                        <div class="p-6 text-center">
                            <i class="bi bi-calendar text-3xl text-blue-500 mb-2"></i>
                            <h3 class="text-2xl font-bold text-gray-900">@Model.Customer.CreatedAt.ToString("MMM yyyy")</h3>
                            <small class="text-gray-500">Member Since</small>
                        </div>
                    </div>
                </div>

                <!-- Recent Orders -->
                <div class="bg-white rounded-lg border border-gray-200">
                    <div class="px-6 py-4 border-b border-gray-200 bg-white flex justify-between items-center">
                        <h5 class="font-semibold text-gray-900">Recent Orders</h5>
                        <a href="/Shop/Account/Orders" class="text-xs px-3 py-2 text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg">View All</a>
                    </div>
                    <div class="p-0">
                        @if (Model.RecentOrders.Any())
                        {
                            <div class="overflow-x-auto">
                                <table class="w-full text-sm text-left text-gray-500">
                                    <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                                        <tr>
                                            <th class="px-6 py-3">Order #</th>
                                            <th class="px-6 py-3">Date</th>
                                            <th class="px-6 py-3">Status</th>
                                            <th class="px-6 py-3 text-right">Total</th>
                                            <th class="px-6 py-3"></th>
                                        </tr>
                                    </thead>
                                    <tbody class="divide-y divide-gray-200">
                                        @foreach (var order in Model.RecentOrders)
                                        {
                                            <tr class="hover:bg-gray-50">
                                                <td class="px-6 py-4 font-semibold text-gray-900">@order.OrderNumber</td>
                                                <td class="px-6 py-4">@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                                <td class="px-6 py-4">
                                                    @switch (order.Status)
                                                    {
                                                        case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Pending:
                                                            <span class="px-2.5 py-0.5 text-xs font-medium rounded-full bg-amber-100 text-amber-800">Pending</span>
                                                            break;
                                                        case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Processing:
                                                            <span class="px-2.5 py-0.5 text-xs font-medium rounded-full bg-primary-100 text-primary-800">Processing</span>
                                                            break;
                                                        case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Shipped:
                                                            <span class="px-2.5 py-0.5 text-xs font-medium rounded-full bg-blue-100 text-blue-800">Shipped</span>
                                                            break;
                                                        case Algora.Erp.Domain.Entities.Ecommerce.WebOrderStatus.Delivered:
                                                            <span class="px-2.5 py-0.5 text-xs font-medium rounded-full bg-emerald-100 text-emerald-800">Delivered</span>
                                                            break;
                                                        default:
                                                            <span class="px-2.5 py-0.5 text-xs font-medium rounded-full bg-gray-100 text-gray-800">@order.Status</span>
                                                            break;
                                                    }
                                                </td>
                                                <td class="px-6 py-4 text-right font-semibold text-gray-900">@order.Total.ToString("C")</td>
                                                <td class="px-6 py-4 text-right">
                                                    <a href="/Shop/Account/Orders/@order.Id" class="text-xs px-3 py-2 text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg">View</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-12 text-gray-500">
                                <i class="bi bi-bag text-5xl block mb-3 text-gray-300"></i>
                                <p class="mb-4">You haven't placed any orders yet.</p>
                                <a href="/Shop" class="inline-flex items-center px-5 py-2.5 text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm">Start Shopping</a>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>
