@page
@model Algora.Erp.Web.Pages.Shop.IndexModel
@{
    ViewData["Title"] = "Shop";
    Layout = "_LayoutShop";
}

<!-- Hero Section -->
<section class="bg-gradient-to-r from-primary-600 to-primary-500 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-center">
            <div>
                <h1 class="text-4xl md:text-5xl font-bold mb-4">Welcome to Algora Shop</h1>
                <p class="text-lg text-primary-100 mb-6">Discover amazing products at unbeatable prices. Quality you can trust.</p>
                <a href="#products" class="inline-flex items-center px-6 py-3 bg-white text-primary-600 font-semibold rounded-lg hover:bg-primary-50 transition-colors">
                    <i class="bi bi-shop me-2"></i>Shop Now
                </a>
            </div>
            <div class="hidden lg:flex justify-center">
                <i class="bi bi-box-seam text-white/30" style="font-size: 12rem;"></i>
            </div>
        </div>
    </div>
</section>

<!-- Categories -->
<section class="py-4 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-wrap justify-center gap-2">
            <a href="/Shop" class="px-4 py-2 rounded-full text-sm font-medium transition-colors @(string.IsNullOrEmpty(Model.CategorySlug) ? "bg-primary-600 text-white" : "bg-gray-200 text-gray-700 hover:bg-primary-600 hover:text-white")">
                All Products
            </a>
            @foreach (var category in Model.Categories)
            {
                <a href="/Shop?category=@category.Slug"
                   class="px-4 py-2 rounded-full text-sm font-medium transition-colors @(Model.CategorySlug == category.Slug ? "bg-primary-600 text-white" : "bg-gray-200 text-gray-700 hover:bg-primary-600 hover:text-white")">
                    @category.Name
                </a>
            }
        </div>
    </div>
</section>

<!-- Products Grid -->
<section class="py-12" id="products">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-6 gap-4">
            <div>
                <h2 class="text-xl font-bold text-gray-900">
                    @if (!string.IsNullOrEmpty(Model.CategorySlug))
                    {
                        @(Model.Categories.FirstOrDefault(c => c.Slug == Model.CategorySlug)?.Name ?? "Products")
                    }
                    else
                    {
                        <text>All Products</text>
                    }
                </h2>
                <p class="text-sm text-gray-500">@Model.TotalProducts products found</p>
            </div>
            <div class="flex items-center gap-2">
                <label class="text-sm text-gray-500">Sort by:</label>
                <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 p-2"
                        onchange="window.location.href='/Shop?category=@Model.CategorySlug&sort=' + this.value">
                    <option value="newest" @(Model.SortBy == "newest" ? "selected" : "")>Newest</option>
                    <option value="price-asc" @(Model.SortBy == "price-asc" ? "selected" : "")>Price: Low to High</option>
                    <option value="price-desc" @(Model.SortBy == "price-desc" ? "selected" : "")>Price: High to Low</option>
                    <option value="name" @(Model.SortBy == "name" ? "selected" : "")>Name: A-Z</option>
                </select>
            </div>
        </div>

        @if (!Model.Products.Any())
        {
            <div class="text-center py-16">
                <i class="bi bi-box-seam text-6xl text-gray-300 mb-4"></i>
                <h5 class="text-lg font-semibold text-gray-700 mb-2">No products found</h5>
                <p class="text-gray-500 mb-4">Try adjusting your search or filter criteria.</p>
                <a href="/Shop" class="inline-flex items-center px-4 py-2 text-white bg-primary-600 hover:bg-primary-700 rounded-lg font-medium">View All Products</a>
            </div>
        }
        else
        {
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
                @foreach (var product in Model.Products)
                {
                    var imageUrl = product.Images.FirstOrDefault(i => i.IsPrimary)?.Url ?? product.Images.FirstOrDefault()?.Url;
                    <div class="group bg-white rounded-xl border border-gray-200 overflow-hidden hover:shadow-lg hover:-translate-y-1 transition-all duration-300">
                        <div class="relative">
                            @if (product.CompareAtPrice.HasValue && product.CompareAtPrice > product.Price)
                            {
                                var discount = (int)Math.Round((1 - product.Price / product.CompareAtPrice.Value) * 100);
                                <span class="absolute top-3 right-3 z-10 px-2 py-1 text-xs font-semibold text-white bg-red-500 rounded-full">-@discount%</span>
                            }
                            @if (product.IsFeatured)
                            {
                                <span class="absolute top-3 left-3 z-10 px-2 py-1 text-xs font-semibold text-gray-800 bg-amber-400 rounded-full">Featured</span>
                            }
                            <a href="/Shop/Product/@product.Slug">
                                @if (!string.IsNullOrEmpty(imageUrl))
                                {
                                    <img src="@imageUrl" alt="@product.Name" class="w-full h-48 object-cover">
                                }
                                else
                                {
                                    <div class="w-full h-48 bg-gray-100 flex items-center justify-center">
                                        <i class="bi bi-image text-gray-300 text-5xl"></i>
                                    </div>
                                }
                            </a>
                        </div>
                        <div class="p-4">
                            <p class="text-xs text-gray-500 mb-1">@product.Category?.Name</p>
                            <h6 class="font-semibold text-gray-900 mb-2 line-clamp-2">
                                <a href="/Shop/Product/@product.Slug" class="hover:text-primary-600">@product.Name</a>
                            </h6>
                            <div class="flex items-center gap-2 mb-3">
                                <span class="text-lg font-bold text-primary-600">@product.Price.ToString("C")</span>
                                @if (product.CompareAtPrice.HasValue && product.CompareAtPrice > product.Price)
                                {
                                    <span class="text-sm text-gray-400 line-through">@product.CompareAtPrice.Value.ToString("C")</span>
                                }
                            </div>
                            <button class="w-full inline-flex items-center justify-center px-4 py-2 text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition-colors"
                                    onclick="addToCart('@product.Id', '@product.Name.Replace("'", "\\'")', @product.Price, '@imageUrl')">
                                <i class="bi bi-cart-plus me-2"></i>Add to Cart
                            </button>
                        </div>
                    </div>
                }
            </div>

            <!-- Pagination -->
            @if (Model.TotalPages > 1)
            {
                <nav class="flex justify-center mt-12">
                    <ul class="inline-flex items-center -space-x-px">
                        <li>
                            <a href="/Shop?category=@Model.CategorySlug&sort=@Model.SortBy&page=@(Model.Page - 1)"
                               class="px-3 py-2 ms-0 leading-tight text-gray-500 bg-white border border-gray-300 rounded-s-lg hover:bg-gray-100 hover:text-gray-700 @(Model.Page <= 1 ? "pointer-events-none opacity-50" : "")">
                                Previous
                            </a>
                        </li>
                        @for (var i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.TotalPages, Model.Page + 2); i++)
                        {
                            <li>
                                <a href="/Shop?category=@Model.CategorySlug&sort=@Model.SortBy&page=@i"
                                   class="px-3 py-2 leading-tight border border-gray-300 @(i == Model.Page ? "text-primary-600 bg-primary-50 border-primary-300" : "text-gray-500 bg-white hover:bg-gray-100 hover:text-gray-700")">
                                    @i
                                </a>
                            </li>
                        }
                        <li>
                            <a href="/Shop?category=@Model.CategorySlug&sort=@Model.SortBy&page=@(Model.Page + 1)"
                               class="px-3 py-2 leading-tight text-gray-500 bg-white border border-gray-300 rounded-e-lg hover:bg-gray-100 hover:text-gray-700 @(Model.Page >= Model.TotalPages ? "pointer-events-none opacity-50" : "")">
                                Next
                            </a>
                        </li>
                    </ul>
                </nav>
            }
        }
    </div>
</section>

<!-- Featured Section -->
@if (Model.FeaturedProducts.Any() && string.IsNullOrEmpty(Model.CategorySlug))
{
    <section class="py-12 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <h2 class="text-xl font-bold text-gray-900 mb-6"><i class="bi bi-star me-2 text-amber-500"></i>Featured Products</h2>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
                @foreach (var product in Model.FeaturedProducts.Take(4))
                {
                    var featuredImageUrl = product.Images.FirstOrDefault(i => i.IsPrimary)?.Url ?? product.Images.FirstOrDefault()?.Url;
                    <div class="bg-white rounded-xl border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow">
                        <a href="/Shop/Product/@product.Slug">
                            @if (!string.IsNullOrEmpty(featuredImageUrl))
                            {
                                <img src="@featuredImageUrl" alt="@product.Name" class="w-full h-48 object-cover">
                            }
                            else
                            {
                                <div class="w-full h-48 bg-gray-100 flex items-center justify-center">
                                    <i class="bi bi-image text-gray-300 text-5xl"></i>
                                </div>
                            }
                        </a>
                        <div class="p-4">
                            <h6 class="font-semibold text-gray-900 mb-2">
                                <a href="/Shop/Product/@product.Slug" class="hover:text-primary-600">@product.Name</a>
                            </h6>
                            <span class="text-lg font-bold text-primary-600">@product.Price.ToString("C")</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
}
