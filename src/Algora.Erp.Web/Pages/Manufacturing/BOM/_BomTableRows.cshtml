@using Algora.Erp.Domain.Entities.Manufacturing
@model Algora.Erp.Web.Pages.Manufacturing.BOM.BomTableViewModel

@if (!Model.Boms.Any())
{
    <tr>
        <td colspan="9" class="text-center py-5">
            <div class="text-muted">
                <i class="bi bi-diagram-3 fs-1 d-block mb-3"></i>
                <p class="mb-0">No bills of material found</p>
            </div>
        </td>
    </tr>
}
else
{
    @foreach (var bom in Model.Boms)
    {
        var statusClass = bom.Status switch
        {
            BomStatus.Active => "bg-success",
            BomStatus.Draft => "bg-warning",
            BomStatus.Obsolete => "bg-secondary",
            _ => "bg-secondary"
        };

        <tr>
            <td class="ps-4">
                <a href="#"
                   class="text-decoration-none fw-semibold"
                   hx-get="/Manufacturing/BOM?handler=Details&id=@bom.Id"
                   hx-target="#detailsModalContent"
                   data-modal-target="detailsModal" data-modal-toggle="detailsModal">
                    @bom.BomNumber
                </a>
            </td>
            <td>
                <div>@bom.Name</div>
                @if (!string.IsNullOrEmpty(bom.Description))
                {
                    <small class="text-muted">@(bom.Description.Length > 50 ? bom.Description.Substring(0, 50) + "..." : bom.Description)</small>
                }
            </td>
            <td>@bom.Product?.Name</td>
            <td>@bom.Quantity @bom.UnitOfMeasure</td>
            <td>
                <span class="badge bg-light text-dark">
                    @bom.Lines.Count items
                </span>
            </td>
            <td>@bom.TotalMaterialCost.ToString("C")</td>
            <td>
                <span class="badge @statusClass">@bom.Status</span>
            </td>
            <td>
                @if (bom.EffectiveFrom.HasValue)
                {
                    @bom.EffectiveFrom.Value.ToString("MMM dd, yyyy")
                }
                else
                {
                    <span class="text-muted">-</span>
                }
            </td>
            <td class="text-end pe-4">
                <div class="btn-group">
                    <button type="button"
                            class="btn btn-sm btn-outline-secondary"
                            hx-get="/Manufacturing/BOM?handler=Details&id=@bom.Id"
                            hx-target="#detailsModalContent"
                            data-modal-target="detailsModal" data-modal-toggle="detailsModal"
                            title="View Details">
                        <i class="bi bi-eye"></i>
                    </button>
                    <button type="button"
                            class="btn btn-sm btn-outline-primary"
                            hx-get="/Manufacturing/BOM?handler=EditForm&id=@bom.Id"
                            hx-target="#formModalContent"
                            data-modal-target="formModal" data-modal-toggle="formModal"
                            title="Edit">
                        <i class="bi bi-pencil"></i>
                    </button>
                    @if (bom.Status == BomStatus.Draft)
                    {
                        <button type="button"
                                class="btn btn-sm btn-outline-success"
                                hx-post="/Manufacturing/BOM?handler=UpdateStatus&id=@bom.Id&status=Active"
                                hx-target="#bomTableContainer"
                                hx-confirm="Activate this BOM?"
                                title="Activate">
                            <i class="bi bi-check-lg"></i>
                        </button>
                        <button type="button"
                                class="btn btn-sm btn-outline-danger"
                                hx-delete="/Manufacturing/BOM?id=@bom.Id"
                                hx-target="#bomTableContainer"
                                hx-confirm="Are you sure you want to delete this BOM? This action cannot be undone."
                                title="Delete">
                            <i class="bi bi-trash"></i>
                        </button>
                    }
                    @if (bom.Status == BomStatus.Active)
                    {
                        <button type="button"
                                class="btn btn-sm btn-outline-secondary"
                                hx-post="/Manufacturing/BOM?handler=UpdateStatus&id=@bom.Id&status=Obsolete"
                                hx-target="#bomTableContainer"
                                hx-confirm="Mark this BOM as obsolete?"
                                title="Mark Obsolete">
                            <i class="bi bi-archive"></i>
                        </button>
                    }
                </div>
            </td>
        </tr>
    }
}

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <tr>
        <td colspan="9" class="border-0">
            <div class="d-flex justify-content-between align-items-center px-3 py-2">
                <div class="text-muted small">
                    Showing @((Model.Page - 1) * Model.PageSize + 1) to @Math.Min(Model.Page * Model.PageSize, Model.TotalRecords) of @Model.TotalRecords entries
                </div>
                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                            <a class="page-link" href="#"
                               hx-get="/Manufacturing/BOM?handler=Table&page=@(Model.Page - 1)"
                               hx-target="#bomTableContainer"
                               hx-include="#searchInput, #statusFilter">
                                Previous
                            </a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.Page ? "active" : "")">
                                <a class="page-link" href="#"
                                   hx-get="/Manufacturing/BOM?handler=Table&page=@i"
                                   hx-target="#bomTableContainer"
                                   hx-include="#searchInput, #statusFilter">
                                    @i
                                </a>
                            </li>
                        }
                        <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="#"
                               hx-get="/Manufacturing/BOM?handler=Table&page=@(Model.Page + 1)"
                               hx-target="#bomTableContainer"
                               hx-include="#searchInput, #statusFilter">
                                Next
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </td>
    </tr>
}
