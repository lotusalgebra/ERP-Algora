@using Algora.Erp.Domain.Entities.Manufacturing
@model Algora.Erp.Web.Pages.Manufacturing.BOM.BomTableViewModel

@if (!Model.Boms.Any())
{
    <tr>
        <td colspan="9" class="text-center py-8">
            <div class="text-gray-500">
                <i class="bi bi-diagram-3 text-4xl block mb-3"></i>
                <p class="mb-0">No bills of material found</p>
            </div>
        </td>
    </tr>
}
else
{
    @foreach (var bom in Model.Boms)
    {
        var statusClass = bom.Status switch
        {
            BomStatus.Active => "bg-emerald-100 text-emerald-800",
            BomStatus.Draft => "bg-amber-100 text-amber-800",
            BomStatus.Obsolete => "bg-gray-100 text-gray-800",
            _ => "bg-gray-100 text-gray-800"
        };

        <tr class="bg-white border-b hover:bg-gray-50">
            <td class="px-6 py-4">
                <a href="#"
                   class="text-primary-600 hover:underline font-semibold"
                   hx-get="/Manufacturing/BOM?handler=Details&id=@bom.Id"
                   hx-target="#detailsModalContent"
                   data-modal-target="detailsModal" data-modal-toggle="detailsModal">
                    @bom.BomNumber
                </a>
            </td>
            <td class="px-6 py-4">
                <div class="text-gray-900">@bom.Name</div>
                @if (!string.IsNullOrEmpty(bom.Description))
                {
                    <small class="text-gray-500">@(bom.Description.Length > 50 ? bom.Description.Substring(0, 50) + "..." : bom.Description)</small>
                }
            </td>
            <td class="px-6 py-4 text-gray-900">@bom.Product?.Name</td>
            <td class="px-6 py-4 text-gray-900">@bom.Quantity @bom.UnitOfMeasure</td>
            <td class="px-6 py-4">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">
                    @bom.Lines.Count items
                </span>
            </td>
            <td class="px-6 py-4 text-right text-gray-900">@bom.TotalMaterialCost.ToString("C")</td>
            <td class="px-6 py-4">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @statusClass">@bom.Status</span>
            </td>
            <td class="px-6 py-4 text-gray-900">
                @if (bom.EffectiveFrom.HasValue)
                {
                    @bom.EffectiveFrom.Value.ToString("MMM dd, yyyy")
                }
                else
                {
                    <span class="text-gray-500">-</span>
                }
            </td>
            <td class="px-6 py-4 text-right">
                <div class="inline-flex rounded-md shadow-sm" role="group">
                    <button type="button"
                            class="px-3 py-2 text-xs font-medium text-gray-900 bg-white border border-gray-300 rounded-l-lg hover:bg-gray-100 focus:z-10 focus:ring-2 focus:ring-gray-200"
                            hx-get="/Manufacturing/BOM?handler=Details&id=@bom.Id"
                            hx-target="#detailsModalContent"
                            data-modal-target="detailsModal" data-modal-toggle="detailsModal"
                            title="View Details">
                        <i class="bi bi-eye"></i>
                    </button>
                    <button type="button"
                            class="px-3 py-2 text-xs font-medium text-gray-900 bg-white border-t border-b border-gray-300 hover:bg-gray-100 focus:z-10 focus:ring-2 focus:ring-gray-200"
                            hx-get="/Manufacturing/BOM?handler=EditForm&id=@bom.Id"
                            hx-target="#formModalContent"
                            data-modal-target="formModal" data-modal-toggle="formModal"
                            title="Edit">
                        <i class="bi bi-pencil"></i>
                    </button>
                    @if (bom.Status == BomStatus.Draft)
                    {
                        <button type="button"
                                class="px-3 py-2 text-xs font-medium text-emerald-700 bg-white border-t border-b border-gray-300 hover:bg-emerald-50 focus:z-10 focus:ring-2 focus:ring-emerald-200"
                                hx-post="/Manufacturing/BOM?handler=UpdateStatus&id=@bom.Id&status=Active"
                                hx-target="#bomTableContainer"
                                hx-confirm="Activate this BOM?"
                                title="Activate">
                            <i class="bi bi-check-lg"></i>
                        </button>
                        <button type="button"
                                class="px-3 py-2 text-xs font-medium text-red-700 bg-white border border-gray-300 rounded-r-lg hover:bg-red-50 focus:z-10 focus:ring-2 focus:ring-red-200"
                                hx-delete="/Manufacturing/BOM?id=@bom.Id"
                                hx-target="#bomTableContainer"
                                hx-confirm="Are you sure you want to delete this BOM? This action cannot be undone."
                                title="Delete">
                            <i class="bi bi-trash"></i>
                        </button>
                    }
                    @if (bom.Status == BomStatus.Active)
                    {
                        <button type="button"
                                class="px-3 py-2 text-xs font-medium text-gray-700 bg-white border border-gray-300 rounded-r-lg hover:bg-gray-100 focus:z-10 focus:ring-2 focus:ring-gray-200"
                                hx-post="/Manufacturing/BOM?handler=UpdateStatus&id=@bom.Id&status=Obsolete"
                                hx-target="#bomTableContainer"
                                hx-confirm="Mark this BOM as obsolete?"
                                title="Mark Obsolete">
                            <i class="bi bi-archive"></i>
                        </button>
                    }
                </div>
            </td>
        </tr>
    }
}

<!-- Pagination -->
@if (Model.TotalPages > 1)
{
    <tr>
        <td colspan="9" class="border-0">
            <div class="flex justify-between items-center px-4 py-3">
                <div class="text-gray-500 text-sm">
                    Showing @((Model.Page - 1) * Model.PageSize + 1) to @Math.Min(Model.Page * Model.PageSize, Model.TotalRecords) of @Model.TotalRecords entries
                </div>
                <nav>
                    <ul class="inline-flex -space-x-px text-sm">
                        <li>
                            <a class="flex items-center justify-center px-3 h-8 ml-0 leading-tight text-gray-500 bg-white border border-gray-300 rounded-l-lg @(Model.Page <= 1 ? "cursor-not-allowed opacity-50" : "hover:bg-gray-100 hover:text-gray-700")" href="#"
                               @(Model.Page > 1 ? $"hx-get=/Manufacturing/BOM?handler=Table&page={Model.Page - 1}" : "")
                               hx-target="#bomTableContainer"
                               hx-include="#searchInput, #statusFilter">
                                Previous
                            </a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li>
                                <a class="flex items-center justify-center px-3 h-8 leading-tight @(i == Model.Page ? "text-primary-600 border border-gray-300 bg-primary-50 hover:bg-primary-100 hover:text-primary-700" : "text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700")" href="#"
                                   hx-get="/Manufacturing/BOM?handler=Table&page=@i"
                                   hx-target="#bomTableContainer"
                                   hx-include="#searchInput, #statusFilter">
                                    @i
                                </a>
                            </li>
                        }
                        <li>
                            <a class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded-r-lg @(Model.Page >= Model.TotalPages ? "cursor-not-allowed opacity-50" : "hover:bg-gray-100 hover:text-gray-700")" href="#"
                               @(Model.Page < Model.TotalPages ? $"hx-get=/Manufacturing/BOM?handler=Table&page={Model.Page + 1}" : "")
                               hx-target="#bomTableContainer"
                               hx-include="#searchInput, #statusFilter">
                                Next
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </td>
    </tr>
}
