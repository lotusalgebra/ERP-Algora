@page
@model Algora.Erp.Web.Pages.Manufacturing.BOM.IndexModel
@{
    ViewData["Title"] = "Bill of Materials";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">Bill of Materials</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/Manufacturing">Manufacturing</a></li>
                    <li class="breadcrumb-item active">BOM</li>
                </ol>
            </nav>
        </div>
        <button type="button" class="btn btn-primary"
                hx-get="/Manufacturing/BOM?handler=CreateForm"
                hx-target="#formModalContent"
                data-bs-toggle="modal"
                data-bs-target="#formModal">
            <i class="bi bi-plus-lg me-1"></i> New BOM
        </button>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-diagram-3 text-primary fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Total BOMs</h6>
                            <h3 class="mb-0">@Model.TotalBoms</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-check-circle text-success fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Active</h6>
                            <h3 class="mb-0">@Model.ActiveBoms</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-warning bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-pencil text-warning fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Draft</h6>
                            <h3 class="mb-0">@Model.DraftBoms</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-info bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-currency-dollar text-info fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Total Material Cost</h6>
                            <h3 class="mb-0">@Model.TotalMaterialCost.ToString("C")</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text"
                               id="searchInput"
                               class="form-control border-start-0"
                               placeholder="Search BOMs..."
                               hx-get="/Manufacturing/BOM?handler=Table"
                               hx-trigger="keyup changed delay:300ms"
                               hx-target="#bomTableContainer"
                               hx-include="#statusFilter"
                               name="search">
                    </div>
                </div>
                <div class="col-md-3">
                    <select id="statusFilter"
                            name="statusFilter"
                            class="form-select"
                            hx-get="/Manufacturing/BOM?handler=Table"
                            hx-trigger="change"
                            hx-target="#bomTableContainer"
                            hx-include="#searchInput">
                        <option value="">All Statuses</option>
                        <option value="Draft">Draft</option>
                        <option value="Active">Active</option>
                        <option value="Obsolete">Obsolete</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- BOM Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">BOM Number</th>
                            <th>Name</th>
                            <th>Product</th>
                            <th>Qty</th>
                            <th>Materials</th>
                            <th>Material Cost</th>
                            <th>Status</th>
                            <th>Effective From</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="bomTableContainer"
                           hx-get="/Manufacturing/BOM?handler=Table"
                           hx-trigger="load"
                           hx-swap="innerHTML">
                        <tr>
                            <td colspan="9" class="text-center py-4">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Form Modal -->
<div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="formModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content" id="formModalContent">
            <div class="modal-body text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="detailsModalContent">
            <div class="modal-body text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Close modal after successful form submission
        document.body.addEventListener('htmx:afterSwap', function(event) {
            if (event.detail.target.id === 'bomTableContainer') {
                var formModal = bootstrap.Modal.getInstance(document.getElementById('formModal'));
                if (formModal) {
                    formModal.hide();
                }
            }
        });
    </script>
}
