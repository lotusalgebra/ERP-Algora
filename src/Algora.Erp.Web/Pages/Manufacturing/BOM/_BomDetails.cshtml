@using Algora.Erp.Domain.Entities.Manufacturing
@model Algora.Erp.Domain.Entities.Manufacturing.BillOfMaterial

@{
    var statusClass = Model.Status switch
    {
        BomStatus.Active => "bg-emerald-100 text-emerald-800",
        BomStatus.Draft => "bg-amber-100 text-amber-800",
        BomStatus.Obsolete => "bg-gray-100 text-gray-800",
        _ => "bg-gray-100 text-gray-800"
    };
}

<div class="flex items-center justify-between p-4 border-b rounded-t">
    <h3 class="text-xl font-semibold text-gray-900">
        <i class="bi bi-diagram-3 mr-2"></i>@Model.BomNumber
    </h3>
    <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 inline-flex justify-center items-center" data-modal-hide="detailsModal" aria-label="Close">
        <i class="bi bi-x-lg"></i>
    </button>
</div>
<div class="p-6">
    <!-- Header Info -->
    <div class="grid grid-cols-12 gap-3 mb-4">
        <div class="md:col-span-8 col-span-12">
            <h4 class="text-lg font-semibold text-gray-900 mb-1">@Model.Name</h4>
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <p class="text-gray-500 mb-0">@Model.Description</p>
            }
        </div>
        <div class="md:col-span-4 col-span-12 md:text-right">
            <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @statusClass">@Model.Status</span>
        </div>
    </div>

    <!-- BOM Details -->
    <div class="grid grid-cols-12 gap-3 mb-4">
        <div class="md:col-span-6 col-span-12">
            <div class="bg-white rounded-lg shadow-md border border-gray-200 h-full">
                <div class="p-4">
                    <h6 class="text-gray-500 text-sm font-medium mb-3">Product Information</h6>
                    <dl class="space-y-2">
                        <div class="flex">
                            <dt class="w-1/3 text-gray-500 text-sm">Product</dt>
                            <dd class="w-2/3 text-gray-900 text-sm">@Model.Product?.Name</dd>
                        </div>
                        <div class="flex">
                            <dt class="w-1/3 text-gray-500 text-sm">SKU</dt>
                            <dd class="w-2/3 text-gray-900 text-sm">@Model.Product?.Sku</dd>
                        </div>
                        <div class="flex">
                            <dt class="w-1/3 text-gray-500 text-sm">Quantity</dt>
                            <dd class="w-2/3 text-gray-900 text-sm">@Model.Quantity @Model.UnitOfMeasure</dd>
                        </div>
                    </dl>
                </div>
            </div>
        </div>
        <div class="md:col-span-6 col-span-12">
            <div class="bg-white rounded-lg shadow-md border border-gray-200 h-full">
                <div class="p-4">
                    <h6 class="text-gray-500 text-sm font-medium mb-3">Cost & Dates</h6>
                    <dl class="space-y-2">
                        <div class="flex">
                            <dt class="w-1/2 text-gray-500 text-sm">Material Cost</dt>
                            <dd class="w-1/2 text-primary-600 text-sm font-bold">@Model.TotalMaterialCost.ToString("C")</dd>
                        </div>
                        <div class="flex">
                            <dt class="w-1/2 text-gray-500 text-sm">Effective From</dt>
                            <dd class="w-1/2 text-gray-900 text-sm">@(Model.EffectiveFrom?.ToString("MMM dd, yyyy") ?? "-")</dd>
                        </div>
                        <div class="flex">
                            <dt class="w-1/2 text-gray-500 text-sm">Effective To</dt>
                            <dd class="w-1/2 text-gray-900 text-sm">@(Model.EffectiveTo?.ToString("MMM dd, yyyy") ?? "-")</dd>
                        </div>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Materials Table -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200">
        <div class="px-4 py-3 border-b border-gray-200 bg-gray-50">
            <h6 class="text-sm font-medium text-gray-900">
                <i class="bi bi-box-seam mr-2"></i>Materials / Components
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-primary-100 text-primary-800 ml-2">@Model.Lines.Count items</span>
            </h6>
        </div>
        <div class="p-0">
            @if (Model.Lines.Any())
            {
                <div class="overflow-x-auto">
                    <table class="w-full text-sm text-left text-gray-500">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                            <tr>
                                <th scope="col" class="px-4 py-3">#</th>
                                <th scope="col" class="px-4 py-3">Product</th>
                                <th scope="col" class="px-4 py-3">SKU</th>
                                <th scope="col" class="px-4 py-3 text-right">Qty Required</th>
                                <th scope="col" class="px-4 py-3 text-right">Wastage</th>
                                <th scope="col" class="px-4 py-3 text-right">Unit Cost</th>
                                <th scope="col" class="px-4 py-3 text-right">Total Cost</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var line in Model.Lines.OrderBy(l => l.LineNumber))
                            {
                                <tr class="bg-white border-b hover:bg-gray-50">
                                    <td class="px-4 py-3">@line.LineNumber</td>
                                    <td class="px-4 py-3">
                                        @line.Product?.Name
                                        @if (line.IsOptional)
                                        {
                                            <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-blue-100 text-blue-800 ml-1">Optional</span>
                                        }
                                    </td>
                                    <td class="px-4 py-3 text-gray-500">@line.Product?.Sku</td>
                                    <td class="px-4 py-3 text-right">@line.Quantity @line.UnitOfMeasure</td>
                                    <td class="px-4 py-3 text-right">@line.WastagePercent%</td>
                                    <td class="px-4 py-3 text-right">@line.UnitCost.ToString("C")</td>
                                    <td class="px-4 py-3 text-right font-semibold">@line.TotalCost.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="bg-gray-50">
                            <tr>
                                <td colspan="6" class="px-4 py-3 text-right font-bold text-gray-900">Total Material Cost:</td>
                                <td class="px-4 py-3 text-right font-bold text-primary-600">@Model.TotalMaterialCost.ToString("C")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-6 text-gray-500">
                    <i class="bi bi-inbox text-3xl block mb-2"></i>
                    No materials defined
                </div>
            }
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.Notes))
    {
        <div class="bg-white rounded-lg shadow-md border border-gray-200 mt-4">
            <div class="px-4 py-3 border-b border-gray-200 bg-gray-50">
                <h6 class="text-sm font-medium text-gray-900"><i class="bi bi-journal-text mr-2"></i>Notes</h6>
            </div>
            <div class="p-4">
                <p class="text-gray-700 text-sm">@Model.Notes</p>
            </div>
        </div>
    }

    <!-- Timestamps -->
    <div class="mt-4">
        <small class="text-gray-500">
            Created: @Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")
            @if (Model.ModifiedAt.HasValue)
            {
                <span class="ml-3">Modified: @Model.ModifiedAt.Value.ToString("MMM dd, yyyy HH:mm")</span>
            }
        </small>
    </div>
</div>
<div class="flex items-center p-4 border-t border-gray-200 rounded-b gap-2">
    <button type="button" class="text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5" data-modal-hide="detailsModal">Close</button>
    <button type="button"
            class="text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5"
            hx-get="/Manufacturing/BOM?handler=EditForm&id=@Model.Id"
            hx-target="#formModalContent"
            data-modal-hide="detailsModal"
            onclick="setTimeout(() => { const modal = FlowbiteInstances.getInstance('Modal', 'formModal'); if(modal) modal.show(); }, 300)">
        <i class="bi bi-pencil mr-1"></i> Edit
    </button>
</div>
