@using Algora.Erp.Domain.Entities.Manufacturing
@model Algora.Erp.Domain.Entities.Manufacturing.BillOfMaterial

@{
    var statusClass = Model.Status switch
    {
        BomStatus.Active => "bg-success",
        BomStatus.Draft => "bg-warning",
        BomStatus.Obsolete => "bg-secondary",
        _ => "bg-secondary"
    };
}

<div class="modal-header">
    <h5 class="modal-title">
        <i class="bi bi-diagram-3 me-2"></i>@Model.BomNumber
    </h5>
    <button type="button" class="btn-close" data-modal-hide="detailsModal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <!-- Header Info -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h4 class="mb-1">@Model.Name</h4>
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <p class="text-muted mb-0">@Model.Description</p>
            }
        </div>
        <div class="col-md-4 text-end">
            <span class="badge @statusClass fs-6">@Model.Status</span>
        </div>
    </div>

    <!-- BOM Details -->
    <div class="row g-3 mb-4">
        <div class="col-md-6">
            <div class="card border h-100">
                <div class="card-body">
                    <h6 class="text-muted mb-3">Product Information</h6>
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Product</dt>
                        <dd class="col-sm-8">@Model.Product?.Name</dd>
                        <dt class="col-sm-4">SKU</dt>
                        <dd class="col-sm-8">@Model.Product?.Sku</dd>
                        <dt class="col-sm-4">Quantity</dt>
                        <dd class="col-sm-8">@Model.Quantity @Model.UnitOfMeasure</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border h-100">
                <div class="card-body">
                    <h6 class="text-muted mb-3">Cost & Dates</h6>
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Material Cost</dt>
                        <dd class="col-sm-7 fw-bold text-primary">@Model.TotalMaterialCost.ToString("C")</dd>
                        <dt class="col-sm-5">Effective From</dt>
                        <dd class="col-sm-7">@(Model.EffectiveFrom?.ToString("MMM dd, yyyy") ?? "-")</dd>
                        <dt class="col-sm-5">Effective To</dt>
                        <dd class="col-sm-7">@(Model.EffectiveTo?.ToString("MMM dd, yyyy") ?? "-")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Materials Table -->
    <div class="card border">
        <div class="card-header bg-light">
            <h6 class="mb-0">
                <i class="bi bi-box-seam me-2"></i>Materials / Components
                <span class="badge bg-primary ms-2">@Model.Lines.Count items</span>
            </h6>
        </div>
        <div class="card-body p-0">
            @if (Model.Lines.Any())
            {
                <div class="table-responsive">
                    <table class="table table-sm table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-3">#</th>
                                <th>Product</th>
                                <th>SKU</th>
                                <th class="text-end">Qty Required</th>
                                <th class="text-end">Wastage</th>
                                <th class="text-end">Unit Cost</th>
                                <th class="text-end pe-3">Total Cost</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var line in Model.Lines.OrderBy(l => l.LineNumber))
                            {
                                <tr>
                                    <td class="ps-3">@line.LineNumber</td>
                                    <td>
                                        @line.Product?.Name
                                        @if (line.IsOptional)
                                        {
                                            <span class="badge bg-info ms-1">Optional</span>
                                        }
                                    </td>
                                    <td class="text-muted">@line.Product?.Sku</td>
                                    <td class="text-end">@line.Quantity @line.UnitOfMeasure</td>
                                    <td class="text-end">@line.WastagePercent%</td>
                                    <td class="text-end">@line.UnitCost.ToString("C")</td>
                                    <td class="text-end pe-3 fw-semibold">@line.TotalCost.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="6" class="text-end fw-bold">Total Material Cost:</td>
                                <td class="text-end pe-3 fw-bold text-primary">@Model.TotalMaterialCost.ToString("C")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-4 text-muted">
                    <i class="bi bi-inbox fs-3 d-block mb-2"></i>
                    No materials defined
                </div>
            }
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.Notes))
    {
        <div class="card border mt-3">
            <div class="card-header bg-light">
                <h6 class="mb-0"><i class="bi bi-journal-text me-2"></i>Notes</h6>
            </div>
            <div class="card-body">
                <p class="mb-0">@Model.Notes</p>
            </div>
        </div>
    }

    <!-- Timestamps -->
    <div class="row mt-4">
        <div class="col-12">
            <small class="text-muted">
                Created: @Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                @if (Model.ModifiedAt.HasValue)
                {
                    <span class="ms-3">Modified: @Model.ModifiedAt.Value.ToString("MMM dd, yyyy HH:mm")</span>
                }
            </small>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-modal-hide="detailsModal">Close</button>
    <button type="button"
            class="px-4 py-2 text-sm font-medium text-white bg-primary-600 rounded-lg hover:bg-primary-700"
            hx-get="/Manufacturing/BOM?handler=EditForm&id=@Model.Id"
            hx-target="#formModalContent"
            data-modal-hide="detailsModal"
            onclick="setTimeout(() => { const modal = FlowbiteInstances.getInstance('Modal', 'formModal'); if(modal) modal.show(); }, 300)">
        <i class="bi bi-pencil me-1"></i> Edit
    </button>
</div>
