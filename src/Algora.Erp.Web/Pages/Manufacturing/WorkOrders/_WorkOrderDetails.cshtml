@using Algora.Erp.Domain.Entities.Manufacturing
@model Algora.Erp.Domain.Entities.Manufacturing.WorkOrder

@{
    var statusClass = Model.Status switch
    {
        WorkOrderStatus.Draft => "bg-gray-100 text-gray-800",
        WorkOrderStatus.Released => "bg-blue-100 text-blue-800",
        WorkOrderStatus.InProgress => "bg-primary-100 text-primary-800",
        WorkOrderStatus.OnHold => "bg-amber-100 text-amber-800",
        WorkOrderStatus.Completed => "bg-emerald-100 text-emerald-800",
        WorkOrderStatus.Cancelled => "bg-red-100 text-red-800",
        _ => "bg-gray-100 text-gray-800"
    };

    var priorityClass = Model.Priority switch
    {
        WorkOrderPriority.Low => "bg-gray-100 text-gray-800",
        WorkOrderPriority.Normal => "bg-blue-100 text-blue-800",
        WorkOrderPriority.High => "bg-amber-100 text-amber-800",
        WorkOrderPriority.Urgent => "bg-red-100 text-red-800",
        _ => "bg-blue-100 text-blue-800"
    };

    var progressPercent = Model.PlannedQuantity > 0
        ? Math.Min(100, (int)((Model.CompletedQuantity / Model.PlannedQuantity) * 100))
        : 0;

    var totalMaterialCost = Model.Materials.Sum(m => m.TotalCost);
}

<div class="flex items-center justify-between p-4 border-b rounded-t">
    <h3 class="text-xl font-semibold text-gray-900">
        <i class="bi bi-clipboard-check mr-2"></i>@Model.WorkOrderNumber
    </h3>
    <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 inline-flex justify-center items-center" onclick="closeModal('detailsModal')" aria-label="Close">
        <i class="bi bi-x-lg"></i>
    </button>
</div>
<div class="p-6">
    <!-- Header Info -->
    <div class="grid grid-cols-12 gap-3 mb-4">
        <div class="md:col-span-8 col-span-12">
            <h4 class="text-lg font-semibold text-gray-900 mb-1">@Model.Name</h4>
            <p class="text-gray-500">
                Product: <strong class="text-gray-900">@Model.Product?.Name</strong>
                @if (Model.BillOfMaterial != null)
                {
                    <span class="ml-2">| BOM: <strong class="text-gray-900">@Model.BillOfMaterial.BomNumber</strong></span>
                }
            </p>
        </div>
        <div class="md:col-span-4 col-span-12 md:text-right">
            <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @statusClass mr-2">@Model.Status</span>
            <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @priorityClass">@Model.Priority Priority</span>
        </div>
    </div>

    <!-- Progress -->
    <div class="bg-white rounded-lg shadow-md border border-gray-200 mb-4">
        <div class="p-4">
            <h6 class="text-gray-500 text-sm font-medium mb-3">Production Progress</h6>
            <div class="flex items-center">
                <div class="flex-grow mr-4">
                    <div class="w-full bg-gray-200 rounded-full h-6">
                        <div class="@(progressPercent >= 100 ? "bg-emerald-600" : "bg-primary-600") h-6 rounded-full flex items-center justify-center text-xs font-medium text-white" style="width: @progressPercent%">
                            @progressPercent%
                        </div>
                    </div>
                </div>
                <div class="text-right">
                    <span class="text-lg">
                        <strong>@Model.CompletedQuantity</strong> / @Model.PlannedQuantity @Model.UnitOfMeasure
                    </span>
                    @if (Model.ScrapQuantity > 0)
                    {
                        <br><small class="text-red-600">Scrap: @Model.ScrapQuantity</small>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Details -->
    <div class="grid grid-cols-12 gap-3 mb-4">
        <div class="md:col-span-6 col-span-12">
            <div class="bg-white rounded-lg shadow-md border border-gray-200 h-full">
                <div class="p-4">
                    <h6 class="text-gray-500 text-sm font-medium mb-3">Schedule</h6>
                    <dl class="space-y-2">
                        <div class="flex">
                            <dt class="w-1/2 text-gray-500 text-sm">Planned Start</dt>
                            <dd class="w-1/2 text-gray-900 text-sm">@Model.PlannedStartDate.ToString("MMM dd, yyyy")</dd>
                        </div>
                        <div class="flex">
                            <dt class="w-1/2 text-gray-500 text-sm">Planned End</dt>
                            <dd class="w-1/2 text-gray-900 text-sm">@Model.PlannedEndDate.ToString("MMM dd, yyyy")</dd>
                        </div>
                        <div class="flex">
                            <dt class="w-1/2 text-gray-500 text-sm">Actual Start</dt>
                            <dd class="w-1/2 text-gray-900 text-sm">@(Model.ActualStartDate?.ToString("MMM dd, yyyy HH:mm") ?? "-")</dd>
                        </div>
                        <div class="flex">
                            <dt class="w-1/2 text-gray-500 text-sm">Actual End</dt>
                            <dd class="w-1/2 text-gray-900 text-sm">@(Model.ActualEndDate?.ToString("MMM dd, yyyy HH:mm") ?? "-")</dd>
                        </div>
                    </dl>
                </div>
            </div>
        </div>
        <div class="md:col-span-6 col-span-12">
            <div class="bg-white rounded-lg shadow-md border border-gray-200 h-full">
                <div class="p-4">
                    <h6 class="text-gray-500 text-sm font-medium mb-3">Cost & Location</h6>
                    <dl class="space-y-2">
                        <div class="flex">
                            <dt class="w-1/2 text-gray-500 text-sm">Estimated Cost</dt>
                            <dd class="w-1/2 text-gray-900 text-sm">@Model.EstimatedCost.ToString("C")</dd>
                        </div>
                        <div class="flex">
                            <dt class="w-1/2 text-gray-500 text-sm">Actual Cost</dt>
                            <dd class="w-1/2 text-gray-900 text-sm">@Model.ActualCost.ToString("C")</dd>
                        </div>
                        <div class="flex">
                            <dt class="w-1/2 text-gray-500 text-sm">Material Cost</dt>
                            <dd class="w-1/2 text-gray-900 text-sm">@totalMaterialCost.ToString("C")</dd>
                        </div>
                        <div class="flex">
                            <dt class="w-1/2 text-gray-500 text-sm">Warehouse</dt>
                            <dd class="w-1/2 text-gray-900 text-sm">@(Model.Warehouse?.Name ?? "-")</dd>
                        </div>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Operations -->
    @if (Model.Operations.Any())
    {
        <div class="bg-white rounded-lg shadow-md border border-gray-200 mb-4">
            <div class="px-4 py-3 border-b border-gray-200 bg-gray-50">
                <h6 class="text-sm font-medium text-gray-900">
                    <i class="bi bi-gear mr-2"></i>Operations
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-primary-100 text-primary-800 ml-2">@Model.Operations.Count steps</span>
                </h6>
            </div>
            <div class="p-0">
                <div class="overflow-x-auto">
                    <table class="w-full text-sm text-left text-gray-500">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                            <tr>
                                <th scope="col" class="px-4 py-3">#</th>
                                <th scope="col" class="px-4 py-3">Operation</th>
                                <th scope="col" class="px-4 py-3">Workstation</th>
                                <th scope="col" class="px-4 py-3 text-right">Planned Hrs</th>
                                <th scope="col" class="px-4 py-3 text-right">Actual Hrs</th>
                                <th scope="col" class="px-4 py-3">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var op in Model.Operations.OrderBy(o => o.OperationNumber))
                            {
                                var opStatusClass = op.Status switch
                                {
                                    OperationStatus.Pending => "bg-gray-100 text-gray-800",
                                    OperationStatus.InProgress => "bg-primary-100 text-primary-800",
                                    OperationStatus.Completed => "bg-emerald-100 text-emerald-800",
                                    OperationStatus.Skipped => "bg-amber-100 text-amber-800",
                                    _ => "bg-gray-100 text-gray-800"
                                };

                                <tr class="bg-white border-b hover:bg-gray-50">
                                    <td class="px-4 py-3">@op.OperationNumber</td>
                                    <td class="px-4 py-3">
                                        <span class="text-gray-900">@op.Name</span>
                                        @if (!string.IsNullOrEmpty(op.Description))
                                        {
                                            <br><small class="text-gray-500">@op.Description</small>
                                        }
                                    </td>
                                    <td class="px-4 py-3">@(op.Workstation ?? "-")</td>
                                    <td class="px-4 py-3 text-right">@op.PlannedHours hrs</td>
                                    <td class="px-4 py-3 text-right">@op.ActualHours hrs</td>
                                    <td class="px-4 py-3"><span class="text-xs font-medium px-2.5 py-0.5 rounded-full @opStatusClass">@op.Status</span></td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="bg-gray-50">
                            <tr>
                                <td colspan="3" class="px-4 py-3 text-right font-bold text-gray-900">Total:</td>
                                <td class="px-4 py-3 text-right font-bold text-gray-900">@Model.Operations.Sum(o => o.PlannedHours) hrs</td>
                                <td class="px-4 py-3 text-right font-bold text-gray-900">@Model.Operations.Sum(o => o.ActualHours) hrs</td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    }

    <!-- Materials -->
    @if (Model.Materials.Any())
    {
        <div class="bg-white rounded-lg shadow-md border border-gray-200">
            <div class="px-4 py-3 border-b border-gray-200 bg-gray-50">
                <h6 class="text-sm font-medium text-gray-900">
                    <i class="bi bi-box-seam mr-2"></i>Materials
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-primary-100 text-primary-800 ml-2">@Model.Materials.Count items</span>
                </h6>
            </div>
            <div class="p-0">
                <div class="overflow-x-auto">
                    <table class="w-full text-sm text-left text-gray-500">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                            <tr>
                                <th scope="col" class="px-4 py-3">#</th>
                                <th scope="col" class="px-4 py-3">Product</th>
                                <th scope="col" class="px-4 py-3 text-right">Required</th>
                                <th scope="col" class="px-4 py-3 text-right">Issued</th>
                                <th scope="col" class="px-4 py-3 text-right">Consumed</th>
                                <th scope="col" class="px-4 py-3 text-right">Cost</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var mat in Model.Materials.OrderBy(m => m.LineNumber))
                            {
                                <tr class="bg-white border-b hover:bg-gray-50">
                                    <td class="px-4 py-3">@mat.LineNumber</td>
                                    <td class="px-4 py-3">
                                        <span class="text-gray-900">@mat.Product?.Name</span>
                                        <br><small class="text-gray-500">@mat.Product?.Sku</small>
                                    </td>
                                    <td class="px-4 py-3 text-right">@mat.RequiredQuantity @mat.UnitOfMeasure</td>
                                    <td class="px-4 py-3 text-right">@mat.IssuedQuantity</td>
                                    <td class="px-4 py-3 text-right">@mat.ConsumedQuantity</td>
                                    <td class="px-4 py-3 text-right">@mat.TotalCost.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="bg-gray-50">
                            <tr>
                                <td colspan="5" class="px-4 py-3 text-right font-bold text-gray-900">Total Material Cost:</td>
                                <td class="px-4 py-3 text-right font-bold text-primary-600">@totalMaterialCost.ToString("C")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.Notes))
    {
        <div class="bg-white rounded-lg shadow-md border border-gray-200 mt-4">
            <div class="px-4 py-3 border-b border-gray-200 bg-gray-50">
                <h6 class="text-sm font-medium text-gray-900"><i class="bi bi-journal-text mr-2"></i>Notes</h6>
            </div>
            <div class="p-4">
                <p class="text-gray-700 text-sm">@Model.Notes</p>
            </div>
        </div>
    }

    <!-- Timestamps -->
    <div class="mt-4">
        <small class="text-gray-500">
            Created: @Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")
            @if (Model.ModifiedAt.HasValue)
            {
                <span class="ml-3">Modified: @Model.ModifiedAt.Value.ToString("MMM dd, yyyy HH:mm")</span>
            }
        </small>
    </div>
</div>
<div class="flex items-center p-4 border-t border-gray-200 rounded-b gap-2">
    <button type="button" class="text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5" onclick="closeModal('detailsModal')">Close</button>
    @if (Model.Status == WorkOrderStatus.Draft || Model.Status == WorkOrderStatus.Released)
    {
        <button type="button"
                class="text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5"
                hx-get="/Manufacturing/WorkOrders?handler=EditForm&id=@Model.Id"
                hx-target="#formModalContent"
                onclick="closeModal('detailsModal')"
                onclick="setTimeout(() => window.AlgoraModal.show('formModal'), 300)">
            <i class="bi bi-pencil mr-1"></i> Edit
        </button>
    }
</div>
