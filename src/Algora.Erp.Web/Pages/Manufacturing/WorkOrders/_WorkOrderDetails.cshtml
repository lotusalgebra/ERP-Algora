@using Algora.Erp.Domain.Entities.Manufacturing
@model Algora.Erp.Domain.Entities.Manufacturing.WorkOrder

@{
    var statusClass = Model.Status switch
    {
        WorkOrderStatus.Draft => "bg-secondary",
        WorkOrderStatus.Released => "bg-info",
        WorkOrderStatus.InProgress => "bg-primary",
        WorkOrderStatus.OnHold => "bg-warning",
        WorkOrderStatus.Completed => "bg-success",
        WorkOrderStatus.Cancelled => "bg-danger",
        _ => "bg-secondary"
    };

    var priorityClass = Model.Priority switch
    {
        WorkOrderPriority.Low => "bg-light text-dark",
        WorkOrderPriority.Normal => "bg-info",
        WorkOrderPriority.High => "bg-warning",
        WorkOrderPriority.Urgent => "bg-danger",
        _ => "bg-info"
    };

    var progressPercent = Model.PlannedQuantity > 0
        ? Math.Min(100, (int)((Model.CompletedQuantity / Model.PlannedQuantity) * 100))
        : 0;

    var totalMaterialCost = Model.Materials.Sum(m => m.TotalCost);
}

<div class="modal-header">
    <h5 class="modal-title">
        <i class="bi bi-clipboard-check me-2"></i>@Model.WorkOrderNumber
    </h5>
    <button type="button" class="btn-close" data-modal-hide="detailsModal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <!-- Header Info -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h4 class="mb-1">@Model.Name</h4>
            <p class="text-muted mb-0">
                Product: <strong>@Model.Product?.Name</strong>
                @if (Model.BillOfMaterial != null)
                {
                    <span class="ms-2">| BOM: <strong>@Model.BillOfMaterial.BomNumber</strong></span>
                }
            </p>
        </div>
        <div class="col-md-4 text-end">
            <span class="badge @statusClass fs-6 me-2">@Model.Status</span>
            <span class="badge @priorityClass">@Model.Priority Priority</span>
        </div>
    </div>

    <!-- Progress -->
    <div class="card border mb-4">
        <div class="card-body">
            <h6 class="text-muted mb-3">Production Progress</h6>
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="progress" style="height: 24px;">
                        <div class="progress-bar @(progressPercent >= 100 ? "bg-success" : "bg-primary")"
                             style="width: @progressPercent%">
                            @progressPercent%
                        </div>
                    </div>
                </div>
                <div class="col-md-4 text-end">
                    <span class="fs-5">
                        <strong>@Model.CompletedQuantity</strong> / @Model.PlannedQuantity @Model.UnitOfMeasure
                    </span>
                    @if (Model.ScrapQuantity > 0)
                    {
                        <br><small class="text-danger">Scrap: @Model.ScrapQuantity</small>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Details -->
    <div class="row g-3 mb-4">
        <div class="col-md-6">
            <div class="card border h-100">
                <div class="card-body">
                    <h6 class="text-muted mb-3">Schedule</h6>
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Planned Start</dt>
                        <dd class="col-sm-7">@Model.PlannedStartDate.ToString("MMM dd, yyyy")</dd>
                        <dt class="col-sm-5">Planned End</dt>
                        <dd class="col-sm-7">@Model.PlannedEndDate.ToString("MMM dd, yyyy")</dd>
                        <dt class="col-sm-5">Actual Start</dt>
                        <dd class="col-sm-7">@(Model.ActualStartDate?.ToString("MMM dd, yyyy HH:mm") ?? "-")</dd>
                        <dt class="col-sm-5">Actual End</dt>
                        <dd class="col-sm-7">@(Model.ActualEndDate?.ToString("MMM dd, yyyy HH:mm") ?? "-")</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border h-100">
                <div class="card-body">
                    <h6 class="text-muted mb-3">Cost & Location</h6>
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Estimated Cost</dt>
                        <dd class="col-sm-7">@Model.EstimatedCost.ToString("C")</dd>
                        <dt class="col-sm-5">Actual Cost</dt>
                        <dd class="col-sm-7">@Model.ActualCost.ToString("C")</dd>
                        <dt class="col-sm-5">Material Cost</dt>
                        <dd class="col-sm-7">@totalMaterialCost.ToString("C")</dd>
                        <dt class="col-sm-5">Warehouse</dt>
                        <dd class="col-sm-7">@(Model.Warehouse?.Name ?? "-")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <!-- Operations -->
    @if (Model.Operations.Any())
    {
        <div class="card border mb-4">
            <div class="card-header bg-light">
                <h6 class="mb-0">
                    <i class="bi bi-gear me-2"></i>Operations
                    <span class="badge bg-primary ms-2">@Model.Operations.Count steps</span>
                </h6>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-sm table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-3">#</th>
                                <th>Operation</th>
                                <th>Workstation</th>
                                <th class="text-end">Planned Hrs</th>
                                <th class="text-end">Actual Hrs</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var op in Model.Operations.OrderBy(o => o.OperationNumber))
                            {
                                var opStatusClass = op.Status switch
                                {
                                    OperationStatus.Pending => "bg-secondary",
                                    OperationStatus.InProgress => "bg-primary",
                                    OperationStatus.Completed => "bg-success",
                                    OperationStatus.Skipped => "bg-warning",
                                    _ => "bg-secondary"
                                };

                                <tr>
                                    <td class="ps-3">@op.OperationNumber</td>
                                    <td>
                                        @op.Name
                                        @if (!string.IsNullOrEmpty(op.Description))
                                        {
                                            <br><small class="text-muted">@op.Description</small>
                                        }
                                    </td>
                                    <td>@(op.Workstation ?? "-")</td>
                                    <td class="text-end">@op.PlannedHours hrs</td>
                                    <td class="text-end">@op.ActualHours hrs</td>
                                    <td><span class="badge @opStatusClass">@op.Status</span></td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="3" class="text-end fw-bold">Total:</td>
                                <td class="text-end fw-bold">@Model.Operations.Sum(o => o.PlannedHours) hrs</td>
                                <td class="text-end fw-bold">@Model.Operations.Sum(o => o.ActualHours) hrs</td>
                                <td></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    }

    <!-- Materials -->
    @if (Model.Materials.Any())
    {
        <div class="card border">
            <div class="card-header bg-light">
                <h6 class="mb-0">
                    <i class="bi bi-box-seam me-2"></i>Materials
                    <span class="badge bg-primary ms-2">@Model.Materials.Count items</span>
                </h6>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-sm table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="ps-3">#</th>
                                <th>Product</th>
                                <th class="text-end">Required</th>
                                <th class="text-end">Issued</th>
                                <th class="text-end">Consumed</th>
                                <th class="text-end pe-3">Cost</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var mat in Model.Materials.OrderBy(m => m.LineNumber))
                            {
                                <tr>
                                    <td class="ps-3">@mat.LineNumber</td>
                                    <td>
                                        @mat.Product?.Name
                                        <br><small class="text-muted">@mat.Product?.Sku</small>
                                    </td>
                                    <td class="text-end">@mat.RequiredQuantity @mat.UnitOfMeasure</td>
                                    <td class="text-end">@mat.IssuedQuantity</td>
                                    <td class="text-end">@mat.ConsumedQuantity</td>
                                    <td class="text-end pe-3">@mat.TotalCost.ToString("C")</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="5" class="text-end fw-bold">Total Material Cost:</td>
                                <td class="text-end pe-3 fw-bold text-primary">@totalMaterialCost.ToString("C")</td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.Notes))
    {
        <div class="card border mt-3">
            <div class="card-header bg-light">
                <h6 class="mb-0"><i class="bi bi-journal-text me-2"></i>Notes</h6>
            </div>
            <div class="card-body">
                <p class="mb-0">@Model.Notes</p>
            </div>
        </div>
    }

    <!-- Timestamps -->
    <div class="row mt-4">
        <div class="col-12">
            <small class="text-muted">
                Created: @Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                @if (Model.ModifiedAt.HasValue)
                {
                    <span class="ms-3">Modified: @Model.ModifiedAt.Value.ToString("MMM dd, yyyy HH:mm")</span>
                }
            </small>
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-modal-hide="detailsModal">Close</button>
    @if (Model.Status == WorkOrderStatus.Draft || Model.Status == WorkOrderStatus.Released)
    {
        <button type="button"
                class="px-4 py-2 text-sm font-medium text-white bg-primary-600 rounded-lg hover:bg-primary-700"
                hx-get="/Manufacturing/WorkOrders?handler=EditForm&id=@Model.Id"
                hx-target="#formModalContent"
                data-modal-hide="detailsModal"
                onclick="setTimeout(() => { const modal = FlowbiteInstances.getInstance('Modal', 'formModal'); if(modal) modal.show(); }, 300)">
            <i class="bi bi-pencil me-1"></i> Edit
        </button>
    }
</div>
