@page
@model Algora.Erp.Web.Pages.Manufacturing.WorkOrders.IndexModel
@{
    ViewData["Title"] = "Work Orders";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Work Orders</h1>
            <nav class="flex mt-1" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 text-sm text-gray-500">
                    <li><a href="/Dashboard" class="hover:text-primary-600">Dashboard</a></li>
                    <li><span class="mx-1">/</span></li>
                    <li><a href="/Manufacturing" class="hover:text-primary-600">Manufacturing</a></li>
                    <li><span class="mx-1">/</span></li>
                    <li class="text-gray-900 font-medium">Work Orders</li>
                </ol>
            </nav>
        </div>
        <button type="button" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition-colors"
                hx-get="/Manufacturing/WorkOrders?handler=CreateForm"
                hx-target="#formModalContent"
                data-modal-target="formModal"
                data-modal-toggle="formModal">
            <i class="bi bi-plus-lg me-2"></i> New Work Order
        </button>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-primary-100 rounded-lg">
                    <i class="bi bi-clipboard-check text-xl text-primary-600"></i>
                </div>
                <div class="ms-4">
                    <p class="text-sm text-gray-500 mb-1">Total Orders</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.TotalWorkOrders</h3>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-blue-100 rounded-lg">
                    <i class="bi bi-gear-wide-connected text-xl text-blue-600"></i>
                </div>
                <div class="ms-4">
                    <p class="text-sm text-gray-500 mb-1">In Progress</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.InProgressOrders</h3>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-emerald-100 rounded-lg">
                    <i class="bi bi-check-circle text-xl text-emerald-600"></i>
                </div>
                <div class="ms-4">
                    <p class="text-sm text-gray-500 mb-1">Completed</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.CompletedOrders</h3>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-red-100 rounded-lg">
                    <i class="bi bi-exclamation-triangle text-xl text-red-600"></i>
                </div>
                <div class="ms-4">
                    <p class="text-sm text-gray-500 mb-1">Overdue</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.OverdueOrders</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-xl shadow-sm p-4">
        <div class="grid grid-cols-1 md:grid-cols-12 gap-3">
            <div class="md:col-span-4">
                <div class="relative">
                    <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                        <i class="bi bi-search text-gray-400"></i>
                    </div>
                    <input type="text"
                           id="searchInput"
                           class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full ps-10 p-2.5"
                           placeholder="Search work orders..."
                           hx-get="/Manufacturing/WorkOrders?handler=Table"
                           hx-trigger="keyup changed delay:300ms"
                           hx-target="#workOrdersTableContainer"
                           hx-include="#statusFilter, #priorityFilter"
                           name="search">
                </div>
            </div>
            <div class="md:col-span-3">
                <select id="statusFilter"
                        name="statusFilter"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                        hx-get="/Manufacturing/WorkOrders?handler=Table"
                        hx-trigger="change"
                        hx-target="#workOrdersTableContainer"
                        hx-include="#searchInput, #priorityFilter">
                    <option value="">All Statuses</option>
                    <option value="Draft">Draft</option>
                    <option value="Released">Released</option>
                    <option value="InProgress">In Progress</option>
                    <option value="OnHold">On Hold</option>
                    <option value="Completed">Completed</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
            </div>
            <div class="md:col-span-3">
                <select id="priorityFilter"
                        name="priorityFilter"
                        class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                        hx-get="/Manufacturing/WorkOrders?handler=Table"
                        hx-trigger="change"
                        hx-target="#workOrdersTableContainer"
                        hx-include="#searchInput, #statusFilter">
                    <option value="">All Priorities</option>
                    <option value="Low">Low</option>
                    <option value="Normal">Normal</option>
                    <option value="High">High</option>
                    <option value="Urgent">Urgent</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Work Orders Table -->
    <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3">WO Number</th>
                        <th scope="col" class="px-6 py-3">Product</th>
                        <th scope="col" class="px-6 py-3">Planned Qty</th>
                        <th scope="col" class="px-6 py-3">Progress</th>
                        <th scope="col" class="px-6 py-3">Priority</th>
                        <th scope="col" class="px-6 py-3">Status</th>
                        <th scope="col" class="px-6 py-3">Planned Start</th>
                        <th scope="col" class="px-6 py-3">Planned End</th>
                        <th scope="col" class="px-6 py-3 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody id="workOrdersTableContainer"
                       hx-get="/Manufacturing/WorkOrders?handler=Table"
                       hx-trigger="load"
                       hx-swap="innerHTML">
                    <tr>
                        <td colspan="9" class="px-6 py-8 text-center">
                            <div class="inline-block animate-spin rounded-full h-6 w-6 border-b-2 border-primary-600"></div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Form Modal -->
<div id="formModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-4xl max-h-full">
        <div class="relative bg-white rounded-lg shadow" id="formModalContent">
            <div class="text-center py-8">
                <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-primary-600"></div>
            </div>
        </div>
    </div>
</div>

<!-- Details Modal -->
<div id="detailsModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-4xl max-h-full">
        <div class="relative bg-white rounded-lg shadow" id="detailsModalContent">
            <div class="text-center py-8">
                <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-primary-600"></div>
            </div>
        </div>
    </div>
</div>

<!-- Record Output Modal -->
<div id="outputModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-sm max-h-full">
        <div class="relative bg-white rounded-lg shadow">
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t">
                <h3 class="text-xl font-semibold text-gray-900">Record Output</h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" data-modal-hide="outputModal">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <form id="outputForm">
                <div class="p-4 md:p-5 space-y-4">
                    <input type="hidden" id="outputWorkOrderId" />
                    <div>
                        <label class="block mb-2 text-sm font-medium text-gray-900">Completed Quantity</label>
                        <input type="number" id="completedQty" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" step="0.0001" min="0" required />
                    </div>
                    <div>
                        <label class="block mb-2 text-sm font-medium text-gray-900">Scrap Quantity</label>
                        <input type="number" id="scrapQty" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" step="0.0001" min="0" value="0" />
                    </div>
                </div>
                <div class="flex items-center p-4 md:p-5 border-t border-gray-200 rounded-b gap-3">
                    <button type="submit" class="text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">Record</button>
                    <button data-modal-hide="outputModal" type="button" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Close modal after successful form submission
        document.body.addEventListener('htmx:afterSwap', function(event) {
            if (event.detail.target.id === 'workOrdersTableContainer') {
                const modal = FlowbiteInstances.getInstance('Modal', 'formModal');
                if (modal) modal.hide();
            }
        });

        // Record output modal
        function showOutputModal(workOrderId) {
            document.getElementById('outputWorkOrderId').value = workOrderId;
            document.getElementById('completedQty').value = '';
            document.getElementById('scrapQty').value = '0';
            const modal = FlowbiteInstances.getInstance('Modal', 'outputModal');
            if (modal) modal.show();
        }

        document.getElementById('outputForm')?.addEventListener('submit', function(e) {
            e.preventDefault();
            var id = document.getElementById('outputWorkOrderId').value;
            var completedQty = document.getElementById('completedQty').value;
            var scrapQty = document.getElementById('scrapQty').value;

            fetch('/Manufacturing/WorkOrders?handler=RecordOutput&id=' + id + '&completedQty=' + completedQty + '&scrapQty=' + scrapQty, {
                method: 'POST'
            })
            .then(response => response.text())
            .then(html => {
                document.getElementById('workOrdersTableContainer').innerHTML = html;
                const modal = FlowbiteInstances.getInstance('Modal', 'outputModal');
                if (modal) modal.hide();
            });
        });
    </script>
}
