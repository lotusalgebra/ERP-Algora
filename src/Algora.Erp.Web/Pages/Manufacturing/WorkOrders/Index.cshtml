@page
@model Algora.Erp.Web.Pages.Manufacturing.WorkOrders.IndexModel
@{
    ViewData["Title"] = "Work Orders";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">Work Orders</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/Manufacturing">Manufacturing</a></li>
                    <li class="breadcrumb-item active">Work Orders</li>
                </ol>
            </nav>
        </div>
        <button type="button" class="btn btn-primary"
                hx-get="/Manufacturing/WorkOrders?handler=CreateForm"
                hx-target="#formModalContent"
                data-bs-toggle="modal"
                data-bs-target="#formModal">
            <i class="bi bi-plus-lg me-1"></i> New Work Order
        </button>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-primary bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-clipboard-check text-primary fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Total Orders</h6>
                            <h3 class="mb-0">@Model.TotalWorkOrders</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-info bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-gear-wide-connected text-info fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">In Progress</h6>
                            <h3 class="mb-0">@Model.InProgressOrders</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-success bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-check-circle text-success fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Completed</h6>
                            <h3 class="mb-0">@Model.CompletedOrders</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="bg-danger bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-exclamation-triangle text-danger fs-4"></i>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="text-muted mb-1">Overdue</h6>
                            <h3 class="mb-0">@Model.OverdueOrders</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters -->
    <div class="card border-0 shadow-sm mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text"
                               id="searchInput"
                               class="form-control border-start-0"
                               placeholder="Search work orders..."
                               hx-get="/Manufacturing/WorkOrders?handler=Table"
                               hx-trigger="keyup changed delay:300ms"
                               hx-target="#workOrdersTableContainer"
                               hx-include="#statusFilter, #priorityFilter"
                               name="search">
                    </div>
                </div>
                <div class="col-md-3">
                    <select id="statusFilter"
                            name="statusFilter"
                            class="form-select"
                            hx-get="/Manufacturing/WorkOrders?handler=Table"
                            hx-trigger="change"
                            hx-target="#workOrdersTableContainer"
                            hx-include="#searchInput, #priorityFilter">
                        <option value="">All Statuses</option>
                        <option value="Draft">Draft</option>
                        <option value="Released">Released</option>
                        <option value="InProgress">In Progress</option>
                        <option value="OnHold">On Hold</option>
                        <option value="Completed">Completed</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select id="priorityFilter"
                            name="priorityFilter"
                            class="form-select"
                            hx-get="/Manufacturing/WorkOrders?handler=Table"
                            hx-trigger="change"
                            hx-target="#workOrdersTableContainer"
                            hx-include="#searchInput, #statusFilter">
                        <option value="">All Priorities</option>
                        <option value="Low">Low</option>
                        <option value="Normal">Normal</option>
                        <option value="High">High</option>
                        <option value="Urgent">Urgent</option>
                    </select>
                </div>
            </div>
        </div>
    </div>

    <!-- Work Orders Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">WO Number</th>
                            <th>Product</th>
                            <th>Planned Qty</th>
                            <th>Progress</th>
                            <th>Priority</th>
                            <th>Status</th>
                            <th>Planned Start</th>
                            <th>Planned End</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="workOrdersTableContainer"
                           hx-get="/Manufacturing/WorkOrders?handler=Table"
                           hx-trigger="load"
                           hx-swap="innerHTML">
                        <tr>
                            <td colspan="9" class="text-center py-4">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Form Modal -->
<div class="modal fade" id="formModal" tabindex="-1" aria-labelledby="formModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content" id="formModalContent">
            <div class="modal-body text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="detailsModalContent">
            <div class="modal-body text-center py-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Record Output Modal -->
<div class="modal fade" id="outputModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Record Output</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="outputForm">
                <div class="modal-body">
                    <input type="hidden" id="outputWorkOrderId" />
                    <div class="mb-3">
                        <label class="form-label">Completed Quantity</label>
                        <input type="number" id="completedQty" class="form-control" step="0.0001" min="0" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Scrap Quantity</label>
                        <input type="number" id="scrapQty" class="form-control" step="0.0001" min="0" value="0" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Record</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Close modal after successful form submission
        document.body.addEventListener('htmx:afterSwap', function(event) {
            if (event.detail.target.id === 'workOrdersTableContainer') {
                var formModal = bootstrap.Modal.getInstance(document.getElementById('formModal'));
                if (formModal) {
                    formModal.hide();
                }
            }
        });

        // Record output modal
        function showOutputModal(workOrderId) {
            document.getElementById('outputWorkOrderId').value = workOrderId;
            document.getElementById('completedQty').value = '';
            document.getElementById('scrapQty').value = '0';
            new bootstrap.Modal(document.getElementById('outputModal')).show();
        }

        document.getElementById('outputForm').addEventListener('submit', function(e) {
            e.preventDefault();
            var id = document.getElementById('outputWorkOrderId').value;
            var completedQty = document.getElementById('completedQty').value;
            var scrapQty = document.getElementById('scrapQty').value;

            fetch('/Manufacturing/WorkOrders?handler=RecordOutput&id=' + id + '&completedQty=' + completedQty + '&scrapQty=' + scrapQty, {
                method: 'POST'
            })
            .then(response => response.text())
            .then(html => {
                document.getElementById('workOrdersTableContainer').innerHTML = html;
                bootstrap.Modal.getInstance(document.getElementById('outputModal')).hide();
            });
        });
    </script>
}
