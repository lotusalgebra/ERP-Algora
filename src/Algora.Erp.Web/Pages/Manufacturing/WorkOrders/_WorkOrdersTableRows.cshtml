@using Algora.Erp.Domain.Entities.Manufacturing
@model Algora.Erp.Web.Pages.Manufacturing.WorkOrders.WorkOrderTableViewModel

@if (!Model.WorkOrders.Any())
{
    <tr>
        <td colspan="9" class="text-center py-8">
            <div class="text-gray-500">
                <i class="bi bi-clipboard-check text-4xl block mb-3"></i>
                <p class="mb-0">No work orders found</p>
            </div>
        </td>
    </tr>
}
else
{
    @foreach (var wo in Model.WorkOrders)
    {
        var statusClass = wo.Status switch
        {
            WorkOrderStatus.Draft => "bg-gray-100 text-gray-800",
            WorkOrderStatus.Released => "bg-blue-100 text-blue-800",
            WorkOrderStatus.InProgress => "bg-primary-100 text-primary-800",
            WorkOrderStatus.OnHold => "bg-amber-100 text-amber-800",
            WorkOrderStatus.Completed => "bg-emerald-100 text-emerald-800",
            WorkOrderStatus.Cancelled => "bg-red-100 text-red-800",
            _ => "bg-gray-100 text-gray-800"
        };

        var priorityClass = wo.Priority switch
        {
            WorkOrderPriority.Low => "text-gray-500",
            WorkOrderPriority.Normal => "text-gray-900",
            WorkOrderPriority.High => "text-amber-600",
            WorkOrderPriority.Urgent => "text-red-600",
            _ => "text-gray-900"
        };

        var progressPercent = wo.PlannedQuantity > 0
            ? Math.Min(100, (int)((wo.CompletedQuantity / wo.PlannedQuantity) * 100))
            : 0;

        var isOverdue = wo.Status != WorkOrderStatus.Completed &&
                       wo.Status != WorkOrderStatus.Cancelled &&
                       wo.PlannedEndDate < DateTime.UtcNow;

        <tr class="bg-white border-b hover:bg-gray-50 @(isOverdue ? "bg-red-50" : "")">
            <td class="px-6 py-4">
                <a href="#"
                   class="text-primary-600 hover:underline font-semibold"
                   hx-get="/Manufacturing/WorkOrders?handler=Details&id=@wo.Id"
                   hx-target="#detailsModalContent"
                   data-modal-target="detailsModal" data-modal-toggle="detailsModal">
                    @wo.WorkOrderNumber
                </a>
                @if (isOverdue)
                {
                    <i class="bi bi-exclamation-triangle text-red-600 ml-1" title="Overdue"></i>
                }
            </td>
            <td class="px-6 py-4">
                <div class="text-gray-900">@wo.Product?.Name</div>
                @if (wo.BillOfMaterial != null)
                {
                    <small class="text-gray-500">BOM: @wo.BillOfMaterial.BomNumber</small>
                }
            </td>
            <td class="px-6 py-4 text-gray-900">@wo.PlannedQuantity @wo.UnitOfMeasure</td>
            <td class="px-6 py-4">
                <div class="flex items-center">
                    <div class="w-20 bg-gray-200 rounded-full h-2 mr-2">
                        <div class="@(progressPercent >= 100 ? "bg-emerald-600" : "bg-primary-600") h-2 rounded-full" style="width: @progressPercent%"></div>
                    </div>
                    <span class="text-sm text-gray-900">@wo.CompletedQuantity / @wo.PlannedQuantity</span>
                </div>
            </td>
            <td class="px-6 py-4">
                <span class="@priorityClass">
                    @if (wo.Priority == WorkOrderPriority.Urgent)
                    {
                        <i class="bi bi-exclamation-circle-fill mr-1"></i>
                    }
                    @wo.Priority
                </span>
            </td>
            <td class="px-6 py-4">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @statusClass">@wo.Status</span>
            </td>
            <td class="px-6 py-4 text-gray-900">@wo.PlannedStartDate.ToString("MMM dd, yyyy")</td>
            <td class="px-6 py-4 text-gray-900">@wo.PlannedEndDate.ToString("MMM dd, yyyy")</td>
            <td class="px-6 py-4 text-right">
                <div class="inline-flex rounded-md shadow-sm" role="group">
                    <button type="button"
                            class="px-3 py-2 text-xs font-medium text-gray-900 bg-white border border-gray-300 rounded-l-lg hover:bg-gray-100 focus:z-10 focus:ring-2 focus:ring-gray-200"
                            hx-get="/Manufacturing/WorkOrders?handler=Details&id=@wo.Id"
                            hx-target="#detailsModalContent"
                            data-modal-target="detailsModal" data-modal-toggle="detailsModal"
                            title="View Details">
                        <i class="bi bi-eye"></i>
                    </button>
                    @if (wo.Status == WorkOrderStatus.Draft || wo.Status == WorkOrderStatus.Released)
                    {
                        <button type="button"
                                class="px-3 py-2 text-xs font-medium text-gray-900 bg-white border-t border-b border-gray-300 hover:bg-gray-100 focus:z-10 focus:ring-2 focus:ring-gray-200"
                                hx-get="/Manufacturing/WorkOrders?handler=EditForm&id=@wo.Id"
                                hx-target="#formModalContent"
                                data-modal-target="formModal" data-modal-toggle="formModal"
                                title="Edit">
                            <i class="bi bi-pencil"></i>
                        </button>
                    }
                    @if (wo.Status == WorkOrderStatus.Draft)
                    {
                        <button type="button"
                                class="px-3 py-2 text-xs font-medium text-blue-700 bg-white border-t border-b border-gray-300 hover:bg-blue-50 focus:z-10 focus:ring-2 focus:ring-blue-200"
                                hx-post="/Manufacturing/WorkOrders?handler=UpdateStatus&id=@wo.Id&status=Released"
                                hx-target="#workOrdersTableContainer"
                                hx-confirm="Release this work order?"
                                title="Release">
                            <i class="bi bi-send"></i>
                        </button>
                        <button type="button"
                                class="px-3 py-2 text-xs font-medium text-red-700 bg-white border border-gray-300 rounded-r-lg hover:bg-red-50 focus:z-10 focus:ring-2 focus:ring-red-200"
                                hx-delete="/Manufacturing/WorkOrders?id=@wo.Id"
                                hx-target="#workOrdersTableContainer"
                                hx-confirm="Delete this work order?"
                                title="Delete">
                            <i class="bi bi-trash"></i>
                        </button>
                    }
                    @if (wo.Status == WorkOrderStatus.Released)
                    {
                        <button type="button"
                                class="px-3 py-2 text-xs font-medium text-emerald-700 bg-white border border-gray-300 rounded-r-lg hover:bg-emerald-50 focus:z-10 focus:ring-2 focus:ring-emerald-200"
                                hx-post="/Manufacturing/WorkOrders?handler=UpdateStatus&id=@wo.Id&status=InProgress"
                                hx-target="#workOrdersTableContainer"
                                hx-confirm="Start this work order?"
                                title="Start">
                            <i class="bi bi-play-fill"></i>
                        </button>
                    }
                    @if (wo.Status == WorkOrderStatus.InProgress)
                    {
                        <button type="button"
                                class="px-3 py-2 text-xs font-medium text-primary-700 bg-white border-t border-b border-gray-300 hover:bg-primary-50 focus:z-10 focus:ring-2 focus:ring-primary-200"
                                hx-get="/Manufacturing/WorkOrders?handler=OutputForm&id=@wo.Id"
                                hx-target="#outputModalContent"
                                data-modal-target="outputModal" data-modal-toggle="outputModal"
                                title="Record Output">
                            <i class="bi bi-plus-circle"></i>
                        </button>
                        <button type="button"
                                class="px-3 py-2 text-xs font-medium text-amber-700 bg-white border-t border-b border-gray-300 hover:bg-amber-50 focus:z-10 focus:ring-2 focus:ring-amber-200"
                                hx-post="/Manufacturing/WorkOrders?handler=UpdateStatus&id=@wo.Id&status=OnHold"
                                hx-target="#workOrdersTableContainer"
                                hx-confirm="Put this work order on hold?"
                                title="Hold">
                            <i class="bi bi-pause-fill"></i>
                        </button>
                        <button type="button"
                                class="px-3 py-2 text-xs font-medium text-emerald-700 bg-white border border-gray-300 rounded-r-lg hover:bg-emerald-50 focus:z-10 focus:ring-2 focus:ring-emerald-200"
                                hx-post="/Manufacturing/WorkOrders?handler=UpdateStatus&id=@wo.Id&status=Completed"
                                hx-target="#workOrdersTableContainer"
                                hx-confirm="Complete this work order?"
                                title="Complete">
                            <i class="bi bi-check-lg"></i>
                        </button>
                    }
                    @if (wo.Status == WorkOrderStatus.OnHold)
                    {
                        <button type="button"
                                class="px-3 py-2 text-xs font-medium text-emerald-700 bg-white border border-gray-300 rounded-r-lg hover:bg-emerald-50 focus:z-10 focus:ring-2 focus:ring-emerald-200"
                                hx-post="/Manufacturing/WorkOrders?handler=UpdateStatus&id=@wo.Id&status=InProgress"
                                hx-target="#workOrdersTableContainer"
                                hx-confirm="Resume this work order?"
                                title="Resume">
                            <i class="bi bi-play-fill"></i>
                        </button>
                    }
                    @if (wo.Status != WorkOrderStatus.Completed && wo.Status != WorkOrderStatus.Cancelled)
                    {
                        @if (wo.Status == WorkOrderStatus.Draft || wo.Status == WorkOrderStatus.OnHold)
                        {
                            <button type="button"
                                    class="px-3 py-2 text-xs font-medium text-red-700 bg-white border border-gray-300 rounded-r-lg hover:bg-red-50 focus:z-10 focus:ring-2 focus:ring-red-200"
                                    hx-post="/Manufacturing/WorkOrders?handler=UpdateStatus&id=@wo.Id&status=Cancelled"
                                    hx-target="#workOrdersTableContainer"
                                    hx-confirm="Cancel this work order?"
                                    title="Cancel">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        }
                    }
                </div>
            </td>
        </tr>
    }
}

<!-- Pagination -->
<tr>
    <td colspan="9" class="px-6 py-3">
        @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", Model.Pagination)
    </td>
</tr>
<script>
    // Re-initialize Flowbite dropdowns and HTMX after content swap
    if (typeof initFlowbite === 'function') { initFlowbite(); }
    if (typeof htmx !== 'undefined') { htmx.process(document.body); }
</script>