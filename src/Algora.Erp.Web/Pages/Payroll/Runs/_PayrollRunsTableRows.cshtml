@model Algora.Erp.Web.Pages.Payroll.Runs.PayrollRunsTableViewModel
@using Algora.Erp.Domain.Entities.Payroll

@if (Model.Runs.Count == 0)
{
    <tr>
        <td colspan="8" class="text-center py-5">
            <div class="text-muted">
                <i class="bi bi-calendar-x fs-1 d-block mb-3"></i>
                <p class="mb-0">No payroll runs found</p>
            </div>
        </td>
    </tr>
}
else
{
    @foreach (var run in Model.Runs)
    {
        var statusColor = run.Status switch
        {
            PayrollRunStatus.Draft => "secondary",
            PayrollRunStatus.Processing => "info",
            PayrollRunStatus.Processed => "primary",
            PayrollRunStatus.Approved => "warning",
            PayrollRunStatus.Paid => "success",
            PayrollRunStatus.Cancelled => "danger",
            _ => "secondary"
        };

        <tr>
            <td class="ps-4">
                <code class="bg-light px-2 py-1 rounded">@run.RunNumber</code>
            </td>
            <td>
                <div class="fw-medium">@run.Name</div>
                <small class="text-muted">@run.PayFrequency</small>
            </td>
            <td>
                <div>@run.PeriodStart.ToString("MMM dd") - @run.PeriodEnd.ToString("MMM dd, yyyy")</div>
            </td>
            <td>
                @run.PayDate.ToString("MMM dd, yyyy")
            </td>
            <td class="text-center">
                <span class="badge bg-secondary bg-opacity-10 text-secondary">
                    @run.EmployeeCount
                </span>
            </td>
            <td class="text-end">
                <span class="fw-medium">@run.TotalNetPay.ToString("C2")</span>
            </td>
            <td>
                <span class="badge bg-@statusColor bg-opacity-10 text-@statusColor">
                    @run.Status
                </span>
            </td>
            <td class="text-end pe-4">
                <div class="btn-group btn-group-sm">
                    <button type="button"
                            class="btn btn-outline-info"
                            onclick="viewDetails('@run.Id')"
                            title="View Details">
                        <i class="bi bi-eye"></i>
                    </button>

                    @if (run.Status == PayrollRunStatus.Draft)
                    {
                        <button type="button"
                                class="btn btn-outline-primary"
                                hx-get="?handler=EditForm&id=@run.Id"
                                hx-target="#formModalBody"
                                data-bs-toggle="modal"
                                data-bs-target="#formModal"
                                title="Edit">
                            <i class="bi bi-pencil"></i>
                        </button>
                        <button type="button"
                                class="btn btn-outline-success"
                                onclick="processPayroll('@run.Id')"
                                title="Process Payroll">
                            <i class="bi bi-play-fill"></i>
                        </button>
                        <button type="button"
                                class="btn btn-outline-danger"
                                onclick="confirmDelete('@run.Id')"
                                title="Delete">
                            <i class="bi bi-trash"></i>
                        </button>
                    }
                    else if (run.Status == PayrollRunStatus.Processed)
                    {
                        <button type="button"
                                class="btn btn-outline-success"
                                onclick="updateStatus('@run.Id', 'Approved')"
                                title="Approve">
                            <i class="bi bi-check-lg"></i>
                        </button>
                        <button type="button"
                                class="btn btn-outline-secondary"
                                onclick="updateStatus('@run.Id', 'Cancelled')"
                                title="Cancel">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    }
                    else if (run.Status == PayrollRunStatus.Approved)
                    {
                        <button type="button"
                                class="btn btn-outline-success"
                                onclick="updateStatus('@run.Id', 'Paid')"
                                title="Mark as Paid">
                            <i class="bi bi-currency-dollar"></i>
                        </button>
                    }
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="8" class="py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    Showing @((Model.Page - 1) * Model.PageSize + 1) to @Math.Min(Model.Page * Model.PageSize, Model.TotalRecords) of @Model.TotalRecords entries
                </div>
                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                            <a class="page-link"
                               hx-get="?handler=Table&page=@(Model.Page - 1)"
                               hx-target="#runsTableBody"
                               hx-include="#searchInput, #statusFilter, #pageSizeSelect">
                                Previous
                            </a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.Page ? "active" : "")">
                                <a class="page-link"
                                   hx-get="?handler=Table&page=@i"
                                   hx-target="#runsTableBody"
                                   hx-include="#searchInput, #statusFilter, #pageSizeSelect">
                                    @i
                                </a>
                            </li>
                        }
                        <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                            <a class="page-link"
                               hx-get="?handler=Table&page=@(Model.Page + 1)"
                               hx-target="#runsTableBody"
                               hx-include="#searchInput, #statusFilter, #pageSizeSelect">
                                Next
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </td>
    </tr>
}
