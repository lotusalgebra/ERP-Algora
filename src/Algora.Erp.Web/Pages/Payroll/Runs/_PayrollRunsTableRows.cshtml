@model Algora.Erp.Web.Pages.Payroll.Runs.PayrollRunsTableViewModel
@using Algora.Erp.Domain.Entities.Payroll

@if (Model.Runs.Count == 0)
{
    <tr>
        <td colspan="8" class="text-center py-12">
            <div class="text-gray-500">
                <i class="bi bi-calendar-x text-4xl block mb-2"></i>
                <p class="mb-0">No payroll runs found</p>
            </div>
        </td>
    </tr>
}
else
{
    @foreach (var run in Model.Runs)
    {
        var statusBadge = run.Status switch
        {
            PayrollRunStatus.Draft => "bg-gray-100 text-gray-800",
            PayrollRunStatus.Processing => "bg-blue-100 text-blue-800",
            PayrollRunStatus.Processed => "bg-primary-100 text-primary-800",
            PayrollRunStatus.Approved => "bg-amber-100 text-amber-800",
            PayrollRunStatus.Paid => "bg-emerald-100 text-emerald-800",
            PayrollRunStatus.Cancelled => "bg-red-100 text-red-800",
            _ => "bg-gray-100 text-gray-800"
        };

        <tr class="hover:bg-gray-50">
            <td class="px-6 py-4">
                <code class="bg-gray-50 px-2 py-1 rounded text-sm">@run.RunNumber</code>
            </td>
            <td class="px-6 py-4">
                <div class="font-medium text-gray-900">@run.Name</div>
                <small class="text-gray-500">@run.PayFrequency</small>
            </td>
            <td class="px-6 py-4">
                <div>@run.PeriodStart.ToString("MMM dd") - @run.PeriodEnd.ToString("MMM dd, yyyy")</div>
            </td>
            <td class="px-6 py-4">
                @run.PayDate.ToString("MMM dd, yyyy")
            </td>
            <td class="px-6 py-4 text-center">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">
                    @run.EmployeeCount
                </span>
            </td>
            <td class="px-6 py-4 text-right">
                <span class="font-medium">@run.TotalNetPay.ToString("C2")</span>
            </td>
            <td class="px-6 py-4">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @statusBadge">
                    @run.Status
                </span>
            </td>
            <td class="px-6 py-4 text-right">
                <div class="relative inline-block">
                    <button type="button" class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg"
                            id="dropdownRun@(run.Id)" data-dropdown-toggle="dropdownMenuRun@(run.Id)" data-dropdown-placement="bottom-end">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <div class="z-50 hidden absolute right-0 mt-2 bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuRun@(run.Id)">
                        <ul class="py-2 text-sm text-gray-700">
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100" href="/Payroll/Runs/Details/@run.Id">
                                    <i class="bi bi-eye mr-2"></i>View Details
                                </a>
                            </li>
                            @if (run.Status == PayrollRunStatus.Draft)
                            {
                                <li>
                                    <a class="flex items-center px-4 py-2 hover:bg-gray-100 cursor-pointer"
                                       hx-get="?handler=EditForm&id=@run.Id"
                                       hx-target="#formModalBody"
                                       data-modal-target="formModal" data-modal-toggle="formModal">
                                        <i class="bi bi-pencil mr-2"></i>Edit
                                    </a>
                                </li>
                                <li>
                                    <a class="flex items-center px-4 py-2 hover:bg-gray-100 text-emerald-600 cursor-pointer"
                                       hx-post="?handler=Process&id=@run.Id"
                                       hx-target="#runsTableBody"
                                       hx-swap="innerHTML"
                                       hx-confirm="Are you sure you want to process this payroll run?">
                                        <i class="bi bi-play-fill mr-2"></i>Process Payroll
                                    </a>
                                </li>
                            }
                            @if (run.Status == PayrollRunStatus.Processed)
                            {
                                <li>
                                    <a class="flex items-center px-4 py-2 hover:bg-gray-100 text-emerald-600 cursor-pointer"
                                       hx-post="?handler=UpdateStatus&id=@run.Id&status=Approved"
                                       hx-target="#runsTableBody"
                                       hx-swap="innerHTML"
                                       hx-confirm="Are you sure you want to approve this payroll run?">
                                        <i class="bi bi-check-lg mr-2"></i>Approve
                                    </a>
                                </li>
                                <li>
                                    <a class="flex items-center px-4 py-2 hover:bg-gray-100 text-gray-600 cursor-pointer"
                                       hx-post="?handler=UpdateStatus&id=@run.Id&status=Cancelled"
                                       hx-target="#runsTableBody"
                                       hx-swap="innerHTML"
                                       hx-confirm="Are you sure you want to cancel this payroll run?">
                                        <i class="bi bi-x-lg mr-2"></i>Cancel
                                    </a>
                                </li>
                            }
                            @if (run.Status == PayrollRunStatus.Approved)
                            {
                                <li>
                                    <a class="flex items-center px-4 py-2 hover:bg-gray-100 text-emerald-600 cursor-pointer"
                                       hx-post="?handler=UpdateStatus&id=@run.Id&status=Paid"
                                       hx-target="#runsTableBody"
                                       hx-swap="innerHTML"
                                       hx-confirm="Mark this payroll run as paid?">
                                        <i class="bi bi-currency-dollar mr-2"></i>Mark as Paid
                                    </a>
                                </li>
                            }
                        </ul>
                        @if (run.Status == PayrollRunStatus.Draft)
                        {
                            <div class="py-2">
                                <a class="flex items-center px-4 py-2 text-red-600 hover:bg-gray-100 cursor-pointer"
                                   hx-delete="?handler=Delete&id=@run.Id"
                                   hx-target="#runsTableBody"
                                   hx-swap="innerHTML"
                                   hx-confirm="Are you sure you want to delete this payroll run?">
                                    <i class="bi bi-trash mr-2"></i>Delete
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="8" class="px-6 py-3">
            @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", Model.Pagination)
        </td>
    </tr>
}
<script>
    // Re-initialize Flowbite dropdowns and HTMX after content swap
    if (typeof initFlowbite === 'function') { initFlowbite(); }
    if (typeof htmx !== 'undefined') { htmx.process(document.body); }
</script>