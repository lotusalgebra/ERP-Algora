@model Algora.Erp.Domain.Entities.Payroll.PayrollRun
@using Algora.Erp.Domain.Entities.Payroll

@{
    var statusBadge = Model.Status switch
    {
        PayrollRunStatus.Draft => "bg-gray-100 text-gray-800",
        PayrollRunStatus.Processing => "bg-blue-100 text-blue-800",
        PayrollRunStatus.Processed => "bg-primary-100 text-primary-800",
        PayrollRunStatus.Approved => "bg-amber-100 text-amber-800",
        PayrollRunStatus.Paid => "bg-emerald-100 text-emerald-800",
        PayrollRunStatus.Cancelled => "bg-red-100 text-red-800",
        _ => "bg-gray-100 text-gray-800"
    };
}

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
    <!-- Header -->
    <div class="md:col-span-2 lg:col-span-4">
        <div class="flex justify-between items-start">
            <div>
                <h4 class="text-lg font-semibold text-gray-900 mb-1">@Model.Name</h4>
                <p class="text-gray-500 mb-0">@Model.RunNumber</p>
            </div>
            <span class="text-sm font-medium px-3 py-1.5 rounded-full @statusBadge">@Model.Status</span>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="bg-gray-50 rounded-lg p-4 text-center">
        <h5 class="text-2xl font-bold text-gray-900 mb-1">@Model.EmployeeCount</h5>
        <small class="text-gray-500">Employees</small>
    </div>
    <div class="bg-gray-50 rounded-lg p-4 text-center">
        <h5 class="text-2xl font-bold text-emerald-600 mb-1">@Model.TotalGrossPay.ToString("C0")</h5>
        <small class="text-gray-500">Gross Pay</small>
    </div>
    <div class="bg-gray-50 rounded-lg p-4 text-center">
        <h5 class="text-2xl font-bold text-red-600 mb-1">@Model.TotalDeductions.ToString("C0")</h5>
        <small class="text-gray-500">Deductions</small>
    </div>
    <div class="bg-gray-50 rounded-lg p-4 text-center">
        <h5 class="text-2xl font-bold text-primary-600 mb-1">@Model.TotalNetPay.ToString("C0")</h5>
        <small class="text-gray-500">Net Pay</small>
    </div>

    <!-- Period Info -->
    <div class="md:col-span-2 bg-gray-50 rounded-lg p-4">
        <h6 class="text-gray-500 uppercase text-xs font-medium mb-3">Period Information</h6>
        <div class="grid grid-cols-2 gap-2">
            <div>
                <small class="text-gray-500 block">Period Start</small>
                <span class="text-gray-900">@Model.PeriodStart.ToString("MMM dd, yyyy")</span>
            </div>
            <div>
                <small class="text-gray-500 block">Period End</small>
                <span class="text-gray-900">@Model.PeriodEnd.ToString("MMM dd, yyyy")</span>
            </div>
            <div>
                <small class="text-gray-500 block">Pay Date</small>
                <span class="text-gray-900">@Model.PayDate.ToString("MMM dd, yyyy")</span>
            </div>
            <div>
                <small class="text-gray-500 block">Frequency</small>
                <span class="text-gray-900">@Model.PayFrequency</span>
            </div>
        </div>
    </div>

    <!-- Processing Info -->
    <div class="md:col-span-2 bg-gray-50 rounded-lg p-4">
        <h6 class="text-gray-500 uppercase text-xs font-medium mb-3">Processing Information</h6>
        <div class="grid grid-cols-2 gap-2">
            <div>
                <small class="text-gray-500 block">Processed At</small>
                <span class="text-gray-900">@(Model.ProcessedAt?.ToString("MMM dd, yyyy HH:mm") ?? "-")</span>
            </div>
            <div>
                <small class="text-gray-500 block">Approved At</small>
                <span class="text-gray-900">@(Model.ApprovedAt?.ToString("MMM dd, yyyy HH:mm") ?? "-")</span>
            </div>
            <div>
                <small class="text-gray-500 block">Currency</small>
                <span class="text-gray-900">@Model.Currency</span>
            </div>
        </div>
    </div>

    <!-- Payslips -->
    <div class="md:col-span-2 lg:col-span-4">
        <h6 class="text-gray-500 uppercase text-xs font-medium mb-3">Payslips (@Model.Payslips.Count)</h6>
        @if (Model.Payslips.Any())
        {
            <div class="overflow-x-auto">
                <table class="w-full text-sm text-left">
                    <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                        <tr>
                            <th scope="col" class="px-4 py-2">Payslip #</th>
                            <th scope="col" class="px-4 py-2">Employee</th>
                            <th scope="col" class="px-4 py-2 text-right">Basic</th>
                            <th scope="col" class="px-4 py-2 text-right">Gross</th>
                            <th scope="col" class="px-4 py-2 text-right">Deductions</th>
                            <th scope="col" class="px-4 py-2 text-right">Net Pay</th>
                            <th scope="col" class="px-4 py-2">Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var payslip in Model.Payslips.OrderBy(p => p.Employee?.FullName))
                        {
                            var slipStatusBadge = payslip.Status switch
                            {
                                PayslipStatus.Draft => "bg-gray-100 text-gray-800",
                                PayslipStatus.Processed => "bg-primary-100 text-primary-800",
                                PayslipStatus.Approved => "bg-amber-100 text-amber-800",
                                PayslipStatus.Paid => "bg-emerald-100 text-emerald-800",
                                PayslipStatus.Cancelled => "bg-red-100 text-red-800",
                                _ => "bg-gray-100 text-gray-800"
                            };
                            <tr class="hover:bg-gray-50 border-b border-gray-100">
                                <td class="px-4 py-2"><code class="text-xs bg-gray-100 px-1.5 py-0.5 rounded">@payslip.PayslipNumber</code></td>
                                <td class="px-4 py-2">
                                    <div class="font-medium text-gray-900">@payslip.Employee?.FullName</div>
                                    <small class="text-gray-500">@payslip.Employee?.EmployeeCode</small>
                                </td>
                                <td class="px-4 py-2 text-right">@payslip.BasicSalary.ToString("C2")</td>
                                <td class="px-4 py-2 text-right">@payslip.GrossPay.ToString("C2")</td>
                                <td class="px-4 py-2 text-right text-red-600">@payslip.TotalDeductions.ToString("C2")</td>
                                <td class="px-4 py-2 text-right font-medium">@payslip.NetPay.ToString("C2")</td>
                                <td class="px-4 py-2">
                                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @slipStatusBadge">
                                        @payslip.Status
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="bg-gray-50 font-bold">
                        <tr>
                            <td colspan="2" class="px-4 py-2 text-right">Totals:</td>
                            <td class="px-4 py-2 text-right">@Model.Payslips.Sum(p => p.BasicSalary).ToString("C2")</td>
                            <td class="px-4 py-2 text-right">@Model.TotalGrossPay.ToString("C2")</td>
                            <td class="px-4 py-2 text-right text-red-600">@Model.TotalDeductions.ToString("C2")</td>
                            <td class="px-4 py-2 text-right">@Model.TotalNetPay.ToString("C2")</td>
                            <td class="px-4 py-2"></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        }
        else
        {
            <div class="p-4 text-sm text-blue-800 rounded-lg bg-blue-50">
                <i class="bi bi-info-circle mr-2"></i>
                No payslips generated yet. Process the payroll run to generate payslips.
            </div>
        }
    </div>

    <!-- Notes -->
    @if (!string.IsNullOrEmpty(Model.Notes))
    {
        <div class="md:col-span-2 lg:col-span-4 bg-gray-50 rounded-lg p-4">
            <h6 class="text-gray-500 uppercase text-xs font-medium mb-3">Notes</h6>
            <p class="mb-0 whitespace-pre-line text-gray-900">@Model.Notes</p>
        </div>
    }
</div>

<div class="flex items-center pt-4 mt-4 border-t border-gray-200">
    <button type="button" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900" onclick="closeModal('detailsModal')">Close</button>
</div>
