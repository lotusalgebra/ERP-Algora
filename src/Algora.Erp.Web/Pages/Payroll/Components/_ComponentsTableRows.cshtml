@model Algora.Erp.Web.Pages.Payroll.Components.ComponentsTableViewModel
@using Algora.Erp.Domain.Entities.Payroll

@if (Model.Components.Count == 0)
{
    <tr>
        <td colspan="8" class="text-center py-12">
            <div class="text-gray-500">
                <i class="bi bi-list-ul text-4xl block mb-2"></i>
                <p class="mb-0">No salary components found</p>
            </div>
        </td>
    </tr>
}
else
{
    @foreach (var component in Model.Components)
    {
        var typeBadge = component.ComponentType switch
        {
            SalaryComponentType.Earning => "bg-emerald-100 text-emerald-800",
            SalaryComponentType.Deduction => "bg-red-100 text-red-800",
            SalaryComponentType.Reimbursement => "bg-blue-100 text-blue-800",
            SalaryComponentType.Tax => "bg-amber-100 text-amber-800",
            _ => "bg-gray-100 text-gray-800"
        };

        var calcDisplay = component.CalculationType switch
        {
            CalculationType.Fixed => "Fixed Amount",
            CalculationType.PercentageOfBasic => "% of Basic",
            CalculationType.PercentageOfGross => "% of Gross",
            CalculationType.Formula => "Formula",
            _ => "Fixed"
        };

        <tr class="hover:bg-gray-50">
            <td class="px-6 py-4">
                <code class="bg-gray-50 px-2 py-1 rounded text-sm">@component.Code</code>
            </td>
            <td class="px-6 py-4">
                <div class="font-medium text-gray-900">@component.Name</div>
                @if (!string.IsNullOrEmpty(component.Description))
                {
                    <small class="text-gray-500">@component.Description</small>
                }
            </td>
            <td class="px-6 py-4">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @typeBadge">
                    @component.ComponentType
                </span>
            </td>
            <td class="px-6 py-4">
                <span class="text-gray-500">@calcDisplay</span>
            </td>
            <td class="px-6 py-4 text-right">
                @if (component.CalculationType == CalculationType.Fixed)
                {
                    <span>@component.DefaultValue.ToString("C2")</span>
                }
                else
                {
                    <span>@component.DefaultValue%</span>
                }
            </td>
            <td class="px-6 py-4 text-center">
                @if (component.IsTaxable)
                {
                    <i class="bi bi-check-circle-fill text-emerald-500"></i>
                }
                else
                {
                    <i class="bi bi-x-circle text-gray-400"></i>
                }
            </td>
            <td class="px-6 py-4">
                @if (component.IsActive)
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-emerald-100 text-emerald-800">Active</span>
                }
                else
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">Inactive</span>
                }
            </td>
            <td class="px-6 py-4 text-right">
                <div class="relative inline-block">
                    <button type="button" class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg"
                            id="dropdownComp@(component.Id)" data-dropdown-toggle="dropdownMenuComp@(component.Id)" data-dropdown-placement="bottom-end">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <div class="z-50 hidden absolute right-0 mt-2 bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuComp@(component.Id)">
                        <ul class="py-2 text-sm text-gray-700">
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100 cursor-pointer"
                                   hx-get="?handler=EditForm&id=@component.Id"
                                   hx-target="#formModalBody"
                                   data-modal-target="formModal" data-modal-toggle="formModal">
                                    <i class="bi bi-pencil mr-2"></i>Edit
                                </a>
                            </li>
                        </ul>
                        <div class="py-2">
                            <a class="flex items-center px-4 py-2 text-red-600 hover:bg-gray-100 cursor-pointer"
                               hx-delete="?handler=Delete&id=@component.Id"
                               hx-target="#componentsTableBody"
                               hx-swap="innerHTML"
                               hx-confirm="Are you sure you want to delete this component?">
                                <i class="bi bi-trash mr-2"></i>Delete
                            </a>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="8" class="px-6 py-3">
            @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", Model.Pagination)
        </td>
    </tr>
}
