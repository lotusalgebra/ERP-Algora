@model Algora.Erp.Web.Pages.Payroll.Components.ComponentFormViewModel
@using Algora.Erp.Domain.Entities.Payroll

<form hx-post=""
      hx-target="#componentsTableBody"
      hx-on::after-request="if(event.detail.successful) document.body.dispatchEvent(new Event('formSubmitSuccess'))">

    @if (Model.IsEdit && Model.Component != null)
    {
        <input type="hidden" name="Id" value="@Model.Component.Id" />
    }

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="md:col-span-2">
            <label class="block mb-2 text-sm font-medium text-gray-900">Name <span class="text-red-500">*</span></label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Name"
                   value="@Model.Component?.Name" required>
        </div>

        <div>
            <label class="block mb-2 text-sm font-medium text-gray-900">Sort Order</label>
            <input type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="SortOrder"
                   value="@(Model.Component?.SortOrder ?? 0)" min="0">
        </div>

        <div class="md:col-span-2">
            <label class="block mb-2 text-sm font-medium text-gray-900">Description</label>
            <textarea class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Description" rows="2">@Model.Component?.Description</textarea>
        </div>

        <div>
            <label class="block mb-2 text-sm font-medium text-gray-900">Component Type</label>
            <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="ComponentType" id="componentType">
                @foreach (var type in Enum.GetValues<SalaryComponentType>())
                {
                    <option value="@type" selected="@(Model.Component?.ComponentType == type)">@type</option>
                }
            </select>
        </div>

        <div>
            <label class="block mb-2 text-sm font-medium text-gray-900">Calculation Type</label>
            <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="CalculationType" id="calculationType" onchange="updateValueLabel()">
                @foreach (var type in Enum.GetValues<CalculationType>())
                {
                    var label = type switch
                    {
                        CalculationType.Fixed => "Fixed Amount",
                        CalculationType.PercentageOfBasic => "Percentage of Basic",
                        CalculationType.PercentageOfGross => "Percentage of Gross",
                        CalculationType.Formula => "Custom Formula",
                        _ => type.ToString()
                    };
                    <option value="@type" selected="@(Model.Component?.CalculationType == type)">@label</option>
                }
            </select>
        </div>

        <div>
            <label class="block mb-2 text-sm font-medium text-gray-900" id="valueLabel">Default Value</label>
            <div class="flex">
                <span class="inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 border border-e-0 border-gray-300 rounded-s-md" id="valuePrefix">$</span>
                <input type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-e-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="DefaultValue"
                       value="@(Model.Component?.DefaultValue ?? 0)" step="0.01" min="0">
                <span class="hidden inline-flex items-center px-3 text-sm text-gray-900 bg-gray-200 border border-s-0 border-gray-300 rounded-e-md" id="valueSuffix">%</span>
            </div>
        </div>

        <div>
            <label class="block mb-2 text-sm font-medium text-gray-900">Min Value</label>
            <input type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="MinValue"
                   value="@Model.Component?.MinValue" step="0.01" min="0">
        </div>

        <div>
            <label class="block mb-2 text-sm font-medium text-gray-900">Max Value</label>
            <input type="number" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="MaxValue"
                   value="@Model.Component?.MaxValue" step="0.01" min="0">
        </div>

        <div class="md:col-span-2">
            <div class="grid grid-cols-3 gap-4">
                <div class="flex items-center">
                    <input class="w-4 h-4 text-primary-600 bg-gray-100 border-gray-300 rounded focus:ring-primary-500" type="checkbox" name="IsTaxable" value="true" id="isTaxable"
                           checked="@(Model.Component?.IsTaxable ?? true)">
                    <label class="ms-2 text-sm font-medium text-gray-900" for="isTaxable">Taxable</label>
                </div>
                <div class="flex items-center">
                    <input class="w-4 h-4 text-primary-600 bg-gray-100 border-gray-300 rounded focus:ring-primary-500" type="checkbox" name="IsRecurring" value="true" id="isRecurring"
                           checked="@(Model.Component?.IsRecurring ?? true)">
                    <label class="ms-2 text-sm font-medium text-gray-900" for="isRecurring">Recurring</label>
                </div>
                <div class="flex items-center">
                    <input class="w-4 h-4 text-primary-600 bg-gray-100 border-gray-300 rounded focus:ring-primary-500" type="checkbox" name="IsActive" value="true" id="isActive"
                           checked="@(Model.Component?.IsActive ?? true)">
                    <label class="ms-2 text-sm font-medium text-gray-900" for="isActive">Active</label>
                </div>
            </div>
        </div>
    </div>

    <div class="flex items-center pt-4 mt-4 border-t border-gray-200 gap-2">
        <button type="button" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900" onclick="closeModal('formModal')">Cancel</button>
        <button type="submit" class="text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center">
            @(Model.IsEdit ? "Update Component" : "Create Component")
        </button>
    </div>
</form>

<script>
    function updateValueLabel() {
        const calcType = document.getElementById('calculationType').value;
        const prefix = document.getElementById('valuePrefix');
        const suffix = document.getElementById('valueSuffix');

        if (calcType === 'Fixed') {
            prefix.textContent = '$';
            prefix.classList.remove('hidden');
            suffix.classList.add('hidden');
        } else if (calcType === 'PercentageOfBasic' || calcType === 'PercentageOfGross') {
            prefix.classList.add('hidden');
            suffix.classList.remove('hidden');
        } else {
            prefix.classList.add('hidden');
            suffix.classList.add('hidden');
        }
    }

    // Initialize on load
    updateValueLabel();
</script>
