@model Algora.Erp.Web.Pages.Admin.Roles.RolesTableViewModel

@if (Model.Roles.Any())
{
    foreach (var role in Model.Roles)
    {
        <tr class="border-b hover:bg-gray-50">
            <td class="px-6 py-4">
                <div class="flex items-center">
                    <div class="rounded-full bg-primary-100 flex items-center justify-center mr-2 w-10 h-10">
                        <i class="bi bi-shield text-primary-600"></i>
                    </div>
                    <div>
                        <div class="font-medium text-gray-900">@role.Name</div>
                    </div>
                </div>
            </td>
            <td class="px-6 py-4">@(role.Description ?? "-")</td>
            <td class="px-6 py-4">
                @if (role.RolePermissions.Any())
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-cyan-100 text-cyan-800">@role.RolePermissions.Count permissions</span>
                }
                else
                {
                    <span class="text-gray-500">No permissions</span>
                }
            </td>
            <td class="px-6 py-4">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">@role.UserRoles.Count users</span>
            </td>
            <td class="px-6 py-4 text-center">
                @if (role.IsSystemRole)
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-amber-100 text-amber-800">System</span>
                }
                else
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-emerald-100 text-emerald-800">Custom</span>
                }
            </td>
            <td class="px-6 py-4 text-right">
                <div class="flex items-center justify-end gap-2">
                    <button type="button" class="p-2 text-primary-600 hover:text-primary-700 hover:bg-primary-50 rounded-lg"
                            onclick="loadRoleEditForm('@role.Id')" title="Edit">
                        <i class="bi bi-pencil"></i>
                    </button>
                    @if (!role.IsSystemRole)
                    {
                        <button type="button" class="p-2 text-red-600 hover:text-red-700 hover:bg-red-50 rounded-lg"
                                hx-delete="/Admin/Roles?id=@role.Id"
                                hx-target="#rolesTableBody"
                                hx-swap="innerHTML"
                                hx-confirm="Delete this role?" title="Delete">
                            <i class="bi bi-trash"></i>
                        </button>
                    }
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="6" class="bg-gray-50 px-6 py-3">
            @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", Model.Pagination)
        </td>
    </tr>
}
else
{
    <tr>
        <td colspan="6" class="text-center py-12 text-gray-500">
            <i class="bi bi-shield text-4xl block mb-2"></i>
            No roles found
        </td>
    </tr>
}
<script>
    // Re-initialize Flowbite dropdowns and HTMX after content swap with slight delay
    setTimeout(function() {
        if (typeof initFlowbite === 'function') { initFlowbite(); }
        if (typeof htmx !== 'undefined') { htmx.process(document.body); }
    }, 50);
</script>