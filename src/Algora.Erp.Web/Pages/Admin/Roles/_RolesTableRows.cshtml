@model Algora.Erp.Web.Pages.Admin.Roles.RolesTableViewModel

@if (Model.Roles.Any())
{
    foreach (var role in Model.Roles)
    {
        <tr>
            <td class="ps-4">
                <div class="d-flex align-items-center">
                    <div class="rounded-circle bg-primary bg-opacity-10 d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                        <i class="bi bi-shield text-primary"></i>
                    </div>
                    <div>
                        <div class="fw-medium">@role.Name</div>
                    </div>
                </div>
            </td>
            <td>@(role.Description ?? "-")</td>
            <td>
                @if (role.RolePermissions.Any())
                {
                    <span class="badge bg-info">@role.RolePermissions.Count permissions</span>
                }
                else
                {
                    <span class="text-muted">No permissions</span>
                }
            </td>
            <td>
                <span class="badge bg-secondary">@role.UserRoles.Count users</span>
            </td>
            <td class="text-center">
                @if (role.IsSystemRole)
                {
                    <span class="badge bg-warning">System</span>
                }
                else
                {
                    <span class="badge bg-success">Custom</span>
                }
            </td>
            <td class="text-end pe-4">
                <div class="btn-group btn-group-sm">
                    <button type="button" class="btn btn-outline-primary"
                            hx-get="/Admin/Roles?handler=EditForm&id=@role.Id"
                            hx-target="#formContainer"
                            hx-swap="innerHTML"
                            data-bs-toggle="modal"
                            data-bs-target="#roleModal">
                        <i class="bi bi-pencil"></i>
                    </button>
                    @if (!role.IsSystemRole)
                    {
                        <button type="button" class="btn btn-outline-danger"
                                hx-delete="/Admin/Roles?id=@role.Id"
                                hx-target="#rolesTableBody"
                                hx-swap="innerHTML"
                                hx-confirm="Delete this role?">
                            <i class="bi bi-trash"></i>
                        </button>
                    }
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="6" class="bg-light">
            <div class="d-flex justify-content-between align-items-center px-2 py-1">
                <small class="text-muted">
                    Showing @((Model.Page - 1) * Model.PageSize + 1) to @Math.Min(Model.Page * Model.PageSize, Model.TotalRecords) of @Model.TotalRecords entries
                </small>
                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
                            <a class="page-link" href="#" onclick="loadTable(@(Model.Page - 1)); return false;">Previous</a>
                        </li>
                        @for (int i = Math.Max(1, Model.Page - 2); i <= Math.Min(Model.TotalPages, Model.Page + 2); i++)
                        {
                            <li class="page-item @(i == Model.Page ? "active" : "")">
                                <a class="page-link" href="#" onclick="loadTable(@i); return false;">@i</a>
                            </li>
                        }
                        <li class="page-item @(Model.Page == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link" href="#" onclick="loadTable(@(Model.Page + 1)); return false;">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </td>
    </tr>
}
else
{
    <tr>
        <td colspan="6" class="text-center py-5 text-muted">
            <i class="bi bi-shield fs-1 d-block mb-2"></i>
            No roles found
        </td>
    </tr>
}
