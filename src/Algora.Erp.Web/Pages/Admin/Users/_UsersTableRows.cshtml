@model Algora.Erp.Web.Pages.Admin.Users.UsersTableViewModel
@using Algora.Erp.Domain.Enums

@if (Model.Users.Any())
{
    foreach (var user in Model.Users)
    {
        var statusClass = user.Status == UserStatus.Active ? "bg-emerald-100 text-emerald-800" :
                          user.Status == UserStatus.Inactive ? "bg-gray-100 text-gray-800" :
                          user.Status == UserStatus.Locked ? "bg-red-100 text-red-800" : "bg-amber-100 text-amber-800";

        <tr class="border-b hover:bg-gray-50">
            <td class="px-6 py-4">
                <div class="flex items-center">
                    <div class="mr-2">
                        @if (!string.IsNullOrEmpty(user.Avatar))
                        {
                            <img src="@user.Avatar" class="rounded-full w-10 h-10" alt="">
                        }
                        else
                        {
                            <div class="rounded-full bg-primary-100 flex items-center justify-center w-10 h-10">
                                <span class="text-primary-600 font-bold">@user.FirstName[0]@user.LastName[0]</span>
                            </div>
                        }
                    </div>
                    <div>
                        <div class="font-medium text-gray-900">@user.FullName</div>
                    </div>
                </div>
            </td>
            <td class="px-6 py-4">@user.Email</td>
            <td class="px-6 py-4">@(user.PhoneNumber ?? "-")</td>
            <td class="px-6 py-4">
                @if (user.UserRoles.Any())
                {
                    foreach (var ur in user.UserRoles)
                    {
                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-primary-100 text-primary-800 mr-1">@ur.Role.Name</span>
                    }
                }
                else
                {
                    <span class="text-gray-500">No roles</span>
                }
            </td>
            <td class="px-6 py-4">
                @if (user.LastLoginAt.HasValue)
                {
                    @user.LastLoginAt.Value.ToString("MMM dd, yyyy HH:mm")
                }
                else
                {
                    <span class="text-gray-500">Never</span>
                }
            </td>
            <td class="px-6 py-4 text-center">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @statusClass">@user.Status</span>
            </td>
            <td class="px-6 py-4 text-right">
                <div class="relative inline-block">
                    <button class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg" id="dropdownUser@(user.Id)" data-dropdown-toggle="dropdownMenuUser@(user.Id)" data-dropdown-placement="bottom-end">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <div class="z-50 hidden absolute right-0 mt-2 bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuUser@(user.Id)">
                        <ul class="py-2 text-sm text-gray-700">
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100 cursor-pointer"
                                   onclick="loadUserEditForm('@user.Id')">
                                    <i class="bi bi-pencil mr-2"></i> Edit
                                </a>
                            </li>
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100 cursor-pointer @(user.Status == UserStatus.Active ? "text-amber-600" : "text-emerald-600")"
                                   hx-post="/Admin/Users?handler=ToggleStatus&id=@user.Id"
                                   hx-target="#usersTableBody"
                                   hx-swap="innerHTML">
                                    <i class="bi bi-@(user.Status == UserStatus.Active ? "pause" : "play") mr-2"></i> @(user.Status == UserStatus.Active ? "Deactivate" : "Activate")
                                </a>
                            </li>
                        </ul>
                        <div class="py-2">
                            <a class="flex items-center px-4 py-2 text-red-600 hover:bg-gray-100 cursor-pointer"
                               hx-delete="/Admin/Users?id=@user.Id"
                               hx-target="#usersTableBody"
                               hx-swap="innerHTML"
                               hx-confirm="Delete this user?">
                                <i class="bi bi-trash mr-2"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="7" class="bg-gray-50 px-6 py-3">
            @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", Model.Pagination)
        </td>
    </tr>
}
else
{
    <tr>
        <td colspan="7" class="text-center py-12 text-gray-500">
            <i class="bi bi-people text-4xl block mb-2"></i>
            No users found
        </td>
    </tr>
}
<script>
    // Re-initialize Flowbite dropdowns and HTMX after content swap with slight delay
    setTimeout(function() {
        if (typeof initFlowbite === 'function') { initFlowbite(); }
        if (typeof htmx !== 'undefined') { htmx.process(document.body); }
    }, 50);
</script>