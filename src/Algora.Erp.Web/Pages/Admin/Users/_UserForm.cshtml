@model Algora.Erp.Web.Pages.Admin.Users.UserFormViewModel
@using Algora.Erp.Domain.Enums

<form hx-post="/Admin/Users" hx-target="#usersTableBody" hx-swap="innerHTML">
    <div class="modal-header">
        <h5 class="modal-title">@(Model.IsEdit ? "Edit User" : "New User")</h5>
        <button type="button" class="btn-close" data-modal-hide="userModal"></button>
    </div>
    <div class="modal-body">
        @if (Model.IsEdit)
        {
            <input type="hidden" name="Id" value="@Model.User?.Id" />
        }

        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label">First Name <span class="text-danger">*</span></label>
                <input type="text" name="FirstName" class="form-control" value="@Model.User?.FirstName" required />
            </div>
            <div class="col-md-6">
                <label class="form-label">Last Name <span class="text-danger">*</span></label>
                <input type="text" name="LastName" class="form-control" value="@Model.User?.LastName" required />
            </div>
            <div class="col-md-6">
                <label class="form-label">Email <span class="text-danger">*</span></label>
                <input type="email" name="Email" class="form-control" value="@Model.User?.Email" required @(Model.IsEdit ? "readonly" : "") />
            </div>
            <div class="col-md-6">
                <label class="form-label">Phone Number</label>
                <input type="tel" name="PhoneNumber" class="form-control" value="@Model.User?.PhoneNumber" />
            </div>
            @if (!Model.IsEdit)
            {
                <div class="col-md-6">
                    <label class="form-label">Password</label>
                    <input type="password" name="Password" class="form-control" placeholder="Leave blank for default" />
                    <small class="text-muted">Default: Password123!</small>
                </div>
            }
            <div class="col-md-6">
                <label class="form-label">Status</label>
                <select name="Status" class="form-select">
                    @foreach (UserStatus s in Enum.GetValues(typeof(UserStatus)))
                    {
                        <option value="@s" selected="@(Model.User?.Status == s)">@s</option>
                    }
                </select>
            </div>
            <div class="col-12">
                <label class="form-label">Roles</label>
                <div class="row g-2">
                    @foreach (var role in Model.Roles)
                    {
                        <div class="col-md-4">
                            <div class="form-check">
                                <input type="checkbox" name="RoleIds" value="@role.Id" class="form-check-input" id="role_@role.Id"
                                       checked="@Model.SelectedRoleIds.Contains(role.Id)" />
                                <label class="form-check-label" for="role_@role.Id">@role.Name</label>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-modal-hide="userModal">Cancel</button>
        <button type="submit" class="btn btn-primary">@(Model.IsEdit ? "Update" : "Create") User</button>
    </div>
</form>
