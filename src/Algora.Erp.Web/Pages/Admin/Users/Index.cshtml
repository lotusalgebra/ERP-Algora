@page
@model Algora.Erp.Web.Pages.Admin.Users.IndexModel
@using Algora.Erp.Domain.Enums
@{
    ViewData["Title"] = "Users";
}

<div class="space-y-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">User Management</h1>
            <nav class="flex mt-1" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 text-sm text-gray-500">
                    <li><a href="/" class="hover:text-primary-600">Dashboard</a></li>
                    <li><span class="mx-1">/</span></li>
                    <li><a href="/Admin" class="hover:text-primary-600">Admin</a></li>
                    <li><span class="mx-1">/</span></li>
                    <li class="text-gray-900 font-medium">Users</li>
                </ol>
            </nav>
        </div>
        <button type="button" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition-colors" hx-get="/Admin/Users?handler=CreateForm" hx-target="#formContainer" hx-swap="innerHTML" hx-on::after-request="openUserModal()">
            <i class="bi bi-plus-lg mr-2"></i> New User
        </button>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-sm text-gray-500 mb-1">Total Users</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.TotalUsers</h3>
                </div>
                <div class="p-3 bg-primary-100 rounded-lg">
                    <i class="bi bi-people text-xl text-primary-600"></i>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-sm text-gray-500 mb-1">Active Users</p>
                    <h3 class="text-2xl font-bold text-emerald-600">@Model.ActiveUsers</h3>
                </div>
                <div class="p-3 bg-emerald-100 rounded-lg">
                    <i class="bi bi-person-check text-xl text-emerald-600"></i>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-sm text-gray-500 mb-1">Inactive Users</p>
                    <h3 class="text-2xl font-bold text-gray-500">@Model.InactiveUsers</h3>
                </div>
                <div class="p-3 bg-gray-100 rounded-lg">
                    <i class="bi bi-person-x text-xl text-gray-500"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters & Table -->
    <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
            <div class="grid grid-cols-1 md:grid-cols-12 gap-3 items-center">
                <div class="md:col-span-4">
                    <div class="relative">
                        <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                            <i class="bi bi-search text-gray-400"></i>
                        </div>
                        <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full ps-10 p-2.5" id="searchInput" placeholder="Search users...">
                    </div>
                </div>
                <div class="md:col-span-3">
                    <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" id="statusFilter">
                        <option value="">All Status</option>
                        @foreach (UserStatus s in Enum.GetValues(typeof(UserStatus)))
                        {
                            <option value="@s">@s</option>
                        }
                    </select>
                </div>
                <div class="md:col-span-3">
                    <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" id="roleFilter">
                        <option value="">All Roles</option>
                        @foreach (var role in Model.Roles)
                        {
                            <option value="@role.Id">@role.Name</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3">User</th>
                        <th scope="col" class="px-6 py-3">Email</th>
                        <th scope="col" class="px-6 py-3">Phone</th>
                        <th scope="col" class="px-6 py-3">Roles</th>
                        <th scope="col" class="px-6 py-3">Last Login</th>
                        <th scope="col" class="px-6 py-3 text-center">Status</th>
                        <th scope="col" class="px-6 py-3 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody id="usersTableBody" hx-get="/Admin/Users?handler=Table" hx-trigger="load" hx-swap="innerHTML">
                    <tr>
                        <td colspan="7" class="px-6 py-8 text-center">
                            <div class="inline-block animate-spin rounded-full h-6 w-6 border-b-2 border-primary-600"></div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- User Modal -->
<div id="userModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-2xl max-h-full">
        <div class="relative bg-white rounded-lg shadow">
            <div id="formContainer"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let searchTimeout;
        const searchInput = document.getElementById('searchInput');
        const statusFilter = document.getElementById('statusFilter');
        const roleFilter = document.getElementById('roleFilter');

        function loadTable(page = 1) {
            const params = new URLSearchParams({
                handler: 'Table',
                page: page,
                search: searchInput.value,
                statusFilter: statusFilter.value,
                roleFilter: roleFilter.value
            });
            htmx.ajax('GET', `/Admin/Users?${params}`, {target: '#usersTableBody', swap: 'innerHTML'});
        }

        // Open user modal after form content is loaded
        function openUserModal() {
            const modalEl = document.getElementById('userModal');
            if (modalEl) {
                // Try Flowbite first
                let modal = FlowbiteInstances.getInstance('Modal', 'userModal');
                if (!modal) {
                    modal = new Modal(modalEl);
                }
                modal.show();
            }
        }

        // Close modal after successful form submission
        function closeUserModal() {
            const modal = FlowbiteInstances.getInstance('Modal', 'userModal');
            if (modal) modal.hide();
        }

        searchInput.addEventListener('input', () => {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => loadTable(), 300);
        });

        statusFilter.addEventListener('change', () => loadTable());
        roleFilter.addEventListener('change', () => loadTable());

        document.body.addEventListener('htmx:afterRequest', (e) => {
            // Close modal after successful form submission
            if (e.detail.elt.closest('form') && e.detail.elt.closest('#formContainer') && e.detail.successful) {
                closeUserModal();
            }
        });
    </script>
}
