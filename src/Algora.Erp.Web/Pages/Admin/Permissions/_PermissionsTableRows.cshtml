@model Algora.Erp.Web.Pages.Admin.Permissions.PermissionsTableViewModel

@if (Model.Permissions.Any())
{
    foreach (var perm in Model.Permissions)
    {
        <tr class="border-b hover:bg-gray-50">
            <td class="px-6 py-4">
                <code class="bg-gray-100 px-2 py-1 rounded text-sm">@perm.Code</code>
            </td>
            <td class="px-6 py-4">
                <div class="font-medium text-gray-900">@perm.Name</div>
            </td>
            <td class="px-6 py-4">@(perm.Description ?? "-")</td>
            <td class="px-6 py-4">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-cyan-100 text-cyan-800">@perm.Module</span>
            </td>
            <td class="px-6 py-4 text-center">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">@perm.RolePermissions.Count</span>
            </td>
            <td class="px-6 py-4 text-right">
                <div class="relative inline-block">
                    <button class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg" id="dropdownPerm@(perm.Id)" data-dropdown-toggle="dropdownMenuPerm@(perm.Id)" data-dropdown-placement="bottom-end">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <div class="z-50 hidden absolute right-0 mt-2 bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuPerm@(perm.Id)">
                        <ul class="py-2 text-sm text-gray-700">
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100 cursor-pointer"
                                   hx-get="/Admin/Permissions?handler=EditForm&id=@perm.Id"
                                   hx-target="#formContainer"
                                   hx-swap="innerHTML"
                                   data-modal-target="permissionModal" data-modal-toggle="permissionModal">
                                    <i class="bi bi-pencil mr-2"></i> Edit
                                </a>
                            </li>
                        </ul>
                        @if (!perm.RolePermissions.Any())
                        {
                            <div class="py-2">
                                <a class="flex items-center px-4 py-2 text-red-600 hover:bg-gray-100 cursor-pointer"
                                   hx-delete="/Admin/Permissions?id=@perm.Id"
                                   hx-target="#permissionsTableBody"
                                   hx-swap="innerHTML"
                                   hx-confirm="Delete this permission?">
                                    <i class="bi bi-trash mr-2"></i> Delete
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="6" class="bg-gray-50 px-6 py-3">
            @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", Model.Pagination)
        </td>
    </tr>
}
else
{
    <tr>
        <td colspan="6" class="text-center py-12 text-gray-500">
            <i class="bi bi-key text-4xl block mb-2"></i>
            No permissions found
        </td>
    </tr>
}
