@model Algora.Erp.Web.Pages.Admin.Permissions.PermissionFormViewModel

<form hx-post="/Admin/Permissions" hx-target="#permissionsTableBody" hx-swap="innerHTML">
    <div class="flex items-center justify-between p-4 border-b rounded-t">
        <h5 class="text-lg font-semibold text-gray-900">@(Model.IsEdit ? "Edit Permission" : "New Permission")</h5>
        <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 inline-flex justify-center items-center" data-modal-hide="permissionModal">
            <i class="bi bi-x-lg"></i>
        </button>
    </div>
    <div class="p-6">
        @if (Model.IsEdit)
        {
            <input type="hidden" name="Id" value="@Model.Permission?.Id" />
        }

        <div class="grid grid-cols-12 gap-4">
            <div class="col-span-12">
                <label class="block mb-2 text-sm font-medium text-gray-900">Code <span class="text-red-500">*</span></label>
                <input type="text" name="Code" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" value="@Model.Permission?.Code" required
                       placeholder="e.g., users.create" />
                <small class="text-gray-500">Unique identifier (e.g., module.action)</small>
            </div>
            <div class="col-span-12">
                <label class="block mb-2 text-sm font-medium text-gray-900">Name <span class="text-red-500">*</span></label>
                <input type="text" name="Name" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" value="@Model.Permission?.Name" required
                       placeholder="e.g., Create Users" />
            </div>
            <div class="col-span-12">
                <label class="block mb-2 text-sm font-medium text-gray-900">Module <span class="text-red-500">*</span></label>
                <input type="text" name="Module" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" value="@Model.Permission?.Module" required
                       placeholder="e.g., Administration" list="modulesList" />
                <datalist id="modulesList">
                    <option value="Administration"></option>
                    <option value="Finance"></option>
                    <option value="HR"></option>
                    <option value="Payroll"></option>
                    <option value="Inventory"></option>
                    <option value="Procurement"></option>
                    <option value="Sales"></option>
                    <option value="Manufacturing"></option>
                    <option value="Projects"></option>
                </datalist>
            </div>
            <div class="col-span-12">
                <label class="block mb-2 text-sm font-medium text-gray-900">Description</label>
                <textarea name="Description" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" rows="2" placeholder="Brief description of what this permission allows">@Model.Permission?.Description</textarea>
            </div>
        </div>
    </div>
    <div class="flex items-center p-4 border-t border-gray-200 rounded-b gap-2">
        <button type="button" class="text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5" data-modal-hide="permissionModal">Cancel</button>
        <button type="submit" class="text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5">@(Model.IsEdit ? "Update" : "Create") Permission</button>
    </div>
</form>
