@page
@model Algora.Erp.Web.Pages.Admin.Permissions.IndexModel
@{
    ViewData["Title"] = "Permissions";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">Permission Management</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/Admin">Admin</a></li>
                    <li class="breadcrumb-item active">Permissions</li>
                </ol>
            </nav>
        </div>
        <button type="button" class="btn btn-primary" hx-get="/Admin/Permissions?handler=CreateForm" hx-target="#formContainer" hx-swap="innerHTML" data-modal-target="permissionModal" data-modal-toggle="permissionModal">
            <i class="bi bi-plus-lg me-1"></i> New Permission
        </button>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-muted mb-2">Total Permissions</h6>
                            <h3 class="mb-0">@Model.TotalPermissions</h3>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-2 rounded">
                            <i class="bi bi-key text-primary fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-muted mb-2">Modules</h6>
                            <h3 class="mb-0 text-info">@Model.Modules.Count</h3>
                        </div>
                        <div class="bg-info bg-opacity-10 p-2 rounded">
                            <i class="bi bi-folder text-info fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-muted mb-2">Avg per Module</h6>
                            <h3 class="mb-0 text-success">@(Model.Modules.Count > 0 ? Math.Round((double)Model.TotalPermissions / Model.Modules.Count, 1) : 0)</h3>
                        </div>
                        <div class="bg-success bg-opacity-10 p-2 rounded">
                            <i class="bi bi-bar-chart text-success fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters & Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="row g-2 align-items-center">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control" id="searchInput" placeholder="Search permissions...">
                    </div>
                </div>
                <div class="col-md-3">
                    <select class="form-select" id="moduleFilter">
                        <option value="">All Modules</option>
                        @foreach (var module in Model.Modules)
                        {
                            <option value="@module">@module</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Code</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Module</th>
                            <th class="text-center">Roles</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="permissionsTableBody" hx-get="/Admin/Permissions?handler=Table" hx-trigger="load" hx-swap="innerHTML">
                        <tr>
                            <td colspan="6" class="text-center py-4">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Permission Modal -->
<div class="modal fade" id="permissionModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div id="formContainer"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let searchTimeout;
        const searchInput = document.getElementById('searchInput');
        const moduleFilter = document.getElementById('moduleFilter');

        function loadTable(page = 1) {
            const params = new URLSearchParams({
                handler: 'Table',
                page: page,
                search: searchInput.value,
                moduleFilter: moduleFilter.value
            });
            htmx.ajax('GET', `/Admin/Permissions?${params}`, {target: '#permissionsTableBody', swap: 'innerHTML'});
        }

        searchInput.addEventListener('input', () => {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => loadTable(), 300);
        });

        moduleFilter.addEventListener('change', () => loadTable());

        document.body.addEventListener('htmx:afterRequest', (e) => {
            if (e.detail.elt.closest('#permissionModal') && e.detail.successful) {
                const modal = FlowbiteInstances.getInstance('Modal', 'permissionModal');
                if (modal) modal.hide();
            }
        });
    </script>
}
