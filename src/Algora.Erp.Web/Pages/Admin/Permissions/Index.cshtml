@page
@model Algora.Erp.Web.Pages.Admin.Permissions.IndexModel
@{
    ViewData["Title"] = "Permissions";
}

<div class="space-y-6">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Permission Management</h1>
            <nav class="flex mt-1" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 text-sm text-gray-500">
                    <li><a href="/" class="hover:text-primary-600">Dashboard</a></li>
                    <li><span class="mx-1">/</span></li>
                    <li><a href="/Admin" class="hover:text-primary-600">Admin</a></li>
                    <li><span class="mx-1">/</span></li>
                    <li class="text-gray-900 font-medium">Permissions</li>
                </ol>
            </nav>
        </div>
        <button type="button" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition-colors" hx-get="/Admin/Permissions?handler=CreateForm" hx-target="#formContainer" hx-swap="innerHTML" >
            <i class="bi bi-plus-lg mr-2"></i> New Permission
        </button>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-sm text-gray-500 mb-1">Total Permissions</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.TotalPermissions</h3>
                </div>
                <div class="p-3 bg-primary-100 rounded-lg">
                    <i class="bi bi-key text-xl text-primary-600"></i>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-sm text-gray-500 mb-1">Modules</p>
                    <h3 class="text-2xl font-bold text-cyan-600">@Model.Modules.Count</h3>
                </div>
                <div class="p-3 bg-cyan-100 rounded-lg">
                    <i class="bi bi-folder text-xl text-cyan-600"></i>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex justify-between items-center">
                <div>
                    <p class="text-sm text-gray-500 mb-1">Avg per Module</p>
                    <h3 class="text-2xl font-bold text-emerald-600">@(Model.Modules.Count > 0 ? Math.Round((double)Model.TotalPermissions / Model.Modules.Count, 1) : 0)</h3>
                </div>
                <div class="p-3 bg-emerald-100 rounded-lg">
                    <i class="bi bi-bar-chart text-xl text-emerald-600"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters & Table -->
    <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200">
            <div class="grid grid-cols-1 md:grid-cols-12 gap-3 items-center">
                <div class="md:col-span-4">
                    <div class="relative">
                        <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                            <i class="bi bi-search text-gray-400"></i>
                        </div>
                        <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full ps-10 p-2.5" id="searchInput" placeholder="Search permissions...">
                    </div>
                </div>
                <div class="md:col-span-3">
                    <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" id="moduleFilter">
                        <option value="">All Modules</option>
                        @foreach (var module in Model.Modules)
                        {
                            <option value="@module">@module</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3">Code</th>
                        <th scope="col" class="px-6 py-3">Name</th>
                        <th scope="col" class="px-6 py-3">Description</th>
                        <th scope="col" class="px-6 py-3">Module</th>
                        <th scope="col" class="px-6 py-3 text-center">Roles</th>
                        <th scope="col" class="px-6 py-3 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody id="permissionsTableBody" hx-get="/Admin/Permissions?handler=Table" hx-trigger="load" hx-swap="innerHTML">
                    <tr>
                        <td colspan="6" class="px-6 py-8 text-center">
                            <div class="inline-block animate-spin rounded-full h-6 w-6 border-b-2 border-primary-600"></div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Permission Modal -->
<div id="permissionModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-lg max-h-full">
        <div class="relative bg-white rounded-lg shadow">
            <div id="formContainer"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let searchTimeout;
        const searchInput = document.getElementById('searchInput');
        const moduleFilter = document.getElementById('moduleFilter');

        function loadTable(page = 1) {
            const params = new URLSearchParams({
                handler: 'Table',
                page: page,
                search: searchInput.value,
                moduleFilter: moduleFilter.value
            });
            htmx.ajax('GET', `/Admin/Permissions?${params}`, {target: '#permissionsTableBody', swap: 'innerHTML'});
        }

        searchInput.addEventListener('input', () => {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => loadTable(), 300);
        });

        moduleFilter.addEventListener('change', () => loadTable());

        document.body.addEventListener('htmx:afterRequest', (e) => {
            if (e.detail.elt.closest('#permissionModal') && e.detail.successful) {
                window.AlgoraModal.hide('');
            }
        });
    </script>
}
