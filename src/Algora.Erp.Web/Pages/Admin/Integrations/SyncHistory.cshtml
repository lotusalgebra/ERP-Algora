@page
@model Algora.Erp.Web.Pages.Admin.Integrations.SyncHistoryModel
@{
    ViewData["Title"] = "Sync History";
}

<div class="space-y-6">
    <nav class="flex" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 text-sm text-gray-500">
            <li><a href="/Admin/Integrations" class="hover:text-primary-600">Integrations</a></li>
            <li><span class="mx-1">/</span></li>
            <li class="text-gray-900 font-medium">Sync History</li>
        </ol>
    </nav>

    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Sync History</h1>
            <p class="text-gray-500 mt-1">View all CRM synchronization logs</p>
        </div>
    </div>

    <!-- Filters -->
    <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <div class="p-6">
            <form method="get" class="grid grid-cols-1 md:grid-cols-12 gap-4 items-end">
                <div class="md:col-span-3">
                    <label class="block mb-2 text-sm font-medium text-gray-900">CRM</label>
                    <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="crm" asp-for="CrmFilter">
                        <option value="">All CRMs</option>
                        <option value="Salesforce">Salesforce</option>
                        <option value="Dynamics365">Dynamics 365</option>
                    </select>
                </div>
                <div class="md:col-span-3">
                    <label class="block mb-2 text-sm font-medium text-gray-900">Entity Type</label>
                    <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="entity" asp-for="EntityFilter">
                        <option value="">All Entities</option>
                        <option value="Contact">Contacts</option>
                        <option value="Lead">Leads</option>
                        <option value="Opportunity">Opportunities</option>
                        <option value="Account">Accounts</option>
                    </select>
                </div>
                <div class="md:col-span-2">
                    <label class="block mb-2 text-sm font-medium text-gray-900">Status</label>
                    <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="status" asp-for="StatusFilter">
                        <option value="">All</option>
                        <option value="success">Success</option>
                        <option value="partial">Partial</option>
                        <option value="failed">Failed</option>
                    </select>
                </div>
                <div class="md:col-span-2">
                    <label class="block mb-2 text-sm font-medium text-gray-900">Date Range</label>
                    <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="range" asp-for="DateRange">
                        <option value="7">Last 7 days</option>
                        <option value="30">Last 30 days</option>
                        <option value="90">Last 90 days</option>
                        <option value="all">All time</option>
                    </select>
                </div>
                <div class="md:col-span-2">
                    <button type="submit" class="text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 w-full">Filter</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-4 gap-4">
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="bg-primary-100 rounded-full p-3 mr-3">
                    <i class="bi bi-arrow-repeat text-xl text-primary-600"></i>
                </div>
                <div>
                    <h4 class="text-2xl font-bold text-gray-900">@Model.TotalSyncs</h4>
                    <small class="text-gray-500">Total Syncs</small>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="bg-emerald-100 rounded-full p-3 mr-3">
                    <i class="bi bi-check-circle text-xl text-emerald-600"></i>
                </div>
                <div>
                    <h4 class="text-2xl font-bold text-emerald-600">@Model.SuccessfulSyncs</h4>
                    <small class="text-gray-500">Successful</small>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="bg-amber-100 rounded-full p-3 mr-3">
                    <i class="bi bi-exclamation-triangle text-xl text-amber-600"></i>
                </div>
                <div>
                    <h4 class="text-2xl font-bold text-amber-600">@Model.PartialSyncs</h4>
                    <small class="text-gray-500">Partial</small>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="bg-red-100 rounded-full p-3 mr-3">
                    <i class="bi bi-x-circle text-xl text-red-600"></i>
                </div>
                <div>
                    <h4 class="text-2xl font-bold text-red-600">@Model.FailedSyncs</h4>
                    <small class="text-gray-500">Failed</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Sync Logs Table -->
    <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3">CRM</th>
                        <th scope="col" class="px-6 py-3">Entity Type</th>
                        <th scope="col" class="px-6 py-3">Direction</th>
                        <th scope="col" class="px-6 py-3">Processed</th>
                        <th scope="col" class="px-6 py-3">Succeeded</th>
                        <th scope="col" class="px-6 py-3">Failed</th>
                        <th scope="col" class="px-6 py-3">Status</th>
                        <th scope="col" class="px-6 py-3">Started</th>
                        <th scope="col" class="px-6 py-3">Duration</th>
                        <th scope="col" class="px-6 py-3"></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.SyncLogs.Any())
                    {
                        @foreach (var log in Model.SyncLogs)
                        {
                            <tr class="bg-white border-b border-gray-200 hover:bg-gray-50">
                                <td class="px-6 py-4">
                                    @if (log.CrmType == "Salesforce")
                                    {
                                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-primary-100 text-primary-800">Salesforce</span>
                                    }
                                    else
                                    {
                                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-cyan-100 text-cyan-800">Dynamics 365</span>
                                    }
                                </td>
                                <td class="px-6 py-4">@(log.EntityType ?? "Full Sync")</td>
                                <td class="px-6 py-4">
                                    @switch (log.Direction)
                                    {
                                        case "ToCrm":
                                            <i class="bi bi-arrow-up mr-1"></i>
                                            <span>To CRM</span>
                                            break;
                                        case "ToErp":
                                            <i class="bi bi-arrow-down mr-1"></i>
                                            <span>To ERP</span>
                                            break;
                                        default:
                                            <i class="bi bi-arrow-left-right mr-1"></i>
                                            <span>Bidirectional</span>
                                            break;
                                    }
                                </td>
                                <td class="px-6 py-4">@log.RecordsProcessed</td>
                                <td class="px-6 py-4 text-emerald-600">@log.RecordsSucceeded</td>
                                <td class="px-6 py-4 text-red-600">@log.RecordsFailed</td>
                                <td class="px-6 py-4">
                                    @if (log.RecordsFailed == 0 && log.RecordsProcessed > 0)
                                    {
                                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-emerald-100 text-emerald-800">Success</span>
                                    }
                                    else if (log.RecordsSucceeded > 0 && log.RecordsFailed > 0)
                                    {
                                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-amber-100 text-amber-800">Partial</span>
                                    }
                                    else if (log.RecordsProcessed == 0)
                                    {
                                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">No Records</span>
                                    }
                                    else
                                    {
                                        <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-red-100 text-red-800">Failed</span>
                                    }
                                </td>
                                <td class="px-6 py-4">
                                    <small>@log.StartedAt.ToString("MMM d, yyyy h:mm tt")</small>
                                </td>
                                <td class="px-6 py-4">
                                    @if (log.CompletedAt.HasValue)
                                    {
                                        var duration = log.CompletedAt.Value - log.StartedAt;
                                        <small class="text-gray-500">@duration.TotalSeconds.ToString("0.0")s</small>
                                    }
                                    else
                                    {
                                        <small class="text-gray-500">-</small>
                                    }
                                </td>
                                <td class="px-6 py-4">
                                    @if (!string.IsNullOrEmpty(log.ErrorMessage))
                                    {
                                        <button type="button" class="px-2 py-1 text-sm font-medium text-red-600 bg-white border border-red-200 rounded-lg hover:bg-red-50 focus:ring-2 focus:ring-red-300"
                                                data-modal-target="errorModal" data-modal-toggle="errorModal"
                                                data-error="@log.ErrorMessage">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="10" class="text-center py-8 text-gray-500">
                                No sync logs found for the selected filters.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav class="flex justify-center">
            <ul class="inline-flex -space-x-px text-sm">
                <li>
                    <a class="flex items-center justify-center px-3 h-8 ms-0 leading-tight text-gray-500 bg-white border border-e-0 border-gray-300 rounded-s-lg @(Model.CurrentPage == 1 ? "cursor-not-allowed opacity-50" : "hover:bg-gray-100 hover:text-gray-700")" href="?page=@(Model.CurrentPage - 1)&crm=@Model.CrmFilter&entity=@Model.EntityFilter&status=@Model.StatusFilter&range=@Model.DateRange">Previous</a>
                </li>
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li>
                        <a class="flex items-center justify-center px-3 h-8 leading-tight @(i == Model.CurrentPage ? "text-primary-600 border border-gray-300 bg-primary-50 hover:bg-primary-100 hover:text-primary-700" : "text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700")" href="?page=@i&crm=@Model.CrmFilter&entity=@Model.EntityFilter&status=@Model.StatusFilter&range=@Model.DateRange">@i</a>
                    </li>
                }
                <li>
                    <a class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded-e-lg @(Model.CurrentPage == Model.TotalPages ? "cursor-not-allowed opacity-50" : "hover:bg-gray-100 hover:text-gray-700")" href="?page=@(Model.CurrentPage + 1)&crm=@Model.CrmFilter&entity=@Model.EntityFilter&status=@Model.StatusFilter&range=@Model.DateRange">Next</a>
                </li>
            </ul>
        </nav>
    }
</div>

<!-- Error Modal -->
<div id="errorModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-lg max-h-full">
        <div class="relative bg-white rounded-lg shadow">
            <div class="flex items-center justify-between p-4 border-b rounded-t">
                <h5 class="text-lg font-semibold text-gray-900">Error Details</h5>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 inline-flex justify-center items-center" onclick="closeModal('errorModal')">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="p-6">
                <pre id="errorContent" class="bg-gray-100 p-4 rounded-lg text-sm whitespace-pre-wrap"></pre>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Handle error modal content population for Flowbite
        document.querySelectorAll('[data-modal-target="errorModal"]').forEach(function(button) {
            button.addEventListener('click', function() {
                var error = this.getAttribute('data-error');
                document.getElementById('errorContent').textContent = error;
            });
        });
    </script>
}
