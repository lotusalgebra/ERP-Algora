@page
@model Algora.Erp.Web.Pages.Admin.Integrations.SalesforceModel
@{
    ViewData["Title"] = "Salesforce Integration";
}

<div class="container-fluid py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/Integrations">Integrations</a></li>
            <li class="breadcrumb-item active">Salesforce</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1">Salesforce Integration</h4>
            <p class="text-muted mb-0">Configure your Salesforce connection settings</p>
        </div>
        @if (Model.IsConnected)
        {
            <span class="badge bg-success fs-6">Connected</span>
        }
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card border">
                <div class="card-header bg-white">
                    <h5 class="mb-0">Connection Settings</h5>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Client ID (Consumer Key)</label>
                                <input type="text" class="form-control" asp-for="ClientId" placeholder="Enter your Salesforce Client ID">
                                <small class="text-muted">From your Connected App settings</small>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Client Secret (Consumer Secret)</label>
                                <input type="password" class="form-control" asp-for="ClientSecret" placeholder="Enter your Client Secret">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Username</label>
                                <input type="text" class="form-control" asp-for="Username" placeholder="user@company.com">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Password</label>
                                <input type="password" class="form-control" asp-for="Password" placeholder="Enter your password">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Security Token</label>
                                <input type="password" class="form-control" asp-for="SecurityToken" placeholder="Enter your security token">
                                <small class="text-muted">Reset from Salesforce: Setup → My Personal Information → Reset Security Token</small>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Instance URL</label>
                                <select class="form-select" asp-for="InstanceUrl">
                                    <option value="https://login.salesforce.com">Production (login.salesforce.com)</option>
                                    <option value="https://test.salesforce.com">Sandbox (test.salesforce.com)</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Sync Interval (minutes)</label>
                                <input type="number" class="form-control" asp-for="SyncIntervalMinutes" min="5" max="1440">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">API Version</label>
                                <input type="text" class="form-control" asp-for="ApiVersion" readonly>
                            </div>
                        </div>

                        <hr class="my-4">

                        <h6 class="mb-3">Sync Options</h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="SyncContacts" id="syncContacts">
                                    <label class="form-check-label" for="syncContacts">Sync Contacts</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="SyncLeads" id="syncLeads">
                                    <label class="form-check-label" for="syncLeads">Sync Leads</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="SyncOpportunities" id="syncOpportunities">
                                    <label class="form-check-label" for="syncOpportunities">Sync Opportunities</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" asp-for="SyncAccounts" id="syncAccounts">
                                    <label class="form-check-label" for="syncAccounts">Sync Accounts</label>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 d-flex gap-2">
                            <button type="submit" class="btn btn-primary">Save Settings</button>
                            <button type="submit" asp-page-handler="Test" class="btn btn-outline-secondary">Test Connection</button>
                            @if (Model.IsConnected)
                            {
                                <button type="submit" asp-page-handler="Disconnect" class="btn btn-outline-danger ms-auto">Disconnect</button>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border mb-4">
                <div class="card-header bg-white">
                    <h6 class="mb-0">Setup Instructions</h6>
                </div>
                <div class="card-body">
                    <ol class="mb-0 ps-3">
                        <li class="mb-2">Go to Salesforce Setup</li>
                        <li class="mb-2">Search for "App Manager"</li>
                        <li class="mb-2">Create a new Connected App</li>
                        <li class="mb-2">Enable OAuth Settings</li>
                        <li class="mb-2">Add these scopes:
                            <ul class="mt-1">
                                <li>Access and manage data (api)</li>
                                <li>Perform requests (chatter_api)</li>
                                <li>Full access (full)</li>
                            </ul>
                        </li>
                        <li class="mb-2">Copy the Consumer Key and Secret</li>
                        <li>Get your Security Token from your profile</li>
                    </ol>
                </div>
            </div>

            @if (Model.IsConnected)
            {
                <div class="card border">
                    <div class="card-header bg-white">
                        <h6 class="mb-0">Quick Actions</h6>
                    </div>
                    <div class="card-body">
                        <form method="post" asp-page-handler="Sync">
                            <button type="submit" class="btn btn-primary w-100 mb-2">
                                <i class="bi bi-arrow-repeat me-2"></i>Sync Now
                            </button>
                        </form>
                        <a href="/Admin/Integrations/SyncHistory?crm=Salesforce" class="btn btn-outline-secondary w-100">
                            <i class="bi bi-clock-history me-2"></i>View Sync History
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
