@model Algora.Erp.Web.Pages.HR.Positions.PositionsTableViewModel

@foreach (var pos in Model.Positions)
{
    <tr class="hover:bg-gray-50">
        <td class="px-6 py-4">
            <div class="flex items-center">
                <div class="bg-blue-100 rounded-full flex items-center justify-center mr-3"
                     style="width: 40px; height: 40px;">
                    <i class="bi bi-person-badge text-blue-600"></i>
                </div>
                <div>
                    <h6 class="font-semibold text-gray-900 mb-0">@pos.Title</h6>
                    @if (!string.IsNullOrEmpty(pos.Description))
                    {
                        <span class="text-sm text-gray-500">@(pos.Description.Length > 50 ? pos.Description.Substring(0, 50) + "..." : pos.Description)</span>
                    }
                </div>
            </div>
        </td>
        <td class="px-6 py-4">
            <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">@pos.Code</span>
        </td>
        <td class="px-6 py-4">
            @if (pos.Department != null)
            {
                <span>@pos.Department.Name</span>
            }
            else
            {
                <span class="text-gray-500">Not assigned</span>
            }
        </td>
        <td class="px-6 py-4">
            @if (pos.MinSalary.HasValue && pos.MaxSalary.HasValue)
            {
                <span>@pos.MinSalary.Value.ToString("C0") - @pos.MaxSalary.Value.ToString("C0")</span>
            }
            else if (pos.MinSalary.HasValue)
            {
                <span>From @pos.MinSalary.Value.ToString("C0")</span>
            }
            else if (pos.MaxSalary.HasValue)
            {
                <span>Up to @pos.MaxSalary.Value.ToString("C0")</span>
            }
            else
            {
                <span class="text-gray-500">Not specified</span>
            }
        </td>
        <td class="px-6 py-4">
            <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-blue-100 text-blue-800">@pos.Employees.Count</span>
        </td>
        <td class="px-6 py-4">
            @if (pos.IsActive)
            {
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-emerald-100 text-emerald-800">Active</span>
            }
            else
            {
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">Inactive</span>
            }
        </td>
        <td class="px-6 py-4 text-right">
            <div class="relative inline-block">
                <button class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg" id="dropdownPos@(pos.Id)" data-dropdown-toggle="dropdownMenuPos@(pos.Id)" data-dropdown-placement="bottom-end">
                    <i class="bi bi-three-dots-vertical"></i>
                </button>
                <div class="z-50 hidden absolute right-0 mt-2 bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuPos@(pos.Id)">
                    <ul class="py-2 text-sm text-gray-700">
                        <li>
                            <a class="flex items-center px-4 py-2 hover:bg-gray-100 cursor-pointer"
                               hx-get="/HR/Positions?handler=EditForm&id=@pos.Id"
                               hx-target="#formContainer"
                               data-modal-target="positionModal" data-modal-toggle="positionModal">
                                <i class="bi bi-pencil mr-2"></i> Edit
                            </a>
                        </li>
                        <li>
                            <a class="flex items-center px-4 py-2 hover:bg-gray-100" href="/HR/Employees?positionId=@pos.Id">
                                <i class="bi bi-people mr-2"></i> View Employees
                            </a>
                        </li>
                    </ul>
                    <div class="py-2">
                        <a class="flex items-center px-4 py-2 text-red-600 hover:bg-gray-100 cursor-pointer"
                           hx-delete="/HR/Positions?handler=&id=@pos.Id"
                           hx-target="#tableContent"
                           hx-confirm="Are you sure you want to delete this position?">
                            <i class="bi bi-trash mr-2"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </td>
    </tr>
}

@if (!Model.Positions.Any())
{
    <tr>
        <td colspan="7" class="text-center py-12">
            <div class="text-gray-500">
                <i class="bi bi-person-badge text-4xl block mb-2"></i>
                <p class="mb-0">No positions found</p>
            </div>
        </td>
    </tr>
}

<tr id="paginationRow">
    <td colspan="7" class="px-6 py-4 border-t border-gray-200">
        @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", Model.Pagination)
    </td>
</tr>
<script>
    // Re-initialize Flowbite dropdowns and HTMX after content swap
    if (typeof initFlowbite === 'function') { initFlowbite(); }
    if (typeof htmx !== 'undefined') { htmx.process(document.body); }
</script>