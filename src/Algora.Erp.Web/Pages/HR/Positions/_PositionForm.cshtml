@model Algora.Erp.Web.Pages.HR.Positions.PositionFormViewModel

<form hx-post="/HR/Positions" hx-target="#tableContent" hx-swap="innerHTML"
      hx-on::after-request="if(event.detail.successful) bootstrap.Modal.getInstance(document.getElementById('positionModal')).hide()">

    @if (Model.IsEdit && Model.Position != null)
    {
        <input type="hidden" name="Id" value="@Model.Position.Id" />
    }

    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Position Title <span class="text-danger">*</span></label>
            <input type="text" class="form-control" name="Title" required
                   value="@(Model.Position?.Title)" placeholder="Enter position title">
        </div>
        <div class="col-md-6">
            <label class="form-label">Code</label>
            <input type="text" class="form-control" readonly
                   value="@(Model.Position?.Code ?? "Auto-generated")"
                   placeholder="Auto-generated">
        </div>
        <div class="col-12">
            <label class="form-label">Description</label>
            <textarea class="form-control" name="Description" rows="3"
                      placeholder="Enter position description">@Model.Position?.Description</textarea>
        </div>
        <div class="col-md-12">
            <label class="form-label">Department</label>
            <select class="form-select" name="DepartmentId">
                <option value="">Select Department</option>
                @foreach (var dept in Model.Departments)
                {
                    if (Model.Position?.DepartmentId == dept.Id)
                    {
                        <option value="@dept.Id" selected>@dept.Name</option>
                    }
                    else
                    {
                        <option value="@dept.Id">@dept.Name</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-6">
            <label class="form-label">Minimum Salary</label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input type="number" class="form-control" name="MinSalary" step="0.01"
                       value="@(Model.Position?.MinSalary)" placeholder="0.00">
            </div>
        </div>
        <div class="col-md-6">
            <label class="form-label">Maximum Salary</label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input type="number" class="form-control" name="MaxSalary" step="0.01"
                       value="@(Model.Position?.MaxSalary)" placeholder="0.00">
            </div>
        </div>
        <div class="col-12">
            <div class="form-check form-switch">
                @if (Model.Position?.IsActive ?? true)
                {
                    <input class="form-check-input" type="checkbox" name="IsActive" value="true" id="isActive" checked>
                }
                else
                {
                    <input class="form-check-input" type="checkbox" name="IsActive" value="true" id="isActive">
                }
                <label class="form-check-label" for="isActive">Active</label>
            </div>
        </div>
    </div>

    <div class="modal-footer px-0 pb-0 mt-4">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">
            @(Model.IsEdit ? "Update Position" : "Create Position")
        </button>
    </div>
</form>
