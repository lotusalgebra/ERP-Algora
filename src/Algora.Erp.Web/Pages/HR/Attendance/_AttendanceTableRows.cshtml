@model Algora.Erp.Web.Pages.HR.Attendance.AttendanceTableViewModel
@using Algora.Erp.Domain.Entities.HR

@foreach (var att in Model.Attendances)
{
    <tr class="hover:bg-gray-50">
        <td class="px-6 py-4">
            <div class="flex items-center">
                <div class="bg-primary-600 rounded-full text-white flex items-center justify-center mr-3 text-sm"
                     style="width: 40px; height: 40px;">
                    @att.Employee.FirstName[0]@att.Employee.LastName[0]
                </div>
                <div>
                    <h6 class="font-semibold text-gray-900 mb-0">@att.Employee.FirstName @att.Employee.LastName</h6>
                    <span class="text-sm text-gray-500">@att.Employee.EmployeeCode Â· @(att.Employee.Department?.Name ?? "No Dept")</span>
                </div>
            </div>
        </td>
        <td class="px-6 py-4">@att.Date.ToString("MMM dd, yyyy")</td>
        <td class="px-6 py-4">
            @if (att.CheckInTime.HasValue)
            {
                <span>@att.CheckInTime.Value.ToString(@"hh\:mm")</span>
                @if (att.IsLate)
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-amber-100 text-amber-800 ml-1">Late</span>
                }
            }
            else
            {
                <span class="text-gray-500">-</span>
            }
        </td>
        <td class="px-6 py-4">
            @if (att.CheckOutTime.HasValue)
            {
                <span>@att.CheckOutTime.Value.ToString(@"hh\:mm")</span>
                @if (att.IsEarlyDeparture)
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-amber-100 text-amber-800 ml-1">Early</span>
                }
            }
            else
            {
                <span class="text-gray-500">-</span>
            }
        </td>
        <td class="px-6 py-4">
            @if (att.TotalWorkHours.HasValue)
            {
                <span>@att.TotalWorkHours.Value.ToString(@"hh\:mm")</span>
                @if (att.OvertimeHours.HasValue && att.OvertimeHours.Value.TotalMinutes > 0)
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-blue-100 text-blue-800 ml-1">+@att.OvertimeHours.Value.ToString(@"hh\:mm") OT</span>
                }
            }
            else
            {
                <span class="text-gray-500">-</span>
            }
        </td>
        <td class="px-6 py-4">
            @switch (att.Status)
            {
                case AttendanceStatus.Present:
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-emerald-100 text-emerald-800">Present</span>
                    break;
                case AttendanceStatus.Absent:
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-red-100 text-red-800">Absent</span>
                    break;
                case AttendanceStatus.Late:
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-amber-100 text-amber-800">Late</span>
                    break;
                case AttendanceStatus.HalfDay:
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-blue-100 text-blue-800">Half Day</span>
                    break;
                case AttendanceStatus.OnLeave:
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">On Leave</span>
                    break;
                case AttendanceStatus.Holiday:
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-primary-100 text-primary-800">Holiday</span>
                    break;
                case AttendanceStatus.Weekend:
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">Weekend</span>
                    break;
                case AttendanceStatus.WorkFromHome:
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-blue-100 text-blue-800">WFH</span>
                    break;
            }
        </td>
        <td class="px-6 py-4 text-right">
            <div class="relative inline-block">
                <button class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg" id="dropdownAtt@(att.Id)" data-dropdown-toggle="dropdownMenuAtt@(att.Id)" data-dropdown-placement="bottom-end">
                    <i class="bi bi-three-dots-vertical"></i>
                </button>
                <div class="z-50 hidden absolute right-0 mt-2 bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuAtt@(att.Id)">
                    <ul class="py-2 text-sm text-gray-700">
                        <li>
                            <a class="flex items-center px-4 py-2 hover:bg-gray-100 cursor-pointer"
                               hx-get="/HR/Attendance?handler=EditForm&id=@att.Id"
                               hx-target="#formContainer"
                               data-modal-target="attendanceModal" data-modal-toggle="attendanceModal">
                                <i class="bi bi-pencil mr-2"></i> Edit
                            </a>
                        </li>
                    </ul>
                    <div class="py-2">
                        <a class="flex items-center px-4 py-2 text-red-600 hover:bg-gray-100 cursor-pointer"
                           hx-delete="/HR/Attendance?handler=&id=@att.Id"
                           hx-target="#tableContent"
                           hx-confirm="Are you sure you want to delete this attendance record?">
                            <i class="bi bi-trash mr-2"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </td>
    </tr>
}

@if (!Model.Attendances.Any())
{
    <tr>
        <td colspan="7" class="text-center py-12">
            <div class="text-gray-500">
                <i class="bi bi-calendar-check text-4xl block mb-2"></i>
                <p class="mb-0">No attendance records found for this date</p>
            </div>
        </td>
    </tr>
}

<script>
    document.getElementById('paginationInfo').textContent =
        'Showing @((Model.Page - 1) * Model.PageSize + 1) to @(Math.Min(Model.Page * Model.PageSize, Model.TotalRecords)) of @Model.TotalRecords entries';

    var paginationHtml = '';
    @if (Model.TotalPages > 1)
    {
        <text>
        paginationHtml = '<ul class="inline-flex -space-x-px text-sm">';
        </text>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            var activeClass = i == Model.Page ? "text-primary-600 border border-primary-300 bg-primary-50 hover:bg-primary-100 hover:text-primary-700" : "text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700";
            <text>
            paginationHtml += '<li><a class="flex items-center justify-center px-3 h-8 leading-tight @activeClass" href="#" hx-get="/HR/Attendance?handler=Table&page=@i&dateFilter=@Model.DateFilter" hx-target="#tableContent" hx-include="#searchInput,#statusFilter">@i</a></li>';
            </text>
        }
        @:paginationHtml += '</ul>';
    }
    document.querySelector('#paginationNav').innerHTML = paginationHtml;
    htmx.process(document.getElementById('paginationNav'));
</script>
