@model Algora.Erp.Web.Pages.HR.Attendance.AttendanceFormViewModel
@using Algora.Erp.Domain.Entities.HR

<form hx-post="/HR/Attendance" hx-target="#tableContent" hx-swap="innerHTML"
      hx-on::after-request="if(event.detail.successful) bootstrap.Modal.getInstance(document.getElementById('attendanceModal')).hide()">

    @if (Model.IsEdit && Model.Attendance != null)
    {
        <input type="hidden" name="Id" value="@Model.Attendance.Id" />
    }

    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Employee <span class="text-danger">*</span></label>
            <select class="form-select" name="EmployeeId" required @(Model.IsEdit ? "disabled" : "")>
                <option value="">Select Employee</option>
                @foreach (var emp in Model.Employees)
                {
                    if (Model.Attendance?.EmployeeId == emp.Id)
                    {
                        <option value="@emp.Id" selected>@emp.FirstName @emp.LastName (@emp.EmployeeCode)</option>
                    }
                    else
                    {
                        <option value="@emp.Id">@emp.FirstName @emp.LastName (@emp.EmployeeCode)</option>
                    }
                }
            </select>
            @if (Model.IsEdit && Model.Attendance != null)
            {
                <input type="hidden" name="EmployeeId" value="@Model.Attendance.EmployeeId" />
            }
        </div>
        <div class="col-md-6">
            <label class="form-label">Date <span class="text-danger">*</span></label>
            <input type="date" class="form-control" name="Date" required
                   value="@(Model.Attendance?.Date.ToString("yyyy-MM-dd") ?? DateTime.UtcNow.ToString("yyyy-MM-dd"))">
        </div>
        <div class="col-md-6">
            <label class="form-label">Check-In Time</label>
            <input type="time" class="form-control" name="CheckInTime"
                   value="@(Model.Attendance?.CheckInTime?.ToString(@"hh\:mm"))">
        </div>
        <div class="col-md-6">
            <label class="form-label">Check-Out Time</label>
            <input type="time" class="form-control" name="CheckOutTime"
                   value="@(Model.Attendance?.CheckOutTime?.ToString(@"hh\:mm"))">
        </div>
        <div class="col-md-6">
            <label class="form-label">Status <span class="text-danger">*</span></label>
            <select class="form-select" name="Status" required>
                @foreach (AttendanceStatus status in Enum.GetValues(typeof(AttendanceStatus)))
                {
                    if (Model.Attendance?.Status == status)
                    {
                        <option value="@((int)status)" selected>@status</option>
                    }
                    else
                    {
                        <option value="@((int)status)">@status</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-6">
            <label class="form-label d-block">&nbsp;</label>
            <div class="form-check mt-2">
                @if (Model.Attendance?.IsLate ?? false)
                {
                    <input class="form-check-input" type="checkbox" name="IsLate" value="true" id="isLate" checked>
                }
                else
                {
                    <input class="form-check-input" type="checkbox" name="IsLate" value="true" id="isLate">
                }
                <label class="form-check-label" for="isLate">Mark as Late Arrival</label>
            </div>
        </div>
        <div class="col-12">
            <label class="form-label">Notes</label>
            <textarea class="form-control" name="Notes" rows="2"
                      placeholder="Add notes (optional)">@Model.Attendance?.Notes</textarea>
        </div>
    </div>

    <div class="modal-footer px-0 pb-0 mt-4">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">
            @(Model.IsEdit ? "Update Attendance" : "Add Attendance")
        </button>
    </div>
</form>
