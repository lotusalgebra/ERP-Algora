@page
@model Algora.Erp.Web.Pages.HR.Attendance.IndexModel
@using Algora.Erp.Domain.Entities.HR
@{
    ViewData["Title"] = "Attendance";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Attendance</h1>
            <nav class="flex mt-1" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 text-sm text-gray-500">
                    <li><a href="/" class="hover:text-primary-600">Dashboard</a></li>
                    <li><span class="mx-1">/</span></li>
                    <li><a href="/HR" class="hover:text-primary-600">HR</a></li>
                    <li><span class="mx-1">/</span></li>
                    <li class="text-gray-900 font-medium">Attendance</li>
                </ol>
            </nav>
        </div>
        <div class="flex gap-2">
            <button type="button" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-primary-700 border border-primary-700 hover:bg-primary-700 hover:text-white focus:ring-4 focus:ring-primary-300 rounded-lg transition-colors"
                    hx-get="/HR/Attendance?handler=BulkCheckIn"
                    hx-target="#formContainer"
                    >
                <i class="bi bi-clock mr-2"></i> Bulk Check-In
            </button>
            <button type="button" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition-colors"
                    hx-get="/HR/Attendance?handler=CreateForm"
                    hx-target="#formContainer"
                    >
                <i class="bi bi-plus-lg mr-2"></i> Add Attendance
            </button>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-emerald-100 rounded-lg">
                    <i class="bi bi-person-check text-xl text-emerald-600"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm text-gray-500 mb-1">Present Today</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.PresentToday</h3>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-red-100 rounded-lg">
                    <i class="bi bi-person-x text-xl text-red-600"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm text-gray-500 mb-1">Absent Today</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.AbsentToday</h3>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-amber-100 rounded-lg">
                    <i class="bi bi-clock-history text-xl text-amber-600"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm text-gray-500 mb-1">Late Arrivals</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.LateToday</h3>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-blue-100 rounded-lg">
                    <i class="bi bi-house text-xl text-blue-600"></i>
                </div>
                <div class="ml-4">
                    <p class="text-sm text-gray-500 mb-1">Work From Home</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.WfhToday</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Attendance Table -->
    <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <div class="p-4 border-b border-gray-200">
            <div class="grid grid-cols-1 md:grid-cols-12 gap-3">
                <div class="md:col-span-4">
                    <div class="relative">
                        <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                            <i class="bi bi-search text-gray-400"></i>
                        </div>
                        <input type="text"
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full ps-10 p-2.5"
                               placeholder="Search employee..."
                               id="searchInput"
                               hx-get="/HR/Attendance?handler=Table"
                               hx-trigger="keyup changed delay:300ms"
                               hx-target="#tableContent"
                               hx-include="#statusFilter,#dateFilter"
                               name="search">
                    </div>
                </div>
                <div class="md:col-span-3">
                    <input type="date" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                           id="dateFilter" name="dateFilter"
                           value="@DateTime.UtcNow.ToString("yyyy-MM-dd")"
                           hx-get="/HR/Attendance?handler=Table"
                           hx-trigger="change"
                           hx-target="#tableContent"
                           hx-include="#searchInput,#statusFilter">
                </div>
                <div class="md:col-span-3">
                    <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                            id="statusFilter" name="statusFilter"
                            hx-get="/HR/Attendance?handler=Table"
                            hx-trigger="change"
                            hx-target="#tableContent"
                            hx-include="#searchInput,#dateFilter">
                        <option value="">All Status</option>
                        <option value="0">Present</option>
                        <option value="1">Absent</option>
                        <option value="2">Late</option>
                        <option value="3">Half Day</option>
                        <option value="4">On Leave</option>
                        <option value="7">Work From Home</option>
                    </select>
                </div>
                <div class="md:col-span-2 text-right">
                    <button class="inline-flex items-center px-3 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50"
                            hx-get="/HR/Attendance?handler=Export&dateFilter=@DateTime.UtcNow.ToString("yyyy-MM-dd")">
                        <i class="bi bi-download mr-2"></i> Export
                    </button>
                </div>
            </div>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3">Employee</th>
                        <th scope="col" class="px-6 py-3">Date</th>
                        <th scope="col" class="px-6 py-3">Check In</th>
                        <th scope="col" class="px-6 py-3">Check Out</th>
                        <th scope="col" class="px-6 py-3">Work Hours</th>
                        <th scope="col" class="px-6 py-3">Status</th>
                        <th scope="col" class="px-6 py-3 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody id="tableContent" hx-get="/HR/Attendance?handler=Table" hx-trigger="load">
                    <tr>
                        <td colspan="7" class="px-6 py-8 text-center">
                            <div class="inline-block animate-spin rounded-full h-6 w-6 border-b-2 border-primary-600"></div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="px-6 py-4 border-t border-gray-200">
            <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
                <div class="text-sm text-gray-500" id="paginationInfo">
                    Showing 0 entries
                </div>
                <nav id="paginationNav">
                    <ul class="inline-flex -space-x-px text-sm">
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<!-- Attendance Modal -->
<div id="attendanceModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-2xl max-h-full">
        <div class="relative bg-white rounded-lg shadow">
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t">
                <h3 class="text-xl font-semibold text-gray-900">Attendance</h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ml-auto inline-flex justify-center items-center" onclick="closeModal('attendanceModal')">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="p-4 md:p-5" id="formContainer">
                <div class="text-center py-8">
                    <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-primary-600"></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Refresh table after modal closes
        document.getElementById('attendanceModal')?.addEventListener('hidden.bs.modal', function () {
            htmx.trigger('#tableContent', 'load');
        });
    </script>
}
