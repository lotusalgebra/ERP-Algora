@model Algora.Erp.Web.Pages.HR.Leave.LeaveFormViewModel
@using Algora.Erp.Domain.Entities.HR

<form hx-post="/HR/Leave" hx-target="#tableContent" hx-swap="innerHTML"
      hx-on::after-request="if(event.detail.successful) { window.AlgoraModal.hide('leaveModal'); }">

    @if (Model.IsEdit && Model.LeaveRequest != null)
    {
        <input type="hidden" name="Id" value="@Model.LeaveRequest.Id" />
    }

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Employee <span class="text-red-500">*</span></label>
            <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5 @(Model.IsEdit ? "bg-gray-100" : "")" name="EmployeeId" required @(Model.IsEdit ? "disabled" : "")>
                <option value="">Select Employee</option>
                @foreach (var emp in Model.Employees)
                {
                    if (Model.LeaveRequest?.EmployeeId == emp.Id)
                    {
                        <option value="@emp.Id" selected>@emp.FirstName @emp.LastName (@emp.EmployeeCode)</option>
                    }
                    else
                    {
                        <option value="@emp.Id">@emp.FirstName @emp.LastName (@emp.EmployeeCode)</option>
                    }
                }
            </select>
            @if (Model.IsEdit && Model.LeaveRequest != null)
            {
                <input type="hidden" name="EmployeeId" value="@Model.LeaveRequest.EmployeeId" />
            }
        </div>
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Leave Type <span class="text-red-500">*</span></label>
            <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="LeaveType" required>
                @foreach (LeaveType type in Enum.GetValues(typeof(LeaveType)))
                {
                    if (Model.LeaveRequest?.LeaveType == type)
                    {
                        <option value="@((int)type)" selected>@type</option>
                    }
                    else
                    {
                        <option value="@((int)type)">@type</option>
                    }
                }
            </select>
        </div>
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Start Date <span class="text-red-500">*</span></label>
            <input type="date" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="StartDate" required
                   value="@(Model.LeaveRequest?.StartDate.ToString("yyyy-MM-dd") ?? DateTime.UtcNow.AddDays(1).ToString("yyyy-MM-dd"))">
        </div>
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">End Date <span class="text-red-500">*</span></label>
            <input type="date" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="EndDate" required
                   value="@(Model.LeaveRequest?.EndDate.ToString("yyyy-MM-dd") ?? DateTime.UtcNow.AddDays(1).ToString("yyyy-MM-dd"))">
        </div>
        <div class="flex items-end">
            <label class="relative inline-flex items-center cursor-pointer">
                @if (Model.LeaveRequest?.IsHalfDay ?? false)
                {
                    <input type="checkbox" class="sr-only peer" name="IsHalfDay" value="true" id="isHalfDay" checked onchange="toggleHalfDayType()">
                }
                else
                {
                    <input type="checkbox" class="sr-only peer" name="IsHalfDay" value="true" id="isHalfDay" onchange="toggleHalfDayType()">
                }
                <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-primary-300 rounded-full peer peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:start-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-primary-600"></div>
                <span class="ms-3 text-sm font-medium text-gray-900">Half Day Leave</span>
            </label>
        </div>
        <div id="halfDayTypeContainer" style="@(Model.LeaveRequest?.IsHalfDay == true ? "" : "display: none;")">
            <label class="block text-sm font-medium text-gray-700 mb-1">Half Day Type</label>
            <select class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="HalfDayType">
                @foreach (HalfDayType type in Enum.GetValues(typeof(HalfDayType)))
                {
                    if (Model.LeaveRequest?.HalfDayType == type)
                    {
                        <option value="@((int)type)" selected>@type</option>
                    }
                    else
                    {
                        <option value="@((int)type)">@type</option>
                    }
                }
            </select>
        </div>
        <div class="md:col-span-2">
            <label class="block text-sm font-medium text-gray-700 mb-1">Reason <span class="text-red-500">*</span></label>
            <textarea class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Reason" rows="3" required
                      placeholder="Please provide the reason for leave">@Model.LeaveRequest?.Reason</textarea>
        </div>
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Emergency Contact</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="EmergencyContact"
                   value="@Model.LeaveRequest?.EmergencyContact"
                   placeholder="Phone number during leave">
        </div>
        <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Handover Notes</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="HandoverNotes"
                   value="@Model.LeaveRequest?.HandoverNotes"
                   placeholder="Who will cover your work?">
        </div>
    </div>

    <div class="flex justify-end gap-3 mt-6 pt-4 border-t border-gray-200">
        <button type="button" class="px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-lg hover:bg-gray-50" onclick="closeModal('leaveModal')">Cancel</button>
        <button type="submit" class="px-4 py-2 text-sm font-medium text-white bg-primary-600 rounded-lg hover:bg-primary-700">
            @(Model.IsEdit ? "Update Request" : "Submit Request")
        </button>
    </div>
</form>

<script>
    function toggleHalfDayType() {
        var container = document.getElementById('halfDayTypeContainer');
        var checkbox = document.getElementById('isHalfDay');
        container.style.display = checkbox.checked ? '' : 'none';
    }
</script>
