@model Algora.Erp.Web.Pages.HR.Leave.LeaveTableViewModel
@using Algora.Erp.Domain.Entities.HR

@foreach (var leave in Model.LeaveRequests)
{
    <tr class="hover:bg-gray-50">
        <td class="px-6 py-4">
            <div class="flex items-center">
                <div class="bg-primary-600 rounded-full text-white flex items-center justify-center mr-3 text-sm"
                     style="width: 40px; height: 40px;">
                    @leave.Employee.FirstName[0]@leave.Employee.LastName[0]
                </div>
                <div>
                    <h6 class="font-semibold text-gray-900 mb-0">@leave.Employee.FirstName @leave.Employee.LastName</h6>
                    <span class="text-sm text-gray-500">@leave.Employee.EmployeeCode Â· @(leave.Employee.Department?.Name ?? "No Dept")</span>
                </div>
            </div>
        </td>
        <td class="px-6 py-4">
            @switch (leave.LeaveType)
            {
                case LeaveType.Annual:
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-emerald-100 text-emerald-800">Annual</span>
                    break;
                case LeaveType.Sick:
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-red-100 text-red-800">Sick</span>
                    break;
                case LeaveType.Personal:
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-blue-100 text-blue-800">Personal</span>
                    break;
                case LeaveType.Maternity:
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-pink-100 text-pink-800">Maternity</span>
                    break;
                case LeaveType.Paternity:
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-primary-100 text-primary-800">Paternity</span>
                    break;
                case LeaveType.Bereavement:
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">Bereavement</span>
                    break;
                case LeaveType.Unpaid:
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-800 text-white">Unpaid</span>
                    break;
                case LeaveType.Compensatory:
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-amber-100 text-amber-800">Compensatory</span>
                    break;
                default:
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">@leave.LeaveType</span>
                    break;
            }
        </td>
        <td class="px-6 py-4">
            @leave.StartDate.ToString("MMM dd") - @leave.EndDate.ToString("MMM dd, yyyy")
            @if (leave.IsHalfDay)
            {
                <br><span class="text-sm text-gray-500">(@leave.HalfDayType Half)</span>
            }
        </td>
        <td class="px-6 py-4">
            <span class="font-semibold">@leave.TotalDays</span> day(s)
        </td>
        <td class="px-6 py-4">
            @switch (leave.Status)
            {
                case LeaveStatus.Pending:
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-amber-100 text-amber-800">Pending</span>
                    break;
                case LeaveStatus.Approved:
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-emerald-100 text-emerald-800">Approved</span>
                    @if (leave.ApprovedAt.HasValue)
                    {
                        <br><span class="text-sm text-gray-500">@leave.ApprovedAt.Value.ToString("MMM dd")</span>
                    }
                    break;
                case LeaveStatus.Rejected:
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-red-100 text-red-800">Rejected</span>
                    break;
                case LeaveStatus.Cancelled:
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">Cancelled</span>
                    break;
            }
        </td>
        <td class="px-6 py-4">
            <span title="@leave.Reason">
                @(leave.Reason.Length > 30 ? leave.Reason.Substring(0, 30) + "..." : leave.Reason)
            </span>
        </td>
        <td class="px-6 py-4 text-right">
            <div class="relative inline-block">
                <button class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg" id="dropdownLeave@(leave.Id)" data-dropdown-toggle="dropdownMenuLeave@(leave.Id)" data-dropdown-placement="bottom-end">
                    <i class="bi bi-three-dots-vertical"></i>
                </button>
                <div class="z-50 hidden absolute right-0 mt-2 bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuLeave@(leave.Id)">
                    <ul class="py-2 text-sm text-gray-700">
                        @if (leave.Status == LeaveStatus.Pending)
                        {
                            <li>
                                <a class="flex items-center px-4 py-2 text-emerald-600 hover:bg-gray-100 cursor-pointer"
                                   hx-post="/HR/Leave?handler=Approve&id=@leave.Id"
                                   hx-target="#tableContent"
                                   hx-confirm="Approve this leave request?">
                                    <i class="bi bi-check-circle mr-2"></i> Approve
                                </a>
                            </li>
                            <li>
                                <a class="flex items-center px-4 py-2 text-red-600 hover:bg-gray-100 cursor-pointer"
                                   hx-post="/HR/Leave?handler=Reject&id=@leave.Id"
                                   hx-target="#tableContent"
                                   hx-confirm="Reject this leave request?">
                                    <i class="bi bi-x-circle mr-2"></i> Reject
                                </a>
                            </li>
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100 cursor-pointer"
                                   hx-get="/HR/Leave?handler=EditForm&id=@leave.Id"
                                   hx-target="#formContainer"
                                   data-modal-target="leaveModal" data-modal-toggle="leaveModal">
                                    <i class="bi bi-pencil mr-2"></i> Edit
                                </a>
                            </li>
                        }
                        <li>
                            <a class="flex items-center px-4 py-2 hover:bg-gray-100 cursor-pointer"
                               onclick="alert('Reason: @leave.Reason\n\nEmergency Contact: @(leave.EmergencyContact ?? "N/A")\n\nHandover Notes: @(leave.HandoverNotes ?? "N/A")')">
                                <i class="bi bi-eye mr-2"></i> View Details
                            </a>
                        </li>
                    </ul>
                    <div class="py-2">
                        <a class="flex items-center px-4 py-2 text-red-600 hover:bg-gray-100 cursor-pointer"
                           hx-delete="/HR/Leave?handler=&id=@leave.Id"
                           hx-target="#tableContent"
                           hx-confirm="Are you sure you want to delete this leave request?">
                            <i class="bi bi-trash mr-2"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </td>
    </tr>
}

@if (!Model.LeaveRequests.Any())
{
    <tr>
        <td colspan="7" class="text-center py-12">
            <div class="text-gray-500">
                <i class="bi bi-calendar-x text-4xl block mb-2"></i>
                <p class="mb-0">No leave requests found</p>
            </div>
        </td>
    </tr>
}

<tr id="paginationRow">
    <td colspan="7" class="px-6 py-4 border-t border-gray-200">
        @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", Model.Pagination)
    </td>
</tr>
<script>
    // Re-initialize Flowbite dropdowns and HTMX after content swap
    if (typeof initFlowbite === 'function') { initFlowbite(); }
    if (typeof htmx !== 'undefined') { htmx.process(document.body); }
</script>