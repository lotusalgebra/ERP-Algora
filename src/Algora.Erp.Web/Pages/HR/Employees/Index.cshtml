@page
@model Algora.Erp.Web.Pages.HR.Employees.IndexModel
@{
    ViewData["Title"] = "Employees";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h4 class="mb-1">Employees</h4>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
                <li class="breadcrumb-item"><a href="/HR">HR</a></li>
                <li class="breadcrumb-item active">Employees</li>
            </ol>
        </nav>
    </div>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#employeeModal"
            hx-get="/HR/Employees?handler=CreateForm" hx-target="#employeeModalContent" hx-swap="innerHTML">
        <i class="bi bi-plus-lg me-1"></i> Add Employee
    </button>
</div>

<!-- Stats Cards -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="d-flex align-items-center gap-3">
                <div class="stat-icon bg-primary bg-opacity-10 text-primary">
                    <i class="bi bi-people-fill"></i>
                </div>
                <div>
                    <div class="stat-value" id="totalEmployees">@Model.TotalEmployees</div>
                    <div class="stat-label">Total Employees</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="d-flex align-items-center gap-3">
                <div class="stat-icon bg-success bg-opacity-10 text-success">
                    <i class="bi bi-person-check-fill"></i>
                </div>
                <div>
                    <div class="stat-value" id="activeEmployees">@Model.ActiveEmployees</div>
                    <div class="stat-label">Active</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="d-flex align-items-center gap-3">
                <div class="stat-icon bg-warning bg-opacity-10 text-warning">
                    <i class="bi bi-person-dash-fill"></i>
                </div>
                <div>
                    <div class="stat-value" id="onLeaveEmployees">@Model.OnLeaveEmployees</div>
                    <div class="stat-label">On Leave</div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card stat-card">
            <div class="d-flex align-items-center gap-3">
                <div class="stat-icon bg-info bg-opacity-10 text-info">
                    <i class="bi bi-calendar-event"></i>
                </div>
                <div>
                    <div class="stat-value" id="newThisMonth">@Model.NewThisMonth</div>
                    <div class="stat-label">New This Month</div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Employees Table -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center py-3">
        <div class="d-flex align-items-center gap-3">
            <div class="input-group" style="width: 300px;">
                <span class="input-group-text bg-transparent"><i class="bi bi-search"></i></span>
                <input type="search" class="form-control" id="searchInput" placeholder="Search employees..."
                       hx-get="/HR/Employees?handler=Table" hx-trigger="keyup changed delay:300ms"
                       hx-target="#employeesTableBody" hx-include="[name='statusFilter']" name="search">
            </div>
            <select class="form-select" style="width: 150px;" name="statusFilter" id="statusFilter"
                    hx-get="/HR/Employees?handler=Table" hx-trigger="change"
                    hx-target="#employeesTableBody" hx-include="#searchInput">
                <option value="">All Status</option>
                <option value="Active">Active</option>
                <option value="OnLeave">On Leave</option>
                <option value="Suspended">Suspended</option>
                <option value="Terminated">Terminated</option>
            </select>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-download me-1"></i> Export
            </button>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light">
                <tr>
                    <th style="width: 40px;">
                        <input type="checkbox" class="form-check-input" id="selectAll">
                    </th>
                    <th>Employee</th>
                    <th>Department</th>
                    <th>Position</th>
                    <th>Employment Type</th>
                    <th>Hire Date</th>
                    <th>Status</th>
                    <th style="width: 100px;">Actions</th>
                </tr>
            </thead>
            <tbody id="employeesTableBody" hx-get="/HR/Employees?handler=Table" hx-trigger="load">
                <tr>
                    <td colspan="8" class="text-center py-4">
                        <div class="spinner-border spinner-border-sm text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <span class="ms-2">Loading employees...</span>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="card-footer d-flex justify-content-between align-items-center py-3">
        <div class="text-muted small">
            Showing <span id="showingFrom">0</span> to <span id="showingTo">0</span> of <span id="totalRecords">0</span> entries
        </div>
        <nav id="pagination">
            <!-- Pagination will be loaded via HTMX -->
        </nav>
    </div>
</div>

<!-- Employee Modal -->
<div class="modal fade" id="employeeModal" tabindex="-1" aria-labelledby="employeeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content" id="employeeModalContent">
            <!-- Content loaded via HTMX -->
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <i class="bi bi-exclamation-triangle text-warning" style="font-size: 3rem;"></i>
                <p class="mt-3 mb-0">Are you sure you want to delete this employee?</p>
                <p class="text-muted small">This action cannot be undone.</p>
            </div>
            <div class="modal-footer border-0 justify-content-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Select all checkbox
        document.getElementById('selectAll')?.addEventListener('change', function() {
            document.querySelectorAll('#employeesTableBody input[type="checkbox"]').forEach(cb => {
                cb.checked = this.checked;
            });
        });

        // Delete confirmation
        let deleteEmployeeId = null;
        window.confirmDelete = function(id) {
            deleteEmployeeId = id;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        };

        document.getElementById('confirmDelete')?.addEventListener('click', function() {
            if (deleteEmployeeId) {
                htmx.ajax('DELETE', `/HR/Employees/${deleteEmployeeId}`, {
                    target: '#employeesTableBody',
                    swap: 'innerHTML'
                }).then(() => {
                    bootstrap.Modal.getInstance(document.getElementById('deleteModal')).hide();
                    // Refresh stats
                    htmx.ajax('GET', '/HR/Employees?handler=Stats', {target: '#statsContainer'});
                });
            }
        });

        // Close modal on successful form submission
        document.body.addEventListener('htmx:afterSwap', function(evt) {
            if (evt.detail.target.id === 'employeesTableBody') {
                const modal = bootstrap.Modal.getInstance(document.getElementById('employeeModal'));
                if (modal) modal.hide();
            }
        });

        // Handle form submission success
        document.body.addEventListener('htmx:afterRequest', function(evt) {
            if (evt.detail.successful && evt.detail.requestConfig.verb === 'post') {
                const modal = bootstrap.Modal.getInstance(document.getElementById('employeeModal'));
                if (modal) modal.hide();
            }
        });
    </script>
}
