@model Algora.Erp.Web.Pages.HR.Employees.EmployeeFormViewModel

<div class="modal-header">
    <h5 class="modal-title">@(Model.IsEdit ? "Edit Employee" : "Add New Employee")</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
</div>
<form hx-post="/HR/Employees" hx-target="#employeesTableBody" hx-swap="innerHTML">
    @if (Model.IsEdit && Model.Employee != null)
    {
        <input type="hidden" name="Id" value="@Model.Employee.Id" />
    }
    <div class="modal-body">
        <!-- Nav tabs -->
        <ul class="nav nav-tabs nav-fill mb-4" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" data-bs-toggle="tab" href="#personal">
                    <i class="bi bi-person me-1"></i>Personal
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#employment">
                    <i class="bi bi-briefcase me-1"></i>Employment
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#contact">
                    <i class="bi bi-telephone me-1"></i>Contact
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-bs-toggle="tab" href="#compensation">
                    <i class="bi bi-cash me-1"></i>Compensation
                </a>
            </li>
        </ul>

        <!-- Tab content -->
        <div class="tab-content">
            <!-- Personal Information -->
            <div id="personal" class="tab-pane fade show active">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">First Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="FirstName" required
                               value="@Model.Employee?.FirstName" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Last Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="LastName" required
                               value="@Model.Employee?.LastName" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Email <span class="text-danger">*</span></label>
                        <input type="email" class="form-control" name="Email" required
                               value="@Model.Employee?.Email" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Date of Birth <span class="text-danger">*</span></label>
                        <input type="date" class="form-control" name="DateOfBirth" required
                               value="@Model.Employee?.DateOfBirth.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Gender</label>
                        <select class="form-select" name="Gender">
                            @foreach (var gender in Enum.GetValues<Algora.Erp.Domain.Enums.Gender>())
                            {
                                if (Model.Employee?.Gender == gender)
                                {
                                    <option value="@gender" selected>@gender</option>
                                }
                                else
                                {
                                    <option value="@gender">@gender</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Phone</label>
                        <input type="tel" class="form-control" name="Phone"
                               value="@Model.Employee?.Phone" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Mobile</label>
                        <input type="tel" class="form-control" name="Mobile"
                               value="@Model.Employee?.Mobile" />
                    </div>
                </div>
            </div>

            <!-- Employment Details -->
            <div id="employment" class="tab-pane fade">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Department</label>
                        <select class="form-select" name="DepartmentId">
                            <option value="">Select Department</option>
                            @foreach (var dept in Model.Departments)
                            {
                                if (Model.Employee?.DepartmentId == dept.Id)
                                {
                                    <option value="@dept.Id" selected>@dept.Name</option>
                                }
                                else
                                {
                                    <option value="@dept.Id">@dept.Name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Position</label>
                        <select class="form-select" name="PositionId">
                            <option value="">Select Position</option>
                            @foreach (var pos in Model.Positions)
                            {
                                if (Model.Employee?.PositionId == pos.Id)
                                {
                                    <option value="@pos.Id" selected>@pos.Title</option>
                                }
                                else
                                {
                                    <option value="@pos.Id">@pos.Title</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Manager</label>
                        <select class="form-select" name="ManagerId">
                            <option value="">Select Manager</option>
                            @foreach (var mgr in Model.Managers)
                            {
                                if (Model.Employee?.ManagerId == mgr.Key)
                                {
                                    <option value="@mgr.Key" selected>@mgr.Value</option>
                                }
                                else
                                {
                                    <option value="@mgr.Key">@mgr.Value</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Hire Date <span class="text-danger">*</span></label>
                        <input type="date" class="form-control" name="HireDate" required
                               value="@(Model.Employee?.HireDate.ToString("yyyy-MM-dd") ?? DateTime.Today.ToString("yyyy-MM-dd"))" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Employment Type</label>
                        <select class="form-select" name="EmploymentType">
                            @foreach (var type in Enum.GetValues<Algora.Erp.Domain.Enums.EmploymentType>())
                            {
                                if (Model.Employee?.EmploymentType == type)
                                {
                                    <option value="@type" selected>@type</option>
                                }
                                else
                                {
                                    <option value="@type">@type</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Employment Status</label>
                        <select class="form-select" name="EmploymentStatus">
                            @foreach (var status in Enum.GetValues<Algora.Erp.Domain.Enums.EmploymentStatus>())
                            {
                                if (Model.Employee?.EmploymentStatus == status)
                                {
                                    <option value="@status" selected>@status</option>
                                }
                                else
                                {
                                    <option value="@status">@status</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>

            <!-- Contact & Address -->
            <div id="contact" class="tab-pane fade">
                <div class="row g-3">
                    <div class="col-12">
                        <label class="form-label">Address</label>
                        <textarea class="form-control" name="Address" rows="2">@Model.Employee?.Address</textarea>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">City</label>
                        <input type="text" class="form-control" name="City"
                               value="@Model.Employee?.City" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">State/Province</label>
                        <input type="text" class="form-control" name="State"
                               value="@Model.Employee?.State" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Country</label>
                        <input type="text" class="form-control" name="Country"
                               value="@Model.Employee?.Country" />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Postal Code</label>
                        <input type="text" class="form-control" name="PostalCode"
                               value="@Model.Employee?.PostalCode" />
                    </div>

                    <div class="col-12">
                        <hr class="my-3">
                        <h6 class="text-muted mb-3"><i class="bi bi-exclamation-triangle me-2"></i>Emergency Contact</h6>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Contact Name</label>
                        <input type="text" class="form-control" name="EmergencyContactName"
                               value="@Model.Employee?.EmergencyContactName" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Contact Phone</label>
                        <input type="tel" class="form-control" name="EmergencyContactPhone"
                               value="@Model.Employee?.EmergencyContactPhone" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Relationship</label>
                        <input type="text" class="form-control" name="EmergencyContactRelation"
                               value="@Model.Employee?.EmergencyContactRelation" />
                    </div>
                </div>
            </div>

            <!-- Compensation -->
            <div id="compensation" class="tab-pane fade">
                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">Base Salary</label>
                        <div class="input-group">
                            <select class="form-select" name="SalaryCurrency" style="max-width: 100px;">
                                @{
                                    var currencies = new[] { "USD", "EUR", "GBP", "INR" };
                                    var selectedCurrency = Model.Employee?.SalaryCurrency ?? "USD";
                                }
                                @foreach (var currency in currencies)
                                {
                                    if (selectedCurrency == currency)
                                    {
                                        <option value="@currency" selected>@currency</option>
                                    }
                                    else
                                    {
                                        <option value="@currency">@currency</option>
                                    }
                                }
                            </select>
                            <input type="number" class="form-control" name="BaseSalary" step="0.01"
                                   value="@Model.Employee?.BaseSalary" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Pay Frequency</label>
                        <select class="form-select" name="PayFrequency">
                            @foreach (var freq in Enum.GetValues<Algora.Erp.Domain.Enums.PayFrequency>())
                            {
                                if (Model.Employee?.PayFrequency == freq)
                                {
                                    <option value="@freq" selected>@freq</option>
                                }
                                else
                                {
                                    <option value="@freq">@freq</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">
            <span class="htmx-indicator spinner-border spinner-border-sm me-1"></span>
            @(Model.IsEdit ? "Update Employee" : "Add Employee")
        </button>
    </div>
</form>
