@model Algora.Erp.Web.Pages.HR.Employees.EmployeesTableViewModel

<tbody id="employeesTableBody">
@if (Model.Employees.Count == 0)
{
    <tr>
        <td colspan="8" class="text-center py-12">
            <div class="text-gray-500">
                <i class="bi bi-people text-4xl block mb-2"></i>
                <p class="mb-0">No employees found</p>
                <span class="text-sm">Add your first employee to get started</span>
            </div>
        </td>
    </tr>
}
else
{
    foreach (var employee in Model.Employees)
    {
        var statusBadge = employee.EmploymentStatus switch
        {
            Algora.Erp.Domain.Enums.EmploymentStatus.Active => "bg-emerald-100 text-emerald-800",
            Algora.Erp.Domain.Enums.EmploymentStatus.OnLeave => "bg-amber-100 text-amber-800",
            Algora.Erp.Domain.Enums.EmploymentStatus.Suspended => "bg-red-100 text-red-800",
            Algora.Erp.Domain.Enums.EmploymentStatus.Terminated => "bg-gray-100 text-gray-800",
            Algora.Erp.Domain.Enums.EmploymentStatus.Retired => "bg-blue-100 text-blue-800",
            _ => "bg-gray-100 text-gray-800"
        };

        var employmentTypeBadge = employee.EmploymentType switch
        {
            Algora.Erp.Domain.Enums.EmploymentType.FullTime => "bg-primary-100 text-primary-800",
            Algora.Erp.Domain.Enums.EmploymentType.PartTime => "bg-blue-100 text-blue-800",
            Algora.Erp.Domain.Enums.EmploymentType.Contract => "bg-amber-100 text-amber-800",
            Algora.Erp.Domain.Enums.EmploymentType.Temporary => "bg-gray-100 text-gray-800",
            Algora.Erp.Domain.Enums.EmploymentType.Intern => "bg-gray-100 text-gray-800",
            Algora.Erp.Domain.Enums.EmploymentType.Freelance => "bg-gray-800 text-white",
            _ => "bg-gray-100 text-gray-800"
        };

        <tr class="hover:bg-gray-50">
            <td class="p-4">
                <input type="checkbox" class="w-4 h-4 text-primary-600 bg-gray-100 border-gray-300 rounded focus:ring-primary-500" value="@employee.Id">
            </td>
            <td class="px-6 py-4">
                <div class="flex items-center gap-3">
                    <div class="rounded-full bg-primary-100 text-primary-600 flex items-center justify-center font-semibold"
                         style="width: 40px; height: 40px;">
                        @employee.FirstName[0]@employee.LastName[0]
                    </div>
                    <div>
                        <div class="font-semibold text-gray-900">@employee.FullName</div>
                        <div class="text-sm text-gray-500">@employee.Email</div>
                        <div class="text-sm text-gray-500">@employee.EmployeeCode</div>
                    </div>
                </div>
            </td>
            <td class="px-6 py-4">
                @if (employee.Department != null)
                {
                    <span>@employee.Department.Name</span>
                }
                else
                {
                    <span class="text-gray-500">-</span>
                }
            </td>
            <td class="px-6 py-4">
                @if (employee.Position != null)
                {
                    <span>@employee.Position.Title</span>
                }
                else
                {
                    <span class="text-gray-500">-</span>
                }
            </td>
            <td class="px-6 py-4">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @employmentTypeBadge">@employee.EmploymentType</span>
            </td>
            <td class="px-6 py-4">
                <span>@employee.HireDate.ToString("MMM dd, yyyy")</span>
            </td>
            <td class="px-6 py-4">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @statusBadge">@employee.EmploymentStatus</span>
            </td>
            <td class="px-6 py-4 text-right">
                <div class="relative inline-block">
                    <button class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg" id="dropdownEmployee@(employee.Id)" data-dropdown-toggle="dropdownMenuEmployee@(employee.Id)" data-dropdown-placement="bottom-end">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <div class="z-50 hidden absolute right-0 mt-2 bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuEmployee@(employee.Id)">
                        <ul class="py-2 text-sm text-gray-700">
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100 cursor-pointer"
                                   hx-get="/HR/Employees?handler=EditForm&id=@employee.Id"
                                   hx-target="#employeeModalContent" hx-swap="innerHTML"
                                   data-modal-target="employeeModal" data-modal-toggle="employeeModal">
                                    <i class="bi bi-pencil mr-2"></i>Edit
                                </a>
                            </li>
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100" href="/HR/Employees/@employee.Id">
                                    <i class="bi bi-eye mr-2"></i>View Details
                                </a>
                            </li>
                        </ul>
                        <div class="py-2">
                            <a class="flex items-center px-4 py-2 text-red-600 hover:bg-gray-100 cursor-pointer"
                               hx-delete="?handler=Delete&id=@employee.Id"
                               hx-target="#employeesTableBody"
                               hx-swap="outerHTML"
                               hx-confirm="Are you sure you want to delete this employee?">
                                <i class="bi bi-trash mr-2"></i>Delete
                            </a>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    }
}
</tbody>

@* Out-of-band swap for pagination info *@
<div id="paginationInfo" hx-swap-oob="true">
    @await Html.PartialAsync("~/Pages/Shared/_PaginationInfo.cshtml", Model.Pagination)
</div>

@* Out-of-band swap for pagination navigation *@
<nav id="paginationNav" hx-swap-oob="true">
    @await Html.PartialAsync("~/Pages/Shared/_Pagination.cshtml", Model.Pagination)
</nav>

<script>
    // Re-initialize Flowbite dropdowns after HTMX content swap
    if (typeof initFlowbite === 'function') { initFlowbite(); }
    if (typeof htmx !== 'undefined') { htmx.process(document.body); }
</script>
