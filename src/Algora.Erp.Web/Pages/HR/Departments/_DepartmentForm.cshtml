@model Algora.Erp.Web.Pages.HR.Departments.DepartmentFormViewModel

<form hx-post="/HR/Departments" hx-target="#tableContent" hx-swap="innerHTML"
      hx-on::after-request="if(event.detail.successful) bootstrap.Modal.getInstance(document.getElementById('departmentModal')).hide()">

    @if (Model.IsEdit && Model.Department != null)
    {
        <input type="hidden" name="Id" value="@Model.Department.Id" />
    }

    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label">Department Name <span class="text-danger">*</span></label>
            <input type="text" class="form-control" name="Name" required
                   value="@(Model.Department?.Name)" placeholder="Enter department name">
        </div>
        <div class="col-md-6">
            <label class="form-label">Code</label>
            <input type="text" class="form-control" readonly
                   value="@(Model.Department?.Code ?? "Auto-generated")"
                   placeholder="Auto-generated">
        </div>
        <div class="col-12">
            <label class="form-label">Description</label>
            <textarea class="form-control" name="Description" rows="3"
                      placeholder="Enter department description">@Model.Department?.Description</textarea>
        </div>
        <div class="col-md-6">
            <label class="form-label">Parent Department</label>
            <select class="form-select" name="ParentDepartmentId">
                <option value="">None (Top Level)</option>
                @foreach (var dept in Model.ParentDepartments)
                {
                    if (Model.Department?.ParentDepartmentId == dept.Id)
                    {
                        <option value="@dept.Id" selected>@dept.Name</option>
                    }
                    else
                    {
                        <option value="@dept.Id">@dept.Name</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-6">
            <label class="form-label">Department Manager</label>
            <select class="form-select" name="ManagerId">
                <option value="">Select Manager</option>
                @foreach (var manager in Model.Managers)
                {
                    if (Model.Department?.ManagerId == manager.Key)
                    {
                        <option value="@manager.Key" selected>@manager.Value</option>
                    }
                    else
                    {
                        <option value="@manager.Key">@manager.Value</option>
                    }
                }
            </select>
        </div>
        <div class="col-12">
            <div class="form-check form-switch">
                @if (Model.Department?.IsActive ?? true)
                {
                    <input class="form-check-input" type="checkbox" name="IsActive" value="true" id="isActive" checked>
                }
                else
                {
                    <input class="form-check-input" type="checkbox" name="IsActive" value="true" id="isActive">
                }
                <label class="form-check-label" for="isActive">Active</label>
            </div>
        </div>
    </div>

    <div class="modal-footer px-0 pb-0 mt-4">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary">
            @(Model.IsEdit ? "Update Department" : "Create Department")
        </button>
    </div>
</form>
