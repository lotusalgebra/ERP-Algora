@using Algora.Erp.Web.Pages.Shared
@model PaginationViewModel

@*
    Combined Pagination Footer Component
    Includes both the "Showing X to Y of Z entries" info and the pagination navigation

    Usage in partial views:
    @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", Model.Pagination)

    Or if rendering outside table:
    <div class="px-6 py-4 border-t border-gray-200">
        @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", Model.Pagination)
    </div>
*@

<div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3">
    @* Pagination Info *@
    @await Html.PartialAsync("~/Pages/Shared/_PaginationInfo.cshtml", Model)

    @* Pagination Navigation *@
    @await Html.PartialAsync("~/Pages/Shared/_Pagination.cshtml", Model)
</div>

@* Re-initialize HTMX after content swap *@
<script>
    if (typeof htmx !== 'undefined') {
        htmx.process(document.body);
    }
    if (typeof initFlowbite === 'function') {
        initFlowbite();
    }
</script>
