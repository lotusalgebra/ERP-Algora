@model Algora.Erp.Domain.Entities.Dispatch.DeliveryChallan
@using Algora.Erp.Domain.Entities.Dispatch

@{
    var statusClass = Model.Status switch
    {
        DeliveryChallanStatus.Draft => "bg-gray-100 text-gray-800",
        DeliveryChallanStatus.Confirmed => "bg-blue-100 text-blue-800",
        DeliveryChallanStatus.Dispatched => "bg-primary-100 text-primary-800",
        DeliveryChallanStatus.Delivered => "bg-emerald-100 text-emerald-800",
        DeliveryChallanStatus.Cancelled => "bg-gray-700 text-white",
        _ => "bg-gray-100 text-gray-800"
    };
}

<div class="grid grid-cols-12 gap-4">
    <!-- Header Info -->
    <div class="col-span-12">
        <div class="flex justify-between items-start">
            <div>
                <h5 class="text-lg font-semibold text-gray-900 mb-1">@Model.ChallanNumber</h5>
                <p class="text-gray-500 mb-0">@Model.ChallanDate.ToString("dd MMM yyyy")</p>
            </div>
            <span class="text-xs font-medium px-2.5 py-0.5 rounded-full @statusClass">@Model.Status</span>
        </div>
    </div>

    <!-- Customer & Sales Order -->
    <div class="md:col-span-6 col-span-12">
        <div class="bg-white rounded-lg shadow-md h-full">
            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                <h6 class="text-sm font-medium text-gray-900 mb-0">Customer Details</h6>
            </div>
            <div class="p-6">
                <table class="w-full text-sm">
                    <tr>
                        <td class="text-gray-500 py-1" style="width: 40%;">Customer:</td>
                        <td class="font-medium text-gray-900 py-1">@Model.Customer?.Name</td>
                    </tr>
                    @if (Model.SalesOrder != null)
                    {
                        <tr>
                            <td class="text-gray-500 py-1">Sales Order:</td>
                            <td class="font-medium text-gray-900 py-1">@Model.SalesOrder.OrderNumber</td>
                        </tr>
                    }
                    <tr>
                        <td class="text-gray-500 py-1">Warehouse:</td>
                        <td class="font-medium text-gray-900 py-1">@Model.Warehouse?.Name</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <!-- Transport Details -->
    <div class="md:col-span-6 col-span-12">
        <div class="bg-white rounded-lg shadow-md h-full">
            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                <h6 class="text-sm font-medium text-gray-900 mb-0">Transport Details</h6>
            </div>
            <div class="p-6">
                <table class="w-full text-sm">
                    @if (!string.IsNullOrEmpty(Model.VehicleNumber))
                    {
                        <tr>
                            <td class="text-gray-500 py-1" style="width: 40%;">Vehicle:</td>
                            <td class="font-medium text-gray-900 py-1">@Model.VehicleNumber</td>
                        </tr>
                    }
                    @if (!string.IsNullOrEmpty(Model.TransportMode))
                    {
                        <tr>
                            <td class="text-gray-500 py-1">Mode:</td>
                            <td class="font-medium text-gray-900 py-1">@Model.TransportMode</td>
                        </tr>
                    }
                    @if (!string.IsNullOrEmpty(Model.DriverName))
                    {
                        <tr>
                            <td class="text-gray-500 py-1">Driver:</td>
                            <td class="font-medium text-gray-900 py-1">@Model.DriverName</td>
                        </tr>
                    }
                    @if (!string.IsNullOrEmpty(Model.DriverPhone))
                    {
                        <tr>
                            <td class="text-gray-500 py-1">Phone:</td>
                            <td class="font-medium text-gray-900 py-1">@Model.DriverPhone</td>
                        </tr>
                    }
                    @if (!string.IsNullOrEmpty(Model.TransporterName))
                    {
                        <tr>
                            <td class="text-gray-500 py-1">Transporter:</td>
                            <td class="font-medium text-gray-900 py-1">@Model.TransporterName</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>

    <!-- Shipping Address -->
    @if (!string.IsNullOrEmpty(Model.ShipToName) || !string.IsNullOrEmpty(Model.ShipToAddress1))
    {
        <div class="col-span-12">
            <div class="bg-white rounded-lg shadow-md">
                <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                    <h6 class="text-sm font-medium text-gray-900 mb-0">Shipping Address</h6>
                </div>
                <div class="p-6">
                    <address class="not-italic text-sm text-gray-900">
                        @if (!string.IsNullOrEmpty(Model.ShipToName))
                        {
                            <strong>@Model.ShipToName</strong><br />
                        }
                        @if (!string.IsNullOrEmpty(Model.ShipToAddress1))
                        {
                            @Model.ShipToAddress1<br />
                        }
                        @if (!string.IsNullOrEmpty(Model.ShipToAddress2))
                        {
                            @Model.ShipToAddress2<br />
                        }
                        @{
                            var cityStateZip = new List<string>();
                            if (!string.IsNullOrEmpty(Model.ShipToCity)) cityStateZip.Add(Model.ShipToCity);
                            if (!string.IsNullOrEmpty(Model.ShipToState)) cityStateZip.Add(Model.ShipToState);
                            if (!string.IsNullOrEmpty(Model.ShipToPostalCode)) cityStateZip.Add(Model.ShipToPostalCode);
                        }
                        @if (cityStateZip.Any())
                        {
                            @string.Join(", ", cityStateZip)<br />
                        }
                        @if (!string.IsNullOrEmpty(Model.ShipToCountry))
                        {
                            @Model.ShipToCountry<br />
                        }
                        @if (!string.IsNullOrEmpty(Model.ShipToPhone))
                        {
                            <i class="bi bi-telephone mr-1"></i>@Model.ShipToPhone
                        }
                    </address>
                </div>
            </div>
        </div>
    }

    <!-- Line Items -->
    <div class="col-span-12">
        <div class="bg-white rounded-lg shadow-md">
            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                <h6 class="text-sm font-medium text-gray-900 mb-0">Line Items</h6>
            </div>
            <div class="p-0">
                <div class="overflow-x-auto">
                    <table class="w-full text-sm text-left text-gray-500">
                        <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                            <tr>
                                <th scope="col" class="px-4 py-3" style="width: 5%;">#</th>
                                <th scope="col" class="px-4 py-3" style="width: 45%;">Product</th>
                                <th scope="col" class="px-4 py-3 text-right" style="width: 20%;">Quantity</th>
                                <th scope="col" class="px-4 py-3" style="width: 15%;">UOM</th>
                                <th scope="col" class="px-4 py-3" style="width: 15%;">Notes</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Lines?.Any() == true)
                            {
                                foreach (var line in Model.Lines.OrderBy(l => l.LineNumber))
                                {
                                    <tr class="bg-white border-b hover:bg-gray-50">
                                        <td class="px-4 py-3">@line.LineNumber</td>
                                        <td class="px-4 py-3">
                                            <div class="font-medium text-gray-900">@line.ProductName</div>
                                            <small class="text-gray-500">@line.ProductSku</small>
                                        </td>
                                        <td class="px-4 py-3 text-right font-medium text-gray-900">@line.Quantity.ToString("N2")</td>
                                        <td class="px-4 py-3">@line.UnitOfMeasure</td>
                                        <td class="px-4 py-3">
                                            @if (!string.IsNullOrEmpty(line.Notes))
                                            {
                                                <span class="text-gray-500">@line.Notes</span>
                                            }
                                            else
                                            {
                                                <span class="text-gray-400">-</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-gray-500 py-4">No line items</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot class="bg-gray-50">
                            <tr>
                                <td colspan="2" class="px-4 py-3 text-right font-medium text-gray-900">Total:</td>
                                <td class="px-4 py-3 text-right font-medium text-gray-900">@Model.Lines?.Sum(l => l.Quantity).ToString("N2")</td>
                                <td colspan="2"></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Package Info -->
    <div class="md:col-span-4 col-span-12">
        <div class="bg-white rounded-lg shadow-md h-full">
            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                <h6 class="text-sm font-medium text-gray-900 mb-0">Package Information</h6>
            </div>
            <div class="p-6">
                <table class="w-full text-sm">
                    <tr>
                        <td class="text-gray-500 py-1" style="width: 50%;">Total Packages:</td>
                        <td class="font-medium text-gray-900 py-1">@(Model.TotalPackages ?? 0)</td>
                    </tr>
                    @if (Model.TotalWeight.HasValue)
                    {
                        <tr>
                            <td class="text-gray-500 py-1">Total Weight:</td>
                            <td class="font-medium text-gray-900 py-1">@Model.TotalWeight.Value.ToString("N2") @Model.WeightUnit</td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>

    <!-- Status Timeline -->
    <div class="md:col-span-8 col-span-12">
        <div class="bg-white rounded-lg shadow-md h-full">
            <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                <h6 class="text-sm font-medium text-gray-900 mb-0">Timeline</h6>
            </div>
            <div class="p-6">
                <div class="flex flex-wrap gap-4">
                    <div>
                        <small class="text-gray-500 block">Created</small>
                        <span class="font-medium text-gray-900">@Model.CreatedAt.ToString("dd MMM yyyy HH:mm")</span>
                    </div>
                    @if (Model.ConfirmedAt.HasValue)
                    {
                        <div>
                            <small class="text-gray-500 block">Confirmed</small>
                            <span class="font-medium text-gray-900">@Model.ConfirmedAt.Value.ToString("dd MMM yyyy HH:mm")</span>
                        </div>
                    }
                    @if (Model.DispatchedAt.HasValue)
                    {
                        <div>
                            <small class="text-gray-500 block">Dispatched</small>
                            <span class="font-medium text-gray-900">@Model.DispatchedAt.Value.ToString("dd MMM yyyy HH:mm")</span>
                        </div>
                    }
                    @if (Model.DeliveredAt.HasValue)
                    {
                        <div>
                            <small class="text-gray-500 block">Delivered</small>
                            <span class="font-medium text-gray-900">@Model.DeliveredAt.Value.ToString("dd MMM yyyy HH:mm")</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Notes -->
    @if (!string.IsNullOrEmpty(Model.Notes))
    {
        <div class="col-span-12">
            <div class="bg-white rounded-lg shadow-md">
                <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
                    <h6 class="text-sm font-medium text-gray-900 mb-0">Notes</h6>
                </div>
                <div class="p-6">
                    <p class="text-gray-700 mb-0">@Model.Notes</p>
                </div>
            </div>
        </div>
    }
</div>

<div class="flex items-center p-4 border-t border-gray-200 rounded-b gap-2 mt-4 px-0 pb-0">
    @if (Model.Status == DeliveryChallanStatus.Draft)
    {
        <button type="button" class="text-primary-600 border border-primary-600 hover:bg-primary-50 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5" onclick="editChallan('@Model.Id')" onclick="closeModal('detailsModal')">
            <i class="bi bi-pencil mr-2"></i>Edit
        </button>
        <button type="button" class="text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5" onclick="updateStatus('@Model.Id', 'Confirmed')" onclick="closeModal('detailsModal')">
            <i class="bi bi-check-circle mr-2"></i>Confirm
        </button>
    }
    @if (Model.Status == DeliveryChallanStatus.Confirmed)
    {
        <button type="button" class="text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5" onclick="updateStatus('@Model.Id', 'Dispatched')" onclick="closeModal('detailsModal')">
            <i class="bi bi-truck mr-2"></i>Mark Dispatched
        </button>
    }
    @if (Model.Status == DeliveryChallanStatus.Dispatched)
    {
        <button type="button" class="text-white bg-emerald-600 hover:bg-emerald-700 focus:ring-4 focus:ring-emerald-300 font-medium rounded-lg text-sm px-5 py-2.5" onclick="updateStatus('@Model.Id', 'Delivered')" onclick="closeModal('detailsModal')">
            <i class="bi bi-check-all mr-2"></i>Mark Delivered
        </button>
    }
    <button type="button" class="text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 font-medium rounded-lg text-sm px-5 py-2.5" onclick="closeModal('detailsModal')">Close</button>
</div>
