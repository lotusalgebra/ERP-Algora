@page
@model Algora.Erp.Web.Pages.Dispatch.DeliveryChallans.IndexModel
@{
    ViewData["Title"] = "Delivery Challans";
}

<div class="space-y-6">
    <!-- Page Header -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div>
            <h1 class="text-2xl font-bold text-gray-900">Delivery Challans</h1>
            <p class="text-sm text-gray-500 mt-1">Manage outbound goods dispatch to customers</p>
        </div>
        <button type="button" class="inline-flex items-center px-4 py-2.5 text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-lg transition-colors"
                hx-get="?handler=CreateForm"
                hx-target="#formModalBody"
                data-modal-target="formModal"
                data-modal-toggle="formModal">
            <i class="bi bi-plus-lg me-2"></i>New Delivery Challan
        </button>
    </div>

    <!-- Stats Cards -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-primary-100 rounded-lg">
                    <i class="bi bi-truck text-xl text-primary-600"></i>
                </div>
                <div class="ms-4">
                    <p class="text-sm text-gray-500 mb-1">Total Challans</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.TotalChallans</h3>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-amber-100 rounded-lg">
                    <i class="bi bi-hourglass-split text-xl text-amber-600"></i>
                </div>
                <div class="ms-4">
                    <p class="text-sm text-gray-500 mb-1">Pending Dispatch</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.PendingDispatch</h3>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-blue-100 rounded-lg">
                    <i class="bi bi-box-seam text-xl text-blue-600"></i>
                </div>
                <div class="ms-4">
                    <p class="text-sm text-gray-500 mb-1">Dispatched Today</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.DispatchedToday</h3>
                </div>
            </div>
        </div>
        <div class="bg-white rounded-xl shadow-sm p-5">
            <div class="flex items-center">
                <div class="flex-shrink-0 p-3 bg-emerald-100 rounded-lg">
                    <i class="bi bi-check-circle text-xl text-emerald-600"></i>
                </div>
                <div class="ms-4">
                    <p class="text-sm text-gray-500 mb-1">Delivered This Week</p>
                    <h3 class="text-2xl font-bold text-gray-900">@Model.DeliveredThisWeek</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Challans Table -->
    <div class="bg-white rounded-xl shadow-sm overflow-hidden">
        <div class="p-4 border-b border-gray-200">
            <div class="grid grid-cols-1 md:grid-cols-12 gap-3">
                <div class="md:col-span-4">
                    <div class="relative">
                        <div class="absolute inset-y-0 start-0 flex items-center ps-3 pointer-events-none">
                            <i class="bi bi-search text-gray-400"></i>
                        </div>
                        <input type="text"
                               class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full ps-10 p-2.5"
                               placeholder="Search challans..."
                               id="searchInput"
                               hx-get="?handler=Table"
                               hx-trigger="keyup changed delay:300ms"
                               hx-target="#challansTableBody"
                               hx-include="#statusFilter, #customerFilter, #pageSizeSelect"
                               name="search">
                    </div>
                </div>
                <div class="md:col-span-3">
                    <select id="statusFilter"
                            name="statusFilter"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                            hx-get="?handler=Table"
                            hx-trigger="change"
                            hx-target="#challansTableBody"
                            hx-include="#searchInput, #customerFilter, #pageSizeSelect">
                        <option value="">All Status</option>
                        <option value="Draft">Draft</option>
                        <option value="Confirmed">Confirmed</option>
                        <option value="Dispatched">Dispatched</option>
                        <option value="Delivered">Delivered</option>
                        <option value="Cancelled">Cancelled</option>
                    </select>
                </div>
                <div class="md:col-span-3">
                    <select id="customerFilter"
                            name="customerFilter"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                            hx-get="?handler=Table"
                            hx-trigger="change"
                            hx-target="#challansTableBody"
                            hx-include="#searchInput, #statusFilter, #pageSizeSelect">
                        <option value="">All Customers</option>
                        @foreach (var customer in Model.Customers)
                        {
                            <option value="@customer.Id">@customer.Name</option>
                        }
                    </select>
                </div>
                <div class="md:col-span-2">
                    <select id="pageSizeSelect"
                            name="pageSize"
                            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5"
                            hx-get="?handler=Table"
                            hx-trigger="change"
                            hx-target="#challansTableBody"
                            hx-include="#searchInput, #statusFilter, #customerFilter">
                        <option value="10">10 per page</option>
                        <option value="25">25 per page</option>
                        <option value="50">50 per page</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full text-sm text-left">
                <thead class="text-xs text-gray-700 uppercase bg-gray-50">
                    <tr>
                        <th scope="col" class="px-6 py-3">DC #</th>
                        <th scope="col" class="px-6 py-3">Customer</th>
                        <th scope="col" class="px-6 py-3">Date</th>
                        <th scope="col" class="px-6 py-3 text-center">Items</th>
                        <th scope="col" class="px-6 py-3 text-right">Quantity</th>
                        <th scope="col" class="px-6 py-3">Vehicle</th>
                        <th scope="col" class="px-6 py-3">Status</th>
                        <th scope="col" class="px-6 py-3 text-right">Actions</th>
                    </tr>
                </thead>
                <tbody id="challansTableBody"
                       hx-get="?handler=Table"
                       hx-trigger="load"
                       hx-include="#searchInput, #statusFilter, #customerFilter, #pageSizeSelect">
                    <tr>
                        <td colspan="8" class="px-6 py-8 text-center">
                            <div class="inline-block animate-spin rounded-full h-6 w-6 border-b-2 border-primary-600"></div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Form Modal -->
<div id="formModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-4xl max-h-full">
        <div class="relative bg-white rounded-lg shadow">
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t">
                <h3 class="text-xl font-semibold text-gray-900">Delivery Challan</h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" onclick="closeModal('formModal')">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="p-4 md:p-5" id="formModalBody">
                <div class="text-center py-8">
                    <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-primary-600"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Details Modal -->
<div id="detailsModal" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-4xl max-h-full">
        <div class="relative bg-white rounded-lg shadow">
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t">
                <h3 class="text-xl font-semibold text-gray-900">Delivery Challan Details</h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" onclick="closeModal('detailsModal')">
                    <i class="bi bi-x-lg"></i>
                </button>
            </div>
            <div class="p-4 md:p-5" id="detailsModalBody">
                <div class="text-center py-8">
                    <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-primary-600"></div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="deleteModal" tabindex="-1" class="hidden overflow-y-auto overflow-x-hidden fixed top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
        <div class="relative bg-white rounded-lg shadow">
            <button type="button" class="absolute top-3 end-2.5 text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center" onclick="closeModal('deleteModal')">
                <i class="bi bi-x-lg"></i>
            </button>
            <div class="p-4 md:p-5 text-center">
                <i class="bi bi-exclamation-triangle text-amber-500 text-5xl mb-4"></i>
                <h3 class="mb-5 text-lg font-normal text-gray-500">Are you sure you want to delete this delivery challan?</h3>
                <p class="mb-5 text-sm text-gray-400">This action cannot be undone.</p>
                <button type="button" class="text-white bg-red-600 hover:bg-red-700 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-lg text-sm inline-flex items-center px-5 py-2.5 text-center me-2" id="confirmDeleteBtn">
                    Yes, delete
                </button>
                <button onclick="closeModal('deleteModal')" type="button" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900">
                    Cancel
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let deleteId = null;

        function confirmDelete(id) {
            deleteId = id;
            window.AlgoraModal.show('');
        }

        document.getElementById('confirmDeleteBtn')?.addEventListener('click', function() {
            if (deleteId) {
                htmx.ajax('DELETE', `?handler=&id=${deleteId}`, {
                    target: '#challansTableBody',
                    swap: 'innerHTML'
                }).then(() => {
                    window.AlgoraModal.hide('');
                    deleteId = null;
                });
            }
        });

        function viewDetails(id) {
            htmx.ajax('GET', `?handler=Details&id=${id}`, {
                target: '#detailsModalBody',
                swap: 'innerHTML'
            });
            window.AlgoraModal.show('');
        }

        function editChallan(id) {
            htmx.ajax('GET', `?handler=EditForm&id=${id}`, {
                target: '#formModalBody',
                swap: 'innerHTML'
            });
            window.AlgoraModal.show('');
        }

        function updateStatus(id, status) {
            htmx.ajax('POST', `?handler=UpdateStatus&id=${id}&status=${status}`, {
                target: '#challansTableBody',
                swap: 'innerHTML'
            });
        }

        document.body.addEventListener('formSubmitSuccess', function() {
            window.AlgoraModal.hide('');
        });
    </script>
}
