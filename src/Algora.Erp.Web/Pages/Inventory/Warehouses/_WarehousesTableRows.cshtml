@model Algora.Erp.Web.Pages.Inventory.Warehouses.WarehousesTableViewModel

@if (Model.Warehouses.Count == 0)
{
    <tr>
        <td colspan="8" class="px-6 py-12 text-center">
            <div class="text-gray-500">
                <i class="bi bi-building text-4xl block mb-3"></i>
                <p class="mb-0">No warehouses found</p>
            </div>
        </td>
    </tr>
}
else
{
    @foreach (var warehouse in Model.Warehouses)
    {
        var locationCount = warehouse.Locations?.Count ?? 0;
        var stockItemCount = warehouse.StockLevels?.Count ?? 0;
        var totalStock = warehouse.StockLevels?.Sum(s => s.QuantityOnHand) ?? 0;

        <tr class="border-b hover:bg-gray-50">
            <td class="px-6 py-4">
                <code class="bg-gray-100 px-2 py-1 rounded text-sm">@warehouse.Code</code>
                @if (warehouse.IsDefault)
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-primary-100 text-primary-800 ml-2">Default</span>
                }
            </td>
            <td class="px-6 py-4">
                <div class="font-medium text-gray-900">@warehouse.Name</div>
                @if (!string.IsNullOrEmpty(warehouse.Description))
                {
                    <small class="text-gray-500">@warehouse.Description</small>
                }
            </td>
            <td class="px-6 py-4">
                @if (!string.IsNullOrEmpty(warehouse.City))
                {
                    <div class="text-gray-900">
                        <i class="bi bi-geo-alt mr-1 text-gray-400"></i>
                        @warehouse.City@(string.IsNullOrEmpty(warehouse.State) ? "" : $", {warehouse.State}")
                    </div>
                    @if (!string.IsNullOrEmpty(warehouse.Country))
                    {
                        <small class="text-gray-500">@warehouse.Country</small>
                    }
                }
                else
                {
                    <span class="text-gray-400">—</span>
                }
            </td>
            <td class="px-6 py-4">
                @if (!string.IsNullOrEmpty(warehouse.ManagerName))
                {
                    <div class="text-gray-900">@warehouse.ManagerName</div>
                    @if (!string.IsNullOrEmpty(warehouse.Phone))
                    {
                        <small class="text-gray-500"><i class="bi bi-telephone mr-1"></i>@warehouse.Phone</small>
                    }
                }
                else
                {
                    <span class="text-gray-400">—</span>
                }
            </td>
            <td class="px-6 py-4 text-center">
                <a class="text-blue-600 hover:text-blue-800 cursor-pointer"
                   hx-get="?handler=Locations&id=@warehouse.Id"
                   hx-target="#locationsModalBody"
                   data-modal-target="locationsModal" data-modal-toggle="locationsModal"
                   title="View Locations">
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-blue-100 text-blue-800">@locationCount</span>
                </a>
            </td>
            <td class="px-6 py-4 text-center">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">
                    @stockItemCount items (@totalStock.ToString("N0"))
                </span>
            </td>
            <td class="px-6 py-4">
                @if (warehouse.IsActive)
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-emerald-100 text-emerald-800">Active</span>
                }
                else
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">Inactive</span>
                }
            </td>
            <td class="px-6 py-4 text-right">
                <div class="relative inline-block">
                    <button class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg" id="dropdownWH@(warehouse.Id)" data-dropdown-toggle="dropdownMenuWH@(warehouse.Id)" data-dropdown-placement="bottom-end">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <div class="z-50 hidden absolute right-0 mt-2 bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuWH@(warehouse.Id)">
                        <ul class="py-2 text-sm text-gray-700">
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100 cursor-pointer"
                                   hx-get="?handler=EditForm&id=@warehouse.Id"
                                   hx-target="#formModalBody"
                                   data-modal-target="formModal" data-modal-toggle="formModal">
                                    <i class="bi bi-pencil mr-2"></i> Edit
                                </a>
                            </li>
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100 cursor-pointer"
                                   hx-get="?handler=Locations&id=@warehouse.Id"
                                   hx-target="#locationsModalBody"
                                   data-modal-target="locationsModal" data-modal-toggle="locationsModal">
                                    <i class="bi bi-geo-alt mr-2"></i> Manage Locations
                                </a>
                            </li>
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100" href="/Inventory/Stock?warehouseId=@warehouse.Id">
                                    <i class="bi bi-box-seam mr-2"></i> View Stock
                                </a>
                            </li>
                        </ul>
                        <div class="py-2">
                            <a class="flex items-center px-4 py-2 text-red-600 hover:bg-gray-100 cursor-pointer"
                               hx-delete="?handler=Delete&id=@warehouse.Id"
                               hx-target="#warehousesTableBody"
                               hx-confirm="Are you sure you want to delete this warehouse?">
                                <i class="bi bi-trash mr-2"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="8" class="px-6 py-3 bg-gray-50">
            @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", Model.Pagination)
        </td>
    </tr>
}
