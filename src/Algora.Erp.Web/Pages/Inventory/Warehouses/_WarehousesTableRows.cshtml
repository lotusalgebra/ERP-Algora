@model Algora.Erp.Web.Pages.Inventory.Warehouses.WarehousesTableViewModel

@if (Model.Warehouses.Count == 0)
{
    <tr>
        <td colspan="8" class="text-center py-5">
            <div class="text-muted">
                <i class="bi bi-building fs-1 d-block mb-3"></i>
                <p class="mb-0">No warehouses found</p>
            </div>
        </td>
    </tr>
}
else
{
    @foreach (var warehouse in Model.Warehouses)
    {
        var locationCount = warehouse.Locations?.Count ?? 0;
        var stockItemCount = warehouse.StockLevels?.Count ?? 0;
        var totalStock = warehouse.StockLevels?.Sum(s => s.QuantityOnHand) ?? 0;

        <tr>
            <td class="ps-4">
                <code class="bg-light px-2 py-1 rounded">@warehouse.Code</code>
                @if (warehouse.IsDefault)
                {
                    <span class="badge bg-primary ms-2">Default</span>
                }
            </td>
            <td>
                <div class="fw-medium">@warehouse.Name</div>
                @if (!string.IsNullOrEmpty(warehouse.Description))
                {
                    <small class="text-muted">@warehouse.Description</small>
                }
            </td>
            <td>
                @if (!string.IsNullOrEmpty(warehouse.City))
                {
                    <div>
                        <i class="bi bi-geo-alt me-1 text-muted"></i>
                        @warehouse.City@(string.IsNullOrEmpty(warehouse.State) ? "" : $", {warehouse.State}")
                    </div>
                    @if (!string.IsNullOrEmpty(warehouse.Country))
                    {
                        <small class="text-muted">@warehouse.Country</small>
                    }
                }
                else
                {
                    <span class="text-muted">—</span>
                }
            </td>
            <td>
                @if (!string.IsNullOrEmpty(warehouse.ManagerName))
                {
                    <div>@warehouse.ManagerName</div>
                    @if (!string.IsNullOrEmpty(warehouse.Phone))
                    {
                        <small class="text-muted"><i class="bi bi-telephone me-1"></i>@warehouse.Phone</small>
                    }
                }
                else
                {
                    <span class="text-muted">—</span>
                }
            </td>
            <td class="text-center">
                <button class="btn btn-link p-0"
                        onclick="showLocations('@warehouse.Id')"
                        title="View Locations">
                    <span class="badge bg-info bg-opacity-10 text-info">@locationCount</span>
                </button>
            </td>
            <td class="text-center">
                <span class="badge bg-secondary bg-opacity-10 text-secondary">
                    @stockItemCount items (@totalStock.ToString("N0"))
                </span>
            </td>
            <td>
                @if (warehouse.IsActive)
                {
                    <span class="badge bg-success bg-opacity-10 text-success">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary bg-opacity-10 text-secondary">Inactive</span>
                }
            </td>
            <td class="text-end pe-4">
                <div class="btn-group btn-group-sm">
                    <button type="button"
                            class="btn btn-outline-info"
                            onclick="showLocations('@warehouse.Id')"
                            title="Manage Locations">
                        <i class="bi bi-geo-alt"></i>
                    </button>
                    <button type="button"
                            class="btn btn-outline-primary"
                            hx-get="?handler=EditForm&id=@warehouse.Id"
                            hx-target="#formModalBody"
                            data-modal-target="formModal" data-modal-toggle="formModal"
                            title="Edit">
                        <i class="bi bi-pencil"></i>
                    </button>
                    <button type="button"
                            class="btn btn-outline-danger"
                            onclick="confirmDelete('@warehouse.Id')"
                            title="Delete">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="8" class="py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    Showing @((Model.Page - 1) * Model.PageSize + 1) to @Math.Min(Model.Page * Model.PageSize, Model.TotalRecords) of @Model.TotalRecords entries
                </div>
                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item @(Model.Page <= 1 ? "disabled" : "")">
                            <a class="page-link"
                               hx-get="?handler=Table&page=@(Model.Page - 1)"
                               hx-target="#warehousesTableBody"
                               hx-include="#searchInput, #statusFilter, #pageSizeSelect">
                                Previous
                            </a>
                        </li>
                        @for (int i = 1; i <= Model.TotalPages; i++)
                        {
                            <li class="page-item @(i == Model.Page ? "active" : "")">
                                <a class="page-link"
                                   hx-get="?handler=Table&page=@i"
                                   hx-target="#warehousesTableBody"
                                   hx-include="#searchInput, #statusFilter, #pageSizeSelect">
                                    @i
                                </a>
                            </li>
                        }
                        <li class="page-item @(Model.Page >= Model.TotalPages ? "disabled" : "")">
                            <a class="page-link"
                               hx-get="?handler=Table&page=@(Model.Page + 1)"
                               hx-target="#warehousesTableBody"
                               hx-include="#searchInput, #statusFilter, #pageSizeSelect">
                                Next
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </td>
    </tr>
}
