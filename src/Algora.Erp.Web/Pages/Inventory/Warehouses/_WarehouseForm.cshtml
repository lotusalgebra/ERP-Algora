@model Algora.Erp.Web.Pages.Inventory.Warehouses.WarehouseFormViewModel

<form hx-post=""
      hx-target="#warehousesTableBody"
      hx-on::after-request="if(event.detail.successful) document.body.dispatchEvent(new Event('formSubmitSuccess'))">

    @if (Model.IsEdit && Model.Warehouse != null)
    {
        <input type="hidden" name="Id" value="@Model.Warehouse.Id" />
    }

    <div class="grid grid-cols-12 gap-4">
        <!-- Basic Information -->
        <div class="col-span-12">
            <h6 class="text-gray-500 text-xs uppercase font-semibold mb-3">Basic Information</h6>
        </div>

        <div class="col-span-12">
            <label class="block mb-2 text-sm font-medium text-gray-900">Warehouse Name <span class="text-red-500">*</span></label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Name"
                   value="@Model.Warehouse?.Name" required>
        </div>

        <div class="col-span-12">
            <label class="block mb-2 text-sm font-medium text-gray-900">Description</label>
            <textarea class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Description" rows="2">@Model.Warehouse?.Description</textarea>
        </div>

        <!-- Address -->
        <div class="col-span-12 mt-4">
            <h6 class="text-gray-500 text-xs uppercase font-semibold mb-3">Address</h6>
        </div>

        <div class="col-span-12">
            <label class="block mb-2 text-sm font-medium text-gray-900">Street Address</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Address"
                   value="@Model.Warehouse?.Address">
        </div>

        <div class="col-span-12 md:col-span-6">
            <label class="block mb-2 text-sm font-medium text-gray-900">City</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="City"
                   value="@Model.Warehouse?.City">
        </div>

        <div class="col-span-12 md:col-span-6">
            <label class="block mb-2 text-sm font-medium text-gray-900">State/Province</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="State"
                   value="@Model.Warehouse?.State">
        </div>

        <div class="col-span-12 md:col-span-6">
            <label class="block mb-2 text-sm font-medium text-gray-900">Country</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Country"
                   value="@Model.Warehouse?.Country">
        </div>

        <div class="col-span-12 md:col-span-6">
            <label class="block mb-2 text-sm font-medium text-gray-900">Postal Code</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="PostalCode"
                   value="@Model.Warehouse?.PostalCode">
        </div>

        <!-- Contact -->
        <div class="col-span-12 mt-4">
            <h6 class="text-gray-500 text-xs uppercase font-semibold mb-3">Contact Information</h6>
        </div>

        <div class="col-span-12">
            <label class="block mb-2 text-sm font-medium text-gray-900">Manager Name</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="ManagerName"
                   value="@Model.Warehouse?.ManagerName">
        </div>

        <div class="col-span-12 md:col-span-6">
            <label class="block mb-2 text-sm font-medium text-gray-900">Phone</label>
            <input type="tel" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Phone"
                   value="@Model.Warehouse?.Phone">
        </div>

        <div class="col-span-12 md:col-span-6">
            <label class="block mb-2 text-sm font-medium text-gray-900">Email</label>
            <input type="email" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Email"
                   value="@Model.Warehouse?.Email">
        </div>

        <!-- Options -->
        <div class="col-span-12 mt-4">
            <h6 class="text-gray-500 text-xs uppercase font-semibold mb-3">Options</h6>
        </div>

        <div class="col-span-12 md:col-span-6">
            <div class="flex items-center">
                <input class="w-4 h-4 text-primary-600 bg-gray-100 border-gray-300 rounded focus:ring-primary-500 focus:ring-2" type="checkbox" name="IsActive" value="true" id="isActive"
                       checked="@(Model.Warehouse?.IsActive ?? true)">
                <label class="ml-2 text-sm font-medium text-gray-900" for="isActive">Active</label>
            </div>
        </div>

        <div class="col-span-12 md:col-span-6">
            <div class="flex items-center">
                <input class="w-4 h-4 text-primary-600 bg-gray-100 border-gray-300 rounded focus:ring-primary-500 focus:ring-2" type="checkbox" name="IsDefault" value="true" id="isDefault"
                       checked="@(Model.Warehouse?.IsDefault ?? false)">
                <label class="ml-2 text-sm font-medium text-gray-900" for="isDefault">Default Warehouse</label>
            </div>
        </div>
    </div>

    <div class="flex items-center justify-end p-4 border-t border-gray-200 rounded-b gap-2 mt-4 -mx-4 -mb-4">
        <button type="button" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900" data-modal-hide="formModal">Cancel</button>
        <button type="submit" class="text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5">
            @(Model.IsEdit ? "Update Warehouse" : "Create Warehouse")
        </button>
    </div>
</form>
