@model Algora.Erp.Web.Pages.Inventory.Warehouses.WarehouseFormViewModel

<form hx-post=""
      hx-target="#warehousesTableBody"
      hx-on::after-request="if(event.detail.successful) document.body.dispatchEvent(new Event('formSubmitSuccess'))">

    @if (Model.IsEdit && Model.Warehouse != null)
    {
        <input type="hidden" name="Id" value="@Model.Warehouse.Id" />
    }

    <div class="row g-3">
        <!-- Basic Information -->
        <div class="col-12">
            <h6 class="text-muted text-uppercase small mb-3">Basic Information</h6>
        </div>

        <div class="col-md-12">
            <label class="form-label">Warehouse Name <span class="text-danger">*</span></label>
            <input type="text" class="form-control" name="Name"
                   value="@Model.Warehouse?.Name" required>
        </div>

        <div class="col-12">
            <label class="form-label">Description</label>
            <textarea class="form-control" name="Description" rows="2">@Model.Warehouse?.Description</textarea>
        </div>

        <!-- Address -->
        <div class="col-12 mt-4">
            <h6 class="text-muted text-uppercase small mb-3">Address</h6>
        </div>

        <div class="col-12">
            <label class="form-label">Street Address</label>
            <input type="text" class="form-control" name="Address"
                   value="@Model.Warehouse?.Address">
        </div>

        <div class="col-md-6">
            <label class="form-label">City</label>
            <input type="text" class="form-control" name="City"
                   value="@Model.Warehouse?.City">
        </div>

        <div class="col-md-6">
            <label class="form-label">State/Province</label>
            <input type="text" class="form-control" name="State"
                   value="@Model.Warehouse?.State">
        </div>

        <div class="col-md-6">
            <label class="form-label">Country</label>
            <input type="text" class="form-control" name="Country"
                   value="@Model.Warehouse?.Country">
        </div>

        <div class="col-md-6">
            <label class="form-label">Postal Code</label>
            <input type="text" class="form-control" name="PostalCode"
                   value="@Model.Warehouse?.PostalCode">
        </div>

        <!-- Contact -->
        <div class="col-12 mt-4">
            <h6 class="text-muted text-uppercase small mb-3">Contact Information</h6>
        </div>

        <div class="col-md-12">
            <label class="form-label">Manager Name</label>
            <input type="text" class="form-control" name="ManagerName"
                   value="@Model.Warehouse?.ManagerName">
        </div>

        <div class="col-md-6">
            <label class="form-label">Phone</label>
            <input type="tel" class="form-control" name="Phone"
                   value="@Model.Warehouse?.Phone">
        </div>

        <div class="col-md-6">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" name="Email"
                   value="@Model.Warehouse?.Email">
        </div>

        <!-- Options -->
        <div class="col-12 mt-4">
            <h6 class="text-muted text-uppercase small mb-3">Options</h6>
        </div>

        <div class="col-md-6">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="IsActive" value="true" id="isActive"
                       checked="@(Model.Warehouse?.IsActive ?? true)">
                <label class="form-check-label" for="isActive">Active</label>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="IsDefault" value="true" id="isDefault"
                       checked="@(Model.Warehouse?.IsDefault ?? false)">
                <label class="form-check-label" for="isDefault">Default Warehouse</label>
            </div>
        </div>
    </div>

    <div class="modal-footer px-0 pb-0 mt-4">
        <button type="button" class="btn btn-secondary" data-modal-hide="warehouseModal">Cancel</button>
        <button type="submit" class="btn btn-primary">
            @(Model.IsEdit ? "Update Warehouse" : "Create Warehouse")
        </button>
    </div>
</form>
