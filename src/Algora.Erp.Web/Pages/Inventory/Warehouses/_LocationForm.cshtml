@model Algora.Erp.Web.Pages.Inventory.Warehouses.LocationFormViewModel

<form hx-post="?handler=Location"
      hx-target="#locationsModalBody"
      hx-on::after-request="if(event.detail.successful) document.body.dispatchEvent(new Event('locationFormSuccess'))">

    @if (Model.IsEdit && Model.Location != null)
    {
        <input type="hidden" name="Id" value="@Model.Location.Id" />
    }
    <input type="hidden" name="WarehouseId" value="@Model.WarehouseId" />

    <div class="p-4 mb-4 text-sm text-blue-800 rounded-lg bg-blue-50">
        <i class="bi bi-info-circle mr-2"></i>
        Adding location to: <strong>@Model.WarehouseName</strong>
    </div>

    <div class="grid grid-cols-12 gap-4">
        <div class="col-span-12">
            <label class="block mb-2 text-sm font-medium text-gray-900">Location Name <span class="text-red-500">*</span></label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Name"
                   value="@Model.Location?.Name" required
                   placeholder="e.g., Zone A - Row 1 - Shelf 2">
        </div>

        <div class="col-span-12">
            <hr class="my-2 border-gray-200">
            <small class="text-gray-500">Location Path (optional)</small>
        </div>

        <div class="col-span-12 md:col-span-6">
            <label class="block mb-2 text-sm font-medium text-gray-900">Zone</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Zone"
                   value="@Model.Location?.Zone"
                   placeholder="e.g., A, B, Cold Storage">
        </div>

        <div class="col-span-12 md:col-span-6">
            <label class="block mb-2 text-sm font-medium text-gray-900">Aisle</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Aisle"
                   value="@Model.Location?.Aisle"
                   placeholder="e.g., 1, 2, 3">
        </div>

        <div class="col-span-12 md:col-span-4">
            <label class="block mb-2 text-sm font-medium text-gray-900">Rack</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Rack"
                   value="@Model.Location?.Rack"
                   placeholder="e.g., R1, R2">
        </div>

        <div class="col-span-12 md:col-span-4">
            <label class="block mb-2 text-sm font-medium text-gray-900">Shelf</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Shelf"
                   value="@Model.Location?.Shelf"
                   placeholder="e.g., S1, S2">
        </div>

        <div class="col-span-12 md:col-span-4">
            <label class="block mb-2 text-sm font-medium text-gray-900">Bin</label>
            <input type="text" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-primary-500 focus:border-primary-500 block w-full p-2.5" name="Bin"
                   value="@Model.Location?.Bin"
                   placeholder="e.g., B1, B2">
        </div>

        <div class="col-span-12">
            <div class="flex items-center">
                <input class="w-4 h-4 text-primary-600 bg-gray-100 border-gray-300 rounded focus:ring-primary-500 focus:ring-2" type="checkbox" name="IsActive" value="true" id="locIsActive"
                       checked="@(Model.Location?.IsActive ?? true)">
                <label class="ml-2 text-sm font-medium text-gray-900" for="locIsActive">Active</label>
            </div>
        </div>
    </div>

    <div class="flex items-center justify-end p-4 border-t border-gray-200 rounded-b gap-2 mt-4 -mx-4 -mb-4">
        <button type="button" class="text-gray-500 bg-white hover:bg-gray-100 focus:ring-4 focus:outline-none focus:ring-gray-200 rounded-lg border border-gray-200 text-sm font-medium px-5 py-2.5 hover:text-gray-900" data-modal-hide="locationFormModal">Cancel</button>
        <button type="submit" class="text-white bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5">
            @(Model.IsEdit ? "Update Location" : "Create Location")
        </button>
    </div>
</form>
