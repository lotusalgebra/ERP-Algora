@model Algora.Erp.Web.Pages.Inventory.Warehouses.LocationsViewModel

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h6 class="mb-1">@Model.Warehouse.Name</h6>
        <small class="text-muted">@Model.Warehouse.Code - @Model.Locations.Count location(s)</small>
    </div>
    <button class="btn btn-sm btn-primary"
            hx-get="?handler=LocationForm&warehouseId=@Model.Warehouse.Id"
            hx-target="#locationFormModalBody"
            data-bs-toggle="modal"
            data-bs-target="#locationFormModal">
        <i class="bi bi-plus-lg me-1"></i>Add Location
    </button>
</div>

<div id="locationsTableContainer">
    @if (Model.Locations.Count == 0)
    {
        <div class="text-center py-5 text-muted">
            <i class="bi bi-geo-alt fs-1 d-block mb-3"></i>
            <p class="mb-0">No locations defined for this warehouse</p>
            <small>Create locations to organize your inventory storage</small>
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>Code</th>
                        <th>Name</th>
                        <th>Zone</th>
                        <th>Aisle</th>
                        <th>Rack</th>
                        <th>Shelf</th>
                        <th>Bin</th>
                        <th>Status</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var location in Model.Locations.OrderBy(l => l.Code))
                    {
                        <tr>
                            <td>
                                <code class="bg-light px-2 py-1 rounded">@location.Code</code>
                            </td>
                            <td class="fw-medium">@location.Name</td>
                            <td>@(location.Zone ?? "—")</td>
                            <td>@(location.Aisle ?? "—")</td>
                            <td>@(location.Rack ?? "—")</td>
                            <td>@(location.Shelf ?? "—")</td>
                            <td>@(location.Bin ?? "—")</td>
                            <td>
                                @if (location.IsActive)
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary bg-opacity-10 text-secondary">Inactive</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm">
                                    <button type="button"
                                            class="btn btn-outline-primary"
                                            hx-get="?handler=LocationForm&warehouseId=@Model.Warehouse.Id&locationId=@location.Id"
                                            hx-target="#locationFormModalBody"
                                            data-bs-toggle="modal"
                                            data-bs-target="#locationFormModal"
                                            title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button type="button"
                                            class="btn btn-outline-danger"
                                            hx-delete="?handler=Location&id=@location.Id"
                                            hx-target="#locationsModalBody"
                                            hx-confirm="Are you sure you want to delete this location?"
                                            title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<div class="mt-4 pt-3 border-top">
    <div class="row text-center">
        <div class="col">
            <div class="text-muted small">Path Format</div>
            <div class="fw-medium">Zone / Aisle / Rack / Shelf / Bin</div>
        </div>
    </div>
</div>
