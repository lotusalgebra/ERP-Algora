@page
@model Algora.Erp.Web.Pages.Inventory.Warehouses.IndexModel
@{
    ViewData["Title"] = "Warehouses";
}

<div class="container-fluid py-4">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="mb-1">Warehouses</h4>
            <p class="text-muted mb-0">Manage warehouse locations and storage</p>
        </div>
        <button class="btn btn-primary"
                hx-get="?handler=CreateForm"
                hx-target="#formModalBody"
                data-bs-toggle="modal"
                data-bs-target="#formModal">
            <i class="bi bi-plus-lg me-2"></i>Add Warehouse
        </button>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <div class="bg-primary bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-building text-primary fs-4"></i>
                            </div>
                        </div>
                        <div>
                            <p class="text-muted mb-1 small">Total Warehouses</p>
                            <h4 class="mb-0">@Model.TotalWarehouses</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <div class="bg-success bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-check-circle text-success fs-4"></i>
                            </div>
                        </div>
                        <div>
                            <p class="text-muted mb-1 small">Active Warehouses</p>
                            <h4 class="mb-0">@Model.ActiveWarehouses</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <div class="bg-info bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-geo-alt text-info fs-4"></i>
                            </div>
                        </div>
                        <div>
                            <p class="text-muted mb-1 small">Total Locations</p>
                            <h4 class="mb-0">@Model.TotalLocations</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0 me-3">
                            <div class="bg-warning bg-opacity-10 rounded-3 p-3">
                                <i class="bi bi-currency-dollar text-warning fs-4"></i>
                            </div>
                        </div>
                        <div>
                            <p class="text-muted mb-1 small">Stock Value</p>
                            <h4 class="mb-0">@Model.TotalStockValue.ToString("C0")</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Warehouses Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="row g-3 align-items-center">
                <div class="col-md-5">
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0">
                            <i class="bi bi-search text-muted"></i>
                        </span>
                        <input type="text"
                               class="form-control border-start-0"
                               placeholder="Search warehouses..."
                               id="searchInput"
                               hx-get="?handler=Table"
                               hx-trigger="keyup changed delay:300ms"
                               hx-target="#warehousesTableBody"
                               hx-include="#statusFilter, #pageSizeSelect"
                               name="search">
                    </div>
                </div>
                <div class="col-md-4">
                    <select class="form-select"
                            id="statusFilter"
                            name="statusFilter"
                            hx-get="?handler=Table"
                            hx-trigger="change"
                            hx-target="#warehousesTableBody"
                            hx-include="#searchInput, #pageSizeSelect">
                        <option value="">All Status</option>
                        <option value="true">Active</option>
                        <option value="false">Inactive</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select class="form-select"
                            id="pageSizeSelect"
                            name="pageSize"
                            hx-get="?handler=Table"
                            hx-trigger="change"
                            hx-target="#warehousesTableBody"
                            hx-include="#searchInput, #statusFilter">
                        <option value="10">10 per page</option>
                        <option value="25">25 per page</option>
                        <option value="50">50 per page</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Code</th>
                            <th>Warehouse Name</th>
                            <th>Location</th>
                            <th>Manager</th>
                            <th class="text-center">Locations</th>
                            <th class="text-center">Stock Items</th>
                            <th>Status</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="warehousesTableBody"
                           hx-get="?handler=Table"
                           hx-trigger="load"
                           hx-include="#searchInput, #statusFilter, #pageSizeSelect">
                        <tr>
                            <td colspan="8" class="text-center py-5">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Warehouse Form Modal -->
<div class="modal fade" id="formModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Warehouse</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="formModalBody">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Locations Modal -->
<div class="modal fade" id="locationsModal" tabindex="-1">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Warehouse Locations</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="locationsModalBody">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Location Form Modal -->
<div class="modal fade" id="locationFormModal" tabindex="-1" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Location</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="locationFormModalBody">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this warehouse? This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let deleteId = null;
        const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));

        function confirmDelete(id) {
            deleteId = id;
            deleteModal.show();
        }

        document.getElementById('confirmDeleteBtn').addEventListener('click', function() {
            if (deleteId) {
                htmx.ajax('DELETE', `?handler=&id=${deleteId}`, {
                    target: '#warehousesTableBody',
                    swap: 'innerHTML'
                }).then(() => {
                    deleteModal.hide();
                    deleteId = null;
                });
            }
        });

        function showLocations(warehouseId) {
            htmx.ajax('GET', `?handler=Locations&warehouseId=${warehouseId}`, {
                target: '#locationsModalBody',
                swap: 'innerHTML'
            });
            new bootstrap.Modal(document.getElementById('locationsModal')).show();
        }

        document.body.addEventListener('formSubmitSuccess', function() {
            bootstrap.Modal.getInstance(document.getElementById('formModal'))?.hide();
        });

        document.body.addEventListener('locationFormSuccess', function() {
            bootstrap.Modal.getInstance(document.getElementById('locationFormModal'))?.hide();
        });
    </script>
}
