@page
@model Algora.Erp.Web.Pages.Inventory.Stock.IndexModel
@{
    ViewData["Title"] = "Stock Levels";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">Stock Levels</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/Inventory">Inventory</a></li>
                    <li class="breadcrumb-item active">Stock</li>
                </ol>
            </nav>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-muted mb-2">Total Products</h6>
                            <h3 class="mb-0">@Model.TotalProducts</h3>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-2 rounded">
                            <i class="bi bi-box-seam text-primary fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-muted mb-2">Low Stock</h6>
                            <h3 class="mb-0 text-warning">@Model.LowStockItems</h3>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-2 rounded">
                            <i class="bi bi-exclamation-triangle text-warning fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-muted mb-2">Out of Stock</h6>
                            <h3 class="mb-0 text-danger">@Model.OutOfStockItems</h3>
                        </div>
                        <div class="bg-danger bg-opacity-10 p-2 rounded">
                            <i class="bi bi-x-circle text-danger fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h6 class="text-muted mb-2">Total Value</h6>
                            <h3 class="mb-0 text-success">@Model.TotalStockValue.ToString("C0")</h3>
                        </div>
                        <div class="bg-success bg-opacity-10 p-2 rounded">
                            <i class="bi bi-currency-dollar text-success fs-4"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Filters & Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <div class="row g-2 align-items-center">
                <div class="col-md-3">
                    <div class="input-group">
                        <span class="input-group-text bg-white"><i class="bi bi-search"></i></span>
                        <input type="text" class="form-control" id="searchInput" placeholder="Search products...">
                    </div>
                </div>
                <div class="col-md-2">
                    <select class="form-select" id="warehouseFilter">
                        <option value="">All Warehouses</option>
                        @foreach (var warehouse in Model.Warehouses)
                        {
                            <option value="@warehouse.Id">@warehouse.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <select class="form-select" id="categoryFilter">
                        <option value="">All Categories</option>
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <select class="form-select" id="stockFilter">
                        <option value="">All Stock Status</option>
                        <option value="low">Low Stock</option>
                        <option value="out">Out of Stock</option>
                        <option value="overstock">Overstock</option>
                    </select>
                </div>
                <div class="col-md-3 text-end">
                    <a href="/Inventory/Warehouses" class="btn btn-outline-secondary">
                        <i class="bi bi-building me-1"></i> Warehouses
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Product</th>
                            <th>SKU</th>
                            <th>Category</th>
                            <th>Warehouse</th>
                            <th>Location</th>
                            <th class="text-end">On Hand</th>
                            <th class="text-end">Reserved</th>
                            <th class="text-end">Available</th>
                            <th class="text-end">Reorder Level</th>
                            <th class="text-center">Status</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="stockTableBody" hx-get="/Inventory/Stock?handler=Table" hx-trigger="load" hx-swap="innerHTML">
                        <tr>
                            <td colspan="11" class="text-center py-4">
                                <div class="spinner-border text-primary" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Adjustment Modal -->
<div class="modal fade" id="adjustmentModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Stock Adjustment</h5>
                <button type="button" class="btn-close" data-modal-hide="adjustmentModal"></button>
            </div>
            <form hx-post="/Inventory/Stock?handler=Adjust" hx-target="#stockTableBody" hx-swap="innerHTML">
                <div class="modal-body">
                    <input type="hidden" name="stockLevelId" id="adjustStockLevelId">
                    <div class="mb-3">
                        <label class="form-label">Product</label>
                        <input type="text" class="form-control" id="adjustProductName" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Current Quantity</label>
                        <input type="text" class="form-control" id="adjustCurrentQty" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Adjustment (+/-)</label>
                        <input type="number" step="0.01" name="adjustment" class="form-control" required placeholder="e.g., 10 or -5">
                        <div class="form-text">Positive to add, negative to subtract</div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Reason</label>
                        <textarea name="reason" class="form-control" rows="2" required placeholder="Reason for adjustment..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-modal-hide="adjustmentModal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Apply Adjustment</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let searchTimeout;
        const searchInput = document.getElementById('searchInput');
        const warehouseFilter = document.getElementById('warehouseFilter');
        const categoryFilter = document.getElementById('categoryFilter');
        const stockFilter = document.getElementById('stockFilter');
        const tableBody = document.getElementById('stockTableBody');

        function loadTable(page = 1) {
            const params = new URLSearchParams({
                handler: 'Table',
                page: page,
                search: searchInput.value,
                warehouseFilter: warehouseFilter.value,
                categoryFilter: categoryFilter.value,
                stockFilter: stockFilter.value
            });

            htmx.ajax('GET', `/Inventory/Stock?${params}`, {target: '#stockTableBody', swap: 'innerHTML'});
        }

        searchInput.addEventListener('input', () => {
            clearTimeout(searchTimeout);
            searchTimeout = setTimeout(() => loadTable(), 300);
        });

        warehouseFilter.addEventListener('change', () => loadTable());
        categoryFilter.addEventListener('change', () => loadTable());
        stockFilter.addEventListener('change', () => loadTable());

        function openAdjustmentModal(id, productName, currentQty) {
            document.getElementById('adjustStockLevelId').value = id;
            document.getElementById('adjustProductName').value = productName;
            document.getElementById('adjustCurrentQty').value = currentQty;
            const modal = FlowbiteInstances.getInstance('Modal', 'adjustmentModal');
            if (modal) modal.show();
        }

        document.body.addEventListener('htmx:afterRequest', (e) => {
            if (e.detail.elt.closest('#adjustmentModal') && e.detail.successful) {
                const modal = FlowbiteInstances.getInstance('Modal', 'adjustmentModal');
                if (modal) modal.hide();
            }
        });
    </script>
}
