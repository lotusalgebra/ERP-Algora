@model Algora.Erp.Web.Pages.Inventory.Stock.StockTableViewModel

@if (Model.StockLevels.Any())
{
    foreach (var stock in Model.StockLevels)
    {
        var statusClass = stock.QuantityOnHand <= 0 ? "red" :
            stock.QuantityOnHand <= stock.Product.ReorderLevel ? "amber" :
            (stock.Product.MaximumStock > 0 && stock.QuantityOnHand > stock.Product.MaximumStock) ? "blue" : "emerald";
        var statusText = stock.QuantityOnHand <= 0 ? "Out of Stock" :
            stock.QuantityOnHand <= stock.Product.ReorderLevel ? "Low Stock" :
            (stock.Product.MaximumStock > 0 && stock.QuantityOnHand > stock.Product.MaximumStock) ? "Overstock" : "In Stock";

        <tr class="border-b hover:bg-gray-50">
            <td class="px-6 py-4">
                <div class="flex items-center">
                    <div>
                        <a href="/Inventory/Products/Details/@stock.ProductId" class="font-medium text-gray-900 hover:text-primary-600">
                            @stock.Product.Name
                        </a>
                    </div>
                </div>
            </td>
            <td class="px-6 py-4"><code class="bg-gray-100 px-2 py-1 rounded text-sm">@stock.Product.Sku</code></td>
            <td class="px-6 py-4 text-gray-600">@(stock.Product.Category?.Name ?? "-")</td>
            <td class="px-6 py-4 text-gray-600">@stock.Warehouse.Name</td>
            <td class="px-6 py-4 text-gray-600">@(stock.Location?.Code ?? "-")</td>
            <td class="px-6 py-4 text-right font-medium text-gray-900">@stock.QuantityOnHand.ToString("N2")</td>
            <td class="px-6 py-4 text-right text-gray-600">@stock.QuantityReserved.ToString("N2")</td>
            <td class="px-6 py-4 text-right font-medium text-primary-600">@stock.AvailableQuantity.ToString("N2")</td>
            <td class="px-6 py-4 text-right text-gray-600">@stock.Product.ReorderLevel.ToString("N2")</td>
            <td class="px-6 py-4 text-center">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-@statusClass-100 text-@statusClass-800">@statusText</span>
            </td>
            <td class="px-6 py-4 text-right">
                <button type="button" class="text-primary-600 border border-primary-600 hover:bg-primary-50 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-xs px-3 py-2"
                        hx-get="?handler=AdjustmentForm&id=@stock.Id"
                        hx-target="#formModalBody"
                        data-modal-target="formModal" data-modal-toggle="formModal">
                    <i class="bi bi-pencil-square"></i> Adjust
                </button>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="11" class="px-6 py-3 bg-gray-50">
            @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", Model.Pagination)
        </td>
    </tr>
}
else
{
    <tr>
        <td colspan="11" class="px-6 py-12 text-center text-gray-500">
            <i class="bi bi-inbox text-4xl block mb-2"></i>
            No stock records found
        </td>
    </tr>
}
<script>
    // Re-initialize Flowbite dropdowns and HTMX after content swap
    if (typeof initFlowbite === 'function') { initFlowbite(); }
    if (typeof htmx !== 'undefined') { htmx.process(document.body); }
</script>