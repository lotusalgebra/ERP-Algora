@model Algora.Erp.Web.Pages.Inventory.Products.ProductsTableViewModel

@if (Model.Products.Count == 0)
{
    <tr>
        <td colspan="9" class="px-6 py-12 text-center">
            <div class="text-gray-500">
                <i class="bi bi-box-seam text-4xl block mb-3"></i>
                <p class="mb-0">No products found</p>
            </div>
        </td>
    </tr>
}
else
{
    @foreach (var product in Model.Products)
    {
        var stockLevel = Model.StockLevels.GetValueOrDefault(product.Id, 0);
        var isLowStock = stockLevel <= product.ReorderLevel && product.ReorderLevel > 0;

        <tr class="border-b hover:bg-gray-50">
            <td class="px-6 py-4">
                <code class="bg-gray-100 px-2 py-1 rounded text-sm">@product.Sku</code>
            </td>
            <td class="px-6 py-4">
                <div class="flex items-center">
                    <div class="bg-gray-100 rounded-lg p-2 mr-3">
                        @if (!string.IsNullOrEmpty(product.ImageUrl))
                        {
                            <img src="@product.ImageUrl" alt="@product.Name" class="w-10 h-10 object-cover rounded">
                        }
                        else
                        {
                            <i class="bi bi-box text-gray-400 text-xl"></i>
                        }
                    </div>
                    <div>
                        <div class="font-medium text-gray-900">@product.Name</div>
                        @if (!string.IsNullOrEmpty(product.Barcode))
                        {
                            <small class="text-gray-500"><i class="bi bi-upc mr-1"></i>@product.Barcode</small>
                        }
                    </div>
                </div>
            </td>
            <td class="px-6 py-4">
                @if (product.Category != null)
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">@product.Category.Name</span>
                }
                else
                {
                    <span class="text-gray-400">â€”</span>
                }
            </td>
            <td class="px-6 py-4">
                <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-blue-100 text-blue-800">@product.ProductType</span>
            </td>
            <td class="px-6 py-4 text-right text-gray-900">@product.CostPrice.ToString("C2")</td>
            <td class="px-6 py-4 text-right text-gray-900">@product.SellingPrice.ToString("C2")</td>
            <td class="px-6 py-4 text-right">
                @if (isLowStock)
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-amber-100 text-amber-800">
                        <i class="bi bi-exclamation-triangle mr-1"></i>@stockLevel.ToString("N0")
                    </span>
                }
                else
                {
                    <span class="font-medium text-gray-900">@stockLevel.ToString("N0")</span>
                }
            </td>
            <td class="px-6 py-4">
                @if (product.IsActive)
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-emerald-100 text-emerald-800">Active</span>
                }
                else
                {
                    <span class="text-xs font-medium px-2.5 py-0.5 rounded-full bg-gray-100 text-gray-800">Inactive</span>
                }
            </td>
            <td class="px-6 py-4 text-right">
                <div class="relative inline-block">
                    <button class="p-2 text-gray-500 hover:text-gray-700 hover:bg-gray-100 rounded-lg" id="dropdownProd@(product.Id)" data-dropdown-toggle="dropdownMenuProd@(product.Id)" data-dropdown-placement="bottom-end">
                        <i class="bi bi-three-dots-vertical"></i>
                    </button>
                    <div class="z-50 hidden absolute right-0 mt-2 bg-white divide-y divide-gray-100 rounded-lg shadow w-44" id="dropdownMenuProd@(product.Id)">
                        <ul class="py-2 text-sm text-gray-700">
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100 cursor-pointer"
                                   hx-get="?handler=EditForm&id=@product.Id"
                                   hx-target="#formModalBody"
                                   data-modal-target="formModal" data-modal-toggle="formModal">
                                    <i class="bi bi-pencil mr-2"></i> Edit
                                </a>
                            </li>
                            <li>
                                <a class="flex items-center px-4 py-2 hover:bg-gray-100" href="/Inventory/Stock?productId=@product.Id">
                                    <i class="bi bi-box-seam mr-2"></i> View Stock
                                </a>
                            </li>
                        </ul>
                        <div class="py-2">
                            <a class="flex items-center px-4 py-2 text-red-600 hover:bg-gray-100 cursor-pointer"
                               hx-delete="?handler=Delete&id=@product.Id"
                               hx-target="#productsTableBody"
                               hx-swap="innerHTML"
                               hx-confirm="Are you sure you want to delete this product?">
                                <i class="bi bi-trash mr-2"></i> Delete
                            </a>
                        </div>
                    </div>
                </div>
            </td>
        </tr>
    }

    <!-- Pagination -->
    <tr>
        <td colspan="9" class="px-6 py-3 bg-gray-50">
            @await Html.PartialAsync("~/Pages/Shared/_PaginationFooter.cshtml", Model.Pagination)
        </td>
    </tr>
}
