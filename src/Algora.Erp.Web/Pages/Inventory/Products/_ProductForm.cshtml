@model Algora.Erp.Web.Pages.Inventory.Products.ProductFormViewModel
@using Algora.Erp.Domain.Entities.Inventory

<form hx-post=""
      hx-target="#productsTableBody"
      hx-on::after-request="if(event.detail.successful) document.body.dispatchEvent(new Event('formSubmitSuccess'))">

    @if (Model.IsEdit && Model.Product != null)
    {
        <input type="hidden" name="Id" value="@Model.Product.Id" />
    }

    <div class="row g-3">
        <!-- Basic Information -->
        <div class="col-12">
            <h6 class="text-muted text-uppercase small mb-3">Basic Information</h6>
        </div>

        <div class="col-md-12">
            <label class="form-label">Product Name <span class="text-danger">*</span></label>
            <input type="text" class="form-control" name="Name"
                   value="@Model.Product?.Name" required>
        </div>

        <div class="col-md-6">
            <label class="form-label">Category</label>
            <select class="form-select" name="CategoryId">
                <option value="">-- Select Category --</option>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.Id" selected="@(Model.Product?.CategoryId == category.Id)">
                        @category.Name
                    </option>
                }
            </select>
        </div>

        <div class="col-md-6">
            <label class="form-label">Product Type</label>
            <select class="form-select" name="ProductType">
                @foreach (var type in Enum.GetValues<ProductType>())
                {
                    <option value="@type" selected="@(Model.Product?.ProductType == type)">@type</option>
                }
            </select>
        </div>

        <div class="col-md-6">
            <label class="form-label">Barcode</label>
            <input type="text" class="form-control" name="Barcode"
                   value="@Model.Product?.Barcode">
        </div>

        <div class="col-md-6">
            <label class="form-label">Unit of Measure</label>
            <select class="form-select" name="UnitOfMeasure">
                <option value="">-- Select UoM --</option>
                <option value="EA" selected="@(Model.Product?.UnitOfMeasure == "EA")">Each (EA)</option>
                <option value="PCS" selected="@(Model.Product?.UnitOfMeasure == "PCS")">Pieces (PCS)</option>
                <option value="BOX" selected="@(Model.Product?.UnitOfMeasure == "BOX")">Box (BOX)</option>
                <option value="KG" selected="@(Model.Product?.UnitOfMeasure == "KG")">Kilogram (KG)</option>
                <option value="LB" selected="@(Model.Product?.UnitOfMeasure == "LB")">Pound (LB)</option>
                <option value="L" selected="@(Model.Product?.UnitOfMeasure == "L")">Liter (L)</option>
                <option value="M" selected="@(Model.Product?.UnitOfMeasure == "M")">Meter (M)</option>
            </select>
        </div>

        <div class="col-12">
            <label class="form-label">Description</label>
            <textarea class="form-control" name="Description" rows="2">@Model.Product?.Description</textarea>
        </div>

        <!-- Branding -->
        <div class="col-12 mt-4">
            <h6 class="text-muted text-uppercase small mb-3">Branding</h6>
        </div>

        <div class="col-md-6">
            <label class="form-label">Brand</label>
            <input type="text" class="form-control" name="Brand"
                   value="@Model.Product?.Brand">
        </div>

        <div class="col-md-6">
            <label class="form-label">Manufacturer</label>
            <input type="text" class="form-control" name="Manufacturer"
                   value="@Model.Product?.Manufacturer">
        </div>

        <!-- Pricing -->
        <div class="col-12 mt-4">
            <h6 class="text-muted text-uppercase small mb-3">Pricing</h6>
        </div>

        <div class="col-md-4">
            <label class="form-label">Cost Price</label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input type="number" class="form-control" name="CostPrice" step="0.01" min="0"
                       value="@(Model.Product?.CostPrice ?? 0)">
            </div>
        </div>

        <div class="col-md-4">
            <label class="form-label">Selling Price</label>
            <div class="input-group">
                <span class="input-group-text">$</span>
                <input type="number" class="form-control" name="SellingPrice" step="0.01" min="0"
                       value="@(Model.Product?.SellingPrice ?? 0)">
            </div>
        </div>

        <div class="col-md-4">
            <label class="form-label">Tax Rate (%)</label>
            <div class="input-group">
                <input type="number" class="form-control" name="TaxRate" step="0.01" min="0" max="100"
                       value="@(Model.Product?.TaxRate ?? 0)">
                <span class="input-group-text">%</span>
            </div>
        </div>

        <!-- Inventory -->
        <div class="col-12 mt-4">
            <h6 class="text-muted text-uppercase small mb-3">Inventory Levels</h6>
        </div>

        <div class="col-md-4">
            <label class="form-label">Reorder Level</label>
            <input type="number" class="form-control" name="ReorderLevel" step="1" min="0"
                   value="@(Model.Product?.ReorderLevel ?? 0)">
            <div class="form-text">Alert when stock falls below</div>
        </div>

        <div class="col-md-4">
            <label class="form-label">Minimum Stock</label>
            <input type="number" class="form-control" name="MinimumStock" step="1" min="0"
                   value="@(Model.Product?.MinimumStock ?? 0)">
        </div>

        <div class="col-md-4">
            <label class="form-label">Maximum Stock</label>
            <input type="number" class="form-control" name="MaximumStock" step="1" min="0"
                   value="@(Model.Product?.MaximumStock ?? 0)">
        </div>

        <!-- Physical -->
        <div class="col-12 mt-4">
            <h6 class="text-muted text-uppercase small mb-3">Physical Properties</h6>
        </div>

        <div class="col-md-12">
            <label class="form-label">Weight (kg)</label>
            <input type="number" class="form-control" name="Weight" step="0.001" min="0"
                   value="@Model.Product?.Weight">
        </div>

        <!-- Options -->
        <div class="col-12 mt-4">
            <h6 class="text-muted text-uppercase small mb-3">Options</h6>
        </div>

        <div class="col-md-4">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="IsSellable" value="true" id="isSellable"
                       checked="@(Model.Product?.IsSellable ?? true)">
                <label class="form-check-label" for="isSellable">Can be Sold</label>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="IsPurchasable" value="true" id="isPurchasable"
                       checked="@(Model.Product?.IsPurchasable ?? true)">
                <label class="form-check-label" for="isPurchasable">Can be Purchased</label>
            </div>
        </div>

        <div class="col-md-4">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="IsActive" value="true" id="isActive"
                       checked="@(Model.Product?.IsActive ?? true)">
                <label class="form-check-label" for="isActive">Active</label>
            </div>
        </div>
    </div>

    <div class="modal-footer px-0 pb-0 mt-4">
        <button type="button" class="btn btn-secondary" data-modal-hide="productModal">Cancel</button>
        <button type="submit" class="btn btn-primary">
            @(Model.IsEdit ? "Update Product" : "Create Product")
        </button>
    </div>
</form>
