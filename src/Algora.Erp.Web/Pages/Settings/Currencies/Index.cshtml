@page
@model Algora.Erp.Web.Pages.Settings.Currencies.IndexModel
@{
    ViewData["Title"] = "Currency Settings";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">Currency Settings</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/Settings">Settings</a></li>
                    <li class="breadcrumb-item active">Currencies</li>
                </ol>
            </nav>
        </div>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#currencyModal" onclick="openAddModal()">
            <i class="bi bi-plus-lg me-1"></i> Add Currency
        </button>
    </div>

    <!-- Base Currency Info -->
    @if (Model.BaseCurrency != null)
    {
        <div class="alert alert-info d-flex align-items-center mb-4">
            <i class="bi bi-info-circle me-2"></i>
            <div>
                <strong>Base Currency:</strong> @Model.BaseCurrency.Name (@Model.BaseCurrency.Code) @Model.BaseCurrency.Symbol
                <span class="text-muted ms-2">- All exchange rates are relative to this currency</span>
            </div>
        </div>
    }

    <!-- Currencies Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Code</th>
                            <th>Name</th>
                            <th>Symbol</th>
                            <th class="text-end">Exchange Rate</th>
                            <th>Format</th>
                            <th>Status</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="currenciesTableBody" hx-get="?handler=Table" hx-trigger="load">
                        <tr>
                            <td colspan="7" class="text-center py-4">
                                <div class="spinner-border spinner-border-sm text-primary"></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Currency Modal -->
<div class="modal fade" id="currencyModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Add Currency</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="currencyForm" hx-post="" hx-target="#currenciesTableBody">
                <div class="modal-body">
                    <input type="hidden" name="Id" id="currencyId" />
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Code <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="Code" id="code" required maxlength="10"
                                   placeholder="USD, INR" style="text-transform: uppercase;" />
                        </div>
                        <div class="col-md-8">
                            <label class="form-label">Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="Name" id="name" required
                                   placeholder="US Dollar" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Symbol <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="Symbol" id="symbol" required maxlength="10"
                                   placeholder="$, â‚¹" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Symbol Position</label>
                            <select class="form-select" name="SymbolPosition" id="symbolPosition">
                                <option value="before">Before amount</option>
                                <option value="after">After amount</option>
                            </select>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Decimal Places</label>
                            <input type="number" class="form-control" name="DecimalPlaces" id="decimalPlaces"
                                   min="0" max="4" value="2" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Decimal Separator</label>
                            <select class="form-select" name="DecimalSeparator" id="decimalSeparator">
                                <option value=".">Period (.)</option>
                                <option value=",">Comma (,)</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Thousands Separator</label>
                            <select class="form-select" name="ThousandsSeparator" id="thousandsSeparator">
                                <option value=",">Comma (,)</option>
                                <option value=".">Period (.)</option>
                                <option value=" ">Space</option>
                                <option value="">None</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Exchange Rate</label>
                            <input type="number" class="form-control" name="ExchangeRate" id="exchangeRate"
                                   step="0.000001" min="0" value="1" />
                            <small class="text-muted">Rate vs base currency</small>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Display Order</label>
                            <input type="number" class="form-control" name="DisplayOrder" id="displayOrder"
                                   min="0" value="0" />
                        </div>
                        <div class="col-12">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" name="IsActive" id="isActive" checked />
                                <label class="form-check-label" for="isActive">Active</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" name="IsBaseCurrency" id="isBaseCurrency" />
                                <label class="form-check-label" for="isBaseCurrency">Set as Base Currency</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const modal = new bootstrap.Modal(document.getElementById('currencyModal'));

        function openAddModal() {
            document.getElementById('modalTitle').textContent = 'Add Currency';
            document.getElementById('currencyForm').reset();
            document.getElementById('currencyId').value = '';
            document.getElementById('isActive').checked = true;
            document.getElementById('isBaseCurrency').checked = false;
        }

        function editCurrency(currency) {
            document.getElementById('modalTitle').textContent = 'Edit Currency';
            document.getElementById('currencyId').value = currency.id;
            document.getElementById('code').value = currency.code;
            document.getElementById('name').value = currency.name;
            document.getElementById('symbol').value = currency.symbol;
            document.getElementById('symbolPosition').value = currency.symbolPosition;
            document.getElementById('decimalPlaces').value = currency.decimalPlaces;
            document.getElementById('decimalSeparator').value = currency.decimalSeparator;
            document.getElementById('thousandsSeparator').value = currency.thousandsSeparator;
            document.getElementById('exchangeRate').value = currency.exchangeRate;
            document.getElementById('displayOrder').value = currency.displayOrder;
            document.getElementById('isActive').checked = currency.isActive;
            document.getElementById('isBaseCurrency').checked = currency.isBaseCurrency;
            modal.show();
        }

        document.getElementById('currencyForm').addEventListener('htmx:afterRequest', function(evt) {
            if (evt.detail.successful) {
                modal.hide();
            }
        });
    </script>
}
