@page
@model Algora.Erp.Web.Pages.Settings.GstSlabs.IndexModel
@{
    ViewData["Title"] = "GST Slabs";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">GST Tax Slabs</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="/Settings">Settings</a></li>
                    <li class="breadcrumb-item active">GST Slabs</li>
                </ol>
            </nav>
        </div>
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#gstSlabModal" onclick="openAddModal()">
            <i class="bi bi-plus-lg me-1"></i> Add GST Slab
        </button>
    </div>

    <!-- Info Card -->
    <div class="alert alert-info d-flex align-items-center mb-4">
        <i class="bi bi-info-circle me-2"></i>
        <div>
            <strong>GST Calculation:</strong>
            <span class="ms-2">Intra-state = CGST + SGST</span>
            <span class="ms-3">Inter-state = IGST</span>
            <span class="ms-3 text-muted">(e.g., 18% GST = 9% CGST + 9% SGST OR 18% IGST)</span>
        </div>
    </div>

    <!-- GST Slabs Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4">Name</th>
                            <th class="text-center">Total Rate</th>
                            <th class="text-center">CGST</th>
                            <th class="text-center">SGST</th>
                            <th class="text-center">IGST</th>
                            <th>HSN Codes</th>
                            <th>Status</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="gstSlabsTableBody" hx-get="?handler=Table" hx-trigger="load">
                        <tr>
                            <td colspan="8" class="text-center py-4">
                                <div class="spinner-border spinner-border-sm text-primary"></div>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- GST Slab Modal -->
<div class="modal fade" id="gstSlabModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Add GST Slab</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="gstSlabForm" hx-post="" hx-target="#gstSlabsTableBody">
                <div class="modal-body">
                    <input type="hidden" name="Id" id="slabId" />
                    <div class="row g-3">
                        <div class="col-md-8">
                            <label class="form-label">Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="Name" id="name" required
                                   placeholder="GST 18%" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Total Rate % <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" name="Rate" id="rate" required
                                   step="0.01" min="0" max="100" onchange="calculateSplitRates()" />
                        </div>
                        <div class="col-12">
                            <hr class="my-2" />
                            <small class="text-muted">Split Rates (auto-calculated if left empty)</small>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">CGST %</label>
                            <input type="number" class="form-control" name="CgstRate" id="cgstRate"
                                   step="0.01" min="0" max="100" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">SGST %</label>
                            <input type="number" class="form-control" name="SgstRate" id="sgstRate"
                                   step="0.01" min="0" max="100" />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">IGST %</label>
                            <input type="number" class="form-control" name="IgstRate" id="igstRate"
                                   step="0.01" min="0" max="100" />
                        </div>
                        <div class="col-12">
                            <label class="form-label">HSN Codes</label>
                            <textarea class="form-control" name="HsnCodes" id="hsnCodes" rows="2"
                                      placeholder="Comma-separated HSN codes this rate applies to"></textarea>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Display Order</label>
                            <input type="number" class="form-control" name="DisplayOrder" id="displayOrder"
                                   min="0" value="0" />
                        </div>
                        <div class="col-md-6 d-flex align-items-end gap-3">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" name="IsDefault" id="isDefault" />
                                <label class="form-check-label" for="isDefault">Default</label>
                            </div>
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" name="IsActive" id="isActive" checked />
                                <label class="form-check-label" for="isActive">Active</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const modal = new bootstrap.Modal(document.getElementById('gstSlabModal'));

        function calculateSplitRates() {
            const rate = parseFloat(document.getElementById('rate').value) || 0;
            document.getElementById('cgstRate').value = (rate / 2).toFixed(2);
            document.getElementById('sgstRate').value = (rate / 2).toFixed(2);
            document.getElementById('igstRate').value = rate.toFixed(2);
        }

        function openAddModal() {
            document.getElementById('modalTitle').textContent = 'Add GST Slab';
            document.getElementById('gstSlabForm').reset();
            document.getElementById('slabId').value = '';
            document.getElementById('isActive').checked = true;
            document.getElementById('isDefault').checked = false;
        }

        function editSlab(slab) {
            document.getElementById('modalTitle').textContent = 'Edit GST Slab';
            document.getElementById('slabId').value = slab.id;
            document.getElementById('name').value = slab.name;
            document.getElementById('rate').value = slab.rate;
            document.getElementById('cgstRate').value = slab.cgstRate;
            document.getElementById('sgstRate').value = slab.sgstRate;
            document.getElementById('igstRate').value = slab.igstRate;
            document.getElementById('hsnCodes').value = slab.hsnCodes || '';
            document.getElementById('displayOrder').value = slab.displayOrder;
            document.getElementById('isDefault').checked = slab.isDefault;
            document.getElementById('isActive').checked = slab.isActive;
            modal.show();
        }

        document.getElementById('gstSlabForm').addEventListener('htmx:afterRequest', function(evt) {
            if (evt.detail.successful) {
                modal.hide();
            }
        });
    </script>
}
